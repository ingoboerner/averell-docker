   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1" stanza_type="triplet">
     <l n="1" met="-+|-+|-+|-+|-+" line_length="10">Now clean, now hideous, mellow now, now gruff,</l>
     <l n="2" met="-+|-+|-+|-+|-+" line_length="10">She swept, she hissed, she ripened and grew rough,</l>
     <l n="3" met="-+|-+|-+|-+|-+" line_length="10">At Broom, Pendragon, Appleby and Brough.</l>
