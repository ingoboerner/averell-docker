  <front>
   <head>STANCES DE M. CHARLES NODIER</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="7">J'ai lu la vive Odyssée</l>
     <l n="2" rhyme="a" line_length="3">J'ai lu tes sonnets aussi,</l>
    </lg>
    <lg n="2">
     <l n="3" rhyme="a" line_length="7">Pour loi seul l'aimable Muse</l>
     <l n="4" rhyme="a" line_length="3">Réserve encor des chansons</l>
    </lg>
    <lg n="3">
     <l n="5" rhyme="a" line_length="7">Par le faux goût exilée</l>
     <l n="6" rhyme="a" line_length="3">Elle va dans ton réduit</l>
    </lg>
    <lg n="4">
     <l n="7" rhyme="a" line_length="7">Là, penchée à ton oreille.</l>
     <l n="8" rhyme="a" line_length="3">Elle te berce aux concerts</l>
    </lg>
    <lg n="5">
     <l n="9" rhyme="a" line_length="7">Elle sait les harmonies</l>
     <l n="10" rhyme="a" line_length="3">Et les contes favoris</l>
    </lg>
    <lg n="6">
     <l n="11" rhyme="a" line_length="7">Les jeux, les danses légères</l>
     <l n="12" rhyme="a" line_length="3">El les récits gracieux</l>
    </lg>
    <lg n="7">
     <l n="13" rhyme="a" line_length="7">Puis, elle se trouve heureuse,</l>
     <l n="14" rhyme="a" line_length="3">De prolonger son séjour</l>
    </lg>
    <lg n="8">
     <l n="15" rhyme="a" line_length="7">Quand, du haut d'un char d'opale,</l>
     <l n="16" rhyme="a" line_length="3">Chasse les chœurs clandestins</l>
    </lg>
    <lg n="9">
     <l n="17" rhyme="a" line_length="7">Si l'Aurore mal apprise</l>
     <l n="18" rhyme="a" line_length="3">Peureuse, elle part sans bruit,</l>
    </lg>
    <lg n="10">
     <l n="19" rhyme="a" line_length="7">En exhalant dans l'espace</l>
     <l n="20" rhyme="a" line_length="3">Le soupir mélodieux</l>
    </lg>
    <lg n="11">
     <l n="21" rhyme="a" line_length="7">Fuis, fuis le pays morose</l>
     <l n="22" rhyme="a" line_length="3">Ses journaux et ses romans</l>
    </lg>
    <lg n="12">
     <l n="23" rhyme="a" line_length="7">Fuis l'altière période</l>
     <l n="24" rhyme="a" line_length="3">Et l'ennui des sots discours</l>
    </lg>
    <lg n="13">
     <l n="25" rhyme="a" line_length="7">Fuis les grammes et les mètres</l>
     <l n="26" rhyme="a" line_length="3">Jurés-experts en argot</l>
    </lg>
    <lg n="14">
     <l n="27" rhyme="a" line_length="7">Fuis la loi des pédagogues</l>
     <l n="28" rhyme="a" line_length="3">Qui soumettraient tes appas</l>
    </lg>
    <lg n="15">
     <l n="29" rhyme="a" line_length="7">Mais reviens à la vesprée,</l>
     <l n="30" rhyme="a" line_length="3">Bercer encor ton ami</l>
    </lg>
   </lg>
  </body>
