 <text>
  <front>
   <head>La Nuit</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="5">Quand la lune blanche</l>
     <l n="2" rhyme="a" line_length="5">S’accroche à la branche</l>
     <l n="3" rhyme="b" line_length="2">Si quelque feu rouge</l>
     <l n="4" rhyme="c" line_length="5">Dans l’horizon bouge</l>
    </lg>
    <lg n="2">
     <l n="5" rhyme="a" line_length="5">Fol alors qui livre</l>
     <l n="6" rhyme="a" line_length="5">A la nuit son livre</l>
     <l n="7" rhyme="b" line_length="2">Son pied aux collines,</l>
     <l n="8" rhyme="c" line_length="5">Et ses mandolines</l>
    </lg>
    <lg n="3">
     <l n="9" rhyme="a" line_length="5">Fol qui dit un conte,</l>
     <l n="10" rhyme="a" line_length="5">Car minuit qui compte</l>
     <l n="11" rhyme="b" line_length="2">Passe avec le prince</l>
     <l n="12" rhyme="c" line_length="5">Des sabbats qui grince</l>
    </lg>
    <lg n="4">
     <l n="13" rhyme="a" line_length="5">L’amant qui compare</l>
     <l n="14" rhyme="a" line_length="5">Quelque beauté rare</l>
     <l n="15" rhyme="b" line_length="2">Tire une ballade</l>
     <l n="16" rhyme="c" line_length="5">De son cœur malade</l>
    </lg>
    <lg n="5">
     <l n="17" rhyme="a" line_length="5">Mais voici dans l’ombre</l>
     <l n="18" rhyme="a" line_length="5">Qu’une ronde sombre</l>
     <l n="19" rhyme="b" line_length="2">L’enfer autour danse,</l>
     <l n="20" rhyme="c" line_length="5">Tous dans un silence</l>
    </lg>
    <lg n="6">
     <l n="21" rhyme="a" line_length="5">Tout pendu de Grève,</l>
     <l n="22" rhyme="a" line_length="5">Tout juif mort soulève</l>
     <l n="23" rhyme="b" line_length="2">Tous noyés des havres</l>
     <l n="24" rhyme="c" line_length="5">Pressent leurs cadavres</l>
    </lg>
    <lg n="7">
     <l n="25" rhyme="a" line_length="5">Et les âmes feues</l>
     <l n="26" rhyme="a" line_length="5">Joignent leurs mains bleues</l>
     <l n="27" rhyme="b" line_length="2">Lui tranquille chante</l>
     <l n="28" rhyme="c" line_length="5">D’une voix touchante</l>
    </lg>
    <lg n="8">
     <l n="29" rhyme="a" line_length="5">Mais lorsque sa harpe,</l>
     <l n="30" rhyme="a" line_length="5">Où flotte une écharpe,</l>
     <l n="31" rhyme="b" line_length="2">Il veut fuir — La danse</l>
     <l n="32" rhyme="c" line_length="5">L’entoure en silence</l>
    </lg>
    <lg n="9">
     <l n="33" rhyme="a" line_length="5">Le cercle l’embrasse,</l>
     <l n="34" rhyme="a" line_length="5">Son pied s’entrelace</l>
     <l n="35" rhyme="b" line_length="2">Sa tête se brise</l>
     <l n="36" rhyme="c" line_length="5">Sur la terre grise !</l>
    </lg>
    <lg n="10">
     <l n="37" rhyme="a" line_length="5">La ronde contente,</l>
     <l n="38" rhyme="a" line_length="5">En ris éclatante,</l>
     <l n="39" rhyme="b" line_length="2">Tout mort sans rancune</l>
     <l n="40" rhyme="c" line_length="5">Trouve au clair de lune</l>
    </lg>
    <lg n="11">
     <l n="41" rhyme="a" line_length="5">Car la lune blanche</l>
     <l n="42" rhyme="a" line_length="5">S’accroche à la branche</l>
     <l n="43" rhyme="b" line_length="2">Si quelque feu rouge</l>
     <l n="44" rhyme="c" line_length="5">Dans l’horizon bouge</l>
    </lg>
   </lg>
