  <front>
   <head>A BIBI-PURÉE</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="0" line_length="4">BIBI-PURÉE</l>
     <l n="2" rhyme="1" line_length="4">Type épatant</l>
     <l n="3" rhyme="1" line_length="4">Et drôle tant !</l>
    </lg>
    <lg n="2">
     <l n="4" rhyme="0" line_length="4">Quel Dieu te crée</l>
     <l n="5" rhyme="1" line_length="4">Ce chic, pourtant,</l>
     <l n="6" rhyme="0" line_length="4">Qui nous agrée,</l>
    </lg>
    <lg n="3">
     <l n="7" rhyme="2" line_length="4">Pourtant, aussi,</l>
     <l n="8" rhyme="3" line_length="4">Ta gentillesse</l>
     <l n="9" rhyme="3" line_length="4">Notre liesse,</l>
     <l n="10" rhyme="2" line_length="4">Et ton souci,</l>
    </lg>
    <lg n="4">
     <l n="11" rhyme="4" line_length="4">De l’obligeance,</l>
     <l n="12" rhyme="5" line_length="4">Notre gaîté,</l>
     <l n="13" rhyme="5" line_length="4">Ta pauvreté,</l>
     <l n="14" rhyme="4" line_length="4">Ton opulence ?</l>
    </lg>
   </lg>
  </body>
