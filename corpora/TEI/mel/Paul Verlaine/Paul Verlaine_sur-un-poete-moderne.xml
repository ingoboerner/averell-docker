  <front>
   <head>SUR UN POÈTE MODERNE</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="1">Quête</l>
     <l n="2" rhyme="b" line_length="1">Croix ;</l>
     <l n="3" rhyme="a" line_length="1">Tette</l>
     <l n="4" rhyme="b" line_length="1">Rois ;</l>
    </lg>
    <lg n="2">
     <l n="5" rhyme="a" line_length="1">— Tête ?</l>
     <l n="6" rhyme="b" line_length="1">Bois : —</l>
     <l n="7" rhyme="a" line_length="1">— Bête ?</l>
     <l n="8" rhyme="b" line_length="1">Vois : —</l>
    </lg>
    <lg n="3">
     <l n="9" rhyme="c" line_length="1">— Rime ?</l>
     <l n="10" rhyme="c" line_length="1">Lime : —</l>
     <l n="11" rhyme="d" line_length="1">— En</l>
    </lg>
    <lg n="4">
     <l n="12" rhyme="e" line_length="1">Outre</l>
     <l n="13" rhyme="d" line_length="1">Jean-</l>
     <l n="14" rhyme="e" line_length="1">Foutre.</l>
    </lg>
   </lg>
  </body>
