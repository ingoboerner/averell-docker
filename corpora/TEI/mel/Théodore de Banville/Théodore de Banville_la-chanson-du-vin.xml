 <text>
  <front>
   <head>La Chanson du Vin</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="5">Parmi les gazons</l>
     <l n="2" rhyme="a" line_length="5">Tout en floraisons</l>
     <l n="3" rhyme="b" line_length="4">J'écoute sans fin</l>
     <l n="4" rhyme="c" line_length="5">La chanson du Vin</l>
    </lg>
    <lg n="2">
     <l n="5" rhyme="a" line_length="5">L'Ode à l'Idéal</l>
     <l n="6" rhyme="a" line_length="5">Au fond du cristal</l>
     <l n="7" rhyme="b" line_length="4">La strophe bruit,</l>
     <l n="8" rhyme="c" line_length="5">Et, limpide, suit</l>
    </lg>
    <lg n="3">
     <l n="9" rhyme="a" line_length="5">Les nectars vermeils</l>
     <l n="10" rhyme="a" line_length="5">Chantent les soleils</l>
     <l n="11" rhyme="b" line_length="4">Et tous les retours</l>
     <l n="12" rhyme="c" line_length="5">Qui font nos amours</l>
    </lg>
    <lg n="4">
     <l n="13" rhyme="a" line_length="5">Et le dieu cornu,</l>
     <l n="14" rhyme="a" line_length="5">Le beau guerrier nu,</l>
     <l n="15" rhyme="b" line_length="4">Qui guide en rêvant</l>
     <l n="16" rhyme="c" line_length="5">Des femmes au vent</l>
    </lg>
    <lg n="5">
     <l n="17" rhyme="a" line_length="5">Le dieu des pressoirs</l>
     <l n="18" rhyme="a" line_length="5">Qui, sous les pins noirs</l>
     <l n="19" rhyme="b" line_length="4">Fait, pendant la nuit,</l>
     <l n="20" rhyme="c" line_length="5">Courir à grand bruit</l>
    </lg>
    <lg n="6">
     <l n="21" rhyme="a" line_length="5">Et le tambourin</l>
     <l n="22" rhyme="a" line_length="5">Des vierges sans frein</l>
     <l n="23" rhyme="b" line_length="4">Qui, loin des regards,</l>
     <l n="24" rhyme="c" line_length="5">Dans les bois épars</l>
    </lg>
    <lg n="7">
     <l n="25" rhyme="a" line_length="5">Et le chœur dansant</l>
     <l n="26" rhyme="a" line_length="5">Qui, rouge, et versant</l>
     <l n="27" rhyme="b" line_length="4">Le sang et le vin,</l>
     <l n="28" rhyme="c" line_length="5">Brise le devin</l>
    </lg>
    <lg n="8">
     <l n="29" rhyme="a" line_length="5">Le Nectar nous dit :</l>
     <l n="30" rhyme="a" line_length="5">O vous qu'engourdit</l>
     <l n="31" rhyme="b" line_length="4">Plus de vains sanglots !</l>
     <l n="32" rhyme="c" line_length="5">Buvez à mes flots</l>
    </lg>
    <lg n="9">
     <l n="33" rhyme="a" line_length="5">Ne réservez plus</l>
     <l n="34" rhyme="a" line_length="5">Vos vœux superflus</l>
     <l n="35" rhyme="b" line_length="4">Pour les impudeurs</l>
     <l n="36" rhyme="c" line_length="5">Et pour les froideurs</l>
    </lg>
    <lg n="10">
     <l n="37" rhyme="a" line_length="5">Nos claires prisons</l>
     <l n="38" rhyme="a" line_length="5">Montrent aux raisons</l>
     <l n="39" rhyme="b" line_length="4">L'âme des couleurs,</l>
     <l n="40" rhyme="c" line_length="5">Du rhythme et des fleurs</l>
    </lg>
    <lg n="11">
     <l n="41" rhyme="a" line_length="5">Nos secrets plaisirs,</l>
     <l n="42" rhyme="a" line_length="5">Nés dans les loisirs,</l>
     <l n="43" rhyme="b" line_length="4">Pour les sens domptés</l>
     <l n="44" rhyme="c" line_length="5">Plus de voluptés</l>
    </lg>
    <lg n="12">
     <l n="45" rhyme="a" line_length="5">Mais fuis, jeune élu,</l>
     <l n="46" rhyme="a" line_length="5">Le bois chevelu,</l>
     <l n="47" rhyme="b" line_length="4">Et l'antre secret</l>
     <l n="48" rhyme="c" line_length="5">Où te rencontrait</l>
    </lg>
    <lg n="13">
     <l n="49" rhyme="a" line_length="5">Le thyrse est levé.</l>
     <l n="50" rhyme="a" line_length="5">Dans le lieu trouvé</l>
     <l n="51" rhyme="b" line_length="4">Hurlent de fureur</l>
     <l n="52" rhyme="c" line_length="5">Les vierges en chœur</l>
    </lg>
    <lg n="14">
     <l n="53" rhyme="a" line_length="5">Privé de tombeaux,</l>
     <l n="54" rhyme="a" line_length="5">L'impie en lambeaux</l>
     <l n="55" rhyme="b" line_length="4">Dans l'onde à la fois</l>
     <l n="56" rhyme="c" line_length="5">Sa lyre et sa voix</l>
    </lg>
    <lg n="15">
     <l n="57" rhyme="a" line_length="5">Tandis qu'au lointain</l>
     <l n="58" rhyme="a" line_length="5">Bondit, le matin,</l>
     <l n="59" rhyme="b" line_length="4">En vociférant</l>
     <l n="60" rhyme="c" line_length="5">Sur l'indifférent,</l>
    </lg>
   </lg>
  </body>
