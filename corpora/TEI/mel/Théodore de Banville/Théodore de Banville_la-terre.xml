 <text>
  <front>
   <head>La Terre</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="4">Soumets la Terre,</l>
     <l n="2" rhyme="b" line_length="4">Les fleurs, les bois,</l>
     <l n="3" rhyme="b" line_length="4">Lyre ! à ta voix,</l>
     <l n="4" rhyme="a" line_length="4">A ton mystère.</l>
    </lg>
    <lg n="2">
     <l n="5" rhyme="a" line_length="4">Que rien n'altère</l>
     <l n="6" rhyme="b" line_length="4">Les saintes lois ;</l>
     <l n="7" rhyme="a" line_length="4">Soumets la Terre,</l>
     <l n="8" rhyme="b" line_length="4">Les fleurs, les bois.</l>
    </lg>
    <lg n="3">
     <l n="9" rhyme="a" line_length="4">Dompte Cythère !</l>
     <l n="10" rhyme="b" line_length="4">Charme à la fois</l>
     <l n="11" rhyme="b" line_length="4">Le lys des rois</l>
     <l n="12" rhyme="a" line_length="4">Et la panthère,</l>
     <l n="13" rhyme="a" line_length="4">Soumets la Terre !</l>
    </lg>
   </lg>
