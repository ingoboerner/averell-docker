  <front>
   <head>UNE FEMME DE RUBENS</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="6">Nymphe blanche et robuste,</l>
     <l n="2" rhyme="a" line_length="6">Dont les bras et le buste</l>
     <l n="3" rhyme="b" line_length="6">Défieraient les titans</l>
    </lg>
    <lg n="2">
     <l n="4" rhyme="a" line_length="6">Délice de la lyre,</l>
     <l n="5" rhyme="a" line_length="6">Qui dus naître et sourire,</l>
     <l n="6" rhyme="b" line_length="6">Colosse harmonieux,</l>
    </lg>
    <lg n="3">
     <l n="7" rhyme="a" line_length="6">Ne crains plus, forme altière,</l>
     <l n="8" rhyme="a" line_length="6">De mourir tout entière,</l>
     <l n="9" rhyme="b" line_length="6">Puisque tu m'enivras.</l>
    </lg>
    <lg n="4">
     <l n="10" rhyme="a" line_length="6">Tu vivras par ces rimes,</l>
     <l n="11" rhyme="a" line_length="6">Comme la neige aux cimes</l>
     <l n="12" rhyme="b" line_length="6">Où volent des milans</l>
    </lg>
    <lg n="5">
     <l n="13" rhyme="a" line_length="6">Oh ! Reste ainsi ! Déploie</l>
     <l n="14" rhyme="a" line_length="6">Les trésors de ta joie</l>
     <l n="15" rhyme="b" line_length="6">Pour guérir mon souci.</l>
    </lg>
    <lg n="6">
     <l n="16" rhyme="a" line_length="6">Dans le calme athlétique</l>
     <l n="17" rhyme="a" line_length="6">De ta pose héroïque</l>
     <l n="18" rhyme="b" line_length="6">Marche pour m'enchanter :</l>
    </lg>
    <lg n="7">
     <l n="19" rhyme="a" line_length="6">Ô folâtre Céphise,</l>
     <l n="20" rhyme="a" line_length="6">Que le dieu de Venise</l>
     <l n="21" rhyme="b" line_length="6">Eût livrée au courroux</l>
    </lg>
    <lg n="8">
     <l n="22" rhyme="a" line_length="6">Fille aux yeux pleins d'étoiles,</l>
     <l n="23" rhyme="a" line_length="6">Qui naquis pour les toiles</l>
     <l n="24" rhyme="b" line_length="6">De l'enchanteur d'Anvers,</l>
    </lg>
    <lg n="9">
     <l n="25" rhyme="a" line_length="6">Ta tête de faunesse</l>
     <l n="26" rhyme="a" line_length="6">Est folle de jeunesse</l>
     <l n="27" rhyme="b" line_length="6">Et de rires ardents</l>
    </lg>
    <lg n="10">
     <l n="28" rhyme="a" line_length="6">Un sang pur et farouche,</l>
     <l n="29" rhyme="a" line_length="6">Enfant, donne à ta bouche</l>
     <l n="30" rhyme="b" line_length="6">Cet éclat de la chair</l>
    </lg>
    <lg n="11">
     <l n="31" rhyme="a" line_length="6">Et comme un coquillage</l>
     <l n="32" rhyme="a" line_length="6">Le rose cartilage</l>
     <l n="33" rhyme="b" line_length="6">De ton nez retroussé</l>
    </lg>
    <lg n="12">
     <l n="34" rhyme="a" line_length="6">Ton folâtre visage,</l>
     <l n="35" rhyme="a" line_length="6">Gai comme un bon présage,</l>
     <l n="36" rhyme="b" line_length="6">Fait songer à des fleurs</l>
    </lg>
    <lg n="13">
     <l n="37" rhyme="a" line_length="6">Et ta petite oreille,</l>
     <l n="38" rhyme="a" line_length="6">Qui n'a pas sa pareille,</l>
     <l n="39" rhyme="b" line_length="6">Semble un joyau fini</l>
    </lg>
    <lg n="14">
     <l n="40" rhyme="a" line_length="6">Tes yeux, tes yeux étranges</l>
     <l n="41" rhyme="a" line_length="6">Recèlent sous les franges</l>
     <l n="42" rhyme="b" line_length="6">Soyeuses de tes cils</l>
    </lg>
    <lg n="15">
     <l n="43" rhyme="a" line_length="6">Dans tes vagues prunelles</l>
     <l n="44" rhyme="a" line_length="6">Courent des étincelles</l>
     <l n="45" rhyme="b" line_length="6">D'or fauve, comme au fond</l>
    </lg>
    <lg n="16">
     <l n="46" rhyme="a" line_length="6">Et tes cheveux, où l'ombre</l>
     <l n="47" rhyme="a" line_length="6">Court transparente et sombre,</l>
     <l n="48" rhyme="b" line_length="6">S'embellissent encor</l>
    </lg>
    <lg n="17">
     <l n="49" rhyme="a" line_length="6">Ils couvrent ta poitrine</l>
     <l n="50" rhyme="a" line_length="6">Et ta gorge ivoirine</l>
     <l n="51" rhyme="b" line_length="6">D'un large flot mouvant ;</l>
    </lg>
    <lg n="18">
     <l n="52" rhyme="a" line_length="6">Tant s'épaissit, profonde,</l>
     <l n="53" rhyme="a" line_length="6">Leur masse, qui s'inonde</l>
     <l n="54" rhyme="b" line_length="6">De suaves parfums,</l>
    </lg>
    <lg n="19">
     <l n="55" rhyme="a" line_length="6">Pourtant des flammes vives</l>
     <l n="56" rhyme="a" line_length="6">S'égarent fugitives,</l>
     <l n="57" rhyme="b" line_length="6">Dans leurs anneaux épars</l>
    </lg>
    <lg n="20">
     <l n="58" rhyme="a" line_length="6">Et quand tu la dénoues,</l>
     <l n="59" rhyme="a" line_length="6">Ruisselant sur tes joues</l>
     <l n="60" rhyme="b" line_length="6">Et baignant dans ses jeux</l>
    </lg>
    <lg n="21">
     <l n="61" rhyme="a" line_length="6">Cette ample chevelure,</l>
     <l n="62" rhyme="a" line_length="6">Qui te sert de parure,</l>
     <l n="63" rhyme="b" line_length="6">Illumine ton flanc</l>
    </lg>
    <lg n="22">
     <l n="64" rhyme="a" line_length="6">Tes blanches mains royales,</l>
     <l n="65" rhyme="a" line_length="6">Aux lignes idéales,</l>
     <l n="66" rhyme="b" line_length="6">Jettent comme un éclair</l>
    </lg>
    <lg n="23">
     <l n="67" rhyme="a" line_length="6">Et les bras et le torse,</l>
     <l n="68" rhyme="a" line_length="6">Éblouissants de force,</l>
     <l n="69" rhyme="b" line_length="6">Ont tout l'emportement</l>
    </lg>
    <lg n="24">
     <l n="70" rhyme="a" line_length="6">Ton cou, blanc comme un cygne,</l>
     <l n="71" rhyme="a" line_length="6">Montre une douce ligne</l>
     <l n="72" rhyme="b" line_length="6">D'un suave dessin ;</l>
    </lg>
    <lg n="25">
     <l n="73" rhyme="a" line_length="6">Ton sein lourd, où se pose</l>
     <l n="74" rhyme="a" line_length="6">Un divin rayon rose,</l>
     <l n="75" rhyme="b" line_length="6">Est fait d'un marbre dur</l>
    </lg>
    <lg n="26">
     <l n="76" rhyme="a" line_length="6">Ô jeune chasseresse</l>
     <l n="77" rhyme="a" line_length="6">Dont la folle paresse</l>
     <l n="78" rhyme="b" line_length="6">Doit tressaillir encor</l>
    </lg>
    <lg n="27">
     <l n="79" rhyme="a" line_length="6">Toi que la nuit dévore,</l>
     <l n="80" rhyme="a" line_length="6">Et que baisait l'aurore</l>
     <l n="81" rhyme="b" line_length="6">Au temps où tu courais</l>
    </lg>
    <lg n="28">
     <l n="82" rhyme="a" line_length="6">Laisse que je contemple</l>
     <l n="83" rhyme="a" line_length="6">Cet adorable temple</l>
     <l n="84" rhyme="b" line_length="6">Que le cruel amour</l>
    </lg>
    <lg n="29">
     <l n="85" rhyme="a" line_length="6">Oh ! Laisse que j'admire</l>
     <l n="86" rhyme="a" line_length="6">Ces haleines de myrrhe,</l>
     <l n="87" rhyme="b" line_length="6">Ces ivoires, ces ors,</l>
    </lg>
    <lg n="30">
     <l n="88" rhyme="a" line_length="6">J'aime tes jambes fières,</l>
     <l n="89" rhyme="a" line_length="6">Ton dos où des lumières</l>
     <l n="90" rhyme="b" line_length="6">Baignent les arcs sereins</l>
    </lg>
    <lg n="31">
     <l n="91" rhyme="a" line_length="6">Et ce pied de Diane</l>
     <l n="92" rhyme="a" line_length="6">Agile et diaphane</l>
     <l n="93" rhyme="b" line_length="6">Dont les doigts écartés</l>
    </lg>
    <lg n="32">
     <l n="94" rhyme="a" line_length="6">Et ces ongles solides,</l>
     <l n="95" rhyme="a" line_length="6">Polis et translucides,</l>
     <l n="96" rhyme="b" line_length="6">Brillants sur les orteils</l>
    </lg>
    <lg n="33">
     <l n="97" rhyme="a" line_length="6">Ô Néréide ! ô muse</l>
     <l n="98" rhyme="a" line_length="6">Digne de Syracuse !</l>
     <l n="99" rhyme="b" line_length="6">Quand j'écoute ta voix,</l>
    </lg>
    <lg n="34">
     <l n="100" rhyme="a" line_length="6">Courir, lascive et rose,</l>
     <l n="101" rhyme="a" line_length="6">Dans le bois grandiose</l>
     <l n="102" rhyme="b" line_length="6">Où si vite a bondi</l>
    </lg>
    <lg n="35">
     <l n="103" rhyme="a" line_length="6">Ou, quand sous les ombrages,</l>
     <l n="104" rhyme="a" line_length="6">Paresseuse, tu nages,</l>
     <l n="105" rhyme="b" line_length="6">Sans déranger les flots,</l>
    </lg>
    <lg n="36">
     <l n="106" rhyme="a" line_length="6">Mon rêve idéalise</l>
     <l n="107" rhyme="a" line_length="6">Ta fraîche mignardise</l>
     <l n="108" rhyme="b" line_length="6">En cent déguisements</l>
    </lg>
    <lg n="37">
     <l n="109" rhyme="a" line_length="6">La nature discrète</l>
     <l n="110" rhyme="a" line_length="6">Et merveilleuse prête</l>
     <l n="111" rhyme="b" line_length="6">À mes illusions</l>
    </lg>
    <lg n="38">
     <l n="112" rhyme="a" line_length="6">Les bocages des rives</l>
     <l n="113" rhyme="a" line_length="6">Où des ailes furtives</l>
     <l n="114" rhyme="b" line_length="6">Voltigent par milliers,</l>
    </lg>
    <lg n="39">
     <l n="115" rhyme="a" line_length="6">Et la noire broussaille,</l>
     <l n="116" rhyme="a" line_length="6">Tout s'anime et tressaille</l>
     <l n="117" rhyme="b" line_length="6">D'un invincible émoi ;</l>
    </lg>
    <lg n="40">
     <l n="118" rhyme="a" line_length="6">Un essaim d'amazones</l>
     <l n="119" rhyme="a" line_length="6">Aux brillantes couronnes</l>
     <l n="120" rhyme="b" line_length="6">Passent dans le gazon</l>
    </lg>
    <lg n="41">
     <l n="121" rhyme="a" line_length="6">C'est Diane ingénue</l>
     <l n="122" rhyme="a" line_length="6">Livrant sa gorge nue</l>
     <l n="123" rhyme="b" line_length="6">Aux caresses des airs,</l>
    </lg>
    <lg n="42">
     <l n="124" rhyme="a" line_length="6">C'est la grave Cybèle,</l>
     <l n="125" rhyme="a" line_length="6">Comme un troupeau qui bêle,</l>
     <l n="126" rhyme="b" line_length="6">Conduisant sans courroux</l>
    </lg>
    <lg n="43">
     <l n="127" rhyme="a" line_length="6">C'est l'ange Cythérée</l>
     <l n="128" rhyme="a" line_length="6">Dans la mer azurée</l>
     <l n="129" rhyme="b" line_length="6">Appuyant ses pieds fins</l>
    </lg>
    <lg n="44">
     <l n="130" rhyme="a" line_length="6">C'est Ariane heureuse</l>
     <l n="131" rhyme="a" line_length="6">Dans sa coupe amoureuse</l>
     <l n="132" rhyme="b" line_length="6">Tordant, par un beau soir,</l>
    </lg>
    <lg n="45">
     <l n="133" rhyme="a" line_length="6">C'est l'arrogante Omphale,</l>
     <l n="134" rhyme="a" line_length="6">En robe triomphale,</l>
     <l n="135" rhyme="b" line_length="6">Énervant un héros</l>
    </lg>
    <lg n="46">
     <l n="136" rhyme="a" line_length="6">C'est Léda qui s'indigne</l>
     <l n="137" rhyme="a" line_length="6">Sous le baiser du cygne</l>
     <l n="138" rhyme="b" line_length="6">Et le cherche à son tour</l>
    </lg>
    <lg n="47">
     <l n="139" rhyme="a" line_length="6">C'est Hélène, embrasée</l>
     <l n="140" rhyme="a" line_length="6">De désirs, que Thésée</l>
     <l n="141" rhyme="b" line_length="6">Emporte dans ses mains</l>
    </lg>
    <lg n="48">
     <l n="142" rhyme="a" line_length="6">C'est la jeune Amphitrite</l>
     <l n="143" rhyme="a" line_length="6">Et sa cour favorite</l>
     <l n="144" rhyme="b" line_length="6">Guidant aux flots ouverts</l>
    </lg>
    <lg n="49">
     <l n="145" rhyme="a" line_length="6">C'est la brune Antiope</l>
     <l n="146" rhyme="a" line_length="6">Dont le cheval galope</l>
     <l n="147" rhyme="b" line_length="6">Au bruit des javelots</l>
    </lg>
    <lg n="50">
     <l n="148" rhyme="a" line_length="6">Les voilà, ce sont elles !</l>
     <l n="149" rhyme="a" line_length="6">Ce sont les immortelles</l>
     <l n="150" rhyme="b" line_length="6">Qui vivront à jamais</l>
    </lg>
    <lg n="51">
     <l n="151" rhyme="a" line_length="6">Non, ces grandes guerrières</l>
     <l n="152" rhyme="a" line_length="6">Qui vont dans les clairières</l>
     <l n="153" rhyme="b" line_length="6">En me glaçant d'effroi,</l>
    </lg>
    <lg n="52">
     <l n="154" rhyme="a" line_length="6">C'est en toi que je trouve</l>
     <l n="155" rhyme="a" line_length="6">Leurs blanches dents de louve,</l>
     <l n="156" rhyme="b" line_length="6">Leurs crinières que fuit</l>
    </lg>
    <lg n="53">
     <l n="157" rhyme="a" line_length="6">Leurs muscles, où respire</l>
     <l n="158" rhyme="a" line_length="6">Avec tout son empire</l>
     <l n="159" rhyme="b" line_length="6">L'immortelle vigueur</l>
    </lg>
    <lg n="54">
     <l n="160" rhyme="a" line_length="6">Et cet éclat de l'ange,</l>
     <l n="161" rhyme="a" line_length="6">Qu'un glorieux mélange</l>
     <l n="162" rhyme="b" line_length="6">De neige et de carmin</l>
    </lg>
    <lg n="55">
     <l n="163" rhyme="a" line_length="6">Mais, ô sage Aphrodite,</l>
     <l n="164" rhyme="a" line_length="6">Qu'une race maudite</l>
     <l n="165" rhyme="b" line_length="6">Et vouée au trépas</l>
    </lg>
    <lg n="56">
     <l n="166" rhyme="a" line_length="6">À ces superbes formes</l>
     <l n="167" rhyme="a" line_length="6">Il faut les plis énormes</l>
     <l n="168" rhyme="b" line_length="6">Des manteaux éperdus</l>
    </lg>
    <lg n="57">
     <l n="169" rhyme="a" line_length="6">Il leur faut l'écarlate</l>
     <l n="170" rhyme="a" line_length="6">Qui les baise et les flatte,</l>
     <l n="171" rhyme="b" line_length="6">Le voile aérien</l>
    </lg>
    <lg n="58">
     <l n="172" rhyme="a" line_length="6">La pourpre qui s'envole</l>
     <l n="173" rhyme="a" line_length="6">Au zéphire frivole</l>
     <l n="174" rhyme="b" line_length="6">Et qui semble frémir</l>
    </lg>
    <lg n="59">
     <l n="175" rhyme="a" line_length="6">Et ces étoffes rares,</l>
     <l n="176" rhyme="a" line_length="6">Aux ornements barbares,</l>
     <l n="177" rhyme="b" line_length="6">Que parent les métaux</l>
    </lg>
    <lg n="60">
     <l n="178" rhyme="a" line_length="6">Mais non, la pourpre même</l>
     <l n="179" rhyme="a" line_length="6">Nuit dans un tel poëme</l>
     <l n="180" rhyme="b" line_length="6">En mêlant ses ardeurs</l>
    </lg>
    <lg n="61">
     <l n="181" rhyme="a" line_length="6">Ô nymphe de la Thrace !</l>
     <l n="182" rhyme="a" line_length="6">Il faut que l'œil embrasse</l>
     <l n="183" rhyme="b" line_length="6">Avec sérénité</l>
    </lg>
    <lg n="62">
     <l n="184" rhyme="a" line_length="6">Arrachée au plus rare</l>
     <l n="185" rhyme="a" line_length="6">Filon du blanc Carrare</l>
     <l n="186" rhyme="b" line_length="6">Par un nouveau Scyllis,</l>
    </lg>
    <lg n="63">
     <l n="187" rhyme="a" line_length="6">Ta puissante nature</l>
     <l n="188" rhyme="a" line_length="6">Se trouve à la torture</l>
     <l n="189" rhyme="b" line_length="6">Dans les noirs casaquins</l>
    </lg>
    <lg n="64">
     <l n="190" rhyme="a" line_length="6">Et, faite pour Corinthe,</l>
     <l n="191" rhyme="a" line_length="6">Elle est lourde et contrainte</l>
     <l n="192" rhyme="b" line_length="6">Sous le flot des pompons</l>
    </lg>
    <lg n="65">
     <l n="193" rhyme="a" line_length="6">Car, pour une déesse</l>
     <l n="194" rhyme="a" line_length="6">Tordant sa longue tresse,</l>
     <l n="195" rhyme="b" line_length="6">Nous voulons des habits</l>
    </lg>
    <lg n="66">
     <l n="196" rhyme="a" line_length="6">En vain Gavarni l'aide,</l>
     <l n="197" rhyme="a" line_length="6">Vénus Victrix est laide</l>
     <l n="198" rhyme="b" line_length="6">Avec le falbala</l>
    </lg>
    <lg n="67">
     <l n="199" rhyme="a" line_length="6">Et, pour orner sa gloire,</l>
     <l n="200" rhyme="a" line_length="6">Choisit la perle noire</l>
     <l n="201" rhyme="b" line_length="6">Arrachée à la mer</l>
    </lg>
    <lg n="68">
     <l n="202" rhyme="a" line_length="6">Donc, rayonne et sois belle,</l>
     <l n="203" rhyme="a" line_length="6">Mystérieux modèle,</l>
     <l n="204" rhyme="b" line_length="6">Mais pour l'œil contempteur</l>
    </lg>
    <lg n="69">
     <l n="205" rhyme="a" line_length="6">Sois belle, ô nymphe blonde,</l>
     <l n="206" rhyme="a" line_length="6">Sans que jamais le monde,</l>
     <l n="207" rhyme="b" line_length="6">Ce vain historien,</l>
    </lg>
    <lg n="70">
     <l n="208" rhyme="a" line_length="6">Mais dans mon ode pleine</l>
     <l n="209" rhyme="a" line_length="6">De chansons, comme Hélène</l>
     <l n="210" rhyme="b" line_length="6">Tu te réveilleras ;</l>
    </lg>
    <lg n="71">
     <l n="211" rhyme="a" line_length="6">Pour la race future,</l>
     <l n="212" rhyme="a" line_length="6">En ta haute stature,</l>
     <l n="213" rhyme="b" line_length="6">Sous le baiser riant</l>
    </lg>
    <lg n="72">
     <l n="214" rhyme="a" line_length="6">Comme une fleur d'Asie,</l>
     <l n="215" rhyme="a" line_length="6">Épandant l'ambroisie</l>
     <l n="216" rhyme="b" line_length="6">D'un buisson de rosiers</l>
    </lg>
    <lg n="73">
     <l n="217" rhyme="a" line_length="6">Magnifique, vêtue,</l>
     <l n="218" rhyme="a" line_length="6">Ainsi qu'une statue,</l>
     <l n="219" rhyme="b" line_length="6">De la seule fraîcheur</l>
    </lg>
    <lg n="74">
     <l n="220" rhyme="a" line_length="6">Et montrant emmêlée,</l>
     <l n="221" rhyme="a" line_length="6">Au vent échevelée,</l>
     <l n="222" rhyme="b" line_length="6">Ta sauvage toison</l>
    </lg>
    <lg n="75">
     <l n="223" rhyme="a" line_length="6">Alors, quand nos idoles</l>
     <l n="224" rhyme="a" line_length="6">Mourantes et frivoles,</l>
     <l n="225" rhyme="b" line_length="6">Aux yeux irrésolus,</l>
    </lg>
    <lg n="76">
     <l n="226" rhyme="a" line_length="6">Que des chimères vaines,</l>
     <l n="227" rhyme="a" line_length="6">Toi, le sang de tes veines</l>
     <l n="228" rhyme="b" line_length="6">Montera vif, et prompt,</l>
    </lg>
    <lg n="77">
     <l n="229" rhyme="a" line_length="6">On verra luire encore</l>
     <l n="230" rhyme="a" line_length="6">Ton sein qui se décore</l>
     <l n="231" rhyme="b" line_length="6">De ses lys éclatants ;</l>
    </lg>
    <lg n="78">
     <l n="232" rhyme="a" line_length="6">Où ceux dont l'âme fière</l>
     <l n="233" rhyme="a" line_length="6">Tient la vile matière</l>
     <l n="234" rhyme="b" line_length="6">En souverain mépris</l>
    </lg>
    <lg n="79">
     <l n="235" rhyme="a" line_length="6">De tes formes parfaites,</l>
     <l n="236" rhyme="a" line_length="6">On verra les poëtes,</l>
     <l n="237" rhyme="b" line_length="6">Tourmentés par le mal</l>
    </lg>
    <lg n="80">
     <l n="238" rhyme="a" line_length="6">Attester par leurs larmes</l>
     <l n="239" rhyme="a" line_length="6">Le pouvoir de tes charmes</l>
     <l n="240" rhyme="b" line_length="6">Et l'immortalité</l>
    </lg>
   </lg>
  </body>
 </text>
