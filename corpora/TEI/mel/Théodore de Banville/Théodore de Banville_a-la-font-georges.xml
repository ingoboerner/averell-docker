 <text>
  <front>
   <head>A la Font-Georges</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="6">O champs pleins de silence,</l>
     <l n="2" rhyme="a" line_length="6">Où mon heureuse enfance</l>
     <l n="3" rhyme="b" line_length="6">Avait des jours encor</l>
    </lg>
    <lg n="2">
     <l n="4" rhyme="a" line_length="6">O ma vieille Font-Georges,</l>
     <l n="5" rhyme="a" line_length="6">Vers qui les rouges-gorges</l>
     <l n="6" rhyme="b" line_length="6">Et le doux rossignol</l>
    </lg>
    <lg n="3">
     <l n="7" rhyme="a" line_length="6">Maison blanche où la vigne</l>
     <l n="8" rhyme="a" line_length="6">Tordait en longue ligne</l>
     <l n="9" rhyme="b" line_length="6">Son feuillage qui boit</l>
    </lg>
    <lg n="4">
     <l n="10" rhyme="a" line_length="6">O claire source froide,</l>
     <l n="11" rhyme="a" line_length="6">Qu'ombrageait, vieux et roide,</l>
     <l n="12" rhyme="b" line_length="6">Un noyer vigoureux</l>
    </lg>
    <lg n="5">
     <l n="13" rhyme="a" line_length="6">Sources ! fraîches fontaines !</l>
     <l n="14" rhyme="a" line_length="6">Qui, douces à mes peines,</l>
     <l n="15" rhyme="b" line_length="6">Frémissiez autrefois</l>
     <l n="16" rhyme="b" line_length="4">Rien qu'à ma voix !</l>
    </lg>
    <lg n="6">
     <l n="17" rhyme="a" line_length="6">Bassin où les laveuses</l>
     <l n="18" rhyme="a" line_length="6">Chantaient insoucieuses</l>
     <l n="19" rhyme="b" line_length="6">En battant sur leur banc</l>
    </lg>
    <lg n="7">
     <l n="20" rhyme="a" line_length="6">O sorbier centenaire,</l>
     <l n="21" rhyme="a" line_length="6">Dont trois coups de tonnerre</l>
     <l n="22" rhyme="b" line_length="6">Avaient laissé tout nu</l>
    </lg>
    <lg n="8">
     <l n="23" rhyme="a" line_length="6">Tonnelles et coudrettes,</l>
     <l n="24" rhyme="a" line_length="6">Verdoyantes retraites</l>
     <l n="25" rhyme="b" line_length="6">De peupliers mouvants</l>
    </lg>
    <lg n="9">
     <l n="26" rhyme="a" line_length="6">O vignes purpurines,</l>
     <l n="27" rhyme="a" line_length="6">Dont, le long des collines,</l>
     <l n="28" rhyme="b" line_length="6">Les ceps accumulés</l>
    </lg>
    <lg n="10">
     <l n="29" rhyme="a" line_length="6">Où, l'automne venue,</l>
     <l n="30" rhyme="a" line_length="6">La Vendange mi-nue</l>
     <l n="31" rhyme="b" line_length="6">A l'entour du pressoir</l>
     <l n="32" rhyme="b" line_length="4">Dansait le soir !</l>
    </lg>
    <lg n="11">
     <l n="33" rhyme="a" line_length="6">O buissons d'églantines,</l>
     <l n="34" rhyme="a" line_length="6">Jetant dans les ravines,</l>
     <l n="35" rhyme="b" line_length="6">Comme un chêne le gland,</l>
    </lg>
    <lg n="12">
     <l n="36" rhyme="a" line_length="6">Murmurante oseraie,</l>
     <l n="37" rhyme="a" line_length="6">Où le ramier s'effraie,</l>
     <l n="38" rhyme="b" line_length="6">Saule au feuillage bleu,</l>
    </lg>
    <lg n="13">
     <l n="39" rhyme="a" line_length="6">Rameaux lourds de cerises !</l>
     <l n="40" rhyme="a" line_length="6">Moissonneuses surprises</l>
     <l n="41" rhyme="b" line_length="6">A mi-jambe dans l'eau</l>
    </lg>
    <lg n="14">
     <l n="42" rhyme="a" line_length="6">Antres, chemins, fontaines,</l>
     <l n="43" rhyme="a" line_length="6">Acres parfums et plaines,</l>
     <l n="44" rhyme="b" line_length="6">Ombrages et rochers</l>
    </lg>
    <lg n="15">
     <l n="45" rhyme="a" line_length="6">Ruisseaux ! forêts ! silence !</l>
     <l n="46" rhyme="a" line_length="6">O mes amours d'enfance !</l>
     <l n="47" rhyme="b" line_length="6">Mon âme, sans témoins,</l>
     <l n="48" rhyme="b" line_length="4">Vous aime moins</l>
    </lg>
    <lg n="16">
     <l n="49" rhyme="a" line_length="6">Que ce jardin morose</l>
     <l n="50" rhyme="a" line_length="6">Sans verdure et sans rose</l>
     <l n="51" rhyme="b" line_length="6">Et ces sombres massifs</l>
    </lg>
    <lg n="17">
     <l n="52" rhyme="a" line_length="6">Et ce chemin de sable,</l>
     <l n="53" rhyme="a" line_length="6">Où j'eus l'heur ineffable,</l>
     <l n="54" rhyme="b" line_length="6">Pour la première fois,</l>
    </lg>
    <lg n="18">
     <l n="55" rhyme="a" line_length="6">Où rêveuse, l'amie</l>
     <l n="56" rhyme="a" line_length="6">Doucement obéie,</l>
     <l n="57" rhyme="b" line_length="6">S'appuyant à mon bras,</l>
    </lg>
    <lg n="19">
     <l n="58" rhyme="a" line_length="6">Pensive et recueillie,</l>
     <l n="59" rhyme="a" line_length="6">Et d'une fleur cueillie</l>
     <l n="60" rhyme="b" line_length="6">Brisant le cœur discret</l>
    </lg>
    <lg n="20">
     <l n="61" rhyme="a" line_length="6">A l'heure où les étoiles</l>
     <l n="62" rhyme="a" line_length="6">Frissonnant sous leurs voiles</l>
     <l n="63" rhyme="b" line_length="6">Brodent le ciel changeant</l>
    </lg>
   </lg>
