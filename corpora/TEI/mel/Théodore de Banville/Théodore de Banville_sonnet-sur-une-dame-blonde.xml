  <front>
   <head>Sonnet sur une Dame blonde</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="4">Sur la colline,</l>
     <l n="2" rhyme="b" line_length="4">Quand la splendeur</l>
     <l n="3" rhyme="b" line_length="4">Du ciel en fleur</l>
     <l n="4" rhyme="a" line_length="4">Au soir décline,</l>
    </lg>
    <lg n="2">
     <l n="5" rhyme="a" line_length="4">L'air illumine</l>
     <l n="6" rhyme="b" line_length="4">Ce front rêveur</l>
     <l n="7" rhyme="b" line_length="4">D'une lueur</l>
     <l n="8" rhyme="a" line_length="4">Triste et divine.</l>
    </lg>
    <lg n="3">
     <l n="9" rhyme="c" line_length="4">Dans un bleu ciel,</l>
     <l n="10" rhyme="c" line_length="4">O Gabriel !</l>
     <l n="11" rhyme="d" line_length="4">Tel tu rayonnes ;</l>
    </lg>
    <lg n="4">
     <l n="12" rhyme="e" line_length="4">Telles encor</l>
     <l n="13" rhyme="d" line_length="4">Sont les madones</l>
     <l n="14" rhyme="e" line_length="4">Dans les fonds d'or.</l>
    </lg>
   </lg>
  </body>
