 <text>
  <front>
   <head>VARIATIONS LYRIQUES</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="6">Le carnaval s'amuse !</l>
     <l n="2" rhyme="a" line_length="6">Viens le chanter, ma muse,</l>
     <l n="3" rhyme="b" line_length="6">Sur un rhythme gaillard</l>
    </lg>
    <lg n="2">
     <l n="4" rhyme="a" line_length="6">Et d'abord, sur ta nuque,</l>
     <l n="5" rhyme="a" line_length="6">En dépit de l'eunuque,</l>
     <l n="6" rhyme="b" line_length="6">Fais flotter tes cheveux</l>
    </lg>
    <lg n="3">
     <l n="7" rhyme="a" line_length="6">Chante ton dithyrambe</l>
     <l n="8" rhyme="a" line_length="6">En laissant voir ta jambe</l>
     <l n="9" rhyme="b" line_length="6">Et ton sein arrosé</l>
    </lg>
    <lg n="4">
     <l n="10" rhyme="a" line_length="6">Laisse même, ô déesse,</l>
     <l n="11" rhyme="a" line_length="6">Avec ta blonde tresse,</l>
     <l n="12" rhyme="b" line_length="6">Le maillot des Keller</l>
    </lg>
    <lg n="5">
     <l n="13" rhyme="a" line_length="6">Puisque je congédie</l>
     <l n="14" rhyme="a" line_length="6">Les vers de tragédie,</l>
     <l n="15" rhyme="b" line_length="6">Laisse le décorum</l>
    </lg>
    <lg n="6">
     <l n="16" rhyme="a" line_length="6">La tunique et les voiles</l>
     <l n="17" rhyme="a" line_length="6">Semés d'un ciel d'étoiles,</l>
     <l n="18" rhyme="b" line_length="6">Et les manteaux épars</l>
    </lg>
    <lg n="7">
     <l n="19" rhyme="a" line_length="6">Que ses vierges plaintives,</l>
     <l n="20" rhyme="a" line_length="6">Catholiques ou juives,</l>
     <l n="21" rhyme="b" line_length="6">Tiennent des sanhédrins</l>
    </lg>
    <lg n="8">
     <l n="22" rhyme="a" line_length="6">Mais toi, sans autre insigne</l>
     <l n="23" rhyme="a" line_length="6">Que la feuille de vigne</l>
     <l n="24" rhyme="b" line_length="6">Et les souples accords</l>
    </lg>
    <lg n="9">
     <l n="25" rhyme="a" line_length="6">Laisse ton sein de neige</l>
     <l n="26" rhyme="a" line_length="6">Chanter tout le solfège</l>
     <l n="27" rhyme="b" line_length="6">De ses accords pourprés,</l>
    </lg>
    <lg n="10">
     <l n="28" rhyme="a" line_length="6">Ou bien, mon adorée,</l>
     <l n="29" rhyme="a" line_length="6">Prends la veste dorée</l>
     <l n="30" rhyme="b" line_length="6">Et le soulier verni</l>
    </lg>
    <lg n="11">
     <l n="31" rhyme="a" line_length="6">Mets ta ceinture, et plaque</l>
     <l n="32" rhyme="a" line_length="6">Sur le velours d'un claque</l>
     <l n="33" rhyme="b" line_length="6">Les rubans querelleurs</l>
    </lg>
    <lg n="12">
     <l n="34" rhyme="a" line_length="6">Fais, sur plus de richesses</l>
     <l n="35" rhyme="a" line_length="6">Que n'en ont les duchesses,</l>
     <l n="36" rhyme="b" line_length="6">Coller jusqu'au talon</l>
    </lg>
    <lg n="13">
     <l n="37" rhyme="a" line_length="6">Dans tes lèvres écloses</l>
     <l n="38" rhyme="a" line_length="6">Mets les cris et les poses</l>
     <l n="39" rhyme="b" line_length="6">Et les folles ardeurs</l>
    </lg>
    <lg n="14">
     <l n="40" rhyme="a" line_length="6">Puis, sans peur ni réserve,</l>
     <l n="41" rhyme="a" line_length="6">Réchauffant de ta verve</l>
     <l n="42" rhyme="b" line_length="6">Le mollet engourdi</l>
    </lg>
    <lg n="15">
     <l n="43" rhyme="a" line_length="6">Sur tes pas fiers et souples</l>
     <l n="44" rhyme="a" line_length="6">Traînant cent mille couples,</l>
     <l n="45" rhyme="b" line_length="6">Montre leur jusqu'où va</l>
    </lg>
    <lg n="16">
     <l n="46" rhyme="a" line_length="6">Et, dans le bal féerique,</l>
     <l n="47" rhyme="a" line_length="6">Hurle un rhythme lyrique</l>
     <l n="48" rhyme="b" line_length="6">Dont tu feras cadeau</l>
    </lg>
    <lg n="17">
     <l n="49" rhyme="a" line_length="6">Tapez, pierrots et masques,</l>
     <l n="50" rhyme="a" line_length="6">Sur vos tambours de basques !</l>
     <l n="51" rhyme="b" line_length="6">Faites de vos grelots</l>
    </lg>
    <lg n="18">
     <l n="52" rhyme="a" line_length="6">Formidables orgies,</l>
     <l n="53" rhyme="a" line_length="6">Suivez sous les bougies</l>
     <l n="54" rhyme="b" line_length="6">Les sax aux voix de fer</l>
    </lg>
    <lg n="19">
     <l n="55" rhyme="a" line_length="6">Sous le gaz de Labeaume</l>
     <l n="56" rhyme="a" line_length="6">Hurrah ! Suivez le heaume</l>
     <l n="57" rhyme="b" line_length="6">Et la cuirasse d'or</l>
    </lg>
    <lg n="20">
     <l n="58" rhyme="a" line_length="6">Et madame panache,</l>
     <l n="59" rhyme="a" line_length="6">Dont le front se harnache</l>
     <l n="60" rhyme="b" line_length="6">De douze ou quinze bouts</l>
    </lg>
    <lg n="21">
     <l n="61" rhyme="a" line_length="6">Au son de la musette</l>
     <l n="62" rhyme="a" line_length="6">Suivez ange et frisette,</l>
     <l n="63" rhyme="b" line_length="6">Et ce joli poupon,</l>
    </lg>
    <lg n="22">
     <l n="64" rhyme="a" line_length="6">Et Blanche aux belles formes,</l>
     <l n="65" rhyme="a" line_length="6">Dont les cheveux énormes</l>
     <l n="66" rhyme="b" line_length="6">Ont été peints, je crois,</l>
    </lg>
    <lg n="23">
     <l n="67" rhyme="a" line_length="6">De même que la Loire</l>
     <l n="68" rhyme="a" line_length="6">Se promène avec gloire</l>
     <l n="69" rhyme="b" line_length="6">Dans son grand corridor</l>
    </lg>
    <lg n="24">
     <l n="70" rhyme="a" line_length="6">Sa chevelure rousse</l>
     <l n="71" rhyme="a" line_length="6">Coule, orgueilleuse et douce ;</l>
     <l n="72" rhyme="b" line_length="6">Elle épouvanterait</l>
    </lg>
    <lg n="25">
     <l n="73" rhyme="a" line_length="6">Chantez, musique et danse !</l>
     <l n="74" rhyme="a" line_length="6">Que le doux vin de France</l>
     <l n="75" rhyme="b" line_length="6">Tombe dans le cristal</l>
    </lg>
    <lg n="26">
     <l n="76" rhyme="a" line_length="6">Pas de pudeur bégueule !</l>
     <l n="77" rhyme="a" line_length="6">Amis ! La France seule</l>
     <l n="78" rhyme="b" line_length="6">Est l'aimable et divin</l>
    </lg>
    <lg n="27">
     <l n="79" rhyme="a" line_length="6">Laissons à l'Angleterre</l>
     <l n="80" rhyme="a" line_length="6">Ses brouillards et sa bière !</l>
     <l n="81" rhyme="b" line_length="6">Laissons-la dans le gin</l>
    </lg>
    <lg n="28">
     <l n="82" rhyme="a" line_length="6">Que la pâle Ophélie,</l>
     <l n="83" rhyme="a" line_length="6">En sa mélancolie,</l>
     <l n="84" rhyme="b" line_length="6">Cueille dans les roseaux</l>
    </lg>
    <lg n="29">
     <l n="85" rhyme="a" line_length="6">Que, sensitive humaine,</l>
     <l n="86" rhyme="a" line_length="6">Desdémone promène</l>
     <l n="87" rhyme="b" line_length="6">Sous le saule pleureur</l>
    </lg>
    <lg n="30">
     <l n="88" rhyme="a" line_length="6">Qu'Hamlet, terrible et sombre</l>
     <l n="89" rhyme="a" line_length="6">Sous les plaintes de l'ombre,</l>
     <l n="90" rhyme="b" line_length="6">Dise, accablé de maux :</l>
    </lg>
    <lg n="31">
     <l n="91" rhyme="a" line_length="6">Mais nous, dans la patrie</l>
     <l n="92" rhyme="a" line_length="6">De la galanterie,</l>
     <l n="93" rhyme="b" line_length="6">Gardons les folles mœurs</l>
    </lg>
    <lg n="32">
     <l n="94" rhyme="a" line_length="6">Fronts couronnés de lierre,</l>
     <l n="95" rhyme="a" line_length="6">Gardons l'or de Molière,</l>
     <l n="96" rhyme="b" line_length="6">Sans prendre le billon</l>
    </lg>
    <lg n="33">
     <l n="97" rhyme="a" line_length="6">C'est dans notre campagne</l>
     <l n="98" rhyme="a" line_length="6">Que le pâle champagne</l>
     <l n="99" rhyme="b" line_length="6">Sur les coteaux d'Aï</l>
    </lg>
    <lg n="34">
     <l n="100" rhyme="a" line_length="6">C'est sur nos tapis d'herbe</l>
     <l n="101" rhyme="a" line_length="6">Que le soleil superbe</l>
     <l n="102" rhyme="b" line_length="6">Pourpre, frais et brûlants,</l>
    </lg>
    <lg n="35">
     <l n="103" rhyme="a" line_length="6">C'est chez nous que l'on aime</l>
     <l n="104" rhyme="a" line_length="6">Les verres de Bohême</l>
     <l n="105" rhyme="b" line_length="6">Qu'emplit d'or et de feu</l>
    </lg>
    <lg n="36">
     <l n="106" rhyme="a" line_length="6">Donc, ô lèvres vermeilles,</l>
     <l n="107" rhyme="a" line_length="6">Buvez à pleines treilles</l>
     <l n="108" rhyme="b" line_length="6">Sur ces coteaux penchants</l>
    </lg>
    <lg n="37">
     <l n="109" rhyme="a" line_length="6">Poésie et musique,</l>
     <l n="110" rhyme="a" line_length="6">Chantez l'amour physique</l>
     <l n="111" rhyme="b" line_length="6">Et les cœurs embrasés</l>
    </lg>
    <lg n="38">
     <l n="112" rhyme="a" line_length="6">Chantons ces jeunes femmes</l>
     <l n="113" rhyme="a" line_length="6">Dont le cœur et les âmes</l>
     <l n="114" rhyme="b" line_length="6">Atirent vers Paris</l>
    </lg>
    <lg n="39">
     <l n="115" rhyme="a" line_length="6">Chantons leur air bravache</l>
     <l n="116" rhyme="a" line_length="6">Et leur corset sans tache</l>
     <l n="117" rhyme="b" line_length="6">Dont le souple basin</l>
    </lg>
    <lg n="40">
     <l n="118" rhyme="a" line_length="6">Leur col qui se chiffonne</l>
     <l n="119" rhyme="a" line_length="6">Sur leur robe de nonne,</l>
     <l n="120" rhyme="b" line_length="6">Leurs doigts collés aux gants</l>
    </lg>
    <lg n="41">
     <l n="121" rhyme="a" line_length="6">Leur chapeau dont la grâce</l>
     <l n="122" rhyme="a" line_length="6">Pour toujours embarrasse</l>
     <l n="123" rhyme="b" line_length="6">La ville et le faubourg</l>
    </lg>
    <lg n="42">
     <l n="124" rhyme="a" line_length="6">Leurs peignoirs de barège</l>
     <l n="125" rhyme="a" line_length="6">Et leurs jupes de neige</l>
     <l n="126" rhyme="b" line_length="6">Plus blanches que les lys</l>
    </lg>
    <lg n="43">
     <l n="127" rhyme="a" line_length="6">Leurs épaules glacées,</l>
     <l n="128" rhyme="a" line_length="6">Leurs bottines lacées</l>
     <l n="129" rhyme="b" line_length="6">Et leurs jupons tremblants</l>
    </lg>
    <lg n="44">
     <l n="130" rhyme="a" line_length="6">Chantons leur courtoisie !</l>
     <l n="131" rhyme="a" line_length="6">Car ni l'Andalousie,</l>
     <l n="132" rhyme="b" line_length="6">Ni Venise, les yeux</l>
    </lg>
    <lg n="45">
     <l n="133" rhyme="a" line_length="6">Ni la belle Florence</l>
     <l n="134" rhyme="a" line_length="6">Où, dans sa transparence,</l>
     <l n="135" rhyme="b" line_length="6">L'Arno prend les reflets</l>
    </lg>
    <lg n="46">
     <l n="136" rhyme="a" line_length="6">Ni l'odorante Asie,</l>
     <l n="137" rhyme="a" line_length="6">Qui, dans sa fantaisie,</l>
     <l n="138" rhyme="b" line_length="6">Tient d'un doigt effilé</l>
    </lg>
    <lg n="47">
     <l n="139" rhyme="a" line_length="6">Ni l'Allemagne blonde</l>
     <l n="140" rhyme="a" line_length="6">Qui, sur le bord de l'onde,</l>
     <l n="141" rhyme="b" line_length="6">Ceint des vignes du Rhin</l>
    </lg>
    <lg n="48">
     <l n="142" rhyme="a" line_length="6">N'ont dans leurs rêveries</l>
     <l n="143" rhyme="a" line_length="6">Vu ces lèvres fleuries,</l>
     <l n="144" rhyme="b" line_length="6">Ces croupes de coursier,</l>
    </lg>
    <lg n="49">
     <l n="145" rhyme="a" line_length="6">Ces dents de bête fauve,</l>
     <l n="146" rhyme="a" line_length="6">Ces bras faits pour l'alcôve,</l>
     <l n="147" rhyme="b" line_length="6">Ces grands ongles couleur</l>
    </lg>
    <lg n="50">
     <l n="148" rhyme="a" line_length="6">Et ces amours de race</l>
     <l n="149" rhyme="a" line_length="6">Qu'Anacréon, Horace</l>
     <l n="150" rhyme="b" line_length="6">Et Marot enchantés,</l>
    </lg>
   </lg>
  </body>
