 <text>
  <front>
   <head>Concurrence</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="6">Là-haut gronde un orage.</l>
     <l n="2" rhyme="a" line_length="6">Le soleil plein de rage</l>
     <l n="3" rhyme="b" line_length="6">Semble s'extasier</l>
    </lg>
    <lg n="2">
     <l n="4" rhyme="a" line_length="6">Le turbulent tonnerre</l>
     <l n="5" rhyme="a" line_length="6">Célèbre un centenaire</l>
     <l n="6" rhyme="b" line_length="6">Au milieu des éclairs</l>
    </lg>
    <lg n="3">
     <l n="7" rhyme="a" line_length="6">A quelle œuvre inconnue</l>
     <l n="8" rhyme="a" line_length="6">Travaillent dans la nue</l>
     <l n="9" rhyme="b" line_length="6">Les Chérubins riants</l>
    </lg>
    <lg n="4">
     <l n="10" rhyme="a" line_length="6">Ces faiseurs de poëmes</l>
     <l n="11" rhyme="a" line_length="6">Ouvrent, comme nous-mêmes,</l>
     <l n="12" rhyme="b" line_length="6">Une Exposition</l>
    </lg>
    <lg n="5">
     <l n="13" rhyme="a" line_length="6">On y vient du nocturne</l>
     <l n="14" rhyme="a" line_length="6">Sirius, de Saturne,</l>
     <l n="15" rhyme="b" line_length="6">De Vénus tout en feu</l>
    </lg>
    <lg n="6">
     <l n="16" rhyme="a" line_length="6">Et de l'ombre où fulgure,</l>
     <l n="17" rhyme="a" line_length="6">Détachant sa figure</l>
     <l n="18" rhyme="b" line_length="6">Dans l'éther de safran,</l>
    </lg>
    <lg n="7">
     <l n="19" rhyme="a" line_length="6">Le Berger des étoiles</l>
     <l n="20" rhyme="a" line_length="6">A dans ses larges toiles</l>
     <l n="21" rhyme="b" line_length="6">Emprisonné divers</l>
    </lg>
    <lg n="8">
     <l n="22" rhyme="a" line_length="6">Là, tendant leurs échines,</l>
     <l n="23" rhyme="a" line_length="6">D'invincibles machines</l>
     <l n="24" rhyme="b" line_length="6">Font mouvoir les vermeils</l>
    </lg>
    <lg n="9">
     <l n="25" rhyme="a" line_length="6">Puis, des fontaines vives</l>
     <l n="26" rhyme="a" line_length="6">Dans leurs eaux convulsives</l>
     <l n="27" rhyme="b" line_length="6">Roulent des firmaments</l>
    </lg>
    <lg n="10">
     <l n="28" rhyme="a" line_length="6">La chevelure d'Ève</l>
     <l n="29" rhyme="a" line_length="6">Et sa bouche de rêve</l>
     <l n="30" rhyme="b" line_length="6">Les ont teintes de leurs</l>
    </lg>
    <lg n="11">
     <l n="31" rhyme="a" line_length="6">Et des jardins étranges</l>
     <l n="32" rhyme="a" line_length="6">Fleurissent, dont les Anges</l>
     <l n="33" rhyme="b" line_length="6">Ailés et triomphants</l>
    </lg>
    <lg n="12">
     <l n="34" rhyme="a" line_length="6">Là naissent, blancs et lisses,</l>
     <l n="35" rhyme="a" line_length="6">Ouvrant leurs purs calices</l>
     <l n="36" rhyme="b" line_length="6">Près des amaryllis,</l>
    </lg>
    <lg n="13">
     <l n="37" rhyme="a" line_length="6">Et des roses farouches,</l>
     <l n="38" rhyme="a" line_length="6">Pareilles à des bouches</l>
     <l n="39" rhyme="b" line_length="6">Que tout baise à l'entour,</l>
    </lg>
    <lg n="14">
     <l n="40" rhyme="a" line_length="6">Parmi l'or des fournaises</l>
     <l n="41" rhyme="a" line_length="6">Dansent des Javanaises</l>
     <l n="42" rhyme="b" line_length="6">Venant d'une Java</l>
    </lg>
    <lg n="15">
     <l n="43" rhyme="a" line_length="6">Mille milliers de rimes</l>
     <l n="44" rhyme="a" line_length="6">S'éparpillent, sublimes,</l>
     <l n="45" rhyme="b" line_length="6">En un glorieux chant ;</l>
    </lg>
    <lg n="16">
     <l n="46" rhyme="a" line_length="6">Vers les grands téléphones,</l>
     <l n="47" rhyme="a" line_length="6">Hurlent des Tisiphones</l>
     <l n="48" rhyme="b" line_length="6">Et parlent en mots fins</l>
    </lg>
    <lg n="17">
     <l n="49" rhyme="a" line_length="6">Dans la nue électrique,</l>
     <l n="50" rhyme="a" line_length="6">Dieu, puissamment lyrique,</l>
     <l n="51" rhyme="b" line_length="6">Lutte avec Edison</l>
    </lg>
    <lg n="18">
     <l n="52" rhyme="a" line_length="6">Et de ses mains profondes,</l>
     <l n="53" rhyme="a" line_length="6">L'ingénieur des mondes</l>
     <l n="54" rhyme="b" line_length="6">Construit dans le plein ciel</l>
    </lg>
   </lg>
