   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="8">Je me suis grisé d'angélique,</l>
    </lg>
    <lg n="2" />
    <lg n="3">
     <l n="2" rhyme="a" line_length="8">L'onctueuse bénédictine,</l>
     <l n="3" rhyme="b" line_length="8">En mon âme chante matine !</l>
     <l n="4" rhyme="a" line_length="8">Je me ferai bénédictin !</l>
    </lg>
    <lg n="4" />
   </lg>
