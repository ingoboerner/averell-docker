  <front>
   <head>STÉRILITÉS</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" line_length="7">Cautérise et coagule</l>
     <l n="2" line_length="3">Ses lagunes des cerises</l>
     <l n="3" line_length="7">Des félines Ophélies</l>
     <l n="4" line_length="7">Orphelines en folie.</l>
    </lg>
    <lg n="2">
     <l n="5" line_length="7">Tarentule de feintises</l>
     <l n="6" line_length="3">Sans rancune des ovules</l>
     <l n="7" line_length="7">Aux félines Ophélies</l>
     <l n="8" line_length="7">Orphelines en folie.</l>
    </lg>
    <lg n="3">
     <l n="9" line_length="7">Sourd aux brises des scrupules,</l>
     <l n="10" line_length="3">De la lune, adieu, nolise</l>
     <l n="11" line_length="7">Ces félines Ophélies</l>
     <l n="12" line_length="7">Orphelines en folie !</l>
    </lg>
   </lg>
  </body>
