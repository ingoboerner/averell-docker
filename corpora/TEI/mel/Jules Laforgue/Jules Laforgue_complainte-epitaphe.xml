  <front>
   <head>COMPLAINTE-ÉPITAPHE</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="0" line_length="2">La femme,</l>
     <l n="2" rhyme="1" line_length="2">Mon âme :</l>
     <l n="3" rhyme="2" line_length="2">Ah ! Quels</l>
     <l n="4" rhyme="2" line_length="2">Appels !</l>
    </lg>
    <lg n="2">
     <l n="5" rhyme="2" line_length="2">Pastels</l>
     <l n="6" rhyme="2" line_length="2">Mortels,</l>
     <l n="7" rhyme="1" line_length="2">Qu'on blâme</l>
     <l n="8" rhyme="3" line_length="2">Mes gammes !</l>
    </lg>
    <lg n="3">
     <l n="9" rhyme="4" line_length="2">Un fou</l>
     <l n="10" rhyme="5" line_length="2">S'avance,</l>
     <l n="11" rhyme="6" line_length="2">Et danse.</l>
    </lg>
    <lg n="4">
     <l n="12" rhyme="5" line_length="2">Silence…</l>
     <l n="13" rhyme="4" line_length="2">Lui, où ?</l>
     <l n="14" rhyme="4" line_length="2">Coucou.</l>
    </lg>
   </lg>
  </body>
