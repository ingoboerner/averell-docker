  <front>
   <head>XV</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="6+6">Je dirai ta beauté perdue à ceux qu'offense</l>
     <l n="2" rhyme="b" line_length="8">Ton front marmoréen, éternelle pâleur,</l>
    </lg>
    <lg n="2">
     <l n="3" rhyme="a" line_length="6+6">Et tes yeux au regard magnétique et profond</l>
     <l n="4" rhyme="b" line_length="8">Qu'un jour intérieur illumine et qui font</l>
    </lg>
    <lg n="3">
     <l n="5" rhyme="a" line_length="6+6">Et l'éclat de ton col dressé jusqu'à l'orgueil</l>
     <l n="6" rhyme="b" line_length="8">La fête de ton teint lilial et le deuil</l>
    </lg>
    <lg n="4">
     <l n="7" rhyme="a" line_length="6+6">Et tout ce qui me fut le suprême abandon</l>
     <l n="8" rhyme="b" line_length="8">Ta beauté surhumaine où mon âme asservie</l>
    </lg>
   </lg>
  </body>
