   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="6">Livre, qu'un vent t'emporte</l>
     <l n="2" rhyme="b" line_length="6">En France où je suis né !</l>
     <l n="3" rhyme="b" line_length="6">L'arbre déraciné</l>
     <l n="4" rhyme="a" line_length="6">Donne sa feuille morte.</l>
    </lg>
