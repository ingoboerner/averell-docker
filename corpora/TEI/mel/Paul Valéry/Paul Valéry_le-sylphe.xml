  <front>
   <head>Le Sylphe</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="5">Ni vu ni connu</l>
     <l n="2" rhyme="b" line_length="5">Je suis le parfum</l>
     <l n="3" rhyme="b" line_length="5">Vivant et défunt</l>
     <l n="4" rhyme="a" line_length="5">Dans le vent venu !</l>
    </lg>
    <lg n="2">
     <l n="5" rhyme="c" line_length="5">Ni vu ni connu</l>
     <l n="6" rhyme="d" line_length="5">Hasard ou génie ?</l>
     <l n="7" rhyme="c" line_length="5">À peine venu</l>
     <l n="8" rhyme="d" line_length="5">La tâche est finie !</l>
    </lg>
    <lg n="3">
     <l n="9" rhyme="e" line_length="5">Ni lu ni compris ?</l>
     <l n="10" rhyme="e" line_length="5">Aux meilleurs esprits</l>
     <l n="11" rhyme="f" line_length="5">Que d’erreurs promises !</l>
    </lg>
    <lg n="4">
     <l n="12" rhyme="g" line_length="5">Ni vu ni connu,</l>
     <l n="13" rhyme="g" line_length="5">Le temps d’un sein nu</l>
     <l n="14" rhyme="f" line_length="5">Entre deux chemises !</l>
    </lg>
   </lg>
  </body>
