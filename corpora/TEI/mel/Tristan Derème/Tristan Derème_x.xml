   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" rhyme="a" line_length="8">Mon espérance était tombée</l>
     <l n="2" rhyme="a" line_length="8">Sur le dos, comme un scarabée.</l>
    </lg>
    <lg n="2">
     <l n="3" rhyme="a" line_length="8">L'ombrelle aux doigts le lendemain</l>
     <l n="4" rhyme="a" line_length="8">Tu vins rêver sur le chemin.</l>
    </lg>
    <lg n="3">
     <l n="5" rhyme="a" line_length="8">Tu retournas l'insecte frêle</l>
     <l n="6" rhyme="a" line_length="8">Avec la pointe de l'ombrelle.</l>
    </lg>
    <lg n="4">
     <l n="7" rhyme="a" line_length="8">Et soudain l'insecte, au delà</l>
     <l n="8" rhyme="a" line_length="8">Des soleils calmes, s'envola !</l>
    </lg>
    <lg n="5">
     <l n="9" rhyme="a" line_length="8">Mon espérance était tombée</l>
     <l n="10" rhyme="a" line_length="8">Sur le dos, comme un scarabée…</l>
    </lg>
   </lg>
