  <front>
   <head>III. Ach, tkadlec tká a tká</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="110101" rhyme="1" line_length="6">Ach, tkadlec tká a tká </l>
     <l n="2" met="100100" rhyme="1" line_length="6">pro cizá robátka</l>
     <l n="3" met="1010" rhyme="2" line_length="4">plátno bílé –</l>
     <l n="4" met="010100" rhyme="3" line_length="6">ty jeho dětičky</l>
     <l n="5" met="010100" rhyme="3" line_length="6">jsou jako rybičky</l>
     <l n="6" met="1000" rhyme="2" line_length="4">bez košile.</l>
    </lg>
    <lg n="2">
     <l n="7" met="010100" rhyme="4" line_length="6">Jak v lese veverky</l>
     <l n="8" met="100100" rhyme="4" line_length="6">bez sukně, zástěrky,</l>
     <l n="9" met="1000" rhyme="5" line_length="4">bez kabátku –</l>
     <l n="10" met="100101" rhyme="1" line_length="6">tkadlec jen tká a tká</l>
     <l n="11" met="100100" rhyme="1" line_length="6">pro cizá robátka</l>
     <l n="12" met="1010" rhyme="5" line_length="4">teplou látku.</l>
    </lg>
   </lg>
  </body>
