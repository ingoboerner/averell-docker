  <front>
   <head>VIII. Každá upomínka</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101000" line_length="6">Každá upomínka </l>
     <l n="2" met="100100" rhyme="1" line_length="6">na moji matičku</l>
     <l n="3" met="100010" line_length="6">mění se mi v písně</l>
     <l n="4" met="100100" rhyme="1" line_length="6">čarovnou perličku.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" line_length="6">Mění se mi v písně</l>
     <l n="6" met="101000" rhyme="2" line_length="6">kvítek zlatohlavý,</l>
     <l n="7" met="101010" line_length="6">v jehož kalich slétá</l>
     <l n="8" met="101010" rhyme="2" line_length="6">pestrý motýl slávy.</l>
    </lg>
    <lg n="3">
     <l n="9" met="010010" line_length="6">Však pomníku nemá</l>
     <l n="10" met="110100" rhyme="3" line_length="6">hrob mojí matičky,</l>
     <l n="11" met="000100" line_length="6">nechť jsou jí pomníkem</l>
     <l n="12" met="010100" rhyme="3" line_length="6">ty prosté písničky!</l>
    </lg>
   </lg>
  </body>
