  <front>
   <head>XXVII. Z azurné jak vázy</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">Z azurné jak vázy </l>
     <l n="2" met="100010" rhyme="1" line_length="6">z blankytné dnes hloubi</l>
     <l n="3" met="100010" line_length="6">oblakové rostou</l>
     <l n="4" met="101010" rhyme="1" line_length="6">jako zlaté doubí.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101000" line_length="6">Rostou do vysoka</l>
     <l n="6" met="101010" rhyme="2" line_length="6">jako háje z růží,</l>
     <l n="7" met="101010" line_length="6">jako krásné ženy,</l>
     <l n="8" met="101010" rhyme="2" line_length="6">jako hrdí muži.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100010" line_length="6">Od země až k hvězdám</l>
     <l n="10" met="101000" rhyme="3" line_length="6">tiše vyrůstají,</l>
     <l n="11" met="010010" line_length="6">jak stříbrné vrchy</l>
     <l n="12" met="101010" rhyme="3" line_length="6">v čarné jedné báji.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100010" line_length="6">Rozkvétají zlatem,</l>
     <l n="14" met="101000" rhyme="4" line_length="6">nachem, lilijemi,</l>
     <l n="15" met="100010" line_length="6">růžemi a stříbrem</l>
     <l n="16" met="010010" rhyme="4" line_length="6">a duhami všemi.</l>
    </lg>
   </lg>
  </body>
