  <front>
   <head>I. Nitky, bílé nitky,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Nitky, bílé nitky, </l>
     <l n="2" met="001000" rhyme="1" line_length="6">dnes se netrhejte,</l>
     <l n="3" met="010010" line_length="6">jak na harfě struny</l>
     <l n="4" met="100010" rhyme="1" line_length="6">blaženě se chvějte.</l>
    </lg>
    <lg n="2">
     <l n="5" met="010010" line_length="6">Jak na harfě struny</l>
     <l n="6" met="101000" rhyme="1" line_length="6">v zpěv se rozjásejte,</l>
     <l n="7" met="100010" line_length="6">plesejte s mým srdcem –</l>
     <l n="8" met="001000" rhyme="1" line_length="6">dnes se netrhejte.</l>
    </lg>
   </lg>
  </body>
