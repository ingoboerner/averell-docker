  <front>
   <head>ŽIVOT.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101000" rhyme="1" line_length="8">Život – všeho míchanina,</l>
     <l n="2" met="1000101" rhyme="2" line_length="7">všeho chut a všeho směs,</l>
     <l n="3" met="10101010" rhyme="1" line_length="8">trocha octa, trocha vína,</l>
     <l n="4" met="1010001" rhyme="2" line_length="7">stříbro, pozlátko i rez.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101000" rhyme="1" line_length="8">Život – všeho míchanina,</l>
     <l n="6" met="1010101" rhyme="3" line_length="7">hrstka kvítí, hrstka trav,</l>
     <l n="7" met="10101000" rhyme="1" line_length="8">zlého větší polovina,</l>
     <l n="8" met="1000101" rhyme="3" line_length="7">povinností víc než práv.</l>
    </lg>
   </lg>
  </body>
