 <text>
  <front>
   <head>I. Oblaků zlatý roj</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100101" line_length="6">Oblaků zlatý roj </l>
     <l n="2" met="101101" rhyme="1" line_length="6">v jeden spěch, v jeden chvat</l>
     <l n="3" met="100100" line_length="6">Valašskou krajinu</l>
     <l n="4" met="100100" rhyme="1" line_length="6">chodí si namlouvat.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Žebrají o lásku,</l>
     <l n="6" met="100100" rhyme="2" line_length="6">žebrají o milosť,</l>
     <l n="7" met="100100" line_length="6">v kadeř jí vplétají</l>
     <l n="8" met="100101" rhyme="2" line_length="6">zářivý perel skvost.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">Po líčku rozvitém</l>
     <l n="10" met="100100" rhyme="3" line_length="6">hebounce hladí ji,</l>
     <l n="11" met="010100" line_length="6">jak roje motýlů</l>
     <l n="12" met="100100" rhyme="3" line_length="6">nádhernou liliji.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100100" line_length="6">Na sněžné peruti</l>
     <l n="14" met="100101" rhyme="4" line_length="6">nebem ji chtějí nést</l>
     <l n="15" met="100100" line_length="6">po dráze sluneční</l>
     <l n="16" met="100101" rhyme="4" line_length="6">do říše jasných hvězd.</l>
    </lg>
    <lg n="5">
     <l n="17" met="100100" line_length="6">Ona však netouží</l>
     <l n="18" met="100100" rhyme="5" line_length="6">ze klína matčina,</l>
     <l n="19" met="100100" line_length="6">pranic ji nevábí</l>
     <l n="20" met="100100" rhyme="5" line_length="6">hvězdnatá cizina.</l>
    </lg>
    <lg n="6">
     <l n="21" met="101100" line_length="6">V těsném hor objetí</l>
     <l n="22" met="100100" rhyme="6" line_length="6">blaženě spočívá,</l>
     <l n="23" met="100100" line_length="6">oblačným námluvám</l>
     <l n="24" met="100100" rhyme="6" line_length="6">jenom se usmívá.</l>
    </lg>
    <lg n="7">
     <l n="25" met="100100" line_length="6">Líbána, hejčkána</l>
     <l n="26" met="100100" rhyme="7" line_length="6">májovým sluníčkem</l>
     <l n="27" met="010100" line_length="6">a Bečvou stříbrnou –</l>
     <l n="28" met="100100" rhyme="7" line_length="6">dává všem košíčkem.</l>
    </lg>
   </lg>
  </body>
