  <front>
   <head>NETRHEJ...</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Netrhej, Vojtíšku,</l>
     <l n="2" met="100100" rhyme="1" line_length="6">zelených oříšků</l>
     <l n="3" met="100" rhyme="2" line_length="3">nezralých,</l>
     <l n="4" met="100100" rhyme="3" line_length="6">sladkosti nemají:</l>
     <l n="5" met="100100" rhyme="3" line_length="6">čekej, až dozrají</l>
     <l n="6" met="100" rhyme="2" line_length="3">po hájích.</l>
    </lg>
    <lg n="2">
     <l n="7" met="110100" rhyme="4" line_length="6">Zrát musí malina,</l>
     <l n="8" met="100100" rhyme="4" line_length="6">jablíčko, dívčina,</l>
     <l n="9" met="101" rhyme="5" line_length="3">kosby, žeň:</l>
     <l n="10" met="100101" rhyme="6" line_length="6">dozralý trhej plod,</l>
     <l n="11" met="100100" rhyme="6" line_length="6">s panenkou, jež ti vhod,</l>
     <l n="12" met="001" rhyme="5" line_length="3">hned se žeň!</l>
    </lg>
   </lg>
  </body>
