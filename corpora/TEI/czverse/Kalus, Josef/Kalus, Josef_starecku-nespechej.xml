  <front>
   <head>STAŘEČKU, NESPĚCHEJ...</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Stařečku, nespěchej,</l>
     <l n="2" met="10010" rhyme="2" line_length="5">nemáš už dechu,</l>
     <l n="3" met="100100" rhyme="1" line_length="6">mladším to ponechej –</l>
     <l n="4" met="01010" rhyme="2" line_length="5">Ty spočiň v mechu!</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" rhyme="3" line_length="6">Nejsi už mladíkem,</l>
     <l n="6" met="10110" rhyme="4" line_length="5">nejsi, cos býval,</l>
     <l n="7" met="010100" rhyme="3" line_length="6">když v poli s koníkem</l>
     <l n="8" met="10010" rhyme="4" line_length="5">orals a zpíval.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100101" rhyme="5" line_length="6">Usedni v chlad a stín</l>
     <l n="10" met="10010" rhyme="6" line_length="5">po těžkém díle,</l>
     <l n="11" met="010101" rhyme="5" line_length="6">ať oře dále syn:</l>
     <l n="12" met="01010" rhyme="6" line_length="5">tys dospěl cíle!</l>
    </lg>
   </lg>
  </body>
