  <front>
   <head>ODMÍTNUTÍ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">„Nejde to, Janíčku,</l>
     <l n="2" met="000" rhyme="2" line_length="3">ne, ne, ne:</l>
     <l n="3" met="010100" rhyme="1" line_length="6">nic naši Haničku</l>
     <l n="4" met="100100" rhyme="1" line_length="6">do vdavek, Janíčku,</l>
     <l n="5" met="100" rhyme="2" line_length="3">nežene,</l>
     <l n="6" met="01010" rhyme="3" line_length="5">je tuze mladá,</l>
     <l n="7" met="10010" rhyme="3" line_length="5">tancuje ráda:</l>
     <l n="8" met="100100" rhyme="4" line_length="6">sotva že provdá se,</l>
     <l n="9" met="110100" rhyme="4" line_length="6">má děvče po kráse,</l>
     <l n="10" met="10010" rhyme="3" line_length="5">v koutečku strádá.“</l>
    </lg>
    <lg n="2">
     <l n="11" met="100100" rhyme="5" line_length="6">„Bráníte, pantáto?</l>
     <l n="12" met="000" rhyme="6" line_length="3">Co, co, co?</l>
     <l n="13" met="110100" rhyme="5" line_length="6">Mám hojně nažáto,</l>
     <l n="14" met="010100" rhyme="5" line_length="6">a nejsem, pantáto,</l>
     <l n="15" met="100" rhyme="6" line_length="3">ledaco:</l>
     <l n="16" met="11110" rhyme="3" line_length="5">mám dům, les, lada.</l>
     <l n="17" met="11010" rhyme="3" line_length="5">Květ s růže padá</l>
     <l n="18" met="010100" rhyme="7" line_length="6">a krása s děvčete:</l>
     <l n="19" met="100100" rhyme="7" line_length="6">vdá-li se, rozkvete</l>
     <l n="20" met="01010" rhyme="3" line_length="5">jak lipka mladá.“</l>
    </lg>
    <lg n="3">
     <l n="21" met="001100" rhyme="8" line_length="6">„Už jsem řek, Janíčku:</l>
     <l n="22" met="000" rhyme="9" line_length="3">ne, ne, ne,</l>
     <l n="23" met="010100" rhyme="8" line_length="6">nic naši Haničku,</l>
     <l n="24" met="100100" rhyme="8" line_length="6">do vdavek, Janíčku,</l>
     <l n="25" met="100" rhyme="9" line_length="3">nežene –</l>
     <l n="26" met="10010" rhyme="10" line_length="5">Jedinou máme,</l>
     <l n="27" met="10010" rhyme="10" line_length="5">nějak ji vdáme,</l>
     <l n="28" met="000100" rhyme="11" line_length="6">ty se jí nelíbíš:</l>
     <l n="29" met="110100" rhyme="11" line_length="6">vem jinou, nechybíš,</l>
     <l n="30" met="01000" rhyme="10" line_length="5">my nespěcháme.“</l>
    </lg>
   </lg>
  </body>
