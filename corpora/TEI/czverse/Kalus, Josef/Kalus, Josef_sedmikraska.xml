  <front>
   <head>Sedmikráska.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="11001010" rhyme="1" line_length="8">Ach, nic mi tak milé není</l>
     <l n="2" met="10101000" rhyme="1" line_length="8">jako vonné pozdravení</l>
     <l n="3" met="1000" rhyme="2" line_length="4">sedmikrásky!</l>
    </lg>
    <lg n="2">
     <l n="4" met="10101010" rhyme="3" line_length="8">Všude roste, všude zkvítá,</l>
     <l n="5" met="10001010" rhyme="3" line_length="8">na každé nás mezi vítá</l>
     <l n="6" met="1010" rhyme="2" line_length="4">plna lásky.</l>
    </lg>
    <lg n="3">
     <l n="7" met="10101010" rhyme="4" line_length="8">Kvete v slunci, kvete v stíně,</l>
     <l n="8" met="10101010" rhyme="4" line_length="8">zem ji pořád nosí v klíně</l>
     <l n="9" met="1010" rhyme="5" line_length="4">jako dítě –</l>
    </lg>
    <lg n="4">
     <l n="10" met="10101010" rhyme="6" line_length="8">sotva trochu ztají sněhy,</l>
     <l n="11" met="10001010" rhyme="6" line_length="8">sedmikrásky plna něhy</l>
     <l n="12" met="1000" rhyme="5" line_length="4">pozdraví tě!</l>
    </lg>
   </lg>
  </body>
