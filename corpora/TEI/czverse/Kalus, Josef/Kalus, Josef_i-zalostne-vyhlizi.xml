  <front>
   <head>I. Žalostně vyhlíží</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Žalostně vyhlíží </l>
     <l n="2" met="101010" rhyme="1" line_length="6">naše lípa mladá,</l>
     <l n="3" met="101010" line_length="6">s její větví dolů</l>
     <l n="4" met="101010" rhyme="1" line_length="6">svadlé listí padá.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" line_length="6">Na kořenu jejím</l>
     <l n="6" met="110010" rhyme="2" line_length="6">hmyz škodlivý hlodá –</l>
     <l n="7" met="101010" rhyme="1" line_length="6">oj, ty lípo mladá,</l>
     <l n="8" met="100010" rhyme="2" line_length="6">škoda je tě, škoda!</l>
    </lg>
   </lg>
  </body>
