  <front>
   <head>OBILÍČKO.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001000" line_length="8">Letos-li se obilíčko,</l>
     <l n="2" met="100" rhyme="1" line_length="3">udaří,</l>
     <l n="3" met="01001010" rhyme="2" line_length="8">a budou-li hojné stohy:</l>
     <l n="4" met="10001010" rhyme="2" line_length="8">roztancujem v krčmě nohy,</l>
     <l n="5" met="10101010" rhyme="2" line_length="8">půjde mladý párek mnohý</l>
     <l n="6" met="100" rhyme="1" line_length="3">k oltáři.</l>
    </lg>
    <lg n="2">
     <l n="7" met="10101000" line_length="8">Běda, pakli obilíčko</l>
     <l n="8" met="101" rhyme="3" line_length="3">spálí mráz:</l>
     <l n="9" met="10100010" rhyme="4" line_length="8">hlavu pochýlenou k pleci,</l>
     <l n="10" met="10001010" rhyme="4" line_length="8">zarmouceni budou všeci,</l>
     <l n="11" met="10101010" rhyme="4" line_length="8">horké slzy budou téci</l>
     <l n="12" met="101" rhyme="3" line_length="3">z dívčích řas.</l>
    </lg>
    <lg n="3">
     <l n="13" met="10101000" line_length="8">Chmury slétnou šohajovi</l>
     <l n="14" met="101" rhyme="5" line_length="3">v jasnou skráň:</l>
     <l n="15" met="10001000" rhyme="6" line_length="8">nenazve svou Anduličku,</l>
     <l n="16" met="10011010" rhyme="6" line_length="8">nebude klást líčko k líčku –</l>
     <l n="17" met="10101000" rhyme="6" line_length="8">Proto, Bože, obilíčku</l>
     <l n="18" met="10101" rhyme="5" line_length="5">žehnej, chraň je, chraň!</l>
    </lg>
   </lg>
