  <front>
   <head>Vlaštovka a kavka.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101000" line_length="8">Nízko sobě laštovička</l>
     <l n="2" met="1010" rhyme="1" line_length="4">hnízdo staví,</l>
     <l n="3" met="01000010" line_length="8">a neztratí se jí ani</l>
     <l n="4" met="1010" rhyme="1" line_length="4">pírko z hlavy.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101000" line_length="8">Hle! jak kavka vysoko si</l>
     <l n="6" met="1010" rhyme="2" line_length="4">hnízdo chystá,</l>
     <l n="7" met="01001000" line_length="8">a přece tam životem svým</l>
     <l n="8" met="1010" rhyme="2" line_length="4">není jistá! –</l>
    </lg>
   </lg>
  </body>
