  <front>
   <head>VYHNI KRČMĚ...</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101000" rhyme="1" line_length="8">Vyhni krčmě, mládenečku,</l>
     <l n="2" met="100010" rhyme="2" line_length="6">červenému vínu,</l>
     <l n="3" met="01001000" rhyme="1" line_length="8">radš vyhledej studánečku</l>
     <l n="4" met="1010" rhyme="2" line_length="4">v lesa stínu:</l>
     <l n="5" met="10101000" rhyme="3" line_length="8">sotva vstoupíš do hospody,</l>
     <l n="6" met="10101010" rhyme="3" line_length="8">dojdeš na cti leda škody.</l>
    </lg>
    <lg n="2">
     <l n="7" met="10101000" rhyme="1" line_length="8">Vyhni krčmě, mládenečku,</l>
     <l n="8" met="101000" rhyme="4" line_length="6">poseď na zahrádce:</l>
     <l n="9" met="10001000" rhyme="1" line_length="8">v krčmě kdos tě při vínečku</l>
     <l n="10" met="1010" rhyme="4" line_length="4">strhne k hádce,</l>
     <l n="11" met="10100010" rhyme="5" line_length="8">bodneš, zavíráček v pěsti –</l>
     <l n="12" met="01100010" rhyme="5" line_length="8">a máš po klidu a štěstí.</l>
    </lg>
   </lg>
  </body>
