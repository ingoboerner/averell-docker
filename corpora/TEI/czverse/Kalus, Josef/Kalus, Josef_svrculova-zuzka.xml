  <front>
   <head>Švrčulova Zuzka.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10100010" rhyme="1" line_length="8">Kolem Švrčulovy Zuzky</l>
     <l n="2" met="10001010" rhyme="1" line_length="8">sletěly se bílé husky:</l>
     <l n="3" met="10010010" rhyme="2" line_length="8">„Pověz nám, pasačko malá,</l>
     <l n="4" met="100100" rhyme="3" line_length="6">pověz nám tolik jen:</l>
     <l n="5" met="000101" rhyme="3" line_length="6">proč jsi dnes celý den</l>
     <l n="6" met="1000" rhyme="2" line_length="4">nezpívala?“</l>
    </lg>
    <lg n="2">
     <l n="7" met="10001010" rhyme="1" line_length="8">„Povím vám, proč, milé husky:</l>
     <l n="8" met="10001010" rhyme="1" line_length="8">trhala jsem v hrachu lusky,</l>
     <l n="9" met="10001000" rhyme="4" line_length="8">dávala též do hubičky:</l>
     <l n="10" met="100100" rhyme="5" line_length="6">neměla chvilenky,</l>
     <l n="11" met="010100" rhyme="5" line_length="6">mé zlaté husenky,</l>
     <l n="12" met="1000" rhyme="4" line_length="4">na písničky!“</l>
    </lg>
   </lg>
  </body>
