  <front>
   <head>HONZÍČEK.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Rozběh se Honzíček</l>
     <l n="2" met="101010" rhyme="2" line_length="6">z vojny k rodné chatce,</l>
     <l n="3" met="100100" rhyme="1" line_length="6">pomýlil chodníček</l>
     <l n="4" met="010000" rhyme="2" line_length="6">kdes na křižovatce:</l>
     <l n="5" met="101010" rhyme="3" line_length="6">místo rovnou k městu,</l>
     <l n="6" met="101010" rhyme="3" line_length="6">měří k horám cestu.</l>
    </lg>
    <lg n="2">
     <l n="7" met="100100" rhyme="1" line_length="6">Zabloudil Honzíček</l>
     <l n="8" met="100010" rhyme="4" line_length="6">k podolanské stráni,</l>
     <l n="9" met="100100" rhyme="1" line_length="6">uslyšel z políček</l>
     <l n="10" met="101000" rhyme="4" line_length="6">dívčí helekání:</l>
     <l n="11" met="100010" rhyme="5" line_length="6">helekala Hanka</l>
     <l n="12" met="101000" rhyme="5" line_length="6">liběj nad skřivánka.</l>
    </lg>
    <lg n="3">
     <l n="13" met="100100" rhyme="1" line_length="6">Naslouchá Honzíček,</l>
     <l n="14" met="100010" rhyme="6" line_length="6">hlava se mu točí:</l>
     <l n="15" met="100100" rhyme="1" line_length="6">do sličných tvářiček,</l>
     <l n="16" met="100010" rhyme="6" line_length="6">do čarovných očí</l>
     <l n="17" met="101010" rhyme="7" line_length="6">hledí Haně zmámen –</l>
     <l n="18" met="000110" rhyme="7" line_length="6">Pak si ji vzal. – Amen.</l>
    </lg>
   </lg>
  </body>
