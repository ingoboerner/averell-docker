  <front>
   <head>PO DEŠTI.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101000" rhyme="1" line_length="6">Trávník udupaný</l>
     <l n="2" met="10001" rhyme="2" line_length="5">po dešti se zved,</l>
     <l n="3" met="100010" rhyme="1" line_length="6">nad obilné lány</l>
     <l n="4" met="10101" rhyme="2" line_length="5">zpěvný skřivan vzlét,</l>
     <l n="5" met="10001000" rhyme="3" line_length="8">obloha se promodrává,</l>
     <l n="6" met="10101010" rhyme="3" line_length="8">všichni ptáci pějí: „Sláva!“,</l>
     <l n="7" met="10101" rhyme="2" line_length="5">celý boží svět</l>
     <l n="8" met="10000" rhyme="2" line_length="5">rozjasnil se hned.</l>
    </lg>
   </lg>
  </body>
