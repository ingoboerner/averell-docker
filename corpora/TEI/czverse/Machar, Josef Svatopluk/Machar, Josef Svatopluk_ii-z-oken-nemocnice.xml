  <front>
   <head>II. Z oken nemocnice.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" line_length="5">Prořídlým nebem</l>
     <l n="2" met="1001" rhyme="1" line_length="4">za šerých rán</l>
     <l n="3" met="100101" line_length="6">z půlnoci táhnou v jih</l>
     <l n="4" met="1001" rhyme="1" line_length="4">houfové vran.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">V krajiny vzdálené,</l>
     <l n="6" met="110100" rhyme="2" line_length="6">vím, táhnou po ránu,</l>
     <l n="7" met="110100" line_length="6">vím, chtějí při tom být</l>
     <l n="8" met="100100" rhyme="2" line_length="6">u paty Balkánu.</l>
    </lg>
   </lg>
  </body>
