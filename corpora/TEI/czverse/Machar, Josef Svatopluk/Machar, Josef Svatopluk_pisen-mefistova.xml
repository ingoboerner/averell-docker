  <front>
   <head>PÍSEŇ MEFISTOVA</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Taškářů, zlodějů</l>
     <l n="2" met="10010" rhyme="1" line_length="5">netřeba bát se –</l>
     <l n="3" met="100100" line_length="6">buďto že nacpou se</l>
     <l n="4" met="10010" rhyme="1" line_length="5">anebo v krátce</l>
     <l n="5" met="100100" line_length="6">masku si sundají,</l>
     <l n="6" met="10010" rhyme="2" line_length="5">poznat se dají. –</l>
     <l n="7" met="100100" line_length="6">Budou buď chyceni –</l>
     <l n="8" met="10010" rhyme="2" line_length="5">nebo se nají –</l>
     <l n="9" met="01010" rhyme="2" line_length="5">a pokoj dají.</l>
    </lg>
    <lg n="2">
     <l n="10" met="100100" line_length="6">Bojte se poctivců,</l>
     <l n="11" met="10010" rhyme="3" line_length="5">kteřížto věří</l>
     <l n="12" met="100100" line_length="6">taškářům, zlodějům</l>
     <l n="13" met="01010" rhyme="3" line_length="5">i každé sběři –</l>
     <l n="14" met="010100" line_length="6">A chtějí dobro-li,</l>
     <l n="15" met="10010" rhyme="4" line_length="5">bojte se dvakrát,</l>
     <l n="16" met="100101" line_length="6">pod svícnem zloděj jde,</l>
     <l n="17" met="10010" rhyme="4" line_length="5">aby si nakrad.</l>
     <l n="18" met="10010" rhyme="4" line_length="5">Moudrosti základ.</l>
    </lg>
    <lg n="3">
     <l n="19" met="100100" line_length="6">Jde-li pak poctivec</l>
     <l n="20" met="10010" rhyme="5" line_length="5">ve velkém sboru –</l>
     <l n="21" met="100100" line_length="6">bojte se všechněch jich</l>
     <l n="22" met="01010" rhyme="5" line_length="5">víc nežli moru,</l>
     <l n="23" met="100100" line_length="6">poctivec chrání je</l>
     <l n="24" met="01000" rhyme="6" line_length="5">jak zřítelnici,</l>
     <l n="25" met="100100" line_length="6">proto s tím slepýšem</l>
     <l n="26" met="10000" rhyme="6" line_length="5">na šibenici,</l>
     <l n="27" met="10000" rhyme="6" line_length="5">na šibenici!</l>
    </lg>
   </lg>
  </body>
