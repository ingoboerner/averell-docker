  <front>
   <head>VERŠ PUŠKINŮV. (IV.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="01000100" rhyme="1" line_length="8">Vždy oddaný vám služebník</l>
     <l n="2" met="010100000" rhyme="2" line_length="9">vám píši, Veleosvícený,</l>
     <l n="3" met="01000101" rhyme="1" line_length="8">zvlášť vzdávaje svůj vřelý dík</l>
     <l n="4" met="100100010" rhyme="2" line_length="9">za pokyn vlastenecky cenný.</l>
    </lg>
    <lg n="2">
     <l n="5" met="01010001" rhyme="3" line_length="8">A vděčna musí být vám zem</l>
     <l n="6" met="010101000" rhyme="4" line_length="9">a jmeno vaše velebeno:</l>
     <l n="7" met="01010100" rhyme="3" line_length="8">dnes bylo ze škol úkazem</l>
     <l n="8" met="100101000" rhyme="4" line_length="9">hloubání všechno odstraněno.</l>
    </lg>
   </lg>
  </body>
