  <front>
   <head>XLVII. A JEŠTĚ ČASOVÉ ZPÍVÁNÍ</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Myši a žížaly,</l>
     <l n="2" met="000100" rhyme="1" line_length="6">jež jste se skrývaly</l>
     <l n="3" met="1001" rhyme="2" line_length="4">za bouří, zim</l>
     <l n="4" met="1000" rhyme="2" line_length="4">s míněním svým –</l>
    </lg>
    <lg n="2">
     <l n="5" met="010100" rhyme="3" line_length="6">ty sysle rozvážný,</l>
     <l n="6" met="010101" rhyme="3" line_length="6">jenž seděls celé dny</l>
     <l n="7" met="1000" rhyme="4" line_length="4">přeopatrn</l>
     <l n="8" met="1001" rhyme="4" line_length="4">u svojich zrn –</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" rhyme="5" line_length="6">všechny vy potvůrky,</l>
     <l n="10" met="010100" rhyme="5" line_length="6">jež ze své komůrky</l>
     <l n="11" met="1000" rhyme="6" line_length="4">nešly jste ven</l>
     <l n="12" met="1001" rhyme="6" line_length="4">v nejistý den –</l>
    </lg>
    <lg n="4">
     <l n="13" met="110100" rhyme="7" line_length="6">čas bije na dveře,</l>
     <l n="14" met="100100" rhyme="7" line_length="6">rovnejte páteře,</l>
     <l n="15" met="1000" rhyme="8" line_length="4">pomalíčko</l>
     <l n="16" met="1000" rhyme="8" line_length="4">na sluníčko!</l>
    </lg>
    <lg n="5">
     <l n="17" met="100100" rhyme="9" line_length="6">Vyznejte statečně,</l>
     <l n="18" met="000100" rhyme="9" line_length="6">že jste vždy konečně</l>
     <l n="19" met="0001" rhyme="10" line_length="4">– dnes už to jde –</l>
     <l n="20" met="1000" rhyme="10" line_length="4">věřili zde.</l>
    </lg>
    <lg n="6">
     <l n="21" met="100100" rhyme="11" line_length="6">Rytíři z Blaníka,</l>
     <l n="22" met="010100" rhyme="11" line_length="6">dnes hraje muzika</l>
     <l n="23" met="0101" rhyme="12" line_length="4">dle jiných not –</l>
     <l n="24" met="0100" rhyme="12" line_length="4">tož nyní: hot!</l>
    </lg>
    <lg n="7">
     <l n="25" met="100100" rhyme="13" line_length="6">Čehý a Zachovej</l>
     <l n="26" met="100101" rhyme="13" line_length="6">– pámbů jim pokoj dej! –</l>
     <l n="27" met="1000" rhyme="14" line_length="4">neplatí víc,</l>
     <l n="28" met="0101" rhyme="14" line_length="4">tož z plných plic</l>
    </lg>
    <lg n="8">
     <l n="29" met="100100" rhyme="15" line_length="6">prsní ton pusťte svůj,</l>
     <l n="30" met="100100" rhyme="15" line_length="6">směle: Kde domov můj!</l>
     <l n="31" met="1001" rhyme="16" line_length="4">Povýšte hlas –</l>
     <l n="32" met="1001" rhyme="16" line_length="4">nejvyšší čas!</l>
    </lg>
    <lg n="9">
     <l n="33" met="100100" rhyme="17" line_length="6">Jasno už chvíle té,</l>
     <l n="34" met="100100" rhyme="17" line_length="6">vlastenci, riskněte!</l>
     <l n="35" met="1001" rhyme="18" line_length="4">Zmizel už šer –</l>
     <l n="36" met="0101" rhyme="18" line_length="4">ven ze svých děr!</l>
    </lg>
   </lg>
