  <front>
   <head>XXXV O kvěť, o kvěť mi, růže,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010010" line_length="7">O kvěť, o kvěť mi, růže, </l>
     <l n="2" met="0100010" rhyme="1" line_length="7">až do pozdního léta,</l>
     <l n="3" met="1010010" line_length="7">nežli odejdu navždy</l>
     <l n="4" met="1000010" rhyme="1" line_length="7">do dalekého světa.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1000010" line_length="7">Do dalekého světa,</l>
     <l n="6" met="0100010" rhyme="2" line_length="7">víc nevrátím se domů;</l>
     <l n="7" met="1001010" line_length="7">k čemu se taky vracet –</l>
     <l n="8" met="0100110" rhyme="2" line_length="7">vždyť nebudu mít komu.</l>
    </lg>
   </lg>
  </body>
