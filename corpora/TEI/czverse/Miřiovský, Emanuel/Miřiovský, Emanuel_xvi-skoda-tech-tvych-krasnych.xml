  <front>
   <head>XVI Škoda těch tvých krásných očí,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001010" rhyme="1" line_length="8">Škoda těch tvých krásných očí, </l>
     <l n="2" met="01001000" rhyme="1" line_length="8">že se slzou neomočí,</l>
     <l n="3" met="10101010" rhyme="2" line_length="8">a ta bílá tvoje ruka</l>
     <l n="4" met="01000010" rhyme="2" line_length="8">že rozdává žel a muka.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101010" rhyme="3" line_length="8">Slza na tvém krásném oku</l>
     <l n="6" met="10001010" rhyme="3" line_length="8">byla by co perla v toku</l>
     <l n="7" met="10101010" rhyme="4" line_length="8">a ta bílá ruka tvoje</l>
     <l n="8" met="10101010" rhyme="4" line_length="8">jako strážný anděl boje.</l>
    </lg>
   </lg>
  </body>
