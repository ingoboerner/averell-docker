  <front>
   <head>Podzimní. (2.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001010" line_length="8">Poslední se dozvuk léta</l>
     <l n="2" met="1000100" rhyme="1" line_length="7">po strništi ubírá,</l>
     <l n="3" met="10101000" rhyme="2" line_length="8">ptačí hlasy zaplakaly,</l>
     <l n="4" met="10001010" rhyme="2" line_length="8">lašťovky se nesou v dáli,</l>
     <l n="5" met="1010100" rhyme="1" line_length="7">s nimi léto umírá.</l>
    </lg>
    <lg n="2">
     <l n="6" met="10101010" line_length="8">Pod mým oknem pozdní havran</l>
     <l n="7" met="1010100" rhyme="3" line_length="7">smutnou píseň krákoře:</l>
     <l n="8" met="10101010" rhyme="4" line_length="8">neplač, že ti prchlo léto,</l>
     <l n="9" met="01001010" rhyme="4" line_length="8">vždyť na zemské hroudě této</l>
     <l n="10" met="1010100" rhyme="3" line_length="7">žádný život bez hoře.</l>
    </lg>
   </lg>
  </body>
