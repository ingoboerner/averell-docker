  <front>
   <head>Podzimní. (4.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101000" line_length="8">Smutná píseň kolébavkou</l>
     <l n="2" met="1100100" rhyme="1" line_length="7">sen uloží do hrudi;</l>
     <l n="3" met="10001010" rhyme="2" line_length="8">bude se ti, srdce, zdáti</l>
     <l n="4" met="10001000" rhyme="2" line_length="8">o štěstí jak ve závrati,</l>
     <l n="5" met="0010100" rhyme="1" line_length="7">než tě den zas probudí.</l>
    </lg>
    <lg n="2">
     <l n="6" met="10101000" line_length="8">Do snu spánek nakape ti</l>
     <l n="7" met="1010100" rhyme="3" line_length="7">sladkých slzí krůpěje;</l>
     <l n="8" met="00101010" rhyme="4" line_length="8">pak tvé žití z běd a žele,</l>
     <l n="9" met="10001000" rhyme="4" line_length="8">nešvarné a neveselé,</l>
     <l n="10" met="1010100" rhyme="3" line_length="7">krovem smrti přikreje.</l>
    </lg>
   </lg>
  </body>
