  <front>
   <head>Anemone triloba. (1.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10000010" line_length="8">Vypučelas mi tak krásně,</l>
     <l n="2" met="10101000" rhyme="1" line_length="8">růže moje na potoce,</l>
     <l n="3" met="01001000" line_length="8">jak myšlenka básníkova</l>
     <l n="4" met="10001010" rhyme="1" line_length="8">v nejpěknější písně sloce.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101010" rhyme="2" line_length="8">Šťasten, kdo se stopiť může</l>
     <l n="6" met="10101000" rhyme="3" line_length="8">v krásy písní opěvané,</l>
     <l n="7" met="10001010" rhyme="2" line_length="8">šťastnější však, komu růže</l>
     <l n="8" met="10001010" rhyme="3" line_length="8">na záňadří touhou vzplane.</l>
    </lg>
   </lg>
  </body>
