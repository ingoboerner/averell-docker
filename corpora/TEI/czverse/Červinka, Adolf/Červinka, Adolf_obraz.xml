  <front>
   <head>OBRAZ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010010010" rhyme="1" line_length="11">Říjnové večery hlásí se tiše,</l>
     <l n="2" met="10010010" rhyme="2" line_length="8">smutek jich v duši mou padá,</l>
     <l n="3" met="10010010010" rhyme="1" line_length="11">slunce už odešlo v daleké říše,</l>
     <l n="4" met="10010010" rhyme="2" line_length="8">v samotách utichla lada.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010010010" rhyme="3" line_length="11">Pasačky u ohně zpívají ještě,</l>
     <l n="6" met="10010010" rhyme="4" line_length="8">za tmy se vracejí domů,</l>
     <l n="7" met="10010010010" rhyme="3" line_length="11">pomalu šelestí krůpěje deště</l>
     <l n="8" met="10010010" rhyme="4" line_length="8">v aleji tesknících stromů...</l>
    </lg>
   </lg>
  </body>
