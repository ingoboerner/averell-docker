  <front>
   <head>Vzpomínám. (II.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">Červená se vížka</l>
     <l n="2" met="1000" rhyme="1" line_length="4">pod horami –</l>
     <l n="3" met="100010" line_length="6">daleká je cesta</l>
     <l n="4" met="1010" rhyme="1" line_length="4">mezi námi.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" line_length="6">Zvedají se k nebi</l>
     <l n="6" met="1010" rhyme="2" line_length="4">hory černé –</l>
     <l n="7" met="100010" line_length="6">vzpomínají na Tě</l>
     <l n="8" met="1010" rhyme="2" line_length="4">oči věrné.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100010" line_length="6">Polibků Ti tolik</l>
     <l n="10" met="1000" rhyme="3" line_length="4">posýlají,</l>
     <l n="11" met="001010" line_length="6">co tu drobní ptáci</l>
     <l n="12" met="1010" rhyme="3" line_length="4">písní znají.</l>
    </lg>
   </lg>
  </body>
