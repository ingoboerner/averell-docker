  <front>
   <head>Vzpomínám. (I.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" line_length="5">Vzpomínám, věříš,</l>
     <l n="2" met="101" rhyme="1" line_length="3">den co den,</l>
     <l n="3" met="10010" line_length="5">i když se hroužím</l>
     <l n="4" met="101" rhyme="1" line_length="3">v tichý sen.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010" line_length="5">Vzpomínek jako</l>
     <l n="6" met="101" rhyme="2" line_length="3">v nebi hvězd,</l>
     <l n="7" met="10010" line_length="5">jedna z nich krasší</l>
     <l n="8" met="100" rhyme="2" line_length="3">druhé jest.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10001" line_length="5">Vzpomínek, co má</l>
     <l n="10" met="101" rhyme="3" line_length="3">květů luh,</l>
     <l n="11" met="01010" line_length="5">když po něm kráčí</l>
     <l n="12" met="101" rhyme="3" line_length="3">jara bůh.</l>
    </lg>
   </lg>
  </body>
