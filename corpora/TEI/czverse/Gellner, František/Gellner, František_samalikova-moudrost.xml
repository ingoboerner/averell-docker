  <front>
   <head>ŠAMALÍKOVA MOUDROST</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001010" rhyme="1" line_length="8">Milých svých i díla nechá</l>
     <l n="2" met="10101010" rhyme="1" line_length="8">vojín, pod svůj prapor spěchá.</l>
    </lg>
    <lg n="2">
     <l n="3" met="10101010" rhyme="2" line_length="8">Vojnou roste břímě daní,</l>
     <l n="4" met="10101010" rhyme="2" line_length="8">těžko občan groše shání.</l>
    </lg>
    <lg n="3">
     <l n="5" met="10101000" rhyme="3" line_length="8">Hynou bratři na bojišti</l>
     <l n="6" met="10001010" rhyme="3" line_length="8">pro slovanské jitro příští.</l>
    </lg>
   </lg>
  </body>
