  <front>
   <head>RAKOUSKÝ DVOJÍ LOKET</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101000" rhyme="1" line_length="6">Z bytu vypovídat,</l>
     <l n="2" met="101000" rhyme="2" line_length="6">z práce vyháněti</l>
     <l n="3" met="10001010" rhyme="1" line_length="8">rodiče, když nechtí vydat</l>
     <l n="4" met="100110" rhyme="2" line_length="6">cizincům v plen děti –</l>
     <l n="5" met="001" line_length="3">to se smí!</l>
    </lg>
    <lg n="2">
     <l n="6" met="10001000" rhyme="3" line_length="8">Ale když se odměňuješ,</l>
     <l n="7" met="10101000" rhyme="3" line_length="8">panstvu kupce odraďuješ,</l>
     <l n="8" met="0010100" rhyme="4" line_length="7">hned jsi státu nepřítel –</l>
     <l n="9" met="1010100" rhyme="4" line_length="7">sáhnout Němci na pytel,</l>
     <l n="10" met="0010" line_length="4">to se nesmí!</l>
    </lg>
   </lg>
  </body>
