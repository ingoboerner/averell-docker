  <front>
   <head>PÍSEŇ ZHÝRALÉHO JINOCHA</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000100" rhyme="1" line_length="7">Nezemru já od práce,</l>
     <l n="2" met="100010" rhyme="2" line_length="6">nezahynu bídou,</l>
     <l n="3" met="1000100" rhyme="1" line_length="7">nezalknu se v oprátce,</l>
     <l n="4" met="101000" rhyme="2" line_length="6">skončím syfilidou.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1000100" rhyme="3" line_length="7">Nezemru já u holky</l>
     <l n="6" met="101000" rhyme="4" line_length="6">ani na silnici.</l>
     <l n="7" met="1010100" rhyme="3" line_length="7">Zemru volky nevolky</l>
     <l n="8" met="101000" rhyme="4" line_length="6">klidně v nemocnici.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1000100" rhyme="5" line_length="7">Nezískal jsem za živa</l>
     <l n="10" met="101010" rhyme="6" line_length="6">lásky skutky svými.</l>
     <l n="11" met="1000100" rhyme="5" line_length="7">Jeptiška jen šedivá</l>
     <l n="12" met="101000" rhyme="6" line_length="6">oči zatlačí mi.</l>
    </lg>
    <lg n="4">
     <l n="13" met="1010101" rhyme="7" line_length="7">Nad mou mrchou stáhne clown</l>
     <l n="14" met="101010" rhyme="8" line_length="6">tvář svou v smutnou masku:</l>
     <l n="15" met="1010101" rhyme="7" line_length="7">„Zemřel tady vilný Faun</l>
     <l n="16" met="100010" rhyme="8" line_length="6">na nešťastnou lásku.“</l>
    </lg>
   </lg>
  </body>
