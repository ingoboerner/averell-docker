  <front>
   <head>MILUJU SEVERNÍ NEBE</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010010" line_length="8">Miluju severní nebe</l>
     <l n="2" met="100100" rhyme="1" line_length="6">bílé a bez citu,</l>
     <l n="3" met="1001010010" line_length="10">kterým se marně prodírá slunce</l>
     <l n="4" met="100100" rhyme="1" line_length="6">chladné a bez svitu.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010010" line_length="8">Miluju severní pláně</l>
     <l n="6" met="1001001" rhyme="2" line_length="7">se smutkem zavátých cest.</l>
     <l n="7" met="10010010" line_length="8">Miluju večerní mlhy</l>
     <l n="8" met="100100" rhyme="2" line_length="6">severních velkoměst.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010010" line_length="8">Miluju severní muže</l>
     <l n="10" met="1100001" rhyme="3" line_length="7">těl těžkopádných a mdlých</l>
     <l n="11" met="10010010" line_length="8">s bezradnou, truchlivou touhou</l>
     <l n="12" met="10100" rhyme="3" line_length="5">v srdcích tesklivých.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10010010" line_length="8">Miluju severní ženy</l>
     <l n="14" met="1001001" rhyme="4" line_length="7">bázlivě stulené v tmách,</l>
     <l n="15" met="101000010" line_length="9">které prožívají své lásky</l>
     <l n="16" met="10100" rhyme="4" line_length="5">v snech a vzpomínkách.</l>
    </lg>
   </lg>
  </body>
