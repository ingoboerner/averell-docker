  <front>
   <head>SENTIMENTÁLNÍ ŽÁDOSTI</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="110100100" rhyme="1" line_length="9">Má touha rameno hubené</l>
     <l n="2" met="1010010" rhyme="2" line_length="7">v pláči vášnivém zvedá.</l>
     <l n="3" met="10100100" rhyme="1" line_length="8">Teplo zhaslého plamene</l>
     <l n="4" met="10010010" rhyme="2" line_length="8">v studeném popeli hledá.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10000100" rhyme="3" line_length="8">Sentimentální žádosti</l>
     <l n="6" met="10010010" rhyme="4" line_length="8">v duši mé křídloma tlukou.</l>
     <l n="7" met="0101001001" rhyme="3" line_length="10">Má touha pláče a tělu se mstí</l>
     <l n="8" met="10010010" rhyme="4" line_length="8">třeštivou, horečnou mukou.</l>
    </lg>
    <lg n="3">
     <l n="9" met="01010100" rhyme="3" line_length="8">Jsem dneska zase nemocný.</l>
     <l n="10" met="11010010" rhyme="5" line_length="8">Krev v spáncích bije mi prudce.</l>
     <l n="11" met="100100101" rhyme="3" line_length="9">Tesklivě sahají v moje sny</l>
     <l n="12" met="11010010" rhyme="5" line_length="8">dvě bílé, panenské ruce.</l>
    </lg>
   </lg>
  </body>
