   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101" rhyme="1" line_length="5">Skrze lidský břich</l>
     <l n="2" met="10101" rhyme="1" line_length="5">pošel mnohý hřích;</l>
     <l n="3" met="1010100" rhyme="2" line_length="7">dobře tedy od břicha</l>
     <l n="4" met="1001010" rhyme="2" line_length="7">vzato jest jméno hřícha.</l>
