   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10100101010" line_length="11">Dokud svědčí ti štěstí, hleď, bys všeho</l>
     <l n="2" met="10100101000" line_length="11">moudře užíval. Moudré požívání</l>
     <l n="3" met="10100101010" line_length="11">štěstí rozmnoží; zlou pak krásný kvítek</l>
     <l n="4" met="10010" line_length="5">potřebou zvadne.</l>
    </lg>
   </lg>
