 <text>
  <front>
   <head>Co dítě jsem je slýchal</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="0100010" line_length="7">Co dítě jsem je slýchal </l>
     <l n="2" met="0100010" rhyme="1" line_length="7">ty Loretánské zvuky</l>
     <l n="3" met="0100010" line_length="7">a srdéčko mé chtělo</l>
     <l n="4" met="1101010" rhyme="1" line_length="7">v svět šírý nést své tluky.</l>
    </lg>
    <lg n="2">
     <l n="5" met="0101010" line_length="7">Co muž je nyní slyším</l>
     <l n="6" met="0100010" rhyme="2" line_length="7">a k prsoum jsem si sáhnul –</l>
     <l n="7" met="1001010" line_length="7">rád bych to velké srdce</l>
     <l n="8" met="0100010" rhyme="2" line_length="7">zas ve srdéčko stáhnul!</l>
    </lg>
   </lg>
  </body>
 </text>
