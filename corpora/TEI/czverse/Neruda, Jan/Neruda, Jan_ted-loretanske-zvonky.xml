  <front>
   <head>Teď Loretánské zvonky</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="0100010" line_length="7">Teď Loretánské zvonky </l>
     <l n="2" met="1001010" rhyme="1" line_length="7">večerní ave zvoní</l>
     <l n="3" met="0110010" line_length="7">a tón za tónem splývá,</l>
     <l n="4" met="0001010" rhyme="1" line_length="7">jak když se slzy roní.</l>
    </lg>
    <lg n="2">
     <l n="5" met="0100010" line_length="7">Dřív s Loretánské věže</l>
     <l n="6" met="0101010" rhyme="2" line_length="7">i jiné písně zněly,</l>
     <l n="7" met="0101000" line_length="7">však zvonky sestárly už</l>
     <l n="8" met="0101000" rhyme="2" line_length="7">a plakat zapomněly.</l>
    </lg>
   </lg>
  </body>
