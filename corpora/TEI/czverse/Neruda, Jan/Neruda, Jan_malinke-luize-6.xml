  <front>
   <head>MALINKÉ LUIZE (6)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="0101010" line_length="7">Tvé velké černé oko,</l>
     <l n="2" met="010100" rhyme="1" line_length="6">tvůj hlas mne odehnal,</l>
     <l n="3" met="0101010" line_length="7">a hrdě vztýčím hlavu,</l>
     <l n="4" met="010100" rhyme="1" line_length="6">a hrdě kráčím dál.</l>
    </lg>
    <lg n="2">
     <l n="5" met="0101010" line_length="7">A předce krok můj váhá</l>
     <l n="6" met="010100" rhyme="2" line_length="6">a hledím dokola,</l>
     <l n="7" met="0101010" line_length="7">zdaž velké černé oko</l>
     <l n="8" met="010100" rhyme="2" line_length="6">mne nazpět nevolá.</l>
    </lg>
   </lg>
  </body>
