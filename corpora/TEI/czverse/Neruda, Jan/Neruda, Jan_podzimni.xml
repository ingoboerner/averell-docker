  <front>
   <head>PODZIMNÍ</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100100100" line_length="12">Sluníčko, ještě jen jednou tak poskoč si</l>
     <l n="2" met="11001000" rhyme="1" line_length="8">z hor východních do oblohy,</l>
     <l n="3" met="0100100100" rhyme="2" line_length="10">jak tenkrát, když z dětské své postele</l>
     <l n="4" met="0100100100" rhyme="2" line_length="10">jsem každého rána tak vesele</l>
     <l n="5" met="01001010" rhyme="1" line_length="8">své vyšvihnul mladé nohy!</l>
    </lg>
    <lg n="2">
     <l n="6" met="100100100100" line_length="12">Sluníčko, ještě jen jedinkrát zasměj se</l>
     <l n="7" met="01001000" rhyme="3" line_length="8">tak zplna, a bez ostychu,</l>
     <l n="8" met="0100100100" rhyme="4" line_length="10">jak tenkrát, když oči své pozvednout</l>
     <l n="9" met="0100100100" rhyme="4" line_length="10">a na tebe, sluníčko, pohlédnout</l>
     <l n="10" met="01001010" rhyme="3" line_length="8">jsem nedoved beze smíchu!</l>
    </lg>
    <lg n="3">
     <l n="11" met="100100100100" line_length="12">Sluníčko, ještě jen jednou tak zatoč se,</l>
     <l n="12" met="01001010" rhyme="5" line_length="8">jak tenkráte – prosím tebe –</l>
     <l n="13" met="0101100100" rhyme="6" line_length="10">když den co den, jakoby z úkolu,</l>
     <l n="14" met="0100100100" rhyme="6" line_length="10">jsme tančili světem si pospolu</l>
     <l n="15" met="01001010" rhyme="5" line_length="8">a kolem nás nebe – nebe!</l>
    </lg>
   </lg>
