  <front>
   <head>ČESKÉ NÁPĚVY (5)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101000" line_length="6">Lidé povídali,</l>
     <l n="2" met="001010" rhyme="1" line_length="6">že to vítr pláče, –</l>
     <l n="3" met="101010" line_length="6">a to moje srdce</l>
     <l n="4" met="100010" rhyme="1" line_length="6">výská si a skáče.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101000" line_length="6">Lidé povídali,</l>
     <l n="6" met="001010" rhyme="2" line_length="6">že se počlo tmíti, –</l>
     <l n="7" met="101010" line_length="6">a to moje oko</l>
     <l n="8" met="100010" rhyme="2" line_length="6">radostí se svítí.</l>
    </lg>
    <lg n="3">
     <l n="9" met="101000" line_length="6">Lidé povídali,</l>
     <l n="10" met="001010" rhyme="3" line_length="6">že se zcela stmělo, –</l>
     <l n="11" met="101010" line_length="6">a to moje děvče</l>
     <l n="12" met="100010" rhyme="3" line_length="6">věrností se stkvělo.</l>
    </lg>
   </lg>
  </body>
