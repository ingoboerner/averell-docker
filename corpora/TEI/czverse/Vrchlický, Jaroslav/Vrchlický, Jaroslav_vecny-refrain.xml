  <front>
   <head>VĚČNÝ REFRAIN.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1101010" rhyme="1" line_length="7">List svadlý, který depce</l>
     <l n="2" met="0101010" rhyme="1" line_length="7">tvá noha, zticha šepce:</l>
     <l n="3" met="10" line_length="2">zhynem!</l>
    </lg>
    <lg n="2">
     <l n="4" met="1101000" rhyme="2" line_length="7">Květ aster na záhonu</l>
     <l n="5" met="0101010" rhyme="2" line_length="7">si vzdychne v léta sklonu:</l>
     <l n="6" met="10" line_length="2">zhynem!</l>
    </lg>
    <lg n="3">
     <l n="7" met="1001000" rhyme="3" line_length="7">Ve mlhy padající</l>
     <l n="8" met="1101000" rhyme="3" line_length="7">dí hvězda ku měsíci:</l>
     <l n="9" met="10" line_length="2">zhynem!</l>
    </lg>
    <lg n="4">
     <l n="10" met="0101000" rhyme="4" line_length="7">Ba vlna zahovoří</l>
     <l n="11" met="1001010" rhyme="4" line_length="7">ku sestře cestou k moři:</l>
     <l n="12" met="10" line_length="2">zhynem!</l>
    </lg>
    <lg n="5">
     <l n="13" met="1101000" rhyme="5" line_length="7">Dí máj v svém usmívání</l>
     <l n="14" met="0101010" rhyme="5" line_length="7">i léto ve svém plání:</l>
     <l n="15" met="10" line_length="2">zhynem!</l>
    </lg>
    <lg n="6">
     <l n="16" met="1001010" rhyme="6" line_length="7">K zimě se jeseň chýlí,</l>
     <l n="17" met="0101010" rhyme="6" line_length="7">a z větrů strun to kvílí:</l>
     <l n="18" met="10" line_length="2">zhynem!</l>
    </lg>
    <lg n="7">
     <l n="19" met="0101010" rhyme="7" line_length="7">Ba srdce tvého tmavý</l>
     <l n="20" met="0100110" rhyme="7" line_length="7">a nestejný tluk praví:</l>
     <l n="21" met="10" line_length="2">zhynem!</l>
    </lg>
    <lg n="8">
     <l n="22" met="1001010" rhyme="8" line_length="7">Kyvadlo hodin zticha</l>
     <l n="23" met="0101010" rhyme="8" line_length="7">svým taktem stále vzdychá:</l>
     <l n="24" met="10" line_length="2">zhynem!</l>
    </lg>
    <lg n="9">
     <l n="25" met="1101010" rhyme="9" line_length="7">Sad květný, skála holá</l>
     <l n="26" met="0101010" rhyme="9" line_length="7">i kolo k dlažbě volá:</l>
     <l n="27" met="10" line_length="2">zhynem!</l>
    </lg>
    <lg n="10">
     <l n="28" met="0101010" rhyme="10" line_length="7">A dómy, štíty hradu</l>
     <l n="29" met="1100010" rhyme="10" line_length="7">zní o zmaru a pádu:</l>
     <l n="30" met="10" line_length="2">zhynem!</l>
    </lg>
    <lg n="11">
     <l n="31" met="0100010" rhyme="11" line_length="7">Tak prostorem a časy</l>
     <l n="32" met="0101010" rhyme="11" line_length="7">se valí chmurné hlasy:</l>
     <l n="33" met="10" line_length="2">zhynem!</l>
    </lg>
    <lg n="12">
     <l n="34" met="0100010" rhyme="12" line_length="7">Vlá růžemi i blínem</l>
     <l n="35" met="0101010" rhyme="12" line_length="7">a světlem jako stínem:</l>
     <l n="36" met="10" line_length="2">zhynem!</l>
    </lg>
   </lg>
