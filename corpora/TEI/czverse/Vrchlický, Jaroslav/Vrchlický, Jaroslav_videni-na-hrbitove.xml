  <front>
   <head>Vidění na hřbitově.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010010" rhyme="1" line_length="8">Vzkříšené tajemnou mocí</l>
     <l n="2" met="10010010" rhyme="1" line_length="8">z hrobů svých povstaly v noci.</l>
    </lg>
    <lg n="2">
     <l n="3" met="10010010" rhyme="2" line_length="8">Vichřicí hnaly se kolem,</l>
     <l n="4" met="10010010" rhyme="2" line_length="8">úpěly, vzdychaly bolem.</l>
    </lg>
    <lg n="3">
     <l n="5" met="10110010" rhyme="3" line_length="8">Bílý háv, kostnaté líce,</l>
     <l n="6" met="10010010" rhyme="3" line_length="8">ve hnátech držely svíce.</l>
    </lg>
    <lg n="4">
     <l n="7" met="10010010" rhyme="4" line_length="8">Mlhou a v měsíčné jasy</l>
     <l n="8" met="10010010" rhyme="4" line_length="8">vířící zněly jich hlasy.</l>
    </lg>
    <lg n="5">
     <l n="9" met="10010010" rhyme="5" line_length="8">Slavné jak sborové pění</l>
     <l n="10" met="10010010" rhyme="5" line_length="8">asketů v mystickém bdění.</l>
    </lg>
    <lg n="6">
     <l n="11" met="10010110" rhyme="6" line_length="8">Zoufalý, vzteklý ryk jeden</l>
     <l n="12" met="10010010" rhyme="6" line_length="8">jakby kdos k popravě veden.</l>
    </lg>
    <lg n="7">
     <l n="13" met="10010110" rhyme="7" line_length="8">Nyjící v tónů mdlých změti</l>
     <l n="14" met="10010010" rhyme="7" line_length="8">jakoby zpívaly děti.</l>
    </lg>
    <lg n="8">
     <l n="15" met="10010010" rhyme="8" line_length="8">Vášnivé, jásavé, šťastné</l>
     <l n="16" met="01010010" rhyme="8" line_length="8">jak v smrti shledání krásné.</l>
    </lg>
    <lg n="9">
     <l n="17" met="10010010" rhyme="9" line_length="8">Hnaly se kolem tak nocí</l>
     <l n="18" met="10010010" rhyme="9" line_length="8">vzkříšené tajemnou mocí.</l>
    </lg>
    <lg n="10">
     <l n="19" met="10010010" rhyme="10" line_length="8">Všecky ty jásoty, mdloby,</l>
     <l n="20" met="10001010" rhyme="10" line_length="8">od věků jež spjaly hroby,</l>
    </lg>
    <lg n="11">
     <l n="21" met="10010010" rhyme="11" line_length="8">celé v nich lidstvo se chvělo,</l>
     <l n="22" met="10110010" rhyme="11" line_length="8">vášeň, cit, rozum i tělo.</l>
    </lg>
    <lg n="12">
     <l n="23" met="10010010" rhyme="12" line_length="8">Vichřicí hnaly se kolem –</l>
     <l n="24" met="10010010" rhyme="12" line_length="8">A já svým chápal je bolem.</l>
    </lg>
   </lg>
  </body>
