  <front>
   <head>Píseň ironická.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100101" rhyme="1" line_length="6">Nebude jiný svět!</l>
     <l n="2" met="100100" rhyme="1" line_length="6">Hleďme mu rozumět,</l>
     <l n="3" met="0101010" rhyme="2" line_length="7">on pán je, my jsme sluzi;</l>
     <l n="4" met="100100" rhyme="3" line_length="6">o něco sázíme,</l>
     <l n="5" met="100100" rhyme="3" line_length="6">v prachu se plazíme</l>
     <l n="6" met="0110010" rhyme="2" line_length="7">a plod seberou – druzí.</l>
    </lg>
    <lg n="2">
     <l n="7" met="100101" rhyme="1" line_length="6">Nebude jiný svět!</l>
     <l n="8" met="100101" rhyme="1" line_length="6">Spousta jen cetek, tret...</l>
     <l n="9" met="0110010" rhyme="2" line_length="7">On zdroj a my v něm pstruzi;</l>
     <l n="10" met="100100" rhyme="4" line_length="6">Šupinou zablýsknem,</l>
     <l n="11" met="100100" rhyme="4" line_length="6">nestýsknem, nevýsknem,</l>
     <l n="12" met="01001010" rhyme="2" line_length="8">nás chytí a snědí – druzí.</l>
    </lg>
   </lg>
  </body>
