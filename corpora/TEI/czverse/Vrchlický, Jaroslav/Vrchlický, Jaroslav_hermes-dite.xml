  <front>
   <head>HERMES DÍTĚ</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001000" line_length="8">Zavalitý, baculatý,</l>
     <l n="2" met="101" rhyme="1" line_length="3">milý hoch,</l>
     <l n="3" met="10100110" rhyme="2" line_length="8">líčko plné a ret vzdmutý,</l>
     <l n="4" met="10101000" rhyme="2" line_length="8">čapky okraj přehrnutý,</l>
     <l n="5" met="1010100" rhyme="1" line_length="7">ouška jako kozonoh.</l>
     <l n="6" met="10100010" rhyme="3" line_length="8">Všecko šibalství, kde které</l>
     <l n="7" met="010" rhyme="4" line_length="3">tu i tam,</l>
     <l n="8" met="101001010" rhyme="3" line_length="9">choutky, úklady, vtipky steré</l>
     <l n="9" met="10101000" rhyme="3" line_length="8">finty, spády tisíceré</l>
     <l n="10" met="1000101" rhyme="4" line_length="7">ilusí všech hravý klam.</l>
    </lg>
    <lg n="2">
     <l n="11" met="10101010" rhyme="5" line_length="8">Všecko v této dětské tváři</l>
     <l n="12" met="101" rhyme="6" line_length="3">skryto spí,</l>
     <l n="13" met="10001000" rhyme="5" line_length="8">taškáři a proletáři</l>
     <l n="14" met="10001010" rhyme="5" line_length="8">zpijící se slunce září,</l>
     <l n="15" met="1010101" rhyme="6" line_length="7">kteří Bakcha darem čpí.</l>
    </lg>
    <lg n="3">
     <l n="16" met="10001010" rhyme="7" line_length="8">Lotříci a chytří kupci</l>
     <l n="17" met="1010100" rhyme="8" line_length="7">zdraví tebe patronem,</l>
     <l n="18" met="1010" rhyme="7" line_length="4">v žertu k šnupci</l>
     <l n="19" met="100100010" rhyme="6" line_length="9">lupiči, pomůžeš-li hlupci,</l>
     <l n="20" met="1001100" rhyme="8" line_length="7">všickni jimž lest zákonem.</l>
    </lg>
    <lg n="4">
     <l n="21" met="001100" rhyme="9" line_length="6">Kdo by řek, později</l>
     <l n="22" met="01010" rhyme="10" line_length="5">tvou spatřiv vnadu,</l>
     <l n="23" met="01001010" rhyme="10" line_length="8">že povedeš v stíny Hádu</l>
     <l n="24" met="10100010" rhyme="10" line_length="8">duší nekonečnou řadu</l>
     <l n="25" met="1010100" rhyme="9" line_length="7">k Styxu chladné peřeji?</l>
    </lg>
   </lg>
