  <front>
   <head>Mladá dívka. (II.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100100" rhyme="1" line_length="9">Zalívá denně svou květinu.</l>
     <l n="2" met="0101010" rhyme="2" line_length="7">Co chvilek nad ní prosní!</l>
     <l n="3" met="010010100" rhyme="1" line_length="9">Již plní jí srdce hlubinu,</l>
     <l n="4" met="0100010" rhyme="2" line_length="7">ti snové jsou tak rosní!</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100100" rhyme="1" line_length="9">Zalívá denně svou květinu.</l>
     <l n="6" met="0101010" rhyme="3" line_length="7">Co chvilek nad ní prodlí!</l>
     <l n="7" met="110100100" rhyme="1" line_length="9">Smích ústky otřásá z rubínů,</l>
     <l n="8" met="0100010" rhyme="3" line_length="7">však duše – ta se modlí.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100100" rhyme="1" line_length="9">Zalívá denně svou květinu</l>
     <l n="10" met="0100010" rhyme="4" line_length="7">a v polosnění neví,</l>
     <l n="11" met="010010100" rhyme="1" line_length="9">že na vlastní patří nevinu</l>
     <l n="12" met="01001010" rhyme="4" line_length="8">a hluboký půvab děví.</l>
    </lg>
   </lg>
  </body>
