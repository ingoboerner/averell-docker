  <front>
   <head>PRIMAVERA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001000" rhyme="1" line_length="8">Primavera! Primavera!</l>
     <l n="2" met="00101010" rhyme="1" line_length="8">Jak to voní, zvoní z šera,</l>
     <l n="3" met="00001010" rhyme="2" line_length="8">jak by se v tom vzduchu chvěly,</l>
     <l n="4" met="10101010" rhyme="2" line_length="8">křídly tloukly, lkaly, pěly</l>
     <l n="5" met="1000100" rhyme="3" line_length="7">zástupy těch hubiček,</l>
     <l n="6" met="10101010" line_length="8">které sláká letem ptáka</l>
     <l n="7" met="1010100" rhyme="3" line_length="7">dívkám v rty a do líček</l>
     <l n="8" met="10001010" line_length="8">skotačivá, lstivá, snivá</l>
     <l n="9" met="1000" rhyme="1" line_length="4">Primavera!</l>
    </lg>
    <lg n="2">
     <l n="10" met="10001000" rhyme="1" line_length="8">Primavera! Primavera!</l>
     <l n="11" met="10101010" rhyme="1" line_length="8">Bledá, hnědá, nevím která,</l>
     <l n="12" met="10101010" rhyme="4" line_length="8">děti s tmavým, plavým vlasem</l>
     <l n="13" met="100001010" rhyme="4" line_length="9">milujete! Vše prchá časem,</l>
     <l n="14" met="1010100" rhyme="3" line_length="7">vrásky skanou do líček,</l>
     <l n="15" met="00101000" line_length="8">jen se smějte, přilákejte</l>
     <l n="16" met="1000100" rhyme="3" line_length="7">zástupy těch hubiček,</l>
     <l n="17" met="01101010" line_length="8">jež má v lůně, lesk a vůně,</l>
     <l n="18" met="1000" rhyme="1" line_length="4">Primavera!</l>
    </lg>
   </lg>
  </body>
