  <front>
   <head>I. EVA. (1.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Podzimní sluníčko,</l>
     <l n="2" met="10010" rhyme="2" line_length="5">sluníčko smutné,</l>
     <l n="3" met="100100" rhyme="1" line_length="6">uhasne brzičko,</l>
     <l n="4" met="10010" rhyme="2" line_length="5">jako když utne.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" rhyme="3" line_length="6">Nežli se vytratí,</l>
     <l n="6" met="10010" rhyme="4" line_length="5">loučí se s námi,</l>
     <l n="7" met="100100" rhyme="3" line_length="6">naposled pozlatí</l>
     <l n="8" met="11010" rhyme="4" line_length="5">strop, zdi i rámy.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" rhyme="5" line_length="6">Naposled ozáří</l>
     <l n="10" met="10010" rhyme="6" line_length="5">všecko svým zlatem,</l>
     <l n="11" met="100100" rhyme="5" line_length="6">dcerušce po tváři</l>
     <l n="12" met="10010" rhyme="6" line_length="5">sjede též chvatem.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100100" rhyme="7" line_length="6">Na vlásky skane jí,</l>
     <l n="14" met="10010" rhyme="8" line_length="5">svitem je skropí,</l>
     <l n="15" met="010100" rhyme="7" line_length="6">ba v zlatou peřeji</l>
     <l n="16" met="10010" rhyme="8" line_length="5">celou ji ztopí.</l>
    </lg>
    <lg n="5">
     <l n="17" met="100100" rhyme="9" line_length="6">Pohladí naposled</l>
     <l n="18" met="10010" rhyme="10" line_length="5">vlásky ty jasné,</l>
     <l n="19" met="100100" rhyme="9" line_length="6">a než jsi k horám vzhled’,</l>
     <l n="20" met="10010" rhyme="10" line_length="5">zanikne, zhasne.</l>
    </lg>
    <lg n="6">
     <l n="21" met="100101" rhyme="11" line_length="6">Hádej teď divnou věc,</l>
     <l n="22" met="00110" rhyme="12" line_length="5">kde je zrak zočí?</l>
     <l n="23" met="100100" rhyme="11" line_length="6">Celičké svítí přec</l>
     <l n="24" met="10010" rhyme="12" line_length="5">dcerušce z očí.</l>
    </lg>
   </lg>
  </body>
