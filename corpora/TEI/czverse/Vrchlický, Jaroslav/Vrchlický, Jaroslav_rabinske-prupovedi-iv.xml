  <front>
   <head>RABINSKÉ PRŮPOVĚDI. (IV.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="110110" rhyme="1" line_length="6">Věř, trojí druh lidí</l>
     <l n="2" met="101000" rhyme="1" line_length="6">Jahvé nenávidí,</l>
     <l n="3" met="100010" line_length="6">boháče, jenž krade</l>
     <l n="4" met="010010" rhyme="1" line_length="6">a chudáka šidí,</l>
     <l n="5" met="100010" line_length="6">chuďasa, jenž hrd jest,</l>
     <l n="6" met="001010" rhyme="2" line_length="6">když se dar mu skýtá,</l>
     <l n="7" met="100010" line_length="6">starce pak, jenž každé</l>
     <l n="8" met="100010" rhyme="2" line_length="6">zástěrky se chytá.</l>
    </lg>
   </lg>
  </body>
