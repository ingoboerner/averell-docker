  <front>
   <head>Útěcha.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="00010" rhyme="1" line_length="5">V čem jsi byl raněn,</l>
     <l n="2" met="1100" rhyme="2" line_length="4">hleď zapomnít,</l>
     <l n="3" met="10010" rhyme="1" line_length="5">v bolesti hráněn</l>
     <l n="4" met="1001" rhyme="2" line_length="4">budiž tvůj cit</l>
     <l n="5" met="01010" rhyme="3" line_length="5">jak démant čistý,</l>
     <l n="6" met="10110" rhyme="3" line_length="5">pevný vzplá, jistý,</l>
     <l n="7" met="1001" rhyme="2" line_length="4">bude tvůj štít!</l>
    </lg>
   </lg>
  </body>
