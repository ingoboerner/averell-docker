  <front>
   <head>ŠKÁDLENÍ. (I.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="001010" rhyme="1" line_length="6">Co se tiskne rukou</l>
     <l n="2" met="10100" rhyme="2" line_length="5">v lesních zátiších!</l>
     <l n="3" met="100010" rhyme="1" line_length="6">slavíci když tlukou</l>
     <l n="4" met="10100" rhyme="2" line_length="5">v temných cypřiších,</l>
     <l n="5" met="101010" rhyme="3" line_length="6">bílých ruček drobných,</l>
     <l n="6" met="101010" rhyme="3" line_length="6">snědých ruček zdobných,</l>
     <l n="7" met="100010" rhyme="4" line_length="6">podnikavých, snivých,</l>
     <l n="8" met="100010" rhyme="4" line_length="6">bázlivých a chtivých</l>
     <l n="9" met="10100" rhyme="2" line_length="5">v slastech nejvyšších!</l>
    </lg>
    <lg n="2">
     <l n="10" met="101010" rhyme="5" line_length="6">Ach, vy bílé ruce,</l>
     <l n="11" met="10100" rhyme="6" line_length="5">provždy spojené</l>
     <l n="12" met="100010" rhyme="5" line_length="6">k nejdivější muce</l>
     <l n="13" met="10100" rhyme="6" line_length="5">lásky plamenné,</l>
     <l n="14" met="001010" rhyme="7" line_length="6">jak se, ruce, máte,</l>
     <l n="15" met="100010" rhyme="7" line_length="6">se srdcem když hráte,</l>
     <l n="16" met="101000" rhyme="8" line_length="6">a pak vrhnete je</l>
     <l n="17" met="101000" rhyme="8" line_length="6">bláta do ručeje,</l>
     <l n="18" met="10100" rhyme="6" line_length="5">stokrát zhrzené!</l>
    </lg>
   </lg>
  </body>
