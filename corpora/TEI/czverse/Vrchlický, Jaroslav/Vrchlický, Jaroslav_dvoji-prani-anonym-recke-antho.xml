  <front>
   <head>DVOJÍ PŘÁNÍ. (Anonym řecké anthologie.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="010000" rhyme="1" line_length="6">Kéž větérek bych byl</l>
     <l n="2" met="101100" rhyme="2" line_length="6">a tys šla ulicí,</l>
     <l n="3" met="010101" rhyme="1" line_length="6">kdy v tichu ze všech sil</l>
     <l n="4" met="110100" rhyme="2" line_length="6">žhne slunce pálící.</l>
    </lg>
    <lg n="2">
     <l n="5" met="010100" rhyme="3" line_length="6">Ty s ňadry bez šatu</l>
     <l n="6" met="010101" rhyme="4" line_length="6">bys šla jak ptáka let</l>
     <l n="7" met="010100" rhyme="3" line_length="6">a v horka záchvatu</l>
     <l n="8" met="100100" rhyme="4" line_length="6">větérek vpila hned!</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" rhyme="5" line_length="6">Ó kéž bych růže byl</l>
     <l n="10" met="100101" rhyme="6" line_length="6">a ty kol keře šla</l>
     <l n="11" met="010101" rhyme="5" line_length="6">tím snivým krokem vil</l>
     <l n="12" met="010100" rhyme="6" line_length="6">a růži utrhla,</l>
    </lg>
    <lg n="4">
     <l n="13" met="010101" rhyme="7" line_length="6">a rudou – nachu jas</l>
     <l n="14" met="100101" rhyme="8" line_length="6">v bělejší nepad’ sníh –</l>
     <l n="15" met="010100" rhyme="7" line_length="6">by ležet nechalas</l>
     <l n="16" met="100100" rhyme="8" line_length="6">na ňadrech zářících!</l>
    </lg>
   </lg>
  </body>
