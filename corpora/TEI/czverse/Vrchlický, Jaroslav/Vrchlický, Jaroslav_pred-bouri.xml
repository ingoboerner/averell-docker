  <front>
   <head>PŘED BOUŘÍ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Duby, buky, jilmy</l>
     <l n="2" met="100110" rhyme="1" line_length="6">hrází jak stráž stojí,</l>
     <l n="3" met="101010" rhyme="1" line_length="6">s vichry v těžkém boji</l>
     <l n="4" met="101010" rhyme="2" line_length="6">chví se, paží lomí,</l>
     <l n="5" met="100010" rhyme="2" line_length="6">vzdálené co hromy</l>
     <l n="6" met="100010" rhyme="3" line_length="6">od východu táhnou...</l>
    </lg>
    <lg n="2">
     <l n="7" met="101010" line_length="6">Duby, buky, jilmy</l>
     <l n="8" met="100010" rhyme="4" line_length="6">lámou se a kvílí,</l>
     <l n="9" met="001010" rhyme="4" line_length="6">jak v nich vítr šílí,</l>
     <l n="10" met="101010" rhyme="5" line_length="6">blesk jak bledě siný</l>
     <l n="11" met="101010" rhyme="5" line_length="6">přelét mračen stíny –</l>
     <l n="12" met="101010" rhyme="3" line_length="6">a ta lada prahnou...</l>
    </lg>
    <lg n="3">
     <l n="13" met="101010" line_length="6">Duby, buky, jilmy</l>
     <l n="14" met="100010" rhyme="6" line_length="6">zmítají se, praští,</l>
     <l n="15" met="100010" rhyme="6" line_length="6">ve vichřice plášti</l>
     <l n="16" met="100010" rhyme="7" line_length="6">svíjí se a křiví,</l>
     <l n="17" met="100010" rhyme="7" line_length="6">kentauři jak diví</l>
     <l n="18" met="001010" rhyme="3" line_length="6">když si do kštic sáhnou.</l>
    </lg>
   </lg>
  </body>
