  <front>
   <head>ŠKÁDLENÍ. (II.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" rhyme="1" line_length="6">Ústa, ústa, ústa,</l>
     <l n="2" met="001010" rhyme="1" line_length="6">jak to prší zhusta</l>
     <l n="3" met="100" rhyme="2" line_length="3">polibky,</l>
     <l n="4" met="101010" rhyme="3" line_length="6">večer deštěm vláhne...</l>
     <l n="5" met="001010" rhyme="3" line_length="6">Co tvou duší táhne?</l>
     <l n="6" met="101010" rhyme="3" line_length="6">Po čem srdce prahne,</l>
     <l n="7" met="10100" rhyme="2" line_length="5">sny jsou kolíbky.</l>
    </lg>
    <lg n="2">
     <l n="8" met="101010" rhyme="1" line_length="6">Ústa, ústa, ústa,</l>
     <l n="9" met="011010" rhyme="1" line_length="6">však má duše pustá</l>
     <l n="10" met="100" rhyme="4" line_length="3">leká se,</l>
     <l n="11" met="100010" rhyme="5" line_length="6">o kolíbkách snění</l>
     <l n="12" met="101010" rhyme="5" line_length="6">pro mne, děvče, není...</l>
     <l n="13" met="101000" rhyme="5" line_length="6">zmlkni v políbení</l>
     <l n="14" met="10100" rhyme="4" line_length="5">tužeb ohlase!</l>
    </lg>
    <lg n="3">
     <l n="15" met="101010" rhyme="1" line_length="6">Ústa, ústa, ústa...</l>
     <l n="16" met="101010" rhyme="1" line_length="6">Moje touha vzrůstá.</l>
     <l n="17" met="100" rhyme="6" line_length="3">Naděje!</l>
     <l n="18" met="100110" rhyme="7" line_length="6">Zaplaš ty sny s víček,</l>
     <l n="19" met="001000" rhyme="7" line_length="6">však se andělíček</l>
     <l n="20" met="100010" rhyme="7" line_length="6">tahů mých, tvých líček</l>
     <l n="21" met="00100" rhyme="6" line_length="5">přec nám vysměje!</l>
    </lg>
   </lg>
  </body>
