  <front>
   <head>OPUŠTĚNÁ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001010" line_length="7">Omšený kámen leží</l>
     <l n="2" met="100100" rhyme="1" line_length="6">v jezera hlubině,</l>
     <l n="3" met="0001010" line_length="7">je mu tak teskno, bolno</l>
     <l n="4" met="010100" rhyme="1" line_length="6">v té vodní pustině.</l>
    </lg>
    <lg n="2">
     <l n="5" met="0101010" line_length="7">A nad ním bílá růže</l>
     <l n="6" met="100100" rhyme="2" line_length="6">se hravě kolíbá,</l>
     <l n="7" met="0101010" line_length="7">ji denně zlaté slunce</l>
     <l n="8" met="010100" rhyme="2" line_length="6">svým žárem zulíbá.</l>
    </lg>
    <lg n="3">
     <l n="9" met="0101010" line_length="7">I bledý měsíc stříbrem</l>
     <l n="10" met="010100" rhyme="3" line_length="6">i vlny jezera,</l>
     <l n="11" met="0101010" line_length="7">i pestrý motýl líbá</l>
     <l n="12" met="110100" rhyme="3" line_length="6">květ její z večera.</l>
    </lg>
    <lg n="4">
     <l n="13" met="0100010" line_length="7">A hluboký tu náhle</l>
     <l n="14" met="100101" rhyme="4" line_length="6">jezerem proudí sten,</l>
     <l n="15" met="1001010" line_length="7">zachvěje v snu se kámen,</l>
     <l n="16" met="000100" rhyme="4" line_length="6">že sám tak opuštěn.</l>
    </lg>
   </lg>
  </body>
