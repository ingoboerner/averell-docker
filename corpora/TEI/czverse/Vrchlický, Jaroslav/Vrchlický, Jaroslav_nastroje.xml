  <front>
   <head>NÁSTROJE.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101000" rhyme="1" line_length="6">Flétna – melodie,</l>
     <l n="2" met="10100" rhyme="2" line_length="5">výsměch – klarinet.</l>
     <l n="3" met="1010001010" rhyme="1" line_length="10">Kdosi chechtá se a kdosi vyje,</l>
     <l n="4" met="00101" rhyme="2" line_length="5">v tom je celý svět!</l>
     <l n="5" met="100010" line_length="6">Kypící tu číše,</l>
     <l n="6" met="10001" rhyme="2" line_length="5">nyjící tam ret.</l>
    </lg>
    <lg n="2">
     <l n="7" met="101010" rhyme="3" line_length="6">Jedno z pravé strany,</l>
     <l n="8" met="10100" rhyme="4" line_length="5">z levé druhé zas;</l>
     <l n="9" met="1010101010" rhyme="3" line_length="10">mezi nimi básník touhou štvaný</l>
     <l n="10" met="10101" rhyme="4" line_length="5">obou slyší hlas.</l>
     <l n="11" met="101000" line_length="6">Touha, odříkání,</l>
     <l n="12" met="10101" rhyme="4" line_length="5">smích tam, ples a jas!</l>
    </lg>
    <lg n="3">
     <l n="13" met="101010" rhyme="5" line_length="6">Flétna – toužně láká,</l>
     <l n="14" met="10100" rhyme="6" line_length="5">checht je klarinet,</l>
     <l n="15" met="1010101010" rhyme="5" line_length="10">s žertem šaška jako s písní ptáka</l>
     <l n="16" met="10101" rhyme="6" line_length="5">projdeš celý svět,</l>
     <l n="17" met="011010" line_length="6">jen měj lásku v hrudi,</l>
     <l n="18" met="10100" rhyme="6" line_length="5">věčný amulet!</l>
    </lg>
   </lg>
  </body>
