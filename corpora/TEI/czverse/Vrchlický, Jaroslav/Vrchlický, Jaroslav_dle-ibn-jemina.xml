  <front>
   <head>DLE IBN JEMINA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="0101010" rhyme="1" line_length="7">Zde pranic nemá stání,</l>
     <l n="2" met="0101000" rhyme="1" line_length="7">buď stále na čekání,</l>
     <l n="3" met="01010101" line_length="8">dál v světa ruch a rej a hon,</l>
     <l n="4" met="0100010" rhyme="1" line_length="7">to život; smrť je spaní,</l>
     <l n="5" met="110" line_length="3">ó srdce!</l>
    </lg>
    <lg n="2">
     <l n="6" met="10010100" line_length="8">Fialka mnohá v údolí,</l>
     <l n="7" met="0101010" rhyme="2" line_length="7">jež s mladou vesnou vstala,</l>
     <l n="8" met="01010100" line_length="8">kdys byla muška, na dívčí</l>
     <l n="9" met="0101010" rhyme="2" line_length="7">jež tváři, v nachu plála. –</l>
     <l n="10" met="110" line_length="3">Ó srdce!</l>
    </lg>
    <lg n="3">
     <l n="11" met="01000101" line_length="8">A karafiát mnohý, věř,</l>
     <l n="12" met="0101010" rhyme="3" line_length="7">jenž z hrobu sladce dýše,</l>
     <l n="13" met="01000100" line_length="8">byl kadeří, jež vůní svou</l>
     <l n="14" met="1001010" rhyme="3" line_length="7">na čelo stlala tiše, –</l>
     <l n="15" met="110" line_length="3">Ó srdce!</l>
    </lg>
    <lg n="4">
     <l n="16" met="01010100" line_length="8">A mnohý hrnec hrnčířem</l>
     <l n="17" met="010100" rhyme="4" line_length="6">dnes pestře malován,</l>
     <l n="18" met="11010100" line_length="8">skráň byla, kterou diadem</l>
     <l n="19" met="010100" rhyme="4" line_length="6">kdys věnčil, z perel stkán.</l>
     <l n="20" met="110" line_length="3">Ó srdce!</l>
    </lg>
    <lg n="5">
     <l n="21" met="01000100" line_length="8">A proto buď jen laskavo</l>
     <l n="22" met="0100010" rhyme="5" line_length="7">a ke každému vlídné,</l>
     <l n="23" met="01010100" line_length="8">neb duše, věř mi, na této</l>
     <l n="24" met="0101010" rhyme="5" line_length="7">jen cestě eden zhlídne.</l>
     <l n="25" met="110" line_length="3">Ó srdce!</l>
    </lg>
    <lg n="6">
     <l n="26" met="10010101" rhyme="6" line_length="8">A když ti nedá všecko zem,</l>
     <l n="27" met="0101010" rhyme="7" line_length="7">co rádo oko vidí,</l>
     <l n="28" met="01010101" rhyme="6" line_length="8">i s málem, s ničím za vděk vem,</l>
     <l n="29" met="0101010" rhyme="7" line_length="7">neb osud hvězdy řídí.</l>
     <l n="30" met="110" line_length="3">Ó srdce!</l>
    </lg>
    <lg n="7">
     <l n="31" met="01000100" rhyme="8" line_length="8">A slovo tvé jak Mojžíše</l>
     <l n="32" met="01010100" rhyme="9" line_length="8">byť hodno věčné paměti,</l>
     <l n="33" met="01010100" rhyme="8" line_length="8">co platny řeči Ježíše,</l>
     <l n="34" met="01010100" rhyme="9" line_length="8">když plné oslů století!</l>
     <l n="35" met="110" line_length="3">Ó srdce!</l>
    </lg>
   </lg>
