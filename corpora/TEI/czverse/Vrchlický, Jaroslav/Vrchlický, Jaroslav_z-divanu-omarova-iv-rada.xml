  <front>
   <head>Z DIVANU OMAROVA. (IV. (Rada.))</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="11001000" rhyme="1" line_length="8">Ach, nad verši Alkoranu</l>
     <l n="2" met="1000101" rhyme="2" line_length="7">produmal jsem celou noc,</l>
     <l n="3" met="10001010" rhyme="1" line_length="8">od večera snil jsem k ránu,</l>
     <l n="4" met="0010100" rhyme="2" line_length="7">jak jest velká lásky moc.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10001010" rhyme="3" line_length="8">Zástupové kolem spěli,</l>
     <l n="6" met="1010001" rhyme="4" line_length="7">chvěl se modlitbou jich ret,</l>
     <l n="7" met="10011010" rhyme="3" line_length="8">nevyřkli taj lásky celý,</l>
     <l n="8" met="0010100" rhyme="4" line_length="7">co jsem líbal amulet.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10001000" rhyme="5" line_length="8">Sulejky a Zoraidy</l>
     <l n="10" met="1010101" rhyme="6" line_length="7">s žhoucím líčkem, bledým rtem,</l>
     <l n="11" met="10101010" rhyme="5" line_length="8">bože, jaká propast bídy,</l>
     <l n="12" met="1010100" rhyme="6" line_length="7">kterou změřit – nemůžem!</l>
    </lg>
    <lg n="4">
     <l n="13" met="10101010" rhyme="7" line_length="8">Ale jaká propast lásky</l>
     <l n="14" met="1011100" rhyme="8" line_length="7">vedle muk jde po boku!</l>
     <l n="15" met="10101000" rhyme="7" line_length="8">proto každé bez otázky</l>
     <l n="16" met="1000100" rhyme="8" line_length="7">líbej dál jen, proroku!</l>
    </lg>
   </lg>
  </body>
