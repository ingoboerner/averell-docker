  <front>
   <head>X. SVĚTLO V TMÁCH.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" rhyme="1" line_length="6">Z žití, z bídy hnětu</l>
     <l n="2" met="010010" rhyme="1" line_length="6">výš ku Pánu světů</l>
     <l n="3" met="101010" rhyme="2" line_length="6">pohleď, sluncí moře</l>
     <l n="4" met="110010" rhyme="2" line_length="6">z tmy vyvolal tvoře</l>
     <l n="5" met="100010" rhyme="3" line_length="6">zástupy a davy,</l>
     <l n="6" met="100110" rhyme="3" line_length="6">světlo i stín tmavý.</l>
    </lg>
    <lg n="2">
     <l n="7" met="101010" rhyme="4" line_length="6">V jeho „Budiž!“ náhle</l>
     <l n="8" met="101000" rhyme="4" line_length="6">nebe neobsáhlé</l>
     <l n="9" met="100110" rhyme="5" line_length="6">zniklo i zem valná,</l>
     <l n="10" met="101010" rhyme="5" line_length="6">aby bázeň kalná</l>
     <l n="11" met="101000" rhyme="6" line_length="6">vesmír neobjala,</l>
     <l n="12" met="101010" rhyme="6" line_length="6">země světla vstala,</l>
     <l n="13" met="100110" rhyme="3" line_length="6">ustoupil stín tmavý.</l>
    </lg>
    <lg n="3">
     <l n="14" met="101010" rhyme="7" line_length="6">Nebe na své výši</l>
     <l n="15" met="100110" rhyme="7" line_length="6">s díkem tu zvěst slyší,</l>
     <l n="16" met="001010" rhyme="8" line_length="6">jak on v mraku strži</l>
     <l n="17" met="101010" rhyme="8" line_length="6">světů sloupy drží,</l>
     <l n="18" met="101010" rhyme="3" line_length="6">světlo výše davy</l>
     <l n="19" met="100110" rhyme="3" line_length="6">nad každý stín tmavý.</l>
    </lg>
    <lg n="4">
     <l n="20" met="001010" rhyme="9" line_length="6">Mně též jiskrou světla</l>
     <l n="21" met="101010" rhyme="9" line_length="6">z něho síla vzlétla,</l>
     <l n="22" met="101010" rhyme="10" line_length="6">v jitro noci změní</l>
     <l n="23" met="101000" rhyme="10" line_length="6">lidu utrpení,</l>
     <l n="24" met="101010" rhyme="11" line_length="6">aby tento v trudu</l>
     <l n="25" met="011010" rhyme="11" line_length="6">řek’, živ v tobě budu,</l>
     <l n="26" met="001010" rhyme="3" line_length="6">Tys můj asyl pravý,</l>
     <l n="27" met="010110" rhyme="3" line_length="6">nechť kolem stín tmavý.</l>
    </lg>
   </lg>
