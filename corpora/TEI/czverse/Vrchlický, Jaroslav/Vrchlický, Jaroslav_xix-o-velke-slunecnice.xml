  <front>
   <head>XIX. O velké slunečnice!</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001000" rhyme="1" line_length="7">O velké slunečnice! </l>
     <l n="2" met="1101000" rhyme="1" line_length="7">Ó zlaté slunečnice!</l>
     <l n="3" met="0010001000" line_length="10">Což jste zvědavě k nám dívaly se</l>
     <l n="4" met="1000" rhyme="1" line_length="4">do světnice!</l>
    </lg>
    <lg n="2">
     <l n="5" met="1001010" rhyme="2" line_length="7">Ó jak se po zdích táhly</l>
     <l n="6" met="0101010" rhyme="2" line_length="7">ty vaše stíny, táhly,</l>
     <l n="7" met="1010101000" line_length="10">měkkou rukou její na podušku</l>
     <l n="8" met="1010" rhyme="2" line_length="4">bílou sáhly!</l>
    </lg>
    <lg n="3">
     <l n="9" met="1100010" rhyme="3" line_length="7">Ó ležela tam hlava,</l>
     <l n="10" met="0101010" rhyme="3" line_length="7">ta její krásná hlava</l>
     <l n="11" met="1010101010" line_length="10">vedle mojí – drozda zněla z dálky</l>
     <l n="12" met="1010" rhyme="3" line_length="4">píseň lkavá!</l>
    </lg>
    <lg n="4">
     <l n="13" met="1101000" rhyme="4" line_length="7">Ó velké slunečnice!</l>
     <l n="14" met="1101000" rhyme="4" line_length="7">Ó zlaté slunečnice!</l>
     <l n="15" met="1000101000" line_length="10">Smály jste se, jak jste dívaly se</l>
     <l n="16" met="1000" rhyme="4" line_length="4">do světnice!</l>
    </lg>
   </lg>
  </body>
