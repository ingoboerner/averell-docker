  <front>
   <head>„Přijde Vesna, přijde,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" rhyme="1" line_length="6">„Přijde Vesna, přijde, </l>
     <l n="2" met="1010100" line_length="7">Zbav se trudu, srdce mé.“</l>
     <l n="3" met="10101000" rhyme="2" line_length="8">Slunce teple zasvítilo,</l>
     <l n="4" met="10001000" rhyme="2" line_length="8">Nebe již se vyjasnilo,</l>
     <l n="5" met="1010100" rhyme="3" line_length="7">Blahé ptáče zapělo,</l>
     <l n="6" met="0000100" rhyme="3" line_length="7">Proč bys ty jen truchlelo, –</l>
     <l n="7" met="1010100" line_length="7">Zbav se trudu, srdce mé.</l>
    </lg>
    <lg n="2">
     <l n="8" met="101010" rhyme="1" line_length="6">„Přijde Vesna, přijde,</l>
     <l n="9" met="1010100" line_length="7">Zbav se trudu, srdce mé.“</l>
     <l n="10" met="10101000" rhyme="4" line_length="8">Tisíc stromů zelená se,</l>
     <l n="11" met="10101000" rhyme="4" line_length="8">Tisíc poupat rozvíná se,</l>
     <l n="12" met="0010100" rhyme="5" line_length="7">Z nich přec jedno jediné</l>
     <l n="13" met="1000100" rhyme="5" line_length="7">Pro tebe se rozvine, –</l>
     <l n="14" met="1010100" line_length="7">Zbav se trudu, srdce mé!</l>
    </lg>
   </lg>
  </body>
