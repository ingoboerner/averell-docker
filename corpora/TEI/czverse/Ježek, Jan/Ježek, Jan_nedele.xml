 <text>
  <front>
   <head>Neděle.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" line_length="5">Přilétla s nebe</l>
     <l n="2" met="10010" rhyme="1" line_length="5">neděle svatá</l>
     <l n="3" met="10010" line_length="5">v průvodu její</l>
     <l n="4" met="10110" rhyme="1" line_length="5">slunka zář zlatá.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010" line_length="5">Krajinou vane</l>
     <l n="6" met="10010" rhyme="2" line_length="5">větříček svěží,</l>
     <l n="7" met="10010" line_length="5">do chrámu volá</l>
     <l n="8" met="10100" rhyme="2" line_length="5">zvonek na věži.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010" line_length="5">Údolím, polem</l>
     <l n="10" met="10010" rhyme="3" line_length="5">v svátečním šatu</l>
     <l n="11" met="01000" line_length="5">vše do svatyně</l>
     <l n="12" met="01010" rhyme="3" line_length="5">se béře v chvatu.</l>
    </lg>
    <lg n="4">
     <l n="13" met="01000" line_length="5">Tam před oltářem</l>
     <l n="14" met="10010" rhyme="4" line_length="5">zástup se sklání,</l>
     <l n="15" met="10010" line_length="5">nebesa prose</l>
     <l n="16" met="10000" rhyme="4" line_length="5">za smilování.</l>
    </lg>
    <lg n="5">
     <l n="17" met="01010" line_length="5">Tam žebře matka</l>
     <l n="18" met="10010" rhyme="5" line_length="5">za drahé dítě,</l>
     <l n="19" met="00110" line_length="5">by je svět nestrh’</l>
     <l n="20" met="10010" rhyme="5" line_length="5">v lákavé sítě.</l>
    </lg>
    <lg n="6">
     <l n="21" met="01010" line_length="5">Tam zírá otec</l>
     <l n="22" met="10010" rhyme="6" line_length="5">s důvěrou k nebi</l>
     <l n="23" met="01000" line_length="5">a Všemocného</l>
     <l n="24" met="10100" rhyme="6" line_length="5">vroucně velebí.</l>
    </lg>
    <lg n="7">
     <l n="25" met="01010" line_length="5">Tam prosí bratr</l>
     <l n="26" met="10010" rhyme="7" line_length="5">za sestru svoji,</l>
     <l n="27" met="00110" line_length="5">by ji Pán sílil</l>
     <l n="28" met="10010" rhyme="7" line_length="5">v života boji.</l>
    </lg>
    <lg n="8">
     <l n="29" met="01010" line_length="5">Tam najde chudák</l>
     <l n="30" met="10010" rhyme="8" line_length="5">potěchy, klidu,</l>
     <l n="31" met="00100" line_length="5">když si postýskal</l>
     <l n="32" met="10010" rhyme="8" line_length="5">na tu svou bídu.</l>
    </lg>
    <lg n="9">
     <l n="33" met="00100" line_length="5">Ba, co po týden</l>
     <l n="34" met="10010" rhyme="9" line_length="5">srdéčko svírá,</l>
     <l n="35" met="10010" line_length="5">v neděli Pánu</l>
     <l n="36" met="10100" rhyme="9" line_length="5">každý otvírá.</l>
    </lg>
    <lg n="10">
     <l n="37" met="10010" line_length="5">Povždy tě vítám,</l>
     <l n="38" met="10010" rhyme="10" line_length="5">neděle drahá,</l>
     <l n="39" met="00100" line_length="5">vždyť jsi nezměrným</l>
     <l n="40" met="01010" rhyme="10" line_length="5">nám zdrojem blaha!</l>
    </lg>
   </lg>
