   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101000101000" rhyme="1" line_length="12">Kdyby nebylo tvé srdce oplývalo</l>
     <l n="2" met="10101010000" rhyme="2" line_length="11">takým velkým množstvím žádostivosti,</l>
     <l n="3" met="101000101000" rhyme="1" line_length="12">jaktě živo by v něm bylo nebývalo</l>
     <l n="4" met="10101010000" rhyme="2" line_length="11">tolik mnoho trpké žalostivosti.</l>
