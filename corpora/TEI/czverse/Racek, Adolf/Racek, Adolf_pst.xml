 <text>
  <front>
   <head>Pst!</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1" line_length="1">Pst! </l>
     <l n="2" met="10010" line_length="5">Ona se blíží</l>
     <l n="3" met="10010" line_length="5">a je tak svůdná</l>
     <l n="4" met="10010" line_length="5">a je tak tichá,</l>
     <l n="5" met="10010" line_length="5">ona se blíží, – – –</l>
     <l n="6" met="1" line_length="1">Pst!</l>
    </lg>
    <lg n="2">
     <l n="7" met="1" line_length="1">Pst!</l>
     <l n="8" met="10010" line_length="5">Ona se blíží</l>
     <l n="9" met="10010" line_length="5">a je tak sladká</l>
     <l n="10" met="10010" line_length="5">a je tak němá,</l>
     <l n="11" met="10010" line_length="5">ona se blíží, – – –</l>
     <l n="12" met="1" line_length="1">Pst!</l>
    </lg>
    <lg n="3">
     <l n="13" met="1" line_length="1">Pst!</l>
     <l n="14" met="10010" line_length="5">Ona se blíží</l>
     <l n="15" met="10010" line_length="5">a je tak krásná</l>
     <l n="16" met="10010" line_length="5">a je tak vážná,</l>
     <l n="17" met="10010" line_length="5">ona se blíží, – – –</l>
     <l n="18" met="1" line_length="1">Pst!</l>
    </lg>
   </lg>
  </body>
