  <front>
   <head>Písni má, JI NEBUĎ ZE SNA!</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" rhyme="1" line_length="8">Písni má, JI NEBUĎ ZE SNA! </l>
     <l n="2" met="1010100" rhyme="2" line_length="7">Láska krásná rozjímá:</l>
     <l n="3" met="10100110" rhyme="1" line_length="8">minul květen můj, má vesna,</l>
     <l n="4" met="0010101" rhyme="2" line_length="7">vše je marno, písni má!</l>
    </lg>
    <lg n="2">
     <l n="5" met="10111010" rhyme="3" line_length="8">Písni má, zni zticha v přítmí</l>
     <l n="6" met="10100010" rhyme="3" line_length="8">echem v samoty jen rytmy!</l>
    </lg>
    <lg n="3">
     <l n="7" met="1000100" rhyme="2" line_length="7">Smutnýma ni očima</l>
     <l n="8" met="1010101" rhyme="2" line_length="7">nevzbuď lásku, písni má!</l>
    </lg>
   </lg>
  </body>
