 <text>
  <front>
   <head>Budeme tančit,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" line_length="5">Budeme tančit, </l>
     <l n="2" met="10010" line_length="5">zuřivě tančit,</l>
     <l n="3" met="10010" line_length="5">závratný kvapík</l>
     <l n="4" met="10010" line_length="5">budeme tančit!</l>
    </lg>
    <lg n="2">
     <l n="5" met="01001" line_length="5">A budem se smát,</l>
     <l n="6" met="01001" line_length="5">tak šíleně smát,</l>
     <l n="7" met="101000" line_length="6">budem se, budem se,</l>
     <l n="8" met="1001" line_length="4">budem se smát!</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010" line_length="5">Budeme zpívat,</l>
     <l n="10" met="10010" line_length="5">bez smyslu zpívat,</l>
     <l n="11" met="10010" line_length="5">vysoko zpívat,</l>
     <l n="12" met="10010" line_length="5">bez konce zpívat!</l>
    </lg>
    <lg n="4">
     <l n="13" met="0100100" line_length="7">A budeme blábolit</l>
     <l n="14" met="10010" line_length="5">zmatená slova,</l>
     <l n="15" met="10010" line_length="5">nikdo nám nesmí</l>
     <l n="16" met="100" line_length="3">rozumět!</l>
    </lg>
    <lg n="5">
     <l n="17" met="10010" line_length="5">Budeme tančit,</l>
     <l n="18" met="1001" line_length="4">budem se smát,</l>
     <l n="19" met="10010" line_length="5">budeme zpívat</l>
     <l n="20" met="10010" line_length="5">tajemnou píseň!</l>
    </lg>
   </lg>
  </body>
