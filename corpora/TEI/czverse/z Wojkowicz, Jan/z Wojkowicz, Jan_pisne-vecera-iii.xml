  <front>
   <head>PÍSNĚ VEČERA. (III.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Z Věčnosti vzešel jsem</l>
     <l n="2" met="100100" rhyme="1" line_length="6">záhadným způsobem,</l>
     <l n="3" met="100100" line_length="6">Věčnost mne vyslala</l>
     <l n="4" met="1001" rhyme="2" line_length="4">na zemi žít.</l>
     <l n="5" met="100100" rhyme="3" line_length="6">Na zemi vratkosti,</l>
     <l n="6" met="100100" rhyme="3" line_length="6">tíhy a žalosti,</l>
     <l n="7" met="100100100" rhyme="3" line_length="9">na zemi veškeré marnosti</l>
     <l n="8" met="1" rhyme="2" line_length="1">nýt.</l>
    </lg>
    <lg n="2">
     <l n="9" met="100100" line_length="6">Pohledem bez konce,</l>
     <l n="10" met="100100" line_length="6">sněním tak bez konce,</l>
     <l n="11" met="0101001010" rhyme="4" line_length="10">jež ze své Vlasti jsem s sebou vzal sem:</l>
     <l n="12" met="100100" line_length="6">dává mi měřiti,</l>
     <l n="13" met="110100" rhyme="5" line_length="6">má Matka Vzdálená,</l>
     <l n="14" met="0101001001" rhyme="4" line_length="10">tak jenom konečnou, konečnou zem!</l>
    </lg>
    <lg n="3">
     <l n="15" met="100101" rhyme="5" line_length="6">Vzdálená Matko má,</l>
     <l n="16" met="100100" rhyme="5" line_length="6">vzdálená, kýžená,</l>
     <l n="17" met="0001001001" rhyme="6" line_length="10">proč jsi mne poslala na tento svět?</l>
     <l n="18" met="010100" rhyme="7" line_length="6">Tys moje Otčina,</l>
     <l n="19" met="100100" rhyme="7" line_length="6">kýžená, jediná –</l>
     <l n="20" met="0101001000" rhyme="6" line_length="10">v Tvůj klín se navrátit toužím zas zpět!</l>
    </lg>
   </lg>
  </body>
