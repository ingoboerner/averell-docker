  <front>
   <head>Pámbíček mu rozoumek dal velký;</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000100110" rhyme="1" line_length="10">Pámbíček mu rozoumek dal velký; </l>
     <l n="2" met="0110000010" rhyme="2" line_length="10">vše znal – učenosti on byl králem –</l>
     <l n="3" met="1000100010" rhyme="1" line_length="10">od Homéra do moderní znělky.</l>
    </lg>
    <lg n="2">
     <l n="4" met="10011010" rhyme="2" line_length="8">Vůlí svou svět zvrátil málem.</l>
     <l n="5" met="1010001010" rhyme="3" line_length="10">Hráze nedostupné strhal vždycky</l>
     <l n="6" met="1000" rhyme="3" line_length="4">energicky,</l>
     <l n="7" met="10" rhyme="4" line_length="2">směle!</l>
    </lg>
    <lg n="3">
     <l n="8" met="1010101010" rhyme="5" line_length="10">Jedno měl, zač mnohou tržil ránu:</l>
     <l n="9" met="10101010" rhyme="4" line_length="8">Srdce jeho bylo celé</l>
     <l n="10" met="1000" rhyme="5" line_length="4">z marcipánu.</l>
    </lg>
   </lg>
  </body>
