  <front>
   <head>III. Sluníčko boží</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" rhyme="1" line_length="5">Sluníčko boží </l>
     <l n="2" met="100100" rhyme="2" line_length="6">z hory si vyskočí,</l>
     <l n="3" met="10010" rhyme="1" line_length="5">v zlaceném loži</l>
     <l n="4" met="100100" rhyme="2" line_length="6">červánkem zatočí.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010" rhyme="3" line_length="5">V radosti pravé</l>
     <l n="6" met="101100" rhyme="4" line_length="6">celý svět pozdraví,</l>
     <l n="7" met="10010" rhyme="3" line_length="5">veselé, smavé,</l>
     <l n="8" met="100100" rhyme="4" line_length="6">cestu si upraví.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010" rhyme="4" line_length="5">Všude se staví,</l>
     <l n="10" met="100100" rhyme="5" line_length="6">ke všem si pospěší,</l>
     <l n="11" met="10110" rhyme="4" line_length="5">sílu dá, zdraví</l>
     <l n="12" met="010100" rhyme="5" line_length="6">a slzy utěší.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10010" rhyme="6" line_length="5">Všeho si udbá,</l>
     <l n="14" met="100100" rhyme="7" line_length="6">na všecko zavolá,</l>
     <l n="15" met="10010" rhyme="6" line_length="5">jako když hudba</l>
     <l n="16" met="100100" rhyme="7" line_length="6">zahraje do kola.</l>
    </lg>
    <lg n="5">
     <l n="17" met="01010" rhyme="8" line_length="5">Všem blaho zmnoží,</l>
     <l n="18" met="100100" rhyme="9" line_length="6">nejvíce člověku –</l>
     <l n="19" met="10010" rhyme="8" line_length="5">sluníčko boží</l>
     <l n="20" met="100100" rhyme="9" line_length="6">od věku do věku.</l>
    </lg>
   </lg>
  </body>
