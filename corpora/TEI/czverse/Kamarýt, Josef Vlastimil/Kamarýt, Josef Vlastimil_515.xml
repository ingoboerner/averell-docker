   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="01001000" rhyme="1" line_length="8">Kdo bližního k obtížení</l>
     <l n="2" met="100100100" rhyme="2" line_length="9">na lichvu z lakomství nedává,</l>
     <l n="3" met="01001000" rhyme="1" line_length="8">a nevinných k potlačení</l>
     <l n="4" met="10010010" rhyme="1" line_length="8">na dary nemívá zření,</l>
     <l n="5" met="100010100" rhyme="2" line_length="9">s bezbožnými v radě nestává,</l>
     <l n="6" met="001010100" rhyme="2" line_length="9">kdož tak živ – ten v nebi zůstává.</l>
    </lg>
   </lg>
