   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="11001000" rhyme="1" line_length="8">Dům chvoštišti vymetený,</l>
     <l n="2" met="10101000" rhyme="1" line_length="8">pro zlé duchy připravený</l>
     <l n="3" met="01000" rhyme="2" line_length="5">jest opravdu ten,</l>
     <l n="4" met="00101" rhyme="2" line_length="5">kde se boží den</l>
     <l n="5" met="10001000" rhyme="3" line_length="8">v ničemnosti promarňuje;</l>
     <l n="6" met="00101000" rhyme="3" line_length="8">v tom si ďábel pochvaluje,</l>
     <l n="7" met="0010100" rhyme="4" line_length="7">jen že jeho chválení</l>
     <l n="8" met="1000100" rhyme="4" line_length="7">promění se v pálení.</l>
    </lg>
   </lg>
