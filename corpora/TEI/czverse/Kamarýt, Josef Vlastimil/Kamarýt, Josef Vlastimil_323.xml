   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" rhyme="1" line_length="8">Dobré dítky! věřte silně,</l>
     <l n="2" met="0010100" rhyme="2" line_length="7">vše žeť v Boží moci jest.</l>
     <l n="3" met="10001010" rhyme="1" line_length="8">Modlete se v práci pilně,</l>
     <l n="4" met="1010101" rhyme="2" line_length="7">z všeho Bohu vzdejte čest.</l>
     <l n="5" met="10011000" rhyme="3" line_length="8">Nedáli Bůh požehnání,</l>
     <l n="6" met="10101000" rhyme="3" line_length="8">marné všecko namahání,</l>
     <l n="7" met="10101000" rhyme="3" line_length="8">slepé všecko mudrování.</l>
    </lg>
   </lg>
