  <front>
   <head>PŘEMOŽENÍ (I)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" rhyme="1" line_length="4">Tiše duje</l>
     <l n="2" met="10101010" rhyme="2" line_length="8">kolem výspy siné moře,</l>
     <l n="3" met="1000" rhyme="1" line_length="4">pozpěvuje</l>
     <l n="4" met="1000101000" rhyme="2" line_length="10">odbojníkům píseň o pokoře.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1010" rhyme="3" line_length="4">Včera lhalo</l>
     <l n="6" met="1000100010" rhyme="4" line_length="10">o vítězství nejslavnější bouře,</l>
     <l n="7" met="1010101000" rhyme="3" line_length="10">včera mocným hlasem zavolalo</l>
     <l n="8" met="1010100010" rhyme="4" line_length="10">děti svoje k radosti a vzpouře.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010" rhyme="2" line_length="4">Líně, choře</l>
     <l n="10" met="00101010" rhyme="1" line_length="8">dnes kol země psanců duje,</l>
     <l n="11" met="10001000" rhyme="2" line_length="8">o pokoře, o pokoře</l>
     <l n="12" met="10001000" rhyme="1" line_length="8">přemoženým pozpěvuje.</l>
    </lg>
   </lg>
  </body>
