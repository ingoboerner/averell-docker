  <front>
   <head>KAŠTANOVÁ ALEJ V ZÁŘIJOVÉM POLEDNI</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="11010100" rhyme="1" line_length="8">Zlou nocí listí prošedne,</l>
     <l n="2" met="10010100" rhyme="2" line_length="8">schoulí se, zplihne, zrezaví</l>
     <l n="3" met="01010100" rhyme="1" line_length="8">a bojí, že tak šeredné</l>
     <l n="4" met="10010100" rhyme="2" line_length="8">sotva kdy slunce pozdraví.</l>
    </lg>
    <lg n="2">
     <l n="5" met="11010100" rhyme="1" line_length="8">Mha padá. S výše průhledné</l>
     <l n="6" met="11010100" rhyme="2" line_length="8">zář rzi i šedi roztaví –</l>
     <l n="7" met="01010100" rhyme="1" line_length="8">a velkým jasem poledne</l>
     <l n="8" met="11010100" rhyme="2" line_length="8">plá noci temné bezpráví.</l>
    </lg>
    <lg n="3">
     <l n="9" met="01010100" rhyme="3" line_length="8">Tu všechno hoře z minula,</l>
     <l n="10" met="11000100" rhyme="4" line_length="8">žal, ponížení, příkoří</l>
     <l n="11" met="1101010" rhyme="5" line_length="7">má hlubší význam nový.</l>
     <l n="12" met="01010100" rhyme="3" line_length="8">Až zbožně duše stanula,</l>
     <l n="13" met="01010100" rhyme="4" line_length="8">a podzim tiše hovoří</l>
     <l n="14" met="0100010" rhyme="5" line_length="7">k ní bratrskými slovy.</l>
    </lg>
   </lg>
  </body>
