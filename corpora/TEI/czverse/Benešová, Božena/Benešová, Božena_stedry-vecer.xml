  <front>
   <head>ŠTĚDRÝ VEČER</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="110101000" rhyme="1" line_length="9">Znám čtyři děti, čekající</l>
     <l n="2" met="100100" rhyme="2" line_length="6">na radost večerní,</l>
     <l n="3" met="100101010" rhyme="1" line_length="9">nevíme, velcí, co jim říci,</l>
     <l n="4" met="010100" rhyme="2" line_length="6">jsme dávno nevěrní</l>
     <l n="5" met="1001010010" line_length="10">veliké touze po vůdčí hvězdě,</l>
     <l n="6" met="100100" rhyme="2" line_length="6">po velké pravdě s ní.</l>
    </lg>
    <lg n="2">
     <l n="7" met="1001010010" rhyme="3" line_length="10">Oni jsou čtyři pastevci malí,</l>
     <l n="8" met="10010100" rhyme="4" line_length="8">ovečky mají, fujary,</l>
     <l n="9" met="1001010010" rhyme="3" line_length="10">modravá mlha tiše se valí</l>
     <l n="10" met="10010100" rhyme="4" line_length="8">na luhy, lesy, kotáry,</l>
     <l n="11" met="1001010010" line_length="10">oni z ní slyší anděla zpívat</l>
     <l n="12" met="01010100" rhyme="4" line_length="8">a nesou svoje podary.</l>
    </lg>
    <lg n="3">
     <l n="13" met="1001010010" rhyme="5" line_length="10">Vemte mne sebou do tichých plání,</l>
     <l n="14" met="01000100" rhyme="6" line_length="8">vy líbezní, vy vítězní,</l>
     <l n="15" met="010001010" rhyme="5" line_length="9">je zrození i z mrtvých vstání,</l>
     <l n="16" met="01010100" rhyme="6" line_length="8">když srdcem táhne tušení</l>
     <l n="17" met="1001010010" line_length="10">veliké touhy po vůdčí hvězdě,</l>
     <l n="18" met="100100" rhyme="6" line_length="6">po velké pravdě s ní.</l>
    </lg>
   </lg>
