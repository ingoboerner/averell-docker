  <front>
   <head>PŘEMOŽENÍ (II)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000" rhyme="1" line_length="4">Na úskalí,</l>
     <l n="2" met="1000100010" rhyme="2" line_length="10">na rozryté, kamenité břehy</l>
     <l n="3" met="1010" rhyme="1" line_length="4">z dálné dáli</l>
     <l n="4" met="1010100010" rhyme="2" line_length="10">padá světlo oddání a něhy.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1000" rhyme="3" line_length="4">Trosečníci</l>
     <l n="6" met="1010100010" rhyme="4" line_length="10">vidí světla majákových věží –</l>
     <l n="7" met="1010" rhyme="3" line_length="4">ale tlící</l>
     <l n="8" met="1010101010" rhyme="4" line_length="10">koráb dávno v mrtvých vodách leží.</l>
    </lg>
   </lg>
  </body>
