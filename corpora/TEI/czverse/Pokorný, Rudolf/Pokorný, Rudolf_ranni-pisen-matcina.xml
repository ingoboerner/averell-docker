 <text>
  <front>
   <head>Ranní píseň matčina.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" rhyme="1" line_length="4">Napni uško,</l>
     <l n="2" met="1010" rhyme="1" line_length="4">moje duško,</l>
     <l n="3" met="1" rhyme="2" line_length="1">slyš!</l>
     <l n="4" met="100010" rhyme="3" line_length="6">Červáneček s hory</l>
     <l n="5" met="101000" rhyme="3" line_length="6">hledí do komory</l>
     <l n="6" met="0" rhyme="4" line_length="1">již:</l>
     <l n="7" met="101" line_length="3">a ty spíš?</l>
    </lg>
    <lg n="2">
     <l n="8" met="1010" rhyme="4" line_length="4">Kvítkův očka</l>
     <l n="9" met="1000" rhyme="4" line_length="4">z podobočka!</l>
     <l n="10" met="1" rhyme="2" line_length="1">slyš!</l>
     <l n="11" met="101010" rhyme="5" line_length="6">Drobné perly včelka</l>
     <l n="12" met="101000" rhyme="5" line_length="6">sbírá na křídélka</l>
     <l n="13" met="0" rhyme="4" line_length="1">již:</l>
     <l n="14" met="101" line_length="3">a ty spíš?</l>
    </lg>
    <lg n="3">
     <l n="15" met="1010" rhyme="6" line_length="4">Srpy, kosy</l>
     <l n="16" met="1010" rhyme="6" line_length="4">poza rosy</l>
     <l n="17" met="1" rhyme="2" line_length="1">slyš!</l>
     <l n="18" met="101010" rhyme="7" line_length="6">Z bílých květů lípy</l>
     <l n="19" met="101010" rhyme="7" line_length="6">sladká vůně kypí</l>
     <l n="20" met="0" rhyme="4" line_length="1">již:</l>
     <l n="21" met="101" line_length="3">a ty spíš?</l>
    </lg>
    <lg n="4">
     <l n="22" met="1000" rhyme="8" line_length="4">Za chaloupkou</l>
     <l n="23" met="1010" rhyme="8" line_length="4">lesní hloubkou</l>
     <l n="24" met="1" rhyme="2" line_length="1">slyš!</l>
     <l n="25" met="100010" rhyme="9" line_length="6">potůček jak zurčí</l>
     <l n="26" met="100010" rhyme="9" line_length="6">myšlenečku tvůrčí</l>
     <l n="27" met="0" rhyme="4" line_length="1">již:</l>
     <l n="28" met="101" line_length="3">a ty spíš?</l>
    </lg>
    <lg n="5">
     <l n="29" met="1010" rhyme="10" line_length="4">Vstaň, mé dítě:</l>
     <l n="30" met="1000" rhyme="10" line_length="4">pozdraví tě,</l>
     <l n="31" met="1" rhyme="2" line_length="1">slyš!</l>
     <l n="32" met="101010" rhyme="11" line_length="6">Napni bílé ručky,</l>
     <l n="33" met="101000" rhyme="11" line_length="6">pojď mi do náručky</l>
     <l n="34" met="0" rhyme="4" line_length="1">již!</l>
     <l n="35" met="100" rhyme="2" line_length="3">Dítě, blíž!</l>
    </lg>
   </lg>
  </body>
