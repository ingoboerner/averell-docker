  <front>
   <head>XV.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10100" rhyme="1" line_length="5">Tatra vysoká,</l>
     <l n="2" met="10101" rhyme="2" line_length="5">chodník sotva znáť:</l>
     <l n="3" met="00010" line_length="5">je-li tam láska,</l>
     <l n="4" met="10010" line_length="5">maličká láska,</l>
     <l n="5" met="1000100" rhyme="2" line_length="7">půjdu ti jí natrhať!</l>
    </lg>
    <lg n="2">
     <l n="6" met="10100" rhyme="1" line_length="5">Voda hluboká,</l>
     <l n="7" met="10101" rhyme="3" line_length="5">širá jako pláň:</l>
     <l n="8" met="00010" line_length="5">je-li tam láska,</l>
     <l n="9" met="10010" line_length="5">maličká láska,</l>
     <l n="10" met="1000101" rhyme="3" line_length="7">naberu jí plnou dlaň.</l>
    </lg>
    <lg n="3">
     <l n="11" met="10101" line_length="5">Láska, bože, spíš,</l>
     <l n="12" met="10100" rhyme="4" line_length="5">vyjde ze skály,</l>
     <l n="13" met="10100" line_length="5">na dně jezera</l>
     <l n="14" met="10100" rhyme="4" line_length="5">svitne s korály,</l>
     <l n="15" met="00101010" rhyme="5" line_length="8">než by tobě, moje milá,</l>
     <l n="16" met="10001000" rhyme="5" line_length="8">kořínky své zapustila</l>
     <l n="17" met="1000100" rhyme="4" line_length="7">do srdečka pomaly!</l>
    </lg>
   </lg>
  </body>
