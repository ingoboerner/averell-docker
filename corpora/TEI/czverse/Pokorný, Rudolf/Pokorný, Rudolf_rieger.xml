     <l n="1" met="101101" rhyme="1" line_length="6">Statný duch – hlas jak zvon,</l>
     <l n="2" met="1010101" rhyme="1" line_length="7">rázně mluví jako hrom –</l>
     <l n="3" met="1010100" rhyme="2" line_length="7">někdy ale v stolíku</l>
     <l n="4" met="1000100" rhyme="2" line_length="7">zapomene logiku.</l>
