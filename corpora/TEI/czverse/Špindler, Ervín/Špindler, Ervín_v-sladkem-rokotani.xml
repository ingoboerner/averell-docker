  <front>
   <head>V sladkém rokotání.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101000" rhyme="1" line_length="6">V sladkém rokotání</l>
     <l n="2" met="10101" rhyme="2" line_length="5">tichne líra má,</l>
     <l n="3" met="101010" rhyme="1" line_length="6">k srdci sen se sklání,</l>
     <l n="4" met="10100" rhyme="2" line_length="5">ve snu očka Tvá.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101010" rhyme="3" line_length="6">Dobré dítě moje</l>
     <l n="6" met="10100" rhyme="4" line_length="5">skloň se blíže jen,</l>
     <l n="7" met="101010" rhyme="3" line_length="6">zlíbám líce Tvoje</l>
     <l n="8" met="10100" rhyme="4" line_length="5">láskou unešen.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100010" line_length="6">Něha Tvá mé zraky</l>
     <l n="10" met="10100" rhyme="5" line_length="5">slzou stopila,</l>
     <l n="11" met="101010" line_length="6">a mé srdce tajná</l>
     <l n="12" met="10100" rhyme="5" line_length="5">touha chopila.</l>
    </lg>
   </lg>
  </body>
