  <front>
   <head>XXXVIII.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">V klínu noci ještě</l>
     <l n="2" met="101010" rhyme="1" line_length="6">dřímá jitro nové.</l>
     <l n="3" met="101010" line_length="6">Spěte, touhy všecky,</l>
     <l n="4" met="101010" rhyme="1" line_length="6">spěte, moji snové.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101010" line_length="6">Lidská naděj chvíli</l>
     <l n="6" met="100010" rhyme="2" line_length="6">světluška jak vzhoří,</l>
     <l n="7" met="101010" line_length="6">která zhasne v trávě.</l>
     <l n="8" met="101010" rhyme="2" line_length="6">Zmírám ve svém hoři.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100010" line_length="6">Na odletu ptáky</l>
     <l n="10" met="10100" rhyme="3" line_length="5">brzy uvidíš.</l>
     <l n="11" met="101010" line_length="6">Touhy všecky, snové,</l>
     <l n="12" met="100" rhyme="3" line_length="3">spěte již.</l>
    </lg>
   </lg>
  </body>
