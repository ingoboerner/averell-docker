  <front>
   <head>ŠTĚDRÝ VEČER.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="0101000" line_length="7">Těm, kteří bez domova</l>
     <l n="2" met="110100" rhyme="1" line_length="6">zří cizích do oken,</l>
     <l n="3" met="10010110" line_length="8">o lásce věrných, ó, Pane,</l>
     <l n="4" met="110101" rhyme="1" line_length="6">dej dnešní noci sen.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1001010" line_length="7">Tulákům v tichu dědin</l>
     <l n="6" met="100100" rhyme="2" line_length="6">na pustých silnicích,</l>
     <l n="7" met="100001110" line_length="9">zapomenutí dej, ó, Pane,</l>
     <l n="8" met="010101" rhyme="2" line_length="6">a šťastný na rty smích.</l>
    </lg>
    <lg n="3">
     <l n="9" met="0001000" line_length="7">A k těm, kdo ztratili již,</l>
     <l n="10" met="110100" rhyme="3" line_length="6">hle, víru v člověka,</l>
     <l n="11" met="0100010" line_length="7">dnes milostivě shlédni,</l>
     <l n="12" met="0100010" line_length="7">těch největší je bolest,</l>
     <l n="13" met="010100" rhyme="3" line_length="6">je nikdo nečeká.</l>
    </lg>
   </lg>
  </body>
