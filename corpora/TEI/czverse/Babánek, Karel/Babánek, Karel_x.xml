   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="0100010" line_length="7">To pohádka je stará,</l>
     <l n="2" met="100101" rhyme="1" line_length="6">pohádka mladých let:</l>
     <l n="3" met="1100010" line_length="7">kraj neznámý je, cizí,</l>
     <l n="4" met="100101" rhyme="1" line_length="6">daleký, širý svět.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1100010" line_length="7">Z hor prameny tam s šumem</l>
     <l n="6" met="100100" rhyme="2" line_length="6">stříbrné splývají,</l>
     <l n="7" met="1000010" line_length="7">o volnosti a lásce</l>
     <l n="8" met="010100" rhyme="2" line_length="6">si písně zpívají.</l>
    </lg>
    <lg n="3">
     <l n="9" met="0101010" line_length="7">Ty sladce zní a toužně,</l>
     <l n="10" met="010100" rhyme="3" line_length="6">jak nikdo neslýchal;</l>
     <l n="11" met="1001010" line_length="7">v samotě dívka touží,</l>
     <l n="12" met="010101" rhyme="3" line_length="6">ji teskný svírá žal.</l>
    </lg>
    <lg n="4">
     <l n="13" met="0101010" line_length="7">A krásný hoch a smělý</l>
     <l n="14" met="010001" rhyme="4" line_length="6">jí zjevuje se v snách –</l>
     <l n="15" met="1101000" line_length="7">sen s jitrem rozplývá se,</l>
     <l n="16" met="010100" rhyme="4" line_length="6">jak obraz ve vlnách.</l>
    </lg>
   </lg>
  </body>
