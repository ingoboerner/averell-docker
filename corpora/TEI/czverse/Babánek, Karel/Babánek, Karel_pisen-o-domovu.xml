  <front>
   <head>PÍSEŇ O DOMOVU.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="010100" line_length="6">A kdyby tisíckrát</l>
     <l n="2" met="100101" rhyme="1" line_length="6">volal tě dálek hlas,</l>
     <l n="3" met="101100" line_length="6">cizí kraj vábil tě,</l>
     <l n="4" met="100100" rhyme="1" line_length="6">vrátíš se domů zas.</l>
    </lg>
    <lg n="2">
     <l n="5" met="010100" line_length="6">A kdyby na chvíli</l>
     <l n="6" met="100101" rhyme="1" line_length="6">spoutal tě moře hlas,</l>
     <l n="7" met="110100" line_length="6">v snu lesů domova</l>
     <l n="8" met="100100" rhyme="1" line_length="6">uslyšíš píseň zas.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">A byť i tisíckrát</l>
     <l n="10" met="100100" rhyme="2" line_length="6">zváben, přec poznovu</l>
     <l n="11" met="100100" line_length="6">vracet se budeš zas</l>
     <l n="12" met="010100" rhyme="2" line_length="6">tou cestou k domovu.</l>
    </lg>
   </lg>
  </body>
