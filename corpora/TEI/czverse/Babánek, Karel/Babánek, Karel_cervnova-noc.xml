  <front>
   <head>ČERVNOVÁ NOC.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010101" line_length="8">Akátů vůní dnešní noc</l>
     <l n="2" met="010101" rhyme="1" line_length="6">tak sladce byla mdlá,</l>
     <l n="3" met="10010100" line_length="8">na jarní píseň vzpomněla</l>
     <l n="4" met="010100" rhyme="1" line_length="6">dnes srdce uvadlá.</l>
    </lg>
    <lg n="2">
     <l n="5" met="01000100" line_length="8">A žalovala měsíci,</l>
     <l n="6" met="010000" rhyme="2" line_length="6">a žalovala dnes,</l>
     <l n="7" met="11000100" line_length="8">noc umdlévala vůněmi,</l>
     <l n="8" met="010101" rhyme="2" line_length="6">a temně hučel jez.</l>
    </lg>
   </lg>
  </body>
