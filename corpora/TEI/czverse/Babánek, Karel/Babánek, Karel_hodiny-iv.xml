  <front>
   <head>HODINY. (IV.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010010" line_length="8">Do noci hodiny hlásí</l>
     <l n="2" met="110100" rhyme="1" line_length="6">čas temným úderem,</l>
     <l n="3" met="10010010" line_length="8">zadřímly ulice v stínech –</l>
     <l n="4" met="010100" rhyme="1" line_length="6">buď pokoj lidem všem.</l>
    </lg>
    <lg n="2">
     <l n="5" met="010010010" line_length="9">Ty ozvěnou provázen kroků,</l>
     <l n="6" met="010100" rhyme="2" line_length="6">dál půjdeš nocí však,</l>
     <l n="7" met="1001010" line_length="7">neklidné maje srdce,</l>
     <l n="8" met="010001" rhyme="2" line_length="6">a zasmušilý zrak.</l>
    </lg>
   </lg>
  </body>
