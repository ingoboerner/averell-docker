  <front>
   <head>VII.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001010" line_length="7">Sluneční paprsk zlatem</l>
     <l n="2" met="100100" rhyme="1" line_length="6">na kmenech zahoří.</l>
     <l n="3" met="1001010" line_length="7">Potůček plyne lesem,</l>
     <l n="4" met="010100" rhyme="1" line_length="6">a tiše hovoří.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1101010" line_length="7">Les novým ožil ruchem,</l>
     <l n="6" met="100100" rhyme="2" line_length="6">voláním ve větvích;</l>
     <l n="7" met="1001010" line_length="7">v hlubokém tichu lesa</l>
     <l n="8" met="100101" rhyme="2" line_length="6">hrdličin vábí smích.</l>
    </lg>
    <lg n="3">
     <l n="9" met="0101010" line_length="7">Až bledé slunce hasnouc</l>
     <l n="10" met="100100" rhyme="3" line_length="6">zapadne za hory,</l>
     <l n="11" met="1101010" line_length="7">noc světlá neklid vzbudí,</l>
     <l n="12" met="100100" rhyme="3" line_length="6">tajemné hovory.</l>
    </lg>
   </lg>
  </body>
