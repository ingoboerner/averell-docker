  <front>
   <head>DVĚ PÍSNĚ (I.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100100100" rhyme="1" line_length="12">Zahrádko za domem, bylas mi domovem,</l>
     <l n="2" met="1001001001000" rhyme="2" line_length="13">veselá v sluníčku, po dešti uplakaná.</l>
     <l n="3" met="100100100100" line_length="12">Zahrádko maličká, třešně tam stařičká</l>
     <l n="4" met="1001001000" rhyme="2" line_length="10">květem vždy bývala obsypaná.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100100100" rhyme="1" line_length="12">Zahrádko za domem, komu’s teď domovem,</l>
     <l n="6" met="1001001010" rhyme="3" line_length="10">kolik ti očí už sbohem dalo!</l>
     <l n="7" met="001100100100" line_length="12">Když jsem šel okolo, srdce mě bolelo,</l>
     <l n="8" met="1001001000" rhyme="3" line_length="10">srdce si tichounce zaplakalo.</l>
    </lg>
   </lg>
  </body>
