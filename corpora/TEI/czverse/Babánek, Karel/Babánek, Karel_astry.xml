  <front>
   <head>ASTRY.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="01010101" rhyme="1" line_length="8">Jsou svátky aster. Tichý den</l>
     <l n="2" met="01010100" rhyme="1" line_length="8">je mírnou září proteplen;</l>
     <l n="3" met="11000101" rhyme="2" line_length="8">stráň zasněná a klidný sad</l>
     <l n="4" met="11000101" rhyme="2" line_length="8">má slavnostní a pestrý šat.</l>
    </lg>
    <lg n="2">
     <l n="5" met="01010101" rhyme="3" line_length="8">Jsou svátky aster. V srdce hleď,</l>
     <l n="6" met="10010100" rhyme="3" line_length="8">po bouři mír se vrací teď,</l>
     <l n="7" met="10010101" rhyme="4" line_length="8">pohoda tichá, moudrý klid,</l>
     <l n="8" met="01000101" rhyme="4" line_length="8">jak podzimního slunce svit.</l>
    </lg>
    <lg n="3">
     <l n="9" met="01010101" rhyme="1" line_length="8">Jak mírnou září tichý den,</l>
     <l n="10" met="10010100" rhyme="1" line_length="8">moudrostí život proteplen.</l>
    </lg>
   </lg>
  </body>
