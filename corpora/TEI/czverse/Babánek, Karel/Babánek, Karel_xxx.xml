   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" line_length="8">Moji snové bílé plachty</l>
     <l n="2" met="1000101" rhyme="1" line_length="7">rozepjaly v smělý let.</l>
     <l n="3" met="10101000" line_length="8">Z dálných moří, dobrodružní</l>
     <l n="4" met="1000000" rhyme="1" line_length="7">nenavrací se mi zpět.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101000" line_length="8">Písní táhlou odpovídá</l>
     <l n="6" met="1010101" rhyme="2" line_length="7">moře, věčnou vlny hrou.</l>
     <l n="7" met="10001010" line_length="8">Pochováni moji snové</l>
     <l n="8" met="1001100" rhyme="2" line_length="7">pod vodou, ach pod vodou.</l>
    </lg>
   </lg>
