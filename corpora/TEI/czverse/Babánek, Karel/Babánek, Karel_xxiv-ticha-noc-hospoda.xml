  <front>
   <head>XXIV. Tichá noc. Hospoda.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101100" line_length="6">Tichá noc. Hospoda. </l>
     <l n="2" met="10010" rhyme="1" line_length="5">Klarinet výská –</l>
     <l n="3" met="100100" line_length="6">Po čem že srdce mé</l>
     <l n="4" met="10010" rhyme="1" line_length="5">tobě se stýská?</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Pod nízkým stropem tam</l>
     <l n="6" met="10010" rhyme="2" line_length="5">páry se točí –</l>
     <l n="7" met="100100" line_length="6">Ještě-li zapláče</l>
     <l n="8" met="10110" rhyme="2" line_length="5">pro tě dvé očí?</l>
    </lg>
    <lg n="3">
     <l n="9" met="101100" line_length="6">Tichá noc. Stulena</l>
     <l n="10" met="10010" rhyme="1" line_length="5">v stromoví víska –</l>
     <l n="11" met="100100" line_length="6">Vzpomene někdo tam?</l>
     <l n="12" met="10010" rhyme="1" line_length="5">Klarinet výská – –</l>
    </lg>
   </lg>
  </body>
