  <front>
   <head>VĚČNÝ BOJ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001010" line_length="7">Neoschly ještě slzy</l>
     <l n="2" met="010001" rhyme="1" line_length="6">a nepřebolel žal,</l>
     <l n="3" met="0101010" line_length="7">kdes v cizí zemi leží,</l>
     <l n="4" met="010100" rhyme="1" line_length="6">kdo život miloval.</l>
    </lg>
    <lg n="2">
     <l n="5" met="0101010" line_length="7">A znovu pro srp smrti</l>
     <l n="6" met="010100" rhyme="2" line_length="6">zrá lidský život zas,</l>
     <l n="7" met="0101010" line_length="7">tak jako pro srp žence</l>
     <l n="8" met="100101" rhyme="2" line_length="6">na poli zraje klas.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1001010" line_length="7">Člověku člověk vrahem,</l>
     <l n="10" met="100100" rhyme="3" line_length="6">v zápase odvěkém.</l>
     <l n="11" met="1001010" line_length="7">Neoschly ještě slzy.</l>
     <l n="12" met="100100" rhyme="3" line_length="6">Smutno být člověkem.</l>
    </lg>
   </lg>
  </body>
