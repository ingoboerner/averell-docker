  <front>
   <head>ŠÁTEČEK BĚLOUČKÝ...</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010010010" rhyme="1" line_length="11">Se stromů poslední listí se schvívá,</l>
     <l n="2" met="10010010" rhyme="1" line_length="8">srdce si tichounce zpívá,</l>
     <l n="3" met="10010010010" line_length="11">o zašlé mladosti, minulých láskách.</l>
    </lg>
    <lg n="2">
     <l n="4" met="10010010" rhyme="1" line_length="8">Srdce si tichounce zpívá,</l>
     <l n="5" met="10010" rhyme="1" line_length="5">dívá se, dívá,</l>
     <l n="6" met="10010010110" rhyme="2" line_length="11">všecky je vidí, jak v času šly toku</l>
     <l n="7" met="10010010010" rhyme="2" line_length="11">s úsměvem na rtech, ty se slzou v oku.</l>
    </lg>
    <lg n="3">
     <l n="8" met="10010010" rhyme="1" line_length="8">Tichounce srdce si zpívá,</l>
     <l n="9" met="10010" rhyme="1" line_length="5">dívá se, dívá,</l>
     <l n="10" met="10010010010" rhyme="1" line_length="11">šáteček běloučký z minula kývá.</l>
    </lg>
   </lg>
  </body>
