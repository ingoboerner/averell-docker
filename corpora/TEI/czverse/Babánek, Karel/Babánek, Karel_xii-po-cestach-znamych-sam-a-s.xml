  <front>
   <head>XII. Po cestách známých sám a sám</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010010" rhyme="1" line_length="8">Po cestách známých sám a sám </l>
     <l n="2" met="01000100" rhyme="1" line_length="8">tak chodím tu a vzpomínám</l>
     <l n="3" met="10010101" rhyme="2" line_length="8">na jednu lásku z mladých let,</l>
     <l n="4" met="01010101" rhyme="2" line_length="8">kdy těšil ještě, těšil svět.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010100" rhyme="3" line_length="8">Na jedny oči oddané,</l>
     <l n="6" met="10010100" rhyme="3" line_length="8">na tělo vášní zbodané.</l>
     <l n="7" met="10010100" rhyme="1" line_length="8">Na jednu noc si vzpomínám,</l>
     <l n="8" met="01000100" rhyme="1" line_length="8">kdy závidělo nebe nám!</l>
    </lg>
   </lg>
  </body>
