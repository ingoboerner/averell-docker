  <front>
   <head>Na Řipu. (II.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000010" line_length="7">Pod zasmušilé nebe</l>
     <l n="2" met="010100" rhyme="1" line_length="6">mě touha vedla sem,</l>
     <l n="3" met="1100010" line_length="7">v den podzimní a truchlý</l>
     <l n="4" met="100101" rhyme="1" line_length="6">popatřit v českou zem.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1001000" line_length="7">Daleko na obzoru,</l>
     <l n="6" met="100111" rhyme="2" line_length="6">přes lesklý tří řek pás,</l>
     <l n="7" met="1001010" line_length="7">modravé české hory,</l>
     <l n="8" met="010010" rhyme="2" line_length="6">já viděti chtěl vás.</l>
    </lg>
    <lg n="3">
     <l n="9" met="0101010" line_length="7">A mlha padá, hory</l>
     <l n="10" met="100100" rhyme="3" line_length="6">modravé mizí v ní,</l>
     <l n="11" met="0101010" line_length="7">ta celou kryje zemi</l>
     <l n="12" met="010100" rhyme="3" line_length="6">jak rubáš pohřební.</l>
    </lg>
   </lg>
  </body>
