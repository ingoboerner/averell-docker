  <front>
   <head>POTULNÝ PĚVEC.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010101" line_length="8">Potulný pěvec světem šel,</l>
     <l n="2" met="1001010" rhyme="1" line_length="7">srdce že smutné míval,</l>
     <l n="3" met="10010100" line_length="8">k loutně své často písničky</l>
     <l n="4" met="10010" rhyme="1" line_length="5">přesmutné zpíval.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010100" line_length="8">Těžko jim člověk rozumí,</l>
     <l n="6" met="10110" rhyme="2" line_length="5">srdce zlé má-li –</l>
     <l n="7" met="10010100" line_length="8">písničkám jeho tesklivým</l>
     <l n="8" met="1001000" rhyme="2" line_length="7">srdce své zavírali.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010100" line_length="8">Odešel pěvec od lidí –</l>
     <l n="10" met="1001010" rhyme="1" line_length="7">srdce že smutné míval,</l>
     <l n="11" met="10010100" line_length="8">měsíci, hvězdám na nebi</l>
     <l n="12" met="0101010" rhyme="1" line_length="7">a sobě cestou zpíval.</l>
    </lg>
   </lg>
  </body>
