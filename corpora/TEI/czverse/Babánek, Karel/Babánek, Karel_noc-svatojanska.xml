  <front>
   <head>NOC SVATOJANSKÁ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="11000" line_length="5">Noc svatojanská...</l>
     <l n="2" met="10010101" rhyme="1" line_length="8">Světlušek jiskry svítí v tmách.</l>
     <l n="3" met="0100010" line_length="7">Dnes kapradí prý kvete</l>
     <l n="4" met="10010100" rhyme="1" line_length="8">v tajemných lesa hlubinách.</l>
    </lg>
    <lg n="2">
     <l n="5" met="11010" line_length="5">Noc kouzel plná...</l>
     <l n="6" met="11010101" rhyme="1" line_length="8">Kraj celý jakby tonul v snách.</l>
     <l n="7" met="1001010" line_length="7">Tajemně tmí se lesy</l>
     <l n="8" met="01010100" rhyme="1" line_length="8">a ohně planou na horách.</l>
    </lg>
    <lg n="3">
     <l n="9" met="11000" line_length="5">Noc svatojanská...</l>
     <l n="10" met="10010101" rhyme="2" line_length="8">Zázračné noci kráčím tmou.</l>
     <l n="11" met="1001010" line_length="7">Pohádkou mládí dávnou</l>
     <l n="12" met="01010100" rhyme="2" line_length="8">dnes vábí tesknou duši mou.</l>
    </lg>
   </lg>
  </body>
