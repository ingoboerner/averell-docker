  <front>
   <head>DETVA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010100" line_length="8">Skřivánčí písní v modravu</l>
     <l n="2" met="010001" rhyme="1" line_length="6">se rozezpíval den,</l>
     <l n="3" met="1001010" line_length="7">růžovým prstem kýval</l>
     <l n="4" met="100100" rhyme="1" line_length="6">nizoučkých do oken.</l>
    </lg>
    <lg n="2">
     <l n="5" met="11010100" line_length="8">Šel cikán v lukách zrosených</l>
     <l n="6" met="010001" rhyme="2" line_length="6">a na housličky hrál,</l>
     <l n="7" met="1001010" line_length="7">radostný úsměv jejich</l>
     <l n="8" met="100101" rhyme="2" line_length="6">v slunečném ránu vlál.</l>
    </lg>
   </lg>
  </body>
