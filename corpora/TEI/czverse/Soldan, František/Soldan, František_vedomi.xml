  <front>
   <head>VĚDOMÍ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10000100" rhyme="1" line_length="8">Nemohu se tě nalíbat,</l>
     <l n="2" met="10000100" rhyme="2" line_length="8">nemohu se tě nahladit –</l>
     <l n="3" met="10010101" rhyme="1" line_length="8">rozum mi nutí vždycky stát</l>
     <l n="4" met="1001" rhyme="2" line_length="4">šílený cit.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010100" rhyme="1" line_length="8">Kdybych tě mohl poslouchat</l>
     <l n="6" met="10010101" rhyme="3" line_length="8">tisíce dlouhých, dlouhých let,</l>
     <l n="7" met="10000101" rhyme="1" line_length="8">poslouchal bych as pořád rád</l>
     <l n="8" met="1001" rhyme="3" line_length="4">rozkoš tvých vět.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10000100" rhyme="1" line_length="8">Nemohu se tě nadýchat,</l>
     <l n="10" met="10000100" rhyme="2" line_length="8">nemohu se tě nabažit,</l>
     <l n="11" met="10010101" rhyme="1" line_length="8">rozum mi nutí vždycky stát</l>
     <l n="12" met="1001" rhyme="2" line_length="4">šílený cit.</l>
    </lg>
   </lg>
  </body>
