  <front>
   <head>XVI. Prosba.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000101" line_length="7">Nad pěšinou kvete mák,</l>
     <l n="2" met="100010" rhyme="1" line_length="6">nad pěšinou kvete,</l>
     <l n="3" met="1010100" line_length="7">pozor, ženci, na žatí,</l>
     <l n="4" met="001000" rhyme="1" line_length="6">ať ho nesežnete!</l>
    </lg>
    <lg n="2">
     <l n="5" met="1010100" line_length="7">Kytku z něho natrhám,</l>
     <l n="6" met="101000" rhyme="2" line_length="6">přidám rozmarýnku,</l>
     <l n="7" met="1010100" line_length="7">přijde sobě pro ni kdos</l>
     <l n="8" met="101000" rhyme="2" line_length="6">večer ku okýnku.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1000101" line_length="7">Nad pěšinou kvete mák,</l>
     <l n="10" met="001000" rhyme="1" line_length="6">ať ho nesežnete,</l>
     <l n="11" met="1000100" line_length="7">chudobnému děvčátku</l>
     <l n="12" met="100010" rhyme="1" line_length="6">na radosť tam kvete.</l>
    </lg>
   </lg>
  </body>
