  <front>
   <head>XVII. Posvícení.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000100" rhyme="1" line_length="7">Na ouhoru na pcháči</l>
     <l n="2" met="1000100" rhyme="1" line_length="7">čmelák se tam protáčí,</l>
     <l n="3" met="10101010" rhyme="2" line_length="8">vzal si nové gatě k tomu,</l>
     <l n="4" met="10001010" rhyme="2" line_length="8">kapsy už si nacpal domů</l>
     <l n="5" met="1000100" rhyme="1" line_length="7">medovými koláči.</l>
    </lg>
    <lg n="2">
     <l n="6" met="0010100" rhyme="3" line_length="7">Je to radosť veliká,</l>
     <l n="7" met="1000100" rhyme="3" line_length="7">koláče zas polyká,</l>
     <l n="8" met="01001010" rhyme="4" line_length="8">a ona mu k tomu hraje</l>
     <l n="9" met="10001000" rhyme="4" line_length="8">na dudy a na šalmaje</l>
     <l n="10" met="1000100" rhyme="3" line_length="7">posvícenská muzika.</l>
    </lg>
    <lg n="3">
     <l n="11" met="1000100" rhyme="5" line_length="7">Šalmaje když zpívají,</l>
     <l n="12" met="1010100" rhyme="5" line_length="7">všecky kapsy roztají.</l>
     <l n="13" met="00101000" rhyme="6" line_length="8">Však až bude dozpíváno,</l>
     <l n="14" met="10101010" rhyme="6" line_length="8">čmelák s prázdnou kapsou ráno</l>
     <l n="15" met="1000100" rhyme="5" line_length="7">utopí se v kolaji.</l>
    </lg>
   </lg>
  </body>
