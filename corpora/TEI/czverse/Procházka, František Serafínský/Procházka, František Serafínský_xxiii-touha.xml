  <front>
   <head>XXIII. TOUHA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="00101000" line_length="8">Už ta mladá makůvečka</l>
     <l n="2" met="100100" rhyme="1" line_length="6">košatí, košatí,</l>
     <l n="3" met="10100100" line_length="8">za rok, za dva, můj synečku,</l>
     <l n="4" met="1010100" rhyme="1" line_length="7">budem pod dní sedati.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10001000" line_length="8">Na lavičce malované</l>
     <l n="6" met="100100" rhyme="2" line_length="6">z jasanu, z jasanu,</l>
     <l n="7" met="10001000" line_length="8">závorou pak u komůrky</l>
     <l n="8" met="1000100" rhyme="2" line_length="7">zavírat se přestanu.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10001010" line_length="8">Rezedy pak plná bude</l>
     <l n="10" met="100100" rhyme="3" line_length="6">zahrada, zahrada,</l>
     <l n="11" met="01001010" line_length="8">a z makůvky bílých květů</l>
     <l n="12" met="1000100" rhyme="3" line_length="7">do klínu nám napadá.</l>
    </lg>
   </lg>
  </body>
