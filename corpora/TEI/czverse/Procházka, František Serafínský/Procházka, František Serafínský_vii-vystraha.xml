  <front>
   <head>VII. Výstraha.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001000" line_length="8">Bubáci se vychulují</l>
     <l n="2" met="10100" rhyme="1" line_length="5">černí, šediví,</l>
     <l n="3" met="10101010" line_length="8">práskni, hochu, práskni vrankám</l>
     <l n="4" met="10100" rhyme="1" line_length="5">bičem do hřívy!</l>
     <l n="5" met="1010100010" rhyme="2" line_length="10">Skosí rázem zlatoklasé žito,</l>
     <l n="6" met="1000101010" rhyme="2" line_length="10">bude ti to, milý hochu, líto.</l>
     <l n="7" met="0010100" rhyme="3" line_length="7">Co jsi svázal, vymlátí,</l>
     <l n="8" met="0000100" rhyme="3" line_length="7">kdo pak ti to zaplatí?</l>
    </lg>
    <lg n="2">
     <l n="9" met="10001010" line_length="8">Nebojím se, ať se choulí,</l>
     <l n="10" met="01001" rhyme="4" line_length="5">ty bubáky znám,</l>
     <l n="11" met="10000010" line_length="8">panímáma se to mračí,</l>
     <l n="12" met="10100" rhyme="4" line_length="5">k dcerce chodívám.</l>
     <l n="13" met="1001101000" rhyme="5" line_length="10">Obrázek mám od ní darovaný,</l>
     <l n="14" met="1000101000" rhyme="5" line_length="10">obrázeček tuze dotýkaný, –</l>
     <l n="15" met="1000100" rhyme="3" line_length="7">bubáci se vytratí,</l>
     <l n="16" met="1000100" rhyme="3" line_length="7">panímáma zaplatí.</l>
    </lg>
   </lg>
  </body>
