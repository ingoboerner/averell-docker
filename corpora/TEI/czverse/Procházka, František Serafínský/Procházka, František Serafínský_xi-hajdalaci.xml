 <text>
  <front>
   <head>XI. HAJDALÁCI.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001010" line_length="8">Hajdaláci měli práci</l>
     <l n="2" met="100" rhyme="1" line_length="3">velikou,</l>
     <l n="3" met="10001000" rhyme="2" line_length="8">hospodu si postavili,</l>
     <l n="4" met="11101110" rhyme="2" line_length="8">tři dni jedli, tři dni pili</l>
     <l n="5" met="1000100" rhyme="1" line_length="7">s muzikou, no s muzikou.</l>
    </lg>
    <lg n="2">
     <l n="6" met="10001010" line_length="8">Hajdalačky stály plačky</l>
     <l n="7" met="100" rhyme="3" line_length="3">u dveří,</l>
     <l n="8" met="11101000" rhyme="4" line_length="8">tři dni muže neviděly,</l>
     <l n="9" met="10001010" rhyme="4" line_length="8">od všeho též kousek chtěly</l>
     <l n="10" met="1000100" rhyme="3" line_length="7">k večeři, no k večeři.</l>
    </lg>
    <lg n="3">
     <l n="11" met="10001010" line_length="8">Hajdaláci měli práci</l>
     <l n="12" met="100" rhyme="1" line_length="3">velikou,</l>
     <l n="13" met="10001000" rhyme="5" line_length="8">hajdalačky vystrčili</l>
     <l n="14" met="10101010" rhyme="5" line_length="8">a zas jedli a zas pili</l>
     <l n="15" met="1000100" rhyme="1" line_length="7">s muzikou, no s muzikou.</l>
    </lg>
    <lg n="4">
     <l n="16" met="10001010" line_length="8">Hajdaláci po té práci</l>
     <l n="17" met="100" rhyme="6" line_length="3">ve středu,</l>
     <l n="18" met="10001000" rhyme="7" line_length="8">klátili se umrkáni</l>
     <l n="19" met="10001000" rhyme="7" line_length="8">pomalounku na pokání</l>
     <l n="20" met="1000100" rhyme="6" line_length="7">k obědu, no k obědu.</l>
    </lg>
    <lg n="5">
     <l n="21" met="10001010" line_length="8">Hajdalačky jako dračky</l>
     <l n="22" met="000" rhyme="8" line_length="3">už tu jsou,</l>
     <l n="23" met="10101010" rhyme="9" line_length="8">v peci tmu, nic v hrnci mají,</l>
     <l n="24" met="10001000" rhyme="9" line_length="8">ale to nic podávají</l>
     <l n="25" met="1000100" rhyme="8" line_length="7">s muzikou, no s muzikou.</l>
    </lg>
   </lg>
