  <front>
   <head>XV. Bohatec.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="11001010" rhyme="1" line_length="8">Mám hříbátko s lyskou, s lyskou,</l>
     <l n="2" met="01001010" rhyme="1" line_length="8">a chaloupku nízkou, nízkou.</l>
    </lg>
    <lg n="2">
     <l n="3" met="10001010" rhyme="2" line_length="8">Hříbátku však svědčí, svědčí,</l>
     <l n="4" met="10101010" rhyme="2" line_length="8">brzo bude větší, větší.</l>
    </lg>
    <lg n="3">
     <l n="5" met="10001010" rhyme="3" line_length="8">Přes pole a meze, meze,</l>
     <l n="6" met="10001010" rhyme="3" line_length="8">k panence mne sveze, sveze.</l>
    </lg>
    <lg n="4">
     <l n="7" met="10011010" rhyme="4" line_length="8">Panenku mám radši, radši,</l>
     <l n="8" met="10001010" rhyme="4" line_length="8">chaloupka nám stačí, stačí.</l>
    </lg>
   </lg>
  </body>
