  <front>
   <head>XXVIII. Slavíček.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1100100" rhyme="1" line_length="7">Hej, slavíčku, pomalu,</l>
     <l n="2" met="1000" rhyme="2" line_length="4">pomaličku,</l>
     <l n="3" met="0100100" rhyme="1" line_length="7">kde’s koupil tu píšťalu,</l>
     <l n="4" met="1000" rhyme="2" line_length="4">píšťaličku?</l>
     <l n="5" met="100010" rhyme="3" line_length="6">Za kolik pak peněz,</l>
     <l n="6" met="001010" rhyme="3" line_length="6">bych tam darmo nelez,</l>
     <l n="7" met="1010100" rhyme="4" line_length="7">abych zrovna jako ty</l>
     <l n="8" met="010010" line_length="6">všem děvčátkům pískal</l>
     <l n="9" met="100" rhyme="4" line_length="3">do noty!</l>
    </lg>
    <lg n="2">
     <l n="10" met="1010100" rhyme="5" line_length="7">A to, pane, drahá je</l>
     <l n="11" met="1000" rhyme="6" line_length="4">píšťalička,</l>
     <l n="12" met="1000100" rhyme="5" line_length="7">potkal jsem s ní u ráje</l>
     <l n="13" met="1000" rhyme="6" line_length="4">vandrovníčka.</l>
     <l n="14" met="100010" rhyme="7" line_length="6">Ujížděj si pro ni</l>
     <l n="15" met="100010" rhyme="7" line_length="6">na nejlepším koni,</l>
     <l n="16" met="1000100" rhyme="8" line_length="7">darmo ti to neříkám,</l>
     <l n="17" met="10001000" line_length="8">na hřebíčku za provázek</l>
     <l n="18" met="100" rhyme="8" line_length="3">visí tam.</l>
    </lg>
    <lg n="3">
     <l n="19" met="1100100" rhyme="9" line_length="7">Hej, slavíčku, pomalu,</l>
     <l n="20" met="1000" rhyme="10" line_length="4">pomaličku,</l>
     <l n="21" met="1010100" rhyme="9" line_length="7">aspoň půjč tu píšťalu,</l>
     <l n="22" met="1000" rhyme="10" line_length="4">píšťaličku.</l>
     <l n="23" met="100010" rhyme="11" line_length="6">Kobylka mně chromá,</l>
     <l n="24" met="101010" rhyme="11" line_length="6">musím zůstat doma,</l>
     <l n="25" met="1010101" rhyme="12" line_length="7">dám ti za to nový groš</l>
     <l n="26" met="01001000" line_length="8">a hubiček od děvčátek</l>
     <l n="27" met="101" rhyme="12" line_length="3">plný koš.</l>
    </lg>
   </lg>
  </body>
