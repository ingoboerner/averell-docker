  <front>
   <head>XX. Franta.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101000" rhyme="1" line_length="8">Potkal Franta muzikanta:</l>
     <l n="2" met="1000101" rhyme="2" line_length="7">Muzikante, kampak jdeš,</l>
     <l n="3" met="00001000" line_length="8">zda-li pak ty pod okýnkem</l>
     <l n="4" met="0100100" rhyme="2" line_length="7">mé panence zahraješ?</l>
    </lg>
    <lg n="2">
     <l n="5" met="00101000" line_length="8">Je-li sklínka u okýnka,</l>
     <l n="6" met="1000101" rhyme="3" line_length="7">zahraju já ještě rád,</l>
     <l n="7" met="10000100" line_length="8">zaplatíš-li, a panenka</l>
     <l n="8" met="1000100" rhyme="3" line_length="7">přijde-li mi děkovat.</l>
    </lg>
    <lg n="3">
     <l n="9" met="11101000" rhyme="1" line_length="8">Dal hrát Franta furianta,</l>
     <l n="10" met="1010100" rhyme="4" line_length="7">táta s mámou tancuje,</l>
     <l n="11" met="10001010" line_length="8">muzikant si sliní pysky,</l>
     <l n="12" met="1010100" rhyme="4" line_length="7">panna sobě libuje.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10101000" line_length="8">Nedbal Franta furianta,</l>
     <l n="14" met="1000100" rhyme="5" line_length="7">do komůrky vklouzl hned,</l>
     <l n="15" met="10001000" line_length="8">utrhl tam na růžičce</l>
     <l n="16" met="1000101" rhyme="5" line_length="7">za okénkem jeden květ.</l>
    </lg>
    <lg n="5">
     <l n="17" met="11001000" line_length="8">Pojď, panenko, pod okénko,</l>
     <l n="18" met="1001100" rhyme="6" line_length="7">muzikant chce odměnu. –</l>
     <l n="19" met="10100010" line_length="8">Ale máma zle se katí:</l>
     <l n="20" met="0010100" rhyme="6" line_length="7">už ho, čerta, zaženu!</l>
    </lg>
    <lg n="6">
     <l n="21" met="10101000" line_length="8">Bylo hráno, nedohráno,</l>
     <l n="22" met="1010100" rhyme="7" line_length="7">Franta humny utíká:</l>
     <l n="23" met="10101000" line_length="8">Pánbůh zaplať, muzikante,</l>
     <l n="24" met="1010100" rhyme="7" line_length="7">byla pěkná muzika. –</l>
    </lg>
   </lg>
