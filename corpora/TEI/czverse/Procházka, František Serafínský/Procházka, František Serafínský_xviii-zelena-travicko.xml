  <front>
   <head>XVIII. ZELENÁ TRAVIČKO –</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Zelená travičko</l>
     <l n="2" met="1010" rhyme="1" line_length="4">na mém hrobě,</l>
     <l n="3" met="010100" line_length="6">skrz hlínu vysokou</l>
     <l n="4" met="1010" rhyme="1" line_length="4">hledím k tobě.</l>
    </lg>
    <lg n="2">
     <l n="5" met="010100" line_length="6">Skrz hlínu vysokou</l>
     <l n="6" met="1010" rhyme="2" line_length="4">květ mi kývá,</l>
     <l n="7" met="100100" line_length="6">na bezu nade mnou</l>
     <l n="8" met="1010" rhyme="2" line_length="4">zvonek zpívá.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">Kámen mne netlačí</l>
     <l n="10" met="1010" rhyme="3" line_length="4">v klínu země,</l>
     <l n="11" met="010100" line_length="6">tak milo, milounko</l>
     <l n="12" met="1000" rhyme="3" line_length="4">leží se mně.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100100" line_length="6">Přijde i děvčátko,</l>
     <l n="14" met="1010" rhyme="4" line_length="4">hlavu svěsí,</l>
     <l n="15" met="100100" line_length="6">slzičkou perličkou</l>
     <l n="16" met="1000" rhyme="4" line_length="4">vzpomene si.</l>
    </lg>
   </lg>
  </body>
