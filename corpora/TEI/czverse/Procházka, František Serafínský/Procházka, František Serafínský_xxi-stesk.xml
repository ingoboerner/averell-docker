  <front>
   <head>XXI. Stesk.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001101" rhyme="1" line_length="7">Sluníčko jde brzo spat,</l>
     <l n="2" met="1100101" rhyme="1" line_length="7">ach, matičko, brzo spat.</l>
     <l n="3" met="001010" rhyme="2" line_length="6">My ho dobře známe,</l>
     <l n="4" met="000100" rhyme="2" line_length="6">zda-li pak nemáme</l>
     <l n="5" met="10100" rhyme="1" line_length="5">dělat taky tak!</l>
    </lg>
    <lg n="2">
     <l n="6" met="1100101" rhyme="3" line_length="7">Dvě řičice peří drát,</l>
     <l n="7" met="1100101" rhyme="3" line_length="7">ach, tatíčku, peří drát,</l>
     <l n="8" met="101000" rhyme="4" line_length="6">musit při měsíčku</l>
     <l n="9" met="101000" rhyme="4" line_length="6">potom na chodníčku</l>
     <l n="10" met="10001" rhyme="3" line_length="5">do půlnoci stát!</l>
    </lg>
    <lg n="3">
     <l n="11" met="1010100" rhyme="5" line_length="7">Měsíc, šelma podšitá,</l>
     <l n="12" met="1100100" rhyme="5" line_length="7">ach, Jeníčku, podšitá,</l>
     <l n="13" met="101010" rhyme="6" line_length="6">nejde v nebes bránu,</l>
     <l n="14" met="100010" rhyme="6" line_length="6">hubičky nám k ránu</l>
     <l n="15" met="10100" rhyme="5" line_length="5">nahlas počítá.</l>
    </lg>
   </lg>
  </body>
