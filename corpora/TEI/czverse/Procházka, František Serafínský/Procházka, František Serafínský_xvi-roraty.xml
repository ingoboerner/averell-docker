  <front>
   <head>XVI. Roráty.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="010010" line_length="6">Ty Náměšťské zvony</l>
     <l n="2" met="100010" rhyme="1" line_length="6">na roráty zvoní,</l>
     <l n="3" met="100100" line_length="6">zavátá pěšinka,</l>
     <l n="4" met="100110" rhyme="1" line_length="6">horáci jdou po ní.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Horáci, horačky,</l>
     <l n="6" met="100100" rhyme="2" line_length="6">kožichy po paty,</l>
     <l n="7" met="010100" line_length="6">tak budou vyspávat</l>
     <l n="8" met="100100" rhyme="2" line_length="6">pod kruchtou roráty.</l>
    </lg>
    <lg n="3">
     <l n="9" met="010100" line_length="6">Až bude svítati,</l>
     <l n="10" met="100100" rhyme="3" line_length="6">závějí po lese</l>
     <l n="11" met="100100" line_length="6">horák si horačku</l>
     <l n="12" met="100100" rhyme="3" line_length="6">na zádech pronese.</l>
    </lg>
   </lg>
  </body>
