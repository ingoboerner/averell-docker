  <front>
   <head>PŘÍPITEK.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010101" line_length="8">Tobě ať zní! Však tolik rád</l>
     <l n="2" met="10000010" rhyme="1" line_length="8">píseň tu sám jsi nám zpíval</l>
     <l n="3" met="01010100" line_length="8">a česká srdce ve souzvuk</l>
     <l n="4" met="0101000" rhyme="1" line_length="7">jí všecka rozechvíval.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010101" line_length="8">Široké lány českých hrud</l>
     <l n="6" met="10010010" rhyme="2" line_length="8">klasnatým vlněním dýší,</l>
     <l n="7" met="10010100" line_length="8">a ty jsou, lidu k útěše,</l>
     <l n="8" met="1001010" rhyme="2" line_length="7">písně Tvé slavnou říší.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100100" line_length="9">Plane v ní naděje radostná,</l>
     <l n="10" met="10110010" rhyme="3" line_length="8">hrdý vzdor strmí z ní z muky,</l>
     <l n="11" met="01010100" line_length="8">a bouří síla kovová</l>
     <l n="12" met="1001010" rhyme="3" line_length="7">bušících kladiv zvuky.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10000100" line_length="8">Ze srdcí vzal’s ji, srdcím zas</l>
     <l n="14" met="10010010" rhyme="4" line_length="8">zpíváš ji do noty známě,</l>
     <l n="15" met="00010100" line_length="8">však ty bys lepší nekoupil</l>
     <l n="16" met="1001010" rhyme="4" line_length="7">v nižádném světa krámě.</l>
    </lg>
    <lg n="5">
     <l n="17" met="01010100" line_length="8">Ať zní a hrá dál píseň Tvá,</l>
     <l n="18" met="10010010" rhyme="5" line_length="8">zalívá slunečnem kraje</l>
     <l n="19" met="01010100" line_length="8">a k slavné boží úrodě</l>
     <l n="20" met="1001010" rhyme="5" line_length="7">na české roli zraje!</l>
    </lg>
    <lg n="6">
     <l n="21" met="01000100" line_length="8">Nechť síle své i naději</l>
     <l n="22" met="11010010" rhyme="6" line_length="8">růst v duších tisíců dává,</l>
     <l n="23" met="01010100" line_length="8">a duše ony i tu Tvou</l>
     <l n="24" met="0101000" rhyme="6" line_length="7">nechť Pánbůh zachovává!</l>
    </lg>
   </lg>
