  <front>
   <head>XIX. LISTÍ PADÁ S JAVORA...</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010100" rhyme="1" line_length="7">Listí padá s javora,</l>
     <l n="2" met="10101000" line_length="8">nechoď za mnou, šohajíčku,</l>
     <l n="3" met="100" rhyme="1" line_length="3">do dvora.</l>
     <l n="4" met="1000" line_length="4">Nechoď ty tam,</l>
     <l n="5" met="0010" rhyme="2" line_length="4">to ti radím,</l>
     <l n="6" met="000010" line_length="6">já ti to radš jinak</l>
     <l n="7" met="1000" rhyme="2" line_length="4">vynahradím.</l>
    </lg>
    <lg n="2">
     <l n="8" met="1000100" rhyme="3" line_length="7">Třeba se juž setmělo,</l>
     <l n="9" met="00101000" line_length="8">zas by listí javorové</l>
     <l n="10" met="100" rhyme="3" line_length="3">šustělo.</l>
     <l n="11" met="1000" line_length="4">Nechoď ty tam,</l>
     <l n="12" met="0010" rhyme="2" line_length="4">to ti radím,</l>
     <l n="13" met="000010" line_length="6">já ti to radš jinak</l>
     <l n="14" met="1000" rhyme="2" line_length="4">vynahradím.</l>
    </lg>
   </lg>
  </body>
