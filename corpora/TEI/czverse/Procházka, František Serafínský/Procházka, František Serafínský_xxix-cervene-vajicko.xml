  <front>
   <head>XXIX. Červené vajíčko.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Červené vajíčko</l>
     <l n="2" met="1000" rhyme="2" line_length="4">schovávané,</l>
     <l n="3" met="010100" rhyme="1" line_length="6">a na něm srdíčko</l>
     <l n="4" met="1000" rhyme="2" line_length="4">malované,</l>
     <l n="5" met="000100" line_length="6">však on ho ledakdo</l>
     <l n="6" met="1000" rhyme="2" line_length="4">nedostane,</l>
     <l n="7" met="1001000" rhyme="2" line_length="7">tralala, nedostane!</l>
    </lg>
    <lg n="2">
     <l n="8" met="010100" rhyme="3" line_length="6">Jen jeden jediný,</l>
     <l n="9" met="1000" rhyme="4" line_length="4">rychtářovic,</l>
     <l n="10" met="010100" rhyme="3" line_length="6">je z naší dědiny</l>
     <l n="11" met="1000" rhyme="4" line_length="4">z Přemyslovic,</l>
     <l n="12" met="100100" line_length="6">přijde si k okénku</l>
     <l n="13" met="1010" rhyme="4" line_length="4">ještě pro víc,</l>
     <l n="14" met="1001010" rhyme="4" line_length="7">tralala, ještě pro víc.</l>
    </lg>
    <lg n="3">
     <l n="15" met="100010" rhyme="5" line_length="6">Vajíčko ten tejden</l>
     <l n="16" met="1000" rhyme="6" line_length="4">z velkonoce,</l>
     <l n="17" met="001100" rhyme="5" line_length="6">už ho dám jednou jen</l>
     <l n="18" met="1010" rhyme="6" line_length="4">v tomto roce,</l>
     <l n="19" met="010100" line_length="6">však budu rychtářkou</l>
     <l n="20" met="1000" rhyme="6" line_length="4">na vánoce,</l>
     <l n="21" met="1001000" rhyme="6" line_length="7">tralala, na vánoce!</l>
    </lg>
   </lg>
  </body>
