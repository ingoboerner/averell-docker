  <front>
   <head>VEČERY MLÁDÍ</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100010" line_length="9">Mlčelo osamělé srdce</l>
     <l n="2" met="100010100" line_length="9">v nehybném a těžkém oblaku</l>
     <l n="3" met="1001010000" line_length="10">temného mládí; nepoznávalo</l>
     <l n="4" met="1000101010" line_length="10">lahodného tepla útlé ruky,</l>
     <l n="5" met="100010100" line_length="9">nevěřilo v taje duchovní.</l>
     <l n="6" met="100010100" line_length="9">Hřávalo se chmurou jehličí,</l>
     <l n="7" met="10100010" line_length="8">jeho přítelem byl sirý,</l>
     <l n="8" met="10100010" line_length="8">světem opuštěný vítr.</l>
    </lg>
    <lg n="2">
     <l n="9" met="1000100" line_length="7">Černočerné lesíky</l>
     <l n="10" met="10010010" line_length="8">prchaly k východu s globem</l>
     <l n="11" met="010000100010" line_length="12">a obnažovaly udivenou lunu,</l>
     <l n="12" met="0100100" line_length="7">jež jako by stoupala.</l>
     <l n="13" met="1001000100" line_length="10">Jindy se pozdvihaly posupně</l>
     <l n="14" met="10001000" line_length="8">na bledavu pozápadním</l>
     <l n="15" met="0101001000" line_length="10">a zvolna, váhavě pohltily</l>
     <l n="16" met="10101" line_length="5">její teskný člun;</l>
     <l n="17" met="1000101010" line_length="10">vroubkované pleso ztuhlé smoly,</l>
     <l n="18" met="1010010001" line_length="10">rádo pijící rozplývavou zář.</l>
    </lg>
    <lg n="3">
     <l n="19" met="101001010010" line_length="12">Bylo trvalé šero po celé zemi,</l>
     <l n="20" met="10100010" line_length="8">závoj hlubokého marna,</l>
     <l n="21" met="01010000100" line_length="11">a v městech uspávající fontány</l>
     <l n="22" met="1001001010" line_length="10">vrhaly k mrákavám matné vody,</l>
     <l n="23" met="1001001000" line_length="10">goticky zlomené v beznadějích.</l>
    </lg>
   </lg>
