  <front>
   <head>V PODJESENI. (II.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001010" line_length="8">Vykvetalo srdce moje</l>
     <l n="2" met="00101000" rhyme="1" line_length="8">jak to křoví na podlesí –</l>
     <l n="3" met="10101010" line_length="8">plno květů – plno růží,</l>
     <l n="4" met="10101010" rhyme="1" line_length="8">samé písně – samé plesy.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10001010" line_length="8">Uvadnulo srdce moje</l>
     <l n="6" met="00101010" rhyme="2" line_length="8">jak to křoví podle skály –</l>
     <l n="7" met="10101010" line_length="8">plno trní – plno hloží</l>
     <l n="8" met="10101010" rhyme="2" line_length="8">samé vzdechy – samé žaly.</l>
    </lg>
   </lg>
  </body>
