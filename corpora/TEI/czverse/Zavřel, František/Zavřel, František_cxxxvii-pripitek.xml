  <front>
   <head>CXXXVII PŘÍPITEK</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Kouzelná Helenko,</l>
     <l n="2" met="010100" rhyme="1" line_length="6">můj sne, má myšlenko,</l>
     <l n="3" met="110100" rhyme="2" line_length="6">smrt, hrůzu půlnoci</l>
     <l n="4" met="100100" rhyme="2" line_length="6">dovedlas přemoci,</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" rhyme="3" line_length="6">života bídu též</l>
     <l n="6" met="100100" rhyme="3" line_length="6">s úsměvem přemůžeš,</l>
     <l n="7" met="000100" rhyme="4" line_length="6">tak jak ti souzeno.</l>
     <l n="8" met="010100" rhyme="4" line_length="6">Buď zdráva, Heleno!</l>
    </lg>
   </lg>
  </body>
