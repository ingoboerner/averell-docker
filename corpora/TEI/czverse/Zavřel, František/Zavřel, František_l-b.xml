 <text>
  <front>
   <head>L. B.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" rhyme="1" line_length="8">Nech mne klečet u Tvých nohou,</l>
     <l n="2" met="1000100" rhyme="2" line_length="7">královno a bohyně!</l>
     <l n="3" met="00101010" rhyme="1" line_length="8">Co mé oči vidět mohou</l>
     <l n="4" met="1010100" rhyme="2" line_length="7">skrze Tebe jedině!</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101000" rhyme="3" line_length="8">Krásu! Zradu! Skutečností</l>
     <l n="6" met="1000100" rhyme="4" line_length="7">divuplnou skutečnost!</l>
     <l n="7" met="10001000" rhyme="3" line_length="8">Od věčnosti do věčnosti</l>
     <l n="8" met="1000001" rhyme="4" line_length="7">nejdrahocennější skvost.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10001010" rhyme="5" line_length="8">Svrchovaný zázrak: Tebe,</l>
     <l n="10" met="1010100" rhyme="6" line_length="7">tvrdý požár zraků Tvých,</l>
     <l n="11" met="10101010" rhyme="5" line_length="8">která jako řecká Hebe</l>
     <l n="12" met="1000101" rhyme="6" line_length="7">nevědoma nítíš hřích!</l>
    </lg>
    <lg n="4">
     <l n="13" met="10101010" rhyme="7" line_length="8">Nech mne klečet u Tvých nohou,</l>
     <l n="14" met="1000100" rhyme="8" line_length="7">královno a bohyně!</l>
     <l n="15" met="00101010" rhyme="7" line_length="8">Co mé oči vidět mohou</l>
     <l n="16" met="1010100" rhyme="8" line_length="7">skrze Tebe jedině!</l>
    </lg>
   </lg>
