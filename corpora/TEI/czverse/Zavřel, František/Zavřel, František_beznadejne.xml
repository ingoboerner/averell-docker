  <front>
   <head>BEZNADĚJNÉ</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001" rhyme="1" line_length="5">Generace bab</l>
     <l n="2" met="0101001" rhyme="2" line_length="7">a ani jediný muž!</l>
     <l n="3" met="0100001" rhyme="1" line_length="7">I kdyby tu byl, je sláb,</l>
     <l n="4" met="01010" rhyme="3" line_length="5">je příliš slabý,</l>
     <l n="5" met="10" rhyme="3" line_length="2">aby</l>
     <l n="6" met="11010" rhyme="3" line_length="5">vzal na ty baby</l>
     <l n="7" met="1" rhyme="2" line_length="1">nůž!</l>
    </lg>
   </lg>
