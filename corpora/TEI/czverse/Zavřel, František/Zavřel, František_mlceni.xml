     <l n="1" met="1001010" rhyme="1" line_length="7">Umlklo vytí vlčí,</l>
     <l n="2" met="10010010" rhyme="1" line_length="8">kreténi mlčí a mlčí.</l>
     <l n="3" met="101000100" rhyme="2" line_length="9">Mlčí levice a pravice</l>
     <l n="4" met="01010100" rhyme="2" line_length="8">a všichni hnijí mlčíce.</l>
