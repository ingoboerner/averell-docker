   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010100" rhyme="1" line_length="8">Mlha jim padá na víčka,</l>
     <l n="2" met="10100010" rhyme="2" line_length="8">ústa opakují fádně</l>
     <l n="3" met="1000100" rhyme="1" line_length="7">naučená slovíčka.</l>
     <l n="4" met="0100010" rhyme="2" line_length="7">Jsou dokonale na dně,</l>
     <l n="5" met="1010100" rhyme="1" line_length="7">ale mají tatíčka!</l>
    </lg>
   </lg>
