 <text>
  <front>
   <head>Procházka.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" rhyme="1" line_length="6">Z hurta sestry milé,</l>
     <l n="2" met="10000" rhyme="2" line_length="5">Na procházku dnes!</l>
     <l n="3" met="101010" rhyme="1" line_length="6">Užit jarní chvíle</l>
     <l n="4" met="10001" rhyme="2" line_length="5">Vyběhněme v les.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101010" rhyme="3" line_length="6">Libý Zefír věje</l>
     <l n="6" met="10011" rhyme="4" line_length="5">Přes pole y háj,</l>
     <l n="7" met="101010" rhyme="3" line_length="6">Tichý slavík pěje,</l>
     <l n="8" met="10001" rhyme="4" line_length="5">Oslavuje máj.</l>
    </lg>
    <lg n="3">
     <l n="9" met="101000" rhyme="5" line_length="6">Tváři pozastřete</l>
     <l n="10" met="10100" rhyme="6" line_length="5">Rouškou zelenou,</l>
     <l n="11" met="101000" rhyme="5" line_length="6">Ňadra okrášlete</l>
     <l n="12" met="10100" rhyme="6" line_length="5">Růží červenou.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100010" rhyme="7" line_length="6">Přijdou k nám se hráti</l>
     <l n="14" met="10100" rhyme="8" line_length="5">Švární mládency,</l>
     <l n="15" met="101000" rhyme="7" line_length="6">Budem tancovati</l>
     <l n="16" met="10100" rhyme="8" line_length="5">S nimi pod věncy,</l>
    </lg>
    <lg n="5">
     <l n="17" met="101000" rhyme="9" line_length="6">Jež sy uvijeme</l>
     <l n="18" met="10100" rhyme="10" line_length="5">Krásně z klokoče,</l>
     <l n="19" met="101000" rhyme="9" line_length="6">Květy nasejeme</l>
     <l n="20" met="10100" rhyme="10" line_length="5">Mezy vrkoče.</l>
    </lg>
    <lg n="6">
     <l n="21" met="101010" rhyme="11" line_length="6">Sladce v stínu chladném</l>
     <l n="22" met="10000" rhyme="12" line_length="5">Odpočineme,</l>
     <l n="23" met="101010" rhyme="11" line_length="6">S chlapcy v místě vnadném</l>
     <l n="24" met="10000" rhyme="12" line_length="5">Požertujeme.</l>
    </lg>
    <lg n="7">
     <l n="25" met="101000" rhyme="13" line_length="6">K cti jim zahádáme</l>
     <l n="26" met="10100" rhyme="14" line_length="5">Hádky milostné,</l>
     <l n="27" met="101000" rhyme="13" line_length="6">Zvučně zazpíváme</l>
     <l n="28" met="10100" rhyme="14" line_length="5">Písně radostné.</l>
    </lg>
    <lg n="8">
     <l n="29" met="100010" rhyme="15" line_length="6">Na rozkošném kvítku,</l>
     <l n="30" met="00100" rhyme="16" line_length="5">Když se ukáže</l>
     <l n="31" met="101010" rhyme="15" line_length="6">Rosa, každá kytku</l>
     <l n="32" met="10100" rhyme="16" line_length="5">Hochu uváže.</l>
    </lg>
    <lg n="9">
     <l n="33" met="001000" rhyme="17" line_length="6">Ním mu roztomíle</l>
     <l n="34" met="10100" rhyme="18" line_length="5">Klobouk ozdobí,</l>
     <l n="35" met="101010" rhyme="17" line_length="6">Láska jarní chvíle</l>
     <l n="36" met="00100" rhyme="18" line_length="5">To sy osobí.</l>
    </lg>
    <lg n="10">
     <l n="37" met="101010" rhyme="19" line_length="6">A když země zase</l>
     <l n="38" met="10100" rhyme="20" line_length="5">Černou zástěru</l>
     <l n="39" met="100010" rhyme="19" line_length="6">Bez nadání na se</l>
     <l n="40" met="10100" rhyme="20" line_length="5">Vezme k večeru,</l>
    </lg>
    <lg n="11">
     <l n="41" met="101000" rhyme="21" line_length="6">Domů pospíšíme,</l>
     <l n="42" met="10100" rhyme="22" line_length="5">Sladce usneme,</l>
     <l n="43" met="101000" rhyme="21" line_length="6">Zdraví procýtíme,</l>
     <l n="44" met="10100" rhyme="22" line_length="5">Čerstvě vstaneme.</l>
    </lg>
    <lg n="12">
     <l n="45" met="101010" rhyme="23" line_length="6">S novou chutí k prácy</l>
     <l n="46" met="10000" rhyme="24" line_length="5">Chytíme se zas,</l>
     <l n="47" met="101000" rhyme="23" line_length="6">V krátký na rekracý</l>
     <l n="48" met="10001" rhyme="24" line_length="5">Vyběhneme čas.</l>
    </lg>
   </lg>
