  <front>
   <head>Na děťátko při rakvi.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Umřela matička,</l>
     <l n="2" met="100100" rhyme="1" line_length="6">zůstalo děťátko,</l>
     <l n="3" met="100100" line_length="6">tleskalo ručkama</l>
     <l n="4" met="100100" rhyme="1" line_length="6">ubohé holátko.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Tleskalo ručkama...</l>
     <l n="6" met="100100" rhyme="2" line_length="6">ovšemtě neznalo,</l>
     <l n="7" met="000100" line_length="6">co mu vše matičkou</l>
     <l n="8" met="100100" rhyme="2" line_length="6">na věky skonalo.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">Netleskej, netleskej,</l>
     <l n="10" met="100100" rhyme="1" line_length="6">malinké děvčátko,</l>
     <l n="11" met="100100" line_length="6">neboť až vyrosteš – –</l>
     <l n="12" met="100100" rhyme="1" line_length="6">Ubohé holátko!</l>
    </lg>
   </lg>
  </body>
