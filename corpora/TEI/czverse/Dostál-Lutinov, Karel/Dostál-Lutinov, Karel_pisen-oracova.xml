  <front>
   <head>PÍSEŇ ORÁČOVA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" rhyme="1" line_length="6">Orám, orám, orám</l>
     <l n="2" met="100010" rhyme="1" line_length="6">od západu k zorám.</l>
     <l n="3" met="101010" rhyme="1" line_length="6">Orám, orám, orám</l>
     <l n="4" met="101010" rhyme="1" line_length="6">v srdci dolů horám.</l>
     <l n="5" met="101000" rhyme="2" line_length="6">Od zor do západů</l>
     <l n="6" met="101000" rhyme="2" line_length="6">orám do úpadu,</l>
     <l n="7" met="101000" rhyme="3" line_length="6">nohy rozedrány,</l>
     <l n="8" met="101010" rhyme="3" line_length="6">ruce rudé rány,</l>
     <l n="9" met="101000" rhyme="4" line_length="6">Tváří naléhaje,</l>
     <l n="10" met="101000" rhyme="4" line_length="6">krví zalévaje.</l>
     <l n="11" met="101010" rhyme="5" line_length="6">Svaté seju zrní,</l>
     <l n="12" met="101010" rhyme="5" line_length="6">klaté klidím trní,</l>
     <l n="13" met="100010" rhyme="3" line_length="6">posmívyný, štvaný,</l>
     <l n="14" met="101000" rhyme="3" line_length="6">hložím zasypaný,</l>
     <l n="15" met="110010" rhyme="6" line_length="6">dva tisíce roků</l>
     <l n="16" met="101010" rhyme="6" line_length="6">pořád slzy v oku</l>
     <l n="17" met="101010" rhyme="1" line_length="6">orám, orám, orám.</l>
    </lg>
   </lg>
  </body>
