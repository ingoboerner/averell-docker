  <front>
   <head>VŮDCE A DEMAGÓG.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101000" rhyme="1" line_length="6">Ach, ten mašínfíra –</l>
     <l n="2" met="00100" rhyme="2" line_length="5">to je nezdvořák:</l>
     <l n="3" met="101010" rhyme="1" line_length="6">Bavit chtěl se Jíra,</l>
     <l n="4" met="10101" rhyme="2" line_length="5">a on řídil vlak!</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" rhyme="3" line_length="6">Jírovým miláčkem</l>
     <l n="6" met="01100" rhyme="4" line_length="5">je pan konduktér,</l>
     <l n="7" met="101000" rhyme="3" line_length="6">mluví se sedláčkem –</l>
     <l n="8" met="10100" rhyme="4" line_length="5">zvláště za tusér.</l>
    </lg>
   </lg>
  </body>
