  <front>
   <head>PÍSEŇ BRATRA SKŘIVANA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Nad sady, nad poli</l>
     <l n="2" met="100100" rhyme="1" line_length="6">hlásek můj šveholí,</l>
     <l n="3" met="1001001001" rhyme="2" line_length="10">zvonivě výskotá, trylkuje, hrá.</l>
     <l n="4" met="100100" rhyme="1" line_length="6">Jásám, že na roli,</l>
     <l n="5" met="100100" rhyme="1" line_length="6">na stráni, v údolí</l>
     <l n="6" met="1001001010" rhyme="2" line_length="10">obilí života roste a zrá.</l>
    </lg>
    <lg n="2">
     <l n="7" met="100100" rhyme="3" line_length="6">Zelené obilí,</l>
     <l n="8" met="010100" rhyme="3" line_length="6">jímž pole osili,</l>
     <l n="9" met="1001001000" rhyme="4" line_length="10">tulí mé hnízdečko, kryje mou mláď.</l>
     <l n="10" met="010100" rhyme="3" line_length="6">Můj Bože rozmilý,</l>
     <l n="11" met="010100" rhyme="3" line_length="6">jsem blahem opilý,</l>
     <l n="12" met="0101001001" rhyme="4" line_length="10">že mohu nad světem jásat a lkát!</l>
    </lg>
   </lg>
  </body>
