 <text>
  <front>
   <head>KUKAČKA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="000100" line_length="6">Já jsem až k úsvitu.</l>
     <l n="2" met="100" line_length="3">tututú</l>
     <l n="3" met="1001" rhyme="1" line_length="4">slaďounko spal,</l>
     <l n="4" met="100100" line_length="6">kdosi mne ze spánku</l>
     <l n="5" met="100" line_length="3">kukukú</l>
     <l n="6" met="1000" rhyme="1" line_length="4">vyburcoval.</l>
    </lg>
    <lg n="2">
     <l n="7" met="100100" line_length="6">Vstal jsem a skočil jsem</l>
     <l n="8" met="000" line_length="3">sem sem sem</l>
     <l n="9" met="1000" rhyme="2" line_length="4">ku okénku,</l>
     <l n="10" met="100100" line_length="6">slyšel jsem na buku</l>
     <l n="11" met="100" line_length="3">kukukú</l>
     <l n="12" met="1000" rhyme="2" line_length="4">kukulenku.</l>
    </lg>
    <lg n="3">
     <l n="13" met="100100" line_length="6">Nečíhej, nestíhej</l>
     <l n="14" met="110" line_length="3">hej a héj!</l>
     <l n="15" met="1000" rhyme="3" line_length="4">kukulenko!</l>
     <l n="16" met="100100" line_length="6">V háji buď, nelítej</l>
     <l n="17" met="100" line_length="3">eja héj</l>
     <l n="18" met="1000" rhyme="3" line_length="4">pod okénko!</l>
    </lg>
    <lg n="4">
     <l n="19" met="101100" line_length="6">Očka dvě nalíknu</l>
     <l n="20" met="100" line_length="3">nununú</l>
     <l n="21" met="1001" rhyme="4" line_length="4">nalíknu dvé,</l>
     <l n="22" met="100100" line_length="6">pod tvoje křidélko</l>
     <l n="23" met="100" line_length="3">ohohó</l>
     <l n="24" met="1000" rhyme="4" line_length="4">navlíknu své.</l>
    </lg>
    <lg n="5">
     <l n="25" met="000100" line_length="6">Pak si Tě ve klícku</l>
     <l n="26" met="100" line_length="3">kukukú</l>
     <l n="27" met="1000" rhyme="5" line_length="4">uzamknu hned,</l>
     <l n="28" met="100010" line_length="6">dudat ti já budu</l>
     <l n="29" met="100" line_length="3">dududú</l>
     <l n="30" met="1001" rhyme="5" line_length="4">a ty mně pět!</l>
    </lg>
   </lg>
