  <front>
   <head>PODZIMNÍ PÍSEŇ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001000" rhyme="1" line_length="7">Laštovky odlétají</l>
     <l n="2" met="100100" rhyme="2" line_length="6">za Pannou Marií,</l>
     <l n="3" met="1001000" rhyme="1" line_length="7">javory zarudají,</l>
     <l n="4" met="110100" rhyme="2" line_length="6">zem krví zalijí.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1001010" rhyme="3" line_length="7">Smutek sed’ pěvcům do týl,</l>
     <l n="6" met="101100" rhyme="4" line_length="6">v dálku jdou ztišeni –</l>
     <l n="7" met="1001010" rhyme="3" line_length="7">hřbitovem letí motýl</l>
     <l n="8" met="010100" rhyme="4" line_length="6">co symbol vzkříšení.</l>
    </lg>
   </lg>
  </body>
