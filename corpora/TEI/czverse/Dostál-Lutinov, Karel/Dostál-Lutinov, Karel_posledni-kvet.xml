  <front>
   <head>POSLEDNÍ KVĚT.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100101" rhyme="1" line_length="6">Podzimní snivý den.</l>
     <l n="2" met="1001000" rhyme="2" line_length="7">Sluníčko odevzdané.</l>
     <l n="3" met="100101" rhyme="1" line_length="6">Uhaslý léta sen</l>
     <l n="4" met="1001010" rhyme="2" line_length="7">ještě mu v líci plane.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100101" rhyme="3" line_length="6">Života babí niť</l>
     <l n="6" met="1001010" rhyme="4" line_length="7">přes pole v dálku plove,</l>
     <l n="7" met="100101" rhyme="3" line_length="6">ohníčky mají tlíť</l>
     <l n="8" met="1001000" rhyme="4" line_length="7">Kainové, Abelové.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100101" rhyme="5" line_length="6">Bloudíme, a náš zrak</l>
     <l n="10" met="1001010" rhyme="6" line_length="7">na pozdním kvítku visí –</l>
     <l n="11" met="010100" rhyme="5" line_length="6">kdo ví, zda krásný tak</l>
     <l n="12" met="1000010" rhyme="6" line_length="7">uzříme zas jej kdysi?</l>
    </lg>
   </lg>
  </body>
