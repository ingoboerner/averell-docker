  <front>
   <head>VELIKONOČNÍ MODLITBA</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000010" rhyme="1" line_length="7">Velikonoční zvony</l>
     <l n="2" met="100010" rhyme="1" line_length="6">jásavými tóny</l>
     <l n="3" met="100010" line_length="6">hlásají, že z hrobu</l>
     <l n="4" met="10101" rhyme="2" line_length="5">povstal Kristus Pán.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101010" rhyme="3" line_length="6">Bože, dej, ať v kráse</l>
     <l n="6" met="101010" rhyme="3" line_length="6">Mír též vstane zase,</l>
     <l n="7" met="101000" line_length="6">který pod troskami</l>
     <l n="8" met="10100" rhyme="2" line_length="5">leží zasypán.</l>
    </lg>
   </lg>
  </body>
