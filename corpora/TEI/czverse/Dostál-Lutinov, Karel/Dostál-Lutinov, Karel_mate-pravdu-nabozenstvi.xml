     <l n="1" met="10101000" line_length="8">Máte pravdu, náboženství </l>
     <l n="2" met="10001010" rhyme="1" line_length="8">politikou trpí velmi,</l>
     <l n="3" met="10101000" line_length="8">neboť u nás politiku</l>
