  <front>
   <head>ŘEPČÍK KRÁLOVSKÝ</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Cizácký nadutče</l>
     <l n="2" met="10010" rhyme="1" line_length="5">z panského sadu,</l>
     <l n="3" met="100100" line_length="6">vzhlížíme k tobě jak</l>
     <l n="4" met="10010" rhyme="1" line_length="5">k sličnému hadu.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Z Persie přišel jsi,</l>
     <l n="6" met="10010" rhyme="2" line_length="5">s pány se bratříš,</l>
     <l n="7" met="100100" line_length="6">k srdci’s nám nepřirost´,</l>
     <l n="8" met="10010" rhyme="2" line_length="5">jdi si, kam patříš.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">Bělavé dolíčky</l>
     <l n="10" met="10110" rhyme="3" line_length="5">v ústech máš medu,</l>
     <l n="11" met="000100" line_length="6">my v nich však tušíme</l>
     <l n="12" met="10010" rhyme="3" line_length="5">krůpěje jedu.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100100" line_length="6">Nejraděj máme své</l>
     <l n="14" met="10010" rhyme="4" line_length="5">domácí kvítí,</l>
     <l n="15" met="01010" line_length="5">to pro nás voní,</l>
     <l n="16" met="10010" rhyme="4" line_length="5">dýše a cítí.</l>
    </lg>
   </lg>
  </body>
