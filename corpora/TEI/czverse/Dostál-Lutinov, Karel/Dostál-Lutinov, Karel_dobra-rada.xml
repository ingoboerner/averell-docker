  <front>
   <head>DOBRÁ RADA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="0101000" line_length="7">Kdy rostou nepravosti</l>
     <l n="2" met="010001" rhyme="1" line_length="6">a cizoloží lid –</l>
     <l n="3" met="1100010" line_length="7">Bůh proroka mu vzbudí,</l>
     <l n="4" met="010101" rhyme="1" line_length="6">a prorok musí hřmít.</l>
    </lg>
    <lg n="2">
     <l n="5" met="0101000" line_length="7">A kdyby ochaboval</l>
     <l n="6" met="010001" rhyme="2" line_length="6">a s Jonášem se bál –</l>
     <l n="7" met="1011000" line_length="7">na tři dny do velryby!</l>
     <l n="8" met="010100" rhyme="2" line_length="6">a hřímat musí dál.</l>
    </lg>
    <lg n="3">
     <l n="9" met="0101010" line_length="7">Co zbývá? Rada dějin</l>
     <l n="10" met="010100" rhyme="3" line_length="6">tak hlásá hluboká:</l>
     <l n="11" met="0100010" line_length="7">Buď obrátit své cesty</l>
     <l n="12" met="010100" rhyme="3" line_length="6">neb – zabít proroka.</l>
    </lg>
   </lg>
  </body>
