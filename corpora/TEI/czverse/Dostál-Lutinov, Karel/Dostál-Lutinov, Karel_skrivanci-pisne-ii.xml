  <front>
   <head>SKŘIVÁNČÍ PÍSNĚ. (II.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000100" rhyme="1" line_length="7">Ovívej mne, ovívej,</l>
     <l n="2" met="101010" rhyme="2" line_length="6">sladký jarní vánku,</l>
     <l n="3" met="1000100" rhyme="1" line_length="7">rozzpívej se, rozzpívej</l>
     <l n="4" met="100100" rhyme="2" line_length="6">v nebesích, skřivánku!</l>
    </lg>
    <lg n="2">
     <l n="5" met="1001100" rhyme="1" line_length="7">Rozzpívej, ach rozzpívej</l>
     <l n="6" met="101010" rhyme="3" line_length="6">mraky z mého nitra,</l>
     <l n="7" met="1010100" rhyme="1" line_length="7">v kalich srdce rozlívej</l>
     <l n="8" met="101010" rhyme="3" line_length="6">zář a rosu jitra!</l>
    </lg>
   </lg>
  </body>
