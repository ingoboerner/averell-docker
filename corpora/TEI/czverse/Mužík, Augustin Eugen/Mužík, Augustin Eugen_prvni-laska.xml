  <front>
   <head>PRVNÍ LÁSKA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">První trávka zvadne,</l>
     <l n="2" met="101010" rhyme="1" line_length="6">první kvítko zhyne,</l>
     <l n="3" met="10101010" line_length="8">aby na jich místo potom</l>
     <l n="4" met="101010" rhyme="1" line_length="6">vzešlo kvítko jiné.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101000" line_length="6">První milování</l>
     <l n="6" met="101010" rhyme="2" line_length="6">také zhynout musí –</l>
     <l n="7" met="10001010" line_length="8">ale to mé srdce mladé,</l>
     <l n="8" met="011010" rhyme="2" line_length="6">co ach pro ně zkusí!</l>
    </lg>
    <lg n="3">
     <l n="9" met="101010" line_length="6">Kdyby ještě stokrát</l>
     <l n="10" met="101000" rhyme="3" line_length="6">potom milovalo,</l>
     <l n="11" met="10001010" line_length="8">nebude už nikdy jako</l>
     <l n="12" met="101000" rhyme="3" line_length="6">tenkrát bývávalo!...</l>
    </lg>
   </lg>
  </body>
