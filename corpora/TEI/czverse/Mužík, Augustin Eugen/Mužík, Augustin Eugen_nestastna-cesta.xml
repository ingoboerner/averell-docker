  <front>
   <head>NEŠŤASTNÁ CESTA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="001100" line_length="6">Když jsem šel za holkou</l>
     <l n="2" met="100100" rhyme="1" line_length="6">do Lhoty, do Lhoty,</l>
     <l n="3" met="100100" line_length="6">psi mně tam zedrali</l>
     <l n="4" met="100100" rhyme="1" line_length="6">kalhoty, kalhoty.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101000" line_length="6">Ó té přenešťastné</l>
     <l n="6" met="100100" rhyme="2" line_length="6">hodiny, hodiny,</l>
     <l n="7" met="000100" line_length="6">jsou to my kalhoty</l>
     <l n="8" met="100100" rhyme="2" line_length="6">jediny, jediny.</l>
    </lg>
   </lg>
  </body>
