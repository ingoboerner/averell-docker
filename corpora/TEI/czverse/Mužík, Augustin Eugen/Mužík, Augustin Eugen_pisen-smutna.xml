  <front>
   <head>PÍSEŇ SMUTNÁ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" rhyme="1" line_length="4">Broučku milý,</l>
     <l n="2" met="1010" rhyme="1" line_length="4">mám tě v chvíli,</l>
     <l n="3" met="001010" rhyme="2" line_length="6">to se dobře hodí.</l>
     <l n="4" met="0010" rhyme="3" line_length="4">Já jsem chudý –</l>
     <l n="5" met="0010" rhyme="3" line_length="4">vždy a všudy</l>
     <l n="6" met="101010" rhyme="2" line_length="6">chudý s chudou chodí.</l>
    </lg>
    <lg n="2">
     <l n="7" met="0010" rhyme="4" line_length="4">Ne, buď s bohem!</l>
     <l n="8" met="1010" rhyme="4" line_length="4">v žalu mnohém</l>
     <l n="9" met="101010" rhyme="5" line_length="6">tobě dávám vale.</l>
     <l n="10" met="1000" rhyme="6" line_length="4">Milování</l>
     <l n="11" met="1000" rhyme="6" line_length="4">bez doufání –</l>
     <l n="12" met="101010" rhyme="5" line_length="6">jdi jen, hochu, dále!</l>
    </lg>
    <lg n="3">
     <l n="13" met="1010" rhyme="7" line_length="4">Milý broučku,</l>
     <l n="14" met="1000" rhyme="7" line_length="4">na paloučku</l>
     <l n="15" met="101010" rhyme="8" line_length="6">lehce najdeš všeho,</l>
     <l n="16" met="1010" rhyme="9" line_length="4">ale lidé –</l>
     <l n="17" met="1010" rhyme="9" line_length="4">bída přijde,</l>
     <l n="18" met="101010" rhyme="8" line_length="6">a svůj nezná svého.</l>
    </lg>
   </lg>
  </body>
