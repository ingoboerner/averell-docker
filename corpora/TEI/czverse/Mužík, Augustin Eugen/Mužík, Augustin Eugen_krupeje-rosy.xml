  <front>
   <head>KRŮPĚJE ROSY.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10100100" rhyme="1" line_length="8">Roso, rosičko studená!</l>
     <l n="2" met="100100100" rhyme="1" line_length="9">Pod ní ta travička zelená.</l>
     <l n="3" met="10010100" rhyme="2" line_length="8">Sluníčko svítí vesele,</l>
     <l n="4" met="10010100" rhyme="2" line_length="8">v srdci je jako v kostele!...</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100100" rhyme="3" line_length="9">Kolik je rosných těch perliček,</l>
     <l n="6" met="100100100" rhyme="3" line_length="9">tolik je v srdci mém písniček.</l>
     <l n="7" met="100100100" rhyme="4" line_length="9">Sluníčko rosu tu vypije,</l>
     <l n="8" met="100100100" rhyme="4" line_length="9">písnička v srdcích zas ožije!</l>
    </lg>
   </lg>
  </body>
