 <text>
  <front>
   <head>Hruše.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" rhyme="1" line_length="4">Stará hruše</l>
     <l n="2" met="1010" rhyme="1" line_length="4">jako duše</l>
     <l n="3" met="1010" rhyme="2" line_length="4">smutná, tichá,</l>
     <l n="4" met="1010" rhyme="2" line_length="4">sotva dýchá,</l>
     <l n="5" met="100" rhyme="3" line_length="3">– stařena,</l>
     <l n="6" met="1010" line_length="4">léty nad hrob</l>
     <l n="7" met="100" rhyme="3" line_length="3">schýlena.</l>
    </lg>
    <lg n="2">
     <l n="8" met="1010" rhyme="4" line_length="4">Přece v máji</l>
     <l n="9" met="1010" rhyme="4" line_length="4">v českém kraji</l>
     <l n="10" met="1010" rhyme="5" line_length="4">v slunci, písni,</l>
     <l n="11" met="1010" rhyme="5" line_length="4">květů třísni</l>
     <l n="12" met="100" rhyme="6" line_length="3">blaze je!</l>
     <l n="13" met="1010" line_length="4">Hruše v květ se</l>
     <l n="14" met="100" rhyme="6" line_length="3">oděje.</l>
    </lg>
    <lg n="3">
     <l n="15" met="1010" rhyme="7" line_length="4">Motýl, včely</l>
     <l n="16" met="1000" rhyme="7" line_length="4">přiletěly</l>
     <l n="17" met="1010" rhyme="8" line_length="4">v zvučném roji.</l>
     <l n="18" met="1010" rhyme="8" line_length="4">Hruše stojí</l>
     <l n="19" met="100" rhyme="9" line_length="3">ztichounka,</l>
     <l n="20" met="1000" line_length="4">oddychá si</l>
     <l n="21" met="100" rhyme="9" line_length="3">zlehounka.</l>
    </lg>
    <lg n="4">
     <l n="22" met="1010" rhyme="10" line_length="4">Ptáci hraví</l>
     <l n="23" met="1010" rhyme="10" line_length="4">hnízda staví</l>
     <l n="24" met="1010" rhyme="11" line_length="4">drobným dětem.</l>
     <l n="25" met="1010" rhyme="11" line_length="4">Listím, květem</l>
     <l n="26" met="100" rhyme="12" line_length="3">vlídně je</l>
     <l n="27" met="1010" line_length="4">stará hruše</l>
     <l n="28" met="100" rhyme="12" line_length="3">zakreje.</l>
    </lg>
    <lg n="5">
     <l n="29" met="1000" rhyme="13" line_length="4">O červenci</l>
     <l n="30" met="1010" rhyme="13" line_length="4">přijdou ženci</l>
     <l n="31" met="1010" rhyme="14" line_length="4">s potem v čele.</l>
     <l n="32" met="1010" rhyme="14" line_length="4">Hruše stele</l>
     <l n="33" met="101" rhyme="15" line_length="3">stín jim v dar,</l>
     <l n="34" met="1010" line_length="4">sama hlavu</l>
     <l n="35" met="101" rhyme="15" line_length="3">noříc v žár.</l>
    </lg>
    <lg n="6">
     <l n="36" met="1010" rhyme="16" line_length="4">Potom v polích</l>
     <l n="37" met="1010" rhyme="16" line_length="4">pustých, holých</l>
     <l n="38" met="1010" rhyme="17" line_length="4">smutno všudy.</l>
     <l n="39" met="1010" rhyme="17" line_length="4">Kraj je chudý...</l>
     <l n="40" met="100" rhyme="18" line_length="3">V podletí</l>
     <l n="41" met="1010" line_length="4">i ti ptáci</l>
     <l n="42" met="100" rhyme="18" line_length="3">odletí.</l>
    </lg>
    <lg n="7">
     <l n="43" met="1010" rhyme="19" line_length="4">Zima hruši</l>
     <l n="44" met="1010" rhyme="19" line_length="4">studí v duši.</l>
     <l n="45" met="1010" rhyme="20" line_length="4">v sněhu moři</l>
     <l n="46" met="0010" rhyme="20" line_length="4">hloub se noří</l>
     <l n="47" met="100" rhyme="21" line_length="3">do kola,</l>
     <l n="48" met="1010" line_length="4">jako v rakvi</l>
     <l n="49" met="100" rhyme="21" line_length="3">mrtvola.</l>
    </lg>
   </lg>
