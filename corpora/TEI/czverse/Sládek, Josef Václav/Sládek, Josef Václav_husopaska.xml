 <text>
  <front>
   <head>HUSOPASKA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" rhyme="1" line_length="4">HUSY, husy,</l>
     <l n="2" met="100100" line_length="6">běloučké husičky,</l>
     <l n="3" met="1010" rhyme="1" line_length="4">husy, husy,</l>
     <l n="4" met="1010" rhyme="1" line_length="4">bílé husy!</l>
     <l n="5" met="100100" rhyme="2" line_length="6">Rády a nerady</l>
     <l n="6" met="100100" rhyme="2" line_length="6">musíte do řady,</l>
     <l n="7" met="010100" line_length="6">ta ze všech nejhezčí</l>
     <l n="8" met="1010" rhyme="1" line_length="4">napřed musí!</l>
    </lg>
    <lg n="2">
     <l n="9" met="1010" rhyme="1" line_length="4">Husy, husy,</l>
     <l n="10" met="100100" line_length="6">běloučké husičky,</l>
     <l n="11" met="1010" rhyme="1" line_length="4">husy, husy,</l>
     <l n="12" met="1010" rhyme="1" line_length="4">bílé husy!</l>
     <l n="13" met="010100" rhyme="3" line_length="6">Ta jedna kleveta,</l>
     <l n="14" met="010100" rhyme="3" line_length="6">co pořád štěbetá,</l>
     <l n="15" met="000100" line_length="6">když se nic nepase,</l>
     <l n="16" met="1010" rhyme="1" line_length="4">hladu zkusí.</l>
    </lg>
    <lg n="3">
     <l n="17" met="1010" rhyme="1" line_length="4">Husy, husy,</l>
     <l n="18" met="100100" line_length="6">běloučké husičky,</l>
     <l n="19" met="1010" rhyme="1" line_length="4">husy, husy,</l>
     <l n="20" met="1010" rhyme="1" line_length="4">bílé husy!</l>
     <l n="21" met="010100" rhyme="4" line_length="6">Až sejde travička,</l>
     <l n="22" met="100100" rhyme="4" line_length="6">dáte mi peříčka,</l>
     <l n="23" met="100100" line_length="6">v zimě se zahřeju,</l>
     <l n="24" met="1000" rhyme="1" line_length="4">podřímnu si!</l>
    </lg>
   </lg>
  </body>
