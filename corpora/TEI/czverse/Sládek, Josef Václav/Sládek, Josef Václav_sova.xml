 <text>
  <front>
   <head>Sova.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Sovička mrzutá</l>
     <l n="2" met="100100" rhyme="1" line_length="6">sedí a nedutá,</l>
     <l n="3" met="0010" rhyme="2" line_length="4">jen se mračí;</l>
     <l n="4" met="100100" rhyme="3" line_length="6">květy ji neblaží,</l>
     <l n="5" met="100100" rhyme="3" line_length="6">slunce jí překáží,</l>
     <l n="6" met="0110" rhyme="2" line_length="4">i zpěv ptačí.</l>
    </lg>
    <lg n="2">
     <l n="7" met="100100" rhyme="1" line_length="6">Sovička mrzutá</l>
     <l n="8" met="100100" rhyme="1" line_length="6">sedí a nedutá</l>
     <l n="9" met="1010" rhyme="4" line_length="4">za den celý;</l>
     <l n="10" met="100100" rhyme="5" line_length="6">poslyšte písničku,</l>
     <l n="11" met="010100" rhyme="5" line_length="6">snad paní sovičku</l>
     <l n="12" met="1000" rhyme="4" line_length="4">rozveselí:</l>
    </lg>
    <lg n="3">
     <l n="13" met="100100" rhyme="1" line_length="6">„Sovičko mrzutá,</l>
     <l n="14" met="010100" rhyme="1" line_length="6">kdo ani nedutá,</l>
     <l n="15" met="1010" rhyme="6" line_length="4">sedí v tichu,</l>
     <l n="16" met="100100" rhyme="7" line_length="6">na radosť mrzí se,</l>
     <l n="17" met="010100" rhyme="7" line_length="6">a na svět mračí se,</l>
     <l n="18" met="0010" rhyme="6" line_length="4">ten je k smíchu!“</l>
    </lg>
    <lg n="4">
     <l n="19" met="100100" rhyme="1" line_length="6">Sovička mrzutá</l>
     <l n="20" met="100100" rhyme="1" line_length="6">sedí a nedutá</l>
     <l n="21" met="1010" rhyme="8" line_length="4">ani slova;</l>
     <l n="22" met="100101" rhyme="9" line_length="6">zpívejte celý den,</l>
     <l n="23" met="100100" rhyme="9" line_length="6">ona se mračí jen,</l>
     <l n="24" met="0010" rhyme="8" line_length="4">vždyť je sova!</l>
    </lg>
   </lg>
