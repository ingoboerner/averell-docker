  <front>
   <head>Ševcova Kačena.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Ševcovou Kačenou</l>
     <l n="2" met="1010" rhyme="1" line_length="4">čerti šijou,</l>
     <l n="3" met="100100" line_length="6">proto ji, Kačenu,</l>
     <l n="4" met="1010" rhyme="1" line_length="4">doma bijou.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Bijou a nebijou,</l>
     <l n="6" met="0010" rhyme="2" line_length="4">co tím svedou?</l>
     <l n="7" met="100100" line_length="6">čerti s ní do nebe</l>
     <l n="8" met="1000" rhyme="2" line_length="4">nepojedou.</l>
    </lg>
    <lg n="3">
     <l n="9" met="010100" line_length="6">A kdyby dojeli,</l>
     <l n="10" met="0010" rhyme="3" line_length="4">než tam vkročí,</l>
     <l n="11" met="100100" line_length="6">Káča jim do pekla</l>
     <l n="12" met="1010" rhyme="3" line_length="4">za mnou skočí.</l>
    </lg>
   </lg>
  </body>
