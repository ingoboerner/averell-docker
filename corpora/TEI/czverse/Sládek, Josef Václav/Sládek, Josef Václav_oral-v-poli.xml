  <front>
   <head>ORAL V POLI.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" line_length="4">ORAL v poli,</l>
     <l n="2" met="1000" rhyme="1" line_length="4">pohvízdával,</l>
     <l n="3" met="1010" line_length="4">naši lásku</l>
     <l n="4" met="1000" rhyme="1" line_length="4">zaorával.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1010" line_length="4">A já v našem</l>
     <l n="6" met="1010" rhyme="2" line_length="4">trávu plela,</l>
     <l n="7" met="1010" line_length="4">mhou jsem světa</l>
     <l n="8" met="1000" rhyme="2" line_length="4">neviděla.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010" line_length="4">A mé srdce</l>
     <l n="10" met="1010" rhyme="3" line_length="4">jako skála; –</l>
     <l n="11" met="0010" line_length="4">já už ani</l>
     <l n="12" met="1000" rhyme="3" line_length="4">neplakala.</l>
    </lg>
   </lg>
  </body>
