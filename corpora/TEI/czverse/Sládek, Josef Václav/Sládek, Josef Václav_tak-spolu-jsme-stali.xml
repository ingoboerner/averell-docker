  <front>
   <head>TAK SPOLU JSME STÁLI.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="010010" line_length="6">TAK spolu jsme stáli</l>
     <l n="2" met="1001" rhyme="1" line_length="4">v podzimní den,</l>
     <l n="3" met="010010" line_length="6">když padalo listí</l>
     <l n="4" met="0101" rhyme="1" line_length="4">a sychral kmen.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10110" line_length="5">Od hor dul vítr,</l>
     <l n="6" met="1001" rhyme="2" line_length="4">z úpadu mráz,</l>
     <l n="7" met="10010" line_length="5">na žlutých ladech</l>
     <l n="8" met="10000" rhyme="2" line_length="5">se suchopýr třás’.</l>
    </lg>
    <lg n="3">
     <l n="9" met="01010" line_length="5">V dál k šerým lesům</l>
     <l n="10" met="0101" rhyme="3" line_length="4">táh’ zástup vran,</l>
     <l n="11" met="100100" line_length="6">přes žitný, krvavý,</l>
     <l n="12" met="1001" rhyme="3" line_length="4">ozimní lán.</l>
    </lg>
    <lg n="4">
     <l n="13" met="010100" line_length="6">A přes něj západních</l>
     <l n="14" met="1001" rhyme="4" line_length="4">červánků zář</l>
     <l n="15" met="100100" line_length="6">krvavě padala</l>
     <l n="16" met="1001" rhyme="4" line_length="4">v sněžnou ti tvář.</l>
    </lg>
    <lg n="5">
     <l n="17" met="010010" line_length="6">Tak spolu jsme stáli</l>
     <l n="18" met="1001" rhyme="5" line_length="4">v podzimní den,</l>
     <l n="19" met="01010" line_length="5">ty list, jenž padal,</l>
     <l n="20" met="0101" rhyme="5" line_length="4">já sirý kmen.</l>
    </lg>
   </lg>
  </body>
