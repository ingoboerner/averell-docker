  <front>
   <head>SYSEL A LIŠKA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">POZVAL sysel lišku</l>
     <l n="2" met="1000" rhyme="1" line_length="4">na hostinu,</l>
     <l n="3" met="100010" line_length="6">uvařil jí proso,</l>
     <l n="4" met="1000" rhyme="1" line_length="4">hrachovinu.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" line_length="6">Na hrášku si liška</l>
     <l n="6" met="1000" rhyme="2" line_length="4">pochutnala,</l>
     <l n="7" met="101010" line_length="6">ale za to proso</l>
     <l n="8" met="1000" rhyme="2" line_length="4">děkovala.</l>
    </lg>
    <lg n="3">
     <l n="9" met="101000" line_length="6">Teprv pod večerem,</l>
     <l n="10" met="0110" rhyme="3" line_length="4">kdy šla domů.</l>
     <l n="11" met="101010" line_length="6">snědla zrnko prosa,</l>
     <l n="12" met="1010" rhyme="3" line_length="4">sysla k tomu.</l>
    </lg>
   </lg>
  </body>
