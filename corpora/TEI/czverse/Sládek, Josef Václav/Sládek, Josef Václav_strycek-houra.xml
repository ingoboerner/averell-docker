  <front>
   <head>STRÝČEK HOURA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" rhyme="1" line_length="4">STRÝČEK Houra</l>
     <l n="2" met="1010" rhyme="1" line_length="4">domek bourá,</l>
     <l n="3" met="1010" line_length="4">staví zámek</l>
     <l n="4" met="1000" rhyme="1" line_length="4">pro kocoura.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1001" line_length="4">Bude to mít</l>
     <l n="6" met="1000" rhyme="2" line_length="4">živobytí; –</l>
     <l n="7" met="1000" line_length="4">kocourka si</l>
     <l n="8" met="1010" rhyme="2" line_length="4">teprv chytí!</l>
    </lg>
    <lg n="3">
     <l n="9" met="1000" line_length="4">Na zámku ho</l>
     <l n="10" met="1000" rhyme="3" line_length="4">uvelebí,</l>
     <l n="11" met="1001" line_length="4">budou se mít</l>
     <l n="12" met="1010" rhyme="3" line_length="4">jako v nebi.</l>
    </lg>
    <lg n="4">
     <l n="13" met="1000" line_length="4">Bude ho tam</l>
     <l n="14" met="1010" rhyme="4" line_length="4">hladit, chovat</l>
     <l n="15" met="1010" line_length="4">a všem lidem</l>
     <l n="16" met="1000" rhyme="4" line_length="4">ukazovat.</l>
    </lg>
    <lg n="5">
     <l n="17" met="0010" line_length="4">Tak se strýček</l>
     <l n="18" met="1010" rhyme="5" line_length="4">díla chopil,</l>
     <l n="19" met="1010" line_length="4">zámek stavěl,</l>
     <l n="20" met="1010" rhyme="5" line_length="4">domek propil.</l>
    </lg>
    <lg n="6">
     <l n="21" met="0010" line_length="4">Pak mu nastal</l>
     <l n="22" met="1010" rhyme="6" line_length="4">velký smutek:</l>
     <l n="23" met="1000" line_length="4">ze zámku mu</l>
     <l n="24" met="1010" rhyme="6" line_length="4">kocour utek’.</l>
    </lg>
    <lg n="7">
     <l n="25" met="1010" line_length="4">Marně za ním</l>
     <l n="26" met="1010" rhyme="7" line_length="4">strýček spěchal. –</l>
     <l n="27" met="0000" line_length="4">Kéž by si byl</l>
     <l n="28" met="1010" rhyme="7" line_length="4">domek nechal!</l>
    </lg>
   </lg>
