  <front>
   <head>OŘÍŠEK.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000100" rhyme="1" line_length="7">ŘÍKALI mu Oříšek,</l>
     <l n="2" met="1001100" rhyme="1" line_length="7">huňatý měl kožíšek,</l>
     <l n="3" met="1010101" rhyme="2" line_length="7">uši také, toť se ví –</l>
     <l n="4" met="1001100" rhyme="2" line_length="7">jazýček měl růžový.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1010100" rhyme="3" line_length="7">Nebyl sice veliký,</l>
     <l n="6" met="1010100" rhyme="3" line_length="7">ale zloděj všeliký,</l>
     <l n="7" met="1000100" rhyme="4" line_length="7">jakmile jen zaštěkal,</l>
     <l n="8" met="1000100" rhyme="4" line_length="7">tuze se ho ulekal.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010101" rhyme="5" line_length="7">Hlídal celý den i noc,</l>
     <l n="10" met="1000100" rhyme="5" line_length="7">nedostával za to moc,</l>
     <l n="11" met="1010101" rhyme="6" line_length="7">ale každý měl ho rád,</l>
     <l n="12" met="0010101" rhyme="6" line_length="7">to je také dobrý plat.</l>
    </lg>
   </lg>
  </body>
