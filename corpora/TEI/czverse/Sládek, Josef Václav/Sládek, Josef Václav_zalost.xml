  <front>
   <head>ŽALOST.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="001010" line_length="6">JE ta naše žalost,</l>
     <l n="2" met="100010" rhyme="1" line_length="6">umře-li kdo cizí,</l>
     <l n="3" met="101010" line_length="6">jako jedno ptáče</l>
     <l n="4" met="100010" rhyme="1" line_length="6">z doubravy když zmizí.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101010" line_length="6">Ale v sirém srdci,</l>
     <l n="6" met="101010" rhyme="2" line_length="6">které srdce ztrácí,</l>
     <l n="7" met="010010" line_length="6">jest, jako když podzim</l>
     <l n="8" met="101000" rhyme="2" line_length="6">hájem zaburácí.</l>
    </lg>
    <lg n="3">
     <l n="9" met="101010" line_length="6">Každý lístek spadne</l>
     <l n="10" met="001000" rhyme="3" line_length="6">a v tom okamžení</l>
     <l n="11" met="100010" line_length="6">prchá vše jak v hejnech</l>
     <l n="12" met="101000" rhyme="3" line_length="6">ptáci ustrašení.</l>
    </lg>
   </lg>
  </body>
