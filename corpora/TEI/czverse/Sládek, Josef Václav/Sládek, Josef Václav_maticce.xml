  <front>
   <head>MATIČCE.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">MATIČKO má milá,</l>
     <l n="2" met="101010" rhyme="1" line_length="6">moje drahá matko,</l>
     <l n="3" met="001010" line_length="6">vy jste jako holub</l>
     <l n="4" met="101000" rhyme="1" line_length="6">a já holoubátko.</l>
    </lg>
    <lg n="2">
     <l n="5" met="001010" line_length="6">Vy jste holub sivý,</l>
     <l n="6" met="010010" rhyme="2" line_length="6">já holoubek bílý –</l>
     <l n="7" met="000010" line_length="6">kde jsme se v tom širém</l>
     <l n="8" met="101000" rhyme="2" line_length="6">světě natrefili!</l>
    </lg>
    <lg n="3">
     <l n="9" met="010100" line_length="6">V tom vašem srdečku</l>
     <l n="10" met="101010" rhyme="3" line_length="6">tolik lásky bydlí –</l>
     <l n="11" met="100010" line_length="6">schovejte mne k němu</l>
     <l n="12" met="100010" rhyme="3" line_length="6">pod vašimi křídly.</l>
    </lg>
   </lg>
  </body>
