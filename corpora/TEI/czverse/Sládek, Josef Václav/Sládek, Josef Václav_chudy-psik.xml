  <front>
   <head>CHUDÝ PSÍK.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101000" rhyme="1" line_length="8">NENÍ psíka nad chudého,</l>
     <l n="2" met="10001000" rhyme="1" line_length="8">dostane cos od každého,</l>
     <l n="3" met="10101010" rhyme="2" line_length="8">někde kůrku, jinde bití,</l>
     <l n="4" met="10001010" rhyme="2" line_length="8">všude sám co sobě chytí.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10100010" rhyme="3" line_length="8">Není nad chudého psíka,</l>
     <l n="6" met="10001000" rhyme="3" line_length="8">nehoněn-li, neutíká,</l>
     <l n="7" met="10010010" rhyme="4" line_length="8">pořád je na zdravém vzduchu,</l>
     <l n="8" met="10001010" rhyme="4" line_length="8">neprší-li, leží v suchu.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10001010" rhyme="5" line_length="8">Nad chudého psíka není,</l>
     <l n="10" met="10101000" rhyme="5" line_length="8">má-li choutku na pečeni,</l>
     <l n="11" met="10001000" rhyme="6" line_length="8">po hlávkách se proskakuje,</l>
     <l n="12" met="10001000" rhyme="6" line_length="8">komáry si přikusuje.</l>
    </lg>
   </lg>
  </body>
