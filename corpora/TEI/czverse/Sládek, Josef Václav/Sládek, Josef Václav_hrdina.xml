 <text>
  <front>
   <head>HRDINA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" rhyme="1" line_length="4">MALÝ Válek,</l>
     <l n="2" met="1000" rhyme="1" line_length="4">peciválek,</l>
     <l n="3" met="1000" line_length="4">husího se</l>
     <l n="4" met="1010" rhyme="1" line_length="4">pírka zalek’.</l>
    </lg>
    <lg n="2">
     <l n="5" met="0010" line_length="4">Kde co po tmě</l>
     <l n="6" met="1000" rhyme="2" line_length="4">zašustilo,</l>
     <l n="7" met="1000" line_length="4">celého jej</l>
     <l n="8" met="1000" rhyme="2" line_length="4">postrašilo.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010" line_length="4">Kočku slyšet,</l>
     <l n="10" met="1010" rhyme="3" line_length="4">myšku v noci,</l>
     <l n="11" met="0010" line_length="4">byl by upad’</l>
     <l n="12" met="1000" rhyme="3" line_length="4">do nemoci. –</l>
    </lg>
    <lg n="4">
     <l n="13" met="1000" line_length="4">A to já jsem</l>
     <l n="14" met="1010" rhyme="4" line_length="4">jiný chlapec,</l>
     <l n="15" met="1000" line_length="4">nezalezám</l>
     <l n="16" met="1010" rhyme="4" line_length="4">nikdy za pec.</l>
    </lg>
    <lg n="5">
     <l n="17" met="1000" line_length="4">Do komory,</l>
     <l n="18" met="1010" rhyme="5" line_length="4">milý brachu,</l>
     <l n="19" met="1010" line_length="4">jdu i po tmě</l>
     <l n="20" met="1010" rhyme="5" line_length="4">beze strachu.</l>
    </lg>
    <lg n="6">
     <l n="21" met="1000" line_length="4">Pro hrušky a</l>
     <l n="22" met="1000" rhyme="6" line_length="4">pro jablíčka; –</l>
     <l n="23" met="0110" line_length="4">kdo chce strašit,</l>
     <l n="24" met="0010" rhyme="6" line_length="4">ať si vyčká.</l>
    </lg>
    <lg n="7">
     <l n="25" met="1010" line_length="4">I když kočce</l>
     <l n="26" met="1010" rhyme="7" line_length="4">oči svítí,</l>
     <l n="27" met="1010" line_length="4">člověk musí</l>
     <l n="28" met="1010" rhyme="7" line_length="4">mužem býti!</l>
    </lg>
   </lg>
  </body>
