  <front>
   <head>Vlaštovka přiletla.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">Vlaštovička lítá</l>
     <l n="2" met="1010" rhyme="1" line_length="4">kolem domu,</l>
     <l n="3" met="100010" line_length="6">nepoví, co hledá,</l>
     <l n="4" met="1000" rhyme="1" line_length="4">pranikomu.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101010" line_length="6">Lítá, hledá, šuká</l>
     <l n="6" met="1010" rhyme="2" line_length="4">v každém koutě,</l>
     <l n="7" met="100010" line_length="6">vrátila se právě</l>
     <l n="8" met="1010" rhyme="2" line_length="4">z dlouhé poutě.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100010" line_length="6">Vrátila se z jihu</l>
     <l n="10" met="1010" rhyme="3" line_length="4">v slunka jase,</l>
     <l n="11" met="101010" line_length="6">ó, žeť svoje hnízdo</l>
     <l n="12" met="1010" rhyme="3" line_length="4">hledá zase!</l>
    </lg>
    <lg n="4">
     <l n="13" met="101010" line_length="6">Lítá, hledá, šuká</l>
     <l n="14" met="1000" rhyme="4" line_length="4">na podkroví,</l>
     <l n="15" met="100010" line_length="6">našla tam svůj domek</l>
     <l n="16" met="1010" rhyme="4" line_length="4">jako nový.</l>
    </lg>
    <lg n="5">
     <l n="17" met="100010" line_length="6">Byli by zaň vrabci</l>
     <l n="18" met="1010" rhyme="5" line_length="4">mnoho dali,</l>
     <l n="19" met="000010" line_length="6">však my jim ho v zimě</l>
     <l n="20" met="1000" rhyme="5" line_length="4">neprodali.</l>
    </lg>
    <lg n="6">
     <l n="21" met="100010" line_length="6">Řekli jsme: „Už, páni,</l>
     <l n="22" met="1000" rhyme="6" line_length="4">pronajato!“</l>
     <l n="23" met="100010" line_length="6">vlaštovka nám nese</l>
     <l n="24" met="1010" rhyme="6" line_length="4">jaro za to!</l>
    </lg>
   </lg>
  </body>
