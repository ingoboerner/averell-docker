  <front>
   <head>ŠTĚDRÁ MADLA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">MADLENKA, Madlena,</l>
     <l n="2" met="100100" rhyme="1" line_length="6">dobrota vtělená,</l>
     <l n="3" met="1010" rhyme="2" line_length="4">vzor všem dětem!</l>
     <l n="4" met="100100" rhyme="3" line_length="6">Srdce vám rozdělí</l>
     <l n="5" met="010100" rhyme="3" line_length="6">– až někdy v neděli! –</l>
     <l n="6" met="1010" rhyme="2" line_length="4">s celým světem.</l>
    </lg>
    <lg n="2">
     <l n="7" met="100100" rhyme="4" line_length="6">Ze srdce dobrého</l>
     <l n="8" met="100100" rhyme="4" line_length="6">každému od všeho</l>
     <l n="9" met="1010" rhyme="5" line_length="4">dá, co zbude:</l>
     <l n="10" met="101000" rhyme="6" line_length="6">papír pro koťata</l>
     <l n="11" met="010100" rhyme="6" line_length="6">a stará záplata</l>
     <l n="12" met="1010" rhyme="5" line_length="4">pro psy chudé.</l>
    </lg>
    <lg n="3">
     <l n="13" met="100100" rhyme="7" line_length="6">Pro lidi, pro zvíře</l>
     <l n="14" met="100100" rhyme="7" line_length="6">mísy a talíře</l>
     <l n="15" met="1000" rhyme="8" line_length="4">neodstaví;</l>
     <l n="16" met="100100" rhyme="9" line_length="6">sní jen ty koláče</l>
     <l n="17" met="100100" rhyme="9" line_length="6">– nejde to jináče, –</l>
     <l n="18" met="0100" rhyme="8" line_length="4">všem na zdraví!</l>
    </lg>
    <lg n="4">
     <l n="19" met="010100" rhyme="10" line_length="6">Když Madle dobře je,</l>
     <l n="20" met="010100" rhyme="10" line_length="6">i rybě dopřeje</l>
     <l n="21" met="1001" rhyme="11" line_length="4">na louce vzduch.</l>
     <l n="22" met="100100" rhyme="12" line_length="6">Kočky jí mňoukají,</l>
     <l n="23" met="110100" rhyme="12" line_length="6">psi na ni štěkají:</l>
     <l n="24" met="1011" rhyme="11" line_length="4">„Zaplať Pán Bůh!“</l>
    </lg>
   </lg>
  </body>
