  <front>
   <head>VŠEDNÍ BALLADA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" rhyme="1" line_length="8">Pro to jedněch očí lhaní,</l>
     <l n="2" met="100" line_length="3">dítě mé,</l>
     <l n="3" met="10001000" rhyme="1" line_length="8">přišlo’s mi tak z nenadání,</l>
     <l n="4" met="100" line_length="3">dítě mé!</l>
    </lg>
    <lg n="2">
     <l n="5" met="10001010" rhyme="2" line_length="8">Bledá jsou tvá líčka malá,</l>
     <l n="6" met="100" line_length="3">dítě mé; –</l>
     <l n="7" met="00001000" rhyme="2" line_length="8">však jsem já se naplakala,</l>
     <l n="8" met="100" line_length="3">dítě mé.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10000010" rhyme="3" line_length="8">Zapomněla jsem už všeho,</l>
     <l n="10" met="100" line_length="3">dítě mé:</l>
     <l n="11" met="00101010" rhyme="3" line_length="8">že’s jen mělo oči jeho,</l>
     <l n="12" met="100" line_length="3">dítě mé!</l>
    </lg>
    <lg n="4">
     <l n="13" met="10001000" rhyme="4" line_length="8">Před lidmi se nezastydím,</l>
     <l n="14" met="100" line_length="3">dítě mé,</l>
     <l n="15" met="10001000" rhyme="4" line_length="8">oči ty však nenávidím,</l>
     <l n="16" met="100" line_length="3">dítě mé!</l>
    </lg>
    <lg n="5">
     <l n="17" met="10001010" rhyme="5" line_length="8">Ale to jsou řeči liché,</l>
     <l n="18" met="100" line_length="3">dítě mé –</l>
     <l n="19" met="00001010" rhyme="5" line_length="8">tvé už jsou tak hodné, tiché,</l>
     <l n="20" met="100" line_length="3">dítě mé.</l>
    </lg>
    <lg n="6">
     <l n="21" met="10101010" rhyme="6" line_length="8">A ty vlásky tvář ti zlatí,</l>
     <l n="22" met="100" line_length="3">dítě mé,</l>
     <l n="23" met="00101000" rhyme="6" line_length="8">že ji musím zulíbati,</l>
     <l n="24" met="100" line_length="3">dítě mé.</l>
    </lg>
    <lg n="7">
     <l n="25" met="00101010" rhyme="7" line_length="8">Přec jen škoda, – že se na ní,</l>
     <l n="26" met="100" line_length="3">dítě mé,</l>
     <l n="27" met="10001000" rhyme="7" line_length="8">nedočekám pousmání,</l>
     <l n="28" met="100" line_length="3">dítě mé!</l>
    </lg>
    <lg n="8">
     <l n="29" met="00100100" rhyme="8" line_length="8">Už se stalo! – můj andílku,</l>
     <l n="30" met="100" line_length="3">dítě mé, –</l>
     <l n="31" met="11001000" rhyme="8" line_length="8">pojď, dám si tě na postýlku,</l>
     <l n="32" met="100" line_length="3">dítě mé.</l>
    </lg>
    <lg n="9">
     <l n="33" met="10001000" rhyme="9" line_length="8">Vzpomínáš mi na hrdlici,</l>
     <l n="34" met="100" line_length="3">dítě mé,</l>
     <l n="35" met="10011000" rhyme="9" line_length="8">na krčku pruh černající –</l>
     <l n="36" met="100" line_length="3">dítě mé!</l>
    </lg>
    <lg n="10">
     <l n="37" met="10001010" rhyme="10" line_length="8">Děsíš mne tou černou prouhou,</l>
     <l n="38" met="100" line_length="3">dítě mé!</l>
     <l n="39" met="11100010" rhyme="10" line_length="8">Pojď, dám košilku ti dlouhou,</l>
     <l n="40" met="100" line_length="3">dítě mé.</l>
    </lg>
   </lg>
