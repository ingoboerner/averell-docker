  <front>
   <head>HEDVÁBNÝ ŠÁTEČEK.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">HEDVÁBNÝ šáteček,</l>
     <l n="2" met="101010" rhyme="1" line_length="6">na něm plno kvítí,</l>
     <l n="3" met="101100" line_length="6">jako dvě slunéčka</l>
     <l n="4" met="101010" rhyme="1" line_length="6">oči pod ním svítí.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101100" line_length="6">Jako dvě růžičky</l>
     <l n="6" met="101010" rhyme="2" line_length="6">líce pod ním hoří,</l>
     <l n="7" met="100100" line_length="6">ústa-li otevře,</l>
     <l n="8" met="101000" rhyme="2" line_length="6">ptáček zašvitoří.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">A když se usměje,</l>
     <l n="10" met="000010" rhyme="3" line_length="6">jak že jí to sluší –</l>
     <l n="11" met="100100" line_length="6">komu tím úsměvem</l>
     <l n="12" met="101010" rhyme="3" line_length="6">padne jaro v duši!</l>
    </lg>
   </lg>
  </body>
