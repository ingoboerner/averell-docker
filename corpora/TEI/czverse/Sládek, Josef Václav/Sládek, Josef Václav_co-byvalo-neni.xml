  <front>
   <head>CO BÝVALO, NENÍ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="010010" rhyme="1" line_length="6">CO bývalo, není,</l>
     <l n="2" met="101000" rhyme="1" line_length="6">moje potěšení! –</l>
     <l n="3" met="10101000" line_length="8">květy s jara rozkvétají,</l>
     <l n="4" met="101000" rhyme="1" line_length="6">vadnou v podjeseni.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" rhyme="2" line_length="6">Ale ať si vadnou,</l>
     <l n="6" met="101010" rhyme="2" line_length="6">sněhy na ně padnou,</l>
     <l n="7" met="10101000" line_length="8">jeden květ mi neuvadne</l>
     <l n="8" met="101010" rhyme="2" line_length="6">v srdci zimou žádnou.</l>
    </lg>
    <lg n="3">
     <l n="9" met="010010" rhyme="3" line_length="6">I pod bílou skrání,</l>
     <l n="10" met="001000" rhyme="3" line_length="6">ba až do skonání</l>
     <l n="11" met="10001010" line_length="8">pokvete mi jarní kvítí</l>
     <l n="12" met="101000" rhyme="3" line_length="6">tvého milování.</l>
    </lg>
   </lg>
  </body>
