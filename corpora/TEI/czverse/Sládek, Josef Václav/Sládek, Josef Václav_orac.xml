 <text>
  <front>
   <head>Oráč.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" line_length="5">Na poli, roli</l>
     <l n="2" met="1010" rhyme="1" line_length="4">oráč oře,</l>
     <l n="3" met="10010" line_length="5">Na poli, roli</l>
     <l n="4" met="1000" rhyme="1" line_length="4">na úhoře.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010" line_length="5">Oráči, zorej</l>
     <l n="6" met="0010" rhyme="2" line_length="4">nám to pole,</l>
     <l n="7" met="10010" line_length="5">velký tam poklad</l>
     <l n="8" met="1010" rhyme="2" line_length="4">leží dole.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010" line_length="5">Vzácný a dávno</l>
     <l n="10" met="1000" rhyme="3" line_length="4">nevídaný,</l>
     <l n="11" met="01000" line_length="5">už po staletí</l>
     <l n="12" met="1000" rhyme="3" line_length="4">zakopaný.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10010" line_length="5">Smáčený krví,</l>
     <l n="14" met="1010" rhyme="4" line_length="4">slzou z oka –</l>
     <l n="15" met="10010" line_length="5">oráči, orej</l>
     <l n="16" met="1000" rhyme="4" line_length="4">do hluboka!</l>
    </lg>
    <lg n="5">
     <l n="17" met="10010" line_length="5">Oráči orej</l>
     <l n="18" met="1010" rhyme="5" line_length="4">pevnou pěstí:</l>
     <l n="19" met="10000" line_length="5">vyorej nám to</l>
     <l n="20" met="1010" rhyme="5" line_length="4">české štěstí!</l>
    </lg>
    <lg n="6">
     <l n="21" met="10000" line_length="5">Vyorej nám je,</l>
     <l n="22" met="1010" rhyme="6" line_length="4">jako bylo,</l>
     <l n="23" met="00010" line_length="5">by se zas v Čechách</l>
     <l n="24" met="1000" rhyme="6" line_length="4">vyjasnilo!</l>
    </lg>
   </lg>
  </body>
