 <text>
  <front>
   <head>Laňka.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" line_length="5">Koval jsem, koval</l>
     <l n="2" met="1000" rhyme="1" line_length="4">podkovičku</l>
     <l n="3" met="10010" line_length="5">pro laň, co běhá</l>
     <l n="4" met="1000" rhyme="1" line_length="4">po lesíčku.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010" line_length="5">Podkova hezká,</l>
     <l n="6" met="1010" rhyme="2" line_length="4">zlatá, drobná, –</l>
     <l n="7" met="01010" line_length="5">ta laňka byla</l>
     <l n="8" met="1000" rhyme="2" line_length="4">přeozdobná.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010" line_length="5">Mnohý se potkal</l>
     <l n="10" met="1010" rhyme="3" line_length="4">s krásnou pannou,</l>
     <l n="11" met="01010" line_length="5">kdo, v lese, s laňkou</l>
     <l n="12" met="1000" rhyme="3" line_length="4">okovanou?</l>
    </lg>
    <lg n="4">
     <l n="13" met="01000" line_length="5">Jest okovaná</l>
     <l n="14" met="0010" rhyme="4" line_length="4">jen ta moje,</l>
     <l n="15" met="10010" line_length="5">ona mi skočí</l>
     <l n="16" met="1000" rhyme="4" line_length="4">do pokoje.</l>
    </lg>
    <lg n="5">
     <l n="17" met="10010" line_length="5">Ona mi skočí</l>
     <l n="18" met="1000" rhyme="5" line_length="4">do komory,</l>
     <l n="19" met="10010" line_length="5">zavru tam laňku</l>
     <l n="20" met="1000" rhyme="5" line_length="4">na závory.</l>
    </lg>
    <lg n="6">
     <l n="21" met="01000" rhyme="5" line_length="5">Ať do komory,</l>
     <l n="22" met="1000" rhyme="6" line_length="4">do světničky, –</l>
     <l n="23" met="10010" line_length="5">budou jí zvonit</l>
     <l n="24" met="1000" rhyme="6" line_length="4">podkovičky.</l>
    </lg>
    <lg n="7">
     <l n="25" met="01010" line_length="5">Vše bude zářit,</l>
     <l n="26" met="0010" rhyme="7" line_length="4">kam jen skočí,</l>
     <l n="27" met="10010" line_length="5">budou jí svítit</l>
     <l n="28" met="1010" rhyme="7" line_length="4">nožky, oči.</l>
    </lg>
   </lg>
