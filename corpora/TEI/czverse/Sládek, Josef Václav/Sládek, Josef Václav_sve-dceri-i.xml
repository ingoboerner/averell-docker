  <front>
   <head>Své dceři. (I.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" line_length="5">HLAVIČKO milá</l>
     <l n="2" met="0101" rhyme="1" line_length="4">jak čistý květ,</l>
     <l n="3" met="10010" line_length="5">jehož se netknul</l>
     <l n="4" met="0101" rhyme="1" line_length="4">svým prachem svět, –</l>
     <l n="5" met="1001001000" line_length="10">hlavičko snivá a mlčenlivá,</l>
     <l n="6" met="010100" rhyme="1" line_length="6">když máš co vytrpět!</l>
    </lg>
    <lg n="2">
     <l n="7" met="10010" rhyme="2" line_length="5">Hlavičko drahá,</l>
     <l n="8" met="0100" rhyme="3" line_length="4">co mám ti říc’ –</l>
     <l n="9" met="10011" line_length="5">zdali tě rád mám?</l>
     <l n="10" met="1100" rhyme="3" line_length="4">Ó radši nic,</l>
     <l n="11" met="1001001010" rhyme="2" line_length="10">hlavičko drahá! – má ruka sahá</l>
     <l n="12" met="1010" rhyme="3" line_length="4">po tvé, – nic víc.</l>
    </lg>
    <lg n="3">
     <l n="13" met="10010" line_length="5">Hlavičko dobrá,</l>
     <l n="14" met="0101" rhyme="4" line_length="4">jen Bůh tě chraň!</l>
     <l n="15" met="010010" line_length="6">kde otec tvůj zbloudil,</l>
     <l n="16" met="0101" rhyme="4" line_length="4">ty pevna staň,</l>
     <l n="17" met="1001001010" line_length="10">hlavičko mladá! – a někdy ráda</l>
     <l n="18" met="0100" rhyme="4" line_length="4">si vzpomeň naň.</l>
    </lg>
   </lg>
  </body>
