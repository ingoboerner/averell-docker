  <front>
   <head>ZASTESKNUTÍ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100110" line_length="6">SIRÁ je, ach, sirá</l>
     <l n="2" met="101000" rhyme="1" line_length="6">naše domovina,</l>
     <l n="3" met="001010" line_length="6">již tam ani oko</l>
     <l n="4" met="101000" rhyme="1" line_length="6">suché neusíná.</l>
    </lg>
    <lg n="2">
     <l n="5" met="001010" line_length="6">Již se ani hlava</l>
     <l n="6" met="101000" rhyme="2" line_length="6">zdráva nepozvedá,</l>
     <l n="7" met="100100" rhyme="1" line_length="6">ale ta cizina</l>
     <l n="8" met="101010" rhyme="2" line_length="6">také všeho nedá.</l>
    </lg>
    <lg n="3">
     <l n="9" met="001010" rhyme="3" line_length="6">Snad se pokoj vrátí,</l>
     <l n="10" met="101010" rhyme="3" line_length="6">slza z oka ztratí,</l>
     <l n="11" met="101010" line_length="6">ale domov, domov</l>
     <l n="12" met="101000" rhyme="3" line_length="6">nikdo nenavrátí.</l>
    </lg>
   </lg>
  </body>
