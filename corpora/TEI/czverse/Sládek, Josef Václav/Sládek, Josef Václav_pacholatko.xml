 <text>
  <front>
   <head>Pacholátko.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000" line_length="4">Pacholátko</l>
     <l n="2" met="1000" rhyme="1" line_length="4">boubelaté,</l>
     <l n="3" met="1010" line_length="4">očka modrá,</l>
     <l n="4" met="1010" rhyme="1" line_length="4">vlásky zlaté.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1010" line_length="4">Ústka jako</l>
     <l n="6" met="1010" rhyme="2" line_length="4">máky plané,</l>
     <l n="7" met="1010" line_length="4">celé jako</l>
     <l n="8" met="1000" rhyme="2" line_length="4">malované.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1000" rhyme="3" line_length="4">Po dolíčku</l>
     <l n="10" met="1010" rhyme="3" line_length="4">v každém líčku</l>
     <l n="11" met="0100" line_length="4">a čilejší</l>
     <l n="12" met="1000" rhyme="3" line_length="4">nad rybičku.</l>
    </lg>
    <lg n="4">
     <l n="13" met="1000" line_length="4">Pacholátko</l>
     <l n="14" met="1000" rhyme="4" line_length="4">boubelaté</l>
     <l n="15" met="1000" line_length="4">směje se jak</l>
     <l n="16" met="1010" rhyme="4" line_length="4">slunko zlaté.</l>
    </lg>
    <lg n="5">
     <l n="17" met="0010" line_length="4">To jsme rádi,</l>
     <l n="18" met="0010" rhyme="5" line_length="4">že je máme,</l>
     <l n="19" met="1000" line_length="4">nikomu je</l>
     <l n="20" met="1000" rhyme="5" line_length="4">neprodáme!</l>
    </lg>
   </lg>
  </body>
