   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001010" rhyme="1" line_length="8">Kdybychom my tací byli,</l>
     <l n="2" met="00001000" rhyme="1" line_length="8">jak jste vy nás zašpinili,</l>
     <l n="3" met="01001010" rhyme="2" line_length="8">vám bychom pak ruce dali</l>
     <l n="4" met="10001010" rhyme="2" line_length="8">a se k vám co k bratřím znali.</l>
    </lg>
   </lg>
