  <front>
   <head>LXV. My, jenžto v světě sloužíme</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="01010100" line_length="8">My, jenžto v světě sloužíme </l>
     <l n="2" met="0101000" rhyme="1" line_length="7">jen pouhé za stafaže,</l>
     <l n="3" met="01010100" line_length="8">my sobě samým všechno jsme</l>
     <l n="4" met="0101000" rhyme="1" line_length="7">i samé equipaže.</l>
    </lg>
    <lg n="2">
     <l n="5" met="01000100" line_length="8">My v jediné jsme osobě</l>
     <l n="6" met="0101010" rhyme="2" line_length="7">i pán i sluha vřelý –</l>
     <l n="7" met="01000100" line_length="8">my majitkem jsme bohatství</l>
     <l n="8" met="0101000" rhyme="2" line_length="7">a bídy držiteli.</l>
    </lg>
   </lg>
  </body>
