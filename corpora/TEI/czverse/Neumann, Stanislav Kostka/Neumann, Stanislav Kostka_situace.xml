  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000010000" rhyme="1" line_length="10">malověrní se rozpovídali,</l>
     <l n="2" met="1000010" rhyme="2" line_length="7">vyprodávají sebe.</l>
     <l n="3" met="1000010100" rhyme="1" line_length="10">nad dočasnostmi, které uzrály,</l>
     <l n="4" met="1010010" rhyme="2" line_length="7">tane podzimní nebe.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1000010100" rhyme="3" line_length="10">pomíjejícnost letí po zemi</l>
     <l n="6" met="1010010" rhyme="4" line_length="7">jako oblačné stíny,</l>
     <l n="7" met="1010010100" rhyme="3" line_length="10">mrzce plíží se všemi tvářemi,</l>
     <l n="8" met="1000010" rhyme="4" line_length="7">vědomými si viny.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010010100" rhyme="5" line_length="10">ale muži se tvrdě dívají</l>
     <l n="10" met="1010010" rhyme="6" line_length="7">v konce jednoho světa:</l>
     <l n="11" met="0010010100" rhyme="5" line_length="10">dnes už na věky věci nezrají,</l>
     <l n="12" met="1010010" rhyme="6" line_length="7">sotva na hladná léta.</l>
    </lg>
   </lg>
  </body>
