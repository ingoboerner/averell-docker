  <front>
   <head>MAKEDONŠTÍ SLAVÍCI</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000100" rhyme="1" line_length="7">Makedonští slavíci,</l>
     <l n="2" met="1000100" rhyme="2" line_length="7">pro koho jste zpívali</l>
     <l n="3" met="1010" rhyme="3" line_length="4">v širých nocích?</l>
     <l n="4" met="1000100" rhyme="1" line_length="7">Volali jste dívčici,</l>
     <l n="5" met="1000100" rhyme="2" line_length="7">abychom ji objali</l>
     <l n="6" met="1010" rhyme="3" line_length="4">v pružných bocích?</l>
    </lg>
    <lg n="2">
     <l n="7" met="1000100" rhyme="4" line_length="7">Volali jste vzpomínku</l>
     <l n="8" met="1000101" rhyme="5" line_length="7">na severní lásky bol</l>
     <l n="9" met="1010" rhyme="6" line_length="4">mezi kvítím?</l>
     <l n="10" met="1000100" rhyme="4" line_length="7">Volali jste po synku,</l>
     <l n="11" met="0110101" rhyme="5" line_length="7">by šel zbožně hory dol</l>
     <l n="12" met="1000" rhyme="6" line_length="4">hromobitím?</l>
    </lg>
    <lg n="3">
     <l n="13" met="1000100" rhyme="7" line_length="7">Makedonští slavíci,</l>
     <l n="14" met="1000100" rhyme="8" line_length="7">tvrdě vám to klokotá</l>
     <l n="15" met="1000" rhyme="9" line_length="4">po údolí.</l>
     <l n="16" met="1010100" rhyme="7" line_length="7">Z drsné země vonící</l>
     <l n="17" met="1000100" rhyme="8" line_length="7">zřeli jsme, jak bleskotá</l>
     <l n="18" met="1000" rhyme="9" line_length="4">na kupoli.</l>
    </lg>
    <lg n="4">
     <l n="19" met="1010101" rhyme="10" line_length="7">Tvrdý tlukot, tvrdý lesk</l>
     <l n="20" met="1010000" rhyme="11" line_length="7">něhou neobměkčily</l>
     <l n="21" met="1010" rhyme="12" line_length="4">zkřehlost údů.</l>
     <l n="22" met="1010101" rhyme="10" line_length="7">A když nitrem letěl stesk,</l>
     <l n="23" met="0010100" rhyme="11" line_length="7">jak by koně bušili</l>
     <l n="24" met="1010" rhyme="12" line_length="4">v zmrzlou půdu</l>
    </lg>
   </lg>
  </body>
