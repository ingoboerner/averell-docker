  <front>
   <head>KÁZÁNÍ SPARTAKOVO</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10100010" line_length="8">Každý sesazený vladař,</l>
     <l n="2" met="100010001000" rhyme="1" line_length="12">kterého jsme zapomněli odstřeliti,</l>
     <l n="3" met="1011000" rhyme="1" line_length="7">jeho rod vyhubiti</l>
     <l n="4" met="0100" rhyme="2" line_length="4">až k pravnukům,</l>
     <l n="5" met="1010010010010" rhyme="3" line_length="13">jako strašlivá vina a galejní koule,</l>
     <l n="6" met="010010010010" rhyme="3" line_length="12">tu vztýčený drze, tu ve stín se choule,</l>
     <l n="7" met="10100101" rhyme="2" line_length="8">nedá pokoje našim dnům.</l>
    </lg>
    <lg n="2">
     <l n="8" met="1010010" line_length="7">Jeho bezcenné krve,</l>
     <l n="9" met="10010010000" rhyme="4" line_length="11">bídného života cizopasného,</l>
     <l n="10" met="10000100" rhyme="4" line_length="8">neplodného a směšného</l>
     <l n="11" met="01000" rhyme="5" line_length="5">jsme ušetřili,</l>
     <l n="12" met="101010011000" line_length="12">ale znova poteče krev drahocenná,</l>
     <l n="13" met="110001000" rhyme="6" line_length="9">krev myslících a pracujících –</l>
     <l n="14" met="10000001000" rhyme="6" line_length="11">vykořisťovaných a zmírajících,</l>
     <l n="15" met="10101000" rhyme="5" line_length="8">aby trůny zazářily.</l>
    </lg>
    <lg n="3">
     <l n="16" met="10010" line_length="5">Na zlaté žerdi</l>
     <l n="17" met="0100101000" rhyme="7" line_length="10">je vladař jen hadr šarlatový,</l>
     <l n="18" met="101001001010" rhyme="7" line_length="12">aby zaslepil nevinné oči vdovy,</l>
     <l n="19" met="101001001010" rhyme="8" line_length="12">oči mrzáků, žebráků, velkých dětí;</l>
     <l n="20" met="10101001010" rhyme="9" line_length="11">pro ten hadr bude nám znova zmírat,</l>
     <l n="21" met="101000101010" rhyme="9" line_length="12">znova hladovět a znova slzy stírat,</l>
     <l n="22" met="101000" rhyme="8" line_length="6">znova ovdověti.</l>
    </lg>
    <lg n="4">
     <l n="23" met="10101" line_length="5">Dokud každý trůn</l>
     <l n="24" met="10100100010" rhyme="10" line_length="11">stržen konečně nezasype vždycky</l>
     <l n="25" met="1010011000" rhyme="10" line_length="10">celý prokletý rod panovnický</l>
     <l n="26" met="0100" rhyme="11" line_length="4">až k pravnukům,</l>
     <l n="27" met="100101010100" rhyme="12" line_length="12">znova se zachce vládnout lidské bestii,</l>
     <l n="28" met="1010100010100" rhyme="12" line_length="13">znova krve tisíců se pole napijí</l>
     <l n="29" met="010100010100" rhyme="11" line_length="12">a nové okovy nám dají k okovům.</l>
    </lg>
    <lg n="5">
     <l n="30" met="1010100" line_length="7">Dokud všichni vladaři</l>
     <l n="31" met="10101001000" rhyme="13" line_length="11">v celém světě nebudou sesazeni,</l>
     <l n="32" met="1001001000" rhyme="13" line_length="10">navždy až k pravnukům umlčeni,</l>
     <l n="33" met="1000101" line_length="7">nedozrála naše žeň:</l>
     <l n="34" met="101010010010010" line_length="15">dokud jménem jednoho zástupům vládnouti možno,</l>
     <l n="35" met="1000010010010" rhyme="14" line_length="13">nepochopily, že jest jim vládnouti sobě</l>
     <l n="36" met="1001010" rhyme="14" line_length="7">všude a v každé době.</l>
    </lg>
   </lg>
