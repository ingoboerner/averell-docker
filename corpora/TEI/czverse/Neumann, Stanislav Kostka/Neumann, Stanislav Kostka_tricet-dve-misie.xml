 <text>
  <front>
   <head>třicet dvě misie</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101100" line_length="6">třicet dvě misie</l>
     <l n="2" met="1010" rhyme="1" line_length="4">hnízdí v Číně,</l>
     <l n="3" met="10001010" line_length="8">jancekjan je dravá voda,</l>
     <l n="4" met="100001010" rhyme="1" line_length="9">obyčejně však plyne líně.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1011001000" rhyme="2" line_length="10">třicet dvě hnízda se rozlézají</l>
     <l n="6" met="10010" rhyme="3" line_length="5">po dobré zemi.</l>
     <l n="7" met="100101000" line_length="9">veliká matka trpělivá</l>
     <l n="8" met="1000010" rhyme="3" line_length="7">opovrhuje všemi.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1011010" line_length="7">třicet dvě klubka hadů</l>
     <l n="10" met="10010010" rhyme="2" line_length="8">úlisně syčí svou báji.</l>
     <l n="11" met="10010010" line_length="8">laoce, konfuce, budha</l>
     <l n="12" met="01000" rhyme="2" line_length="5">se usmívají.</l>
    </lg>
    <lg n="4">
     <l n="13" met="1011001000" line_length="10">třicet dvě pobožné agentury</l>
     <l n="14" met="1001000" rhyme="4" line_length="7">západních kořistníků</l>
     <l n="15" met="1000010" line_length="7">nenakoupily mnoho</l>
     <l n="16" met="1001000" rhyme="4" line_length="7">pro krista továrníků.</l>
    </lg>
    <lg n="5">
     <l n="17" met="10110001000" line_length="11">čtyři sta osmdesát milionů</l>
     <l n="18" met="1001000" rhyme="5" line_length="7">hobluje utrpení,</l>
     <l n="19" met="10110001000" line_length="11">čtyři sta osmdesát milionů</l>
     <l n="20" met="1010010" rhyme="5" line_length="7">brázdí strašlivá dění.</l>
    </lg>
    <lg n="6">
     <l n="21" met="1001010" line_length="7">v hluboké brázdy sejí</l>
     <l n="22" met="10010" rhyme="6" line_length="5">východ i západ,</l>
     <l n="23" met="1010010010" line_length="10">lidská šelma se nebude věčně</l>
     <l n="24" met="10010" rhyme="6" line_length="5">na cizí sápat.</l>
    </lg>
    <lg n="7">
     <l n="25" met="10000100100" line_length="11">generálové kupčí a zrazují,</l>
     <l n="26" met="1001000" rhyme="7" line_length="7">padají mučedníci.</l>
     <l n="27" met="1001010" line_length="7">v hlubinách dobré země</l>
     <l n="28" met="10010" rhyme="7" line_length="5">semena klíčí.</l>
    </lg>
    <lg n="8">
     <l n="29" met="1010010010" line_length="10">v černých hlubinách z krve a potu</l>
     <l n="30" met="1010" rhyme="8" line_length="4">klíčí jitro,</l>
     <l n="31" met="10010110" line_length="8">procitne čína, ó čína,</l>
     <l n="32" met="1000010" rhyme="8" line_length="7">tisícileté nitro.</l>
    </lg>
    <lg n="9">
     <l n="33" met="1001001000" line_length="10">jancekjan vzedme své kilometry</l>
     <l n="34" met="1001000" rhyme="9" line_length="7">nad zemí rozcuchanou,</l>
     <l n="35" met="10110001000" line_length="11">čtyři sta osmdesát milionů</l>
     <l n="36" met="10" rhyme="9" line_length="2">vstanou.</l>
    </lg>
    <lg n="10">
     <l n="37" met="10100000" line_length="8">sbohem, imperialisté,</l>
     <l n="38" met="01010" rhyme="10" line_length="5">i s vaším bohem.</l>
     <l n="39" met="101100" line_length="6">třicet dvě misie</l>
     <l n="40" met="1010" rhyme="10" line_length="4">hoří stohem.</l>
    </lg>
   </lg>
