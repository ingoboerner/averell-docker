 <text>
  <front>
   <head>píseň o verchovině</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001000" line_length="8">verchovina, verchovina,</l>
     <l n="2" met="1010" rhyme="1" line_length="4">země vnadná,</l>
     <l n="3" met="10101010" line_length="8">v patách kráse běd tu bloudí</l>
     <l n="4" met="1000" rhyme="2" line_length="4">na tisíce;</l>
     <l n="5" met="10001000" line_length="8">verchovina, verchovina,</l>
     <l n="6" met="1010" rhyme="1" line_length="4">země hladná,</l>
     <l n="7" met="00101001" line_length="8">kdo jí aspoň do syta dá</l>
     <l n="8" met="1000" rhyme="2" line_length="4">kukuřice.</l>
    </lg>
    <lg n="2">
     <l n="9" met="10001000" line_length="8">verchovina, verchovina,</l>
     <l n="10" met="1010" rhyme="3" line_length="4">země chorá,</l>
     <l n="11" met="10001000" line_length="8">blekotá tu idiotů</l>
     <l n="12" met="1010" rhyme="4" line_length="4">úsměv strašný.</l>
     <l n="13" met="10001010" line_length="8">za hladem, jenž z panské vůle</l>
     <l n="14" met="1010" rhyme="3" line_length="4">sela orá,</l>
     <l n="15" met="10101010" line_length="8">mor se plíží v černé chaty,</l>
     <l n="16" met="1010" rhyme="4" line_length="4">v život prašný.</l>
    </lg>
    <lg n="3">
     <l n="17" met="10001010" line_length="8">přichází sem panská věda</l>
     <l n="18" met="1010" rhyme="5" line_length="4">na tu nemoc:</l>
     <l n="19" met="10101010" line_length="8">„mor sem na vás, lidé dobří,</l>
     <l n="20" met="1010" rhyme="6" line_length="4">z polska táhne,</l>
     <l n="21" met="10001000" line_length="8">a že se tu ze zbožnosti</l>
     <l n="22" met="1000" rhyme="5" line_length="4">postíte moc,</l>
     <l n="23" met="10000010" line_length="8">na zesláblé tyf a smrtka</l>
     <l n="24" met="1010" rhyme="6" line_length="4">nejdřív sáhne.“</l>
    </lg>
    <lg n="4">
     <l n="25" met="10001000" line_length="8">verchovina, verchovina</l>
     <l n="26" met="1000" rhyme="7" line_length="4">zotročená</l>
     <l n="27" met="11101000" line_length="8">půst má věru ustavičný,</l>
     <l n="28" met="1010" rhyme="8" line_length="4">ale z bídy;</l>
     <l n="29" met="10101010" line_length="8">jako v lesích pták, tak v selech</l>
     <l n="30" met="1010" rhyme="7" line_length="4">člověk sténá,</l>
     <l n="31" met="10101001" line_length="8">dravec chudé rusíny rve,</l>
     <l n="32" met="1010" rhyme="8" line_length="4">chudé židy.</l>
    </lg>
    <lg n="5">
     <l n="33" met="10001000" line_length="8">verchovina, verchovina,</l>
     <l n="34" met="1010" rhyme="9" line_length="4">země smutná,</l>
     <l n="35" met="10001010" line_length="8">jako vše, nač padne dravce</l>
     <l n="36" met="1010" rhyme="10" line_length="4">pracka divá.</l>
     <l n="37" met="10100010" line_length="8">zbav nás, hněve, všech, jimž naše</l>
     <l n="38" met="1010" rhyme="9" line_length="4">hoře chutná –</l>
     <l n="39" met="10100010" line_length="8">jména zemědělce lupič</l>
     <l n="40" met="1000" rhyme="10" line_length="4">zneužívá.</l>
    </lg>
   </lg>
