 <text>
  <front>
   <head>píseň o granátu</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10100001" rhyme="1" line_length="8">jaký zločinec byl by bůh,</l>
     <l n="2" met="100" rhyme="2" line_length="3">kdyby byl;</l>
     <l n="3" met="1010001" rhyme="1" line_length="7">který spravedlivý duch</l>
     <l n="4" met="100100" rhyme="2" line_length="6">válku by dovolil?</l>
    </lg>
    <lg n="2">
     <l n="5" met="101000" line_length="6">býti všemohoucí</l>
     <l n="6" met="0100010" rhyme="3" line_length="7">a neobrátit zbraně,</l>
     <l n="7" met="101001000" line_length="9">zbraně nevinných na vinníky</l>
     <l n="8" met="101000" rhyme="3" line_length="6">štvoucí do kampaně –</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010010" rhyme="4" line_length="7">míti blesky a hromy,</l>
     <l n="10" met="10001" rhyme="5" line_length="5">archandělův meč</l>
     <l n="11" met="0100010010010" rhyme="4" line_length="13">a nesrovnati se zemí vznešené domy</l>
     <l n="12" met="100101001" rhyme="5" line_length="9">kující zradu, strojící léč –</l>
    </lg>
    <lg n="4">
     <l n="13" met="1010010" rhyme="6" line_length="7">velet andělům strážným,</l>
     <l n="14" met="10000" rhyme="7" line_length="5">vševědoucí být</l>
     <l n="15" met="010101010" rhyme="6" line_length="9">a nechtít ani srdcem vlažným</l>
     <l n="16" met="1001010100" rhyme="7" line_length="10">děťátkům s cesty granát odstranit – –</l>
    </lg>
    <lg n="5">
     <l n="17" met="10010100" rhyme="8" line_length="8">děťátkům čtyřem berberským</l>
     <l n="18" met="100" rhyme="9" line_length="3">v maroku,</l>
     <l n="19" met="00010100" rhyme="8" line_length="8">tím, s čím si hrála, zabitým</l>
     <l n="20" met="0100100" rhyme="9" line_length="7">a osudem otroků,</l>
    </lg>
    <lg n="6">
     <l n="21" met="10101001010" rhyme="10" line_length="11">neboť strůjci války a světa páni</l>
     <l n="22" met="01000101000" rhyme="10" line_length="11">jsou před granáty vždycky poschováni.</l>
    </lg>
    <lg n="7">
     <l n="23" met="010100" rhyme="11" line_length="6">ten granát zbloudilý</l>
     <l n="24" met="100101" rhyme="12" line_length="6">čekal tam na svůj den;</l>
     <l n="25" met="10100" rhyme="11" line_length="5">aby zabily,</l>
     <l n="26" met="10100" rhyme="12" line_length="5">vyjdou z továren.</l>
    </lg>
    <lg n="8">
     <l n="27" met="10010100" rhyme="13" line_length="8">dravci se takhle ukryjí,</l>
     <l n="28" met="1000110" rhyme="14" line_length="7">u vesnice měl díru;</l>
     <l n="29" met="10100" rhyme="13" line_length="5">válka zabíjí</l>
     <l n="30" met="10010" rhyme="14" line_length="5">v boji i míru.</l>
    </lg>
    <lg n="9">
     <l n="31" met="0100010" rhyme="15" line_length="7">a na světě je válka,</l>
     <l n="32" met="00010100" rhyme="16" line_length="8">by ti, co mají, měli víc.</l>
     <l n="33" met="1000010" rhyme="15" line_length="7">šrapnelová je dálka</l>
     <l n="34" met="1010000010100" rhyme="16" line_length="13">mezi pracujícími a hordou pijavic.</l>
    </lg>
    <lg n="10">
     <l n="35" met="010100100" rhyme="17" line_length="9">a každý bůh se vždy paktoval</l>
     <l n="36" met="100100" rhyme="18" line_length="6">s šakaly panskými.</l>
     <l n="37" met="0100100100" rhyme="17" line_length="10">ten granát, jenž děťátka roztrhal,</l>
     <l n="38" met="010100100" rhyme="18" line_length="9">byl možná požehnán kněžími.</l>
    </lg>
   </lg>
