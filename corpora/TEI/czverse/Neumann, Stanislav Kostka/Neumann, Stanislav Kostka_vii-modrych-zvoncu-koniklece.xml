  <front>
   <head>VII  Modrých zvonců koniklece</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101000" line_length="8">Modrých zvonců koniklece </l>
     <l n="2" met="1000100" rhyme="1" line_length="7">rozeseto po stráni.</l>
     <l n="3" met="10001010" line_length="8">Mrzutá a kalná mračna</l>
     <l n="4" met="1010100" rhyme="1" line_length="7">chladný větřík pohání.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101000" line_length="8">Modré zvonce koniklece</l>
     <l n="6" met="1010100" rhyme="2" line_length="7">dřímou v šedém kožichu.</l>
     <l n="7" met="10101000" line_length="8">Jaro někde přikrčeno</l>
     <l n="8" met="1010100" rhyme="2" line_length="7">brouká sobě potichu.</l>
    </lg>
   </lg>
  </body>
