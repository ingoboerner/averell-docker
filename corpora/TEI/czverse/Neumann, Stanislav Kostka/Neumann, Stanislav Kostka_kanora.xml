 <text>
  <front>
   <head>kanora</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" rhyme="1" line_length="5">tvrdá a chmurná</l>
     <l n="2" met="100100" rhyme="2" line_length="6">vyrostla z kamení,</l>
     <l n="3" met="10010" rhyme="1" line_length="5">ze slunce vzpurná,</l>
     <l n="4" met="101100" rhyme="2" line_length="6">z noci v tmách mámení.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010" rhyme="3" line_length="5">dřevěná školo,</l>
     <l n="6" met="100100" rhyme="4" line_length="6">rci nám, kdo rozdrtí</l>
     <l n="7" met="01010" rhyme="3" line_length="5">to naše kolo</l>
     <l n="8" met="101100" rhyme="4" line_length="6">černých běd se smrtí.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010" rhyme="5" line_length="5">dřevěná cerkvi,</l>
     <l n="10" met="101100" rhyme="6" line_length="6">vydej hlas nad palouk,</l>
     <l n="11" met="01011" rhyme="5" line_length="5">vždyť i ten štěrk ví,</l>
     <l n="12" met="000100" rhyme="6" line_length="6">jak nás tu život stlouk’.</l>
    </lg>
    <lg n="4">
     <l n="13" met="11010" rhyme="7" line_length="5">z hor teče voda</l>
     <l n="14" met="010100" rhyme="8" line_length="6">a ze skal kamení,</l>
     <l n="15" met="10110" rhyme="7" line_length="5">škoda, ach škoda,</l>
     <l n="16" met="010100" rhyme="8" line_length="6">že v chléb se nemění.</l>
    </lg>
    <lg n="5">
     <l n="17" met="10010" rhyme="9" line_length="5">škoda, že bývá</l>
     <l n="18" met="010100" rhyme="10" line_length="6">i člověk kámen jen.</l>
     <l n="19" met="01010" rhyme="9" line_length="5">ty noci tklivá:</l>
     <l n="20" met="100100" rhyme="10" line_length="6">kámen byl zavražděn.</l>
    </lg>
    <lg n="6">
     <l n="21" met="10010" rhyme="11" line_length="5">sype se skála,</l>
     <l n="22" met="100100" rhyme="12" line_length="6">ubíhá bystřina.</l>
     <l n="23" met="10010" rhyme="11" line_length="5">tvrdá jak stála,</l>
     <l n="24" met="100100" rhyme="12" line_length="6">stojí zas dědina.</l>
    </lg>
   </lg>
