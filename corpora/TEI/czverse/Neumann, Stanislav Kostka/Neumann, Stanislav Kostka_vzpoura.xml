  <front>
   <head>VZPOURA</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" line_length="4">Letí dni mé</l>
     <l n="2" met="10101001000" rhyme="1" line_length="11">jako kulka nazdařbůh vypálená,</l>
     <l n="3" met="1000010" rhyme="2" line_length="7">nevědoucí, kam padne.</l>
     <l n="4" met="1010" line_length="4">Letí dni mé</l>
     <l n="5" met="101010010" rhyme="1" line_length="9">jako pták, jejž vyštvala změna</l>
     <l n="6" met="1010010" rhyme="2" line_length="7">v tmu, jež houstne a chladne.</l>
    </lg>
    <lg n="2">
     <l n="7" met="1010" line_length="4">Divý lete,</l>
     <l n="8" met="101010010" rhyme="3" line_length="9">nad mou zřidlou, šednoucí hlavou,</l>
     <l n="9" met="00100100" rhyme="4" line_length="8">kdy že skončíš, kde usedneš?</l>
     <l n="10" met="1010" line_length="4">Divý lete,</l>
     <l n="11" met="100010110" rhyme="3" line_length="9">kolikrát mi pravdu díš dravou,</l>
     <l n="12" met="101001" rhyme="4" line_length="6">krotkou kolikrát lež?</l>
    </lg>
    <lg n="3">
     <l n="13" met="1000" line_length="4">Pamatuj si,</l>
     <l n="14" met="10001001000" rhyme="5" line_length="11">rozsévači měňavé nejistoty,</l>
     <l n="15" met="0010010" rhyme="6" line_length="7">jež hned slíbí, hned bolí,</l>
     <l n="16" met="1000" line_length="4">pamatuj si,</l>
     <l n="17" met="01101011010" rhyme="5" line_length="11">že chci vyjít jako dub z této psoty,</l>
     <l n="18" met="1010010" rhyme="6" line_length="7">plný mízy, byť holý!</l>
    </lg>
   </lg>
