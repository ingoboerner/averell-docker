  <front>
   <head>setkání s velikou rodinou</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100100" rhyme="1" line_length="9">potkáš-li prostého člověka,</l>
     <l n="2" met="1001010" rhyme="2" line_length="7">večer se změní v ráno,</l>
     <l n="3" met="100100100" rhyme="1" line_length="9">z ulice důvěra haleká,</l>
     <l n="4" met="1010010" rhyme="2" line_length="7">na sklech z lásky je psáno.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100100" rhyme="3" line_length="9">potkáš-li člověka prostého,</l>
     <l n="6" met="10010010" rhyme="4" line_length="8">vypil jsi k života slávě</l>
     <l n="7" met="10010100" rhyme="3" line_length="8">sklenici mléka čerstvého</l>
     <l n="8" met="1000010" rhyme="4" line_length="7">nadojeného právě.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100100" rhyme="1" line_length="9">potkáš-li prostého člověka,</l>
     <l n="10" met="1000010" rhyme="5" line_length="7">nezmateného falší,</l>
     <l n="11" met="10010100" rhyme="1" line_length="8">uslyšíš píseň zdaleka</l>
     <l n="12" met="0101010" rhyme="5" line_length="7">a cestou potkáš další.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10010100" rhyme="6" line_length="8">v jednom se setkáš se všemi,</l>
     <l n="14" met="10010010" rhyme="7" line_length="8">s velikou rodinou chudou.</l>
     <l n="15" met="10000100" rhyme="6" line_length="8">k utrpení jsou na zemi,</l>
     <l n="16" met="1001010" rhyme="7" line_length="7">k vítězství na ní budou.</l>
    </lg>
   </lg>
  </body>
