  <front>
   <head>PÍSEŇ PRO MOU DCERKU</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" rhyme="1" line_length="4">Hejsa, malá,</l>
     <l n="2" met="1010101000" rhyme="2" line_length="10">na mé šíji jako na koníku</l>
     <l n="3" met="1010" rhyme="3" line_length="4">kolem stolu</l>
     <l n="4" met="1010" rhyme="3" line_length="4">takhle spolu,</l>
     <l n="5" met="00101000" rhyme="2" line_length="8">to juž nejde bez povyku.</l>
     <l n="6" met="00101010" rhyme="4" line_length="8">Ať se mračí naše máma,</l>
     <l n="7" met="00011010" rhyme="4" line_length="8">to jen, že chce jezdit sama,</l>
     <l n="8" met="1010" rhyme="1" line_length="4">hejsa, malá,</l>
     <l n="9" met="10101000" rhyme="1" line_length="8">abys něco neprospala,</l>
     <l n="10" met="1000100" line_length="7">pojedeme do světa.</l>
    </lg>
    <lg n="2">
     <l n="11" met="1010" rhyme="5" line_length="4">Hejsa, dítě,</l>
     <l n="12" met="100010100010" rhyme="5" line_length="12">nepojedem tiše, nepojedem skrytě,</l>
     <l n="13" met="1010" rhyme="6" line_length="4">v plném jasu</l>
     <l n="14" met="1010" rhyme="6" line_length="4">chceme krásu</l>
     <l n="15" met="100010" line_length="6">nespoutané jízdy.</l>
     <l n="16" met="10001000" rhyme="7" line_length="8">Skoků my se nelekáme,</l>
     <l n="17" met="10101010" rhyme="7" line_length="8">hory, doly, vody známe,</l>
     <l n="18" met="1010" line_length="4">hopla, hejsa,</l>
     <l n="19" met="1010" rhyme="8" line_length="4">vzhůru hlavy,</l>
     <l n="20" met="1000" rhyme="8" line_length="4">bez obavy</l>
     <l n="21" met="1000100" line_length="7">pojedeme do boje.</l>
    </lg>
    <lg n="3">
     <l n="22" met="1010" rhyme="9" line_length="4">Hejsa, dcerko,</l>
     <l n="23" met="1010" rhyme="10" line_length="4">zlí jsou lidé,</l>
     <l n="24" met="10100010" rhyme="10" line_length="8">zlí jsou křesťané i židé,</l>
     <l n="25" met="101010" line_length="6">k tomu ještě hloupí.</l>
     <l n="26" met="10001000" rhyme="11" line_length="8">Přes hlavy jim pojedeme,</l>
     <l n="27" met="10001000" rhyme="11" line_length="8">bojovně jim zahoukneme</l>
     <l n="28" met="101010" rhyme="12" line_length="6">v duše, v těla skleslá</l>
     <l n="29" met="100010" rhyme="12" line_length="6">veselá svá hesla.</l>
     <l n="30" met="1010" rhyme="9" line_length="4">Hejsa, dcerko,</l>
     <l n="31" met="10001010" rhyme="9" line_length="8">červené si dáme perko</l>
     <l n="32" met="1000100" line_length="7">za klobouček zelený!</l>
    </lg>
   </lg>
  </body>
