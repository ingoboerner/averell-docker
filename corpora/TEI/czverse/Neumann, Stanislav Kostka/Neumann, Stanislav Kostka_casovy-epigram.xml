  <front>
   <head>ČASOVÝ EPIGRAM</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010101" rhyme="1" line_length="7">Dobré mravy, dobrý tón!</l>
     <l n="2" met="1000101" rhyme="1" line_length="7">Ve zvěřinci moudrý slon.</l>
     <l n="3" met="101000" rhyme="2" line_length="6">Inu, kariéra.</l>
    </lg>
    <lg n="2">
     <l n="4" met="1000100" rhyme="3" line_length="7">Nažere se, napije,</l>
     <l n="5" met="1000100" rhyme="3" line_length="7">před publikem tancuje</l>
     <l n="6" met="101000" rhyme="2" line_length="6">z rána do večera.</l>
    </lg>
   </lg>
  </body>
