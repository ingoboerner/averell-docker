   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001010" line_length="8">Čatloš som a Čatloš budem,</l>
     <l n="2" met="10001010" line_length="8">o prímerie prosiť budem,</l>
     <l n="3" met="10101000" rhyme="1" line_length="8">prosiť budem Proletára,</l>
     <l n="4" met="10111000" rhyme="1" line_length="8">lebo mám tank u kovára.</l>
     <l n="5" met="100100" line_length="6">Hujajá, hujajá...</l>
    </lg>
   </lg>
