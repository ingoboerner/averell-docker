  <front>
   <head>KUMBURSKÉ MELODIE. (IX.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="110010" rhyme="1" line_length="6">Část kumburských věží</l>
     <l n="2" met="101010" rhyme="1" line_length="6">smrček štíhlý střeží –</l>
     <l n="3" met="010010" line_length="6">by neprchly duše</l>
     <l n="4" met="101010" rhyme="1" line_length="6">z kostí, jež tam leží...</l>
    </lg>
    <lg n="2">
     <l n="5" met="001000" rhyme="2" line_length="6">Ba ne, neprchnou ti!</l>
     <l n="6" met="010010" rhyme="2" line_length="6">jak kopřiva, proutí,</l>
     <l n="7" met="101010" line_length="6">panské viny důkaz</l>
     <l n="8" met="101000" rhyme="2" line_length="6">nesmí zahynouti...</l>
    </lg>
   </lg>
  </body>
