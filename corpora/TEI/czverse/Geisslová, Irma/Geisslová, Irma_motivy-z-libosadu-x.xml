  <front>
   <head>MOTIVY Z LIBOSADU. (X.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Růže-li vykvěte</l>
     <l n="2" met="100100" rhyme="1" line_length="6">z bílého poupěte</l>
     <l n="3" met="10010" rhyme="2" line_length="5">ve sladké vůni,</l>
     <l n="4" met="100100" rhyme="3" line_length="6">touha mne uchvátí</l>
     <l n="5" met="100100" rhyme="3" line_length="6">v opojné závrati</l>
     <l n="6" met="11010" rhyme="2" line_length="5">chci snít jen u ní!</l>
    </lg>
    <lg n="2">
     <l n="7" met="110100" rhyme="4" line_length="6">Bůh ví, ty myšlénky</l>
     <l n="8" met="100100" rhyme="4" line_length="6">na lístek přetenký</l>
     <l n="9" met="00010" rhyme="5" line_length="5">jak by se shlukly,</l>
     <l n="10" met="100100" rhyme="6" line_length="6">a jak kdy zazvoní,</l>
     <l n="11" met="100100" rhyme="6" line_length="6">veršů se vyroní</l>
     <l n="12" met="10010" rhyme="5" line_length="5">kalíšek puklý!</l>
    </lg>
   </lg>
  </body>
