  <front>
   <head>PŘÁNÍ U DUNAJE.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Dunaji, Dunaji,</l>
     <l n="2" met="001100" rhyme="1" line_length="6">jak ten vír zašplouchal –</l>
     <l n="3" met="010100" line_length="6">že nejsi Vltavou,</l>
     <l n="4" met="100100" rhyme="1" line_length="6">bysi mne poslouchal!</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Bysi mne poslouchal,</l>
     <l n="6" met="100100" rhyme="2" line_length="6">řeči mé rozuměl,</l>
     <l n="7" met="100100" line_length="6">v odpověď vlnami</l>
     <l n="8" met="100100" rhyme="2" line_length="6">po česku zašuměl!</l>
    </lg>
   </lg>
  </body>
