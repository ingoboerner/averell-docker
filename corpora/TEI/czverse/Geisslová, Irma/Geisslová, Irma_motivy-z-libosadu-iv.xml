  <front>
   <head>MOTIVY Z LIBOSADU. (IV.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000100010" rhyme="1" line_length="10">Nad jasmínu bělostnými květy</l>
     <l n="2" met="1001101000" rhyme="1" line_length="10">vznáší se duch vůně sladkoletý,</l>
     <l n="3" met="101010100" rhyme="2" line_length="9">kapkou rosy duha pohrává,</l>
     <l n="4" met="100010100" rhyme="2" line_length="9">oranžově, rudě do tmava.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1000100010" rhyme="3" line_length="10">Od vrcholkův dumající hlavy</l>
     <l n="6" met="1010101000" rhyme="3" line_length="10">stále splývá šumot dojímavý,</l>
     <l n="7" met="001010100" rhyme="4" line_length="9">a s ním luzně v tichou samotu</l>
     <l n="8" met="101010100" rhyme="4" line_length="9">písně ptačí plny jásotu.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010100010" rhyme="5" line_length="10">Ze chvil vonných červnového jitra</l>
     <l n="10" met="1010101010" rhyme="5" line_length="10">pusté prázdno prchá z mého nitra,</l>
     <l n="11" met="001010100" rhyme="6" line_length="9">je v něm plno květů, vůně z nich,</l>
     <l n="12" met="101010100" rhyme="6" line_length="9">plno písní ptačích jímavých.</l>
    </lg>
   </lg>
  </body>
