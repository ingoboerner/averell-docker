  <front>
   <head>ŽITÍ MOTÝLA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010100" rhyme="1" line_length="7">Vylít motýl vesele</l>
     <l n="2" met="1000100" rhyme="1" line_length="7">z červeného jetele,</l>
     <l n="3" met="10001000" rhyme="2" line_length="8">zatřepotal křidélkoma –</l>
     <l n="4" met="00100010" rhyme="2" line_length="8">kde že sladko – tu že doma.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1000100" rhyme="3" line_length="7">Motýlek ten hezoučký,</l>
     <l n="6" met="1000100" rhyme="3" line_length="7">tečkovaný, žluťoučký,</l>
     <l n="7" met="10001000" rhyme="4" line_length="8">semo tam se mihotaje</l>
     <l n="8" met="10001010" rhyme="4" line_length="8">nedoletí v dálné kraje.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010101" rhyme="5" line_length="7">Jednou s vánkem počne hrát,</l>
     <l n="10" met="1010100" rhyme="5" line_length="7">dolů zřím jej dopadat;</l>
     <l n="11" met="10101000" rhyme="6" line_length="8">končí žití na jeteli</l>
     <l n="12" met="10101000" rhyme="6" line_length="8">záhy – ale u veselí.</l>
    </lg>
   </lg>
  </body>
