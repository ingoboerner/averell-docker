  <front>
   <head>Z violek. (8.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010010010" rhyme="1" line_length="11">Po louce skotačí větérky jarní –</l>
     <l n="2" met="10010010010" rhyme="1" line_length="11">plesejte dívenky, junáci švarní,</l>
     <l n="3" met="10010" rhyme="2" line_length="5">života dbejte,</l>
     <l n="4" met="10010" rhyme="2" line_length="5">smějte se, pějte!</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010010010" rhyme="3" line_length="11">Pošmourná mládež tu vypadá staře,</l>
     <l n="6" met="01010010010" rhyme="3" line_length="11">jak chorý stromeček v rozkvětlém jaře,</l>
     <l n="7" met="10010" rhyme="2" line_length="5">mladosti dbejte,</l>
     <l n="8" met="10010" rhyme="2" line_length="5">zpívejte, hrejte!</l>
    </lg>
   </lg>
  </body>
