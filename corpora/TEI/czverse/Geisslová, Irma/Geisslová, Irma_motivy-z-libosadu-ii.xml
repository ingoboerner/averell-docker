  <front>
   <head>MOTIVY Z LIBOSADU. (II.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" line_length="8">Zpěvné ptactvo jásá v listí</l>
     <l n="2" met="100" rhyme="1" line_length="3">koruny,</l>
     <l n="3" met="10101010" line_length="8">na něž hraje vánek, jako</l>
     <l n="4" met="100" rhyme="1" line_length="3">na struny,</l>
     <l n="5" met="10001010" rhyme="2" line_length="8">pod košatým, svěžím křovím</l>
     <l n="6" met="10001010" rhyme="2" line_length="8">myšlénkám i zraku hovím.</l>
    </lg>
    <lg n="2">
     <l n="7" met="10001010" line_length="8">Zřítelnice slunka zlatá,</l>
     <l n="8" met="100" rhyme="3" line_length="3">spanilá</l>
     <l n="9" met="10001010" line_length="8">větvemi své šípy ke mně</l>
     <l n="10" met="100" rhyme="3" line_length="3">vysýlá,</l>
     <l n="11" met="10001010" rhyme="4" line_length="8">posouvám se k chvoji řase,</l>
     <l n="12" met="10001010" rhyme="4" line_length="8">ono však mne najde zase.</l>
    </lg>
    <lg n="3">
     <l n="13" met="10101010" line_length="8">Šumot listí ptáček písní</l>
     <l n="14" met="100" rhyme="5" line_length="3">protíná,</l>
     <l n="15" met="10100100" line_length="8">jeden končí, a deset jich</l>
     <l n="16" met="100" rhyme="5" line_length="3">začíná;</l>
     <l n="17" met="10101010" rhyme="6" line_length="8">bože milý, to je zpěvu!</l>
     <l n="18" met="01001000" rhyme="6" line_length="8">jak nebýti do úsměvu?</l>
    </lg>
   </lg>
  </body>
