  <front>
   <head>Z violek. (11.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" rhyme="1" line_length="6">Tichým krůčkem myšky</l>
     <l n="2" met="101000" rhyme="1" line_length="6">leze na kalíšky</l>
     <l n="3" met="100010" rhyme="2" line_length="6">motýleček zlatý,</l>
     <l n="4" met="101000" rhyme="2" line_length="6">hnědě kropenatý.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" rhyme="3" line_length="6">Kalíšek se kloní,</l>
     <l n="6" met="101010" rhyme="3" line_length="6">vzduch se leskne, voní,</l>
     <l n="7" met="101010" rhyme="4" line_length="6">a to srdce naše</l>
     <l n="8" met="100010" rhyme="4" line_length="6">raduje se plaše. –</l>
    </lg>
   </lg>
  </body>
