  <front>
   <head>Způsobné kočičky. (III.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Lidičky, znáte-li</l>
     <l n="2" met="100100" rhyme="1" line_length="6">kočičku rezatou?</l>
     <l n="3" met="101100" line_length="6">krátký má ocásek,</l>
     <l n="4" met="100100" rhyme="1" line_length="6">hlavičku kulatou</l>
     <l n="5" met="01010010" rhyme="2" line_length="8">a víte – ona je naše!</l>
     <l n="6" met="10010010" rhyme="2" line_length="8">Před každým utíká plaše.</l>
    </lg>
    <lg n="2">
     <l n="7" met="100100" line_length="6">Třeba že dosavad</l>
     <l n="8" met="100100" rhyme="3" line_length="6">nechytá myšiček,</l>
     <l n="9" met="100100" line_length="6">přece ji rákoska</l>
     <l n="10" met="100100" rhyme="3" line_length="6">nebuší v kožíšek,</l>
     <l n="11" met="10010010" rhyme="4" line_length="8">myška se pokuty dočká,</l>
     <l n="12" met="01010010" rhyme="4" line_length="8">až bude z koťátka kočka.</l>
    </lg>
   </lg>
  </body>
