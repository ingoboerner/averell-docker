  <front>
   <head>VEČER</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010100" line_length="8">Zbarveny svitem měsíce</l>
     <l n="2" met="10010100" rhyme="1" line_length="8">vlny a říční kameny.</l>
     <l n="3" met="10010100" line_length="8">Bizarní reflex svitů těch</l>
     <l n="4" met="10000100" rhyme="1" line_length="8">žlutavý je, až červený.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10110100" rhyme="2" line_length="8">Stromy ční mlčky nad srázy.</l>
     <l n="6" met="10010100" rhyme="3" line_length="8">Skály, ty náhle ztrnuly.</l>
     <l n="7" met="01010100" rhyme="2" line_length="8">A nová vlna nachází</l>
     <l n="8" met="01010100" rhyme="3" line_length="8">těch smutek, které minuly –</l>
    </lg>
   </lg>
  </body>
