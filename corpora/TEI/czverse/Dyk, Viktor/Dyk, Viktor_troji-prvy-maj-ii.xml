  <front>
   <head>TROJÍ PRVÝ MÁJ (II.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001000" line_length="7">V knoflíku karafiát,</l>
     <l n="2" met="100100" rhyme="1" line_length="6">ovšem že z papíru,</l>
     <l n="3" met="1001010" line_length="7">čeliti budem’ zlobě</l>
     <l n="4" met="100100" rhyme="1" line_length="6">měšťáckých upírů.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1001010" line_length="7">Pod kroky našich pluků</l>
     <l n="6" met="100100" rhyme="2" line_length="6">zaduní dláždění.</l>
     <l n="7" met="0101000" line_length="7">A život od zítřejška</l>
     <l n="8" met="010100" rhyme="2" line_length="6">se celý promění.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1000010" line_length="7">Pobesedujem spolu,</l>
     <l n="10" met="1001000" rhyme="3" line_length="7">soudružko, je-li ti vhod.</l>
     <l n="11" met="1000000" line_length="7">Internacionála</l>
     <l n="12" met="010101" rhyme="3" line_length="6">je zítra lidský rod.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10010010" rhyme="4" line_length="8">Přestane buržuje vláda,</l>
     <l n="14" met="110100" rhyme="5" line_length="6">svět všecky oblaží!</l>
     <l n="15" met="1001010" rhyme="4" line_length="7">Soudružko, máš mne ráda?</l>
     <l n="16" met="100100" rhyme="5" line_length="6">„Soudruhu, dokáži!“</l>
    </lg>
   </lg>
  </body>
