  <front>
   <head>CHVÍLE. (IV.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="0100001010" rhyme="1" line_length="10">Že z pidimužíků tvoří obry</l>
     <l n="2" met="1010" rhyme="1" line_length="4">bol je dobrý.</l>
    </lg>
    <lg n="2">
     <l n="3" met="10010010010" rhyme="2" line_length="11">Na témě vystoupit, závějí prolézt</l>
     <l n="4" met="1010" rhyme="2" line_length="4">nutí bolest.</l>
    </lg>
    <lg n="3">
     <l n="5" met="1001000" rhyme="3" line_length="7">Ale tam na temeni</l>
     <l n="6" met="11010" rhyme="3" line_length="5">bol dobrý není.</l>
    </lg>
    <lg n="4">
     <l n="7" met="1001001001" rhyme="4" line_length="10">Nad chladem věcí a nad chladem zlých</l>
     <l n="8" met="1001" rhyme="4" line_length="4">dobrý je smích.</l>
    </lg>
   </lg>
  </body>
