  <front>
   <head>ŘÍJEN (I.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101000100" rhyme="1" line_length="9">Listí napadalé, hnijící.</l>
     <l n="2" met="1010100010" rhyme="2" line_length="10">Nebe modré, dobrotivé, jasné.</l>
     <l n="3" met="0010100100" rhyme="2" line_length="10">Je to říjen, konec už a zas ne.</l>
     <l n="4" met="100010100" rhyme="1" line_length="9">Dojímá vás odstín, básníci!</l>
    </lg>
    <lg n="2">
     <l n="5" met="101000100" rhyme="3" line_length="9">V tuto chvíli vše je bez hrází.</l>
     <l n="6" met="1000100010" rhyme="4" line_length="10">V nekonečno rozepial jsi ruce,</l>
     <l n="7" met="1000101010" rhyme="4" line_length="10">v nekonečnu bije srdce prudce.</l>
     <l n="8" met="100010100" rhyme="3" line_length="9">Budoucnost i zašlost přichází.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100010100" rhyme="1" line_length="9">Dojímá vás odstín, básníci!</l>
     <l n="10" met="1010100010" rhyme="5" line_length="10">Hlava vaše jasná též a klidná,</l>
     <l n="11" met="1000100010" rhyme="5" line_length="10">příroda je oddaná a vlídná.</l>
     <l n="12" met="101000100" rhyme="1" line_length="9">Listí napadalé, hnijící...</l>
    </lg>
   </lg>
  </body>
