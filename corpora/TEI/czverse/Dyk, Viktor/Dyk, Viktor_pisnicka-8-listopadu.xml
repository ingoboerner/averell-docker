  <front>
   <head>PÍSNIČKA 8. LISTOPADU</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">Nosili jsme hoře,</l>
     <l n="2" met="100010" rhyme="1" line_length="6">nosili jsme vzteky</l>
     <l n="3" met="101010" line_length="6">na tu Bílou Horu</l>
     <l n="4" met="100110" rhyme="1" line_length="6">po celé tři věky.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" line_length="6">Nosili jsme těžce</l>
     <l n="6" met="100010" rhyme="1" line_length="6">hoře své a stesky</l>
     <l n="7" met="100010" rhyme="2" line_length="6">s bělohorských svahů</l>
     <l n="8" met="101000" rhyme="1" line_length="6">na rynk staroměstský!</l>
    </lg>
    <lg n="3">
     <l n="9" met="100010" line_length="6">Vstoupili jsme smutní</l>
     <l n="10" met="100010" rhyme="2" line_length="6">v zasmušenou Prahu.</l>
     <l n="11" met="001010" line_length="6">Dnes však jdeme klidně</l>
     <l n="12" met="100010" rhyme="2" line_length="6">s bělohorských svahů.</l>
    </lg>
    <lg n="4">
     <l n="13" met="101000" line_length="6">Na hrob minulosti</l>
     <l n="14" met="100010" rhyme="3" line_length="6">navalen je kámen</l>
     <l n="15" met="001010" line_length="6">a s tím naším vrahem</l>
     <l n="16" met="100010" rhyme="3" line_length="6">na věky je amen!</l>
    </lg>
   </lg>
  </body>
