  <front>
   <head>RANNÍ ŘÍKÁNÍ (3.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" rhyme="1" line_length="8">Hodný stranník ctí svou stranu,</l>
     <l n="2" met="10001010" rhyme="1" line_length="8">pro ostatní má jen hanu.</l>
     <l n="3" met="10101000" rhyme="2" line_length="8">Dejte, páni, přesvědčit se!</l>
     <l n="4" met="00101000" rhyme="2" line_length="8">Ne-li, tedy šibenice!</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101010" rhyme="3" line_length="8">Srovná v mysli svojí plaše</l>
     <l n="6" met="10001000" rhyme="3" line_length="8">Voltaira i Otčenáše.</l>
     <l n="7" met="10101010" rhyme="4" line_length="8">Oddán v Mistra vůli žvyká</l>
     <l n="8" met="10001000" rhyme="4" line_length="8">exkrementy Masaryka.</l>
    </lg>
   </lg>
  </body>
