  <front>
   <head>Velikou, zvučnou píseň</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001010" rhyme="1" line_length="7">Velikou, zvučnou píseň </l>
     <l n="2" met="010101" rhyme="2" line_length="6">já chtěl bych pro vás pět,</l>
     <l n="3" met="0100010" rhyme="1" line_length="7">jíž nepokryje plíseň,</l>
     <l n="4" met="010101" rhyme="2" line_length="6">jíž věčně svěží květ.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1001010" rhyme="1" line_length="7">Velikou, zvučnou píseň</l>
     <l n="6" met="010101" rhyme="2" line_length="6">já chtěl bych pro vás pět.</l>
     <l n="7" met="1001010" rhyme="1" line_length="7">Odhodit věčnou tíseň,</l>
     <l n="8" met="100100" rhyme="2" line_length="6">odpustit, oželet!</l>
    </lg>
   </lg>
  </body>
