  <front>
   <head>PÍSEŇ O OČÍCH, KTERÉ NEVIDĚLY</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="010100" line_length="6">A všechno ztemnělo.</l>
     <l n="2" met="1001000" line_length="7">Ohně, ty doplanuly.</l>
     <l n="3" met="010" line_length="3">A oči</l>
     <l n="4" met="1000" line_length="4">– prochladnuly.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100001" line_length="6">Takový byl to mráz.</l>
     <l n="6" met="1001000" line_length="7">Duše se tetelily.</l>
     <l n="7" met="010" line_length="3">A oči</l>
     <l n="8" met="1000" line_length="4">– nevěřily.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100101" line_length="6">A jak tu hynul svět,</l>
     <l n="10" met="0101010" line_length="7">vztáh’ ruce někdo vřelý.</l>
     <l n="11" met="010" line_length="3">A oči</l>
     <l n="12" met="1000" line_length="4">– neviděly.</l>
    </lg>
   </lg>
