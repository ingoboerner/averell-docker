  <front>
   <head>MOUDROST</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Na moje žití pad’</l>
     <l n="2" met="1100010" rhyme="2" line_length="7">sen smuteční a dlouhý.</l>
     <l n="3" met="100101" rhyme="1" line_length="6">Naděje, jděte spat!</l>
     <l n="4" met="1101010" rhyme="2" line_length="7">Spat jděte, moje touhy!</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" rhyme="3" line_length="6">Nevidí oči mé,</l>
     <l n="6" met="1101000" rhyme="4" line_length="7">má pamět nepovídá,</l>
     <l n="7" met="010101" rhyme="3" line_length="6">co dobré bylo, zlé.</l>
     <l n="8" met="1100010" rhyme="4" line_length="7">Oh, jaká je to bída!</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" rhyme="5" line_length="6">Vysoká klenba jsem.</l>
     <l n="10" met="0101000" rhyme="6" line_length="7">Čís’ ruka balancuje</l>
     <l n="11" met="110100" rhyme="5" line_length="6">jí prázdným nad sklepem.</l>
     <l n="12" met="0101000" rhyme="6" line_length="7">Ať ticho, ticho tu je!</l>
    </lg>
   </lg>
  </body>
