  <front>
   <head>SMÍCH. (I.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="010101010" rhyme="1" line_length="9">Ten smích byl lehký jako pěna,</l>
     <l n="2" met="010101010" rhyme="2" line_length="9">a přece těžký jako skála.</l>
     <l n="3" met="10010100010" rhyme="1" line_length="11">Neznámá stála na ulici žena.</l>
     <l n="4" met="0010" rhyme="2" line_length="4">Jak se smála!</l>
    </lg>
    <lg n="2">
     <l n="5" met="1001010" line_length="7">Chodili mimo lidé,</l>
     <l n="6" met="1001" rhyme="3" line_length="4">slyšeli smích</l>
     <l n="7" met="10010" rhyme="2" line_length="5">těžký jak skála,</l>
     <l n="8" met="1001" rhyme="3" line_length="4">lehký jak hřích.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010" rhyme="4" line_length="5">Vzdálený, cizí</l>
     <l n="10" met="10001" rhyme="5" line_length="5">myšlenkou a snem</l>
     <l n="11" met="10000" rhyme="5" line_length="5">formuloval jsem</l>
     <l n="12" met="11010" rhyme="4" line_length="5">smích, který mizí.</l>
    </lg>
   </lg>
  </body>
