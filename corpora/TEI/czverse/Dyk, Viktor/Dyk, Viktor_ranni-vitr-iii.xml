  <front>
   <head>RANNÍ VÍTR (III)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001000" rhyme="1" line_length="7">Tichounce odejděme</l>
     <l n="2" met="1001010" rhyme="1" line_length="7">ze síně, nyní němé,</l>
    </lg>
    <lg n="2">
     <l n="3" met="1001000" rhyme="2" line_length="7">dívat se do červánků,</l>
     <l n="4" met="1001010" rhyme="2" line_length="7">koupat se v ranním vánku.</l>
    </lg>
    <lg n="3">
     <l n="5" met="1001000" rhyme="3" line_length="7">Tichounce, vyzvídavě</l>
     <l n="6" met="0100010" rhyme="3" line_length="7">se pobrouzdáme v trávě.</l>
    </lg>
    <lg n="4">
     <l n="7" met="1001010" rhyme="4" line_length="7">Znavené oči prosí</l>
     <l n="8" met="1001010" rhyme="4" line_length="7">o kapku ranní rosy.</l>
    </lg>
    <lg n="5">
     <l n="9" met="1001010" rhyme="5" line_length="7">Oči, jež dlouho bděly</l>
     <l n="10" met="0101000" rhyme="5" line_length="7">a čekat zapomněly,</l>
    </lg>
    <lg n="6">
     <l n="11" met="1001010" rhyme="6" line_length="7">oči, jež zřely choře</l>
     <l n="12" met="1001010" rhyme="6" line_length="7">na bídu, smích a hoře.</l>
    </lg>
    <lg n="7">
     <l n="13" met="1101010" rhyme="7" line_length="7">Den snímá nocí roušku.</l>
     <l n="14" met="10010000" rhyme="7" line_length="8">Poprosme mateřídoušku.</l>
    </lg>
    <lg n="8">
     <l n="15" met="1001010" rhyme="8" line_length="7">Zvlhčeme rosou brvy.</l>
     <l n="16" met="1001010" rhyme="8" line_length="7">Červánky tonou v krvi.</l>
    </lg>
    <lg n="9">
     <l n="17" met="1101110" rhyme="9" line_length="7">Krev tuto zrak nech vpíti.</l>
     <l n="18" met="1001010" rhyme="9" line_length="7">V krvi se rodí žití,</l>
    </lg>
    <lg n="10">
     <l n="19" met="0101010" rhyme="10" line_length="7">co srdce zprahlé prosí</l>
     <l n="20" met="1001010" rhyme="10" line_length="7">o kapku svěží rosy.</l>
    </lg>
   </lg>
  </body>
