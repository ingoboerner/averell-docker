  <front>
   <head>PŘIJEDOU NA OŘÍCH Z DALEKÝCH KRAJŮ...</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010010010" rhyme="1" line_length="11">Přijedou na ořích z dalekých krajů,</l>
     <l n="2" met="1011010010" rhyme="2" line_length="10">budou pět písně o Novém Žití,</l>
     <l n="3" met="10100010010" rhyme="1" line_length="11">vjedou do prastarých, posvátných hájů,</l>
     <l n="4" met="1001010010" rhyme="2" line_length="10">trhat si budou červené kvítí.</l>
    </lg>
    <lg n="2">
     <l n="5" met="01010010010" rhyme="3" line_length="11">Pak slunci hlasitě pozdrav svůj vzdají,</l>
     <l n="6" met="1011010010" rhyme="4" line_length="10">budou chtít hory objímat v dáli,</l>
     <l n="7" met="10010010010" rhyme="3" line_length="11">zaženou slaboučkou, nervosní láji,</l>
     <l n="8" met="1001010010" rhyme="4" line_length="10">stanou se všichni novými králi.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010010100" rhyme="5" line_length="11">Přijedou ze smutné říše Slzících,</l>
     <l n="10" met="1001010010" rhyme="6" line_length="10">od krajů tmy a věčného lkání,</l>
     <l n="11" met="10010010010" rhyme="5" line_length="11">přijedou ve velkých, sražených šicích,</l>
     <l n="12" met="1001010010" rhyme="6" line_length="10">s vavřínu věncem kolem svých skrání.</l>
    </lg>
   </lg>
  </body>
