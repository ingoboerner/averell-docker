  <front>
   <head>DĚVČE Z OBCHODU</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Kadeře havraní</l>
     <l n="2" met="100100" rhyme="1" line_length="6">vlály jí po skráni,</l>
     <l n="3" met="100100100100" rhyme="2" line_length="12">azurným zrakem svým kolkolem zírala,</l>
     <l n="4" met="100100" rhyme="3" line_length="6">nad zboží hromadou</l>
     <l n="5" met="100100" rhyme="3" line_length="6">svěsila hlavu svou,</l>
     <l n="6" met="100100100100" rhyme="2" line_length="12">bělostnou ručkou svou slzu si stírala.</l>
    </lg>
    <lg n="2">
     <l n="7" met="100100" rhyme="4" line_length="6">Vřelo jí ve hlavě,</l>
     <l n="8" met="100100" rhyme="4" line_length="6">v pestré té záplavě</l>
     <l n="9" met="1001001001" rhyme="5" line_length="10">nádherných látek a hedvábí, stuh,</l>
     <l n="10" met="100101" rhyme="6" line_length="6">od rána musí stát</l>
     <l n="11" met="100101" rhyme="6" line_length="6">za stolkem, slyšet lát</l>
     <l n="12" met="1001001001" rhyme="5" line_length="10">pána, jenž pro bídu její je hluch.</l>
    </lg>
    <lg n="3">
     <l n="13" met="100100" rhyme="7" line_length="6">Do noci prodává,</l>
     <l n="14" met="101100" rhyme="7" line_length="6">za to plat dostává,</l>
     <l n="15" met="1001001001" rhyme="8" line_length="10">jaký by dělnice nechtěla vzít:</l>
     <l n="16" met="100101" rhyme="9" line_length="6">za celých zlatých pět</l>
     <l n="17" met="100111" rhyme="9" line_length="6">vesele zřít má v svět,</l>
     <l n="18" met="1001001001" rhyme="8" line_length="10">slušně a čestně a pořádně žít.</l>
    </lg>
    <lg n="4">
     <l n="19" met="100100" rhyme="10" line_length="6">Setřela slzy své,</l>
     <l n="20" met="100101" rhyme="10" line_length="6">vzplanulo očí dvé,</l>
     <l n="21" met="100100100100" rhyme="11" line_length="12">ze zornic sršely divoké plameny,</l>
     <l n="22" met="100100" rhyme="12" line_length="6">odboj a nenávist</l>
     <l n="23" met="100101" rhyme="12" line_length="6">k mocným v nich bylo číst</l>
     <l n="24" met="100101100100" rhyme="11" line_length="12">a já jsem do nich zřel krásou jich zmámený.</l>
    </lg>
   </lg>
