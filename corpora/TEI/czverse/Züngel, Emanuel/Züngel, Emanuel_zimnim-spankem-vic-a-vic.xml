  <front>
   <head>Zimním spánkem víc a víc</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010010" rhyme="1" line_length="7">Zimním spánkem víc a víc </l>
     <l n="2" met="1010100" rhyme="1" line_length="7">spěje země jaru vstříc;</l>
     <l n="3" met="01001010" rhyme="2" line_length="8">tak i Vám nechť, moji drazí,</l>
     <l n="4" met="10001000" rhyme="3" line_length="8">po trampotách minulosti</l>
     <l n="5" met="10100100" rhyme="2" line_length="8">jaro nové již nadchází</l>
     <l n="6" met="10001000" rhyme="3" line_length="8">pozemské zde blaženosti.</l>
    </lg>
   </lg>
  </body>
