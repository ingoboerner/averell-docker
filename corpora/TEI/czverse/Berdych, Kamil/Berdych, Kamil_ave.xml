  <front>
   <head>AVE.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001001" line_length="7">Miluji hřbitovní klid...</l>
     <l n="2" met="10010100" rhyme="1" line_length="8">O kouzlu jeho tragiky</l>
     <l n="3" met="11000100" rhyme="1" line_length="8">sním, ukolébán slavíky...</l>
     <l n="4" met="1001001" line_length="7">Miluji hřbitovní klid...</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010100" rhyme="2" line_length="8">Nad hlavou vrby smuteční</l>
     <l n="6" met="1101010" rhyme="3" line_length="7">sen mojí duše střeží...</l>
     <l n="7" met="1001010" rhyme="3" line_length="7">Město už v mlhách leží</l>
     <l n="8" met="01010001" rhyme="2" line_length="8">a nad ním pastorale zní...</l>
    </lg>
    <lg n="3">
     <l n="9" met="010100010" rhyme="4" line_length="9">V té něze křesťanského Ave</l>
     <l n="10" met="10010100" rhyme="5" line_length="8">pohana duše opouští...</l>
     <l n="11" met="100001010" rhyme="4" line_length="9">Nad mysteriem vlasy tmavé</l>
     <l n="12" met="11000100" rhyme="5" line_length="8">Noc bez šelestu rozpouští,</l>
    </lg>
    <lg n="4">
     <l n="13" met="01010100" rhyme="6" line_length="8">neb půjdou tudy andělé,</l>
     <l n="14" met="010101010" rhyme="7" line_length="9">tak tiše, aniž tknou se země...</l>
     <l n="15" met="010100110" rhyme="7" line_length="9">A chvím se... Jakoby šli ke mně</l>
     <l n="16" met="01000100" rhyme="6" line_length="8">tak bázlivě... tak nesměle...</l>
    </lg>
   </lg>
