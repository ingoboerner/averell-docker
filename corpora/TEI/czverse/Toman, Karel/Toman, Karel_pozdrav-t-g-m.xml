  <front>
   <head>POZDRAV T. G. M.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001010" line_length="7">Vítězi, který vjíždíš</l>
     <l n="2" met="1001" rhyme="1" line_length="4">do pražských bran,</l>
     <l n="3" met="1001010" line_length="7">žehnej Ti svatý Václav</l>
     <l n="4" met="0101" rhyme="1" line_length="4">a Mistr Jan.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1000010" line_length="7">Červenobílý prapor</l>
     <l n="6" met="0100" rhyme="2" line_length="4">jsi světem nes’,</l>
     <l n="7" met="1000010" line_length="7">červenobílý prapor</l>
     <l n="8" met="0100" rhyme="2" line_length="4">Ti vlaje dnes.</l>
    </lg>
    <lg n="3">
     <l n="9" met="0100010" line_length="7">A miliony srdcí</l>
     <l n="10" met="1000" rhyme="3" line_length="4">bijí Ti vstříc</l>
     <l n="11" met="0101010" line_length="7">a muži, ženy, děti,</l>
     <l n="12" met="1000" rhyme="3" line_length="4">přišli Ti říc’:</l>
    </lg>
    <lg n="4">
     <l n="13" met="0101010" line_length="7">Náš otče, který vjíždíš</l>
     <l n="14" met="1001" rhyme="4" line_length="4">do pražských bran,</l>
     <l n="15" met="1001010" line_length="7">žehnej Ti svatý Václav</l>
     <l n="16" met="0101" rhyme="4" line_length="4">a Mistr Jan.</l>
    </lg>
   </lg>
  </body>
