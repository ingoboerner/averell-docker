  <front>
   <head>ZÁPAD.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101000" rhyme="1" line_length="8">Mezi mraky měděnými</l>
     <l n="2" met="1000100" rhyme="2" line_length="7">zelená se obloha,</l>
     <l n="3" met="10100110" rhyme="1" line_length="8">vzadu šedivý plášť zimy</l>
     <l n="4" met="1000100" rhyme="2" line_length="7">splývá již jak mátoha.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10001010" rhyme="1" line_length="8">Bičována vichry zlými,</l>
     <l n="6" met="10101000" rhyme="3" line_length="8">slzou dešťů polévána,</l>
     <l n="7" met="1010100" rhyme="2" line_length="7">země sirá, ubohá,</l>
     <l n="8" met="10001010" rhyme="3" line_length="8">probudí se zase zrána;</l>
    </lg>
    <lg n="3">
     <l n="9" met="10101000" rhyme="3" line_length="8">mrazu poutem ukována,</l>
     <l n="10" met="00101010" rhyme="4" line_length="8">co zas tmy a bídy zkusí,</l>
     <l n="11" met="10101010" rhyme="3" line_length="8">jako každá duše štvána –</l>
     <l n="12" met="10101010" rhyme="4" line_length="8">sněhy, blátem projít musí,</l>
     <l n="13" met="00101010" line_length="8">než se dočká svého jara.</l>
    </lg>
   </lg>
  </body>
