  <front>
   <head>VEČERNÍ ZVONY.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1100010" rhyme="1" line_length="7">Den usíná a hasne</l>
     <l n="2" met="100100" rhyme="2" line_length="6">ve sledním červánku,</l>
     <l n="3" met="0101010" rhyme="1" line_length="7">když zvuky zvonu jasné</l>
     <l n="4" met="110100" rhyme="2" line_length="6">zvou ve vsi ke spánku.</l>
    </lg>
    <lg n="2">
     <l n="5" met="0101000" rhyme="3" line_length="7">To stará melodie</l>
     <l n="6" met="010100" rhyme="4" line_length="6">těch zvonů večera,</l>
     <l n="7" met="0101010" rhyme="3" line_length="7">mé mládí vábné, snivé</l>
     <l n="8" met="010100" rhyme="4" line_length="6">zas kouzlí za šera...</l>
    </lg>
   </lg>
  </body>
