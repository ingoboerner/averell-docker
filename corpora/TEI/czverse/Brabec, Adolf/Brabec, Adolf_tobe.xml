  <front>
   <head>TOBĚ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="000101" rhyme="1" line_length="6">Jste jak ten rudý mák</l>
     <l n="2" met="100100" rhyme="2" line_length="6">na poli rostoucí,</l>
     <l n="3" met="010101" rhyme="1" line_length="6">jenž vábí, láká zrak</l>
     <l n="4" met="010100" rhyme="2" line_length="6">svou barvou planoucí.</l>
    </lg>
    <lg n="2">
     <l n="5" met="010100" line_length="6">Proč vítr svál jej sem,</l>
     <l n="6" met="100101" rhyme="3" line_length="6">na chudou pole mez,</l>
     <l n="7" met="010000" rhyme="4" line_length="6">kde chudobička jen</l>
     <l n="8" met="010101" rhyme="3" line_length="6">a všední kvete vřes.</l>
    </lg>
    <lg n="3">
     <l n="9" met="110101" rhyme="5" line_length="6">Hrou barev mámí zrak</l>
     <l n="10" met="010100" rhyme="4" line_length="6">a vábí, láká jen,</l>
     <l n="11" met="010100" rhyme="5" line_length="6">když dítě přijde pak,</l>
     <l n="12" met="010101" rhyme="4" line_length="6">jej zničí první den!</l>
    </lg>
   </lg>
  </body>
