 <text>
  <front>
   <head>ZA PŘÍTELEM.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="010" line_length="3">Můj druhu</l>
     <l n="2" met="100" line_length="3">jediný,</l>
     <l n="3" met="010" line_length="3">můj druhu</l>
     <l n="4" met="100" line_length="3">zmařený.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10" line_length="2">V srdci</l>
     <l n="6" met="10" line_length="2">v poušti</l>
     <l n="7" met="10" line_length="2">v temnu</l>
     <l n="8" met="100" line_length="3">zmizelý.</l>
    </lg>
    <lg n="3">
     <l n="9" met="010" line_length="3">Tvá přízeň</l>
     <l n="10" met="010" line_length="3">tvá láska</l>
     <l n="11" met="110" line_length="3">má byla –</l>
     <l n="12" met="110" line_length="3">smrt zbyla.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100" line_length="3">Zmařený,</l>
     <l n="14" met="100" line_length="3">uštvaný</l>
     <l n="15" met="100" line_length="3">životem</l>
     <l n="16" met="100" line_length="3">kradu se.</l>
    </lg>
    <lg n="5">
     <l n="17" met="110" line_length="3">Cíl zmizel,</l>
     <l n="18" met="100" line_length="3">naděje,</l>
     <l n="19" met="010" line_length="3">tvá láska,</l>
     <l n="20" met="010" line_length="3">já zcizel.</l>
    </lg>
    <lg n="6">
     <l n="21" met="010" line_length="3">Co ztrácím,</l>
     <l n="22" met="100" line_length="3">neztrácím,</l>
     <l n="23" met="010" line_length="3">kam půjdu</l>
     <l n="24" met="100" line_length="3">lhostejno.</l>
    </lg>
    <lg n="7">
     <l n="25" met="10" line_length="2">V šeru,</l>
     <l n="26" met="10" line_length="2">v žalu,</l>
     <l n="27" met="100" line_length="3">v zmaření</l>
     <l n="28" met="110" line_length="3">má snaha.</l>
    </lg>
    <lg n="8">
     <l n="29" met="010" line_length="3">Co zbylo,</l>
     <l n="30" met="100" line_length="3">rozbito,</l>
     <l n="31" met="100" line_length="3">zřícenin</l>
     <l n="32" met="100" line_length="3">nehlídám.</l>
    </lg>
    <lg n="9">
     <l n="33" met="100" line_length="3">Neztrácím</l>
     <l n="34" met="100" line_length="3">života,</l>
     <l n="35" met="001" line_length="3">co teď mám,</l>
     <l n="36" met="100" line_length="3">dřímota.</l>
    </lg>
    <lg n="10">
     <l n="37" met="10" line_length="2">V teplu</l>
     <l n="38" met="010" line_length="3">tvé přízně</l>
     <l n="39" met="110" line_length="3">květ zpučel,</l>
     <l n="40" met="110" line_length="3">z květ zmaru.</l>
    </lg>
    <lg n="11">
     <l n="41" met="010" line_length="3">Spíš druhu,</l>
     <l n="42" met="100" line_length="3">nezbudí</l>
     <l n="43" met="100" line_length="3">ze sna tě</l>
     <l n="44" met="010" line_length="3">juž nikdo.</l>
    </lg>
    <lg n="12">
     <l n="45" met="010" line_length="3">Jen čekám</l>
     <l n="46" met="100" line_length="3">divoce</l>
     <l n="47" met="100" line_length="3">bolestí</l>
     <l n="48" met="100" line_length="3">neznáma..</l>
    </lg>
   </lg>
