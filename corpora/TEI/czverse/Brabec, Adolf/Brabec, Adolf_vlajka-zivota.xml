  <front>
   <head>VLAJKA ŽIVOTA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100010" rhyme="1" line_length="9">Do moří neznámých a širých</l>
     <l n="2" met="010001010" rhyme="2" line_length="9">já z neznámého pluji kraje,</l>
     <l n="3" met="100101010" rhyme="1" line_length="9">na stěžních lodě prázdných, širých,</l>
     <l n="4" met="010101010" rhyme="2" line_length="9">si vlájka Žití mého vlaje.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100010" rhyme="3" line_length="9">Do vlnek smaragdových, jasných</l>
     <l n="6" met="11010100" rhyme="4" line_length="8">hruď bílou vráží albatros,</l>
     <l n="7" met="100100010" rhyme="3" line_length="9">ve zpěvech námořníků drsných,</l>
     <l n="8" met="10010001" rhyme="4" line_length="8">tklivého vloženo přec cos.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100101010" rhyme="5" line_length="9">Ve hloubku moře azur ztápí</l>
     <l n="10" met="01010101" rhyme="6" line_length="8">svůj jasně modrý, snivý hled,</l>
     <l n="11" met="011001010" rhyme="5" line_length="9">co loď úskalím vln dál kvapí,</l>
     <l n="12" met="1001000100" rhyme="6" line_length="10">ve výši v propasti se ztrácí hned.</l>
    </lg>
    <lg n="4">
     <l n="13" met="110100010" rhyme="7" line_length="9">Pruh Země daleké a šedé</l>
     <l n="14" met="01000100" rhyme="8" line_length="8">se z večera pak objeví,</l>
     <l n="15" met="100101010" rhyme="7" line_length="9">v kouzelnou říš ji báje přede,</l>
     <l n="16" met="01010100" rhyme="8" line_length="8">kde ústa navždy oněmí....</l>
    </lg>
   </lg>
  </body>
