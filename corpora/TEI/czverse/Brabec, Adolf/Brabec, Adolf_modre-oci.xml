  <front>
   <head>MODRÉ OČI.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" line_length="8">Ó vy oči, modré oči,</l>
     <l n="2" met="00001000" rhyme="1" line_length="8">proč se mně tak líbíváte,</l>
     <l n="3" met="10101000" rhyme="1" line_length="8">lásku sebou nosíváte,</l>
     <l n="4" met="10101010" line_length="8">ó vy oči, krásné oči.</l>
    </lg>
    <lg n="2">
     <l n="5" met="00101000" rhyme="1" line_length="8">Proč vy oči slzíváte,</l>
     <l n="6" met="10001010" rhyme="2" line_length="8">šátkem jak jsem bílým kýval,</l>
     <l n="7" met="10001010" rhyme="2" line_length="8">za vámi se dlouho díval.</l>
    </lg>
    <lg n="3">
     <l n="8" met="10101010" line_length="8">Ó vy oči, modré oči,</l>
     <l n="9" met="00001000" rhyme="1" line_length="8">proč se mě tak líbíváte,</l>
     <l n="10" met="10101000" rhyme="1" line_length="8">lásku sebou nosíváte,</l>
     <l n="11" met="10101010" line_length="8">ó vy oči, krásné oči...</l>
    </lg>
   </lg>
  </body>
