  <front>
   <head>POVZDECH.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="0100010" rhyme="1" line_length="7">Jak vějíř by svým vánkem</l>
     <l n="2" met="010101" rhyme="2" line_length="6">juž zkojil celý kraj,</l>
     <l n="3" met="0100010" rhyme="1" line_length="7">a obéval ji spánkem,</l>
     <l n="4" met="100101" rhyme="2" line_length="6">do nitra vnořil taj:</l>
    </lg>
    <lg n="2">
     <l n="5" met="0101010" rhyme="3" line_length="7">Je noc a hvězdy svítí</l>
     <l n="6" met="100100" rhyme="4" line_length="6">na bludných dráhách svých,</l>
     <l n="7" met="0101010" rhyme="3" line_length="7">jak bílé zlaté kvítí</l>
     <l n="8" met="100100" rhyme="4" line_length="6">rozsáhlých po lesích.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1001010" rhyme="5" line_length="7">Ve kraji ticho všude,</l>
     <l n="10" met="010101" rhyme="6" line_length="6">vše dřímá, měkce spí,</l>
     <l n="11" met="0100010" rhyme="5" line_length="7">co posledního zbude,</l>
     <l n="12" met="000101" rhyme="6" line_length="6">to v mé se duši chví.</l>
    </lg>
   </lg>
  </body>
