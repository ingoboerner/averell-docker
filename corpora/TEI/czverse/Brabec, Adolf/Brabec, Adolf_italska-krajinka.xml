  <front>
   <head>ITALSKÁ KRAJINKA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010100" line_length="8">Cypřiše smutné, podivné</l>
     <l n="2" met="10010100" rhyme="1" line_length="8">při větru tiše hovoří,</l>
     <l n="3" met="10010100" line_length="8">daleko pluje, daleko</l>
     <l n="4" met="10010100" rhyme="1" line_length="8">bělavá loďka po moři.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010100" line_length="8">Krvavý plamen západu</l>
     <l n="6" met="10010100" rhyme="2" line_length="8">ozářil okna u villy,</l>
     <l n="7" met="10010100" line_length="8">fialky bledých paprsků</l>
     <l n="8" met="10010100" rhyme="2" line_length="8">ze světel věnec uvily.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010100" line_length="8">Břečtanu prsty zelené</l>
     <l n="10" met="10010100" rhyme="3" line_length="8">měkce se dotkly mřížoví...</l>
     <l n="11" met="10100100" line_length="8">Stojím u parku – vzpomínám....</l>
     <l n="12" met="10000100" rhyme="3" line_length="8">nikdo mi nic tu nepoví.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10010100" line_length="8">Hladina vzdychá rybníka,</l>
     <l n="14" met="10010100" rhyme="4" line_length="8">labutě bílé vypluly,</l>
     <l n="15" met="1010100" line_length="7">v záři vody stříbrné</l>
     <l n="16" met="10010100" rhyme="4" line_length="8">život se usmál minulý....</l>
    </lg>
   </lg>
  </body>
