  <front>
   <head>Holubička.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" rhyme="1" line_length="6">Holubička šedá,</l>
     <l n="2" met="100010" rhyme="1" line_length="6">holoubka si hledá</l>
     <l n="3" met="100100" rhyme="2" line_length="6">volajíc, volajíc;</l>
     <l n="4" met="100010" rhyme="3" line_length="6">umdlela jí křídla,</l>
     <l n="5" met="001000" rhyme="3" line_length="6">však ho nezahlídla</l>
     <l n="6" met="100100" rhyme="2" line_length="6">nikdy víc, nikdy víc.</l>
    </lg>
    <lg n="2">
     <l n="7" met="100010" rhyme="4" line_length="6">Od moře a k moři</l>
     <l n="8" met="100010" rhyme="4" line_length="6">zakroužila v hoři</l>
     <l n="9" met="100100" rhyme="5" line_length="6">nastokrát, nastokrát.</l>
     <l n="10" met="100010" rhyme="6" line_length="6">„Ozvi se jen jednou,</l>
     <l n="11" met="101010" rhyme="6" line_length="6">máš-li sirou, bědnou</l>
     <l n="12" met="101101" rhyme="5" line_length="6">ještě rád, ještě rád ?“</l>
    </lg>
    <lg n="3">
     <l n="13" met="101000" rhyme="7" line_length="6">Marně opuštěná</l>
     <l n="14" met="100010" rhyme="7" line_length="6">holubička stená</l>
     <l n="15" met="110110" rhyme="8" line_length="6">v dol i výš, v dol i výš.</l>
     <l n="16" met="001010" rhyme="9" line_length="6">„Což ty pro mou lásku</l>
     <l n="17" met="101010" rhyme="9" line_length="6">nemáš ani hlásku</l>
     <l n="18" met="100100" rhyme="8" line_length="6">z duše již, z duše již?“</l>
    </lg>
    <lg n="4">
     <l n="19" met="001010" rhyme="10" line_length="6">On pak slyší lkání,</l>
     <l n="20" met="001000" rhyme="10" line_length="6">on by slitování</l>
     <l n="21" met="101101" rhyme="11" line_length="6">z duše měl, z duše měl;</l>
     <l n="22" met="101000" rhyme="12" line_length="6">ale zkrvácený,</l>
     <l n="23" met="101000" rhyme="12" line_length="6">k zemi spotácený</l>
     <l n="24" met="100100" rhyme="11" line_length="6">oněměl, oněměl.</l>
    </lg>
   </lg>
