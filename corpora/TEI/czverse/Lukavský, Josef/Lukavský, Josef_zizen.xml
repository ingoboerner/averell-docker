  <front>
   <head>ŽÍZEŇ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="0101010" line_length="7">Tak nějak divně žízním</l>
     <l n="2" met="0100110" rhyme="1" line_length="7">a nejasné mám přání:</l>
     <l n="3" met="1001010" line_length="7">vymknout se, vyrvat všemu,</l>
     <l n="4" met="0101000" rhyme="1" line_length="7">co brání vyrůstání.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1001010" line_length="7">Udeřit ve tvář život</l>
     <l n="6" met="0100010" rhyme="2" line_length="7">a odkopnout, co bylo,</l>
     <l n="7" met="1001010" line_length="7">vyhnout se prudce všemu,</l>
     <l n="8" met="0001000" rhyme="2" line_length="7">co mne kdy uchvátilo</l>
    </lg>
    <lg n="3">
     <l n="9" met="0101000" line_length="7">a zcela osamotnit</l>
     <l n="10" met="1001000" rhyme="3" line_length="7">se, jako na galeji</l>
     <l n="11" met="0101010" line_length="7">být vězněm vlastní duše</l>
     <l n="12" met="0101010" rhyme="3" line_length="7">a vyžít sílu její.</l>
    </lg>
    <lg n="4">
     <l n="13" met="0101010" line_length="7">Tak nějak divně žízním</l>
     <l n="14" met="0100110" rhyme="4" line_length="7">a nejasné mám přání</l>
     <l n="15" met="1001010" line_length="7">obrodit sama sebe</l>
     <l n="16" met="1001000" rhyme="4" line_length="7">ke všemu v pohrdání.</l>
    </lg>
   </lg>
  </body>
