  <front>
   <head>PTÁČE.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001010" rhyme="1" line_length="7">Děťátko v rakvi. Čelo</l>
     <l n="2" met="110101" rhyme="2" line_length="6">má chladné jako led;</l>
     <l n="3" met="1001000" rhyme="1" line_length="7">nedávno přiletělo</l>
     <l n="4" met="010101" rhyme="2" line_length="6">jak ptáče na ten svět.</l>
    </lg>
    <lg n="2">
     <l n="5" met="0101010" rhyme="3" line_length="7">Jak ptáče, v jara svátky</l>
     <l n="6" met="010100" rhyme="4" line_length="6">jež sedne do chvoje</l>
     <l n="7" met="0100010" rhyme="3" line_length="7">a odletí zas zpátky –</l>
     <l n="8" met="000100" rhyme="4" line_length="6">že tu tak chladno je.</l>
    </lg>
   </lg>
  </body>
