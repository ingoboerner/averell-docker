  <front>
   <head>PODZIMNÍ PÍSNĚ (VI.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Teplý a slunečný</l>
     <l n="2" met="1001" rhyme="1" line_length="4">podzimní den,</l>
     <l n="3" met="100100" line_length="6">jako by zemí táh’</l>
     <l n="4" met="1001" rhyme="1" line_length="4">o jaru sen.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Tichý a jímavý</l>
     <l n="6" met="1101" rhyme="2" line_length="4">jas kol a svit,</l>
     <l n="7" met="000100" line_length="6">jak by se usmíval,</l>
     <l n="8" met="0011" rhyme="2" line_length="4">kdo už má jít</l>
    </lg>
    <lg n="3">
     <l n="9" met="010100" line_length="6">pryč od nás daleko</l>
     <l n="10" met="1001" rhyme="3" line_length="4">za žití práh,</l>
     <l n="11" met="010100" line_length="6">kam vede cesta jen</l>
     <l n="12" met="1000" rhyme="3" line_length="4">ve vzpomínkách.</l>
    </lg>
    <lg n="4">
     <l n="13" met="000100" rhyme="4" line_length="6">Jak by kdo po bouřích,</l>
     <l n="14" met="1001" rhyme="4" line_length="4">po mukách zlých</l>
     <l n="15" met="100100" line_length="6">klidně se usmíval,</l>
     <l n="16" met="1001" rhyme="4" line_length="4">smířen a tich.</l>
    </lg>
    <lg n="5">
     <l n="17" met="100100" line_length="6">Teplý a slunečný</l>
     <l n="18" met="1001" rhyme="5" line_length="4">podzimní den –</l>
     <l n="19" met="100100" line_length="6">nech mě se dívati</l>
     <l n="20" met="1000" rhyme="5" line_length="4">do záře ven.</l>
    </lg>
    <lg n="6">
     <l n="21" met="010100" line_length="6">A nech, by úsměv též</l>
     <l n="22" met="1001" rhyme="6" line_length="4">na rtech mi plál –</l>
     <l n="23" met="100100" line_length="6">neptej se, neptej se,</l>
     <l n="24" met="0001" rhyme="6" line_length="4">co as mě stál.</l>
    </lg>
   </lg>
  </body>
