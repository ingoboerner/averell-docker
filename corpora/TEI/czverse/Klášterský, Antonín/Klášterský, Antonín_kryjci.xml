  <front>
   <head>Kryjčí.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Ajci hdo povídá,</l>
     <l n="2" met="0110" rhyme="1" line_length="4">co chce zlýho,</l>
     <l n="3" met="010100" line_length="6">my máme kryjčíka</l>
     <l n="4" met="1000" rhyme="1" line_length="4">stydlavýho.</l>
    </lg>
    <lg n="2">
     <l n="5" met="000101" line_length="6">Von mňe míl míru brát</l>
     <l n="6" met="1000" rhyme="2" line_length="4">na živůtek:</l>
     <l n="7" met="000100" line_length="6">jak sem se rozapla,</l>
     <l n="8" met="1010" rhyme="2" line_length="4">strachy hutek.</l>
    </lg>
   </lg>
  </body>
