  <front>
   <head>Povzdech.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="00001010" line_length="8">Jak se nám ten život divně</l>
     <l n="2" met="1010" rhyme="1" line_length="4">zkublal, zkublal,</l>
     <l n="3" met="10001000" line_length="8">do našeho miluvání</l>
     <l n="4" met="100010" rhyme="1" line_length="6">potůček nám bublal.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10001010" line_length="8">Potůček huž v sparnu vyschnoul,</l>
     <l n="6" met="101001" rhyme="2" line_length="6">íčko po suchu deš,</l>
     <l n="7" met="10001010" line_length="8">hale ty mňe, milá ženo,</l>
     <l n="8" met="1010" rhyme="2" line_length="4">pořád bubleš.</l>
    </lg>
   </lg>
  </body>
