 <text>
  <front>
   <head>Vojáček.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100" rhyme="1" line_length="3">Z tábora</l>
     <l n="2" met="100" rhyme="1" line_length="3">Na hora</l>
     <l n="3" met="100100" rhyme="2" line_length="6">Putuje vojáček;</l>
     <l n="4" met="10101010" line_length="8">Vedle z lesa jemu takto</l>
     <l n="5" met="101010" rhyme="2" line_length="6">Zpívá malý ptáček:</l>
    </lg>
    <lg n="2">
     <l n="6" met="100" rhyme="3" line_length="3">„Putuješ,</l>
     <l n="7" met="100" rhyme="3" line_length="3">Vandruješ</l>
     <l n="8" met="100100" rhyme="4" line_length="6">Vesele, vojáčku!</l>
     <l n="9" met="10101000" line_length="8">Aniž sobě nezpomínáš</l>
     <l n="10" met="100100" rhyme="4" line_length="6">Na tu svou Hanačku.</l>
    </lg>
    <lg n="3">
     <l n="11" met="100" line_length="3">Hanačka</l>
     <l n="12" met="100" line_length="3">Ubohá</l>
     <l n="13" met="100010" rhyme="5" line_length="6">Neustále pláče,</l>
     <l n="14" met="01001000" line_length="8">Tvůj synáček okolo ní</l>
     <l n="15" met="010010" rhyme="5" line_length="6">Jak hříbátko skáče.“</l>
    </lg>
    <lg n="4">
     <l n="16" met="010" line_length="3">Ať pláče</l>
     <l n="17" met="100" line_length="3">Hanačka,</l>
     <l n="18" met="100100" rhyme="6" line_length="6">Nemohu pomocy;</l>
     <l n="19" met="10100010" line_length="8">Musýmť nepřítele mečem</l>
     <l n="20" met="101010" rhyme="6" line_length="6">Tepat ve dne v nocy!</l>
    </lg>
    <lg n="5">
     <l n="21" met="010" line_length="3">Až s Bohem</l>
     <l n="22" met="010" line_length="3">A mečem</l>
     <l n="23" met="100010" rhyme="7" line_length="6">Nepřítele potřu,</l>
     <l n="24" met="00100100" line_length="8">Pak se vrátím k své Hanačce,</l>
     <l n="25" met="100010" rhyme="7" line_length="6">Slzyčky jí otřu!</l>
    </lg>
   </lg>
  </body>
