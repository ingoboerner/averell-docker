  <front>
   <head>Skolye celoroční. (II. Letní.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Slunéčko paprsky</l>
     <l n="2" met="1010" rhyme="1" line_length="4">Zžavé seje,</l>
     <l n="3" met="100100" line_length="6">Větříček lehounkým</l>
     <l n="4" met="1010" rhyme="1" line_length="4">Křídlem věje.</l>
     <l n="5" met="100100" line_length="6">Děvčata se srpem</l>
     <l n="6" met="1001" rhyme="2" line_length="4">Kvapí tu žít:</l>
     <l n="7" met="100100" line_length="6">Rozmilé děvčata,</l>
     <l n="8" met="1001" rhyme="2" line_length="4">Poneste pít!</l>
    </lg>
   </lg>
  </body>
