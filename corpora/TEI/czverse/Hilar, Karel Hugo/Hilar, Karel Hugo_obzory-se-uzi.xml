  <front>
   <head>OBZORY SE ÚŽÍ...</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="01010100" line_length="8">V mých duše sadech odkvetly</l>
     <l n="2" met="1010010" rhyme="1" line_length="7">trsy ubledlých růží..</l>
     <l n="3" met="10011000" rhyme="2" line_length="8">poslední stín naděje zvad’,</l>
     <l n="4" met="01010101" rhyme="2" line_length="8">svou duší cítím vítr vát – –</l>
     <l n="5" met="0100010" rhyme="1" line_length="7">To obzory se úží.</l>
    </lg>
    <lg n="2">
     <l n="6" met="01010101" line_length="8">V mých duše sadech zmlkl zpěv</l>
     <l n="7" met="1001010" rhyme="1" line_length="7">myšlenek ptačích druží,</l>
     <l n="8" met="01010101" rhyme="2" line_length="8">já duší cítím vítr vát</l>
     <l n="9" met="01010100" rhyme="2" line_length="8">a staré sny se rozplývat – –</l>
     <l n="10" met="0100010" rhyme="1" line_length="7">To obzory se úží.</l>
    </lg>
    <lg n="3">
     <l n="11" met="01010100" line_length="8">Z mých duše zahrad uprchli</l>
     <l n="12" met="1001000" rhyme="1" line_length="7">šotkové pidimuží..</l>
     <l n="13" met="00010101" rhyme="3" line_length="8">tak bych je viděl ještě rád,</l>
     <l n="14" met="01010100" rhyme="3" line_length="8">než budu tiše umírat..</l>
     <l n="15" met="0100010" rhyme="1" line_length="7">však obzory se úží.</l>
    </lg>
   </lg>
  </body>
