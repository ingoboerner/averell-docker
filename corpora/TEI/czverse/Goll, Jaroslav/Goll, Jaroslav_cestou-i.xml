   <head>CESTOU. (I.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">Drobňoučké ty písně</l>
     <l n="2" met="101010" rhyme="1" line_length="6">dávno v hloubi nitra</l>
     <l n="3" met="001000" rhyme="2" line_length="6">se mi ozývaly:</l>
    </lg>
    <lg n="2">
     <l n="4" met="101010" line_length="6">A teď jako ptáci</l>
     <l n="5" met="100010" rhyme="1" line_length="6">za jarního jitra</l>
     <l n="6" met="101000" rhyme="2" line_length="6">z hnízda vylétaly.</l>
    </lg>
   </lg>
