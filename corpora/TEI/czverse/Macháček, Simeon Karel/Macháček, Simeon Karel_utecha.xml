 <text>
  <front>
   <head>Útěcha.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" line_length="5">Růže ty krásná,</l>
     <l n="2" met="0010" rhyme="1" line_length="4">Vždy mi vítej!</l>
     <l n="3" met="10010" line_length="5">Památko po ní,</l>
     <l n="4" met="1000" rhyme="1" line_length="4">Neodkvítej!</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010" line_length="5">Ještě jen tebou</l>
     <l n="6" met="1010" rhyme="2" line_length="4">Se tu blažím,</l>
     <l n="7" met="10010" line_length="5">Slzami svými</l>
     <l n="8" met="1010" rhyme="2" line_length="4">Tebe vlažím.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010" line_length="5">Lidka mi kvetla</l>
     <l n="10" met="0010" rhyme="3" line_length="4">Též tak čile:</l>
     <l n="11" met="10010" line_length="5">Běda, jí zbledly</l>
     <l n="12" met="1010" rhyme="3" line_length="4">Líčka milé!</l>
    </lg>
    <lg n="4">
     <l n="13" met="11000" line_length="5">Ach trvalého</l>
     <l n="14" met="0010" rhyme="4" line_length="4">Nic tu není:</l>
     <l n="15" met="10010" line_length="5">Čeká i tebe</l>
     <l n="16" met="1000" rhyme="4" line_length="4">Opadení.</l>
    </lg>
    <lg n="5">
     <l n="17" met="10101" line_length="5">Oschne i můj zrak</l>
     <l n="18" met="1010" rhyme="5" line_length="4">V krátké době,</l>
     <l n="19" met="10010" line_length="5">S tebou se octnu</l>
     <l n="20" met="1010" rhyme="5" line_length="4">V tichém hrobě.</l>
    </lg>
    <lg n="6">
     <l n="21" met="10010" line_length="5">Toliko pamět</l>
     <l n="22" met="1010" rhyme="6" line_length="4">Lidky zbude,</l>
     <l n="23" met="10010" line_length="5">Pokvete v srdci,</l>
     <l n="24" met="0010" rhyme="6" line_length="4">Tam i všude.</l>
    </lg>
   </lg>
  </body>
