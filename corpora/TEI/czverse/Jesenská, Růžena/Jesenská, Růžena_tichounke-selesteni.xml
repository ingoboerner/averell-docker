  <front>
   <head>Tichounké šelestění...</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001000" rhyme="1" line_length="7">Tichounké šelestění</l>
     <l n="2" met="1001010" rhyme="2" line_length="7">krve a duše cílím,</l>
     <l n="3" met="1001010" line_length="7">rozepnout křídla toužím,</l>
     <l n="4" met="1001010" rhyme="2" line_length="7">opit se rudým kvítím.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1001000" rhyme="1" line_length="7">Opit se do omdlení</l>
     <l n="6" met="1001010" rhyme="3" line_length="7">polibky tvými, tvými,</l>
     <l n="7" met="1001010" line_length="7">jako když slunce zhaslo</l>
     <l n="8" met="1001000" rhyme="3" line_length="7">za vrchy modravými.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1001010" line_length="7">Nedočkat konce bouří,</l>
     <l n="10" met="1010010" rhyme="4" line_length="7">a než se sliby zruší –</l>
     <l n="11" met="1001000" line_length="7">s posledním políbením</l>
     <l n="12" met="1001010" rhyme="4" line_length="7">vydechnout duši, duši.</l>
    </lg>
   </lg>
  </body>
