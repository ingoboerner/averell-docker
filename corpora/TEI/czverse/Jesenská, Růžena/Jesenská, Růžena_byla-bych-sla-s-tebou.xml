  <front>
   <head>BYLA BYCH ŠLA S TEBOU...</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100110" line_length="6">Byla bych šla s tebou</l>
     <l n="2" met="100010" rhyme="1" line_length="6">od večera k ránu,</l>
     <l n="3" met="10101010" line_length="8">kdyby býval měsíc svítil</l>
     <l n="4" met="1010" rhyme="1" line_length="4">v onu stranu.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100110" line_length="6">Byla bych šla s tebou</l>
     <l n="6" met="010010" rhyme="2" line_length="6">i bez jeho svitu,</l>
     <l n="7" met="10001010" line_length="8">kdyby nás ta cesta vedla</l>
     <l n="8" met="1000" rhyme="2" line_length="4">ku blankytu.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100110" line_length="6">Byla bych šla s tebou –</l>
     <l n="10" met="001010" rhyme="3" line_length="6">přec, ať v sen jen krátký,</l>
     <l n="11" met="10101000" line_length="8">kdybych zase nemusela</l>
     <l n="12" met="1010" rhyme="3" line_length="4">jíti zpátky.</l>
    </lg>
   </lg>
  </body>
