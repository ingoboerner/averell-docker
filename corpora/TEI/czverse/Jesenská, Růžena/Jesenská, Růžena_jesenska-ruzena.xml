   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" line_length="5">Na hlavě kytky,</l>
     <l n="2" met="101010" rhyme="1" line_length="6">v srdci jejich vůni,</l>
     <l n="3" met="0101010" line_length="7">a celá duše ve snu</l>
     <l n="4" met="10010" rhyme="1" line_length="5">hluboké tůni.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010" line_length="5">Na hlavě kytky,</l>
     <l n="6" met="001010" rhyme="2" line_length="6">že je jimi těžká,</l>
     <l n="7" met="1001010" line_length="7">a kde ta duše moje</l>
     <l n="8" met="10010" rhyme="2" line_length="5">bloudí a mešká!</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010" line_length="5">Na hlavě kytky,</l>
     <l n="10" met="100010" rhyme="3" line_length="6">setřásám je dolů</l>
     <l n="11" met="1001010" line_length="7">do světa blaha, štěstí,</l>
     <l n="12" met="10010" rhyme="3" line_length="5">do světa bolu!</l>
    </lg>
   </lg>
