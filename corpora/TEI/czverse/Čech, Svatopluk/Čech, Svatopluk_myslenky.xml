  <front>
   <head>MYŠLENKY.*)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Na tvé čelo bílé</l>
     <l n="2" met="100010" rhyme="1" line_length="6">pod vrkoč tvůj světlý</l>
     <l n="3" met="101010" line_length="6">jako na sníh ptáci</l>
     <l n="4" met="100010" rhyme="1" line_length="6">myšlenky se sletly.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" line_length="6">Myšlenky to černé</l>
     <l n="6" met="101010" rhyme="2" line_length="6">jako ptactvo zimy;</l>
     <l n="7" met="010010" line_length="6">snad myšlenka na mne</l>
     <l n="8" met="101010" rhyme="2" line_length="6">byla mezi nimi?</l>
    </lg>
   </lg>
  </body>
