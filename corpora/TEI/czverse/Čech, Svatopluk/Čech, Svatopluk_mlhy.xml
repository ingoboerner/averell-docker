  <front>
   <head>MLHY.*)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010100" rhyme="1" line_length="8">Hutným a jasným nechci být,</l>
     <l n="2" met="11001" rhyme="1" line_length="5">chci mlhavě snít,</l>
     <l n="3" met="11010" rhyme="2" line_length="5">chci býti vlnou</l>
     <l n="4" met="10010" rhyme="2" line_length="5">proměny plnou,</l>
     <l n="5" met="0100100" line_length="7">jež bez tvaru jistého,</l>
     <l n="6" met="100100" line_length="6">v nestálém rozmaru</l>
     <l n="7" met="10010010" rhyme="3" line_length="8">vzpíná se, čeří a hroutí</l>
     <l n="8" met="10010" rhyme="3" line_length="5">bezděčnou poutí</l>
     <l n="9" met="1000" line_length="4">v neznámo kams:</l>
     <l n="10" met="100100" line_length="6">takto mé myšlenky</l>
     <l n="11" met="100100" rhyme="4" line_length="6">vlnami poplynou</l>
     <l n="12" met="100100" rhyme="4" line_length="6">za skrytou vidinou,</l>
     <l n="13" met="100100" line_length="6">hrajíce mihavě</l>
     <l n="14" met="100100" line_length="6">plachými odrazy,</l>
     <l n="15" met="100100" line_length="6">úryvky okolí,</l>
     <l n="16" met="100100" line_length="6">pažitu, blankytu,</l>
     <l n="17" met="1001" line_length="4">noci a dne –</l>
     <l n="18" met="101100" line_length="6">takto leť po zvůli,</l>
     <l n="19" met="000100" rhyme="5" line_length="6">kam se ti zamane,</l>
     <l n="20" met="1001" rhyme="5" line_length="4">mlhavý sne!</l>
    </lg>
   </lg>
  </body>
