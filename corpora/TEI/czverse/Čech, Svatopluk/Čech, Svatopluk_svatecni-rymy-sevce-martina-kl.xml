  <front>
   <head>SVÁTEČNÍ RÝMY ŠEVCE MARTINA KLÍMY. (1.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" rhyme="1" line_length="6">Nechťsi tupí ševce,</l>
     <l n="2" met="011010" rhyme="1" line_length="6">že jde mezi pěvce,</l>
     <l n="3" met="0010100" rhyme="2" line_length="7">že se místo kopyta</l>
     <l n="4" met="1010100" rhyme="2" line_length="7">směle chápe varita –</l>
     <l n="5" met="100100" rhyme="3" line_length="6">Nedbej nic, Martine –</l>
     <l n="6" met="1001" rhyme="4" line_length="4">Martine, hej!</l>
     <l n="7" met="001100" rhyme="3" line_length="6">než ti máj uplyne,</l>
     <l n="8" met="1001" rhyme="4" line_length="4">po svém si pěj!</l>
    </lg>
    <lg n="2">
     <l n="9" met="101010" rhyme="5" line_length="6">Němci Sachsem ševcem</l>
     <l n="10" met="100010" rhyme="5" line_length="6">nepohrdli pěvcem,</l>
     <l n="11" met="0010101" rhyme="6" line_length="7">proč by český mistr bot</l>
     <l n="12" met="1000101" rhyme="6" line_length="7">nezkusil též slok a not?</l>
     <l n="13" met="001100" rhyme="7" line_length="6">Což je dar zpívati</l>
     <l n="14" met="1001" rhyme="8" line_length="4">vyšším jen dán?</l>
     <l n="15" met="100100" rhyme="7" line_length="6">Verše-li tepati</l>
     <l n="16" met="1001" rhyme="8" line_length="4">nesmí než pán?</l>
    </lg>
    <lg n="3">
     <l n="17" met="101010" rhyme="9" line_length="6">Nejsou hodny básně</l>
     <l n="18" met="101010" rhyme="9" line_length="6">jenom zlaté třásně,</l>
     <l n="19" met="101010" rhyme="10" line_length="6">koby s lustrů blyskem,</l>
     <l n="20" met="101000" rhyme="10" line_length="6">labuť s vodotryskem,</l>
     <l n="21" met="100100" rhyme="11" line_length="6">nejsou jen záhony</l>
     <l n="22" met="1000" rhyme="12" line_length="4">hortensií,</l>
     <l n="23" met="100100" rhyme="11" line_length="6">panské jen balkony</l>
     <l n="24" met="1000" rhyme="12" line_length="4">poesií.</l>
    </lg>
   </lg>
