  <front>
   <head>IV.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001000" rhyme="1" line_length="8">Bohatého pochovali,</l>
     <l n="2" met="100010" rhyme="2" line_length="6">chudý jen se díval,</l>
     <l n="3" met="10001000" rhyme="1" line_length="8">nad hrobem mu zaplakali,</l>
     <l n="4" met="101010" rhyme="2" line_length="6">chudý, ten si zpíval:</l>
    </lg>
    <lg n="2">
     <l n="5" met="10001010" rhyme="3" line_length="8">„Chudáka to málo bolí,</l>
     <l n="6" met="001010" rhyme="4" line_length="6">když ta s kosou kvačí:</l>
     <l n="7" met="00101000" rhyme="3" line_length="8">když se sypou na mozoly,</l>
     <l n="8" met="101010" rhyme="4" line_length="6">méně hrudy tlačí.“</l>
    </lg>
   </lg>
  </body>
