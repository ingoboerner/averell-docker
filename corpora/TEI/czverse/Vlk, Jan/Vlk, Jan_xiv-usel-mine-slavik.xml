  <front>
   <head>XIV. Ušel Míně slavík,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Ušel Míně slavík, </l>
     <l n="2" met="100010" rhyme="1" line_length="6">o lípě si skáká,</l>
     <l n="3" met="010010" line_length="6">zpět volá jej Mína,</l>
     <l n="4" met="101010" rhyme="1" line_length="6">sladkým slovem láká.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" line_length="6">Srdce mé se jednou</l>
     <l n="6" met="101000" rhyme="2" line_length="6">láskou roznítilo,</l>
     <l n="7" met="101010" line_length="6">snilo, jak by vroucně</l>
     <l n="8" met="100010" rhyme="2" line_length="6">na Mínině bilo.</l>
    </lg>
    <lg n="3">
     <l n="9" met="101010" line_length="6">Mína kynouc růží</l>
     <l n="10" met="101010" rhyme="3" line_length="6">trním srdce spiala,</l>
     <l n="11" met="101000" line_length="6">srdce krvácelo,</l>
     <l n="12" met="100010" rhyme="3" line_length="6">Mína se mu smála.</l>
    </lg>
    <lg n="4">
     <l n="13" met="101010" line_length="6">Plesej, ptáče, plesej,</l>
     <l n="14" met="101010" rhyme="4" line_length="6">rozviň křídla svoje,</l>
     <l n="15" met="101010" line_length="6">hory, doly, nebe,</l>
     <l n="16" met="101010" rhyme="4" line_length="6">luh i háj jsou tvoje.</l>
    </lg>
   </lg>
  </body>
