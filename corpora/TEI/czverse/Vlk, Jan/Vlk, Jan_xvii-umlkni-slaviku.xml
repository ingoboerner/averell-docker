  <front>
   <head>XVII. Umlkni, slavíku,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Umlkni, slavíku, </l>
     <l n="2" met="101000" rhyme="1" line_length="6">nepěj o milosti,</l>
     <l n="3" met="101010" line_length="6">sice srdce moje</l>
     <l n="4" met="101000" rhyme="1" line_length="6">pukne ze žalosti.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" line_length="6">Blankytových nebes</l>
     <l n="6" met="101010" rhyme="2" line_length="6">skryjte mraky černé,</l>
     <l n="7" met="001000" line_length="6">ať si nevzpomínám</l>
     <l n="8" met="100100" rhyme="2" line_length="6">na oči nevěrné!</l>
    </lg>
    <lg n="3">
     <l n="9" met="100010" line_length="6">Rozsypte se růže,</l>
     <l n="10" met="100010" rhyme="3" line_length="6">nekvěťte už více,</l>
     <l n="11" met="100000" line_length="6">nepamatujte mne</l>
     <l n="12" met="100010" rhyme="3" line_length="6">na nevěrné líce!</l>
    </lg>
    <lg n="4">
     <l n="13" met="110010" line_length="6">Ach, kdež jsou ty doby,</l>
     <l n="14" met="000100" rhyme="4" line_length="6">když jsem je hladíval</l>
     <l n="15" met="001010" line_length="6">a v tom modrém očku</l>
     <l n="16" met="100100" rhyme="4" line_length="6">nebe své vidíval!</l>
    </lg>
   </lg>
  </body>
