  <front>
   <head>NASTAL PŘÍSNÝ SOUDNÝ DEN.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010101" line_length="7">Nastal přísný soudný den,</l>
     <l n="2" met="100010" rhyme="1" line_length="6">trhají se hroby,</l>
     <l n="3" met="1010100" rhyme="2" line_length="7">s mstivou tváří vstávají</l>
     <l n="4" met="100010" rhyme="1" line_length="6">utrýzněných doby.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1000101" line_length="7">Na obloze z bleskův meč</l>
     <l n="6" met="100010" rhyme="3" line_length="6">spasitele hlásá,</l>
     <l n="7" met="1011100" line_length="7">bouřný zvuk z trub anjelů</l>
     <l n="8" met="100100" rhyme="3" line_length="6">světem vším otřásá.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010100" rhyme="2" line_length="7">Panské hrady pukají,</l>
     <l n="10" met="101010" rhyme="4" line_length="6">v rum se jižjiž boří,</l>
     <l n="11" met="1000100" line_length="7">otrocké jich budovy</l>
     <l n="12" met="100010" rhyme="4" line_length="6">plápolem již hoří.</l>
    </lg>
    <lg n="4">
     <l n="13" met="1010100" line_length="7">Panstvo a jich komoňstvo</l>
     <l n="14" met="100010" rhyme="5" line_length="6">do boje se strojí,</l>
     <l n="15" met="1000100" line_length="7">spasiteli k pravici</l>
     <l n="16" met="100010" rhyme="5" line_length="6">spravedliví stojí.</l>
    </lg>
    <lg n="5">
     <l n="17" met="1000101" line_length="7">Spravedliví! vzhůru! v boj!</l>
     <l n="18" met="001010" rhyme="6" line_length="6">On nás vede v seče,</l>
     <l n="19" met="1010100" line_length="7">jednou ještě, naposled</l>
     <l n="20" met="101010" rhyme="6" line_length="6">tasme na ně meče!</l>
    </lg>
   </lg>
  </body>
