  <front>
   <head>LUDMILE TICHÉ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">Po mníšeckých lesích</l>
     <l n="2" met="100010" rhyme="1" line_length="6">Rozlehly se písně,</l>
     <l n="3" met="101000" line_length="6">Z hrdla holubčího</l>
     <l n="4" met="101010" rhyme="1" line_length="6">Z duše plné tísně.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101010" line_length="6">Zněly, zněly sladko,</l>
     <l n="6" met="101010" rhyme="2" line_length="6">Jako harfy hrání,</l>
     <l n="7" met="101010" line_length="6">Ale zněly bolno,</l>
     <l n="8" met="101000" rhyme="2" line_length="6">Jako o klekání.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100010" line_length="6">Poslední když vížka</l>
     <l n="10" met="101000" rhyme="3" line_length="6">V soumrak odezněla,</l>
     <l n="11" met="100010" line_length="6">Po mníšeckých lesích</l>
     <l n="12" met="100100" rhyme="3" line_length="6">Tichost se prostřela.</l>
    </lg>
    <lg n="4">
     <l n="13" met="101010" line_length="6">Zvony zněly zase,</l>
     <l n="14" met="101010" rhyme="4" line_length="6">Ale v hrana zněly,</l>
     <l n="15" met="010010" line_length="6">A nad zpěvnou dívkou</l>
     <l n="16" met="101010" rhyme="4" line_length="6">Kněži žalmy pěli.</l>
    </lg>
    <lg n="5">
     <l n="17" met="101010" line_length="6">Ticho opět v lesích,</l>
     <l n="18" met="101010" rhyme="5" line_length="6">Jenom věrné ptáče</l>
     <l n="19" met="100010" line_length="6">Nad Lidunky rovem</l>
     <l n="20" met="101010" rhyme="5" line_length="6">Smutný slavík pláče.</l>
    </lg>
   </lg>
  </body>
