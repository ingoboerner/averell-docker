  <front>
   <head>Holoubátko moje,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">Holoubátko moje, </l>
     <l n="2" met="100010" rhyme="1" line_length="6">Nevyletuj z dvoru,</l>
     <l n="3" met="101010" line_length="6">Číhá dravý luňák</l>
     <l n="4" met="101010" rhyme="1" line_length="6">Ukryt v tmavém boru.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101000" line_length="6">Ale holoubátko</l>
     <l n="6" met="100010" rhyme="2" line_length="6">Neposlechlo matku,</l>
     <l n="7" met="100010" line_length="6">Vyletělo přece</l>
     <l n="8" met="100100" rhyme="2" line_length="6">Vysoko ze statku.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100000" line_length="6">Nevrátilo však se</l>
     <l n="10" met="100010" rhyme="3" line_length="6">neposlušné ptáče,</l>
     <l n="11" met="010010" line_length="6">A nebohá matka,</l>
     <l n="12" met="001010" rhyme="3" line_length="6">Jak ta pro ně pláče.</l>
    </lg>
   </lg>
  </body>
