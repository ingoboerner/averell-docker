  <front>
   <head>1. O, jak blaze tobě,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">O, jak blaze tobě, </l>
     <l n="2" met="101010" rhyme="1" line_length="6">Květe mojí slasti,</l>
     <l n="3" met="10101010" line_length="8">Dokud budou lokty moje</l>
     <l n="4" met="100010" rhyme="1" line_length="6">Na lůžko tě klásti.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101010" line_length="6">Dokud moje píseň</l>
     <l n="6" met="101010" rhyme="2" line_length="6">Bude tobě zpívat,</l>
     <l n="7" met="01001010" line_length="8">A o lásce matky tvojí</l>
     <l n="8" met="100010" rhyme="2" line_length="6">Bude se ti snívat.</l>
    </lg>
    <lg n="3">
     <l n="9" met="101010" line_length="6">Dokud jenom samo</l>
     <l n="10" met="100010" rhyme="3" line_length="6">Z tichounkého snění</l>
     <l n="11" met="10100100" rhyme="2" line_length="8">Bude jemně tě budívat</l>
     <l n="12" met="101000" rhyme="3" line_length="6">Matky políbení.</l>
    </lg>
   </lg>
  </body>
