  <front>
   <head>Bude svatba, bude,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Bude svatba, bude, </l>
     <l n="2" met="101010" rhyme="1" line_length="6">Šijte roucho k sňatku,</l>
     <l n="3" met="110010" line_length="6">A, družičky, pojďte</l>
     <l n="4" met="100010" rhyme="1" line_length="6">Do našeho statku.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101010" line_length="6">Šily roucho bílé,</l>
     <l n="6" met="100100" rhyme="2" line_length="6">Rubáš však ušily,</l>
     <l n="7" met="010010" line_length="6">A družičky přišly,</l>
     <l n="8" met="101000" rhyme="2" line_length="6">Družku provodily.</l>
    </lg>
   </lg>
  </body>
