  <front>
   <head>Vesele skřivánek</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Vesele skřivánek </l>
     <l n="2" met="100010" rhyme="1" line_length="6">Nad osením pěje,</l>
     <l n="3" met="101000" line_length="6">A tam nad potůčkem</l>
     <l n="4" met="100010" rhyme="1" line_length="6">Fijalka se směje.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Ona se milostně</l>
     <l n="6" met="101010" rhyme="2" line_length="6">K němu dolů shýbá,</l>
     <l n="7" met="100100" line_length="6">A on ji uchopí,</l>
     <l n="8" met="100010" rhyme="2" line_length="6">Miluje a líbá.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">Nese ji v objetí,</l>
     <l n="10" met="100100" rhyme="3" line_length="6">Dále s ní putuje,</l>
     <l n="11" met="001010" line_length="6">Že již u nás jaro,</l>
     <l n="12" met="100100" rhyme="3" line_length="6">Krajinou zvěstuje.</l>
    </lg>
   </lg>
  </body>
