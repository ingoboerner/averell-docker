  <front>
   <head>Smutná komůrka, tmavá noc,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10100101" rhyme="1" line_length="8">Smutná komůrka, tmavá noc, </l>
     <l n="2" met="10100100" rhyme="1" line_length="8">pojď mi, Honzíčku, na pomoc.</l>
    </lg>
    <lg n="2">
     <l n="3" met="10010111" rhyme="2" line_length="8">Podkůvky klepou klap, klap, klap,</l>
     <l n="4" met="10010111" rhyme="2" line_length="8">na dvoře psíček haf, haf, haf.</l>
    </lg>
    <lg n="3">
     <l n="5" met="10001000" rhyme="3" line_length="8">Matinka se probudila,</l>
     <l n="6" met="10010100" rhyme="3" line_length="8">postélku vrzat slyšela.</l>
    </lg>
    <lg n="4">
     <l n="7" met="10001000" rhyme="4" line_length="8">Nebojte se, maminko, nic,</l>
     <l n="8" met="10100100" rhyme="4" line_length="8">dostal hubinku nebo víc.</l>
    </lg>
    <lg n="5">
     <l n="9" met="10100010" rhyme="5" line_length="8">Dával hubinky jak plamen</l>
     <l n="10" met="01001010" rhyme="5" line_length="8">až na věky věkův amen.</l>
    </lg>
   </lg>
  </body>
