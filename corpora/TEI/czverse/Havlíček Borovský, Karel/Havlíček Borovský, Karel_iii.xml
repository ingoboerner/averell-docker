  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001000" rhyme="1" line_length="8">Oktrojíruj pomaličku,</l>
     <l n="2" met="1000100" line_length="7">oktrojíruj pomalu,</l>
     <l n="3" met="10101000" rhyme="1" line_length="8">máte málo dvacetníčků,</l>
     <l n="4" met="1010100" line_length="7">máte málo tolarů.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">„Národ sem, národ tam,</l>
     <l n="6" met="100100" rhyme="2" line_length="6">kanony, střílejte!</l>
     <l n="7" met="000100" line_length="6">Však my vás potlučem,</l>
     <l n="8" met="001000" rhyme="2" line_length="6">nic se nestarejte.“</l>
    </lg>
   </lg>
  </body>
