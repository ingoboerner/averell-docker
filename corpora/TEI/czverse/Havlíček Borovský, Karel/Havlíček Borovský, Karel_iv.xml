  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010100" rhyme="1" line_length="8">Utíkej, Windo, utíkej,</l>
     <l n="2" met="10010100" rhyme="1" line_length="8">honí tě Košut divokej!</l>
     <l n="3" met="10100010" rhyme="2" line_length="8">Winda utíká, co může,</l>
     <l n="4" met="10010100" rhyme="2" line_length="8">Košut ho chytit nemůže.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010100" rhyme="3" line_length="8">Která je vláda poctivá,</l>
     <l n="6" met="00101000" rhyme="3" line_length="8">ta se sněmu nevyhýbá;</l>
     <l n="7" met="10010100" rhyme="4" line_length="8">která je vláda opice,</l>
     <l n="8" met="10010100" rhyme="4" line_length="8">bojí se třeba čepice.</l>
    </lg>
   </lg>
  </body>
