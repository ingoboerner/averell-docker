  <front>
   <head>DO PAMÁTNÍ KNIHY V BUKOVINĚ V TATRÁCH</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Kdyby Morské oko</l>
     <l n="2" met="101010" rhyme="1" line_length="6">jenom slze byly,</l>
     <l n="3" met="100100" line_length="6">slze, co Poláci</l>
     <l n="4" met="100100" rhyme="1" line_length="6">za vlastí ronili:</l>
    </lg>
    <lg n="2">
     <l n="5" met="101000" line_length="6">kdyby bělohorská</l>
     <l n="6" met="101010" rhyme="2" line_length="6">hanba v českém srdci</l>
     <l n="7" met="010100" line_length="6">tak věčně bydlela</l>
     <l n="8" met="011000" rhyme="2" line_length="6">jak sníh na Lomnici:</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" rhyme="1" line_length="6">kdyby se spojili</l>
     <l n="10" met="110100" rhyme="3" line_length="6">Srb, Chorvát, Slovenec</l>
     <l n="11" met="010100" line_length="6">jak malé potůčky</l>
     <l n="12" met="100100" rhyme="3" line_length="6">v veliký Dunajec:</l>
    </lg>
    <lg n="4">
     <l n="13" met="010110" line_length="6">a kdyby Rus otrok</l>
     <l n="14" met="101010" rhyme="4" line_length="6">zlámal pouta cárská,</l>
     <l n="15" met="101010" line_length="6">jako drtí dřeva</l>
     <l n="16" met="100100" rhyme="4" line_length="6">vichřice tatránská:</l>
    </lg>
    <lg n="5">
     <l n="17" met="010100" line_length="6">to bychom veleli</l>
     <l n="18" met="101010" rhyme="5" line_length="6">hlasem z Tater hromů,</l>
     <l n="19" met="101010" line_length="6">Vídeň, Berlín, Petrov</l>
     <l n="20" met="010100" rhyme="5" line_length="6">ať padnou do hrobu!</l>
    </lg>
   </lg>
  </body>
