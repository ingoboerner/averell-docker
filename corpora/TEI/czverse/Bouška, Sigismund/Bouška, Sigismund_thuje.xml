  <front>
   <head>THUJE.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100100" rhyme="1" line_length="9">Skupinou obrovských medvědů</l>
     <l n="2" met="1001010" rhyme="2" line_length="7">v zahradě sedí thuje,</l>
     <l n="3" met="10010100" rhyme="1" line_length="8">v nehnutém civí posedu</l>
     <l n="4" met="0101010" rhyme="2" line_length="7">a vítr do nich duje.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010100" rhyme="3" line_length="8">Zelené mechy kožichu</l>
     <l n="6" met="10010010" rhyme="4" line_length="8">zčechraně, nervosně víří,</l>
     <l n="7" met="10010100" rhyme="3" line_length="8">funějí v rychlém oddychu,</l>
     <l n="8" met="10010010" rhyme="4" line_length="8">na hlavách západ jim hýří.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010101" rhyme="5" line_length="8">Nalehl větru prudký ráz,</l>
     <l n="10" met="1001010" rhyme="6" line_length="7">vrcholy těl jim zvrátil,</l>
     <l n="11" met="100100101" rhyme="5" line_length="9">zašuměl, zahučel trojí hlas,</l>
     <l n="12" met="1000010" rhyme="6" line_length="7">bručivě pak se tratil.</l>
    </lg>
    <lg n="4">
     <l n="13" met="01010100" rhyme="7" line_length="8">A znovu vítr doráží,</l>
     <l n="14" met="10010010" rhyme="8" line_length="8">cuchá jim huňaté šaty,</l>
     <l n="15" met="10010100" rhyme="7" line_length="8">s divokou rve je kuráží,</l>
     <l n="16" met="10010010" rhyme="8" line_length="8">pevně však zarostly paty.</l>
    </lg>
    <lg n="5">
     <l n="17" met="10010100" rhyme="9" line_length="8">Prudce se sněti rozhrnou,</l>
     <l n="18" met="1001010" rhyme="10" line_length="7">zelené svitne chvojí,</l>
     <l n="19" met="01010100" rhyme="9" line_length="8">hned ale jehlic obrnou</l>
     <l n="20" met="1001010" rhyme="10" line_length="7">husté se loubí spojí.</l>
    </lg>
    <lg n="6">
     <l n="21" met="010100100" rhyme="11" line_length="9">A světlo západu tancuje,</l>
     <l n="22" met="1001010" rhyme="12" line_length="7">plápolá jejich zády,</l>
     <l n="23" met="101100100" rhyme="11" line_length="9">obrů tré tiše si notuje</l>
     <l n="24" met="010010010" rhyme="12" line_length="9">a stařecky kývají brady.</l>
    </lg>
   </lg>
