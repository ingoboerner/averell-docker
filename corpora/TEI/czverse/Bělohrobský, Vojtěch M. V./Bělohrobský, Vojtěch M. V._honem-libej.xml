 <text>
  <front>
   <head>Honem líbej!</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" line_length="4">Závisť čítá</l>
     <l n="2" met="1010" rhyme="1" line_length="4">líbky, dítě!</l>
     <l n="3" met="1010" line_length="4">proto líbej</l>
     <l n="4" met="1010" rhyme="1" line_length="4">stokrát hbitě!</l>
     <l n="5" met="1000" line_length="4">honem ty mne,</l>
     <l n="6" met="1000" rhyme="2" line_length="4">honem já tě,</l>
     <l n="7" met="1010" line_length="4">honem! honem!!</l>
     <l n="8" met="1000" rhyme="2" line_length="4">na stokráte!</l>
     <l n="9" met="1010" line_length="4">Honem! líbej</l>
     <l n="10" met="1000" rhyme="2" line_length="4">na stokráte,</l>
     <l n="11" met="0010" line_length="4">ať se závisť</l>
     <l n="12" met="1010" rhyme="2" line_length="4">v počtu zmate.</l>
    </lg>
   </lg>
  </body>
 </text>
