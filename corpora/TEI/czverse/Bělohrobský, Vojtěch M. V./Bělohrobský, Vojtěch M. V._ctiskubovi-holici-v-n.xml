   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000100" line_length="7">Břitva tvá a jazyk tvůj</l>
     <l n="2" met="010010" rhyme="1" line_length="6">tu manýru mají,</l>
     <l n="3" met="0010100" line_length="7">jak se dotknou někoho,</l>
     <l n="4" met="001000" rhyme="1" line_length="6">hned ho pořezají.</l>
