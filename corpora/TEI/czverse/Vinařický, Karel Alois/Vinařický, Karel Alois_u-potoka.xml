 <text>
  <front>
   <head>U potoka.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000" rhyme="1" line_length="4">Po dolině</l>
     <l n="2" met="10100" rhyme="2" line_length="5">Potok utíká.</l>
     <l n="3" met="1010" rhyme="3" line_length="4">Toky jeho</l>
     <l n="4" met="101010" rhyme="4" line_length="6">Ani zima líná</l>
     <l n="5" met="101000" rhyme="4" line_length="6">Ledy neupíná.</l>
     <l n="6" met="1000" rhyme="3" line_length="4">Ze dutého</l>
     <l n="7" met="1010100" rhyme="2" line_length="7">Země lůna vyniká;</l>
     <l n="8" met="10010" rhyme="5" line_length="5">Hojně se řine,</l>
     <l n="9" met="10010" rhyme="5" line_length="5">Jaře se vine,</l>
     <l n="10" met="1010" rhyme="6" line_length="4">Toky ručí</l>
     <l n="11" met="101000" rhyme="1" line_length="6">Lívá po lučině.</l>
     <l n="12" met="1000" rhyme="7" line_length="4">O kameny</l>
     <l n="13" met="1010" rhyme="7" line_length="4">Hází pěny.</l>
     <l n="14" met="10001010" rhyme="6" line_length="8">Na nebi-li bouře hučí,</l>
     <l n="15" met="1001010" rhyme="8" line_length="7">Kalí se, kypí, duje;</l>
     <l n="16" met="100" rhyme="9" line_length="3">Běhutý,</l>
     <l n="17" met="100" rhyme="9" line_length="3">Nadutý</l>
     <l n="18" met="1010" rhyme="10" line_length="4">Vody šíří,</l>
     <l n="19" met="1010" rhyme="10" line_length="4">Ječí, víří,</l>
     <l n="20" met="10010010" rhyme="8" line_length="8">Luhy a palouky ruje,</l>
     <l n="21" met="10010010" rhyme="11" line_length="8">Tarasy, násepy boří,</l>
     <l n="22" met="1001000" rhyme="11" line_length="7">Lidu se nepokoří.</l>
    </lg>
    <lg n="2">
     <l n="23" met="1010" line_length="4">Bouře mine,</l>
     <l n="24" met="10" rhyme="12" line_length="2">Minou,</l>
     <l n="25" met="10" rhyme="12" line_length="2">Hynou</l>
     <l n="26" met="101010" rhyme="13" line_length="6">Pěny, šumy, jeky.</l>
     <l n="27" met="101000" line_length="6">Potok utišený</l>
     <l n="28" met="10100" rhyme="13" line_length="5">Padá do řeky.</l>
    </lg>
    <lg n="3">
     <l n="29" met="100001000" rhyme="14" line_length="9">Potoku-li se nepodobá</l>
     <l n="30" met="1001000" rhyme="14" line_length="7">Vášeň i jinochová?</l>
    </lg>
   </lg>
  </body>
