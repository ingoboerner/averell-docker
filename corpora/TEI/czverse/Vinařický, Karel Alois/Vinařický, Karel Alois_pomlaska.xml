 <text>
  <front>
   <head>Pomláska.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10100" rhyme="1" line_length="5">Vejce, vajíčka</l>
     <l n="2" met="10100" rhyme="1" line_length="5">Snáší slepička;</l>
     <l n="3" met="100100" line_length="6">Hledá je, sbírá je</l>
     <l n="4" met="1000" line_length="4">Hospodyně.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010" rhyme="2" line_length="5">I vy mi dáte,</l>
     <l n="6" met="01000" rhyme="2" line_length="5">Až vyhledáte,</l>
     <l n="7" met="100100" line_length="6">Vajíčko červené</l>
     <l n="8" met="1000" line_length="4">Malované.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10100" rhyme="3" line_length="5">Na to vajíčko</l>
     <l n="10" met="10100" rhyme="3" line_length="5">Pište slovíčko,</l>
     <l n="11" met="001000" line_length="6">Ať se zaraduje</l>
     <l n="12" met="1000" line_length="4">Srdečko mé.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10100" rhyme="4" line_length="5">Dejte pomlásky</l>
     <l n="14" met="01010" rhyme="4" line_length="5">A z vaší lásky</l>
     <l n="15" met="100100" line_length="6">Budu se těšívat</l>
     <l n="16" met="1000" line_length="4">Častějikrát.</l>
    </lg>
   </lg>
  </body>
