  <front>
   <head>Písně milostné. (1.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010100" line_length="8">Ovijím lýru růžemi,</l>
     <l n="2" met="1001010" rhyme="1" line_length="7">perlami zvoním v struny,</l>
     <l n="3" met="10010100" line_length="8">perlami, lásky slzami</l>
     <l n="4" met="1001010" rhyme="1" line_length="7">v přísvitu bledé luny.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010100" line_length="8">Večerní vánek kolébá,</l>
     <l n="6" met="1001010" rhyme="2" line_length="7">k hvězdám mé touhy nítí,</l>
     <l n="7" met="10010100" line_length="8">o leťte písně za hory,</l>
     <l n="8" met="1000010" rhyme="2" line_length="7">nejkrasší z nich kde svítí.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010100" line_length="8">V komůrce tiché spanilá</l>
     <l n="10" met="1001010" rhyme="3" line_length="7">dívčina, hvězda skvoucí,</l>
     <l n="11" met="10010100" line_length="8">o zvučte křídlem zlaceným,</l>
     <l n="12" met="1001010" rhyme="3" line_length="7">pozdrav jí neste vroucí.</l>
    </lg>
   </lg>
  </body>
