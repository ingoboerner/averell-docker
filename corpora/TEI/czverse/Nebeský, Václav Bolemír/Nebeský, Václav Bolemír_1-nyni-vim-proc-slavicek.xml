  <front>
   <head>1. Nyní vím, proč slavíček</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010100" line_length="7">Nyní vím, proč slavíček </l>
     <l n="2" met="1000100" rhyme="1" line_length="7">Ukrývá se v tichou houšť,</l>
     <l n="3" met="1000100" line_length="7">Neboť jest mi samému</l>
     <l n="4" met="1010101" rhyme="1" line_length="7">Hlomoz světa jako poušť.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1010001" line_length="7">Vím, proč holoubátek dvé</l>
     <l n="6" met="1010100" rhyme="2" line_length="7">V šíré pole zaletá.</l>
     <l n="7" met="1000100" line_length="7">Neboť se mi samému</l>
     <l n="8" met="1001001" rhyme="2" line_length="7">Samota domovem zdá.</l>
    </lg>
   </lg>
  </body>
