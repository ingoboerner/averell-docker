  <front>
   <head>69. Slzavé oudolí.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101000" line_length="8">Prala Hanna u potoka,</l>
     <l n="2" met="100" rhyme="1" line_length="3">Plakala,</l>
     <l n="3" met="0010010010" line_length="10">Že ji ještě ta matička její</l>
     <l n="4" met="100" rhyme="1" line_length="3">Nevdala.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101000" line_length="8">Žala trávu u Drnavy,</l>
     <l n="6" met="100" rhyme="1" line_length="3">Plakala;</l>
     <l n="7" met="1010010010" line_length="10">Brzo na to ji matička její</l>
     <l n="8" met="100" rhyme="1" line_length="3">Provdala.</l>
    </lg>
    <lg n="3">
     <l n="9" met="01101000" line_length="8">Když len plela u štěpnice,</l>
     <l n="10" met="100" rhyme="1" line_length="3">Plakala,</l>
     <l n="11" met="1010010010" line_length="10">A to, že ji již matička její</l>
     <l n="12" met="100" rhyme="1" line_length="3">Provdala.</l>
    </lg>
   </lg>
  </body>
