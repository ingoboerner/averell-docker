  <front>
   <head>33. Zamilovaný dědoušek.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Dědoušku! což vy již</l>
     <l n="2" met="101010" rhyme="1" line_length="6">Bílou hlavu máte,</l>
     <l n="3" met="101000" line_length="6">A přec po děvčatech</l>
     <l n="4" met="100100" rhyme="1" line_length="6">Ještě se díváte.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" line_length="6">Díváte se po nich,</l>
     <l n="6" met="101000" rhyme="1" line_length="6">A se usmíváte;</l>
     <l n="7" met="000100" line_length="6">Snad vy ty děvčátka,</l>
     <l n="8" met="001100" rhyme="1" line_length="6">Snad je rád nemáte!</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">Dědečku! vyť jste již</l>
     <l n="10" met="100100" rhyme="2" line_length="6">Šedivý mládenec;</l>
     <l n="11" met="100100" line_length="6">Nechte vy děvčátek,</l>
     <l n="12" met="100100" rhyme="2" line_length="6">Vezměte růženec.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100100" line_length="6">Vezměte růženec,</l>
     <l n="14" met="100100" rhyme="3" line_length="6">Pěkně se modlete,</l>
     <l n="15" met="100100" line_length="6">Za to se do nebe</l>
     <l n="16" met="101000" rhyme="3" line_length="6">Někdy dostanete.</l>
    </lg>
   </lg>
  </body>
