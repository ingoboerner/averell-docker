  <front>
   <head>43. Slzičky.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">U bílého dvora</l>
     <l n="2" met="100100" rhyme="1" line_length="6">Za vodou nahoře,</l>
     <l n="3" met="10010010" line_length="8">Pásává Liduška sama</l>
     <l n="4" met="100100" rhyme="1" line_length="6">Na panském ouhoře.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101000" line_length="6">Celá zamyšlená</l>
     <l n="6" met="100100" rhyme="2" line_length="6">Do země hledívá,</l>
     <l n="7" met="01001010" line_length="8">A po mezi chodíc z očí</l>
     <l n="8" met="100100" rhyme="2" line_length="6">Slzy tam cedívá.</l>
    </lg>
    <lg n="3">
     <l n="9" met="101010" line_length="6">Proto na té mezi</l>
     <l n="10" met="100100" rhyme="3" line_length="6">Slzičky zrůstají,</l>
     <l n="11" met="00001010" line_length="8">Že je tam ty její modré</l>
     <l n="12" met="101000" rhyme="3" line_length="6">Oči rozsívají.</l>
    </lg>
   </lg>
  </body>
