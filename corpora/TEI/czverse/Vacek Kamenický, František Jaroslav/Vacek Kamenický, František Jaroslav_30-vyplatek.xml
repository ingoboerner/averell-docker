  <front>
   <head>30. Výplatek.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="001100" rhyme="1" line_length="6">Když jsem jel od vdovy,</l>
     <l n="2" met="110100" rhyme="1" line_length="6">Kůň ztratil podkovy;</l>
     <l n="3" met="001100" line_length="6">Já si dám koníčka</l>
     <l n="4" met="100" rhyme="2" line_length="3">Okovat,</l>
     <l n="5" met="010100" line_length="6">A budu pannu si</l>
     <l n="6" met="100" rhyme="2" line_length="3">Namlouvat.</l>
    </lg>
    <lg n="2">
     <l n="7" met="010000" rhyme="3" line_length="6">Ty kováříčku náš!</l>
     <l n="8" met="100100" rhyme="3" line_length="6">Zdaž ty mi okováš</l>
     <l n="9" met="100100" line_length="6">Vraného koníčka</l>
     <l n="10" met="100" rhyme="4" line_length="3">Ještě dnes,</l>
     <l n="11" met="100100" line_length="6">Aby mě do Lhoty</l>
     <l n="12" met="101" rhyme="4" line_length="3">K milé nes?</l>
    </lg>
    <lg n="3">
     <l n="13" met="100010" rhyme="5" line_length="6">Kovaříčku nestůj,</l>
     <l n="14" met="100010" rhyme="5" line_length="6">Koníčka mi okuj!</l>
     <l n="15" met="100100" line_length="6">Okuj ho na čtyry</l>
     <l n="16" met="100" rhyme="6" line_length="3">Podkovy;</l>
     <l n="17" met="110100" line_length="6">Plat za to požádej</l>
     <l n="18" met="100" rhyme="6" line_length="3">Od vdovy.</l>
    </lg>
   </lg>
  </body>
