 <text>
  <front>
   <head>10. Výmluva.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100" rhyme="1" line_length="3">Za vodou,</l>
     <l n="2" met="100" rhyme="1" line_length="3">Za vodou,</l>
     <l n="3" met="100010" line_length="6">Na zeleném luze</l>
     <l n="4" met="1000" rhyme="2" line_length="4">Za vodičkou,</l>
     <l n="5" met="1000100" line_length="7">Pohrává si Hanička</l>
     <l n="6" met="101000" rhyme="2" line_length="6">S bílou holubičkou.</l>
    </lg>
    <lg n="2">
     <l n="7" met="100" rhyme="3" line_length="3">Pohrává,</l>
     <l n="8" met="100" rhyme="3" line_length="3">Zahrává,</l>
     <l n="9" met="100010" line_length="6">Celuje tu bílou</l>
     <l n="10" met="1000" rhyme="4" line_length="4">Holubičku,</l>
     <l n="11" met="0100100" rhyme="3" line_length="7">A na mne se hněvává</l>
     <l n="12" met="100100" rhyme="4" line_length="6">Pro jednu hubičku.</l>
    </lg>
    <lg n="3">
     <l n="13" met="100" rhyme="5" line_length="3">Zavolám,</l>
     <l n="14" met="100" rhyme="5" line_length="3">Přivolám,</l>
     <l n="15" met="101100" line_length="6">Počkej, ó Haničko,</l>
     <l n="16" met="0100" rhyme="4" line_length="4">Tvou matičku!</l>
     <l n="17" met="1000100" line_length="7">Povím jí, že celuješ</l>
     <l n="18" met="101000" rhyme="4" line_length="6">Z lásky holubičku.</l>
    </lg>
    <lg n="4">
     <l n="19" met="100" rhyme="6" line_length="3">„Zavolej,</l>
     <l n="20" met="100" rhyme="6" line_length="3">Přivolej,</l>
     <l n="21" met="100010" line_length="6">Nepřející hochu!</l>
     <l n="22" met="0100" rhyme="4" line_length="4">Mou matičku;</l>
     <l n="23" met="0100100" line_length="7">Já nelíbám holuba,</l>
     <l n="24" met="101000" rhyme="4" line_length="6">Líbám – holubičku.“</l>
    </lg>
   </lg>
  </body>
