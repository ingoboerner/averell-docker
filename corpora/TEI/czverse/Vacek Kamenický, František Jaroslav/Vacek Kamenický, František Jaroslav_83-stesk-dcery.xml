 <text>
  <front>
   <head>83. Stesk dcery.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101000" rhyme="1" line_length="6">Veta po mladosti,</l>
     <l n="2" met="101000" rhyme="1" line_length="6">Veta po radosti –</l>
     <l n="3" met="0100" rhyme="2" line_length="4">Pryč ze světa!</l>
     <l n="4" met="101010" rhyme="3" line_length="6">Na tom bídném světě</l>
     <l n="5" met="101010" rhyme="3" line_length="6">Sotva růže zkvete,</l>
     <l n="6" met="0100" rhyme="2" line_length="4">Již odkvetá.</l>
    </lg>
    <lg n="2">
     <l n="7" met="001010" rhyme="4" line_length="6">Když jsem byla malá,</l>
     <l n="8" met="100010" rhyme="4" line_length="6">Pokojně jsem spala</l>
     <l n="9" met="0100" rhyme="5" line_length="4">Až do rána;</l>
     <l n="10" met="001010" rhyme="4" line_length="6">Když jsem ráno vstala,</l>
     <l n="11" met="100010" rhyme="4" line_length="6">Od matky jsem byla</l>
     <l n="12" met="1000" rhyme="5" line_length="4">Ulíbána.</l>
    </lg>
    <lg n="3">
     <l n="13" met="100010" rhyme="4" line_length="6">Velkou jsem se stala,</l>
     <l n="14" met="110010" rhyme="4" line_length="6">Smrt matičku vzala,</l>
     <l n="15" met="1100" rhyme="6" line_length="4">Smrt ukrutná!</l>
     <l n="16" met="101010" rhyme="7" line_length="6">Proto od té doby</l>
     <l n="17" met="101010" rhyme="7" line_length="6">Bloudím mezi hroby</l>
     <l n="18" met="1010" rhyme="6" line_length="4">Celá smutná.</l>
    </lg>
    <lg n="4">
     <l n="19" met="101000" rhyme="8" line_length="6">Veta po mladosti,</l>
     <l n="20" met="101000" rhyme="8" line_length="6">Veta po radosti –</l>
     <l n="21" met="0100" rhyme="9" line_length="4">Pryč ze světa!</l>
     <l n="22" met="101010" rhyme="10" line_length="6">Na tom bídném světě</l>
     <l n="23" met="101010" rhyme="10" line_length="6">Sotva růže zkvete,</l>
     <l n="24" met="0100" rhyme="9" line_length="4">Zas odkvetá.</l>
    </lg>
   </lg>
