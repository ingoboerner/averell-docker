  <front>
   <head>44. Mastička.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="000100" line_length="6">Když jsem já na mezi</l>
     <l n="2" met="101010" rhyme="1" line_length="6">V létě trávu žala,</l>
     <l n="3" met="101000" line_length="6">V levou ruku jsem se</l>
     <l n="4" met="101000" rhyme="1" line_length="6">Srpem posekala.</l>
    </lg>
    <lg n="2">
     <l n="5" met="010100" line_length="6">Ta rána nemalá</l>
     <l n="6" met="100100" rhyme="2" line_length="6">Málo mě bolela,</l>
     <l n="7" met="010100" line_length="6">A sama od sebe</l>
     <l n="8" met="101000" rhyme="3" line_length="6">Se mi zahojila.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">S jara jsem v zahrádce</l>
     <l n="10" met="100010" rhyme="3" line_length="6">Hlavatici sila,</l>
     <l n="11" met="000101" line_length="6">Tam mi zas láska zlá</l>
     <l n="12" met="101000" rhyme="3" line_length="6">Srdce poranila.</l>
    </lg>
    <lg n="4">
     <l n="13" met="001010" line_length="6">Což mě tato rána</l>
     <l n="14" met="100100" rhyme="2" line_length="6">Nesmírně bolela,</l>
     <l n="15" met="010100" line_length="6">A ještě posavád</l>
     <l n="16" met="010000" rhyme="3" line_length="6">Se nezahojila.</l>
    </lg>
    <lg n="5">
     <l n="17" met="100100" line_length="6">Raněné srdéčko</l>
     <l n="18" met="101000" rhyme="4" line_length="6">Se mi nezahojí,</l>
     <l n="19" met="100100" line_length="6">Dokud my s Janečkem</l>
     <l n="20" met="100010" rhyme="4" line_length="6">Nebudeme svoji.</l>
    </lg>
   </lg>
  </body>
