 <text>
  <front>
   <head>Ukolíbavka.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" rhyme="1" line_length="4">Spi má zlatá</l>
     <l n="2" met="1000" rhyme="1" line_length="4">Boubelatá,</l>
     <l n="3" met="10100" rhyme="2" line_length="5">Spi má hubinko!</l>
     <l n="4" met="1010" rhyme="3" line_length="4">Noc se blíží,</l>
     <l n="5" met="1010" rhyme="3" line_length="4">Oči klíží,</l>
     <l n="6" met="10100" rhyme="2" line_length="5">Hajej miminko!</l>
    </lg>
    <lg n="2">
     <l n="7" met="1010" rhyme="4" line_length="4">Pan se žere,</l>
     <l n="8" met="1010" rhyme="4" line_length="4">Po cti dere,</l>
     <l n="9" met="10100" rhyme="5" line_length="5">Nespí starostí,</l>
     <l n="10" met="1010" rhyme="6" line_length="4">Panna bledá</l>
     <l n="11" met="1010" rhyme="6" line_length="4">Hocha hledá,</l>
     <l n="12" met="10100" rhyme="5" line_length="5">Vzdychá milostí.</l>
    </lg>
    <lg n="3">
     <l n="13" met="1010" rhyme="7" line_length="4">Lichvář sedí,</l>
     <l n="14" met="1010" rhyme="7" line_length="4">Zlata hledí</l>
     <l n="15" met="10100" rhyme="8" line_length="5">Před zlým zlodějem;</l>
     <l n="16" met="1010" rhyme="9" line_length="4">Na daň brouká,</l>
     <l n="17" met="1010" rhyme="9" line_length="4">Strachy kouká</l>
     <l n="18" met="10100" rhyme="8" line_length="5">Za svým kročejem.</l>
    </lg>
    <lg n="4">
     <l n="19" met="1010" rhyme="10" line_length="4">Zrádné syny</l>
     <l n="20" met="1010" rhyme="10" line_length="4">Pro jich viny</l>
     <l n="21" met="10101" rhyme="11" line_length="5">Píchá v srdcy had,</l>
     <l n="22" met="1000" rhyme="12" line_length="4">Bez ouzkosti</l>
     <l n="23" met="1010" rhyme="12" line_length="4">Spějí ctnosti,</l>
     <l n="24" met="00101" rhyme="11" line_length="5">Byť jim hrozil kat.</l>
    </lg>
    <lg n="5">
     <l n="25" met="1010" rhyme="13" line_length="4">Spi má zlatá</l>
     <l n="26" met="1000" rhyme="13" line_length="4">Boubelatá,</l>
     <l n="27" met="10100" rhyme="14" line_length="5">Spi má hubinko!</l>
     <l n="28" met="1010" rhyme="15" line_length="4">Noc se blíží,</l>
     <l n="29" met="1010" rhyme="15" line_length="4">Očí klíží,</l>
     <l n="30" met="10100" rhyme="14" line_length="5">Hajej miminko!</l>
    </lg>
   </lg>
  </body>
