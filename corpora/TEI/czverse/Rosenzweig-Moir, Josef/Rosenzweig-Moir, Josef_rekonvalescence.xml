  <front>
   <head>REKONVALESCENCE.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10000100" line_length="8">Konečně jsem se probudil</l>
     <l n="2" met="100100" rhyme="1" line_length="6">dlouhého ze spánku.</l>
     <l n="3" met="10010100" line_length="8">Konečně zase spatřil jsem</l>
     <l n="4" met="101100" rhyme="1" line_length="6">rudý svit červánků.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100100" line_length="9">Po dlouhé noci, jež záhubně</l>
     <l n="6" met="100100" rhyme="2" line_length="6">na prsa dopadla,</l>
     <l n="7" met="100100100" line_length="9">na prsa uboze vychudlá,</l>
     <l n="8" met="100100" rhyme="2" line_length="6">předčasně uvadlá –</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010100" line_length="8">přece jsem rána dočkal se,</l>
     <l n="10" met="010100" rhyme="3" line_length="6">jež přišlo jásavě.</l>
     <l n="11" met="10010100" line_length="8">Na břehu Bečvy ležím teď</l>
     <l n="12" met="100100" rhyme="3" line_length="6">vonící ve trávě.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10010101" line_length="8">Slunce mi teple líbá tvář,</l>
     <l n="14" met="100100" rhyme="4" line_length="6">do srdce vtéká mi.</l>
     <l n="15" met="10010100" line_length="8">Podivno, že ty polibky</l>
     <l n="16" met="010100" rhyme="4" line_length="6">tak sladce omámí.</l>
    </lg>
    <lg n="5">
     <l n="17" met="10010100" line_length="8">Podivno, že ty paprsky</l>
     <l n="18" met="100100" rhyme="5" line_length="6">do duše nalejí</l>
     <l n="19" met="10010101" line_length="8">takových zdravých, smavých tuch</l>
     <l n="20" met="100100" rhyme="5" line_length="6">jásavých nadějí</l>
    </lg>
    <lg n="6">
     <l n="21" met="10010100" line_length="8">na šťastné dny, jež přijdou mi,</l>
     <l n="22" met="100100" rhyme="6" line_length="6">radostné na mládí,</l>
     <l n="23" met="10010101" line_length="8">na slunce, které krásné sny</l>
     <l n="24" met="010100" rhyme="6" line_length="6">svým teplem pohladí.</l>
    </lg>
   </lg>
  </body>
