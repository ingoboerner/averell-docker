  <front>
   <head>ODKAZ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001000100" line_length="11">Unavená karavana velbloudů</l>
     <l n="2" met="1001000" line_length="7">usnula na obzoru</l>
     <l n="3" met="1010010" line_length="7">mezi modrými stany</l>
     <l n="4" met="100100" line_length="6">pod žlutou oblohou.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10100100010" line_length="11">Naše hory jsou za večera smutné</l>
     <l n="6" met="0100101" line_length="7">a smutné jsou oči psa</l>
     <l n="7" met="100010" line_length="6">pozdvižené ke mně</l>
     <l n="8" met="10010010" line_length="8">uprostřed smutného lesa.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010010" line_length="8">Smutek je veliká láska,</l>
     <l n="10" met="01001010" line_length="8">jež objímá všecky věci,</l>
     <l n="11" met="101000" line_length="6">které odcházejí,</l>
     <l n="12" met="100100" line_length="6">protože zemřeme</l>
     <l n="13" met="010100100" line_length="9">a ruce na prsou zkřížené</l>
     <l n="14" met="1010" line_length="4">budou prázdny</l>
     <l n="15" met="10100010" line_length="8">jako otevřená škeble</l>
     <l n="16" met="100100" line_length="6">na vyschlé bažině.</l>
    </lg>
    <lg n="4">
     <l n="17" met="10010010" line_length="8">Bratře můj, kterého neznám,</l>
     <l n="18" met="1001000" line_length="7">bratře můj, silnější mne,</l>
     <l n="19" met="101000" line_length="6">tobě odkazuji</l>
     <l n="20" met="010100" line_length="6">vše, co jsem miloval,</l>
     <l n="21" met="1010010" line_length="7">smutné bratry a sestry</l>
     <l n="22" met="0101001000" line_length="10">a smutné květiny na úhorech,</l>
     <l n="23" met="101001000" line_length="9">žence s polí se vracející</l>
     <l n="24" met="100010" line_length="6">do hladové noci,</l>
     <l n="25" met="1001010" line_length="7">zakleté ruce v šachtách</l>
     <l n="26" met="0100100" line_length="7">i plavčíky v ráhnoví,</l>
     <l n="27" met="10101001000" line_length="11">bledé děti mlčící na zápraží,</l>
     <l n="28" met="1001000" line_length="7">vojáky zpívající,</l>
     <l n="29" met="101000010" line_length="9">oči zhasínající v krčmách</l>
     <l n="30" met="0100101000" line_length="10">a přibitá srdce za mřížemi.</l>
    </lg>
   </lg>
