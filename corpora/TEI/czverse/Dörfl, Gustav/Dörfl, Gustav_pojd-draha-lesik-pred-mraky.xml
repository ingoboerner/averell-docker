  <front>
   <head>Pojď, drahá, lesík před mraky</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="11010100" line_length="8">Pojď, drahá, lesík před mraky </l>
     <l n="2" met="01000100" rhyme="1" line_length="8">nás ukryje, nás ukryje,</l>
     <l n="3" met="10010100" line_length="8">půjdeme kolem zřícenin –</l>
     <l n="4" met="11001100" rhyme="1" line_length="8">vzduch teplý je, vzduch teplý je.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010100" line_length="8">Kdyby snad tebe lekaly</l>
     <l n="6" met="01010101" rhyme="2" line_length="8">ty černé zdi, ty černé zdi,</l>
     <l n="7" met="01010100" line_length="8">já každou zídku proměním</l>
     <l n="8" met="10001000" rhyme="2" line_length="8">ve souhvězdí, ve souhvězdí.</l>
    </lg>
    <lg n="3">
     <l n="9" met="01010100" line_length="8">A kdyby bouře stihala</l>
     <l n="10" met="01000100" rhyme="3" line_length="8">tvé půvaby, tvé půvaby –</l>
     <l n="11" met="00010100" line_length="8">já bych tě přikryl srdcem svým,</l>
     <l n="12" met="01000100" rhyme="3" line_length="8">až přešla by, až přešla by.</l>
    </lg>
   </lg>
  </body>
