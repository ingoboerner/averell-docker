  <front>
   <head>REVOLUČNÍ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010100" rhyme="1" line_length="8">Hodina přišla, odbila,</l>
     <l n="2" met="10010100" rhyme="1" line_length="8">potřeba rukou u díla</l>
     <l n="3" met="1001010" rhyme="2" line_length="7">zbraňuje plýtvat slovy,</l>
     <l n="4" met="10000100" rhyme="3" line_length="8">vyšli jsme blíž i do dáli,</l>
     <l n="5" met="10010100" rhyme="3" line_length="8">muže jsme u vás hledali,</l>
     <l n="6" met="1001000" rhyme="2" line_length="7">nalezli Oblomovy.</l>
    </lg>
    <lg n="2">
     <l n="7" met="01010100" rhyme="4" line_length="8">Však záře luhy zatopí</l>
     <l n="8" met="01001100" rhyme="4" line_length="8">i rozžehne půl Evropy</l>
     <l n="9" met="0101010" rhyme="5" line_length="7">a vzkypí moře celé!</l>
     <l n="10" met="10010100" rhyme="6" line_length="8">Nežli se bouře přižene,</l>
     <l n="11" met="10010100" rhyme="6" line_length="8">ve jménu věci vznešené,</l>
     <l n="12" met="1001000" rhyme="5" line_length="7">vylezte z pod postele!</l>
    </lg>
    <lg n="3">
     <l n="13" met="10010100" rhyme="7" line_length="8">Vstávejte, trubci, bouře je,</l>
     <l n="14" met="10010100" rhyme="7" line_length="8">třesou se prahy, veřeje,</l>
     <l n="15" met="1001010" rhyme="8" line_length="7">klenutí v domě starém,</l>
     <l n="16" met="10010100" rhyme="9" line_length="8">řítí se systém vyžilý,</l>
     <l n="17" met="01010100" rhyme="9" line_length="8">ať žije krev a násilí,</l>
     <l n="18" met="1001000" rhyme="8" line_length="7">petardy pod kočárem!</l>
    </lg>
    <lg n="4">
     <l n="19" met="10010100" rhyme="10" line_length="8">Přátelé, v žití poprvé</l>
     <l n="20" met="10010100" rhyme="10" line_length="8">potopte ruce do krve,</l>
     <l n="21" met="1001010" rhyme="11" line_length="7">z temna se hromy valí,</l>
     <l n="22" met="10010100" rhyme="12" line_length="8">nastala lázeň přesvatá,</l>
     <l n="23" met="10010100" rhyme="12" line_length="8">polibte ženy, robata,</l>
     <l n="24" met="1001000" rhyme="11" line_length="7">upusťte od kořaly!</l>
    </lg>
   </lg>
  </body>
