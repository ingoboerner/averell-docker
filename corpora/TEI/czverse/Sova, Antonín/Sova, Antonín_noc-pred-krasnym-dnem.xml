  <front>
   <head>NOC PŘED KRÁSNÝM DNEM</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010101" rhyme="1" line_length="7">Kolem v dvorcích temný klid,</l>
     <l n="2" met="10010" rhyme="2" line_length="5">městečko spí již.</l>
     <l n="3" met="1010001" rhyme="1" line_length="7">Vešla zvířata i lid</l>
     <l n="4" met="10001" rhyme="2" line_length="5">v zaslíbenou říš.</l>
    </lg>
    <lg n="2">
     <l n="5" met="0010101" rhyme="3" line_length="7">Jak by hlavu tvoji jal</l>
     <l n="6" met="10001" rhyme="4" line_length="5">po nevlídných dnech</l>
     <l n="7" met="1010100" rhyme="3" line_length="7">dobrý duch, ji zkolébal</l>
     <l n="8" met="10100" rhyme="4" line_length="5">tichem věcí všech.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010100" rhyme="5" line_length="7">Stromy tichnout zaslechneš</l>
     <l n="10" met="10001" rhyme="6" line_length="5">závětrnou mhou,</l>
     <l n="11" met="1001101" rhyme="5" line_length="7">městečko spí, chrám i věž</l>
     <l n="12" met="10100" rhyme="6" line_length="5">stíny u nohou.</l>
    </lg>
    <lg n="4">
     <l n="13" met="1010100" rhyme="7" line_length="7">Ustal kypět v potoce</l>
     <l n="14" met="10101" rhyme="8" line_length="5">stálých dešťů chlad.</l>
     <l n="15" met="1010100" rhyme="7" line_length="7">Pozdní voní ovoce</l>
     <l n="16" met="100" rhyme="8" line_length="3">ze zahrad.</l>
    </lg>
    <lg n="5">
     <l n="17" met="1010100" rhyme="9" line_length="7">Cítíš jako předtuchu</l>
     <l n="18" met="10101" rhyme="10" line_length="5">v září jasných dnů</l>
     <l n="19" met="1010100" rhyme="9" line_length="7">jihnout cosi ve vzduchu,</l>
     <l n="20" met="10001" rhyme="10" line_length="5">probouzet se v snu.</l>
    </lg>
    <lg n="6">
     <l n="21" met="1010101" rhyme="11" line_length="7">Slunce ví, že přijít má</l>
     <l n="22" met="10101" rhyme="12" line_length="5">zčesat zralý sad.</l>
     <l n="23" met="1000100" rhyme="11" line_length="7">Mateřskýma očima</l>
     <l n="24" met="00101" rhyme="12" line_length="5">že se musí smát.</l>
    </lg>
   </lg>
