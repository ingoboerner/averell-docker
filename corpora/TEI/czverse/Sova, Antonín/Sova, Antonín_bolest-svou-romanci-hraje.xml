  <front>
   <head>BOLEST SVOU ROMANCI HRAJE.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010010" rhyme="1" line_length="7">Plachá samota kvílí,</l>
     <l n="2" met="100101000" rhyme="2" line_length="9">vrby se krčí naslouchavě,</l>
     <l n="3" met="1100010" rhyme="1" line_length="7">noc na tisíce mílí,</l>
     <l n="4" met="11010" rhyme="1" line_length="5">sníh hází bílý.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010010" rhyme="2" line_length="8">Bolest svou romanci hraje</l>
     <l n="6" met="10010010" rhyme="3" line_length="8">na kraji v sněživém lese,</l>
     <l n="7" met="1010010" rhyme="2" line_length="7">duše smutného kraje</l>
     <l n="8" met="01010" rhyme="3" line_length="5">se chví v ní, třese.</l>
    </lg>
   </lg>
  </body>
