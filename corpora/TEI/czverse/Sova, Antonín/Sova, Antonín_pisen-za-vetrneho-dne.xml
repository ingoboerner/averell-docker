  <front>
   <head>PÍSEŇ ZA VĚTRNÉHO DNE</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001010" line_length="7">Oblohou modrou zpívá</l>
     <l n="2" met="10010010" rhyme="1" line_length="8">slunečné větrno mladé.</l>
     <l n="3" met="10010010" line_length="8">Čas je, kdy tulácké srdce</l>
     <l n="4" met="10010110" rhyme="1" line_length="8">mílové kroky v svět klade.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010010" line_length="8">Rychlostí větru a oblak</l>
     <l n="6" met="10010010" rhyme="2" line_length="8">přes kopců sesuté hlásky</l>
     <l n="7" met="10010010" line_length="8">míříme lukami, lesy</l>
     <l n="8" met="10010010" rhyme="2" line_length="8">k hrobům i studánkám lásky.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010010" line_length="8">Domu kde rodného kouři</l>
     <l n="10" met="10010010" rhyme="3" line_length="8">zčernaly jabloně sadem.</l>
     <l n="11" met="10010010" line_length="8">V mládí kde bloudila duše,</l>
     <l n="12" met="10010010" rhyme="3" line_length="8">raněná po světě hladem.</l>
    </lg>
   </lg>
  </body>
