  <front>
   <head>LUH</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101000" rhyme="1" line_length="8">Slunce všude po krajině</l>
     <l n="2" met="10001010" rhyme="2" line_length="8">rozchvělo svůj paprsk čistý,</l>
     <l n="3" met="10101010" rhyme="2" line_length="8">jasná zeleň vtkaná v listy</l>
     <l n="4" met="10001010" rhyme="1" line_length="8">v svitu je a polo v stíně.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101000" rhyme="3" line_length="8">Všude jasno po obloze,</l>
     <l n="6" met="10101010" rhyme="4" line_length="8">dlouhá tráva klasy sklání,</l>
     <l n="7" met="10001000" rhyme="4" line_length="8">v olších kdes jen v zadumání</l>
     <l n="8" met="10011010" rhyme="3" line_length="8">na jedné čáp stojí noze.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10101010" rhyme="5" line_length="8">Sekáč kosí v středu trávy</l>
     <l n="10" met="10001010" rhyme="6" line_length="8">na rozlehlém luhu zticha,</l>
     <l n="11" met="10101010" rhyme="6" line_length="8">tráva vůní divnou dýchá,</l>
     <l n="12" met="10101000" rhyme="5" line_length="8">reflex vrhá zelenavý.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10101010" rhyme="7" line_length="8">Stejnou práci máme, druhu,</l>
     <l n="14" met="00101010" rhyme="8" line_length="8">jak mi dí ten obraz prostý;</l>
     <l n="15" met="00101010" rhyme="8" line_length="8">tak já písní drobné skvosty</l>
     <l n="16" met="10101010" rhyme="7" line_length="8">kosím v duše slunném luhu.</l>
    </lg>
   </lg>
