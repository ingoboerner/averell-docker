  <front>
   <head>PÍSEŇ Z PODLETÍ</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001010" rhyme="1" line_length="7">Poslední slunce žhnulo,</l>
     <l n="2" met="010101" rhyme="2" line_length="6">kdy vadly květy luk.</l>
     <l n="3" met="0001000" rhyme="1" line_length="7">Mne jak by obejmulo</l>
     <l n="4" met="110001" rhyme="2" line_length="6">dvě loučících se ruk.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1001010" rhyme="3" line_length="7">Hladily lesy, skály,</l>
     <l n="6" met="100100" rhyme="4" line_length="6">zvětralou hlavu mou</l>
     <l n="7" met="0101010" rhyme="3" line_length="7">a ještě jako z dáli</l>
     <l n="8" met="010001" rhyme="4" line_length="6">se zabělaly tmou.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1001000" rhyme="5" line_length="7">S bohem a na shledanou,</l>
     <l n="10" met="100100" rhyme="6" line_length="6">kynuly v dřímotu</l>
     <l n="11" met="0101010" rhyme="5" line_length="7">všem, kdo jsme šli tu branou</l>
     <l n="12" met="100100" rhyme="6" line_length="6">smrtí i životů.</l>
    </lg>
   </lg>
  </body>
