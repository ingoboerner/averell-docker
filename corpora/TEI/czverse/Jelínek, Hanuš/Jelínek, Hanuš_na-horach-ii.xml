  <front>
   <head>NA HORÁCH (II)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10110100" line_length="8">A jak jdu lesem, čekám, že</l>
     <l n="2" met="10010010" rhyme="1" line_length="8">najednou zleva či zprava</l>
     <l n="3" met="100100100" line_length="9">ze smrčí hlava se vynoří</l>
     <l n="4" met="1001000" rhyme="1" line_length="7">bělostná, kučeravá,</l>
    </lg>
    <lg n="2">
     <l n="5" met="01010100" rhyme="2" line_length="8">že půjdeš drobným krůčkem svým</l>
     <l n="6" met="1001010" rhyme="3" line_length="7">pěšinou prostřed lesa,</l>
     <l n="7" met="01010100" rhyme="2" line_length="8">tím drobným krůčkem tanečním,</l>
     <l n="8" met="1000010" rhyme="3" line_length="7">pompadurek si nesa,</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010100" line_length="8">maminčin černý pompadur</l>
     <l n="10" met="1001010" rhyme="4" line_length="7">na houby jako sáček,</l>
     <l n="11" met="10010100" line_length="8">pozorně hledě do mechu,</l>
     <l n="12" met="0101000" rhyme="4" line_length="7">kde jaký křemeňáček,</l>
    </lg>
    <lg n="4">
     <l n="13" met="10010100" rhyme="5" line_length="8">veselý, svěží, ruměnný</l>
     <l n="14" met="0101010" rhyme="6" line_length="7">a čilý jako rybka,</l>
     <l n="15" met="10010100" rhyme="5" line_length="8">hledaje mezi kořeny</l>
     <l n="16" met="01010010" rhyme="6" line_length="8">a v trávě pod smrčkem hříbka.</l>
    </lg>
   </lg>
  </body>
