 <text>
  <front>
   <head>Na zefyra.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="11000" rhyme="1" line_length="5">Věj zefyrečku,</l>
     <l n="2" met="1100" rhyme="2" line_length="4">Věj lučinou,</l>
     <l n="3" met="00100" rhyme="1" line_length="5">Snad tu dívečku</l>
     <l n="4" met="1010" rhyme="2" line_length="4">Znáš mně milou!</l>
    </lg>
    <lg n="2">
     <l n="5" met="01100" rhyme="3" line_length="5">Jí nes odemne</l>
     <l n="6" met="1000" rhyme="4" line_length="4">Pozdravení,</l>
     <l n="7" met="10010" rhyme="3" line_length="5">Řekni, že jemně</l>
     <l n="8" met="1010" rhyme="4" line_length="4">Nyji po ní.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10100" rhyme="5" line_length="5">Spíli – Marinku</l>
     <l n="10" met="1100" rhyme="6" line_length="4">Mou neprobuď;</l>
     <l n="11" met="10100" rhyme="5" line_length="5">Vtiskna hubinku,</l>
     <l n="12" met="1100" rhyme="6" line_length="4">Spěj odetud.</l>
    </lg>
    <lg n="4">
     <l n="13" met="00100" rhyme="7" line_length="5">Ty se měsíčku</l>
     <l n="14" met="1010" rhyme="8" line_length="4">Ve mrak obal,</l>
     <l n="15" met="00100" rhyme="7" line_length="5">Bys ji ze sníčku</l>
     <l n="16" met="1000" rhyme="8" line_length="4">Nevytrhal.</l>
    </lg>
    <lg n="5">
     <l n="17" met="10100" rhyme="9" line_length="5">Vedlé okénka</l>
     <l n="18" met="1010" rhyme="10" line_length="4">Jestli sedí,</l>
     <l n="19" met="10100" rhyme="9" line_length="5">Jestli do venka</l>
     <l n="20" met="1010" rhyme="10" line_length="4">Smutně hledí:</l>
    </lg>
    <lg n="6">
     <l n="21" met="10100" rhyme="11" line_length="5">Ó, tu měsínku</l>
     <l n="22" met="1000" rhyme="12" line_length="4">Zjasni se sám,</l>
     <l n="23" met="10100" rhyme="11" line_length="5">Zjasni Marinku,</l>
     <l n="24" met="1000" rhyme="12" line_length="4">Zjasni ji tam.</l>
    </lg>
    <lg n="7">
     <l n="25" met="11000" rhyme="13" line_length="5">Zdaž do tichého</l>
     <l n="26" met="1010" rhyme="14" line_length="4">Žídla patří,</l>
     <l n="27" met="00100" rhyme="13" line_length="5">Ať si Milého –</l>
     <l n="28" met="0010" rhyme="14" line_length="4">Mne v něm uzří.</l>
    </lg>
    <lg n="8">
     <l n="29" met="11000" rhyme="15" line_length="5">Věj zefyrečku,</l>
     <l n="30" met="1100" rhyme="16" line_length="4">Věj lučinou,</l>
     <l n="31" met="11000" rhyme="15" line_length="5">Věj na dívečku</l>
     <l n="32" met="1100" rhyme="16" line_length="4">Mou spanilou!</l>
    </lg>
   </lg>
  </body>
 </text>
