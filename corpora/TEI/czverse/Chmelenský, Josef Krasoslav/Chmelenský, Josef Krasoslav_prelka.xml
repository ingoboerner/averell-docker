 <text>
  <front>
   <head>Přelka.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" rhyme="1" line_length="4">Vlásky snědé,</l>
     <l n="2" met="1010" rhyme="1" line_length="4">Líce bledé</l>
     <l n="3" met="101" rhyme="2" line_length="3">Dívka má;</l>
     <l n="4" met="1010" rhyme="1" line_length="4">A tam přede</l>
     <l n="5" met="1010" rhyme="1" line_length="4">Niti šedé,</l>
     <l n="6" met="101" rhyme="2" line_length="3">Mutně lká.</l>
    </lg>
    <lg n="2">
     <l n="7" met="1010" rhyme="3" line_length="4">Smutek nosí,</l>
     <l n="8" met="1010" rhyme="3" line_length="4">Místo rosy</l>
     <l n="9" met="100" rhyme="4" line_length="3">Slzičky</l>
     <l n="10" met="1010" rhyme="3" line_length="4">Kvítí rosí,</l>
     <l n="11" met="1010" rhyme="3" line_length="4">O klid prosí</l>
     <l n="12" met="100" rhyme="4" line_length="3">Sudičky.</l>
    </lg>
    <lg n="3">
     <l n="13" met="1010" rhyme="5" line_length="4">Tvrdí ale,</l>
     <l n="14" met="1010" rhyme="5" line_length="4">Příst že dále</l>
     <l n="15" met="100" line_length="3">Nelze jí;</l>
     <l n="16" met="0110" rhyme="5" line_length="4">By, ždá stále,</l>
     <l n="17" met="1010" rhyme="5" line_length="4">Vlákno zralé</l>
     <l n="18" met="100" rhyme="6" line_length="3">Přestřihly.</l>
    </lg>
    <lg n="4">
     <l n="19" met="1010" rhyme="7" line_length="4">Jilmy chvějí:</l>
     <l n="20" met="1010" rhyme="7" line_length="4">Hoch že její</l>
     <l n="21" met="101" rhyme="6" line_length="3">V bitvě sní.</l>
     <l n="22" met="1000" rhyme="7" line_length="4">V obličeji</l>
     <l n="23" met="1001" rhyme="7" line_length="4">Barvy se jí</l>
     <l n="24" met="100" rhyme="6" line_length="3">Střídají.</l>
    </lg>
    <lg n="5">
     <l n="25" met="1010" rhyme="8" line_length="4">K jilmu sedne,</l>
     <l n="26" met="1010" rhyme="8" line_length="4">K nebi vzhlédne –</l>
     <l n="27" met="100" line_length="3">Víčka mne;</l>
     <l n="28" met="1010" rhyme="8" line_length="4">Tvář jí bledne –</l>
     <l n="29" met="1010" rhyme="8" line_length="4">Krev již ledne –</l>
     <l n="30" met="100" line_length="3">Kácí se! –</l>
    </lg>
   </lg>
  </body>
