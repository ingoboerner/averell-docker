  <front>
   <head>TVRDOHLAVOST NESLUŠÍ TI...</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001000" line_length="8">Tvrdohlavost nesluší Ti,</l>
     <l n="2" met="100010" rhyme="1" line_length="6">milenko má něžná,</l>
     <l n="3" met="10001000" line_length="8">krásná jsi a ztepilá jsi</l>
     <l n="4" met="010010" rhyme="1" line_length="6">jak z pohádky kněžna.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10001000" line_length="8">Tvrdohlavost nesluší Ti,</l>
     <l n="6" met="101010" rhyme="2" line_length="6">hyzdí Tvoji krásu,</l>
     <l n="7" met="10101000" line_length="8">chladným stínem obetkává</l>
     <l n="8" met="101010" rhyme="2" line_length="6">jas Tvých krásných vlasů.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10001000" line_length="8">Tvrdohlavost nesluší Ti,</l>
     <l n="10" met="10101010" rhyme="3" line_length="8">kalí Tvoje oči jasné,</l>
     <l n="11" met="10101010" line_length="8">kalí štěstí srdce mého,</l>
     <l n="12" met="00101010" rhyme="3" line_length="8">neb má láska k Tobě hasne!</l>
    </lg>
   </lg>
  </body>
