  <front>
   <head>VZDOROVITÁ HLAVA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001100" line_length="7">Lituji, ach lituji,</l>
     <l n="2" met="100010" rhyme="1" line_length="6">milenko má zlatá,</l>
     <l n="3" met="00101000" line_length="8">že Tvá hlava čarokrásná</l>
     <l n="4" met="001000" rhyme="1" line_length="6">je tak vzdorovitá!</l>
    </lg>
    <lg n="2">
     <l n="5" met="1000100" line_length="7">Vzdorovitá hlava Tvá</l>
     <l n="6" met="101010" rhyme="2" line_length="6">naše štěstí zdrtí,</l>
     <l n="7" met="10101010" line_length="8">srdce moje láskou choré</l>
     <l n="8" met="101010" rhyme="2" line_length="6">v náruč vrhne smrti.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1000100" line_length="7">Vzdorovitá hlava Tvá</l>
     <l n="10" met="101010" rhyme="3" line_length="6">ničí city něžné...</l>
     <l n="11" met="10101000" line_length="8">Místo pole makového</l>
     <l n="12" met="101010" rhyme="3" line_length="6">zřím já pole sněžné...</l>
    </lg>
   </lg>
  </body>
