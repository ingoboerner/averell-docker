  <front>
   <head>MARNÉ VZDECHY.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="01010100" line_length="8">Ta naše láska zmizela,</l>
     <l n="2" met="010101" rhyme="1" line_length="6">jak mizí jara čas,</l>
     <l n="3" met="10010100" line_length="8">a tak jak ptáci hnízda svá,</l>
     <l n="4" met="110000" rhyme="1" line_length="6">ach, opustila nás, –</l>
     <l n="5" met="01010100" line_length="8">ta naše láska zmizela</l>
     <l n="6" met="010000" line_length="6">a opustila nás!</l>
    </lg>
    <lg n="2">
     <l n="7" met="01010100" line_length="8">Ta naše láska odlétla</l>
     <l n="8" met="100101" rhyme="2" line_length="6">v neznámý cizí svět,</l>
     <l n="9" met="01010101" line_length="8">a kdyby vzešlo tisíc jar,</l>
     <l n="10" met="010000" rhyme="2" line_length="6">již nevrátí se zpět, –</l>
     <l n="11" met="01010100" line_length="8">ta naše láska odlétla,</l>
     <l n="12" met="010000" line_length="6">a nevrátí se zpět!</l>
    </lg>
   </lg>
  </body>
