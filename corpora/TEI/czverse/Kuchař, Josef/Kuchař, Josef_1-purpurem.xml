 <text>
  <front>
   <head>1. Purpurem</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100" rhyme="1" line_length="3">Purpurem </l>
     <l n="2" met="101" rhyme="1" line_length="3">Vrchů lem</l>
     <l n="3" met="1010" rhyme="2" line_length="4">Večer zlatí,</l>
     <l n="4" met="1010" rhyme="2" line_length="4">Stín se tratí</l>
     <l n="5" met="100" line_length="3">Na lesích.</l>
    </lg>
    <lg n="2">
     <l n="6" met="101" rhyme="3" line_length="3">Mlha spí</l>
     <l n="7" met="100" rhyme="3" line_length="3">V údolí,</l>
     <l n="8" met="1010" rhyme="4" line_length="4">Noční dumy</l>
     <l n="9" met="1010" rhyme="4" line_length="4">Vítr šumí</l>
     <l n="10" met="100" line_length="3">Na lesích.</l>
    </lg>
    <lg n="3">
     <l n="11" met="101" rhyme="5" line_length="3">Touhu, bol</l>
     <l n="12" met="101" rhyme="5" line_length="3">Šeptem kol,</l>
     <l n="13" met="1010" rhyme="6" line_length="4">Bájky tiše</l>
     <l n="14" met="1010" rhyme="6" line_length="4">Loubí dýše</l>
     <l n="15" met="100" line_length="3">Na lesích.</l>
    </lg>
    <lg n="4">
     <l n="16" met="100" rhyme="7" line_length="3">Jeleni</l>
     <l n="17" met="100" rhyme="7" line_length="3">V zeleni</l>
     <l n="18" met="1010" rhyme="8" line_length="4">Temnem skáčí,</l>
     <l n="19" met="1010" rhyme="8" line_length="4">Sovy pláčí</l>
     <l n="20" met="100" line_length="3">Na lesích.</l>
    </lg>
    <lg n="5">
     <l n="21" met="101" rhyme="9" line_length="3">Z dutých skal</l>
     <l n="22" met="100" rhyme="9" line_length="3">Nad úval</l>
     <l n="23" met="1010" rhyme="10" line_length="4">Sen se vine,</l>
     <l n="24" met="1010" rhyme="10" line_length="4">Luna plyne</l>
     <l n="25" met="100" line_length="3">Na lesích.</l>
    </lg>
    <lg n="6">
     <l n="26" met="101" rhyme="11" line_length="3">Nocí – dnem,</l>
     <l n="27" met="101" rhyme="11" line_length="3">V bdění, snem</l>
     <l n="28" met="1010" rhyme="12" line_length="4">Slastí zdroje,</l>
     <l n="29" met="1010" rhyme="12" line_length="4">Srdce moje</l>
     <l n="30" met="100" line_length="3">Na lesích.</l>
    </lg>
   </lg>
