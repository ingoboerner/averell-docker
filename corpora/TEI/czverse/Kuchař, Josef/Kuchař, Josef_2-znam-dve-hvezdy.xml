  <front>
   <head>2. Znám dvě hvězdy</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1110" line_length="4">Znám dvě hvězdy </l>
     <l n="2" met="1010" rhyme="1" line_length="4">V modrém poli,</l>
     <l n="3" met="1010" line_length="4">Koho srdce</l>
     <l n="4" met="1000" rhyme="1" line_length="4">Nezabolí</l>
     <l n="5" met="100" line_length="3">Na lesích?</l>
    </lg>
    <lg n="2">
     <l n="6" met="0010" line_length="4">Když se světlo</l>
     <l n="7" met="1010" rhyme="2" line_length="4">Halí šerem,</l>
     <l n="8" met="1010" line_length="4">Zřím jich plápol</l>
     <l n="9" met="1000" rhyme="2" line_length="4">Nad večerem</l>
     <l n="10" met="100" line_length="3">Na lesích.</l>
    </lg>
    <lg n="3">
     <l n="11" met="1010" line_length="4">Dokuď očka</l>
     <l n="12" met="1010" rhyme="3" line_length="4">Dívky bdějí,</l>
     <l n="13" met="1000" line_length="4">Ve soumraku</l>
     <l n="14" met="1010" rhyme="3" line_length="4">Hvězdy spějí</l>
     <l n="15" met="100" line_length="3">Na lesích.</l>
    </lg>
    <lg n="4">
     <l n="16" met="0010" line_length="4">Když však víčka</l>
     <l n="17" met="1010" rhyme="4" line_length="4">Spánek tíží,</l>
     <l n="18" met="1000" line_length="4">Se stíny pak</l>
     <l n="19" met="1010" rhyme="4" line_length="4">Noc se blíží</l>
     <l n="20" met="100" line_length="3">Na lesích.</l>
    </lg>
    <lg n="5">
     <l n="21" met="1010" line_length="4">A tu hvězdy</l>
     <l n="22" met="1010" rhyme="5" line_length="4">Modrem plynou,</l>
     <l n="23" met="0100" line_length="4">Jak modlitby</l>
     <l n="24" met="1000" rhyme="5" line_length="4">Nad nevinou</l>
     <l n="25" met="100" line_length="3">Na lesích.</l>
    </lg>
   </lg>
  </body>
