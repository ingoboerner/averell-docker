  <front>
   <head>Myšlenky velké bídníkům</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010100" line_length="8">Myšlenky velké bídníkům </l>
     <l n="2" met="0100010" rhyme="1" line_length="7">jen ku záhubě slouží</l>
     <l n="3" met="01010100" line_length="8">a jako těžké brnění</l>
     <l n="4" met="0001010" rhyme="1" line_length="7">vždy hloub je do vln hrouží.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010100" line_length="8">Pokroky mylných proroků</l>
     <l n="6" met="0101000" rhyme="2" line_length="7">mne proto nezlekají,</l>
     <l n="7" met="01001100" line_length="8">byť vlekly i svět zmámený</l>
     <l n="8" met="0100010" rhyme="2" line_length="7">až ku propasti kraji:</l>
    </lg>
    <lg n="3">
     <l n="9" met="01010100" line_length="8">i jejich doba přikvapí</l>
     <l n="10" met="0100010" rhyme="3" line_length="7">a kolossy se sřítí</l>
     <l n="11" met="01000100" line_length="8">a zneuctěné myšlenky</l>
     <l n="12" met="0100100" rhyme="3" line_length="7">jim k pádu jen zasvítí.</l>
    </lg>
    <lg n="4">
     <l n="13" met="11010100" line_length="8">Duch dějin rukou mohútnou</l>
     <l n="14" met="0100110" rhyme="4" line_length="7">z nich kradený lesk svláčí</l>
     <l n="15" met="01010100" line_length="8">a vrátiv pravdě korunu</l>
     <l n="16" met="0101010" rhyme="4" line_length="7">zas pevně dále kráčí.</l>
    </lg>
   </lg>
  </body>
