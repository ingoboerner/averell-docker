  <front>
   <head>Jarý život. (1.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10000100" line_length="8">Rozekvítej mé poupátko,</l>
     <l n="2" met="001010" rhyme="1" line_length="6">když tě rosa vlaží,</l>
     <l n="3" met="10001100" line_length="8">červenej se má panenko,</l>
     <l n="4" met="101010" rhyme="1" line_length="6">dokud láska blaží.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101010" line_length="8">Ranní rosa zajde brzy,</l>
     <l n="6" met="110010" rhyme="2" line_length="6">list po listu skáče,</l>
     <l n="7" met="10101010" line_length="8">přijde slunce, horké slunce,</l>
     <l n="8" met="101010" rhyme="2" line_length="6">a tvá láska – spláče!</l>
    </lg>
   </lg>
  </body>
