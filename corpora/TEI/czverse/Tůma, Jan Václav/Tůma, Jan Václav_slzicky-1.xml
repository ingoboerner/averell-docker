  <front>
   <head>Slzičky. (1.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Chudý je, chudičký,</l>
     <l n="2" met="101101" rhyme="1" line_length="6">a by svět celý měl,</l>
     <l n="3" met="000100" line_length="6">kdo je tu bez citu,</l>
     <l n="4" met="100100" rhyme="1" line_length="6">jakoby oněměl.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Neví-li, co je to,</l>
     <l n="6" met="100100" rhyme="2" line_length="6">zaplakat v radosti,</l>
     <l n="7" met="100100" line_length="6">nebo-li nepoznal</l>
     <l n="8" met="100100" rhyme="2" line_length="6">slzičku bolesti.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" rhyme="2" line_length="6">Neplakal v neštěstí</l>
     <l n="10" met="100100" rhyme="3" line_length="6">pro blaho stracené,</l>
     <l n="11" met="100100" line_length="6">zlá je to chudoba,</l>
     <l n="12" met="010100" rhyme="3" line_length="6">to srdce z kamene!</l>
    </lg>
   </lg>
  </body>
