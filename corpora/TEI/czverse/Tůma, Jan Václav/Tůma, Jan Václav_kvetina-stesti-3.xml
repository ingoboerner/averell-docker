  <front>
   <head>Květina štěstí. (3.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="000100" line_length="6">Ba je ten život náš</l>
     <l n="2" met="100100" rhyme="1" line_length="6">podivná květina,</l>
     <l n="3" met="100100" line_length="6">na stonku neštěstí</l>
     <l n="4" met="100100" rhyme="1" line_length="6">kvete mu koruna.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Pichlavý stoneček,</l>
     <l n="6" met="100101" rhyme="2" line_length="6">na něm je krásný květ,</l>
     <l n="7" met="001100" line_length="6">kdo ho chce, musí se</l>
     <l n="8" met="100100" rhyme="2" line_length="6">na trní skrvácet.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">Někomu opadá,</l>
     <l n="10" met="100100" rhyme="3" line_length="6">zbyde mu neštěstí,</l>
     <l n="11" met="100100" line_length="6">někdo zas po trní</l>
     <l n="12" met="100100" rhyme="3" line_length="6">k blahu se proklestí! –</l>
    </lg>
   </lg>
  </body>
