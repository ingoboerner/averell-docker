  <front>
   <head>Žebrák. (3.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Žebráku šedivý,</l>
     <l n="2" met="100101" rhyme="1" line_length="6">nermuť si pláčem líc,</l>
     <l n="3" met="110100" line_length="6">hleď, já jsem mlaďoučký</l>
     <l n="4" met="010100" rhyme="1" line_length="6">a nemám také nic!</l>
    </lg>
    <lg n="2">
     <l n="5" met="000100" line_length="6">Ty si svůj chlebíček</l>
     <l n="6" met="100100" rhyme="2" line_length="6">vyprosíš u dveří,</l>
     <l n="7" met="100101" line_length="6">většíť já bídu mám,</l>
     <l n="8" met="000100" rhyme="2" line_length="6">kdo však mně uvěří? –</l>
    </lg>
    <lg n="3">
     <l n="9" met="010100" line_length="6">Tvé bídy litují,</l>
     <l n="10" met="100100" rhyme="3" line_length="6">o své já nepovím,</l>
     <l n="11" met="000100" line_length="6">ty si ji opláčeš,</l>
     <l n="12" met="000100" rhyme="3" line_length="6">já to už neumím.</l>
    </lg>
    <lg n="4">
     <l n="13" met="010100" line_length="6">Ty chodíš po světě</l>
     <l n="14" met="100100" rhyme="4" line_length="6">v cizině svoboden,</l>
     <l n="15" met="100100" line_length="6">a já jsem s národem</l>
     <l n="16" met="010100" rhyme="4" line_length="6">v své vlasti poroben!</l>
    </lg>
   </lg>
  </body>
