  <front>
   <head>Žebrák. (1.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="010100" rhyme="1" line_length="6">Ten žebrák stařičký</l>
     <l n="2" met="010100" rhyme="2" line_length="6">s tím vlasem šedivým</l>
     <l n="3" met="100100" line_length="6">věčně tak putuje</l>
     <l n="4" met="010100" rhyme="2" line_length="6">tím světem měnivým,</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">po městech, po vískách,</l>
     <l n="6" met="100100" rhyme="3" line_length="6">k chaloupkám v samotě:</l>
     <l n="7" met="000100" rhyme="1" line_length="6">kdo je sám chudičký,</l>
     <l n="8" met="100100" rhyme="3" line_length="6">rozumí nuzotě.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">Po světě po celém,</l>
     <l n="10" met="100100" rhyme="4" line_length="6">jenom ne k paláci,</l>
     <l n="11" met="100100" line_length="6">nedajíť chudému</l>
     <l n="12" met="100100" rhyme="4" line_length="6">bohatí žebráci.</l>
    </lg>
   </lg>
  </body>
