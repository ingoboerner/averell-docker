  <front>
   <head>Naděje a vzpomínka. (1.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Naděje, naděje,</l>
     <l n="2" met="100100" rhyme="1" line_length="6">pěkné to stavení,</l>
     <l n="3" met="010100" line_length="6">jen škoda, přeškoda,</l>
     <l n="4" met="010100" rhyme="1" line_length="6">že není k spatření!</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Nepřijde povodeň</l>
     <l n="6" met="100100" rhyme="2" line_length="6">pohltit, potrávit,</l>
     <l n="7" met="100101" line_length="6">nepřijde hrom a blesk</l>
     <l n="8" met="100100" rhyme="2" line_length="6">pobořit, popálit,</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">větérek zavane</l>
     <l n="10" met="100100" rhyme="3" line_length="6">po poli, po lese,</l>
     <l n="11" met="010100" line_length="6">a pěkné stavení</l>
     <l n="12" met="100100" rhyme="3" line_length="6">do světa roznese.</l>
    </lg>
   </lg>
  </body>
