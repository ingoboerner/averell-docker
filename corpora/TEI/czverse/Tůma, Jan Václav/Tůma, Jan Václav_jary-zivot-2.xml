 <text>
  <front>
   <head>Jarý život. (2.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Cože ti růžičko</l>
     <l n="2" met="100100" rhyme="2" line_length="6">na jaře květoucí</l>
     <l n="3" met="100100" rhyme="3" line_length="6">plnolist slzička</l>
     <l n="4" met="1000" rhyme="4" line_length="4">zarosívá?</l>
     <l n="5" met="100100" rhyme="1" line_length="6">Cože tě srdéčko</l>
     <l n="6" met="010100" rhyme="2" line_length="6">ta láska horoucí,</l>
     <l n="7" met="010100" rhyme="3" line_length="6">ta láska mladičká</l>
     <l n="8" met="1000" rhyme="4" line_length="4">pobolívá?</l>
    </lg>
    <lg n="2">
     <l n="9" met="100100" rhyme="5" line_length="6">Nebolí z neštěstí,</l>
     <l n="10" met="100100" rhyme="5" line_length="6">nepláče z bolesti,</l>
     <l n="11" met="100100" rhyme="6" line_length="6">jako by slunéčka</l>
     <l n="12" met="1000" rhyme="7" line_length="4">neviděla:</l>
     <l n="13" met="100100" line_length="6">ale že touha se</l>
     <l n="14" met="100100" rhyme="6" line_length="6">mladého srdéčka</l>
     <l n="15" met="100100" line_length="6">za rána do světa</l>
     <l n="16" met="1000" rhyme="7" line_length="4">rozletěla!</l>
    </lg>
    <lg n="3">
     <l n="17" met="100100" line_length="6">Letěla rozletem</l>
     <l n="18" met="100100" line_length="6">do světa nahoru,</l>
     <l n="19" met="100100" line_length="6">srdéčko v samotě</l>
     <l n="20" met="1000" rhyme="8" line_length="4">zanechala;</l>
     <l n="21" met="100100" line_length="6">viděla slunéčko,</l>
     <l n="22" met="100100" line_length="6">záře ji vrátila,</l>
     <l n="23" met="100100" line_length="6">na rodné půdě si</l>
     <l n="24" met="1000" rhyme="8" line_length="4">zaplakala! –</l>
    </lg>
   </lg>
  </body>
