  <front>
   <head>Slzičky. (2.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Ani to slunéčko</l>
     <l n="2" met="101000" rhyme="1" line_length="6">není bez slzičky,</l>
     <l n="3" met="100100" line_length="6">loučí se na večer,</l>
     <l n="4" met="100100" rhyme="1" line_length="6">vypláče hvězdičky.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Ani to nebe to</l>
     <l n="6" met="100100" rhyme="2" line_length="6">nedělá jináče,</l>
     <l n="7" met="100100" line_length="6">často se na jaře</l>
     <l n="8" met="100100" rhyme="2" line_length="6">ze smíchu rozpláče.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">Hvězdičky útěcha,</l>
     <l n="10" met="101100" rhyme="3" line_length="6">jarní dešť rosička,</l>
     <l n="11" met="100100" line_length="6">a to je v bolesti,</l>
     <l n="12" met="100100" rhyme="3" line_length="6">v radosti – slzička.</l>
    </lg>
   </lg>
  </body>
