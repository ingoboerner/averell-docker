  <front>
   <head>IV.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" line_length="8">Mladé děti, čilá chasa,</l>
     <l n="2" met="10100" rhyme="1" line_length="5">plná života –</l>
     <l n="3" met="10011000" line_length="8">přehořkých chvil připravuje</l>
     <l n="4" met="10100" rhyme="1" line_length="5">divá holota.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10001010" line_length="8">Odvážlivě, beze strachu</l>
     <l n="6" met="10100" rhyme="2" line_length="5">hledí do očí,</l>
     <l n="7" met="10100100" line_length="8">a co tropí, když učitel</l>
     <l n="8" met="00100" rhyme="2" line_length="5">jen se otočí!</l>
    </lg>
    <lg n="3">
     <l n="9" met="10101010" line_length="8">Jindy, když jim starý kantor</l>
     <l n="10" met="10100" rhyme="3" line_length="5">záda pohladil,</l>
     <l n="11" met="10001010" line_length="8">rákoskou jim každý kousek</l>
     <l n="12" met="10100" rhyme="3" line_length="5">notně osladil;</l>
    </lg>
    <lg n="4">
     <l n="13" met="10001000" line_length="8">za to mu pak v skroušenosti</l>
     <l n="14" met="10100" rhyme="4" line_length="5">ruce zlíbali,</l>
     <l n="15" met="10101000" line_length="8">všecken rešpekt před kantorem</l>
     <l n="16" met="10100" rhyme="4" line_length="5">kluci mívali.</l>
    </lg>
    <lg n="5">
     <l n="17" met="01001010" line_length="8">Teď učitel v stálém strachu</l>
     <l n="18" met="10101" rhyme="5" line_length="5">o to musí dbáť,</l>
     <l n="19" met="10001000" line_length="8">aby se naň od mládeže</l>
     <l n="20" met="10100" rhyme="5" line_length="5">nestal atentát.</l>
    </lg>
   </lg>
  </body>
