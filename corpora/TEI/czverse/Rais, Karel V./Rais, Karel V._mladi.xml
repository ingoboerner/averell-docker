  <front>
   <head>MLÁDÍ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" rhyme="1" line_length="8">Kolem podzim. Luka holá,</l>
     <l n="2" met="1010100" rhyme="2" line_length="7">leda ocún kvete z nich,</l>
     <l n="3" met="10001010" rhyme="1" line_length="8">z boroviny havran volá,</l>
     <l n="4" met="1010101" rhyme="2" line_length="7">z hnaných mraků čiší sníh.</l>
    </lg>
    <lg n="2">
     <l n="5" met="00101000" rhyme="3" line_length="8">Jen jak západ dohořívá,</l>
     <l n="6" met="1010100" rhyme="4" line_length="7">v dáli obraz zlacený</l>
     <l n="7" met="1000100" rhyme="4" line_length="7">ostrůvek jak ztracený</l>
     <l n="8" met="10001010" rhyme="3" line_length="8">na východní stráni zbývá.</l>
    </lg>
    <lg n="3">
     <l n="9" met="00101010" rhyme="3" line_length="8">To se mládí ke mně dívá.</l>
    </lg>
   </lg>
  </body>
