 <text>
  <front>
   <head>Půlnoční.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100" line_length="3">Půlnoc je!</l>
     <l n="2" met="10010" rhyme="1" line_length="5">obzory jasné;</l>
     <l n="3" met="100" line_length="3">vzplálo v nich</l>
     <l n="4" met="10010" rhyme="1" line_length="5">souhvězdí krásné;</l>
     <l n="5" met="110" line_length="3">ó světlo,</l>
     <l n="6" met="01000" rhyme="1" line_length="5">jež neuhasne!</l>
    </lg>
    <lg n="2">
     <l n="7" met="100" line_length="3">Duše má</l>
     <l n="8" met="10010" rhyme="2" line_length="5">zpívá si v plese;</l>
     <l n="9" met="110" line_length="3">ó chvíle,</l>
     <l n="10" met="01000" rhyme="2" line_length="5">kdy nalezne se,</l>
     <l n="11" met="100" line_length="3">blahem svým</l>
     <l n="12" met="10010" rhyme="2" line_length="5">všecka se třese.</l>
    </lg>
    <lg n="3">
     <l n="13" met="101" line_length="3">Její sny</l>
     <l n="14" met="01010" rhyme="3" line_length="5">to vůně květů,</l>
     <l n="15" met="100" line_length="3">rozpuklých</l>
     <l n="16" met="10010" rhyme="3" line_length="5">do jiných světů</l>
     <l n="17" met="100" line_length="3">polibkem</l>
     <l n="18" met="10010" rhyme="3" line_length="5">tajemných Retů.</l>
    </lg>
    <lg n="4">
     <l n="19" met="100" line_length="3">V obláčku</l>
     <l n="20" met="01000" rhyme="4" line_length="5">jak z thuribula</l>
     <l n="21" met="100" line_length="3">křídla jich</l>
     <l n="22" met="10010" rhyme="4" line_length="5">vzhůru se hnula</l>
     <l n="23" met="100" line_length="3">do nebes</l>
     <l n="24" met="10000" rhyme="4" line_length="5">tabernakula.</l>
    </lg>
   </lg>
  </body>
