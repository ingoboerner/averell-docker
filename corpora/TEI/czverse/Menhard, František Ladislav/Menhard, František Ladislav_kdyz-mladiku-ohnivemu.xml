  <front>
   <head>Když mladíku ohnivému</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="01001000" line_length="8">Když mladíku ohnivému </l>
     <l n="2" met="1010100" rhyme="1" line_length="7">láska v srdci plápolá,</l>
     <l n="3" met="10100010" line_length="8">s jakou rozkoší vždy vábí</l>
     <l n="4" met="1010100" rhyme="1" line_length="7">dívku svoji do kola!</l>
    </lg>
    <lg n="2">
     <l n="5" met="10001010" line_length="8">A když pak co jeho žena</l>
     <l n="6" met="1000100" rhyme="2" line_length="7">utrápí ho na polo,</l>
     <l n="7" met="10001010" line_length="8">rozmrzen ji často v duchu</l>
     <l n="8" met="1000100" rhyme="2" line_length="7">posílá zas „na kolo“!</l>
    </lg>
   </lg>
  </body>
