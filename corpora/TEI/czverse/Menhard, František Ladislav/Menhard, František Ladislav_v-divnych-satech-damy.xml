  <front>
   <head>V divných šatech dámy</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">V divných šatech dámy </l>
     <l n="2" met="100010" rhyme="1" line_length="6">po ulicích běží,</l>
     <l n="3" met="100010" line_length="6">od mužského vskutku</l>
     <l n="4" met="100010" rhyme="1" line_length="6">rozeznat je stěží.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" line_length="6">Podivnější ještě</l>
     <l n="6" met="100010" rhyme="2" line_length="6">na plesích však nosí:</l>
     <l n="7" met="101010" line_length="6">dole fůra látky,</l>
     <l n="8" met="100010" rhyme="2" line_length="6">nahoře jsou „bosy“!</l>
    </lg>
   </lg>
  </body>
