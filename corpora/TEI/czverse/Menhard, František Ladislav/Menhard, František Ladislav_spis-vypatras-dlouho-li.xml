  <front>
   <head>Spíš vypátráš, dlouho-li</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="0100100" line_length="7">Spíš vypátráš, dlouho-li </l>
     <l n="2" met="101010" rhyme="1" line_length="6">svět náš bude státi,</l>
     <l n="3" met="1010100" line_length="7">spíše původ člověka</l>
     <l n="4" met="101000" rhyme="1" line_length="6">lze ti vypátrati.</l>
    </lg>
    <lg n="2">
     <l n="5" met="0100100" line_length="7">Spíš vypátráš, jestli je</l>
     <l n="6" met="101000" rhyme="2" line_length="6">měsíc obydlený –</l>
     <l n="7" met="1010100" line_length="7">nežli pravé vypátráš</l>
     <l n="8" met="101010" rhyme="2" line_length="6">stáří mnohé ženy!</l>
    </lg>
   </lg>
  </body>
