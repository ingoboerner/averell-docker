  <front>
   <head>Společenské. (IV.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" rhyme="1" line_length="4">Zbraň se blýská,</l>
     <l n="2" met="1010" rhyme="1" line_length="4">Vojín výská;</l>
     <l n="3" met="10101000" rhyme="2" line_length="8">Dejte zbraň mi k bojování,</l>
     <l n="4" met="10101010" rhyme="2" line_length="8">Cítím smělé krve hrání!</l>
    </lg>
    <lg n="2">
     <l n="5" met="1010" rhyme="3" line_length="4">Šavle čilá,</l>
     <l n="6" met="0010" rhyme="3" line_length="4">To má milá:</l>
     <l n="7" met="00101010" rhyme="4" line_length="8">Nuž, mi dejte šavli k boji,</l>
     <l n="8" met="10011010" rhyme="4" line_length="8">Čech jak já rád v bitvě stojí!</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010" rhyme="5" line_length="4">Rány lejme,</l>
     <l n="10" met="1000" rhyme="5" line_length="4">Zazpívejme:</l>
     <l n="11" met="00101000" rhyme="6" line_length="8">Nám jest přáno bojovati,</l>
     <l n="12" met="10101000" rhyme="6" line_length="8">Pro vlast svoji umírati!</l>
    </lg>
   </lg>
  </body>
