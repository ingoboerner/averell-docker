  <front>
   <head>Z vidin šílence. (II.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1001" line_length="4">Měsíce zář</l>
     <l n="2" met="0101000" rhyme="1" line_length="7">jak proudy poesie</l>
     <l n="3" met="110100" rhyme="2" line_length="6">v kraj, který s nocí stich'</l>
     <l n="4" met="010100" rhyme="2" line_length="6">a do par stříbrných</l>
     <l n="5" met="1001010" rhyme="1" line_length="7">se s tajným klidem lije.</l>
    </lg>
    <lg n="2">
     <l n="6" met="0101" line_length="4">Můj žhavý zrak</l>
     <l n="7" met="0101010" rhyme="3" line_length="7">tu cosi ve mhách tuší,</l>
     <l n="8" met="010100" rhyme="4" line_length="6">jak ruku tajemnou –</l>
     <l n="9" met="010101" rhyme="4" line_length="6">a náhle zřím, jak tmou</l>
     <l n="10" met="0101010" rhyme="3" line_length="7">mi drsná sáhá v duši...</l>
    </lg>
   </lg>
  </body>
