 <text>
  <front>
   <head>Padá laur s týmě...</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" rhyme="1" line_length="5">Padá laur s týmě</l>
     <l n="2" met="10010" rhyme="1" line_length="5">prodajné hymně –</l>
     <l n="3" met="10010" line_length="5">neplodno, mrtvo</l>
     <l n="4" met="10110" rhyme="1" line_length="5">zášti ztlí símě.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010" rhyme="2" line_length="5">Spravedliv písní</l>
     <l n="6" met="10010" rhyme="2" line_length="5">k nepřátel tísni</l>
     <l n="7" met="10010" line_length="5">pěvec-li není,</l>
     <l n="8" met="10010" rhyme="2" line_length="5">čelo své třísní –</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010" rhyme="3" line_length="5">Padá laur slávy</l>
     <l n="10" met="10010" rhyme="3" line_length="5">s jeho pak hlavy,</l>
     <l n="11" met="10010" line_length="5">s nesmrtnou hanbou</l>
     <l n="12" met="10100" rhyme="3" line_length="5">vchází do návy.</l>
    </lg>
    <lg n="4">
     <l n="13" met="01010" rhyme="4" line_length="5">A jeho píseň</l>
     <l n="14" met="10010" rhyme="4" line_length="5">pokryje plíseň,</l>
     <l n="15" met="10010" line_length="5">potupy věčné</l>
     <l n="16" met="10010" rhyme="4" line_length="5">nesnesná tíseň...</l>
    </lg>
    <lg n="5">
     <l n="17" met="10010" rhyme="5" line_length="5">Padá laur s týmě</l>
     <l n="18" met="10010" rhyme="5" line_length="5">prodajné hymně –</l>
     <l n="19" met="10110" line_length="5">písni má čistá,</l>
     <l n="20" met="10000" rhyme="5" line_length="5">neopusť ty mě –</l>
    </lg>
    <lg n="6">
     <l n="21" met="10000" rhyme="5" line_length="5">Neopusť ty mě</l>
     <l n="22" met="01010" rhyme="5" line_length="5">a hany símě</l>
     <l n="23" met="10010" line_length="5">v hrobu mém tichém</l>
     <l n="24" met="10000" rhyme="5" line_length="5">neprobudí mě...</l>
    </lg>
   </lg>
  </body>
