  <front>
   <head>XXXVI. KYTIČKY.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">Bude-li mě vdovec</l>
     <l n="2" met="010100" line_length="6">S tou láskou pokoušet,</l>
     <l n="3" met="110100" line_length="6">Mám pro něj kytičku,</l>
     <l n="4" met="100100" line_length="6">Může si přivonět,</l>
     <l n="5" met="10001000" line_length="8">Z bodláčí a ze žíhavky:</l>
     <l n="6" met="100100" line_length="6">Vdovečku, přivoň si,</l>
     <l n="7" met="100100" line_length="6">Na milou zpomeň si.</l>
    </lg>
    <lg n="2">
     <l n="8" met="100100" line_length="6">Bude-li mládenec</l>
     <l n="9" met="100100" line_length="6">Chtít si mě namlouvat,</l>
     <l n="10" met="110100" line_length="6">Mám pro něj kytičku,</l>
     <l n="11" met="001100" line_length="6">Tu mu chci darovat,</l>
     <l n="12" met="10000100" line_length="8">Z krafiátů a růžiček:</l>
     <l n="13" met="100010" line_length="6">Dej si ji, můj milý,</l>
     <l n="14" met="1000" line_length="4">Za klobouček.</l>
    </lg>
   </lg>
  </body>
