  <front>
   <head>XV. ODBYTÝ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010100" rhyme="1" line_length="7">Po čem víno na hody?</l>
     <l n="2" met="1000100" rhyme="1" line_length="7">Mariánko z hospody!</l>
     <l n="3" met="10001000" rhyme="2" line_length="8">Styděla se za písaře,</l>
     <l n="4" met="10001000" rhyme="2" line_length="8">Podvdala se za bednáře;</l>
     <l n="5" met="1000000" rhyme="3" line_length="7">Mariánce – la la la!</l>
     <l n="6" met="1010100" rhyme="3" line_length="7">Bednář sudy požehá.</l>
    </lg>
    <lg n="2">
     <l n="7" met="1010100" rhyme="4" line_length="7">„Po čem smola? ve fráčku</l>
     <l n="8" met="1000100" rhyme="4" line_length="7">Z kanceláře škrabáčku!</l>
     <l n="9" met="10001000" rhyme="5" line_length="8">Z takových jen ouštipečků</l>
     <l n="10" met="10001000" rhyme="5" line_length="8">Nadělej si příštipečků;</l>
     <l n="11" met="1010100" rhyme="6" line_length="7">Nech si, nech si, nech si je,</l>
     <l n="12" met="1000100" rhyme="6" line_length="7">Táta ti je přišije.“</l>
    </lg>
   </lg>
  </body>
