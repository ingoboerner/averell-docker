  <front>
   <head>XXXVIII. Jak jen milé ve ozdobách</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="00101000" rhyme="1" line_length="8">Jak jen milé ve ozdobách </l>
     <l n="2" met="1000100" rhyme="2" line_length="7">Pokáže se podletí,</l>
     <l n="3" met="10101010" rhyme="1" line_length="8">Na sta kvítků v malých dobách</l>
     <l n="4" met="1010100" rhyme="2" line_length="7">Jedna včelka obletí.</l>
    </lg>
    <lg n="2">
     <l n="5" met="00100010" rhyme="3" line_length="8">Mých však k jedinému květu</l>
     <l n="6" met="1000100" rhyme="4" line_length="7">Myšlének a toužení</l>
     <l n="7" met="10101010" rhyme="3" line_length="8">Roj se honí v bystrém letu</l>
     <l n="8" met="1001000" rhyme="4" line_length="7">Z rána až do zasnění.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10100010" rhyme="5" line_length="8">Ó, kde tolikeré sklady</l>
     <l n="10" met="10001010" rhyme="5" line_length="8">Sladkosti a jemné vnady</l>
     <l n="11" met="1000100" rhyme="6" line_length="7">Nabraly se v nevinném</l>
     <l n="12" met="1010100" rhyme="6" line_length="7">Kvítku jednom jediném!</l>
    </lg>
   </lg>
  </body>
