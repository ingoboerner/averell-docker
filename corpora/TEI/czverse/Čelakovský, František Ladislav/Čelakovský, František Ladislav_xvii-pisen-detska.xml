  <front>
   <head>XVII. PÍSEŇ DĚTSKÁ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">Zazpívej, co umíš,</l>
     <l n="2" met="10100" rhyme="1" line_length="5">Milé děvčátko!</l>
     <l n="3" met="001010" line_length="6">Můj ty světe, moje</l>
     <l n="4" met="10100" rhyme="1" line_length="5">Drahé poupátko!</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">„Vyrostá v zahrádce</l>
     <l n="6" met="101000" line_length="6">Malá malinečka,</l>
     <l n="7" met="100010" line_length="6">Slunéčko ji hřeje,</l>
     <l n="8" met="100010" rhyme="2" line_length="6">Deštíček ji chladí.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">Vyrostá, vyrostá</l>
     <l n="10" met="010100" line_length="6">I hezká Nastinka,</l>
     <l n="11" met="100010" line_length="6">Matička ji líbá,</l>
     <l n="12" met="100010" rhyme="2" line_length="6">Tatíček ji hladí.“</l>
    </lg>
    <lg n="4">
     <l n="13" met="100100" line_length="6">Malého děvčátka</l>
     <l n="14" met="10100" rhyme="3" line_length="5">Malá písnička,</l>
     <l n="15" met="101010" line_length="6">Malá, ale milá</l>
     <l n="16" met="10100" rhyme="3" line_length="5">Jako perlička.</l>
    </lg>
   </lg>
  </body>
