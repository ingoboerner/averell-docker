  <front>
   <head>XIII. PEČLIVÁ MILÁ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="001010" rhyme="1" line_length="6">„Zle je, milá, zle je,</l>
     <l n="2" met="101010" rhyme="1" line_length="6">Ostrý vítr věje,</l>
     <l n="3" met="100100" rhyme="2" line_length="6">Zavál mi cestičku,</l>
     <l n="4" met="100100" rhyme="2" line_length="6">Zabloudím v lesíčku,</l>
     <l n="5" met="101000" rhyme="1" line_length="6">Padnu do závěje.“</l>
    </lg>
    <lg n="2">
     <l n="6" met="001010" rhyme="3" line_length="6">Zle nám, milý, zle nám,</l>
     <l n="7" met="100010" rhyme="3" line_length="6">Odcházet ti nedám:</l>
     <l n="8" met="101000" rhyme="4" line_length="6">Počkej do půlnoci,</l>
     <l n="9" met="010100" rhyme="4" line_length="6">Snad bude pomoci,</l>
     <l n="10" met="001010" rhyme="3" line_length="6">Já ti posla zjednám.</l>
    </lg>
    <lg n="3">
     <l n="11" met="101010" rhyme="5" line_length="6">Vstávej, milý, vstávej,</l>
     <l n="12" met="101000" rhyme="5" line_length="6">Více neodkládej;</l>
     <l n="13" met="100100" rhyme="6" line_length="6">Poslíček přichází,</l>
     <l n="14" met="100100" rhyme="6" line_length="6">Za horou vychází,</l>
     <l n="15" met="100100" rhyme="5" line_length="6">Doma si dospávej.</l>
    </lg>
    <lg n="4">
     <l n="16" met="100100" rhyme="7" line_length="6">Měsíčku blýskavý,</l>
     <l n="17" met="000100" rhyme="7" line_length="6">Což jsi ty laskavý!</l>
     <l n="18" met="100100" rhyme="8" line_length="6">Provázej milého,</l>
     <l n="19" met="100100" rhyme="8" line_length="6">Do dvoru bílého</l>
     <l n="20" met="100100" rhyme="7" line_length="6">Doveď ho ve zdraví.</l>
    </lg>
   </lg>
  </body>
