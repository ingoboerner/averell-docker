  <front>
   <head>XVII. SLZY A VZDYCHÁNÍ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010100" line_length="7">Kdyby všecky slzičky</l>
     <l n="2" met="100010" rhyme="1" line_length="6">Pohromadě byly,</l>
     <l n="3" met="0010100" line_length="7">Co jsou, milý, pro tebe</l>
     <l n="4" met="101010" rhyme="1" line_length="6">Oči moje lily:</l>
     <l n="5" met="10001010" line_length="8">Věru by se louky naše</l>
     <l n="6" met="101000" rhyme="1" line_length="6">Všecky zatopily.</l>
    </lg>
    <lg n="2">
     <l n="7" met="1100100" line_length="7">Ach, kdyby to vzdychání</l>
     <l n="8" met="100010" rhyme="2" line_length="6">Pohromadě bylo,</l>
     <l n="9" met="0010100" line_length="7">Co mé srdce pro tebe,</l>
     <l n="10" met="101000" rhyme="2" line_length="6">Milá, vypustilo:</l>
     <l n="11" met="10100010" line_length="8">Věru na věži by naší</l>
     <l n="12" met="101000" rhyme="2" line_length="6">Zvony rozzvonilo.</l>
    </lg>
   </lg>
  </body>
