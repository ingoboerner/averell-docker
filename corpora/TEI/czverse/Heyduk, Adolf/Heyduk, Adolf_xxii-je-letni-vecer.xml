  <front>
   <head>XXII. Je letní večer,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="01010" line_length="5">Je letní večer, </l>
     <l n="2" met="11010" line_length="5">jdu ztichlým parkem,</l>
     <l n="3" met="10010" line_length="5">poslouchám nářek</l>
     <l n="4" met="1000010" line_length="7">osamělého drozda</l>
     <l n="5" met="100010" line_length="6">z odlehlého boučí,</l>
    </lg>
    <lg n="2">
     <l n="6" met="0101010" line_length="7">jenž slunci s bohem dává</l>
     <l n="7" met="010100010" line_length="9">a se svou radostí se loučí.</l>
     <l n="8" met="10010" line_length="5">Fontána podál</l>
     <l n="9" met="10010" line_length="5">šumivě kvílí,</l>
     <l n="10" met="10" line_length="2">pláče,</l>
     <l n="11" met="0101010" line_length="7">že také její radost,</l>
     <l n="12" met="10" line_length="2">slunce,</l>
     <l n="13" met="010010010" line_length="9">jež měnilo krůpěje její</l>
     <l n="14" met="100" line_length="3">v rubíny,</l>
     <l n="15" met="0100010" line_length="7">již k obzoru se chýlí,</l>
     <l n="16" met="0100010" line_length="7">že osamotní zcela,</l>
     <l n="17" met="010001010" line_length="9">že neuslyší ani drozda</l>
     <l n="18" met="0100010010" line_length="10">a neuvidí paprsků záře,</l>
     <l n="19" met="01010" line_length="5">že ve tmě bude</l>
     <l n="20" met="100" line_length="3">vzdychat jen,</l>
     <l n="21" met="0100" line_length="4">jak jeptiška</l>
     <l n="22" met="1010" line_length="4">v temné kobce.</l>
    </lg>
   </lg>
  </body>
