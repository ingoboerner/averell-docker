  <front>
   <head>OSTÝCHAVÝ.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101011" line_length="6">Neřek’, že mě rád má</l>
     <l n="2" met="100010" rhyme="1" line_length="6">a že se mně koří,</l>
     <l n="3" met="100010" line_length="6">ale když mě potká,</l>
     <l n="4" met="100010" rhyme="1" line_length="6">tváře mu jen hoří.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" line_length="6">Tváře mu jen hoří,</l>
     <l n="6" met="100010" rhyme="2" line_length="6">oči mu jen svítí,</l>
     <l n="7" met="101011" line_length="6">neřek’, že mě rád má,</l>
     <l n="8" met="101010" rhyme="2" line_length="6">ale chce mě míti.</l>
    </lg>
    <lg n="3">
     <l n="9" met="101011" line_length="6">Neřek’, že mě rád má</l>
     <l n="10" met="101010" rhyme="3" line_length="6">a že po mně touží,</l>
     <l n="11" met="101010" line_length="6">a přec kolem našich</l>
     <l n="12" met="101010" rhyme="3" line_length="6">jako stín se plouží.</l>
    </lg>
    <lg n="4">
     <l n="13" met="101000" line_length="6">Přes plot do zahrádky</l>
     <l n="14" met="101010" rhyme="4" line_length="6">jenom hlavu nahne,</l>
     <l n="15" met="001010" line_length="6">čím víc zrak mu vlhne,</l>
     <l n="16" met="001010" rhyme="4" line_length="6">tím víc srdce prahne.</l>
    </lg>
   </lg>
  </body>
