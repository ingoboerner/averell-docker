 <text>
  <front>
   <head>Vzdechnutí.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1100" rhyme="1" line_length="4">Má zpěvenka</l>
     <l n="2" met="1010" rhyme="1" line_length="4">jako lenka</l>
     <l n="3" met="100" rhyme="2" line_length="3">zasvitla,</l>
     <l n="4" met="01001000" rhyme="1" line_length="8">když z růžiček srdélenka</l>
     <l n="5" met="100" rhyme="2" line_length="3">ulítla.</l>
    </lg>
    <lg n="2">
     <l n="6" met="0010" rhyme="3" line_length="4">Kam se děla?</l>
     <l n="7" met="1000" rhyme="3" line_length="4">Uletěla</l>
     <l n="8" met="100" rhyme="4" line_length="3">naposled,</l>
     <l n="9" met="10101010" rhyme="3" line_length="8">aby v hnízdo, které měla</l>
     <l n="10" met="100" rhyme="4" line_length="3">žal si sed’?</l>
    </lg>
    <lg n="3">
     <l n="11" met="1000" rhyme="5" line_length="4">Skrývala se</l>
     <l n="12" met="1010" rhyme="5" line_length="4">píseň v kráse</l>
     <l n="13" met="100" rhyme="6" line_length="3">stolisté –</l>
     <l n="14" met="10101010" rhyme="5" line_length="8">zpěvné keře, žalem zase</l>
     <l n="15" met="100" rhyme="6" line_length="3">holy jste!</l>
    </lg>
    <lg n="4">
     <l n="16" met="1100" rhyme="7" line_length="4">Slyš, žalosti,</l>
     <l n="17" met="0010" rhyme="7" line_length="4">kdy as dosti</l>
     <l n="18" met="100" rhyme="8" line_length="3">bude již?</l>
     <l n="19" met="01001000" rhyme="7" line_length="8">kdy z uvadlých letorostí</l>
     <l n="20" met="100" rhyme="8" line_length="3">odletíš?</l>
    </lg>
   </lg>
  </body>
