  <front>
   <head>Stezka.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001010" rhyme="1" line_length="8">Napadaly perly v trávu</l>
     <l n="2" met="100010" rhyme="2" line_length="6">s nebeského čela,</l>
     <l n="3" met="10101000" rhyme="1" line_length="8">luhem stezka na Šumavu</l>
     <l n="4" met="101000" rhyme="2" line_length="6">kvítím vypučela.</l>
    </lg>
    <lg n="2">
     <l n="5" met="00101000" rhyme="3" line_length="8">Tam mě krása do úkoje</l>
     <l n="6" met="101010" rhyme="4" line_length="6">slíbá slunným retem</l>
     <l n="7" met="10101010" rhyme="3" line_length="8">a to staré srdce moje</l>
     <l n="8" met="100010" rhyme="4" line_length="6">obalí se květem.</l>
    </lg>
   </lg>
  </body>
