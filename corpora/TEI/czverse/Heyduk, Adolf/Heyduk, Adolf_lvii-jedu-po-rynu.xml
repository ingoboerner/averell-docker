  <front>
   <head>LVII. Jedu po Rýnu.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10100" line_length="5">Jedu po Rýnu. </l>
     <l n="2" met="010" line_length="3">Jsem hoštěn.</l>
     <l n="3" met="0100" line_length="4">Jím ústřice,</l>
     <l n="4" met="101" line_length="3">piji sekt.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" line_length="6">Na palubě zpívá</l>
     <l n="6" met="10100" line_length="5">mladý učitel</l>
     <l n="7" met="100100" line_length="6">Heineho Lorelei.</l>
    </lg>
    <lg n="3">
     <l n="8" met="010010" line_length="6">Je veselo všecko,</l>
     <l n="9" met="0100" line_length="4">jsem rozjařen,</l>
     <l n="10" met="10100010" line_length="8">hledím do zelené vody,</l>
     <l n="11" met="10010" line_length="5">klímám a dumám.</l>
    </lg>
    <lg n="4">
     <l n="12" met="1010" line_length="4">Zátka bouchla,</l>
     <l n="13" met="100001" line_length="6">probudila mne z dum.</l>
    </lg>
    <lg n="5">
     <l n="14" met="1000100" line_length="7">Nevýslovná tesknota</l>
     <l n="15" met="0100" line_length="4">mne objala.</l>
     <l n="16" met="00010" line_length="5">Kéž byl bych doma</l>
     <l n="17" met="100100" line_length="6">v mlýně své mateře,</l>
     <l n="18" met="100010" line_length="6">pod mohutnou lipou,</l>
     <l n="19" met="100" line_length="3">vedle ní</l>
     <l n="20" met="0110" line_length="4">a pil nektar</l>
     <l n="21" met="10010" line_length="5">mateřské lásky! –</l>
    </lg>
   </lg>
  </body>
