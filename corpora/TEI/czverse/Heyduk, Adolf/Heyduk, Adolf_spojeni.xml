  <front>
   <head>Spojení.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" line_length="8">Jako hvězda v mírných vlnách</l>
     <l n="2" met="10001000" rhyme="1" line_length="8">obrazí se za večera</l>
     <l n="3" met="10101010" line_length="8">a svým tichým, milým světlem</l>
     <l n="4" met="10001010" rhyme="1" line_length="8">sesýlá jim skvostů šera:</l>
    </lg>
    <lg n="2">
     <l n="5" met="00101010" line_length="8">tak tvůj obraz v toužném srdci</l>
     <l n="6" met="10101010" rhyme="2" line_length="8">mocným čárným leskem svítí,</l>
     <l n="7" met="10101010" line_length="8">v každé kapce bouřné krve</l>
     <l n="8" met="10101000" rhyme="2" line_length="8">díl je tvého živobytí.</l>
    </lg>
   </lg>
  </body>
