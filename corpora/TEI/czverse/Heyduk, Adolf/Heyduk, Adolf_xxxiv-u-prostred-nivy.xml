  <front>
   <head>XXXIV. U prostřed nivy.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100" line_length="3">Na břízce,</l>
     <l n="2" met="010100" line_length="6">jež právě spustila</l>
     <l n="3" met="1010" line_length="4">zlaté vlasy,</l>
     <l n="4" met="101010" line_length="6">sedí žlutý ptáček.</l>
     <l n="5" met="10" line_length="2">Podál</l>
     <l n="6" met="1000100" line_length="7">při omšeném skalisku</l>
     <l n="7" met="10" line_length="2">sedí</l>
     <l n="8" met="100010" line_length="6">dřevařovo dítě,</l>
     <l n="9" met="1100010" line_length="7">má rozcuchané vlasy.</l>
     <l n="10" met="1010" line_length="4">Pták i dítě</l>
     <l n="11" met="100" line_length="3">zpívají</l>
     <l n="12" met="10100" line_length="5">drobnou písničku,</l>
     <l n="13" met="0101010" line_length="7">z jich hrdel zpívá jaro.</l>
    </lg>
   </lg>
  </body>
