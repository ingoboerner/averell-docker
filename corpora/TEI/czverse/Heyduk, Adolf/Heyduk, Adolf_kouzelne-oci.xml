  <front>
   <head>KOUZELNÉ OČI.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010100" line_length="7">Táhnou husy divoké</l>
     <l n="2" met="101000" rhyme="1" line_length="6">k jihu od severu,</l>
     <l n="3" met="1010100" line_length="7">rád bych s nimi také táh’,</l>
     <l n="4" met="101010" rhyme="1" line_length="6">rád bych s nimi věru,</l>
     <l n="5" met="1010100" line_length="7">rád bych s nimi napořád,</l>
     <l n="6" met="100010" rhyme="2" line_length="6">kamkoli se stočí,</l>
     <l n="7" met="10001010" rhyme="3" line_length="8">do neznámých končin v dáli,</l>
     <l n="8" met="10001000" rhyme="3" line_length="8">ale mě tu upoutaly</l>
     <l n="9" met="1010" rhyme="2" line_length="4">černé oči.</l>
    </lg>
    <lg n="2">
     <l n="10" met="1000100" line_length="7">Zčarovaly duši mou,</l>
     <l n="11" met="101000" rhyme="3" line_length="6">srdce zčarovaly,</l>
     <l n="12" met="1000100" line_length="7">do okovu nohy mé</l>
     <l n="13" met="101000" rhyme="3" line_length="6">tajně ukovaly,</l>
     <l n="14" met="1000101" line_length="7">nemohu se s místa hnout,</l>
     <l n="15" met="001010" rhyme="2" line_length="6">jen kam ona kročí,</l>
     <l n="16" met="10001010" rhyme="4" line_length="8">kouzelnou mě táhnou mocí</l>
     <l n="17" met="10101010" rhyme="4" line_length="8">k její chýši ve dne v noci</l>
     <l n="18" met="1010" rhyme="2" line_length="4">černé oči.</l>
    </lg>
   </lg>
  </body>
