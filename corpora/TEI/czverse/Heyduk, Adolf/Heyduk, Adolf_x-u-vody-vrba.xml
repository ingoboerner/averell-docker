  <front>
   <head>X. U vody vrba</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" line_length="5">U vody vrba </l>
     <l n="2" met="10010010" line_length="8">spustila větve až k zemi.</l>
     <l n="3" met="101" line_length="3">Malý hoch</l>
     <l n="4" met="100100" line_length="6">robí z nich píšťalku,</l>
     <l n="5" met="10" line_length="2">píská.</l>
    </lg>
    <lg n="2">
     <l n="6" met="10010" line_length="5">U kmenu dole,</l>
     <l n="7" met="001010" line_length="6">kde se voda pění,</l>
     <l n="8" met="101010" line_length="6">zvedá hlavu vodník,</l>
     <l n="9" met="1010" line_length="4">píská také,</l>
     <l n="10" met="1000100" line_length="7">přizvukuje hochovi.</l>
    </lg>
    <lg n="3">
     <l n="11" met="100100" line_length="6">Oba se radují</l>
     <l n="12" met="10010" line_length="5">z nového žití,</l>
     <l n="13" met="01000100" line_length="8">kdy oživují pohádky.</l>
    </lg>
   </lg>
  </body>
