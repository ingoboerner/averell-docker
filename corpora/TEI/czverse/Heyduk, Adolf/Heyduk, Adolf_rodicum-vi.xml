  <front>
   <head>Rodičům. (VI.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="01010100" line_length="8">Ba velký, velký boháč jsem,</l>
     <l n="2" met="1100110" rhyme="1" line_length="7">mám stříbro své, mám zlato,</l>
     <l n="3" met="01000101" line_length="8">a bojím se, že v jeden den</l>
     <l n="4" met="0100010" rhyme="1" line_length="7">mně obé můž’ být vzato.</l>
    </lg>
    <lg n="2">
     <l n="5" met="01010100" line_length="8">A denně stříbro počítám</l>
     <l n="6" met="0101010" rhyme="2" line_length="7">a zlato srdcem kryju,</l>
     <l n="7" met="10010100" line_length="8">a to je, co mne trápí tak</l>
     <l n="8" met="1001010" rhyme="2" line_length="7">a proč že stále nyju.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10010100" line_length="8">Pod lipou v tiché chaloupce</l>
     <l n="10" met="0101010" rhyme="3" line_length="7">jsou skryty moje statky,</l>
     <l n="11" met="10010100" line_length="8">stříbro – toť otce šediny,</l>
     <l n="12" met="0101010" rhyme="3" line_length="7">a zlato – srdce matky.</l>
    </lg>
   </lg>
  </body>
