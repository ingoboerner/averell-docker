  <front>
   <head>Motýl.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010100010" rhyme="1" line_length="11">Maličký motýl nad spoustami moře</l>
     <l n="2" met="10010100" rhyme="2" line_length="8">v záhubu z květů zanesen</l>
     <l n="3" met="01010100010" rhyme="1" line_length="11">jak lidské štěstí do přívalu hoře,</l>
     <l n="4" met="01010101" rhyme="2" line_length="8">jak v ruchu žití písně sen.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010101000" rhyme="3" line_length="11">Maličký motýl moře nad spoustami</l>
     <l n="6" met="01010101" rhyme="4" line_length="8">jak v bouři ryčné lidský vzdech;</l>
     <l n="7" met="10010100010" rhyme="3" line_length="11">nejsme-liž lidé motýlem tím sami</l>
     <l n="8" met="10010100" rhyme="4" line_length="8">v prchavých časů aeonech?</l>
    </lg>
   </lg>
  </body>
