  <front>
   <head>XXIII. Zima černé lože</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Zima černé lože </l>
     <l n="2" met="101000" rhyme="1" line_length="6">bíle přiodívá,</l>
     <l n="3" met="101010" line_length="6">bouře, věrná chůva,</l>
     <l n="4" met="100010" rhyme="1" line_length="6">kolébavku zpívá.</l>
    </lg>
    <lg n="2">
     <l n="5" met="110010" line_length="6">Hoj, v takovém loži</l>
     <l n="6" met="101010" rhyme="2" line_length="6">mnohý cigán spával,</l>
     <l n="7" met="001010" line_length="6">když mu bratr hudbou</l>
     <l n="8" met="100100" rhyme="2" line_length="6">na věčnosť ustlával.</l>
    </lg>
   </lg>
  </body>
