 <text>
  <front>
   <head>Sluníčko si poskočilo...</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001000" line_length="8">Sluníčko si poskočilo,</l>
     <l n="2" met="10001010" rhyme="1" line_length="8">dozrávají zlaté klasy,</l>
     <l n="3" met="10101000" line_length="8">hnízdo malých křepeliček</l>
     <l n="4" met="101000" rhyme="1" line_length="6">křídla probírá si.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101000" line_length="8">Písně moje, křepelice,</l>
     <l n="6" met="10101010" rhyme="2" line_length="8">stejně pěkně sobě veďte,</l>
     <l n="7" met="10101010" line_length="8">máte také hebké peří,</l>
     <l n="8" met="100010" rhyme="2" line_length="6">s Pánembohem leťte!</l>
    </lg>
   </lg>
  </body>
 </text>
