  <front>
   <head>XVI. Na továrně</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000" line_length="4">Na továrně </l>
     <l n="2" met="101" line_length="3">bije šest,</l>
     <l n="3" met="10100" line_length="5">práce ustala;</l>
     <l n="4" met="1101" line_length="4">proud mladých žen</l>
     <l n="5" met="01010" line_length="5">i mladých děvčat</l>
     <l n="6" met="10010010" line_length="8">vytéká velkými vraty.</l>
    </lg>
    <lg n="2">
     <l n="7" met="110101" line_length="6">Jdou ženy mimo kříž,</l>
     <l n="8" met="10010010" line_length="8">sklíčené starostmi žití</l>
     <l n="9" met="10010" line_length="5">šoulavým krokem,</l>
     <l n="10" met="10110010" line_length="8">čile jdou děvčata mladá,</l>
     <l n="11" met="11010" line_length="5">jdou jako květy</l>
     <l n="12" met="10010" line_length="5">vadnoucí mrazem;</l>
     <l n="13" met="010" line_length="3">jsou bledé,</l>
     <l n="14" met="10010" line_length="5">vyhaslých očí,</l>
     <l n="15" met="10010010" line_length="8">v hovoru kašel je ruší.</l>
    </lg>
    <lg n="3">
     <l n="16" met="10010" line_length="5">Staví se všecky,</l>
     <l n="17" met="100" line_length="3">modlí se:</l>
     <l n="18" met="10010" line_length="5">„Ježíši, Pane,</l>
     <l n="19" met="10010" line_length="5">smiluj se, pomoz,</l>
     <l n="20" met="10010" line_length="5">bída a nemoc</l>
     <l n="21" met="10010" line_length="5">prosí tě, Kriste,</l>
     <l n="22" met="10" line_length="2">pomoz!</l>
     <l n="23" met="10010" line_length="5">Člověka synu!</l>
     <l n="24" met="01010" line_length="5">Jsme také lidé,</l>
     <l n="25" met="10" line_length="2">pomoz!</l>
     <l n="26" met="10010" line_length="5">Neseme kříže</l>
     <l n="27" met="10010" line_length="5">údolím žití,</l>
     <l n="28" met="10010" line_length="5">na horu smrti,</l>
     <l n="29" met="100" line_length="3">jako tys</l>
     <l n="30" met="100" line_length="3">nesl jej</l>
     <l n="31" met="100" line_length="3">z Hidronu</l>
     <l n="32" met="1000" line_length="4">na Golgotu!</l>
     <l n="33" met="10" line_length="2">Pomoz!</l>
     <l n="34" met="10" line_length="2">Pomoz!</l>
     <l n="35" met="10010" line_length="5">Němý je Kristus,</l>
     <l n="36" met="10100010" line_length="8">němy odcházejí ženy,</l>
     <l n="37" met="11001" line_length="5">noc valí se s hor!</l>
    </lg>
   </lg>
  </body>
