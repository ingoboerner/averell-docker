  <front>
   <head>LXXXIV. Jarní noc</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101" line_length="3">Jarní noc </l>
     <l n="2" met="10010010" line_length="8">na bílých měsíce vlnách</l>
     <l n="3" met="10010" line_length="5">snáší se k zemi,</l>
     <l n="4" met="10" line_length="2">z parku</l>
     <l n="5" met="10010" line_length="5">bolestně zpívá</l>
     <l n="6" met="10010010" line_length="8">slavík svou rozkošnou píseň.</l>
    </lg>
    <lg n="2">
     <l n="7" met="0101000" line_length="7">Ta píseň volá mne ven.</l>
     <l n="8" met="1001010" line_length="7">Po sadě bloudím v dumách,</l>
     <l n="9" met="10010010" line_length="8">opojen ptačí jsem písní,</l>
     <l n="10" met="10010010" line_length="8">duše má plna je touhy</l>
     <l n="11" met="10010010" line_length="8">po písni jako je ona,</l>
     <l n="12" met="01110010" line_length="8">již pták pěl v jasné té noci.</l>
    </lg>
    <lg n="3">
     <l n="13" met="10" line_length="2">Marně,</l>
     <l n="14" met="100" line_length="3">vracím se,</l>
     <l n="15" met="100" line_length="3">usnul jsem</l>
     <l n="16" met="10010" line_length="5">zanesen duchem,</l>
     <l n="17" met="1001001" line_length="7">v neznámý písní těch rej,</l>
     <l n="18" met="1001010" line_length="7">k zdroji, z nějž slavík pil kdys,</l>
     <l n="19" met="00100" line_length="5">vše jsem zapomněl,</l>
     <l n="20" met="100100" line_length="6">a když jsem procitl,</l>
     <l n="21" met="001" line_length="3">byl jsem stár,</l>
     <l n="22" met="1001" line_length="4">z pohádky mnich.</l>
    </lg>
   </lg>
  </body>
