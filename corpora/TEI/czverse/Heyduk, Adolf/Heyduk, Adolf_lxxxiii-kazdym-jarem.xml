  <front>
   <head>LXXXIII. Každým jarem</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010" line_length="4">Každým jarem </l>
     <l n="2" met="10" line_length="2">cítím</l>
     <l n="3" met="10110" line_length="5">větší chlad v duši.</l>
    </lg>
    <lg n="2">
     <l n="4" met="10" line_length="2">Květy</l>
     <l n="5" met="1010" line_length="4">sotva vzešlé,</l>
     <l n="6" met="10" line_length="2">vadnou.</l>
    </lg>
    <lg n="3">
     <l n="7" met="101010" line_length="6">V koutku mého srdce</l>
     <l n="8" met="1001" line_length="4">zelený hrob,</l>
     <l n="9" met="10010" line_length="5">podzimní vítr</l>
     <l n="10" met="1010" line_length="4">šumí na něm</l>
     <l n="11" met="10" line_length="2">travou.</l>
    </lg>
   </lg>
  </body>
