  <front>
   <head>VIII. Hájem se prochází</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Hájem se prochází </l>
     <l n="2" met="10" line_length="2">slunce,</l>
     <l n="3" met="11010" line_length="5">má zlatou řízu,</l>
     <l n="4" met="1001010" line_length="7">zelené velké oči</l>
     <l n="5" met="100010" line_length="6">vesele se smějí;</l>
     <l n="6" met="1010" line_length="4">kolem stromů</l>
     <l n="7" met="1001010" line_length="7">zlaté se mušky točí,</l>
     <l n="8" met="10010" line_length="5">na vršku stromu</l>
     <l n="9" met="101" line_length="3">zpívá pták.</l>
    </lg>
    <lg n="2">
     <l n="10" met="100010" line_length="6">Na vysoké leše</l>
     <l n="11" met="1010" line_length="4">sedí motýl,</l>
     <l n="12" met="010100" line_length="6">je všecek unaven,</l>
     <l n="13" met="1010" line_length="4">nehne křídly.</l>
     <l n="14" met="101010" line_length="6">Jeho černé oči</l>
     <l n="15" met="10" line_length="2">svítí;</l>
     <l n="16" met="10100" line_length="5">dlouhým sosákem</l>
     <l n="17" met="101" line_length="3">ssaje med</l>
     <l n="18" met="10010" line_length="5">z kalichu květů.</l>
    </lg>
   </lg>
  </body>
