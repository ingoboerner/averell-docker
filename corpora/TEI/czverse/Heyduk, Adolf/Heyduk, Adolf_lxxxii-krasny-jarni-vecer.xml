  <front>
   <head>LXXXII. Krásný jarní večer.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Krásný jarní večer. </l>
     <l n="2" met="1010100" line_length="7">Nebe jako z úbělu,</l>
     <l n="3" met="01000" line_length="5">jen na západě</l>
     <l n="4" met="10100100" line_length="8">stojí růžové červánky.</l>
     <l n="5" met="10010" line_length="5">Pohlížím na ně.</l>
    </lg>
    <lg n="2">
     <l n="6" met="100" line_length="3">Nad nimi</l>
     <l n="7" met="100010" line_length="6">v blankytové říze</l>
     <l n="8" met="10100" line_length="5">sedí Liduška,</l>
     <l n="9" met="010100" line_length="6">svou milou panenku</l>
     <l n="10" met="110" line_length="3">má v klíně,</l>
     <l n="11" met="1000" line_length="4">usmívá se</l>
     <l n="12" met="0100" line_length="4">a diví se,</l>
     <l n="13" met="010" line_length="3">že pláču,</l>
     <l n="14" met="0100100" line_length="7">když ona se raduje</l>
     <l n="15" met="1010" line_length="4">a je šťastna.</l>
    </lg>
   </lg>
  </body>
