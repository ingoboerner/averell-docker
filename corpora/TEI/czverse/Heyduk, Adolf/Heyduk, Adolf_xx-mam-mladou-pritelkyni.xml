  <front>
   <head>XX. Mám mladou přítelkyni,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1101000" line_length="7">Mám mladou přítelkyni, </l>
     <l n="2" met="100" line_length="3">dvouletou,</l>
     <l n="3" met="1010010" line_length="7">něžné, miloučké dítě</l>
     <l n="4" met="10010" line_length="5">bleďoučkých tváří.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1000" line_length="4">Potkám-li ji,</l>
     <l n="6" met="10010" line_length="5">dávám jí bonbon,</l>
     <l n="7" met="100" line_length="3">směje se,</l>
     <l n="8" met="010" line_length="3">je ráda.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010" line_length="4">Na svůj svátek</l>
     <l n="10" met="100100" line_length="6">dostala od matky</l>
     <l n="11" met="10100" line_length="5">plnou krabici.</l>
     <l n="12" met="101100" line_length="6">Dala dva největší</l>
     <l n="13" met="1000" line_length="4">do kornoutu,</l>
     <l n="14" met="100001000" line_length="9">zabalila je opatrně</l>
     <l n="15" met="100010" line_length="6">malounkými prsty.</l>
     <l n="16" met="10001000" line_length="8">Dala mi je při potkání.</l>
    </lg>
    <lg n="4">
     <l n="17" met="1000010" line_length="7">Neotevřel jsem kornout,</l>
     <l n="18" met="1000" line_length="4">pomačkal bych</l>
     <l n="19" met="100010" line_length="6">nemotorně rukou,</l>
     <l n="20" met="0100" line_length="4">co uzavřel</l>
     <l n="21" met="1000" line_length="4">andělíček.</l>
    </lg>
   </lg>
  </body>
