  <front>
   <head>VIII. Pomocnice naše.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Panenko Maria,</l>
     <l n="2" met="100100" rhyme="1" line_length="6">matičko nebeská,</l>
     <l n="3" met="100100" line_length="6">o pomoc prosí Tě</l>
     <l n="4" met="100100" rhyme="1" line_length="6">osada Ořešská.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Za otce, za syny,</l>
     <l n="6" met="100100" rhyme="2" line_length="6">za bratry prosíme,</l>
     <l n="7" met="010100" line_length="6">co o ně v srdci svém</l>
     <l n="8" met="100100" rhyme="2" line_length="6">starosti nosíme.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100101" line_length="6">Plno těch našich hlav</l>
     <l n="10" met="100100" rhyme="3" line_length="6">přemilých, předrahých,</l>
     <l n="11" met="100100" line_length="6">odešlo do války,</l>
     <l n="12" met="100100" rhyme="3" line_length="6">do bojů krvavých.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100100" line_length="6">Panenko Maria!</l>
     <l n="14" met="100100" rhyme="4" line_length="6">V hodinu každičkou</l>
     <l n="15" met="100100" line_length="6">budiž jim sama tam</l>
     <l n="16" met="100100" rhyme="4" line_length="6">laskavou matičkou.</l>
    </lg>
    <lg n="5">
     <l n="17" met="100100" line_length="6">Všecky je potěšuj,</l>
     <l n="18" met="100101" rhyme="5" line_length="6">všecky je v boji braň,</l>
     <l n="19" met="100100" line_length="6">všecky je ochraňuj</l>
     <l n="20" met="100101" rhyme="5" line_length="6">od smrti, od zlých ran.</l>
    </lg>
    <lg n="6">
     <l n="21" met="100100" line_length="6">Přiveď je brzičko</l>
     <l n="22" met="100101" rhyme="6" line_length="6">beze všech krutých běd</l>
     <l n="23" met="100100" line_length="6">z daleké ciziny,</l>
     <l n="24" met="1001000" rhyme="6" line_length="7">přiveď je ve zdraví zpět.</l>
    </lg>
    <lg n="7">
     <l n="25" met="100100" line_length="6">Panenko Maria,</l>
     <l n="26" met="100100" rhyme="7" line_length="6">matičko nebeská,</l>
     <l n="27" met="100100" line_length="6">za to tě prosí dnes</l>
     <l n="28" met="100100" rhyme="7" line_length="6">osada Ořešská.</l>
    </lg>
   </lg>
  </body>
