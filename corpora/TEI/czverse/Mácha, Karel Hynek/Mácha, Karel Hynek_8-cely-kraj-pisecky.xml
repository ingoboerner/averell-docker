  <front>
   <head>8. Celý kraj písecký</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101100" line_length="6">Celý kraj písecký </l>
     <l n="2" met="101010" rhyme="1" line_length="6">Holé trní rodí,</l>
     <l n="3" met="010100" line_length="6">Že moje milenka</l>
     <l n="4" met="100010" rhyme="1" line_length="6">S jinými se vodí.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101010" line_length="6">Měj se tady dobře,</l>
     <l n="6" met="010100" rhyme="2" line_length="6">Ty vranný koníku,</l>
     <l n="7" met="101000" line_length="6">I vy sokolové,</l>
     <l n="8" met="101010" rhyme="2" line_length="6">I ty věrný psíku.</l>
    </lg>
    <lg n="3">
     <l n="9" met="101000" line_length="6">Oba sokolové</l>
     <l n="10" met="100100" rhyme="3" line_length="6">Od rána do rána</l>
     <l n="11" met="100100" line_length="6">Svobodně lítejte</l>
     <l n="12" met="101010" rhyme="3" line_length="6">Prostí svého pána.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100100" line_length="6">Do lesů zaběhni</l>
     <l n="14" met="010100" rhyme="2" line_length="6">Můj vranný koníku,</l>
     <l n="15" met="001010" line_length="6">Ty však nyní hledej</l>
     <l n="16" met="101010" rhyme="2" line_length="6">Po vzdy věrný psíku</l>
    </lg>
    <lg n="5">
     <l n="17" met="101000" line_length="6">Z rána do večera,</l>
     <l n="18" met="100100" rhyme="4" line_length="6">Večera siného,</l>
     <l n="19" met="100100" line_length="6">Od dvoru ke dvoru</l>
     <l n="20" met="100100" rhyme="4" line_length="6">Pána si jiného;</l>
    </lg>
    <lg n="6">
     <l n="21" met="010100" line_length="6">Já zajdu daleko</l>
     <l n="22" met="100010" rhyme="5" line_length="6">Do šírého světa,</l>
     <l n="23" met="100010" line_length="6">Nevrátím se nazpět</l>
     <l n="24" met="100110" rhyme="5" line_length="6">Po celá tři léta,</l>
    </lg>
    <lg n="7">
     <l n="25" met="100110" line_length="6">Po celá tři léta,</l>
     <l n="26" met="001000" rhyme="6" line_length="6">Ba v mém živobýtí</l>
     <l n="27" met="100100" line_length="6">Nechci já krajinu</l>
     <l n="28" met="100100" rhyme="6" line_length="6">Tuto víc uzříti.“</l>
    </lg>
    <lg n="8">
     <l n="29" met="100010" line_length="6">Zaslechla to děva,</l>
     <l n="30" met="100010" rhyme="7" line_length="6">Zaplakala tůze,</l>
     <l n="31" met="100010" line_length="6">Ohlédl se jinoch,</l>
     <l n="32" met="100010" rhyme="7" line_length="6">Nezpomněl té chůze.</l>
    </lg>
   </lg>
  </body>
