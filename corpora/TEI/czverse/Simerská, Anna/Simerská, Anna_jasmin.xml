  <front>
   <head>Jasmín.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001010" line_length="8">U altánu bílý jasmín</l>
     <l n="2" met="10001010" rhyme="1" line_length="8">opojivou vůni dýše,</l>
     <l n="3" met="10001010" line_length="8">zkolébává sladkým kouzlem</l>
     <l n="4" met="10101010" rhyme="1" line_length="8">mladou hlavu do snů říše.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10011010" line_length="8">Opojné sny hlavou letí,</l>
     <l n="6" met="10101010" rhyme="2" line_length="8">bájné květy v srdci hoří,</l>
     <l n="7" met="10101000" line_length="8">v mladé hrudi čarostkvělou</l>
     <l n="8" met="10100010" rhyme="2" line_length="8">říši ideálů tvoří.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10101010" line_length="8">Svadnou květy, prchne vůně,</l>
     <l n="10" met="10010010" rhyme="3" line_length="8">opojné sny v dál se ztratí,</l>
     <l n="11" met="10101010" line_length="8">zbude jenom touha v duši,</l>
     <l n="12" met="10001010" rhyme="3" line_length="8">vzpomínkou jež žití zlatí.</l>
    </lg>
   </lg>
  </body>
