   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" rhyme="1" line_length="8">Jarem mladým skřivan pěje,</l>
     <l n="2" met="1010100" rhyme="2" line_length="7">Pěje písně veselé,</l>
     <l n="3" met="10001000" line_length="8">Lukami se rozléhají</l>
     <l n="4" met="1010100" rhyme="2" line_length="7">Zvuky jeho umělé.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101010" line_length="8">Zchladlou září, zvadlým květem</l>
     <l n="6" met="1001001" rhyme="3" line_length="7">Umlkne skřivánků hlas;</l>
     <l n="7" met="00101010" rhyme="1" line_length="8">Kdy však opět slunko hřeje,</l>
     <l n="8" met="1010100" rhyme="3" line_length="7">Ptáče v poli pěje zas.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10101010" line_length="8">Doba jarní, doba lásky,</l>
     <l n="10" met="1010100" rhyme="4" line_length="7">Srdce k zpěvu dojímá;</l>
     <l n="11" met="10001010" line_length="8">Umlknouť však v srdci písně,</l>
     <l n="12" met="0100100" rhyme="4" line_length="7">Kdy bez lásky podřímá.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10101010" line_length="8">I co chmury noční smutně</l>
     <l n="14" met="1001001" rhyme="5" line_length="7">Bez zpěvu míjejí dni,</l>
     <l n="15" met="01001010" line_length="8">Až procitlé srdce k lásce,</l>
     <l n="16" met="1010100" rhyme="5" line_length="7">Zpěvem slaví zbuzení.</l>
    </lg>
   </lg>
