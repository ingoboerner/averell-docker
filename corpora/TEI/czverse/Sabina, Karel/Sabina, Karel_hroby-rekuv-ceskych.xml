  <front>
   <head>HROBY REKŮV ČESKÝCH.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="0101010" line_length="7">Vy, hroby, tiché hroby,</l>
     <l n="2" met="010101000" rhyme="1" line_length="9">Kdo v lůně vašem odpočívá,</l>
     <l n="3" met="0101010" line_length="7">Že každou nocí hrůzný</l>
     <l n="4" met="0101100" rhyme="1" line_length="7">Vás větrů zpěv ochvívá?</l>
     <l n="5" met="0100010" rhyme="2" line_length="7">Či duchové to rekův</l>
     <l n="6" met="010100" rhyme="3" line_length="6">Zde krytých kolují</l>
     <l n="7" met="0101010" rhyme="2" line_length="7">A sílu zašlých věkův</l>
     <l n="8" met="101000" rhyme="3" line_length="6">Z hrobů probuzují?</l>
    </lg>
    <lg n="2">
     <l n="9" met="0101010" line_length="7">Vy, hroby, tiché hroby,</l>
     <l n="10" met="1101000" rhyme="4" line_length="7">Zpěv noční neslyšíte</l>
     <l n="11" met="0101010" line_length="7">A věčně smutně, chladně</l>
     <l n="12" met="1001100" rhyme="4" line_length="7">Na slabý věk hledíte.</l>
     <l n="13" met="0101010" line_length="7">Vy, hroby, tiché hroby,</l>
     <l n="14" met="100100" rhyme="5" line_length="6">A vy v nich, rekové,</l>
     <l n="15" met="1001010" line_length="7">Na vašem prachu slzí</l>
     <l n="16" met="100100" rhyme="5" line_length="6">Truchlící vnukové.</l>
    </lg>
   </lg>
  </body>
