  <front>
   <head>XIII.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1101010" line_length="7">Slyš, zvonků smutné znění</l>
     <l n="2" met="010100" rhyme="1" line_length="6">Se nese krajinou,</l>
     <l n="3" met="0101000" line_length="7">Již slunce pochovalo</l>
     <l n="4" met="110100" rhyme="1" line_length="6">Zář v temné mraky svou.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1001010" line_length="7">Provázíc mlha pohřeb</l>
     <l n="6" met="110100" rhyme="2" line_length="6">Mdlý obzor zastírá,</l>
     <l n="7" met="0101010" line_length="7">A hory, moře želí,</l>
     <l n="8" met="010100" rhyme="2" line_length="6">Že slunko umírá.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1101010" line_length="7">Ó, neplač srdce moje,</l>
     <l n="10" met="010101" rhyme="3" line_length="6">Že pohřbil slunce zvon;</l>
     <l n="11" met="0100100" line_length="7">Jej zjitra zas probudí</l>
     <l n="12" met="010101" rhyme="3" line_length="6">Ten samý zvonku tón.</l>
    </lg>
   </lg>
  </body>
