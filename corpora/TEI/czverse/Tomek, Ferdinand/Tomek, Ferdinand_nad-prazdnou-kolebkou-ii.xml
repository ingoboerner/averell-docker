  <front>
   <head>NAD PRÁZDNOU KOLÉBKOU. (II.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" rhyme="1" line_length="6">Duško naše zlatá!</l>
     <l n="2" met="10001000" rhyme="2" line_length="8">Odešla’s tak nenadále,</l>
     <l n="3" met="00101010" rhyme="2" line_length="8">dřív než tvoje rtíky malé</l>
     <l n="4" met="100010" rhyme="1" line_length="6">zažvatlaly „táta“.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101010" rhyme="3" line_length="6">Drahé naše dítě!</l>
     <l n="6" met="10001010" rhyme="4" line_length="8">Nechci nic, než abys zase</l>
     <l n="7" met="10101000" rhyme="4" line_length="8">v naši náruč vrátila se,</l>
     <l n="8" met="101000" rhyme="3" line_length="6">bychom zlíbali Tě.</l>
    </lg>
    <lg n="3">
     <l n="9" met="001010" rhyme="5" line_length="6">Však ne – nechoď zpátky!</l>
     <l n="10" met="10100010" rhyme="6" line_length="8">Jistě závistné by nebe</l>
     <l n="11" met="10001010" rhyme="6" line_length="8">vyrvalo co nejdřív Tebe</l>
     <l n="12" met="101010" rhyme="5" line_length="6">znovu loktům matky – – –</l>
    </lg>
   </lg>
  </body>
