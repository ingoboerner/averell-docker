  <front>
   <head>NAJEDNOU.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" rhyme="1" line_length="8">Horské olše podle lávky</l>
     <l n="2" met="10001000" rhyme="1" line_length="8">vzpomínají na oddavky.</l>
    </lg>
    <lg n="2">
     <l n="3" met="01001010" rhyme="2" line_length="8">Jak někdy ta vírná voda</l>
     <l n="4" met="00111010" rhyme="2" line_length="8">spíš než kněz dvé srdcí oddá.</l>
    </lg>
    <lg n="3">
     <l n="5" met="10101010" rhyme="3" line_length="8">Cesta do hor sněhem znaví –</l>
     <l n="6" met="00101010" rhyme="3" line_length="8">líp, když Vah vše dolů splaví.</l>
    </lg>
    <lg n="4">
     <l n="7" met="10101000" rhyme="4" line_length="8">Svatba, křest i pomazání</l>
     <l n="8" met="10001000" rhyme="4" line_length="8">při jednom – – Jen bez pokání!</l>
    </lg>
   </lg>
  </body>
