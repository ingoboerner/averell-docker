  <front>
   <head>MÁ DÍVČINA.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001000" line_length="8">Za městečkem na kopečku</l>
     <l n="2" met="100" rhyme="1" line_length="3">vesnice,</l>
     <l n="3" met="01001010" line_length="8">v té přebývá moje milá</l>
     <l n="4" met="100" rhyme="1" line_length="3">děvice.</l>
    </lg>
    <lg n="2">
     <l n="5" met="00101010" line_length="8">Jest to něžný jara kvítek</l>
     <l n="6" met="100" rhyme="2" line_length="3">nevinný,</l>
     <l n="7" met="10001010" line_length="8">nejhezčí snad z celé této</l>
     <l n="8" met="100" rhyme="2" line_length="3">dědiny.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10011000" line_length="8">Hlavinku má kadeřavou,</l>
     <l n="10" met="101" rhyme="3" line_length="3">černý vlas,</l>
     <l n="11" met="01001010" line_length="8">jak pěnice v šumném háji</l>
     <l n="12" met="101" rhyme="3" line_length="3">milý hlas.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10101010" line_length="8">Rety krásné, jako růží</l>
     <l n="14" met="101" rhyme="4" line_length="3">jarních květ,</l>
     <l n="15" met="10101000" line_length="8">na nich střádá pro hošíka</l>
     <l n="16" met="101" rhyme="4" line_length="3">sladký med.</l>
    </lg>
    <lg n="5">
     <l n="17" met="00101010" line_length="8">To jest láska mého žití</l>
     <l n="18" met="100" rhyme="5" line_length="3">jediná,</l>
     <l n="19" met="10101010" line_length="8">toto poupě, tato děva</l>
     <l n="20" met="100" rhyme="5" line_length="3">nevinná.</l>
    </lg>
   </lg>
  </body>
