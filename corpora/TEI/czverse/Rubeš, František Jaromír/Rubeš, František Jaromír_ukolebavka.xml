 <text>
  <front>
   <head>Ukolébavka.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10100" line_length="5">Hajej, hajinkej!</l>
     <l n="2" met="10101000" rhyme="1" line_length="8">Máti bude kolébati,</l>
     <l n="3" met="10001010" rhyme="1" line_length="8">Andělíček s tebou spáti,</l>
     <l n="4" met="1101101" rhyme="2" line_length="7">Pán Bůh ti dá krásný sen,</l>
     <l n="5" met="1000100" rhyme="2" line_length="7">Karloušku můj, spinkej jen.</l>
    </lg>
    <lg n="2">
     <l n="6" met="10100" line_length="5">Hajej, hajinkej!</l>
     <l n="7" met="10101010" rhyme="3" line_length="8">Hajej, hezky spinkej, nynej;</l>
     <l n="8" met="00001010" rhyme="3" line_length="8">Ty jsi můj a žádnej jinej,</l>
     <l n="9" met="1000100" rhyme="4" line_length="7">Maminka tě, zlatinký,</l>
     <l n="10" met="1010100" rhyme="4" line_length="7">Za svět nedá celinký.</l>
    </lg>
    <lg n="3">
     <l n="11" met="10100" line_length="5">Hajej, hajinkej!</l>
     <l n="12" met="10001000" rhyme="5" line_length="8">Sousedova Karolinka,</l>
     <l n="13" met="00101010" rhyme="5" line_length="8">Ta už dávno hezky spinká,</l>
     <l n="14" met="1000101" rhyme="6" line_length="7">Holouskové šli též spat,</l>
     <l n="15" met="0010100" rhyme="6" line_length="7">Ty však nechceš hajinkat.</l>
    </lg>
    <lg n="4">
     <l n="16" met="10100" line_length="5">Hajej, hajinkej!</l>
     <l n="17" met="10001010" rhyme="7" line_length="8">Přijde-li se bubák ptáti,</l>
     <l n="18" met="10100010" rhyme="7" line_length="8">Šel-li Karloušek náš spáti,</l>
     <l n="19" met="1010100" rhyme="8" line_length="7">Řekne jemu maminka:</l>
     <l n="20" met="1000100" rhyme="8" line_length="7">Karloušek už hajinká.</l>
    </lg>
    <lg n="5">
     <l n="21" met="10100" line_length="5">Hajej, hajinkej!</l>
     <l n="22" met="00101000" rhyme="9" line_length="8">Už tě moje políbení</l>
     <l n="23" met="10001010" rhyme="9" line_length="8">K libějšímu zbudí snění,</l>
     <l n="24" met="1010100" rhyme="10" line_length="7">Zlaté vyjde sluníčko –</l>
     <l n="25" met="1010100" rhyme="10" line_length="7">Spinkej, moje hlavičko!</l>
    </lg>
    <lg n="6">
     <l n="26" met="00100" line_length="5">Až se probudíš:</l>
     <l n="27" met="10001010" rhyme="11" line_length="8">Klobouček ten hezký nový</l>
     <l n="28" met="11001000" rhyme="11" line_length="8">Dá maminka Karlouškovi,</l>
     <l n="29" met="1000100" rhyme="12" line_length="7">Malovaný bubínek</l>
     <l n="30" met="1010100" rhyme="12" line_length="7">Koupí jemu tatínek.</l>
    </lg>
    <lg n="7">
     <l n="31" met="10100" line_length="5">A co ještě víc –</l>
     <l n="32" met="10010100" rhyme="13" line_length="8">S Dorotkou půjdeš na táčky,</l>
     <l n="33" met="10101010" rhyme="13" line_length="8">Dám ti dolů všecky hračky;</l>
     <l n="34" met="1000101" rhyme="14" line_length="7">Nebudeš si smět však hrát,</l>
     <l n="35" met="1000100" rhyme="14" line_length="7">Nebudeš-li hajinkat.</l>
    </lg>
    <lg n="8">
     <l n="36" met="10100" line_length="5">Hajej, hajinkej!</l>
     <l n="37" met="10101000" rhyme="15" line_length="8">Máti bude kolébati,</l>
     <l n="38" met="10001010" rhyme="15" line_length="8">Andělíček s tebou spáti,</l>
     <l n="39" met="1101101" rhyme="16" line_length="7">Pán Bůh ti dá krásný sen –</l>
     <l n="40" met="1000100" rhyme="16" line_length="7">Karloušku můj, spinkej jen.</l>
    </lg>
   </lg>
