  <front>
   <head>PÍSEŇ SLOVANSKÉHO PLAVCE.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="11001" rhyme="1" line_length="5">Pluj, korábe, pluj,</l>
     <l n="2" met="10100" rhyme="1" line_length="5">Běh svůj nestavuj,</l>
     <l n="3" met="10101010" rhyme="2" line_length="8">Slovan řídí veslo tvoje,</l>
     <l n="4" met="01101010" rhyme="2" line_length="8">Ten zná skály, víry, zdroje,</l>
     <l n="5" met="0010100" rhyme="3" line_length="7">Neb je plavec rozený.</l>
    </lg>
    <lg n="2">
     <l n="6" met="11001" rhyme="1" line_length="5">Pluj, korábe, pluj,</l>
     <l n="7" met="00100" rhyme="1" line_length="5">Nic se nestrachuj,</l>
     <l n="8" met="10001010" rhyme="4" line_length="8">Předkové když živi byli,</l>
     <l n="9" met="10101010" rhyme="4" line_length="8">Lodě jejich moře kryly,</l>
     <l n="10" met="1011100" rhyme="3" line_length="7">Kotvy znal břeh zelený.</l>
    </lg>
    <lg n="3">
     <l n="11" met="11001" rhyme="1" line_length="5">Pluj, korábe, pluj,</l>
     <l n="12" met="10101" rhyme="1" line_length="5">Plachty pyšně duj,</l>
     <l n="13" met="10101010" rhyme="5" line_length="8">Věz že mořskou slávu onu,</l>
     <l n="14" met="10101000" rhyme="5" line_length="8">Danou synům z Albionu,</l>
     <l n="15" met="1000100" rhyme="6" line_length="7">Dobyli dřív Slované.</l>
    </lg>
    <lg n="4">
     <l n="16" met="11001" rhyme="1" line_length="5">Pluj, korábe, pluj,</l>
     <l n="17" met="10100" rhyme="1" line_length="5">Stěžen pozdvihuj;</l>
     <l n="18" met="00101010" rhyme="7" line_length="8">Když byl ještě Slovan v květu,</l>
     <l n="19" met="10101100" rhyme="7" line_length="8">Plavců sídlo měl – Vinetu,</l>
     <l n="20" met="1010100" rhyme="6" line_length="7">Moře loďmi zorané.</l>
    </lg>
    <lg n="5">
     <l n="21" met="01001" rhyme="1" line_length="5">Nuž, korábe, pluj,</l>
     <l n="22" met="10100" rhyme="1" line_length="5">K břehům postupuj,</l>
     <l n="23" met="10101010" rhyme="8" line_length="8">Abys v nové hlásal zemi,</l>
     <l n="24" met="10101010" rhyme="8" line_length="8">První plavci mezi všemi</l>
     <l n="25" met="0010100" rhyme="6" line_length="7">Že jsou byli – Slované.</l>
    </lg>
   </lg>
