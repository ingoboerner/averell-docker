  <front>
   <head>NA PRAHU.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010101" rhyme="1" line_length="7">Praho, Praho, máti měst,</l>
     <l n="2" met="101010" rhyme="2" line_length="6">Srdce České země,</l>
     <l n="3" met="101010" rhyme="2" line_length="6">Tobě naše plémě</l>
     <l n="4" met="1010101" rhyme="1" line_length="7">Věčně bude věnce plést.</l>
    </lg>
    <lg n="2">
     <l n="5" met="0010100" rhyme="3" line_length="7">Ty se’s v slávě zaskvěla,</l>
     <l n="6" met="001000" rhyme="4" line_length="6">Neb tu na Petříně</l>
     <l n="7" met="101010" rhyme="4" line_length="6">V příštích věků klíně</l>
     <l n="8" met="1010100" rhyme="3" line_length="7">Matka Čechů viděla.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1000100" rhyme="5" line_length="7">Národové klekali</l>
     <l n="10" met="101010" rhyme="6" line_length="6">Před tvou mocnou tváří,</l>
     <l n="11" met="001010" rhyme="6" line_length="6">A v té jasné záři</l>
     <l n="12" met="1010100" rhyme="5" line_length="7">Reci čeští jásali.</l>
    </lg>
    <lg n="4">
     <l n="13" met="0010100" rhyme="7" line_length="7">Ti sic dávno zesnuli,</l>
     <l n="14" met="101000" rhyme="8" line_length="6">Prápor nezachvívá,</l>
     <l n="15" met="101010" rhyme="8" line_length="6">Vnuk však o nich snívá,</l>
     <l n="16" met="1010100" rhyme="7" line_length="7">Jakby z hrobu kynuli.</l>
    </lg>
    <lg n="5">
     <l n="17" met="1010100" rhyme="9" line_length="7">Kdyby někdy vrahové</l>
     <l n="18" met="101010" rhyme="10" line_length="6">Tobě, Praho máti,</l>
     <l n="19" met="101010" rhyme="10" line_length="6">Srdce chtěli kláti,</l>
     <l n="20" met="1000100" rhyme="9" line_length="7">Zakryjou tě synové.</l>
    </lg>
    <lg n="6">
     <l n="21" met="0010100" rhyme="11" line_length="7">Ty pak v nové oslavě</l>
     <l n="22" met="101010" rhyme="12" line_length="6">Počneš zase žíti;</l>
     <l n="23" met="101010" rhyme="12" line_length="6">Zpěv ti bude zníti</l>
     <l n="24" met="1000100" rhyme="11" line_length="7">Na Labi a Vltavě.</l>
    </lg>
    <lg n="7">
     <l n="25" met="1010101" rhyme="13" line_length="7">Proto, Praho, máti měst,</l>
     <l n="26" met="101010" rhyme="14" line_length="6">Jásej v blahé době,</l>
     <l n="27" met="101010" rhyme="14" line_length="6">České plémě tobě</l>
     <l n="28" met="1010101" rhyme="13" line_length="7">Věčně bude věnce plést.</l>
    </lg>
   </lg>
  </body>
