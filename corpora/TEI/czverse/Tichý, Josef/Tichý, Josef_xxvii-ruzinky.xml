  <front>
   <head>XXVII. Růžinky.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000100" line_length="7">Utrhni si, utrhni</l>
     <l n="2" met="100100" rhyme="1" line_length="6">Červenou růžinku!</l>
     <l n="3" met="0010100" line_length="7">Jen se na mne nehněvej</l>
     <l n="4" met="010100" rhyme="1" line_length="6">Můj drahý Karlínku!</l>
    </lg>
    <lg n="2">
     <l n="5" met="1000100" line_length="7">Utrhni si, utrhni</l>
     <l n="6" met="110010" rhyme="2" line_length="6">Dvě naproti sobě!</l>
     <l n="7" met="0010100" line_length="7">Když se hněvat nebudeš,</l>
     <l n="8" met="000110" rhyme="2" line_length="6">Já ti je dám obě.</l>
    </lg>
    <lg n="3">
     <l n="9" met="0010100" line_length="7">Když se na mne rozhněváš,</l>
     <l n="10" met="010110" rhyme="3" line_length="6">Co budeš mít z toho?</l>
     <l n="11" met="0010100" line_length="7">Když se hněvat nebudeš,</l>
     <l n="12" met="000110" rhyme="3" line_length="6">Já ti jich dám mnoho.</l>
    </lg>
    <lg n="4">
     <l n="13" met="0010100" line_length="7">Co jich mám jen v zahradě,</l>
     <l n="14" met="000110" rhyme="4" line_length="6">Ty já ti dám všecky,</l>
     <l n="15" met="0010100" line_length="7">Jen se na mne nehněvej,</l>
     <l n="16" met="011010" rhyme="4" line_length="6">A mluv na mne česky.</l>
    </lg>
   </lg>
  </body>
