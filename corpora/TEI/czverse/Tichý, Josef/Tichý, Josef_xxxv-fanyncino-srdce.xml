  <front>
   <head>XXXV. Fanynčino srdce.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">Od Moravských hranic</l>
     <l n="2" met="101010" rhyme="1" line_length="6">Jemný větřík fouká;</l>
     <l n="3" met="100100" line_length="6">Holoubek do dolin</l>
     <l n="4" met="100010" rhyme="1" line_length="6">Z háječku již houká.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101010" line_length="6">Jemný větřík vane,</l>
     <l n="6" met="101010" rhyme="2" line_length="6">Plný jarní vůně;</l>
     <l n="7" met="100100" line_length="6">Zahoukej, holoubku,</l>
     <l n="8" met="100010" rhyme="2" line_length="6">Fanynka že stůně.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">Nestůně Fanynka,</l>
     <l n="10" met="101010" rhyme="3" line_length="6">Ona jenom bledne:</l>
     <l n="11" met="101010" line_length="6">V noci truchlí, pláče,</l>
     <l n="12" met="010010" rhyme="3" line_length="6">A naříká ve dne.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100100" line_length="6">Zahoukej do dolin,</l>
     <l n="14" met="011010" rhyme="4" line_length="6">Kde hoch její žije,</l>
     <l n="15" met="001010" line_length="6">On že jenom z tváří</l>
     <l n="16" met="100010" rhyme="4" line_length="6">Ruměnec jí pije.</l>
    </lg>
    <lg n="5">
     <l n="17" met="100100" line_length="6">Zahoukej do dolin,</l>
     <l n="18" met="011010" rhyme="4" line_length="6">Kde hoch její žije,</l>
     <l n="19" met="100010" line_length="6">Fanynčino srdce</l>
     <l n="20" met="001010" rhyme="4" line_length="6">Že jen pro něj bije.</l>
    </lg>
   </lg>
  </body>
