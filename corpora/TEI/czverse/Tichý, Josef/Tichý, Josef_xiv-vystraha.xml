  <front>
   <head>XIV. Výstraha.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Není dobře skákat,</l>
     <l n="2" met="001010" rhyme="1" line_length="6">Kde se těžko chodí;</l>
     <l n="3" met="100010" line_length="6">Jednomu to projde,</l>
     <l n="4" met="100010" rhyme="1" line_length="6">Tisíci to škodí.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Ondyno po lávce</l>
     <l n="6" met="100010" rhyme="2" line_length="6">Přes potok kdos běžel;</l>
     <l n="7" met="010010" line_length="6">Jen poskočil dvakrát,</l>
     <l n="8" met="010010" rhyme="2" line_length="6">Hned pod lávkou ležel.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100010" line_length="6">Na provaze mnohý</l>
     <l n="10" met="100110" rhyme="3" line_length="6">Skáče, až pot stírá,</l>
     <l n="11" met="010010" line_length="6">A za malou chvilku</l>
     <l n="12" met="100100" rhyme="3" line_length="6">Pod ním již umírá.</l>
    </lg>
    <lg n="4">
     <l n="13" met="101010" line_length="6">Nechci tedy skákat,</l>
     <l n="14" met="001010" rhyme="4" line_length="6">Kde je těžko chodit:</l>
     <l n="15" met="111010" line_length="6">Stát chci ráděj, kde bych</l>
     <l n="16" met="101010" rhyme="4" line_length="6">Sebou mohl hodit.</l>
    </lg>
   </lg>
  </body>
