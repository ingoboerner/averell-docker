  <front>
   <head>XXIX. Výstraha.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1000100" rhyme="1" line_length="7">Klučina, ten klučina</l>
     <l n="2" met="101010" rhyme="2" line_length="6">Celý den jen zpívá,</l>
     <l n="3" met="0010100" rhyme="1" line_length="7">Jak ho potká dívčina,</l>
     <l n="4" met="000100" rhyme="2" line_length="6">Svou ji hned nazývá.</l>
    </lg>
    <lg n="2">
     <l n="5" met="1000100" rhyme="3" line_length="7">Na každou se usmívá,</l>
     <l n="6" met="101100" rhyme="4" line_length="6">S každou rád hovoří,</l>
     <l n="7" met="1010100" rhyme="3" line_length="7">Každé leccos povídá,</l>
     <l n="8" met="010010" rhyme="4" line_length="6">A každé se koří.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1000100" rhyme="1" line_length="7">Klučina, ten klučina</l>
     <l n="10" met="100110" rhyme="5" line_length="6">Každé, co chce, slíbí;</l>
     <l n="11" met="0100100" rhyme="1" line_length="7">Nic nesplní ferina,</l>
     <l n="12" met="001010" rhyme="5" line_length="6">Přec se každé líbí.</l>
    </lg>
    <lg n="4">
     <l n="13" met="1010100" rhyme="6" line_length="7">Nevěř tedy, dívenko!</l>
     <l n="14" met="101010" rhyme="7" line_length="6">Nikdy řeči samé;</l>
     <l n="15" met="1010100" rhyme="6" line_length="7">Možno, že tě, panenko!</l>
     <l n="16" met="100010" rhyme="7" line_length="6">Lahodou je klame.</l>
    </lg>
   </lg>
  </body>
