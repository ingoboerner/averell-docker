  <front>
   <head>DVĚ MATKY. (III.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" rhyme="1" line_length="6">Od Karpatské strany</l>
     <l n="2" met="101010" rhyme="2" line_length="6">nocí vítr skolí –</l>
     <l n="3" met="101000" rhyme="1" line_length="6">leží porubaný</l>
     <l n="4" met="100010" rhyme="2" line_length="6">syneček tam v poli.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100010" rhyme="3" line_length="6">Na Karpatská čela</l>
     <l n="6" met="101010" rhyme="4" line_length="6">drobný deštík padá –</l>
     <l n="7" met="110010" rhyme="3" line_length="6">ach, toho zde měla</l>
     <l n="8" met="100010" rhyme="4" line_length="6">matička tak ráda.</l>
    </lg>
    <lg n="3">
     <l n="9" met="101010" rhyme="5" line_length="6">Ráno zase tratí</l>
     <l n="10" met="100100" rhyme="6" line_length="6">po horách se stíny –</l>
     <l n="11" met="100010" rhyme="5" line_length="6">pochopí jen Máti</l>
     <l n="12" met="101000" rhyme="6" line_length="6">slzy maminčiny.</l>
    </lg>
   </lg>
  </body>
