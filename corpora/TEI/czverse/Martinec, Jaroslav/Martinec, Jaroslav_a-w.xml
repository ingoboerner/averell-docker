   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="11001000" line_length="8">Ó, škoda, že na pergamén</l>
     <l n="2" met="0100010" rhyme="1" line_length="7">již nepíšou se básně!</l>
     <l n="3" met="00010100" line_length="8">Jak by tu Tvoje písničky</l>
     <l n="4" met="0100010" rhyme="1" line_length="7">se vyjímaly krásně.</l>
     <l n="5" met="01010100" line_length="8">Ten samý život vanul by</l>
     <l n="6" met="010000" rhyme="2" line_length="6">z té osloviny zas,</l>
     <l n="7" met="01010100" line_length="8">ten samý, který pro ni jen</l>
     <l n="8" met="100101" rhyme="2" line_length="6">na věky věkův zhas!</l>
    </lg>
   </lg>
