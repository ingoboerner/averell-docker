 <text>
  <front>
   <head>Nechci ho, matičko!</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Nechci ho, matičko,</l>
     <l n="2" met="100100" rhyme="1" line_length="6">starého ženicha.</l>
     <l n="3" met="100100" rhyme="1" line_length="6">Hlava mu pelichá,</l>
     <l n="4" met="100100" rhyme="1" line_length="6">srdce mu usychá –</l>
     <l n="5" met="100100" line_length="6">Nechci ho, matičko,</l>
     <l n="6" met="100100" rhyme="1" line_length="6">starého ženicha.</l>
    </lg>
    <lg n="2">
     <l n="7" met="100100" line_length="6">Často je, matičko,</l>
     <l n="8" met="100100" rhyme="2" line_length="6">smutno až do pláče.</l>
     <l n="9" met="100100" rhyme="2" line_length="6">S mladým je jináče:</l>
     <l n="10" met="100100" rhyme="2" line_length="6">Trampoty odskáče,</l>
     <l n="11" met="100101" line_length="6">a což on lásky má</l>
     <l n="12" met="100100" rhyme="2" line_length="6">za čtyry boháče!</l>
    </lg>
   </lg>
  </body>
