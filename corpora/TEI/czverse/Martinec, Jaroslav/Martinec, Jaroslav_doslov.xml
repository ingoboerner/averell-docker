  <front>
   <head>Doslov.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" rhyme="1" line_length="8">Ani kvítko v šírém poli</l>
     <l n="2" met="1000100" rhyme="2" line_length="7">o samotě nezkvétá,</l>
     <l n="3" met="10101000" rhyme="1" line_length="8">a když ptáče zašveholí,</l>
     <l n="4" met="1010100" rhyme="2" line_length="7">družka k němu přilétá.</l>
    </lg>
    <lg n="2">
     <l n="5" met="00101010" rhyme="3" line_length="8">Ba i pověsť dávných časů</l>
     <l n="6" met="1000100" rhyme="4" line_length="7">k paměti se probírá –</l>
     <l n="7" met="10101000" rhyme="3" line_length="8">píseň má jen bez ohlasu</l>
     <l n="8" met="1000100" rhyme="4" line_length="7">doznívá a umírá.</l>
    </lg>
   </lg>
  </body>
