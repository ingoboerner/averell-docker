  <front>
   <head>Svatba na Slavětíně. (l.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="11001000" rhyme="1" line_length="8">Aj, na hradě Slavětíně</l>
     <l n="2" met="10100010" rhyme="2" line_length="8">Bolné rozléhá se Ikání;</l>
     <l n="3" met="10001010" rhyme="1" line_length="8">Táhne se skrz dlouhé síně</l>
     <l n="4" met="10001000" rhyme="2" line_length="8">Od večera do svitání.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10100100" rhyme="3" line_length="8">Slečna Mína to běduje</l>
     <l n="6" met="10100010" rhyme="4" line_length="8">Plačíc pro milence svého,</l>
     <l n="7" met="00101000" rhyme="3" line_length="8">Že se dlouho nevracuje</l>
     <l n="8" met="10101000" rhyme="4" line_length="8">Zpátky z boje krvavého.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10001000" rhyme="5" line_length="8">Dávnoť již se milovaly</l>
     <l n="10" met="10101010" rhyme="6" line_length="8">Srdce jejich láskou věrnou;</l>
     <l n="11" met="10101000" rhyme="5" line_length="8">Ale mraky stahovaly</l>
     <l n="12" met="01001010" rhyme="6" line_length="8">Se nad nima v bouři černou.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10101000" rhyme="7" line_length="8">Žádná jiskra nesvítila</l>
     <l n="14" met="10001000" rhyme="8" line_length="8">Naděje jim ku spojení;</l>
     <l n="15" met="10101000" rhyme="7" line_length="8">Ale láska posvětila</l>
     <l n="16" met="10101000" rhyme="8" line_length="8">Srdce v svatém zalíbení. –</l>
    </lg>
    <lg n="5">
     <l n="17" met="10101010" rhyme="9" line_length="8">Hynek odjel s myslí temnou</l>
     <l n="18" met="11001000" rhyme="10" line_length="8">V boj do dálné Palestiny;</l>
     <l n="19" met="10101010" rhyme="9" line_length="8">Aj tuť tekly přes tvář jemnou</l>
     <l n="20" met="10101010" rhyme="10" line_length="8">Hojné slzy sličné Míny.</l>
    </lg>
    <lg n="6">
     <l n="21" met="10101010" rhyme="11" line_length="8">Od té doby pláče vezdy</l>
     <l n="22" met="10001000" rhyme="12" line_length="8">Od večera do svitání,</l>
     <l n="23" met="10100010" rhyme="11" line_length="8">Patříc na nebeské hvězdy</l>
     <l n="24" met="10101000" rhyme="12" line_length="8">Hledá u nich smilování.</l>
    </lg>
   </lg>
