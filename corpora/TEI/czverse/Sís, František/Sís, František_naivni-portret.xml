  <front>
   <head>NAIVNÍ PORTRET.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101" rhyme="1" line_length="5">Měla svůdný vlas,</l>
     <l n="2" met="1100101000" rhyme="2" line_length="10">dvě cikánské ručky umouněné,</l>
     <l n="3" met="1010101000" rhyme="2" line_length="10">a jak listí vánkem rozechvěné</l>
     <l n="4" met="10101" rhyme="1" line_length="5">zpíval její hlas.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101" rhyme="1" line_length="5">Z hustých hebkých řas</l>
     <l n="6" met="1100101010" rhyme="3" line_length="10">dva ohnivé body plály žhavě,</l>
     <l n="7" met="1010101000" rhyme="3" line_length="10">a jí v duši zářil vyzývavě</l>
     <l n="8" met="11001" rhyme="1" line_length="5">snů plamenných jas.</l>
    </lg>
   </lg>
  </body>
