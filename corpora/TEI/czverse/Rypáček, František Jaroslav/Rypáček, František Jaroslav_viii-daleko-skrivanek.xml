  <front>
   <head>VIII. Daleko skřivánek,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Daleko skřivánek, </l>
     <l n="2" met="100100" rhyme="1" line_length="6">daleko zaletěl</l>
     <l n="3" met="100100" line_length="6">na moře hluboké,</l>
     <l n="4" met="010001" rhyme="1" line_length="6">by pohřbil v něm svůj žel.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Nebyl to skřivánek,</l>
     <l n="6" met="100100" rhyme="2" line_length="6">bylo to srdce mé,</l>
     <l n="7" met="100100" line_length="6">zaletlo na moře,</l>
     <l n="8" met="100100" rhyme="2" line_length="6">na moře lásky Tvé.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100" line_length="6">Letěla hvězdička,</l>
     <l n="10" met="100100" rhyme="3" line_length="6">letěla s vysoka,</l>
     <l n="11" met="100100" line_length="6">nemohla doletěť,</l>
     <l n="12" met="101000" rhyme="3" line_length="6">padla do potoka.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100100" line_length="6">Nebyla hvězdička,</l>
     <l n="14" met="100010" rhyme="4" line_length="6">duše Tvá to byla,</l>
     <l n="15" met="010100" line_length="6">v mých citů hlubině,</l>
     <l n="16" met="001000" rhyme="4" line_length="6">tam se utopila.</l>
    </lg>
   </lg>
  </body>
