  <front>
   <head>Mnoho bouřek hřmělo</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" rhyme="1" line_length="6">Mnoho bouřek hřmělo </l>
     <l n="2" met="010010" rhyme="2" line_length="6">Již nad hlavou mojí –</l>
     <l n="3" met="100010" rhyme="1" line_length="6">Srdce mé se chvělo</l>
     <l n="4" met="101000" rhyme="2" line_length="6">Často v nepokoji.</l>
     <l n="5" met="100010" rhyme="3" line_length="6">Nade mnou zas pne se</l>
     <l n="6" met="101000" rhyme="4" line_length="6">Nebe vyjasněné –</l>
     <l n="7" met="101010" rhyme="3" line_length="6">Srdce moje hne se</l>
     <l n="8" met="101000" rhyme="4" line_length="6">Posud nesmířené.</l>
    </lg>
   </lg>
  </body>
