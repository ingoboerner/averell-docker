 <text>
  <front>
   <head>Kosa polská. (IV.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010" rhyme="1" line_length="5">Sedláci, vstaňte,</l>
     <l n="2" met="10010" rhyme="1" line_length="5">Kosou se braňte,</l>
     <l n="3" met="10100" rhyme="2" line_length="5">Kosou sklízejte,</l>
     <l n="4" met="10100" rhyme="2" line_length="5">Kosou sekejte,</l>
     <l n="5" met="10100" rhyme="3" line_length="5">Zrno dozrává,</l>
     <l n="6" met="10100" rhyme="3" line_length="5">Žatba nastává!</l>
    </lg>
    <lg n="2">
     <l n="7" met="10100" rhyme="4" line_length="5">Vzhůru, sedláci,</l>
     <l n="8" met="10100" rhyme="4" line_length="5">Silní kosáci,</l>
     <l n="9" met="10100" rhyme="2" line_length="5">Kosu rovnejte,</l>
     <l n="10" met="10100" rhyme="2" line_length="5">Kosou sekejte! –</l>
     <l n="11" met="10100" rhyme="3" line_length="5">Zrno dozrává,</l>
     <l n="12" met="10100" rhyme="3" line_length="5">Žatba nastává!</l>
    </lg>
    <lg n="3">
     <l n="13" met="10100" rhyme="4" line_length="5">Vzhůru, sedláci,</l>
     <l n="14" met="10100" rhyme="4" line_length="5">Věrní Poláci,</l>
     <l n="15" met="10100" rhyme="2" line_length="5">Kosu zdvíhejte,</l>
     <l n="16" met="10100" rhyme="2" line_length="5">Kosou sekejte.</l>
     <l n="17" met="10100" rhyme="3" line_length="5">Zrno dozrává,</l>
     <l n="18" met="10100" rhyme="3" line_length="5">Žatba nastává.</l>
    </lg>
    <lg n="4">
     <l n="19" met="11010" rhyme="5" line_length="5">Bůh kosu chrání,</l>
     <l n="20" met="10010" rhyme="5" line_length="5">Kosa nás brání –</l>
     <l n="21" met="10100" rhyme="3" line_length="5">Zrno dozrává,</l>
     <l n="22" met="10100" rhyme="3" line_length="5">Žatba nastává –</l>
     <l n="23" met="10100" rhyme="2" line_length="5">Kosou sklízejte,</l>
     <l n="24" met="10100" rhyme="2" line_length="5">Kosou sekejte!</l>
    </lg>
   </lg>
