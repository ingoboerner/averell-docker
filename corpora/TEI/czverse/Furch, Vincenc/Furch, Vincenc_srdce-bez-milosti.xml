  <front>
   <head>Srdce bez milosti,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101000" line_length="6">Srdce bez milosti, </l>
     <l n="2" met="101000" rhyme="1" line_length="6">Oheň malovaný,</l>
     <l n="3" met="101100" line_length="6">Suchý strom bez květu,</l>
     <l n="4" met="100010" rhyme="1" line_length="6">Bez ovoce planý,</l>
     <l n="5" met="101000" rhyme="2" line_length="6">Nebes ptáci v něm si</l>
     <l n="6" met="101000" rhyme="3" line_length="6">Sídlo nehledají,</l>
     <l n="7" met="101000" rhyme="2" line_length="6">Mutně ratolesti</l>
     <l n="8" met="101010" rhyme="3" line_length="6">V samém zdvihá máji.</l>
    </lg>
   </lg>
  </body>
