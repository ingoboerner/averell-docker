  <front>
   <head>Ustaň doufat, toužit,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Ustaň doufat, toužit, </l>
     <l n="2" met="100010" rhyme="1" line_length="6">Příroda ti brání,</l>
     <l n="3" met="101010" line_length="6">Bylo marné tvoje</l>
     <l n="4" met="100010" rhyme="1" line_length="6">Nejkrásnější zdání.</l>
     <l n="5" met="101010" line_length="6">Ustaň doufat, toužit,</l>
     <l n="6" met="100010" rhyme="2" line_length="6">Staveny jsou meze –</l>
     <l n="7" met="100010" line_length="6">Fantasie lítá –</l>
     <l n="8" met="101010" rhyme="2" line_length="6">Ale rozum leze.</l>
    </lg>
   </lg>
