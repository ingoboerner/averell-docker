  <front>
   <head>Listí beze šťávy</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Listí beze šťávy </l>
     <l n="2" met="100010" rhyme="1" line_length="6">Se stromu se trhá,</l>
     <l n="3" met="101100" line_length="6">Chladný dech jesenní</l>
     <l n="4" met="100010" rhyme="1" line_length="6">Po kraji je vrhá,</l>
     <l n="5" met="100010" line_length="6">Olověné mraky</l>
     <l n="6" met="101010" rhyme="2" line_length="6">Pustým nebem plují,</l>
     <l n="7" met="100100" line_length="6">K odletu vlašťovky</l>
     <l n="8" met="001000" rhyme="2" line_length="6">Již se shromažďují.</l>
    </lg>
   </lg>
  </body>
