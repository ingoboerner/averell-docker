  <front>
   <head>Kdo, ach, všechno ztratil,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="011010" line_length="6">Kdo, ach, všechno ztratil, </l>
     <l n="2" met="101010" rhyme="1" line_length="6">Jemuž země lhala,</l>
     <l n="3" met="101010" line_length="6">Jemuž krutá země</l>
     <l n="4" met="101010" rhyme="1" line_length="6">Všechno kvítí vzala –</l>
     <l n="5" met="101010" line_length="6">Naděj, tebe znovu</l>
     <l n="6" met="100010" rhyme="2" line_length="6">Ku pomoci volá,</l>
     <l n="7" met="001000" line_length="6">By ho nezmařila</l>
     <l n="8" met="100110" rhyme="2" line_length="6">Skutečná zem holá.</l>
    </lg>
   </lg>
  </body>
