  <front>
   <head>Kotvici svou nepusť</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">Kotvici svou nepusť </l>
     <l n="2" met="100100" rhyme="1" line_length="6">Do bahna zemského –</l>
     <l n="3" met="101000" rhyme="1" line_length="6">Hoď ji do jasného</l>
     <l n="4" met="101000" rhyme="1" line_length="6">Modra nebeského:</l>
     <l n="5" met="100010" line_length="6">Bezpečně tím loďka</l>
     <l n="6" met="101000" rhyme="2" line_length="6">V bouři upevněna –</l>
     <l n="7" met="101000" line_length="6">Jistě do přístavu</l>
     <l n="8" met="101000" rhyme="2" line_length="6">Bude donešena.</l>
    </lg>
   </lg>
  </body>
