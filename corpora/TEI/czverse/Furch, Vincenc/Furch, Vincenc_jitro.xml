  <front>
   <head>Jitro.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Slunce z modra moře</l>
     <l n="2" met="101010" rhyme="1" line_length="6">Tiše, vážně vstává,</l>
     <l n="3" met="101010" line_length="6">Volá zem a nebe</l>
     <l n="4" met="110010" rhyme="1" line_length="6">Dni mladému: „Sláva!“</l>
     <l n="5" met="100010" line_length="6">U velebné kráse</l>
     <l n="6" met="101000" rhyme="2" line_length="6">Slunce vystupuje –</l>
     <l n="7" met="101010" line_length="6">Modrý kouř se zdvíhá –</l>
     <l n="8" met="101000" rhyme="2" line_length="6">Země obětuje.</l>
    </lg>
   </lg>
