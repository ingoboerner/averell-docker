  <front>
   <head>Širé hvězdné křídlo</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Širé hvězdné křídlo </l>
     <l n="2" met="100110" rhyme="1" line_length="6">Rozpíná noc černá,</l>
     <l n="3" met="100100" rhyme="2" line_length="6">Oči nám zavírá</l>
     <l n="4" met="100010" rhyme="1" line_length="6">Těšitelka věrná;</l>
     <l n="5" met="101100" rhyme="2" line_length="6">Tělům tíž odbírá,</l>
     <l n="6" met="101100" rhyme="2" line_length="6">Duchům říš otvírá,</l>
     <l n="7" met="101000" line_length="6">V nivy nadpozemské</l>
     <l n="8" met="101010" rhyme="2" line_length="6">Volná duše zírá.</l>
    </lg>
   </lg>
  </body>
