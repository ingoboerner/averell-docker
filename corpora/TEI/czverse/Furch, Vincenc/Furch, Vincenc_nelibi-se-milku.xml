  <front>
   <head>Nelíbí se Milku</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" line_length="6">Nelíbí se Milku </l>
     <l n="2" met="101000" rhyme="1" line_length="6">Býti poustevníkem,</l>
     <l n="3" met="100010" line_length="6">Osamělým nechce</l>
     <l n="4" met="101000" rhyme="1" line_length="6">Býti sídelníkem.</l>
     <l n="5" met="101010" line_length="6">Slepý bůžek hoví</l>
     <l n="6" met="101000" rhyme="2" line_length="6">Sobě v společnosti –</l>
     <l n="7" met="101010" line_length="6">Svědky dva si volí –</l>
     <l n="8" met="101010" rhyme="2" line_length="6">Na dvou má on dosti.</l>
    </lg>
   </lg>
  </body>
