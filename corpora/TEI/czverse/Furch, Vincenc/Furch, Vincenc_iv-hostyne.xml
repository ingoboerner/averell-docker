 <text>
  <front>
   <head>IV. Hostýne!</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100" line_length="3">Hostýne! </l>
     <l n="2" met="10101010" rhyme="1" line_length="8">V nebi kryješ svoje čelo,</l>
     <l n="3" met="100" line_length="3">Na zemi</l>
     <l n="4" met="10001010" rhyme="1" line_length="8">Postaveno tvoje tělo.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100" line_length="3">Nad tebou</l>
     <l n="6" met="10100010" rhyme="2" line_length="8">Nebes obloha se klene,</l>
     <l n="7" met="100" line_length="3">Pod tebou</l>
     <l n="8" met="10101000" rhyme="2" line_length="8">Nivy kvetou rozprostřené.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100" line_length="3">K sobě nás</l>
     <l n="10" met="10101010" rhyme="3" line_length="8">Dvojím lásky pásmem vážeš,</l>
     <l n="11" met="100" line_length="3">Zjevně nám</l>
     <l n="12" met="10101010" rhyme="3" line_length="8">Dvojím lásky slovem kážeš.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100" line_length="3">K sobě nás</l>
     <l n="14" met="10101000" rhyme="4" line_length="8">Vážeš svazkem nábožnosti,</l>
     <l n="15" met="100" line_length="3">K sobě nás</l>
     <l n="16" met="10101000" rhyme="4" line_length="8">Vážeš pásmem národnosti.</l>
    </lg>
    <lg n="5">
     <l n="17" met="100" line_length="3">Kážeš nám</l>
     <l n="18" met="10101000" rhyme="5" line_length="8">Zem a nebe milovati,</l>
     <l n="19" met="100" line_length="3">Nebi a</l>
     <l n="20" met="10101000" rhyme="5" line_length="8">Vlasti život věnovati.</l>
    </lg>
    <lg n="6">
     <l n="21" met="100" line_length="3">Hostýne,</l>
     <l n="22" met="10101010" rhyme="6" line_length="8">Svaté ctíme svazky oba,</l>
     <l n="23" met="010" line_length="3">Co kážeš,</l>
     <l n="24" met="10000100" rhyme="6" line_length="8">Vyplníme až do hroba.</l>
    </lg>
   </lg>
  </body>
