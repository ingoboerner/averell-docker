  <front>
   <head>Polska-Troja.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10010010" rhyme="1" line_length="8">Pomocni Polákům byli</l>
     <l n="2" met="100100" rhyme="2" line_length="6">Moskali, Prušáci,</l>
     <l n="3" met="10001000" rhyme="1" line_length="8">Konečně se přidružili</l>
     <l n="4" met="101000" rhyme="2" line_length="6">Také Austriáci.</l>
    </lg>
    <lg n="2">
     <l n="5" met="01001000" rhyme="3" line_length="8">I přivedli soudruhové</l>
     <l n="6" met="101000" rhyme="4" line_length="6">Koně osudného</l>
     <l n="7" met="10101000" rhyme="3" line_length="8">Darem noví Danaové,</l>
     <l n="8" met="101000" rhyme="4" line_length="6">Koně Trojanského.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10101010" rhyme="5" line_length="8">Prestol polských králů klesl</l>
     <l n="10" met="101000" rhyme="6" line_length="6">Koněm rozbořený –</l>
     <l n="11" met="10100100" rhyme="5" line_length="8">Bílý orel se povznesl</l>
     <l n="12" met="101000" rhyme="6" line_length="6">Mrakem zahalený.</l>
    </lg>
    <lg n="4">
     <l n="13" met="10101010" rhyme="7" line_length="8">A teď máme v čase novém</l>
     <l n="14" met="101010" rhyme="8" line_length="6">Ejhle Polsko troje:</l>
     <l n="15" met="10001010" rhyme="7" line_length="8">Podobá se skutkem, slovem</l>
     <l n="16" met="101010" rhyme="8" line_length="6">Polska staré Troje!</l>
    </lg>
   </lg>
  </body>
