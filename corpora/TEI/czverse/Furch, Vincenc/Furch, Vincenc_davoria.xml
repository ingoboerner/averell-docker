  <front>
   <head>Davoria.*)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Zem se celá třese,</l>
     <l n="2" met="010100" rhyme="1" line_length="6">Už hroby pukají,</l>
     <l n="3" met="011010" line_length="6">Už prach starých Čechů</l>
     <l n="4" met="101000" rhyme="1" line_length="6">Vnukům vydávají.</l>
    </lg>
    <lg n="2">
     <l n="5" met="101000" line_length="6">Srdce otvírejte,</l>
     <l n="6" met="001010" rhyme="2" line_length="6">Ať tam símě vpadne,</l>
     <l n="7" met="101010" line_length="6">Popel starých Čechů,</l>
     <l n="8" met="010100" rhyme="2" line_length="6">Ať’ srdce nezvadne.</l>
    </lg>
    <lg n="3">
     <l n="9" met="101010" line_length="6">Hnilo naše plémě,</l>
     <l n="10" met="101010" rhyme="3" line_length="6">Velká bída byla,</l>
     <l n="11" met="000010" line_length="6">Však už se nám vrací</l>
     <l n="12" met="100010" rhyme="3" line_length="6">Staročeská síla.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100010" line_length="6">Otevírej srdce,</l>
     <l n="14" met="100100" rhyme="4" line_length="6">Jinochu nadějný,</l>
     <l n="15" met="001010" line_length="6">Ať tam vpadne otců</l>
     <l n="16" met="101000" rhyme="4" line_length="6">Popel čarodějný.</l>
    </lg>
    <lg n="5">
     <l n="17" met="100100" line_length="6">V celém už národu</l>
     <l n="18" met="100100" rhyme="5" line_length="6">Símě se probírá,</l>
     <l n="19" met="101010" line_length="6">Jenom naše šlechta</l>
     <l n="20" met="101000" rhyme="5" line_length="6">Srdce uzavírá.</l>
    </lg>
    <lg n="6">
     <l n="21" met="101000" line_length="6">Jenom ona vždy se</l>
     <l n="22" met="100010" rhyme="6" line_length="6">Po cizinstvu shání,</l>
     <l n="23" met="101010" line_length="6">Smutným okem hledí</l>
     <l n="24" met="101010" rhyme="6" line_length="6">Celý národ na ni.</l>
    </lg>
    <lg n="7">
     <l n="25" met="100010" line_length="6">Otevírej srdce,</l>
     <l n="26" met="101010" rhyme="7" line_length="6">Šlechto naše drahá,</l>
     <l n="27" met="001010" line_length="6">Ať i v tobě lásky</l>
     <l n="28" met="101010" rhyme="7" line_length="6">K otcům cit se zmáhá.</l>
    </lg>
    <lg n="8">
     <l n="29" met="100010" line_length="6">Otevírej srdce,</l>
     <l n="30" met="101010" rhyme="8" line_length="6">Šlechto české vlasti,</l>
     <l n="31" met="000010" line_length="6">By se v ně tvých otců</l>
     <l n="32" met="101010" rhyme="8" line_length="6">Popel mohl klásti!</l>
    </lg>
   </lg>
  </body>
