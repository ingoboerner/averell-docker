  <front>
   <head>Divno, věru divno,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" line_length="6">Divno, věru divno, </l>
     <l n="2" met="001000" rhyme="1" line_length="6">Jsem tak osamělý,</l>
     <l n="3" met="101000" line_length="6">Avšak ve srdci mém</l>
     <l n="4" met="100110" rhyme="1" line_length="6">Kryje se svět celý.</l>
     <l n="5" met="100010" line_length="6">Prostoru mé srdce</l>
     <l n="6" met="101000" rhyme="2" line_length="6">Tají nepřehlednou,</l>
     <l n="7" met="101000" line_length="6">Nebe nedosáhlé,</l>
     <l n="8" met="100100" rhyme="2" line_length="6">Hlubinu bezednou.</l>
    </lg>
   </lg>
