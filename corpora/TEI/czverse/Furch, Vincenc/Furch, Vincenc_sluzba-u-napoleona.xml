  <front>
   <head>Služba u Napoleona.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10001010" rhyme="1" line_length="8">Přidružil se orel bílý</l>
     <l n="2" met="101000" rhyme="2" line_length="6">K orlu francouzskému,</l>
     <l n="3" met="10001010" rhyme="1" line_length="8">Vynapíná svoje síly,</l>
     <l n="4" met="101010" rhyme="2" line_length="6">Aby sloužil jemu.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10001000" rhyme="3" line_length="8">O Rachel jak u Labana</l>
     <l n="6" met="101010" rhyme="4" line_length="6">Jakub službu koná –</l>
     <l n="7" met="10101010" line_length="8">Slouží Polák o zdar vlasti</l>
     <l n="8" met="100000" rhyme="4" line_length="6">u Napoleona. –</l>
    </lg>
    <lg n="3">
     <l n="9" met="10100010" rhyme="3" line_length="8">Místo Rachelky jest dána</l>
     <l n="10" met="101000" rhyme="5" line_length="6">Lea Jakubovi –</l>
     <l n="11" met="01001000" line_length="8">Co francouzský samovládce</l>
     <l n="12" met="101000" rhyme="5" line_length="6">Podal Polákovi? –</l>
    </lg>
   </lg>
  </body>
