  <front>
   <head>Krásných ideálů</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101000" line_length="6">Krásných ideálů </l>
     <l n="2" met="100010" rhyme="1" line_length="6">Poznal jsem již bludy,</l>
     <l n="3" met="100000" line_length="6">Skutečnost však též mi</l>
     <l n="4" met="100010" rhyme="1" line_length="6">Zjevila již trudy.</l>
     <l n="5" met="100010" line_length="6">Skutečnost je stromem</l>
     <l n="6" met="100010" rhyme="2" line_length="6">Bezekvětným, holým –</l>
     <l n="7" met="001010" line_length="6">Když pak volit musím:</l>
     <l n="8" met="100010" rhyme="2" line_length="6">Idealy volím.</l>
    </lg>
   </lg>
  </body>
