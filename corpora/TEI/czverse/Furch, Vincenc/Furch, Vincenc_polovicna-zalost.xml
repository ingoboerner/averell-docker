  <front>
   <head>Polovičná žalost,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100010" rhyme="1" line_length="6">Polovičná žalost, </l>
     <l n="2" met="001010" rhyme="2" line_length="6">Když kdo s námi kvílí,</l>
     <l n="3" met="100010" rhyme="1" line_length="6">Dvojitá jest radost,</l>
     <l n="4" met="001010" rhyme="2" line_length="6">Když ji jiný sdílí.</l>
     <l n="5" met="101000" rhyme="3" line_length="6">Svatá sympathie,</l>
     <l n="6" met="001010" rhyme="4" line_length="6">Ty jsi tvorů páskou.</l>
     <l n="7" met="101010" rhyme="3" line_length="6">Blahý, komu bije</l>
     <l n="8" met="101010" rhyme="4" line_length="6">Druhé srdce láskou.</l>
    </lg>
   </lg>
  </body>
