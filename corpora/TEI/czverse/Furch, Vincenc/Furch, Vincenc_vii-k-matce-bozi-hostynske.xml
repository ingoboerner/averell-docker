  <front>
   <head>VII. K matce boží Hostýnské</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010100" line_length="7">K matce boží Hostýnské </l>
     <l n="2" met="001000" rhyme="1" line_length="6">Vždy se utíkejme,</l>
     <l n="3" met="010010" rhyme="1" line_length="6">V ni důvěru mějme,</l>
     <l n="4" met="10100" line_length="5">Ona slyší nás!</l>
    </lg>
    <lg n="2">
     <l n="5" met="1010100" line_length="7">Matka boží Hostýnská</l>
     <l n="6" met="100010" rhyme="2" line_length="6">V ochranu nás vzala,</l>
     <l n="7" met="100010" rhyme="2" line_length="6">Vítězství nám dala</l>
     <l n="8" met="10000" line_length="5">Nad Mongolami.</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010100" line_length="7">Matka boží Hostýnská</l>
     <l n="10" met="001010" rhyme="3" line_length="6">Vždy nás chránit bude,</l>
     <l n="11" met="101010" rhyme="3" line_length="6">Naděj’ mějme všude</l>
     <l n="12" met="10100" line_length="5">V matku Hostýnskou!</l>
    </lg>
    <lg n="4">
     <l n="13" met="1000100" line_length="7">V Moravě a v cizině</l>
     <l n="14" met="001000" rhyme="4" line_length="6">K ní se utíkejme,</l>
     <l n="15" met="010010" rhyme="4" line_length="6">V ni důvěru mějme,</l>
     <l n="16" met="10100" line_length="5">Všude slyší nás!</l>
    </lg>
   </lg>
  </body>
