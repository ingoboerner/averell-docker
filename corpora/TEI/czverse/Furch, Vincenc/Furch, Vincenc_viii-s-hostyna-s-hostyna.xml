  <front>
   <head>VIII. S Hostýna, s Hostýna</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">S Hostýna, s Hostýna </l>
     <l n="2" met="101100" rhyme="1" line_length="6">Zvonek, slyš, zaznívá,</l>
     <l n="3" met="100100" line_length="6">Rodinu moravskou</l>
     <l n="4" met="100100" rhyme="1" line_length="6">K modlitbě vyzývá.</l>
    </lg>
    <lg n="2">
     <l n="5" met="110010" line_length="6">Syn moravský kleká,</l>
     <l n="6" met="001010" rhyme="2" line_length="6">Když ten zvonek slyší,</l>
     <l n="7" met="001010" line_length="6">Hned se v jeho srdci</l>
     <l n="8" met="100110" rhyme="2" line_length="6">Veškeren boj ztiší.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100010" line_length="6">Moravan se modlí –</l>
     <l n="10" met="101010" rhyme="3" line_length="6">Ticho vůkol něho –</l>
     <l n="11" met="110100" rhyme="1" line_length="6">Slyš, zvonek zaznívá</l>
     <l n="12" met="100100" rhyme="3" line_length="6">S Hostýna svatého!</l>
    </lg>
   </lg>
  </body>
