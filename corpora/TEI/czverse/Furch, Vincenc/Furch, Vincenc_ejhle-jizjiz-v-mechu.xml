  <front>
   <head>Ejhle, jižjiž v mechu</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="101010" rhyme="1" line_length="6">Ejhle, jižjiž v mechu </l>
     <l n="2" met="100010" rhyme="2" line_length="6">Fialka se jeví,</l>
     <l n="3" met="101010" rhyme="1" line_length="6">O svém sladkém dechu,</l>
     <l n="4" met="101010" rhyme="2" line_length="6">O své kráse neví.</l>
     <l n="5" met="101010" rhyme="3" line_length="6">Nebes rosu pije,</l>
     <l n="6" met="100010" rhyme="4" line_length="6">Hluché jsou jí hromy,</l>
     <l n="7" met="101010" rhyme="3" line_length="6">Tajný krásný žije</l>
     <l n="8" met="101000" rhyme="4" line_length="6">Život nevědomý.</l>
    </lg>
   </lg>
  </body>
