 <text>
  <front>
   <head>XII. Nemožná krásnějším,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" rhyme="1" line_length="6">Nemožná krásnějším, </l>
     <l n="2" met="101000" rhyme="1" line_length="6">Sladším, lahodnějším</l>
     <l n="3" met="101010" rhyme="2" line_length="6">Tebe jménem zváti,</l>
     <l n="4" met="101010" rhyme="2" line_length="6">Nežli jménem: „Máti!“</l>
    </lg>
    <lg n="2">
     <l n="5" met="101010" rhyme="3" line_length="6">Zem tě ctí a nebe</l>
     <l n="6" met="110010" rhyme="3" line_length="6">Zve královnou tebe,</l>
     <l n="7" met="001010" rhyme="2" line_length="6">Já však tobě vzdáti</l>
     <l n="8" met="011010" rhyme="2" line_length="6">Vždy chci jméno „Máti!“</l>
    </lg>
    <lg n="3">
     <l n="9" met="101000" rhyme="4" line_length="6">K tobě utíkám se,</l>
     <l n="10" met="101000" rhyme="4" line_length="6">Tobě oddávám se,</l>
     <l n="11" met="001010" rhyme="2" line_length="6">Dél se nechci báti –</l>
     <l n="12" met="001010" rhyme="2" line_length="6">Ty mě chráníš, Máti!</l>
    </lg>
    <lg n="4">
     <l n="13" met="101000" rhyme="5" line_length="6">Náruč otevíráš,</l>
     <l n="14" met="100100" rhyme="5" line_length="6">Slze mé setíráš,</l>
     <l n="15" met="101010" rhyme="2" line_length="6">Žalost má se krátí</l>
     <l n="16" met="100100" rhyme="2" line_length="6">V klíně tvém, o Máti!</l>
    </lg>
    <lg n="5">
     <l n="17" met="001010" rhyme="6" line_length="6">Ty jsi moje sladká</l>
     <l n="18" met="101010" rhyme="6" line_length="6">Lásky plná matka,</l>
     <l n="19" met="100110" rhyme="2" line_length="6">Bezpečně chci spáti</l>
     <l n="20" met="100100" rhyme="2" line_length="6">V lůně tvém, o Máti!</l>
    </lg>
   </lg>
  </body>
