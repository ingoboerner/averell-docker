  <front>
   <head>XXI. Rád sedám na břehu</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="110100" line_length="6">Rád sedám na břehu </l>
     <l n="2" met="100100" rhyme="1" line_length="6">Matičky Moravy,</l>
     <l n="3" met="001010" line_length="6">Když se k bouřce shání</l>
     <l n="4" met="100110" rhyme="1" line_length="6">Nade mnou mrak tmavý,</l>
    </lg>
    <lg n="2">
     <l n="5" met="010100" line_length="6">Tu zírám k Hostýnu,</l>
     <l n="6" met="101010" rhyme="2" line_length="6">Nad nímž nebe hřímá,</l>
     <l n="7" met="100010" line_length="6">Při hřmění a blesku</l>
     <l n="8" met="101100" rhyme="2" line_length="6">Duše má rozjímá.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100110" line_length="6">Nade mnou mrak plove,</l>
     <l n="10" met="010110" rhyme="3" line_length="6">Bouř ke mně zní z dálky,</l>
     <l n="11" met="101010" line_length="6">V blízku ale slyším</l>
     <l n="12" met="100100" rhyme="3" line_length="6">Pějící Rusálky.</l>
    </lg>
    <lg n="4">
     <l n="13" met="101100" line_length="6">Sladký zpěv Rusálek</l>
     <l n="14" met="101100" rhyme="4" line_length="6">Ke mně zní z Moravy:</l>
     <l n="15" met="100100" line_length="6">„Jinochu, Morava</l>
     <l n="16" met="100100" rhyme="4" line_length="6">Znova se oslaví!</l>
    </lg>
    <lg n="5">
     <l n="17" met="100010" line_length="6">O matčině slávě</l>
     <l n="18" met="100010" rhyme="5" line_length="6">Budeme ti zpívat,</l>
     <l n="19" met="101010" line_length="6">Zatím bude bratry</l>
     <l n="20" met="110100" rhyme="5" line_length="6">Hrom ze sna vyzývat.“</l>
    </lg>
    <lg n="6">
     <l n="21" met="101100" line_length="6">Plove mrak nade mnou,</l>
     <l n="22" met="010110" rhyme="6" line_length="6">Bouř ke mně zní z dálky,</l>
     <l n="23" met="101010" line_length="6">V blízku ale slyším</l>
     <l n="24" met="100100" rhyme="6" line_length="6">Těšící Rusálky.</l>
    </lg>
   </lg>
  </body>
