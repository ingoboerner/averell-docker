  <front>
   <head>Pomněnky, pomněnky,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Pomněnky, pomněnky, </l>
     <l n="2" met="100100" rhyme="1" line_length="6">Lahodně zkvítáte,</l>
     <l n="3" met="101000" line_length="6">S břehu do potoka</l>
     <l n="4" met="100100" rhyme="1" line_length="6">Toužebně hlídáte.</l>
     <l n="5" met="100100" line_length="6">Pomněnky, pomněnky,</l>
     <l n="6" met="100010" rhyme="2" line_length="6">Běda by vám bylo,</l>
     <l n="7" met="101010" line_length="6">Kdyby vaši touhu</l>
     <l n="8" met="101000" rhyme="2" line_length="6">Nebe vyplnilo.</l>
    </lg>
   </lg>
