  <front>
   <head>Dumka. (II.)</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" rhyme="1" line_length="8">Ejhle Polska – matky Slávy</l>
     <l n="2" met="101000" rhyme="2" line_length="6">Dcera nejpyšnější –</l>
     <l n="3" met="10101010" rhyme="1" line_length="8">Život ze svých sester tráví</l>
     <l n="4" met="100000" rhyme="2" line_length="6">Nejnepokojnější. –</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101010" rhyme="3" line_length="8">Ačač její trůn se sbořil –</l>
     <l n="6" met="011010" rhyme="4" line_length="6">Ač dlí ona v prachu: –</l>
     <l n="7" met="10101000" rhyme="3" line_length="8">Její duch se nepokořil –</l>
     <l n="8" met="101010" rhyme="4" line_length="6">Polska nezná strachu:</l>
    </lg>
    <lg n="3">
     <l n="9" met="10001010" rhyme="5" line_length="8">S osudem se ona hádá –</l>
     <l n="10" met="100100" rhyme="6" line_length="6">Válka to nerovná –</l>
     <l n="11" met="10001010" rhyme="5" line_length="8">Korunu svou zpátky žádá</l>
     <l n="12" met="100100" rhyme="6" line_length="6">Svržená královna! –</l>
    </lg>
   </lg>
  </body>
