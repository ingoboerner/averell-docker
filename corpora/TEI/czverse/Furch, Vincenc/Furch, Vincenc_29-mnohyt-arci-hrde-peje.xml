  <front>
   <head>29. Mnohýt’ arci hrdě pěje</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101010" rhyme="1" line_length="8">Mnohýt’ arci hrdě pěje </l>
     <l n="2" met="1010100" rhyme="2" line_length="7">Chválu růži červené,</l>
     <l n="3" met="10010010" rhyme="1" line_length="8">Jemuž se v obrazu směje</l>
     <l n="4" met="1001000" rhyme="2" line_length="7">Milosti odměněné.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101000" rhyme="3" line_length="8">Mého losu obraznice</l>
     <l n="6" met="1010100" rhyme="4" line_length="7">Bílá růže tajemná,</l>
     <l n="7" met="10010010" rhyme="3" line_length="8">Neboť mě neblaží více</l>
     <l n="8" met="1010100" rhyme="4" line_length="7">Sladká milost vzájemná.</l>
    </lg>
   </lg>
  </body>
