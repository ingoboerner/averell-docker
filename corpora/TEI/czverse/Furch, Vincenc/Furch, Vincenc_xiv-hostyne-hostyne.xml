  <front>
   <head>XIV. Hostýne, Hostýne,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100" line_length="6">Hostýne, Hostýne, </l>
     <l n="2" met="101000" rhyme="1" line_length="6">Hora památná jsi,</l>
     <l n="3" met="101000" line_length="6">Věrným Moravanům</l>
     <l n="4" met="101000" rhyme="1" line_length="6">Věčně posvátná jsi.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100" line_length="6">Z hluboka hledíme,</l>
     <l n="6" met="101010" rhyme="2" line_length="6">Horo svatá, k tobě,</l>
     <l n="7" met="101000" line_length="6">Sny v nás budějí se</l>
     <l n="8" met="100010" rhyme="2" line_length="6">O pradávné době.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100010" line_length="6">O pradávné době</l>
     <l n="10" met="010010" rhyme="3" line_length="6">K nám pověsti znějí,</l>
     <l n="11" met="100110" line_length="6">Slyšíme hluk války,</l>
     <l n="12" met="100010" rhyme="3" line_length="6">Duše nám se chvějí.</l>
    </lg>
    <lg n="4">
     <l n="13" met="100100" line_length="6">Znějí k nám pověsti</l>
     <l n="14" met="100100" rhyme="4" line_length="6">O víře neměnné,</l>
     <l n="15" met="010010" line_length="6">I modlí se naše</l>
     <l n="16" met="101000" rhyme="4" line_length="6">Srdce roznícené.</l>
    </lg>
   </lg>
  </body>
