  <front>
   <head>109. Na přítele N.</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010100" rhyme="1" line_length="7">Kdyby přišlo k známosti</l>
     <l n="2" met="100010" rhyme="2" line_length="6">Šlechetné tvé srdce,</l>
     <l n="3" met="1010100" rhyme="1" line_length="7">Bylbys v velké vážnosti,</l>
     <l n="4" met="101010" rhyme="2" line_length="6">U všech lidí brzce.</l>
     <l n="5" met="1000100" rhyme="3" line_length="7">Zdá se mi že jediná</l>
     <l n="6" met="1000100" rhyme="3" line_length="7">Překáží ta příčina;</l>
     <l n="7" met="001010" rhyme="4" line_length="6">Že své hojné ctnosti</l>
     <l n="8" met="101000" rhyme="4" line_length="6">Stavíš do temnosti.</l>
    </lg>
   </lg>
  </body>
