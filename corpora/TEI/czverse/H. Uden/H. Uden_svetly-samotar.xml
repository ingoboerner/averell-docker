  <front>
   <head>Světlý samotář</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10100" rhyme="1" line_length="5">Světlý samotář </l>
     <l n="2" met="10001010" rhyme="2" line_length="8">k umrzlé se zemi shýbá,</l>
     <l n="3" met="10101010" rhyme="2" line_length="8">tvrdé hroudy vřele líbá</l>
     <l n="4" met="10101" rhyme="1" line_length="5">slunce třpytná tvář.</l>
    </lg>
    <lg n="2">
     <l n="5" met="10101" rhyme="1" line_length="5">Lásky svatá zář</l>
     <l n="6" met="10001010" rhyme="2" line_length="8">předsudky a pravdou hýbá,</l>
     <l n="7" met="00101010" rhyme="2" line_length="8">že se mění v ctnost i chyba,</l>
     <l n="8" met="10001" rhyme="1" line_length="5">ve proroka lhář.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10101010" rhyme="3" line_length="8">Den je krátký, rychle mizí</l>
     <l n="10" met="10101000" rhyme="4" line_length="8">a když hroudy neroztají,</l>
     <l n="11" met="10101010" rhyme="5" line_length="8">slunce od nich dále spěchá;</l>
    </lg>
    <lg n="4">
     <l n="12" met="10011010" rhyme="3" line_length="8">se sluncem jde láska ryzí,</l>
     <l n="13" met="00101000" rhyme="4" line_length="8">když ji lidé nepoznají,</l>
     <l n="14" met="10001010" rhyme="5" line_length="8">v hříchu je a ve tmách nechá.</l>
    </lg>
   </lg>
  </body>
