 <text>
  <front>
   <head>Tu a tam sluneční jasy</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="01010010" rhyme="1" line_length="8">Tu a tam sluneční jasy </l>
     <l n="2" met="1000100" rhyme="2" line_length="7">po vlnách se rozlily</l>
     <l n="3" met="1000100" rhyme="2" line_length="7">zrajícího obilí</l>
     <l n="4" met="10010010" rhyme="1" line_length="8">drobnými zlatými klasy,</l>
    </lg>
    <lg n="2">
     <l n="5" met="10010010" rhyme="1" line_length="8">krátkými plavými vlasy,</l>
     <l n="6" met="1010100" rhyme="2" line_length="7">které šíji pokryly</l>
     <l n="7" met="1000100" rhyme="2" line_length="7">těkavými motýli,</l>
     <l n="8" met="10001010" rhyme="1" line_length="8">drahokamy žhavé krásy.</l>
    </lg>
    <lg n="3">
     <l n="9" met="10101010" rhyme="3" line_length="8">Každá jiskra sama září,</l>
     <l n="10" met="10100010" rhyme="4" line_length="8">všecky dohromady ale</l>
     <l n="11" met="10001010" rhyme="5" line_length="8">paprskem se přece zdají,</l>
    </lg>
    <lg n="4">
     <l n="12" met="10101010" rhyme="4" line_length="8">jako blaha drobty malé,</l>
     <l n="13" met="10001010" rhyme="3" line_length="8">kterými nás život daří,</l>
     <l n="14" met="10101000" rhyme="5" line_length="8">lidé štěstím nazývají.</l>
    </lg>
   </lg>
  </body>
