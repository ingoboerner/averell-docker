  <front>
   <head>Studna vyschlá, prázdná, vyčerpaná,</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010101000" rhyme="1" line_length="10">Studna vyschlá, prázdná, vyčerpaná, </l>
     <l n="2" met="0010101010" rhyme="2" line_length="10">v niž se těžký okov marně hrouží,</l>
     <l n="3" met="1010100010" rhyme="2" line_length="10">zimní den, jenž přímrakem se plouží,</l>
     <l n="4" met="1000101010" rhyme="1" line_length="10">pokolení, které nezná rána,</l>
    </lg>
    <lg n="2">
     <l n="5" met="1010101010" rhyme="1" line_length="10">zlem jsou nutným. Pléva vichrem hnaná</l>
     <l n="6" met="0010100010" rhyme="2" line_length="10">vše, co žije, zmítá se a krouží;</l>
     <l n="7" met="0010101010" rhyme="2" line_length="10">jak je ale chmurným, jak se dlouží</l>
     <l n="8" met="1000101010" rhyme="1" line_length="10">úpadek a doba jeho planá!</l>
    </lg>
    <lg n="3">
     <l n="9" met="1010101000" rhyme="3" line_length="10">Slunce, které teprv odpoledne</l>
     <l n="10" met="1000101010" rhyme="3" line_length="10">úkosem a krátce k zemi shledne,</l>
     <l n="11" met="1000101000" rhyme="4" line_length="10">odvrací se v tísni odmítavé,</l>
    </lg>
    <lg n="4">
     <l n="12" met="1010011010" rhyme="4" line_length="10">večer bezhvězdný, stín noci tmavé</l>
     <l n="13" met="1010001010" rhyme="5" line_length="10">téměř naději a víru dusí</l>
     <l n="14" met="1010101010" rhyme="5" line_length="10">v jaro spasné, které přijít musí.</l>
    </lg>
   </lg>
  </body>
