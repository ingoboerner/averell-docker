  <front>
   <head>Nesmírně vznešený, veliký</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="100100100" line_length="9">Nesmírně vznešený, veliký </l>
     <l n="2" met="10010010" rhyme="1" line_length="8">Stvořitel, živitel všeho!</l>
     <l n="3" met="100101100" line_length="9">Slunce i hvězdy jdou poslušně</l>
     <l n="4" met="10010010" rhyme="1" line_length="8">vůlí a zákonem jeho.</l>
    </lg>
    <lg n="2">
     <l n="5" met="100100100" line_length="9">Milion světů svých letících</l>
     <l n="6" met="10010010" rhyme="2" line_length="8">uvedl v soulad i shodu,</l>
     <l n="7" met="100100100" line_length="9">k němu svou hlavičku pozvédá</l>
     <l n="8" met="10010010" rhyme="2" line_length="8">kuřátko pijící vodu.</l>
    </lg>
    <lg n="3">
     <l n="9" met="100100100" line_length="9">Jemu se otvírá z poupěte</l>
     <l n="10" met="10010010" rhyme="3" line_length="8">růžička letního rána,</l>
     <l n="11" met="100100100" line_length="9">na listech přírody přehojná</l>
     <l n="12" met="10010010" rhyme="3" line_length="8">tajemství jeho jsou psána!</l>
    </lg>
   </lg>
  </body>
