  <front>
   <head>100 Stovku drobných pomyšlení</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="10101000" line_length="8">Stovku drobných pomyšlení </l>
     <l n="2" met="100010" rhyme="1" line_length="6">vyjádřených slovy</l>
     <l n="3" met="10001000" line_length="8">předkládá zde spisovatel</l>
     <l n="4" met="101000" rhyme="1" line_length="6">svému čtenářovi.</l>
     <l n="5" met="10001010" rhyme="2" line_length="8">Odstavuje jiná přání,</l>
     <l n="6" met="10001000" rhyme="2" line_length="8">snaží se jen o uznání,</l>
     <l n="7" met="00101010" rhyme="3" line_length="8">že jsou tyto jeho listy</l>
     <l n="8" met="10101010" rhyme="3" line_length="8">jako rosa v květu čisty!</l>
    </lg>
   </lg>
  </body>
