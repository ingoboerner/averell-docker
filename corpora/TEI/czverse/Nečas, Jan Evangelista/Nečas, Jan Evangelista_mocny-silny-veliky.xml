 <text>
  <front>
   <head>Mocný, Silný, Veliký!</head>
  </front>
  <body>
   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="1010100" line_length="7">Mocný, Silný, Veliký! </l>
     <l n="2" met="100100" rhyme="1" line_length="6">Vladaři věčnosti!</l>
     <l n="3" met="01010100" line_length="8">Ty, který svítíš do temnot</l>
     <l n="4" met="100100" rhyme="1" line_length="6">na stezku ke ctnosti,</l>
     <l n="5" met="0100" line_length="4">buď veleben!</l>
    </lg>
    <lg n="2">
     <l n="6" met="01010100" line_length="8">Ty, jehož moudrost vesmíru</l>
     <l n="7" met="100100" rhyme="2" line_length="6">určila zákony,</l>
     <l n="8" met="01010100" line_length="8">a chce, by člověk znenáhla</l>
     <l n="9" met="100100" rhyme="2" line_length="6">zvedal jich záclony,</l>
     <l n="10" met="0100" line_length="4">buď veleben!</l>
    </lg>
    <lg n="3">
     <l n="11" met="01010100" line_length="8">Ty, který krásou odíváš</l>
     <l n="12" met="100100" rhyme="3" line_length="6">korunku květovou,</l>
     <l n="13" met="01010100" line_length="8">a v letu věčném držíš svou</l>
     <l n="14" met="100100" rhyme="3" line_length="6">soustavu světovou,</l>
     <l n="15" met="0100" line_length="4">buď veleben!</l>
    </lg>
   </lg>
  </body>
