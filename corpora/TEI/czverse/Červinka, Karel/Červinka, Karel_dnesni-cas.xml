   <lg xmlns="http://www.tei-c.org/ns/1.0" type="poem">
    <lg n="1">
     <l n="1" met="11010100" rhyme="1" line_length="8">Čas dnešní nijak nehaním,</l>
     <l n="2" met="0101010" rhyme="2" line_length="7">to pravda každým pádem:</l>
     <l n="3" met="11010100" rhyme="1" line_length="8">mře boháč břicha přecpáním</l>
     <l n="4" met="0101010" rhyme="2" line_length="7">a chuďas zatím hladem.</l>
    </lg>
   </lg>
