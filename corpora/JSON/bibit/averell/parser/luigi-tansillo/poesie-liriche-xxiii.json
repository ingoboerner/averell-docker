                        }
                    ]
                },
                {
                    "line_number": 24,
                    "line_text": "Vederla, udirla, ritrovarla ognora.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Vederla,"
                        },
                        {
