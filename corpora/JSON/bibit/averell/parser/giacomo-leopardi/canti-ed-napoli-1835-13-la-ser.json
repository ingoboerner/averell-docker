                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "notte"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "senza"
                        },
                        {
                            "word_text": "vento,"
                        }
                    ]
                },
                {
                    "line_number": 2,
                    "line_text": "E queta sovra i tetti e in mezzo agli orti",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "queta"
                        },
                        {
                            "word_text": "sovra"
                        },
                        {
                            "word_text": "i"
                        },
                        {
                            "word_text": "tetti"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "mezzo"
                        },
                        {
                            "word_text": "agli"
                        },
                        {
                            "word_text": "orti"
                        }
                    ]
                },
                {
                    "line_number": 3,
                    "line_text": "Posa la luna, e di lontan rivela",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Posa"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "luna,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "di"
                        },
                        {
                            "word_text": "lontan"
                        },
                        {
                            "word_text": "rivela"
                        }
                    ]
                },
                {
                    "line_number": 4,
                    "line_text": "Serena ogni montagna. O donna mia,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Serena"
                        },
                        {
                            "word_text": "ogni"
                        },
                        {
                            "word_text": "montagna."
                        },
                        {
                            "word_text": "O"
                        },
                        {
                            "word_text": "donna"
                        },
                        {
                            "word_text": "mia,"
                        }
                    ]
                },
                {
                    "line_number": 5,
                    "line_text": "Già tace ogni sentiero, e pei balconi",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Già"
                        },
                        {
                            "word_text": "tace"
                        },
                        {
                            "word_text": "ogni"
                        },
                        {
                            "word_text": "sentiero,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "pei"
                        },
                        {
                            "word_text": "balconi"
                        }
                    ]
                },
                {
                    "line_number": 6,
                    "line_text": "Rara traluce la notturna lampa:",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Rara"
                        },
                        {
                            "word_text": "traluce"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "notturna"
                        },
                        {
                            "word_text": "lampa:"
                        }
                    ]
                },
                {
                    "line_number": 7,
                    "line_text": "Tu dormi, che t'accolse agevol sonno",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Tu"
                        },
                        {
                            "word_text": "dormi,"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "t'accolse"
                        },
                        {
                            "word_text": "agevol"
                        },
                        {
                            "word_text": "sonno"
                        }
                    ]
                },
                {
                    "line_number": 8,
                    "line_text": "Nelle tue chete stanze; e non ti morde",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Nelle"
                        },
                        {
                            "word_text": "tue"
                        },
                        {
                            "word_text": "chete"
                        },
                        {
                            "word_text": "stanze;"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "ti"
                        },
                        {
                            "word_text": "morde"
                        }
                    ]
                },
                {
                    "line_number": 9,
                    "line_text": "Cura nessuna; e già non sai nè pensi",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Cura"
                        },
                        {
                            "word_text": "nessuna;"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "già"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "sai"
                        },
                        {
                            "word_text": "nè"
                        },
                        {
                            "word_text": "pensi"
                        }
                    ]
                },
                {
                    "line_number": 10,
                    "line_text": "Quanta piaga m'apristi in mezzo al petto.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Quanta"
                        },
                        {
                            "word_text": "piaga"
                        },
                        {
                            "word_text": "m'apristi"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "mezzo"
                        },
                        {
                            "word_text": "al"
                        },
                        {
                            "word_text": "petto."
                        }
                    ]
                },
                {
                    "line_number": 11,
                    "line_text": "Tu dormi: io questo ciel, che sì benigno",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Tu"
                        },
                        {
                            "word_text": "dormi:"
                        },
                        {
                            "word_text": "io"
                        },
                        {
                            "word_text": "questo"
                        },
                        {
                            "word_text": "ciel,"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "sì"
                        },
                        {
                            "word_text": "benigno"
                        }
                    ]
                },
                {
                    "line_number": 12,
                    "line_text": "Appare in vista, a salutar m'affaccio,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Appare"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "vista,"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "salutar"
                        },
                        {
                            "word_text": "m'affaccio,"
                        }
                    ]
                },
                {
                    "line_number": 13,
                    "line_text": "E l'antica natura onnipossente,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "l'antica"
                        },
                        {
                            "word_text": "natura"
                        },
                        {
                            "word_text": "onnipossente,"
                        }
                    ]
                },
                {
                    "line_number": 14,
                    "line_text": "Che mi fece all'affanno. A te la speme",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Che"
                        },
                        {
                            "word_text": "mi"
                        },
                        {
                            "word_text": "fece"
                        },
                        {
                            "word_text": "all'affanno."
                        },
                        {
                            "word_text": "A"
                        },
                        {
                            "word_text": "te"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "speme"
                        }
                    ]
                },
                {
                    "line_number": 15,
                    "line_text": "Nego, mi disse, anche la speme; e d'altro",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Nego,"
                        },
                        {
                            "word_text": "mi"
                        },
                        {
                            "word_text": "disse,"
                        },
                        {
                            "word_text": "anche"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "speme;"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "d'altro"
                        }
                    ]
                },
                {
                    "line_number": 16,
                    "line_text": "Non brillin gli occhi tuoi se non di pianto.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Non"
                        },
                        {
                            "word_text": "brillin"
                        },
                        {
                            "word_text": "gli"
                        },
                        {
                            "word_text": "occhi"
                        },
                        {
                            "word_text": "tuoi"
                        },
                        {
                            "word_text": "se"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "di"
                        },
                        {
                            "word_text": "pianto."
                        }
                    ]
                },
                {
                    "line_number": 17,
                    "line_text": "Questo dì fu solenne: or da' trastulli",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Questo"
                        },
                        {
                            "word_text": "dì"
                        },
                        {
                            "word_text": "fu"
                        },
                        {
                            "word_text": "solenne:"
                        },
                        {
                            "word_text": "or"
                        },
                        {
                            "word_text": "da'"
                        },
                        {
                            "word_text": "trastulli"
                        }
                    ]
                },
                {
                    "line_number": 18,
                    "line_text": "Prendi riposo; e forse ti rimembra",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Prendi"
                        },
                        {
                            "word_text": "riposo;"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "forse"
                        },
                        {
                            "word_text": "ti"
                        },
                        {
                            "word_text": "rimembra"
                        }
                    ]
                },
                {
                    "line_number": 19,
                    "line_text": "In sogno a quanti oggi piacesti, e quanti",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "In"
                        },
                        {
                            "word_text": "sogno"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "quanti"
                        },
                        {
                            "word_text": "oggi"
                        },
                        {
                            "word_text": "piacesti,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "quanti"
                        }
                    ]
                },
                {
                    "line_number": 20,
                    "line_text": "Piacquero a te: non io, non già, ch'io speri,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Piacquero"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "te:"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "io,"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "già,"
                        },
                        {
                            "word_text": "ch'io"
                        },
                        {
                            "word_text": "speri,"
                        }
                    ]
                },
                {
                    "line_number": 21,
                    "line_text": "Al pensier ti ricorro. Intanto io chieggo",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Al"
                        },
                        {
                            "word_text": "pensier"
                        },
                        {
                            "word_text": "ti"
                        },
                        {
                            "word_text": "ricorro."
                        },
                        {
                            "word_text": "Intanto"
                        },
                        {
                            "word_text": "io"
                        },
                        {
                            "word_text": "chieggo"
                        }
                    ]
                },
                {
                    "line_number": 22,
                    "line_text": "Quanto a viver mi resti, e qui per terra",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Quanto"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "viver"
                        },
                        {
                            "word_text": "mi"
                        },
                        {
                            "word_text": "resti,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "qui"
                        },
                        {
                            "word_text": "per"
                        },
                        {
                            "word_text": "terra"
                        }
                    ]
                },
                {
                    "line_number": 23,
                    "line_text": "Mi getto, e grido, e fremo. Oh giorni orrendi",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Mi"
                        },
                        {
                            "word_text": "getto,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "grido,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "fremo."
                        },
                        {
                            "word_text": "Oh"
                        },
                        {
                            "word_text": "giorni"
                        },
                        {
                            "word_text": "orrendi"
                        }
                    ]
                },
                {
                    "line_number": 24,
                    "line_text": "In così verde etate! Ahi, per la via",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "In"
                        },
                        {
                            "word_text": "così"
                        },
                        {
                            "word_text": "verde"
                        },
                        {
                            "word_text": "etate!"
                        },
                        {
                            "word_text": "Ahi,"
                        },
                        {
                            "word_text": "per"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "via"
                        }
                    ]
                },
                {
                    "line_number": 25,
                    "line_text": "Odo non lunge il solitario canto",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Odo"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "lunge"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "solitario"
                        },
                        {
                            "word_text": "canto"
                        }
                    ]
                },
                {
                    "line_number": 26,
                    "line_text": "Dell'artigian, che riede a tarda notte,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Dell'artigian,"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "riede"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "tarda"
                        },
                        {
                            "word_text": "notte,"
                        }
                    ]
                },
                {
                    "line_number": 27,
                    "line_text": "Dopo i sollazzi, al suo povero ostello;",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Dopo"
                        },
                        {
                            "word_text": "i"
                        },
                        {
                            "word_text": "sollazzi,"
                        },
                        {
                            "word_text": "al"
                        },
                        {
                            "word_text": "suo"
                        },
                        {
                            "word_text": "povero"
                        },
                        {
                            "word_text": "ostello;"
                        }
                    ]
                },
                {
                    "line_number": 28,
                    "line_text": "E fieramente mi si stringe il core,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "fieramente"
                        },
                        {
                            "word_text": "mi"
                        },
                        {
                            "word_text": "si"
                        },
                        {
                            "word_text": "stringe"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "core,"
                        }
                    ]
                },
                {
                    "line_number": 29,
                    "line_text": "A pensar come tutto al mondo passa,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "A"
                        },
                        {
                            "word_text": "pensar"
                        },
                        {
                            "word_text": "come"
                        },
                        {
                            "word_text": "tutto"
                        },
                        {
                            "word_text": "al"
                        },
                        {
                            "word_text": "mondo"
                        },
                        {
                            "word_text": "passa,"
                        }
                    ]
                },
                {
                    "line_number": 30,
                    "line_text": "E quasi orma non lascia. Ecco è fuggito",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "quasi"
                        },
                        {
                            "word_text": "orma"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "lascia."
                        },
                        {
                            "word_text": "Ecco"
                        },
                        {
                            "word_text": "è"
                        },
                        {
                            "word_text": "fuggito"
                        }
                    ]
                },
                {
                    "line_number": 31,
                    "line_text": "Il dì festivo, ed al festivo il giorno",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Il"
                        },
                        {
                            "word_text": "dì"
                        },
                        {
                            "word_text": "festivo,"
                        },
                        {
                            "word_text": "ed"
                        },
                        {
                            "word_text": "al"
                        },
                        {
                            "word_text": "festivo"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "giorno"
                        }
                    ]
                },
                {
                    "line_number": 32,
                    "line_text": "Volgar succede, e se ne porta il tempo",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Volgar"
                        },
                        {
                            "word_text": "succede,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "se"
                        },
                        {
                            "word_text": "ne"
                        },
                        {
                            "word_text": "porta"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "tempo"
                        }
                    ]
                },
                {
                    "line_number": 33,
                    "line_text": "Ogni umano accidente. Or dov'è il suono",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ogni"
                        },
                        {
                            "word_text": "umano"
                        },
                        {
                            "word_text": "accidente."
                        },
                        {
                            "word_text": "Or"
                        },
                        {
                            "word_text": "dov'è"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "suono"
                        }
                    ]
                },
                {
                    "line_number": 34,
                    "line_text": "Di que' popoli antichi? or dov'è il grido",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Di"
                        },
                        {
                            "word_text": "que'"
                        },
                        {
                            "word_text": "popoli"
                        },
                        {
                            "word_text": "antichi?"
                        },
                        {
                            "word_text": "or"
                        },
                        {
                            "word_text": "dov'è"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "grido"
                        }
                    ]
                },
                {
                    "line_number": 35,
                    "line_text": "De' nostri avi famosi, e il grande impero",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "De'"
                        },
                        {
                            "word_text": "nostri"
                        },
                        {
                            "word_text": "avi"
                        },
                        {
                            "word_text": "famosi,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "grande"
                        },
                        {
                            "word_text": "impero"
                        }
                    ]
                },
                {
                    "line_number": 36,
                    "line_text": "Di quella Roma, e l'armi, e il fragorio",
                    "metrical_pattern": null,
                    "line_length": null,
