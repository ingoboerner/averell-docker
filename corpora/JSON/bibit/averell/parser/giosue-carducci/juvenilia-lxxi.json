                        },
                        {
                            "word_text": "dita,"
                        }
                    ]
                },
                {
                    "line_number": 20,
                    "line_text": "Mirtillo mio, farem buona riuscita.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Mirtillo"
                        },
                        {
                            "word_text": "mio,"
                        },
                        {
                            "word_text": "farem"
                        },
                        {
