                        },
                        {
                            "word_text": "stridea"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "roggia"
                        }
                    ]
                },
                {
                    "line_number": 17,
                    "line_text": "Alluvione de' vulcani, intorno",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Alluvione"
                        },
                        {
                            "word_text": "de'"
                        },
                        {
                            "word_text": "vulcani,"
                        },
                        {
                            "word_text": "intorno"
                        }
                    ]
                },
                {
                    "line_number": 18,
                    "line_text": "Funereo lume coruscando; e sempre",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
