                        },
                        {
                            "word_text": "materia"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "le"
                        },
                        {
                            "word_text": "vicende"
                        },
                        {
                            "word_text": "eterne"
                        }
                    ]
                },
                {
                    "line_number": 8,
                    "line_text": "L'immane salma, per lo gran deserto",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "L'immane"
