                        },
                        {
                            "word_text": "sempre"
                        }
                    ]
                },
                {
                    "line_number": 19,
                    "line_text": "Caligavan le cime ardue tonanti;",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Caligavan"
                        },
                        {
