                        }
                    ]
                },
                {
                    "line_number": 28,
                    "line_text": "Uno era il nido: al fanciulletto atroce",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Uno"
                        },
                        {
                            "word_text": "era"
                        },
                        {
