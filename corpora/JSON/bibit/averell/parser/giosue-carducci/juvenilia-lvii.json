                {
                    "line_number": 2,
                    "line_text": "Per la gran selva de la terra il nato",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Per"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "gran"
                        },
