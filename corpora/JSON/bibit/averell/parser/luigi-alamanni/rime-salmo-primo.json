                            "word_text": "van"
                        },
                        {
                            "word_text": "nostro"
                        },
                        {
                            "word_text": "desire!"
                        }
                    ]
                },
                {
                    "line_number": 14,
                    "line_text": "Superbamente già d'alzarmi a volo,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Superbamente"
                        },
                        {
                            "word_text": "già"
                        },
                        {
                            "word_text": "d'alzarmi"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "volo,"
                        }
                    ]
                },
                {
                    "line_number": 15,
                    "line_text": "U' scende più chi più crede alto gire;",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "U'"
                        },
                        {
                            "word_text": "scende"
                        },
                        {
                            "word_text": "più"
                        },
                        {
                            "word_text": "chi"
                        },
                        {
                            "word_text": "più"
                        },
                        {
                            "word_text": "crede"
                        },
                        {
                            "word_text": "alto"
                        },
                        {
                            "word_text": "gire;"
                        }
                    ]
                },
                {
                    "line_number": 16,
                    "line_text": "Come già di tua grazia ignudo e solo",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Come"
                        },
                        {
                            "word_text": "già"
                        },
                        {
                            "word_text": "di"
                        },
                        {
                            "word_text": "tua"
                        },
                        {
                            "word_text": "grazia"
                        },
                        {
                            "word_text": "ignudo"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "solo"
                        }
                    ]
                },
                {
                    "line_number": 17,
                    "line_text": "Il mio falso veder, che nulla vede,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Il"
                        },
                        {
                            "word_text": "mio"
                        },
                        {
                            "word_text": "falso"
                        },
                        {
                            "word_text": "veder,"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "nulla"
                        },
                        {
                            "word_text": "vede,"
                        }
                    ]
                },
                {
                    "line_number": 18,
                    "line_text": "Pregiato ho molto intra 'l vulgare stuolo:",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Pregiato"
                        },
                        {
                            "word_text": "ho"
                        },
                        {
                            "word_text": "molto"
                        },
                        {
