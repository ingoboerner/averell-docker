                        },
                        {
                            "word_text": "sgombra."
                        }
                    ]
                },
                {
                    "line_number": 25,
                    "line_text": "Volgi omai gli occhi alle pungenti spine",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Volgi"
                        },
                        {
                            "word_text": "omai"
                        },
                        {
