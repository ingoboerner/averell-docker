                        },
                        {
                            "word_text": "'l"
                        },
                        {
                            "word_text": "vulgare"
                        },
                        {
                            "word_text": "stuolo:"
                        }
                    ]
                },
                {
                    "line_number": 19,
                    "line_text": "Come al mio travagliar sol per mercede",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Come"
                        },
                        {
                            "word_text": "al"
                        },
                        {
                            "word_text": "mio"
                        },
                        {
                            "word_text": "travagliar"
                        },
                        {
                            "word_text": "sol"
