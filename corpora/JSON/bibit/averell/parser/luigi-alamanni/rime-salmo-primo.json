            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Signor del ciel cui nulla ascoso giace,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Signor"
                        },
