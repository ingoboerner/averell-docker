                        {
                            "word_text": "aspro"
                        },
                        {
                            "word_text": "diserto"
                        }
                    ]
                },
                {
                    "line_number": 5,
                    "line_text": "Delle rie colpe, e tua somma pietate",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Delle"
                        },
                        {
                            "word_text": "rie"
                        },
                        {
