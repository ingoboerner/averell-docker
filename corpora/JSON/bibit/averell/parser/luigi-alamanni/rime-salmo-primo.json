                        },
                        {
                            "word_text": "ginocchia"
                        },
                        {
                            "word_text": "della"
                        },
                        {
                            "word_text": "mente"
                        },
                        {
                            "word_text": "inchine"
                        }
                    ]
                },
                {
                    "line_number": 24,
                    "line_text": "Torno a quel lume ch'ogni vizio sgombra.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Torno"
                        },
