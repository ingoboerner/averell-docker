                        },
                        {
                            "word_text": "già"
                        },
                        {
                            "word_text": "folle"
                        },
                        {
                            "word_text": "ardire"
                        }
                    ]
                },
                {
                    "line_number": 12,
                    "line_text": "Quel ch'era di te sol chiamato ho mio.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Quel"
                        },
                        {
                            "word_text": "ch'era"
                        },
                        {
                            "word_text": "di"
