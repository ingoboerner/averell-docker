                        {
                            "word_text": "occhi"
                        },
                        {
                            "word_text": "alle"
                        },
                        {
                            "word_text": "pungenti"
                        },
                        {
                            "word_text": "spine"
                        }
                    ]
                },
                {
                    "line_number": 26,
                    "line_text": "Di penitenza, che m'avvince il core,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Di"
                        },
