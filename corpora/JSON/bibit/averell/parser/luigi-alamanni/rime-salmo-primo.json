                        {
                            "word_text": "per"
                        },
                        {
                            "word_text": "mercede"
                        }
                    ]
                },
                {
                    "line_number": 20,
                    "line_text": "Bramato ho sempre quel vil fumo ed ombra",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Bramato"
                        },
                        {
                            "word_text": "ho"
                        },
                        {
                            "word_text": "sempre"
                        },
                        {
                            "word_text": "quel"
                        },
                        {
                            "word_text": "vil"
                        },
                        {
