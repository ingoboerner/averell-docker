                        },
                        {
                            "word_text": "nome"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "me"
                        },
                        {
                            "word_text": "posto"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "oblio"
                        }
                    ]
                },
                {
                    "line_number": 9,
                    "line_text": "Pel cieco onor d'esta mondana etate,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Pel"
                        },
                        {
                            "word_text": "cieco"
                        },
                        {
                            "word_text": "onor"
                        },
                        {
                            "word_text": "d'esta"
                        },
                        {
                            "word_text": "mondana"
                        },
                        {
                            "word_text": "etate,"
                        }
                    ]
                },
                {
                    "line_number": 10,
                    "line_text": "Perdona il mio peccar, verace Iddio,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Perdona"
                        },
                        {
