{
    "poem_title": "Rime - AMOR FUGGITIVO.",
    "author": "Luigi Alamanni",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Venere il figlio Amor cercando giva,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Venere"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "figlio"
                        },
                        {
                            "word_text": "Amor"
                        },
                        {
                            "word_text": "cercando"
                        },
                        {
                            "word_text": "giva,"
                        }
                    ]
                },
                {
                    "line_number": 2,
                    "line_text": "E chiamandol dicea per ogni riva:",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "chiamandol"
                        },
                        {
                            "word_text": "dicea"
                        },
                        {
                            "word_text": "per"
                        },
                        {
                            "word_text": "ogni"
                        },
                        {
                            "word_text": "riva:"
                        }
                    ]
                },
                {
                    "line_number": 3,
                    "line_text": "A chi m'insegna Amor da me fuggito,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "A"
                        },
                        {
                            "word_text": "chi"
                        },
                        {
                            "word_text": "m'insegna"
                        },
                        {
                            "word_text": "Amor"
                        },
                        {
                            "word_text": "da"
                        },
                        {
                            "word_text": "me"
                        },
                        {
                            "word_text": "fuggito,"
                        }
                    ]
                },
                {
                    "line_number": 4,
                    "line_text": "Dono un bacio in mercede; a chi sia ardito",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Dono"
                        },
                        {
                            "word_text": "un"
                        },
                        {
                            "word_text": "bacio"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "mercede;"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "chi"
                        },
                        {
                            "word_text": "sia"
                        },
                        {
                            "word_text": "ardito"
                        }
                    ]
                },
                {
                    "line_number": 5,
                    "line_text": "Di rimenarlo a me, prometto e giuro,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Di"
                        },
                        {
                            "word_text": "rimenarlo"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "me,"
                        },
                        {
                            "word_text": "prometto"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "giuro,"
                        }
                    ]
                },
                {
                    "line_number": 6,
                    "line_text": "Che assai più gli darò che un bacio puro.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Che"
                        },
                        {
                            "word_text": "assai"
                        },
                        {
                            "word_text": "più"
                        },
                        {
                            "word_text": "gli"
                        },
                        {
                            "word_text": "darò"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "un"
                        },
                        {
                            "word_text": "bacio"
                        },
                        {
                            "word_text": "puro."
                        }
                    ]
                },
                {
                    "line_number": 7,
                    "line_text": "Ha tai segni il fanciullo, ha tali arnesi",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ha"
                        },
                        {
                            "word_text": "tai"
                        },
                        {
                            "word_text": "segni"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "fanciullo,"
                        },
                        {
                            "word_text": "ha"
                        },
                        {
                            "word_text": "tali"
                        },
                        {
                            "word_text": "arnesi"
                        }
                    ]
                },
                {
                    "line_number": 8,
                    "line_text": "Ch'al suo primo apparir saran palesi.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ch'al"
                        },
                        {
                            "word_text": "suo"
                        },
                        {
                            "word_text": "primo"
                        },
                        {
                            "word_text": "apparir"
                        },
                        {
                            "word_text": "saran"
                        },
                        {
                            "word_text": "palesi."
                        }
                    ]
                },
                {
                    "line_number": 9,
                    "line_text": "Non ha bianco il color, ma sembra foco,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Non"
                        },
                        {
                            "word_text": "ha"
                        },
                        {
                            "word_text": "bianco"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "color,"
                        },
                        {
                            "word_text": "ma"
                        },
                        {
                            "word_text": "sembra"
                        },
                        {
                            "word_text": "foco,"
                        }
                    ]
                },
                {
                    "line_number": 10,
                    "line_text": "Gli occhi ardenti, moventi, e pien di gioco,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Gli"
                        },
                        {
                            "word_text": "occhi"
                        },
                        {
                            "word_text": "ardenti,"
                        },
                        {
                            "word_text": "moventi,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "pien"
                        },
                        {
                            "word_text": "di"
                        },
                        {
                            "word_text": "gioco,"
                        }
                    ]
                },
                {
                    "line_number": 11,
                    "line_text": "Dolce voce e parlar, crudele il core,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Dolce"
                        },
                        {
                            "word_text": "voce"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "parlar,"
                        },
                        {
                            "word_text": "crudele"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "core,"
                        }
                    ]
                },
                {
                    "line_number": 12,
                    "line_text": "Né quel dentro vorria che mostra fuore.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Né"
                        },
                        {
                            "word_text": "quel"
                        },
                        {
                            "word_text": "dentro"
                        },
                        {
                            "word_text": "vorria"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "mostra"
                        },
                        {
                            "word_text": "fuore."
                        }
                    ]
                },
                {
                    "line_number": 13,
                    "line_text": "Mentitor, disleale, e s'ei s'adira,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Mentitor,"
                        },
                        {
                            "word_text": "disleale,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "s'ei"
                        },
                        {
                            "word_text": "s'adira,"
                        }
                    ]
                },
                {
                    "line_number": 14,
                    "line_text": "Furor, fiamma, veneno e rabbia spira.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Furor,"
                        },
                        {
                            "word_text": "fiamma,"
                        },
                        {
                            "word_text": "veneno"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "rabbia"
                        },
                        {
                            "word_text": "spira."
                        }
                    ]
                },
                {
                    "line_number": 15,
                    "line_text": "Traditor, garzoncel fallace, e scherza",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Traditor,"
                        },
                        {
                            "word_text": "garzoncel"
                        },
                        {
                            "word_text": "fallace,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "scherza"
                        }
                    ]
                },
                {
                    "line_number": 16,
                    "line_text": "Sempre in danno d'altrui con laccio o sferza.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Sempre"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "danno"
                        },
                        {
                            "word_text": "d'altrui"
                        },
                        {
                            "word_text": "con"
                        },
                        {
                            "word_text": "laccio"
                        },
                        {
                            "word_text": "o"
                        },
                        {
                            "word_text": "sferza."
                        }
                    ]
                },
                {
                    "line_number": 17,
                    "line_text": "Ben crinita è la fronte, e fero il volto,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ben"
                        },
                        {
                            "word_text": "crinita"
                        },
                        {
                            "word_text": "è"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "fronte,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "fero"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "volto,"
                        }
                    ]
                },
                {
                    "line_number": 18,
                    "line_text": "Picciol braccio e sottil, ma snello e sciolto,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Picciol"
                        },
                        {
                            "word_text": "braccio"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "sottil,"
                        },
                        {
                            "word_text": "ma"
                        },
                        {
                            "word_text": "snello"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "sciolto,"
                        }
                    ]
                },
                {
                    "line_number": 19,
                    "line_text": "Ch'ei può lunge avventar un dardo acuto",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ch'ei"
                        },
                        {
                            "word_text": "può"
                        },
                        {
                            "word_text": "lunge"
                        },
                        {
                            "word_text": "avventar"
                        },
                        {
                            "word_text": "un"
                        },
                        {
                            "word_text": "dardo"
                        },
                        {
                            "word_text": "acuto"
                        }
                    ]
                },
                {
                    "line_number": 20,
                    "line_text": "Fin nel basso Acheronte in grembo a Pluto.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Fin"
                        },
                        {
                            "word_text": "nel"
                        },
                        {
                            "word_text": "basso"
                        },
                        {
                            "word_text": "Acheronte"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "grembo"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "Pluto."
                        }
                    ]
                },
                {
                    "line_number": 21,
                    "line_text": "Ha velato il pensiero, il corpo nudo,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ha"
                        },
                        {
                            "word_text": "velato"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "pensiero,"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "corpo"
                        },
                        {
                            "word_text": "nudo,"
                        }
                    ]
                },
                {
                    "line_number": 22,
                    "line_text": "Alato come augel che ardito e crudo",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Alato"
                        },
                        {
                            "word_text": "come"
                        },
                        {
                            "word_text": "augel"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "ardito"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "crudo"
                        }
                    ]
                },
                {
                    "line_number": 23,
                    "line_text": "Or in questo or in quello addrizza il volo,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Or"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "questo"
                        },
                        {
                            "word_text": "or"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "quello"
                        },
                        {
                            "word_text": "addrizza"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "volo,"
                        }
                    ]
                },
                {
                    "line_number": 24,
                    "line_text": "E nel mezzo dei cori alloggia solo.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "nel"
                        },
                        {
                            "word_text": "mezzo"
                        },
                        {
                            "word_text": "dei"
                        },
                        {
                            "word_text": "cori"
                        },
                        {
                            "word_text": "alloggia"
                        },
                        {
                            "word_text": "solo."
                        }
                    ]
                },
                {
                    "line_number": 25,
                    "line_text": "Un piccol arco ha in man, sovr'esso sempre",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Un"
                        },
                        {
                            "word_text": "piccol"
                        },
                        {
                            "word_text": "arco"
                        },
                        {
                            "word_text": "ha"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "man,"
                        },
                        {
                            "word_text": "sovr'esso"
                        },
                        {
                            "word_text": "sempre"
                        }
                    ]
                },
                {
                    "line_number": 26,
                    "line_text": "Un pungente quadrel d'amare tempre.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Un"
                        },
                        {
                            "word_text": "pungente"
                        },
                        {
                            "word_text": "quadrel"
                        },
                        {
                            "word_text": "d'amare"
                        },
                        {
                            "word_text": "tempre."
                        }
                    ]
                },
                {
                    "line_number": 27,
                    "line_text": "Ben è breve il quadrel, ma il cielo offende:",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ben"
                        },
                        {
                            "word_text": "è"
                        },
                        {
                            "word_text": "breve"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "quadrel,"
                        },
                        {
                            "word_text": "ma"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "cielo"
                        },
                        {
                            "word_text": "offende:"
                        }
                    ]
                },
                {
                    "line_number": 28,
                    "line_text": "Una faretra d'oro all'omer pende",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Una"
                        },
                        {
                            "word_text": "faretra"
                        },
                        {
                            "word_text": "d'oro"
                        },
                        {
                            "word_text": "all'omer"
                        },
                        {
                            "word_text": "pende"
                        }
                    ]
                },
                {
                    "line_number": 29,
                    "line_text": "U' son l'empie saette; ed io talora",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "U'"
                        },
                        {
                            "word_text": "son"
                        },
                        {
                            "word_text": "l'empie"
                        },
                        {
                            "word_text": "saette;"
                        },
                        {
                            "word_text": "ed"
                        },
                        {
                            "word_text": "io"
                        },
                        {
                            "word_text": "talora"
                        }
                    ]
                },
                {
                    "line_number": 30,
                    "line_text": "Impiagata ne fui dolente ancora.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Impiagata"
                        },
                        {
                            "word_text": "ne"
                        },
                        {
                            "word_text": "fui"
                        },
                        {
                            "word_text": "dolente"
                        },
                        {
                            "word_text": "ancora."
                        }
                    ]
                },
                {
                    "line_number": 31,
                    "line_text": "Aspro e duro con tutti, ed io m'avveggio",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Aspro"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "duro"
                        },
                        {
                            "word_text": "con"
                        },
                        {
                            "word_text": "tutti,"
                        },
                        {
                            "word_text": "ed"
                        },
                        {
                            "word_text": "io"
                        },
                        {
                            "word_text": "m'avveggio"
                        }
                    ]
                },
                {
                    "line_number": 32,
                    "line_text": "Che a' suoi propri ed a sé fa quello e peggio.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Che"
                        },
                        {
                            "word_text": "a'"
                        },
                        {
                            "word_text": "suoi"
                        },
                        {
                            "word_text": "propri"
                        },
                        {
                            "word_text": "ed"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "sé"
                        },
                        {
                            "word_text": "fa"
                        },
                        {
                            "word_text": "quello"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "peggio."
                        }
                    ]
                },
                {
                    "line_number": 33,
                    "line_text": "Porta facella in man, ch'io vidi spesso",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Porta"
                        },
                        {
                            "word_text": "facella"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "man,"
                        },
                        {
                            "word_text": "ch'io"
                        },
                        {
                            "word_text": "vidi"
                        },
                        {
                            "word_text": "spesso"
                        }
                    ]
                },
                {
                    "line_number": 34,
                    "line_text": "Far nell'acque avvampar Nettuno istesso.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Far"
                        },
                        {
                            "word_text": "nell'acque"
                        },
                        {
                            "word_text": "avvampar"
                        },
                        {
                            "word_text": "Nettuno"
                        },
                        {
                            "word_text": "istesso."
                        }
                    ]
                },
                {
                    "line_number": 35,
                    "line_text": "Se tu 'l puoi ripigliar, per forza il mena,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Se"
                        },
                        {
                            "word_text": "tu"
                        },
                        {
                            "word_text": "'l"
                        },
                        {
                            "word_text": "puoi"
                        },
                        {
                            "word_text": "ripigliar,"
                        },
                        {
                            "word_text": "per"
                        },
                        {
                            "word_text": "forza"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "mena,"
                        }
                    ]
                },
                {
                    "line_number": 36,
                    "line_text": "E non ne aver pietà se 'l vedi in pena",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "ne"
                        },
                        {
                            "word_text": "aver"
                        },
                        {
                            "word_text": "pietà"
                        },
                        {
                            "word_text": "se"
