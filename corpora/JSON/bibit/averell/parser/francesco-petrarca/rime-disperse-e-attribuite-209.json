                            "word_text": "Che"
                        },
                        {
                            "word_text": "di"
                        },
                        {
                            "word_text": "virtudi"
                        },
                        {
                            "word_text": "spargi"
                        },
                        {
                            "word_text": "tanti"
                        },
                        {
                            "word_text": "rivi;"
                        }
                    ]
                },
