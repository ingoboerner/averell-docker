                    "line_number": 10,
                    "line_text": "In terra rendi ad ogni creatura,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "In"
                        },
                        {
                            "word_text": "terra"
                        },
                        {
                            "word_text": "rendi"
                        },
                        {
                            "word_text": "ad"
                        },
                        {
