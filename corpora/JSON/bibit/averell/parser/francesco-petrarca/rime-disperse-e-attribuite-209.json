                },
                {
                    "line_number": 21,
                    "line_text": "Dolce, caro tesoro,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Dolce,"
                        },
                        {
                            "word_text": "caro"
                        },
                        {
                            "word_text": "tesoro,"
                        }
                    ]
                },
                {
                    "line_number": 22,
                    "line_text": "Che co' tuoi occhi porgi tanto lume,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Che"
