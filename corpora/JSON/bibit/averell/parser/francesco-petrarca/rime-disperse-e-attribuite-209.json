                        },
                        {
                            "word_text": "tuoi"
                        },
                        {
                            "word_text": "occhi"
                        },
                        {
                            "word_text": "porgi"
                        },
                        {
                            "word_text": "tanto"
                        },
                        {
                            "word_text": "lume,"
                        }
                    ]
