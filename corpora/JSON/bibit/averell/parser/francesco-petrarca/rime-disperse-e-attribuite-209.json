                        },
                        {
                            "word_text": "te"
                        },
                        {
                            "word_text": "si"
                        },
                        {
                            "word_text": "posa"
                        }
                    ]
                },
                {
                    "line_number": 30,
                    "line_text": "Che d'ogni altra virtù sì ti fa degna,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Che"
