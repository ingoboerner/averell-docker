                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "disiate"
                        },
                        {
                            "word_text": "voglie,"
                        }
                    ]
                },
                {
                    "line_number": 13,
                    "line_text": "Donna se' senza noglie,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Donna"
                        },
                        {
                            "word_text": "se'"
                        },
                        {
                            "word_text": "senza"
                        },
                        {
                            "word_text": "noglie,"
                        }
                    ]
                },
                {
                    "line_number": 14,
                    "line_text": "E di bellezze tien' l'ultima cura.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "di"
                        },
                        {
                            "word_text": "bellezze"
                        },
                        {
                            "word_text": "tien'"
                        },
                        {
                            "word_text": "l'ultima"
                        },
                        {
                            "word_text": "cura."
                        }
                    ]
                },
                {
                    "line_number": 15,
                    "line_text": "Se lo mio basso ingegno ben comprende,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Se"
                        },
                        {
