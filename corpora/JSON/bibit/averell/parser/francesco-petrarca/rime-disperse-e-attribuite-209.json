                        },
                        {
                            "word_text": "ardore:"
                        }
                    ]
                },
                {
                    "line_number": 7,
                    "line_text": "Saggia, degna d'onore,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Saggia,"
                        },
                        {
                            "word_text": "degna"
                        },
                        {
                            "word_text": "d'onore,"
                        }
                    ]
