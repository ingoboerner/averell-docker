                        }
                    ]
                },
                {
                    "line_number": 10,
                    "line_text": "Speranza quanto più con ragion vene",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Speranza"
                        },
                        {
                            "word_text": "quanto"
                        },
                        {
                            "word_text": "più"
