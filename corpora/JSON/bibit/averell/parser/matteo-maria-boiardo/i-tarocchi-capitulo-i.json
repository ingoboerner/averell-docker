                        },
                        {
                            "word_text": "immaginarlo"
                        },
                        {
                            "word_text": "vano,"
                        }
                    ]
                },
                {
                    "line_number": 29,
                    "line_text": "E dove timor regna, ogniun concorre",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "dove"
                        },
                        {
                            "word_text": "timor"
                        },
                        {
