                        },
                        {
                            "word_text": "v'è"
                        },
                        {
                            "word_text": "qualche"
                        },
                        {
                            "word_text": "pericol,"
                        },
                        {
                            "word_text": "vieta"
                        }
                    ]
                },
                {
                    "line_number": 5,
                    "line_text": "Pigliar piacere, e tanto un om fa vile,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Pigliar"
                        },
                        {
                            "word_text": "piacere,"
                        },
                        {
                            "word_text": "e"
