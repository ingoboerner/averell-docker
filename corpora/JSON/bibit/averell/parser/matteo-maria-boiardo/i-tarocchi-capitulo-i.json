                        },
                        {
                            "word_text": "vinto"
                        },
                        {
                            "word_text": "se"
                        },
                        {
                            "word_text": "rende."
                        }
                    ]
                },
                {
                    "line_number": 19,
                    "line_text": "Timor, si tu ti acosti a armati in giostra",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Timor,"
                        },
                        {
                            "word_text": "si"
                        },
                        {
                            "word_text": "tu"
                        },
                        {
                            "word_text": "ti"
                        },
                        {
                            "word_text": "acosti"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "armati"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "giostra"
                        }
                    ]
                },
                {
                    "line_number": 20,
                    "line_text": "La lor virtù sarà sotto te morta:",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "La"
                        },
                        {
                            "word_text": "lor"
                        },
                        {
                            "word_text": "virtù"
                        },
                        {
                            "word_text": "sarà"
                        },
                        {
                            "word_text": "sotto"
                        },
                        {
                            "word_text": "te"
                        },
                        {
                            "word_text": "morta:"
                        }
                    ]
                },
                {
                    "line_number": 21,
                    "line_text": "Dove tu sei, sempre la fronte il mostra.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Dove"
                        },
                        {
                            "word_text": "tu"
                        },
                        {
                            "word_text": "sei,"
