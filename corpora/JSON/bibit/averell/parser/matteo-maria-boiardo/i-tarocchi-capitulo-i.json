                        {
                            "word_text": "sempre"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "fronte"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "mostra."
                        }
                    ]
                },
                {
                    "line_number": 22,
                    "line_text": "Timor conturba i sensi e faccia smorta",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Timor"
                        },
                        {
                            "word_text": "conturba"
                        },
                        {
                            "word_text": "i"
                        },
                        {
