                        },
                        {
                            "word_text": "cor"
                        },
                        {
                            "word_text": "per"
                        },
                        {
                            "word_text": "lui"
                        },
                        {
                            "word_text": "si"
                        },
                        {
                            "word_text": "sente,"
                        }
                    ]
                },
                {
                    "line_number": 24,
                    "line_text": "E l'occhio il mostra con sua vista torta.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "l'occhio"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "mostra"
                        },
                        {
                            "word_text": "con"
                        },
                        {
                            "word_text": "sua"
                        },
                        {
                            "word_text": "vista"
                        },
                        {
                            "word_text": "torta."
                        }
                    ]
                },
                {
                    "line_number": 25,
                    "line_text": "Timor non ha sol di quel ch'è presente",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Timor"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "ha"
                        },
                        {
                            "word_text": "sol"
                        },
