                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "mal"
                        },
                        {
                            "word_text": "sano."
                        }
                    ]
                },
                {
                    "line_number": 31,
                    "line_text": "Timor Fineo, tra gli uomini una torre,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Timor"
                        },
                        {
                            "word_text": "Fineo,"
                        },
                        {
                            "word_text": "tra"
                        },
                        {
                            "word_text": "gli"
                        },
                        {
                            "word_text": "uomini"
                        },
                        {
                            "word_text": "una"
                        },
                        {
                            "word_text": "torre,"
                        }
                    ]
                },
                {
                    "line_number": 32,
                    "line_text": "Converse in sasso, col meduseo volto,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Converse"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "sasso,"
                        },
                        {
                            "word_text": "col"
                        },
                        {
                            "word_text": "meduseo"
                        },
                        {
                            "word_text": "volto,"
                        }
