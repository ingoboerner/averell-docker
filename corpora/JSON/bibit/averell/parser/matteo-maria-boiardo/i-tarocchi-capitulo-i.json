                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "gli"
                        },
                        {
                            "word_text": "excuso."
                        }
                    ]
                },
                {
                    "line_number": 13,
                    "line_text": "Timor ci tien talor, che i nostri effetti",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Timor"
                        },
                        {
                            "word_text": "ci"
                        },
                        {
                            "word_text": "tien"
                        },
                        {
                            "word_text": "talor,"
                        },
                        {
