                        },
                        {
                            "word_text": "i"
                        },
                        {
                            "word_text": "nostri"
                        },
                        {
                            "word_text": "effetti"
                        }
                    ]
                },
                {
                    "line_number": 14,
                    "line_text": "Non possiam dimostrar, che assai ne offende,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Non"
                        },
                        {
                            "word_text": "possiam"
                        },
                        {
                            "word_text": "dimostrar,"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "assai"
                        },
                        {
                            "word_text": "ne"
                        },
                        {
                            "word_text": "offende,"
                        }
                    ]
                },
                {
                    "line_number": 15,
                    "line_text": "Ché compagni al timor sono i rispetti.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ché"
                        },
                        {
                            "word_text": "compagni"
                        },
                        {
                            "word_text": "al"
                        },
                        {
                            "word_text": "timor"
                        },
                        {
                            "word_text": "sono"
                        },
                        {
                            "word_text": "i"
                        },
                        {
                            "word_text": "rispetti."
                        }
                    ]
                },
                {
                    "line_number": 16,
                    "line_text": "Timor fa sempre che un non se diffende,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Timor"
                        },
                        {
                            "word_text": "fa"
                        },
                        {
                            "word_text": "sempre"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "un"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "se"
                        },
                        {
                            "word_text": "diffende,"
                        }
                    ]
                },
                {
                    "line_number": 17,
                    "line_text": "Ma supplice ai contrasti se dimostra",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ma"
                        },
                        {
                            "word_text": "supplice"
                        },
                        {
                            "word_text": "ai"
                        },
                        {
                            "word_text": "contrasti"
                        },
                        {
                            "word_text": "se"
                        },
                        {
                            "word_text": "dimostra"
                        }
                    ]
                },
                {
                    "line_number": 18,
                    "line_text": "E senza arme adoprar vinto se rende.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "senza"
                        },
                        {
                            "word_text": "arme"
                        },
