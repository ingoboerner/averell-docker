                        },
                        {
                            "word_text": "carro"
                        },
                        {
                            "word_text": "all'uso"
                        }
                    ]
                },
                {
                    "line_number": 11,
                    "line_text": "Sotto una virga tiene, a un giogo stretti;",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Sotto"
                        },
                        {
                            "word_text": "una"
                        },
                        {
                            "word_text": "virga"
                        },
