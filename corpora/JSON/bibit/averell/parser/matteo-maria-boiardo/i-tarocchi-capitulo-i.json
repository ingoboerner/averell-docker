                            "word_text": "un"
                        },
                        {
                            "word_text": "om"
                        },
                        {
                            "word_text": "fa"
                        },
                        {
                            "word_text": "vile,"
                        }
                    ]
                },
                {
                    "line_number": 6,
                    "line_text": "Che l'animo ragion mai non aquieta.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Che"
                        },
                        {
                            "word_text": "l'animo"
                        },
                        {
                            "word_text": "ragion"
                        },
                        {
                            "word_text": "mai"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "aquieta."
                        }
                    ]
                },
                {
                    "line_number": 7,
                    "line_text": "Timor tremar fa l'agnel nell'ovile",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Timor"
                        },
                        {
                            "word_text": "tremar"
                        },
                        {
                            "word_text": "fa"
                        },
                        {
                            "word_text": "l'agnel"
                        },
                        {
                            "word_text": "nell'ovile"
                        }
                    ]
                },
                {
                    "line_number": 8,
                    "line_text": "Si de fuor sente il lupo, e sì sta chiuso",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Si"
                        },
                        {
                            "word_text": "de"
                        },
                        {
                            "word_text": "fuor"
                        },
                        {
                            "word_text": "sente"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "lupo,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "sì"
                        },
                        {
                            "word_text": "sta"
                        },
                        {
                            "word_text": "chiuso"
                        }
                    ]
                },
                {
                    "line_number": 9,
                    "line_text": "Che apena intrar gli può il vento sottile.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Che"
                        },
                        {
                            "word_text": "apena"
                        },
                        {
                            "word_text": "intrar"
                        },
                        {
                            "word_text": "gli"
                        },
                        {
                            "word_text": "può"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "vento"
                        },
                        {
                            "word_text": "sottile."
                        }
                    ]
                },
                {
                    "line_number": 10,
                    "line_text": "Timor quattro destrier d'un carro all'uso",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Timor"
                        },
                        {
                            "word_text": "quattro"
                        },
                        {
