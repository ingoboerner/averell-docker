{
    "poem_title": "L'Acerba - CAPITOLO XIX",
    "author": "Cecco d'Ascoli",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ira non altro è che acceso sangue",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ira"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "altro"
                        },
                        {
                            "word_text": "è"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "acceso"
                        },
                        {
                            "word_text": "sangue"
                        }
                    ]
                },
                {
                    "line_number": 2,
                    "line_text": "\nDentro nel core che il disdegno infoca,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Dentro"
                        },
                        {
                            "word_text": "nel"
                        },
                        {
                            "word_text": "core"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "disdegno"
                        },
                        {
                            "word_text": "infoca,"
                        }
                    ]
                },
                {
                    "line_number": 3,
                    "line_text": "\nPer qual de la vendetta l'alma langue.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Per"
                        },
                        {
                            "word_text": "qual"
                        },
                        {
                            "word_text": "de"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "vendetta"
                        },
                        {
                            "word_text": "l'alma"
                        },
                        {
                            "word_text": "langue."
                        }
                    ]
                },
                {
                    "line_number": 4,
                    "line_text": "\nSubito sdegno toglie lo gran bene",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Subito"
                        },
                        {
                            "word_text": "sdegno"
                        },
                        {
                            "word_text": "toglie"
                        },
                        {
                            "word_text": "lo"
                        },
                        {
                            "word_text": "gran"
                        },
                        {
                            "word_text": "bene"
                        }
                    ]
                },
                {
                    "line_number": 5,
                    "line_text": "\nDel grande amor che torna in poca cosa",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Del"
                        },
                        {
                            "word_text": "grande"
                        },
                        {
                            "word_text": "amor"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "torna"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "poca"
                        },
                        {
                            "word_text": "cosa"
                        }
                    ]
                },
                {
                    "line_number": 6,
                    "line_text": "\nSe d'amorosa pace non è spene.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Se"
                        },
                        {
                            "word_text": "d'amorosa"
                        },
                        {
                            "word_text": "pace"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "è"
                        },
                        {
                            "word_text": "spene."
                        }
                    ]
                },
                {
                    "line_number": 7,
                    "line_text": "\nLà dove è amor perfetto non è sdegno:",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Là"
                        },
                        {
                            "word_text": "dove"
                        },
                        {
                            "word_text": "è"
                        },
                        {
                            "word_text": "amor"
                        },
                        {
                            "word_text": "perfetto"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "è"
                        },
                        {
                            "word_text": "sdegno:"
                        }
                    ]
                },
                {
                    "line_number": 8,
                    "line_text": "\nBramasi in pace con dolce vergogna",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Bramasi"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "pace"
                        },
                        {
                            "word_text": "con"
                        },
                        {
                            "word_text": "dolce"
                        },
                        {
                            "word_text": "vergogna"
                        }
                    ]
                },
                {
                    "line_number": 9,
                    "line_text": "\nSe del celato ben non mostra segno.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Se"
                        },
                        {
                            "word_text": "del"
                        },
                        {
                            "word_text": "celato"
                        },
                        {
                            "word_text": "ben"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "mostra"
                        },
                        {
                            "word_text": "segno."
                        }
                    ]
                },
                {
                    "line_number": 10,
                    "line_text": "\nO quant'è bella cosa la dolce ira",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "O"
                        },
                        {
                            "word_text": "quant'è"
                        },
                        {
                            "word_text": "bella"
                        },
                        {
                            "word_text": "cosa"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "dolce"
                        },
                        {
                            "word_text": "ira"
                        }
                    ]
                },
                {
                    "line_number": 11,
                    "line_text": "\nChe per far doppia pace pur bisogna",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Che"
                        },
                        {
                            "word_text": "per"
                        },
                        {
                            "word_text": "far"
                        },
                        {
                            "word_text": "doppia"
                        },
                        {
                            "word_text": "pace"
                        },
                        {
                            "word_text": "pur"
                        },
                        {
                            "word_text": "bisogna"
                        }
                    ]
                },
                {
                    "line_number": 12,
                    "line_text": "\nNel tempo che d'amor lo cor sospira!",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Nel"
                        },
                        {
                            "word_text": "tempo"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "d'amor"
                        },
                        {
                            "word_text": "lo"
                        },
                        {
                            "word_text": "cor"
                        },
                        {
                            "word_text": "sospira!"
                        }
                    ]
                },
                {
                    "line_number": 13,
                    "line_text": "\nL'accesa gelosia con l'ira forte",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "L'accesa"
                        },
                        {
                            "word_text": "gelosia"
                        },
                        {
                            "word_text": "con"
                        },
                        {
                            "word_text": "l'ira"
                        },
                        {
                            "word_text": "forte"
                        }
                    ]
                },
                {
                    "line_number": 14,
                    "line_text": "\nE lo pensiero che la fin non vede",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "lo"
                        },
                        {
                            "word_text": "pensiero"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "fin"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "vede"
                        }
                    ]
                },
                {
                    "line_number": 15,
                    "line_text": "\nDinanzi al tempo conduce a la morte.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Dinanzi"
                        },
                        {
                            "word_text": "al"
                        },
                        {
                            "word_text": "tempo"
                        },
                        {
                            "word_text": "conduce"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "morte."
                        }
                    ]
                },
                {
                    "line_number": 16,
                    "line_text": "\nNasce dell'ira sùbita parola",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Nasce"
                        },
                        {
                            "word_text": "dell'ira"
                        },
                        {
                            "word_text": "sùbita"
                        },
                        {
                            "word_text": "parola"
                        }
                    ]
                },
                {
                    "line_number": 17,
                    "line_text": "\nPer qual la morte sùbita procede,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Per"
                        },
                        {
                            "word_text": "qual"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "morte"
                        },
                        {
                            "word_text": "sùbita"
                        },
                        {
                            "word_text": "procede,"
                        }
                    ]
                },
                {
                    "line_number": 18,
                    "line_text": "\nE l'alma disperando ne va sola.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "l'alma"
                        },
                        {
                            "word_text": "disperando"
                        },
                        {
                            "word_text": "ne"
                        },
                        {
                            "word_text": "va"
                        },
                        {
                            "word_text": "sola."
                        }
                    ]
                },
                {
                    "line_number": 19,
                    "line_text": "\nL'irato si mitìga per tre cose:",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "L'irato"
                        },
                        {
                            "word_text": "si"
                        },
                        {
                            "word_text": "mitìga"
                        },
                        {
                            "word_text": "per"
                        },
                        {
                            "word_text": "tre"
                        },
                        {
                            "word_text": "cose:"
                        }
                    ]
                },
                {
                    "line_number": 20,
                    "line_text": "\nO dolce rispondendo, o col tacere,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "O"
                        },
                        {
                            "word_text": "dolce"
                        },
                        {
                            "word_text": "rispondendo,"
                        },
                        {
                            "word_text": "o"
                        },
                        {
                            "word_text": "col"
                        },
                        {
                            "word_text": "tacere,"
                        }
                    ]
                },
                {
                    "line_number": 21,
                    "line_text": "\nO col partirsi fin che l'ira pose.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "O"
                        },
                        {
                            "word_text": "col"
                        },
                        {
                            "word_text": "partirsi"
                        },
                        {
                            "word_text": "fin"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "l'ira"
                        },
                        {
                            "word_text": "pose."
                        }
                    ]
                },
                {
                    "line_number": 22,
                    "line_text": "\nGli occhi umani, quando sono irati,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Gli"
                        },
                        {
                            "word_text": "occhi"
                        },
                        {
                            "word_text": "umani,"
                        },
                        {
                            "word_text": "quando"
                        },
                        {
                            "word_text": "sono"
                        },
                        {
                            "word_text": "irati,"
                        }
                    ]
                },
                {
                    "line_number": 23,
                    "line_text": "\nAccecan l'alma del giusto vedere,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Accecan"
                        },
                        {
                            "word_text": "l'alma"
                        },
                        {
                            "word_text": "del"
                        },
                        {
                            "word_text": "giusto"
                        },
                        {
                            "word_text": "vedere,"
                        }
                    ]
                },
                {
                    "line_number": 24,
                    "line_text": "\nRemota stando da gli atti beati.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Remota"
                        },
                        {
                            "word_text": "stando"
                        },
                        {
                            "word_text": "da"
                        },
                        {
                            "word_text": "gli"
                        },
                        {
                            "word_text": "atti"
                        },
                        {
                            "word_text": "beati."
                        }
                    ]
                },
                {
                    "line_number": 25,
                    "line_text": "\nPur in parole è l'ira delli matti,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Pur"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "parole"
                        },
                        {
                            "word_text": "è"
                        },
                        {
                            "word_text": "l'ira"
                        },
                        {
                            "word_text": "delli"
                        },
                        {
                            "word_text": "matti,"
                        }
                    ]
                },
                {
                    "line_number": 26,
                    "line_text": "\nSuonando l'aere con le irate voci:",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Suonando"
                        },
                        {
                            "word_text": "l'aere"
                        },
                        {
                            "word_text": "con"
                        },
                        {
                            "word_text": "le"
                        },
                        {
                            "word_text": "irate"
                        },
                        {
                            "word_text": "voci:"
                        }
                    ]
                },
                {
                    "line_number": 27,
                    "line_text": "\nMa quella delli savi è nelli fatti.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ma"
                        },
                        {
                            "word_text": "quella"
                        },
                        {
                            "word_text": "delli"
                        },
                        {
                            "word_text": "savi"
                        },
                        {
                            "word_text": "è"
                        },
                        {
                            "word_text": "nelli"
                        },
                        {
                            "word_text": "fatti."
                        }
                    ]
                },
                {
                    "line_number": 28,
                    "line_text": "\nO quanto ha l'alma forma di bellezza",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "O"
                        },
                        {
                            "word_text": "quanto"
                        },
                        {
                            "word_text": "ha"
                        },
                        {
                            "word_text": "l'alma"
                        },
                        {
                            "word_text": "forma"
                        },
                        {
                            "word_text": "di"
                        },
                        {
                            "word_text": "bellezza"
                        }
                    ]
                },
                {
                    "line_number": 29,
                    "line_text": "\nSe si raffrena da questi atti atroci",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Se"
                        },
                        {
                            "word_text": "si"
                        },
                        {
                            "word_text": "raffrena"
                        },
                        {
                            "word_text": "da"
                        },
                        {
                            "word_text": "questi"
                        },
                        {
                            "word_text": "atti"
                        },
                        {
                            "word_text": "atroci"
                        }
                    ]
                },
                {
                    "line_number": 30,
                    "line_text": "\nPrendendo da virtute la fermezza!",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Prendendo"
                        },
                        {
                            "word_text": "da"
                        },
                        {
                            "word_text": "virtute"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "fermezza!"
                        }
                    ]
                },
                {
                    "line_number": 31,
                    "line_text": "\nÈ d'animo tepor l'accidia ria",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "È"
                        },
                        {
                            "word_text": "d'animo"
                        },
                        {
                            "word_text": "tepor"
                        },
                        {
                            "word_text": "l'accidia"
                        },
                        {
                            "word_text": "ria"
                        }
                    ]
                },
                {
                    "line_number": 32,
                    "line_text": "\nChe s'abbandona al cominciar gli effetti",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Che"
                        },
                        {
                            "word_text": "s'abbandona"
                        },
                        {
                            "word_text": "al"
                        },
                        {
                            "word_text": "cominciar"
                        },
                        {
                            "word_text": "gli"
                        },
                        {
                            "word_text": "effetti"
                        }
                    ]
                },
                {
                    "line_number": 33,
                    "line_text": "\nE, cominciando, non segue la via.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E,"
                        },
                        {
                            "word_text": "cominciando,"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "segue"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "via."
                        }
                    ]
                },
                {
                    "line_number": 34,
                    "line_text": "\nE questi la pigrizia tiene in branche,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "questi"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "pigrizia"
                        },
                        {
                            "word_text": "tiene"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "branche,"
                        }
                    ]
                },
                {
                    "line_number": 35,
                    "line_text": "\nDa questi vegnon li penal difetti",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Da"
                        },
                        {
                            "word_text": "questi"
                        },
                        {
                            "word_text": "vegnon"
                        },
                        {
                            "word_text": "li"
                        },
                        {
                            "word_text": "penal"
                        },
                        {
                            "word_text": "difetti"
                        }
                    ]
                },
                {
                    "line_number": 36,
                    "line_text": "\nMostrandosi del bene sempre stanche.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Mostrandosi"
                        },
                        {
                            "word_text": "del"
                        },
                        {
                            "word_text": "bene"
                        },
                        {
                            "word_text": "sempre"
                        },
                        {
                            "word_text": "stanche."
                        }
                    ]
                },
                {
                    "line_number": 37,
                    "line_text": "\nOr queste donne triste qui le lasso,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Or"
                        },
                        {
                            "word_text": "queste"
                        },
                        {
                            "word_text": "donne"
                        },
                        {
                            "word_text": "triste"
                        },
                        {
                            "word_text": "qui"
                        },
                        {
                            "word_text": "le"
                        },
                        {
                            "word_text": "lasso,"
                        }
                    ]
                },
                {
                    "line_number": 38,
                    "line_text": "\nE intendo di seguir altro cammino",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "intendo"
                        },
                        {
                            "word_text": "di"
                        },
                        {
                            "word_text": "seguir"
                        },
                        {
                            "word_text": "altro"
                        },
                        {
                            "word_text": "cammino"
                        }
                    ]
                },
                {
                    "line_number": 39,
                    "line_text": "\nDa questa riva con più dolce passo,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Da"
                        },
                        {
                            "word_text": "questa"
                        },
                        {
                            "word_text": "riva"
                        },
                        {
                            "word_text": "con"
                        },
                        {
                            "word_text": "più"
                        },
                        {
                            "word_text": "dolce"
                        },
                        {
                            "word_text": "passo,"
                        }
                    ]
                },
                {
