                        },
                        {
                            "word_text": "volar"
                        },
                        {
                            "word_text": "per"
                        },
                        {
                            "word_text": "tua"
                        },
                        {
                            "word_text": "corte,"
                        }
                    ]
                },
                {
                    "line_number": 17,
                    "line_text": "Altre piume a covar in sì bel nido,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Altre"
                        },
                        {
                            "word_text": "piume"
                        },
                        {
                            "word_text": "a"
                        },
                        {
