                        },
                        {
                            "word_text": "mai"
                        },
                        {
                            "word_text": "sempre"
                        },
                        {
                            "word_text": "viva"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "pianto;"
                        }
                    ]
                },
                {
                    "line_number": 9,
                    "line_text": "Pur che una volta io serva in quella corte,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Pur"
                        },
                        {
                            "word_text": "che"
                        },
                        {
