            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Sì dolce è, Signor mio, sì bello il pianto,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
