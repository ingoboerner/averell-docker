                            "word_text": "cari"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "corte,"
                        }
                    ]
                },
                {
                    "line_number": 3,
                    "line_text": "Ne la tua corte dico, u' fatto ha 'l nido",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ne"
                        },
                        {
                            "word_text": "la"
                        },
                        {
                            "word_text": "tua"
                        },
                        {
                            "word_text": "corte"
                        },
                        {
                            "word_text": "dico,"
                        },
                        {
                            "word_text": "u'"
                        },
                        {
                            "word_text": "fatto"
                        },
                        {
                            "word_text": "ha"
                        },
                        {
                            "word_text": "'l"
                        },
                        {
                            "word_text": "nido"
                        }
                    ]
                },
                {
                    "line_number": 4,
                    "line_text": "Secura cortesia, con tanta gioia,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Secura"
                        },
                        {
                            "word_text": "cortesia,"
                        },
                        {
                            "word_text": "con"
                        },
                        {
                            "word_text": "tanta"
                        },
                        {
                            "word_text": "gioia,"
                        }
                    ]
                },
                {
                    "line_number": 5,
                    "line_text": "Che chi brama saper che cosa è 'l bene,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Che"
                        },
                        {
                            "word_text": "chi"
                        },
                        {
                            "word_text": "brama"
                        },
                        {
                            "word_text": "saper"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "cosa"
                        },
                        {
                            "word_text": "è"
                        },
                        {
                            "word_text": "'l"
                        },
                        {
                            "word_text": "bene,"
                        }
                    ]
                },
                {
                    "line_number": 6,
                    "line_text": "Volentier piange tra sì lieta schiera.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Volentier"
                        },
                        {
                            "word_text": "piange"
                        },
                        {
                            "word_text": "tra"
                        },
                        {
                            "word_text": "sì"
                        },
                        {
                            "word_text": "lieta"
                        },
                        {
                            "word_text": "schiera."
                        }
                    ]
                },
                {
                    "line_number": 7,
                    "line_text": "Caschinmi dunque su le guance a schiera",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Caschinmi"
                        },
                        {
                            "word_text": "dunque"
                        },
                        {
