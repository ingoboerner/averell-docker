                        },
                        {
                            "word_text": "allor"
                        },
                        {
                            "word_text": "potrei"
                        },
                        {
                            "word_text": "sperar"
                        },
                        {
                            "word_text": "con"
                        },
                        {
                            "word_text": "gioia"
                        }
                    ]
                },
                {
                    "line_number": 12,
                    "line_text": "Finire i miei brevi anni in grembo al bene.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Finire"
                        },
                        {
                            "word_text": "i"
                        },
                        {
                            "word_text": "miei"
                        },
                        {
                            "word_text": "brevi"
                        },
                        {
                            "word_text": "anni"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "grembo"
                        },
                        {
                            "word_text": "al"
                        },
                        {
                            "word_text": "bene."
                        }
                    ]
                },
                {
                    "line_number": 13,
                    "line_text": "Ma non son degno io già di tanto bene,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ma"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "son"
                        },
                        {
                            "word_text": "degno"
                        },
                        {
                            "word_text": "io"
                        },
                        {
                            "word_text": "già"
                        },
                        {
                            "word_text": "di"
                        },
                        {
                            "word_text": "tanto"
                        },
                        {
                            "word_text": "bene,"
                        }
                    ]
                },
                {
                    "line_number": 14,
                    "line_text": "Non merto entrar tra così bella schiera,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Non"
                        },
                        {
                            "word_text": "merto"
                        },
                        {
                            "word_text": "entrar"
                        },
                        {
                            "word_text": "tra"
                        },
                        {
                            "word_text": "così"
                        },
                        {
                            "word_text": "bella"
                        },
                        {
                            "word_text": "schiera,"
                        }
                    ]
                },
                {
                    "line_number": 15,
                    "line_text": "Né muover gli occhi ove sì dolce è il pianto.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Né"
                        },
                        {
                            "word_text": "muover"
                        },
                        {
                            "word_text": "gli"
                        },
                        {
                            "word_text": "occhi"
                        },
                        {
                            "word_text": "ove"
                        },
                        {
                            "word_text": "sì"
                        },
                        {
