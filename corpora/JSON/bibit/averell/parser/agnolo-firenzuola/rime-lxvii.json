                {
                    "line_number": 26,
                    "line_text": "In steril prato, e lontan d'ogni gioia;",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "In"
                        },
                        {
                            "word_text": "steril"
                        },
                        {
                            "word_text": "prato,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "lontan"
                        },
