                        },
                        {
                            "word_text": "spine."
                        }
                    ]
                },
                {
                    "line_number": 25,
                    "line_text": "Pungenti pruni, o venenose spine,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Pungenti"
                        },
                        {
                            "word_text": "pruni,"
                        },
                        {
                            "word_text": "o"
                        },
                        {
                            "word_text": "venenose"
                        },
                        {
                            "word_text": "spine,"
                        }
                    ]
                },
                {
                    "line_number": 26,
                    "line_text": "Ch'usciste di quegli occhi e di quel volto,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ch'usciste"
                        },
                        {
                            "word_text": "di"
                        },
                        {
                            "word_text": "quegli"
                        },
                        {
                            "word_text": "occhi"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "di"
                        },
                        {
                            "word_text": "quel"
                        },
                        {
                            "word_text": "volto,"
                        }
                    ]
                },
                {
                    "line_number": 27,
                    "line_text": "Ove s'ascose Amor sol per mio danno,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Ove"
                        },
                        {
