                            "word_text": "venni"
                        },
                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "questo"
                        },
                        {
                            "word_text": "loco!"
                        }
                    ]
                },
                {
                    "line_number": 29,
                    "line_text": "Colpo mortal, qual erba d'altro prato",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Colpo"
                        },
                        {
                            "word_text": "mortal,"
                        },
                        {
                            "word_text": "qual"
                        },
                        {
                            "word_text": "erba"
                        },
                        {
                            "word_text": "d'altro"
                        },
                        {
                            "word_text": "prato"
                        }
                    ]
                },
                {
                    "line_number": 30,
                    "line_text": "Nol può sanar, né seme d'altri fiori.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Nol"
                        },
                        {
                            "word_text": "può"
                        },
                        {
                            "word_text": "sanar,"
                        },
                        {
                            "word_text": "né"
                        },
                        {
                            "word_text": "seme"
                        },
                        {
                            "word_text": "d'altri"
                        },
                        {
                            "word_text": "fiori."
                        }
                    ]
                },
                {
                    "line_number": 31,
                    "line_text": "Se tai sien de le vostre donne i fiori,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Se"
                        },
                        {
                            "word_text": "tai"
                        },
                        {
                            "word_text": "sien"
                        },
