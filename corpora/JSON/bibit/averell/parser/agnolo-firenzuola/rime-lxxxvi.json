                        },
                        {
                            "word_text": "spine,"
                        }
                    ]
                },
                {
                    "line_number": 33,
                    "line_text": "Né fuggan poi che mostro v'hanno il volto;",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Né"
                        },
                        {
                            "word_text": "fuggan"
                        },
                        {
                            "word_text": "poi"
                        },
                        {
                            "word_text": "che"
                        },
                        {
                            "word_text": "mostro"
                        },
                        {
                            "word_text": "v'hanno"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "volto;"
                        }
                    ]
                },
                {
                    "line_number": 34,
                    "line_text": "Pregate Amor, che ristori il mio danno",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Pregate"
                        },
                        {
                            "word_text": "Amor,"
