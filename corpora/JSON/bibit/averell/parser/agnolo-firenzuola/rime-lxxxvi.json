                        {
                            "word_text": "in"
                        },
                        {
                            "word_text": "vece"
                        },
                        {
                            "word_text": "d'un"
                        },
                        {
                            "word_text": "bel"
                        },
                        {
                            "word_text": "Prato,"
                        }
                    ]
                },
                {
                    "line_number": 9,
                    "line_text": "E pruni e sassi, in cambio d'erbe e fiori,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "pruni"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "sassi,"
                        },
                        {
                            "word_text": "in"
                        },
                        {
