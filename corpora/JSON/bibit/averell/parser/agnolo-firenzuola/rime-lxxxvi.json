            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Or sì ch'un bosco tornerà il bel Prato,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Or"
                        },
                        {
