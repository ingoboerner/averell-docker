                        },
                        {
                            "word_text": "spine"
                        }
                    ]
                },
                {
                    "line_number": 18,
                    "line_text": "Gli fur al cor, e lunga pioggia al volto.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Gli"
                        },
                        {
                            "word_text": "fur"
                        },
                        {
                            "word_text": "al"
                        },
                        {
                            "word_text": "cor,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "lunga"
                        },
                        {
                            "word_text": "pioggia"
                        },
                        {
                            "word_text": "al"
                        },
                        {
                            "word_text": "volto."
                        }
                    ]
                },
                {
                    "line_number": 19,
                    "line_text": "E tu, a pena mostroci il bel volto,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "E"
                        },
                        {
                            "word_text": "tu,"
                        },
                        {
                            "word_text": "a"
                        },
                        {
                            "word_text": "pena"
                        },
                        {
                            "word_text": "mostroci"
                        },
                        {
                            "word_text": "il"
                        },
                        {
                            "word_text": "bel"
                        },
                        {
                            "word_text": "volto,"
                        }
                    ]
                },
                {
                    "line_number": 20,
                    "line_text": "Che lontan ne solea far ogni danno,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Che"
                        },
                        {
                            "word_text": "lontan"
                        },
                        {
                            "word_text": "ne"
                        },
                        {
                            "word_text": "solea"
                        },
                        {
                            "word_text": "far"
                        },
                        {
                            "word_text": "ogni"
                        },
                        {
                            "word_text": "danno,"
                        }
                    ]
                },
                {
                    "line_number": 21,
                    "line_text": "Ratta fuggisti in quel selvaggio loco;",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
