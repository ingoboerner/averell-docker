                        {
                            "word_text": "bel"
                        },
                        {
                            "word_text": "Prato,"
                        }
                    ]
                },
                {
                    "line_number": 23,
                    "line_text": "Già pregno d'erbe, già ripien di fiori,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Già"
                        },
                        {
                            "word_text": "pregno"
                        },
                        {
                            "word_text": "d'erbe,"
                        },
                        {
                            "word_text": "già"
                        },
                        {
                            "word_text": "ripien"
                        },
                        {
                            "word_text": "di"
                        },
                        {
                            "word_text": "fiori,"
                        }
                    ]
                },
                {
                    "line_number": 24,
                    "line_text": "Fusse men bel ch'un monte pien di spine.",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "Fusse"
                        },
                        {
                            "word_text": "men"
                        },
                        {
                            "word_text": "bel"
                        },
                        {
