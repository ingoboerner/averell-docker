                        },
                        {
                            "word_text": "del"
                        },
                        {
                            "word_text": "prato"
                        }
                    ]
                },
                {
                    "line_number": 16,
                    "line_text": "S'uscì lasciva, e i crin ripien di fiori,",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "S'uscì"
                        },
                        {
                            "word_text": "lasciva,"
                        },
                        {
                            "word_text": "e"
                        },
                        {
                            "word_text": "i"
                        },
                        {
                            "word_text": "crin"
                        },
                        {
