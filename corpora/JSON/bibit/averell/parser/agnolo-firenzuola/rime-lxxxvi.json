                        },
                        {
                            "word_text": "piè"
                        },
                        {
                            "word_text": "non"
                        },
                        {
                            "word_text": "mai"
                        },
                        {
                            "word_text": "securi"
                        },
                        {
                            "word_text": "da"
                        },
                        {
                            "word_text": "le"
                        },
                        {
                            "word_text": "spine,"
                        }
                    ]
                },
                {
                    "line_number": 11,
                    "line_text": "O da le fier' le pecorelle? Il volto",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "O"
                        },
                        {
                            "word_text": "da"
                        },
                        {
                            "word_text": "le"
                        },
                        {
                            "word_text": "fier'"
                        },
                        {
                            "word_text": "le"
                        },
                        {
                            "word_text": "pecorelle?"
                        },
                        {
                            "word_text": "Il"
                        },
                        {
                            "word_text": "volto"
                        }
                    ]
                },
                {
                    "line_number": 12,
                    "line_text": "U' splende di chi ride del mio danno?",
                    "metrical_pattern": null,
                    "line_length": null,
                    "words": [
                        {
                            "word_text": "U'"
                        },
                        {
                            "word_text": "splende"
                        },
                        {
                            "word_text": "di"
                        },
                        {
                            "word_text": "chi"
                        },
                        {
