{
    "poem_title": "- CIII - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Juan de Tassis y Peralta",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Esta cuna feliz de tus abuelos,",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "si en edad muertos, vivos por memoria,",
                    "metrical_pattern": "--++-+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "no consta sólo de caduca gloria,",
                    "metrical_pattern": "++-+---+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "afrenta en simétricos modelos.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Esta cuna feliz de tus abuelos,\nsi en edad muertos, vivos por memoria,\nno consta sólo de caduca gloria,\nafrenta en simétricos modelos."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Porque sus piedras dan envidia y celos",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "al esplendor de la latina historia,",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "hechos tanto blasón, tanta victoria,",
                    "metrical_pattern": "+-+--++--+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "templos de Marte y de la fama cielos.",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "Porque sus piedras dan envidia y celos\nal esplendor de la latina historia,\nhechos tanto blasón, tanta victoria,\ntemplos de Marte y de la fama cielos."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Presas banderas, príncipes vencidos,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "rotos arneses, yelmos abollados,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "mármoles son del tiempo no mordidos,",
                    "metrical_pattern": "+--+-+-+-+-"
                }
            ],
            "stanza_text": "Presas banderas, príncipes vencidos,\nrotos arneses, yelmos abollados,\nmármoles son del tiempo no mordidos,"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "donde con sangre viven trasladados",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "reinos gloriosamente defendidos,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "reinos gloriosamente conquistados.",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "donde con sangre viven trasladados\nreinos gloriosamente defendidos,\nreinos gloriosamente conquistados."
        }
    ]
}