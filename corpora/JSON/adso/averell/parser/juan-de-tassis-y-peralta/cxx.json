{
    "poem_title": "- CXX - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Juan de Tassis y Peralta",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Amor es un alterno beneficio",
                    "metrical_pattern": "-+++-+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "que recíprocos lazos multiplica,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "unión de voluntades que se aplica",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "a felizmente acepto sacrificio;",
                    "metrical_pattern": "--++-+---+-"
                }
            ],
            "stanza_text": "Amor es un alterno beneficio\nque recíprocos lazos multiplica,\nunión de voluntades que se aplica\na felizmente acepto sacrificio;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "gloriosa diversión, atento oficio",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "de un alma ya de afectos noble rica,",
                    "metrical_pattern": "++-+-+-+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "dulcísima abusión que califica",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "en sublime concordia alto ejercicio;",
                    "metrical_pattern": "--+--++--+-"
                }
            ],
            "stanza_text": "gloriosa diversión, atento oficio\nde un alma ya de afectos noble rica,\ndulcísima abusión que califica\nen sublime concordia alto ejercicio;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "violenta opresión que se dispone",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "a lograr en sí misma interiormente",
                    "metrical_pattern": "--+-++--++-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "fe que en germina luz rayos enciende;",
                    "metrical_pattern": "+--+-++--+-"
                }
            ],
            "stanza_text": "violenta opresión que se dispone\na lograr en sí misma interiormente\nfe que en germina luz rayos enciende;"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "pasto que la ambición del gusto pone,",
                    "metrical_pattern": "+----+-+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "dulce dolor que aplaude lo que siente,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "arte que ignora más quien más entiende.",
                    "metrical_pattern": "+--+-+-+-+-"
                }
            ],
            "stanza_text": "pasto que la ambición del gusto pone,\ndulce dolor que aplaude lo que siente,\narte que ignora más quien más entiende."
        }
    ]
}