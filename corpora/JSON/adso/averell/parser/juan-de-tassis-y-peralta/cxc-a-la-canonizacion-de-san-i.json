{
    "poem_title": "- CXC - A la canonización de San Ignacio de Loyola ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Juan de Tassis y Peralta",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "No bárbaras columnas erigidas",
                    "metrical_pattern": "++---+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "a pompa del soberbio Tolomeo,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "piadoso, si católico trofeo,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "aras te dan de gloria construidas;",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "No bárbaras columnas erigidas\na pompa del soberbio Tolomeo,\npiadoso, si católico trofeo,\naras te dan de gloria construidas;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "voces de luz y llamas ofendidas",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "en culto fuego al claro mausoleo,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "pues son centellas del honor sabeo",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "a fragantes estrellas reducidas;",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "voces de luz y llamas ofendidas\nen culto fuego al claro mausoleo,\npues son centellas del honor sabeo\na fragantes estrellas reducidas;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "hoy te consagra el religioso gremio",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "de uniforme, constante compañía",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "que lograr ya con Dios la tuya espera.",
                    "metrical_pattern": "--++-+-+-+-"
                }
            ],
            "stanza_text": "hoy te consagra el religioso gremio\nde uniforme, constante compañía\nque lograr ya con Dios la tuya espera."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Suya, pues, gloria, en ti librado el premio,",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "en pompa esclarecidamente pía",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "tanto incienso te ofrece, tanta cera.",
                    "metrical_pattern": "+-+--+-+-+-"
                }
            ],
            "stanza_text": "Suya, pues, gloria, en ti librado el premio,\nen pompa esclarecidamente pía\ntanto incienso te ofrece, tanta cera."
        }
    ]
}