    "author": "Mira de Amescua",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Ponerse el rubio sol en el oriente,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "y prestando su luz la casta diosa,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "nacer la blanca y encarnada rosa",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "del fuego activo en la región caliente;",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Ponerse el rubio sol en el oriente,\ny prestando su luz la casta diosa,\nnacer la blanca y encarnada rosa\ndel fuego activo en la región caliente;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "surcar del mar la espalda transparente",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "de elefantes la escuadra numerosa,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "y ballenas en tropa y voz gozosa",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "la seca arena de la Libia ardiente;",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "surcar del mar la espalda transparente\nde elefantes la escuadra numerosa,\ny ballenas en tropa y voz gozosa\nla seca arena de la Libia ardiente;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "dar la perdiz al elefante guerra,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "las libres al león hacer agravio,",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "huir el lobo hambriento del cordero;",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "dar la perdiz al elefante guerra,\nlas libres al león hacer agravio,\nhuir el lobo hambriento del cordero;"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "pararse el sol y dar vuelta la tierra,",
                    "metrical_pattern": "-+-+-++--+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "hasta aquí no lo has visto , pueblo sabio,",
                    "metrical_pattern": "--++++-+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "ni yo tampoco, a fe de caballero.",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "pararse el sol y dar vuelta la tierra,\nhasta aquí no lo has visto , pueblo sabio,\nni yo tampoco, a fe de caballero."
        }
    ]
}