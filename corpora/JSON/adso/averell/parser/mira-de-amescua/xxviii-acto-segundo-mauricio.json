{
    "poem_title": "- XXVIII - Acto segundo, Mauricio ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Mira de Amescua",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Figura que, pasando el tiempo engaña,",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "flor que marchita el caluroso estío,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "ampolla hecha en el agua ya por frío,",
                    "metrical_pattern": "-++--+-+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "correo de la muerte, débil caña;",
                    "metrical_pattern": "-+---+-+-+-"
                }
            ],
            "stanza_text": "Figura que, pasando el tiempo engaña,\nflor que marchita el caluroso estío,\nampolla hecha en el agua ya por frío,\ncorreo de la muerte, débil caña;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "sombra que hace tela de una araña,",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "ave ligera, despeñado río,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "hoja del agua y veloz navío",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "que navega este mar a tierra extraña;",
                    "metrical_pattern": "--++-+-+-+-"
                }
            ],
            "stanza_text": "sombra que hace tela de una araña,\nave ligera, despeñado río,\nhoja del agua y veloz navío\nque navega este mar a tierra extraña;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "un punto indivisible, un breve sueño,",
                    "metrical_pattern": "++---+++-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "corrido sueño y muerte prolongada",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "es la vida del hombre desabrida.",
                    "metrical_pattern": "+-+--+---+-"
                }
            ],
            "stanza_text": "un punto indivisible, un breve sueño,\ncorrido sueño y muerte prolongada\nes la vida del hombre desabrida."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "¡Miserable de mí!, si es tan pequeño",
                    "metrical_pattern": "--+--+++-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "el curso de mi edad, que es casi nada,",
                    "metrical_pattern": "-+---+++-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "¿por qué pasé tan mal tan corta vida?",
                    "metrical_pattern": "-+-+++++-+-"
                }
            ],
            "stanza_text": "¡Miserable de mí!, si es tan pequeño\nel curso de mi edad, que es casi nada,\n¿por qué pasé tan mal tan corta vida?"
        }
    ]
}