{
    "poem_title": "- XXI - Acto segundo, Alejandro ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Mira de Amescua",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "¡Oh, hijos del Amor, reyes tiranos!",
                    "metrical_pattern": "-+---++--+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "Envidia, confusión, rabia, tormento,",
                    "metrical_pattern": "-+---++--+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "verdugos del valor, del pensamiento;",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "infiernos, inquietud, temores vanos;",
                    "metrical_pattern": "-+---+-+-+-"
                }
            ],
            "stanza_text": "¡Oh, hijos del Amor, reyes tiranos!\nEnvidia, confusión, rabia, tormento,\nverdugos del valor, del pensamiento;\ninfiernos, inquietud, temores vanos;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "pensión sobre los ánimos humanos,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "espuelas del prudente sufrimiento,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "guerra entre voluntad y entendimiento",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "a quien nunca dan paz consejos sanos;",
                    "metrical_pattern": "--+-++-+-+-"
                }
            ],
            "stanza_text": "pensión sobre los ánimos humanos,\nespuelas del prudente sufrimiento,\nguerra entre voluntad y entendimiento\na quien nunca dan paz consejos sanos;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "ciegas sospechas, locas fantasías,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "quiméricos antojos y desvelos,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "inmortal presunción, sombras, engaño;",
                    "metrical_pattern": "--+--++--+-"
                }
            ],
            "stanza_text": "ciegas sospechas, locas fantasías,\nquiméricos antojos y desvelos,\ninmortal presunción, sombras, engaño;"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "confusa oscuridad, desdichas mías,",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "imaginado mal, tiranos celos,",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "o la muerte me dais o el desengaño.",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "confusa oscuridad, desdichas mías,\nimaginado mal, tiranos celos,\no la muerte me dais o el desengaño."
        }
    ]
}