                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Mientra el fiero dolor de su tormento",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "con mayor soledad Vandalio llora,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "con voz de su morir denunciadora",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "dijo triste, lloroso y descontento:",
                    "metrical_pattern": "+-+--+---+-"
