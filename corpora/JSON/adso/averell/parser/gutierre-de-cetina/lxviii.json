{
    "poem_title": "- LXVIII - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Gutierre de Cetina",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "¡Ay, vivo fuego, ay, fiero pensamiento,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "ay, rabioso dolor, pasos cansados,",
                    "metrical_pattern": "--+--++--+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "ay, recelos de Amor desesperados,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "ay, triste, congojoso sentimiento!",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "¡Ay, vivo fuego, ay, fiero pensamiento,\nay, rabioso dolor, pasos cansados,\nay, recelos de Amor desesperados,\nay, triste, congojoso sentimiento!"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "¡Ay, alto desear sin fundamento,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "ay, vana empresa llena de cuidados,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "ay, ríos, fuentes, selvas, bosques, prados,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "ay, esquiva ocasión de mi tormento!",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "¡Ay, alto desear sin fundamento,\nay, vana empresa llena de cuidados,\nay, ríos, fuentes, selvas, bosques, prados,\nay, esquiva ocasión de mi tormento!"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "¡Ay, verdes murtas, árboles hermosos,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "ay, lugar que ya fue ledo y jocundo,",
                    "metrical_pattern": "--+-+++--+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "do gastaba mi tiempo en dulce canto!",
                    "metrical_pattern": "+-+--+-+-+-"
                }
            ],
            "stanza_text": "¡Ay, verdes murtas, árboles hermosos,\nay, lugar que ya fue ledo y jocundo,\ndo gastaba mi tiempo en dulce canto!"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Espíritus alegres y amorosos,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "si alguno vive acá en el bajo mundo,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "muévaos hora a piedad mi triste llanto.",
                    "metrical_pattern": "+-+--+-+-+-"
                }
            ],
            "stanza_text": "Espíritus alegres y amorosos,\nsi alguno vive acá en el bajo mundo,\nmuévaos hora a piedad mi triste llanto."
        }
    ]
}