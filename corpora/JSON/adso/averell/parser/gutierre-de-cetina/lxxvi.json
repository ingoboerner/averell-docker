{
    "poem_title": "- LXXVI - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Gutierre de Cetina",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Ponzoña que se bebe por los ojos,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "dura prisión, sabrosa al pensamiento,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "lazo de oro cruel, dulce tormento,",
                    "metrical_pattern": "+--+-++--+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "confusión de locuras y de antojos;",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "Ponzoña que se bebe por los ojos,\ndura prisión, sabrosa al pensamiento,\nlazo de oro cruel, dulce tormento,\nconfusión de locuras y de antojos;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "bellas flores mezcladas con abrojos,",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "manjar que al corazón trae hambriento,",
                    "metrical_pattern": "-+---++--+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "daño que siempre huye el escarmiento,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "minero de placer lleno de enojos;",
                    "metrical_pattern": "-+---++--+-"
                }
            ],
            "stanza_text": "bellas flores mezcladas con abrojos,\nmanjar que al corazón trae hambriento,\ndaño que siempre huye el escarmiento,\nminero de placer lleno de enojos;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "esperanzas inciertas, engañosas,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "tesoro que entre el sueño se parece,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "bien que no tiene en sí más que la sombra;",
                    "metrical_pattern": "+-++-++--+-"
                }
            ],
            "stanza_text": "esperanzas inciertas, engañosas,\ntesoro que entre el sueño se parece,\nbien que no tiene en sí más que la sombra;"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "inútiles riquezas trabajosas,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "puerto que no se halla aunque parece;",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "son efectos de aquel que Amor se nombra.",
                    "metrical_pattern": "+-+--+-+-+-"
                }
            ],
            "stanza_text": "inútiles riquezas trabajosas,\npuerto que no se halla aunque parece;\nson efectos de aquel que Amor se nombra."
        }
    ]
}