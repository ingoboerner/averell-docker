{
    "poem_title": "- XCV - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Gutierre de Cetina",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Tanto espacio de tierra y tan gran seno",
                    "metrical_pattern": "+-+--+-+++-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "de mar, tantas naciones tan extrañas,",
                    "metrical_pattern": "-++--+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "tantos tormentos y ásperas montañas,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "ni el Alpe de terror y fieras lleno;",
                    "metrical_pattern": "-+---+-+-+-"
                }
            ],
            "stanza_text": "Tanto espacio de tierra y tan gran seno\nde mar, tantas naciones tan extrañas,\ntantos tormentos y ásperas montañas,\nni el Alpe de terror y fieras lleno;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "ni tanta soledad, ni el verme ajeno",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "de aquel bien que me rasga las entrañas,",
                    "metrical_pattern": "-++--+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "ni los males, las iras, ni las sañas",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "de amor, ni el no tener un rato bueno;",
                    "metrical_pattern": "-+-+-+++-+-"
                }
            ],
            "stanza_text": "ni tanta soledad, ni el verme ajeno\nde aquel bien que me rasga las entrañas,\nni los males, las iras, ni las sañas\nde amor, ni el no tener un rato bueno;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "ni el temor de la muerte que presente",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "traigo de cada hora, diferencia",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "harán en mí de aquél que ser solía.",
                    "metrical_pattern": "-+-+-+-+-+-"
                }
            ],
            "stanza_text": "ni el temor de la muerte que presente\ntraigo de cada hora, diferencia\nharán en mí de aquél que ser solía."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Era mi fe, señora, indiferente,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "¿pero quién me asegura en tanta ausencia",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "que la vuestra será cual es la mía?",
                    "metrical_pattern": "--+--+-+-+-"
                }
            ],
            "stanza_text": "Era mi fe, señora, indiferente,\n¿pero quién me asegura en tanta ausencia\nque la vuestra será cual es la mía?"
        }
    ]
}