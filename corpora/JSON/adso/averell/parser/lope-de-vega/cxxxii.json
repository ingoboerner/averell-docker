{
    "poem_title": "- CXXXII - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Lope de Vega",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Al viento se encomienda, al mar se entrega,",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "conjura un áspid, ablandar procura",
                    "metrical_pattern": "-+++---+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "con tiernos ruegos una peña dura,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "o las rocas del mar donde navega;",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "Al viento se encomienda, al mar se entrega,\nconjura un áspid, ablandar procura\ncon tiernos ruegos una peña dura,\no las rocas del mar donde navega;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "pide seguridad a la fe griega,",
                    "metrical_pattern": "+----+--++-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "consejo al loco y al enfermo cura,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "verdad al juego, sol en noche oscura,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "y fruta al polo donde el sol no llega;",
                    "metrical_pattern": "-+-+---+++-"
                }
            ],
            "stanza_text": "pide seguridad a la fe griega,\nconsejo al loco y al enfermo cura,\nverdad al juego, sol en noche oscura,\ny fruta al polo donde el sol no llega;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "que juzgue de colores pide al ciego,",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "desnudo y solo al salteador se atreve,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "licor precioso de las piedras saca;",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "que juzgue de colores pide al ciego,\ndesnudo y solo al salteador se atreve,\nlicor precioso de las piedras saca;"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "fuego busca en el mar, agua en el fuego,",
                    "metrical_pattern": "+-+--++--+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "en Libia flor, en Etiopía nieve,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "quien pone su esperanza en mujer flaca.",
                    "metrical_pattern": "-+---+--++-"
                }
            ],
            "stanza_text": "fuego busca en el mar, agua en el fuego,\nen Libia flor, en Etiopía nieve,\nquien pone su esperanza en mujer flaca."
        }
    ]
}