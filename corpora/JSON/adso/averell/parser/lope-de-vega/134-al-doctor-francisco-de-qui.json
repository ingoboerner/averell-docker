{
    "poem_title": "- 134 - Al doctor Francisco de Quintana ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Lope de Vega",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Este de Apolo singular tesoro,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "selva de amores en florido Mayo,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "que de la envidia histórico desmayo",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "ilustra el genio del Castalio coro.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Este de Apolo singular tesoro,\nselva de amores en florido Mayo,\nque de la envidia histórico desmayo\nilustra el genio del Castalio coro."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Alma interior en laberintos de oro,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "sombra vistió, como la nube al rayo,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "Argenis Castellana de Barclayo,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "y fénix de la pluma de Heliodoro.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Alma interior en laberintos de oro,\nsombra vistió, como la nube al rayo,\nArgenis Castellana de Barclayo,\ny fénix de la pluma de Heliodoro."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Tan dulce, honesta, clara y docta suma,",
                    "metrical_pattern": "++-+-+-+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "Francisco ilustre, no de verde rama,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "de esmeralda inmortal laurel presuma.",
                    "metrical_pattern": "--+--+-+-+-"
                }
            ],
            "stanza_text": "Tan dulce, honesta, clara y docta suma,\nFrancisco ilustre, no de verde rama,\nde esmeralda inmortal laurel presuma."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Que a quien para escribir su hermosa llama,",
                    "metrical_pattern": "-----+-+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "de sus alas Amor le dio la pluma,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "seguras tiene ya las de la Fama.",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "Que a quien para escribir su hermosa llama,\nde sus alas Amor le dio la pluma,\nseguras tiene ya las de la Fama."
        }
    ]
}