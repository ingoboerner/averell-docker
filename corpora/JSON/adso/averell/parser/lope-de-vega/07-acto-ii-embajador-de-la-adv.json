                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "En ánimo, Señor, de tiernas damas",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "es justo y piadoso el sentimiento.",
                    "metrical_pattern": "++---+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "Sabe el excelso Júpiter que tengo",
                    "metrical_pattern": "+--+-+---+-"
