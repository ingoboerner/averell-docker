{
    "poem_title": "- 1433 - Libro IV, LUCELA ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Lope de Vega",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Salve divino faro, honor del suelo,",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "del mar del mundo estrella tramontana,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "lucero celestial de la mañana,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "del sol cortina y transparente velo.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Salve divino faro, honor del suelo,\ndel mar del mundo estrella tramontana,\nlucero celestial de la mañana,\ndel sol cortina y transparente velo."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Salve divina Madre del consuelo,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "piadoso amparo de la vida humana,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "Virgen prudente, humilde soberana,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "arco de eterna paz, cifra del cielo.",
                    "metrical_pattern": "+--+-++--+-"
                }
            ],
            "stanza_text": "Salve divina Madre del consuelo,\npiadoso amparo de la vida humana,\nVirgen prudente, humilde soberana,\narco de eterna paz, cifra del cielo."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Salve paloma cándida, MARÍA,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "en cuyo pico de rubí ceñido",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "vio el mundo el árbol de esperanza santa.",
                    "metrical_pattern": "++-+---+-+-"
                }
            ],
            "stanza_text": "Salve paloma cándida, MARÍA,\nen cuyo pico de rubí ceñido\nvio el mundo el árbol de esperanza santa."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Salve Aurora del sol, salve alegría",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "del humano linaje redimido,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "que para siempre tu alabanza canta.",
                    "metrical_pattern": "---+---+-+-"
                }
            ],
            "stanza_text": "Salve Aurora del sol, salve alegría\ndel humano linaje redimido,\nque para siempre tu alabanza canta."
        }
    ]
}