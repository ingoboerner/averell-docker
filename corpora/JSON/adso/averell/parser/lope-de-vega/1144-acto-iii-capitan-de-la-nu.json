            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Negra, desaseada, descompuesta,",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "desafeitada noche; deslucida",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "de manto y de cabellos esparcida;",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "envidiosa del sol, con sombra opuesta;",
                    "metrical_pattern": "--+--+-+-+-"
                }
            ],
            "stanza_text": "Negra, desaseada, descompuesta,\ndesafeitada noche; deslucida\nde manto y de cabellos esparcida;\nenvidiosa del sol, con sombra opuesta;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "remisa en bienes, y en traiciones presta;",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "adúltera, ladrona y homicida,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "disfrazada, cobarde y atrevida,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "del ganado, terror; del lobo, fiesta.",
                    "metrical_pattern": "--+--+-+-+-"
                }
            ],
            "stanza_text": "remisa en bienes, y en traiciones presta;\nadúltera, ladrona y homicida,\ndisfrazada, cobarde y atrevida,\ndel ganado, terror; del lobo, fiesta."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Por tus mismas traiciones te conjuro,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "miedos, engaños, laberintos, celos,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "que me dejes gozar lo que procuro.",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "Por tus mismas traiciones te conjuro,\nmiedos, engaños, laberintos, celos,\nque me dejes gozar lo que procuro."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Así te canten búhos y mochuelos,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "o igualen con el sol hermoso y puro",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "tu negro curso los piadosos cielos.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Así te canten búhos y mochuelos,\no igualen con el sol hermoso y puro\ntu negro curso los piadosos cielos."
        }
    ]
