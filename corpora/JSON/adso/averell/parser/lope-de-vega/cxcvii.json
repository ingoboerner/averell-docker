{
    "poem_title": "- CXCVII - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Lope de Vega",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Humíllense a tu sacro Mausoleo",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "fuerte David y Salomón prudente,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "el rebelde gigante del Oriente",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "y el idolatra del contrario polo;",
                    "metrical_pattern": "---+---+-+-"
                }
            ],
            "stanza_text": "Humíllense a tu sacro Mausoleo\nfuerte David y Salomón prudente,\nel rebelde gigante del Oriente\ny el idolatra del contrario polo;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "y a tu pendón crucígero, que solo",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "fue del África y Asia rayo ardiente,",
                    "metrical_pattern": "+-+--+-+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "cuantos beben la bárbara corriente",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "de Eúfrates, Nilo, Ganges y Pactolo.",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "y a tu pendón crucígero, que solo\nfue del África y Asia rayo ardiente,\ncuantos beben la bárbara corriente\nde Eúfrates, Nilo, Ganges y Pactolo."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "La religión y la justicia lloren,",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "oh pacífico Numa, oh gran Torcuato,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "España, Italia y Francia enternecida.",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "La religión y la justicia lloren,\noh pacífico Numa, oh gran Torcuato,\nEspaña, Italia y Francia enternecida."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Y todos juntos nuevamente adoren",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "encima de tus aras tu retrato,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "Tercero entre tu muerte y nuestra vida.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Y todos juntos nuevamente adoren\nencima de tus aras tu retrato,\nTercero entre tu muerte y nuestra vida."
        }
    ]
}