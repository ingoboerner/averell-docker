{
    "poem_title": "- 868 - Acto II, HORACIO ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Lope de Vega",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Muros de Roma, plazas, teatros, cuevas,",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "imagen de la fábrica troyana;",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "en siete montes máquina tan llana",
                    "metrical_pattern": "-+-+-+--++-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "que, con sus puertas ciento, vence a Tebas:",
                    "metrical_pattern": "---+-+-+-+-"
                }
            ],
            "stanza_text": "Muros de Roma, plazas, teatros, cuevas,\nimagen de la fábrica troyana;\nen siete montes máquina tan llana\nque, con sus puertas ciento, vence a Tebas:"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Pirámides, colosos, torres nuevas,",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "arcos, baños y templos, barbacana",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "donde la nueva juventud romana",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "hace de su valor tan altas pruebas;",
                    "metrical_pattern": "+----+++-+-"
                }
            ],
            "stanza_text": "Pirámides, colosos, torres nuevas,\narcos, baños y templos, barbacana\ndonde la nueva juventud romana\nhace de su valor tan altas pruebas;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "¡Salud, divina patria, madre noble",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "de Horacios, Tulios, Fabios y Fabricios!",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "¡Salud, del Tibre espléndida ribera!",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "¡Salud, divina patria, madre noble\nde Horacios, Tulios, Fabios y Fabricios!\n¡Salud, del Tibre espléndida ribera!"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "¡Salud, penates lares! Y tú, al doble;",
                    "metrical_pattern": "-+-+-+--++-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "templo de mis divinos sacrificios,",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "casa de Venus, de mi fuego esfera.",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "¡Salud, penates lares! Y tú, al doble;\ntemplo de mis divinos sacrificios,\ncasa de Venus, de mi fuego esfera."
        }
    ]
}