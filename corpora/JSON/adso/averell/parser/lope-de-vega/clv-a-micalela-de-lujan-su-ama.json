{
    "poem_title": "- CLV - A Micalela de Luján, su amante ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Lope de Vega",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Belleza singular, ingenio raro",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "fuera del natural curso del cielo,",
                    "metrical_pattern": "+----++--+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "Etna de amor, que de tu mismo hielo",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "despides llamas entre mármol Paro;",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Belleza singular, ingenio raro\nfuera del natural curso del cielo,\nEtna de amor, que de tu mismo hielo\ndespides llamas entre mármol Paro;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "sol de hermosura, entendimiento claro,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "alma dichosa en cristalino velo,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "norte del mar, admiración del suelo,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "émula al sol, como a la luna el Faro;",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "sol de hermosura, entendimiento claro,\nalma dichosa en cristalino velo,\nnorte del mar, admiración del suelo,\némula al sol, como a la luna el Faro;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "milagro del autor de cielo y tierra,",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "bien de naturaleza el más perfeto,",
                    "metrical_pattern": "+----+-+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "Lucinda hermosa en quien mi luz se encierra;",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "milagro del autor de cielo y tierra,\nbien de naturaleza el más perfeto,\nLucinda hermosa en quien mi luz se encierra;"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "nieve en blancura y fuego en el efeto,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "paz de los ojos y del alma guerra;",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "dame a escribir, como apenar, sujeto.",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "nieve en blancura y fuego en el efeto,\npaz de los ojos y del alma guerra;\ndame a escribir, como apenar, sujeto."
        }
    ]
}