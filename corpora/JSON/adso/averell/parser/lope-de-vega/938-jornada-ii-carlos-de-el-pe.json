{
    "poem_title": "- 938 - Jornada II, CARLOS De El perseo ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Lope de Vega",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Horas feas leona mi leona",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "sierpe de Limia llena de ira y saña,",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "horas feas cruel toro de España",
                    "metrical_pattern": "+-+-++---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "que bebe el Tajo y las riberas mora.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Horas feas leona mi leona\nsierpe de Limia llena de ira y saña,\nhoras feas cruel toro de España\nque bebe el Tajo y las riberas mora."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Hora de sol la Circe encantadora",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "y el cocodrilo que llorando engaña,",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "más flaca y débil que la tierna caña:",
                    "metrical_pattern": "++-+---+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "Hora sirena que cantando llora.",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "Hora de sol la Circe encantadora\ny el cocodrilo que llorando engaña,\nmás flaca y débil que la tierna caña:\nHora sirena que cantando llora."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Que León, Sierpe, Circe, Toro, Fiera,",
                    "metrical_pattern": "--++-+-+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "cocodrilo cruel, caña, Sirena:",
                    "metrical_pattern": "--+--++--+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "en pena, en vida, en muerte, en gloria quiero",
                    "metrical_pattern": "-+-+-+-+-+-"
                }
            ],
            "stanza_text": "Que León, Sierpe, Circe, Toro, Fiera,\ncocodrilo cruel, caña, Sirena:\nen pena, en vida, en muerte, en gloria quiero"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "darte mi alma de cualquier manera,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "que más vale por ti tormento y pena,",
                    "metrical_pattern": "-++--+-+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "que de otra mano el bien del mal que muero.",
                    "metrical_pattern": "-+-+-+-+-+-"
                }
            ],
            "stanza_text": "darte mi alma de cualquier manera,\nque más vale por ti tormento y pena,\nque de otra mano el bien del mal que muero."
        }
    ]
}