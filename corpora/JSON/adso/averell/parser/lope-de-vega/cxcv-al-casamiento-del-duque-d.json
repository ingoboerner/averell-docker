{
    "poem_title": "- CXCV - Al casamiento del Duque de Saboya y doña Catalina de Austria, Infanta de España, en cuatro lenguas ",
    "corpus": "adso",
    "manually_checked": true,
    "author": "Lope de Vega",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Sit, o sancte Hymene, hace dies clara,",
                    "metrical_pattern": "+-+--++-++-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "las bellas ninfas en alegre coro",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "ornen le tempie con ghirlande di oro",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "al dulce esposo y a su esposa cara.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Sit, o sancte Hymene, hace dies clara,\nlas bellas ninfas en alegre coro\nornen le tempie con ghirlande di oro\nal dulce esposo y a su esposa cara."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Abesto procul invida et amara",
                    "metrical_pattern": "-+--+-+--+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "fortuna, e longe fuja o triste choro,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "accinge, o Iuno, il giogo al bel laboro,",
                    "metrical_pattern": "-+-+++-+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "y llueva el cielo de su gracia rara.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Abesto procul invida et amara\nfortuna, e longe fuja o triste choro,\naccinge, o Iuno, il giogo al bel laboro,\ny llueva el cielo de su gracia rara."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Carolus Dux, et Infans Catherina,",
                    "metrical_pattern": "-+-+++---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "hoje celebraon desejadas bodas,",
                    "metrical_pattern": "+---+--+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "et in duoi corpi un alma si racoppia.",
                    "metrical_pattern": "--++++---+-"
                }
            ],
            "stanza_text": "Carolus Dux, et Infans Catherina,\nhoje celebraon desejadas bodas,\net in duoi corpi un alma si racoppia."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Ecce aperitur iam aula divina,",
                    "metrical_pattern": "+---+++--+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "y en nubes de oro las deidades todas",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "vengono ad honorar la bella copia.",
                    "metrical_pattern": "-+---+-+-+-"
                }
            ],
            "stanza_text": "Ecce aperitur iam aula divina,\ny en nubes de oro las deidades todas\nvengono ad honorar la bella copia."
        }
    ]
}