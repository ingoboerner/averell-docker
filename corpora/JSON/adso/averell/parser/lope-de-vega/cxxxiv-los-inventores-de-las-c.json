{
    "poem_title": "- CXXXIV - Los inventores de las cosas ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Lope de Vega",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Halló Baco la parra provechosa,",
                    "metrical_pattern": "-++--+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "Ceres el trigo, Glauco el hierro duro,",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "los de Lidia el dinero mal seguro,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "Casio la estatua en ocasión famosa,",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "Halló Baco la parra provechosa,\nCeres el trigo, Glauco el hierro duro,\nlos de Lidia el dinero mal seguro,\nCasio la estatua en ocasión famosa,"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Apis la medicina provechosa,",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "Marte las armas y Nemrot el muro,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "Scitia el cristal, Galacia el ámbar puro,",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "y Polignoto la pintura hermosa.",
                    "metrical_pattern": "---+---+-+-"
                }
            ],
            "stanza_text": "Apis la medicina provechosa,\nMarte las armas y Nemrot el muro,\nScitia el cristal, Galacia el ámbar puro,\ny Polignoto la pintura hermosa."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Triunfos Libero, anillos Prometeo,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "Alejandro papel, llaves Teodoro,",
                    "metrical_pattern": "--+--++--+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "Radamanto la ley, Roma el gobierno,",
                    "metrical_pattern": "--+--++--+-"
                }
            ],
            "stanza_text": "Triunfos Libero, anillos Prometeo,\nAlejandro papel, llaves Teodoro,\nRadamanto la ley, Roma el gobierno,"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Palas vestidos, carros Ericteo,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "la plata halló Mercurio, Cadmo el oro,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "Amor el fuego y celos el infierno.",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "Palas vestidos, carros Ericteo,\nla plata halló Mercurio, Cadmo el oro,\nAmor el fuego y celos el infierno."
        }
    ]
}