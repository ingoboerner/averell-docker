{
    "poem_title": "- XXX - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Francisco de La Torre",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Clara y hermosa Virgen del triunfante",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "cielo primero, bella y adornada",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "de la clara corona y de la amada",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "manadilla de cabras de tu amante;",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "Clara y hermosa Virgen del triunfante\ncielo primero, bella y adornada\nde la clara corona y de la amada\nmanadilla de cabras de tu amante;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "así la soberana y circunstante",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "máquina de lumbreras estrellada",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "deje de acompañarte, y la sagrada",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "cara de Febo veas rutilante;",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "así la soberana y circunstante\nmáquina de lumbreras estrellada\ndeje de acompañarte, y la sagrada\ncara de Febo veas rutilante;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "que al tiempo que la Maga que me encanta",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "con palabra y deseos te mirare",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "no recibas la lumbre de tu Apolo.",
                    "metrical_pattern": "+-+--+---+-"
                }
            ],
            "stanza_text": "que al tiempo que la Maga que me encanta\ncon palabra y deseos te mirare\nno recibas la lumbre de tu Apolo."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Y si aquella belleza te forzare,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "sea para mirar entonces cuanta",
                    "metrical_pattern": "+----+-+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "sinrazón se le hace a un hombre solo.",
                    "metrical_pattern": "--+--+++-+-"
                }
            ],
            "stanza_text": "Y si aquella belleza te forzare,\nsea para mirar entonces cuanta\nsinrazón se le hace a un hombre solo."
        }
    ]
}