            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Alta señora, que en la edad presente",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "divina más que hermana hermosura",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "y mil dotes de cielo y de ventura",
                    "metrical_pattern": "-++--+---+-"
                },
                {
