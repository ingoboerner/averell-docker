    "author": "Fcode Borja",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "En breve Ocaso yace sepultada",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "del Sol de España la infeliz Aurora;",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "no dije bien, pues de estación mejora,",
                    "metrical_pattern": "++-+---+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "y sobre el Sol termina su jornada.",
                    "metrical_pattern": "---+-+---+-"
                }
            ],
            "stanza_text": "En breve Ocaso yace sepultada\ndel Sol de España la infeliz Aurora;\nno dije bien, pues de estación mejora,\ny sobre el Sol termina su jornada."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Ver la virtud en su niñez premiada,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "cuando ningún suceso la desdora,",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "ni el bien la engaña, ni el temor la llora,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "ni el peso siente de la edad cansada.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Ver la virtud en su niñez premiada,\ncuando ningún suceso la desdora,\nni el bien la engaña, ni el temor la llora,\nni el peso siente de la edad cansada."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "¡Qué más verdad, Monarca soberano,",
                    "metrical_pattern": "++-+-+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "pudo mover tu espíritu divino,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "a ser ejemplo del valor Cristiano!",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "¡Qué más verdad, Monarca soberano,\npudo mover tu espíritu divino,\na ser ejemplo del valor Cristiano!"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Que mude patria Carlos, te convino.",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "Y hoy en la propia te dará la mano,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "que dar no pudo en esta peregrino.",
                    "metrical_pattern": "-+++-+---+-"
                }
            ],
            "stanza_text": "Que mude patria Carlos, te convino.\nY hoy en la propia te dará la mano,\nque dar no pudo en esta peregrino."
        }
    ]
}