{
    "poem_title": "- XXIII - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Juan de Almeida",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Si rota el asta del cruel tirano,",
                    "metrical_pattern": "-+--+--+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "puesto por tierra el descreído pecho",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "que tuvo tantas veces en estrecho",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "el duro Capitán del Rey Cristiano,",
                    "metrical_pattern": "-+---+-+-+-"
                }
            ],
            "stanza_text": "Si rota el asta del cruel tirano,\npuesto por tierra el descreído pecho\nque tuvo tantas veces en estrecho\nel duro Capitán del Rey Cristiano,"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "vuelves con paz la valerosa mano",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "de aquel gallardo Joven que ha deshecho",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "el enemigo campo y tiene hecho",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "tan temeroso el nombre de su hermano,",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "vuelves con paz la valerosa mano\nde aquel gallardo Joven que ha deshecho\nel enemigo campo y tiene hecho\ntan temeroso el nombre de su hermano,"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "por esta gran victoria, fiero Marte,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "quiero ofrecerte aquel manchado toro",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "que entre el ganado viene allí el primero,",
                    "metrical_pattern": "---+-+-+-+-"
                }
            ],
            "stanza_text": "por esta gran victoria, fiero Marte,\nquiero ofrecerte aquel manchado toro\nque entre el ganado viene allí el primero,"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "y prometo en memoria consagrarte",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "aquesta hacha que en el asta de oro",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "lleve con sangre escrito: A Dios Guerrero.",
                    "metrical_pattern": "+--+-+-+-+-"
                }
            ],
            "stanza_text": "y prometo en memoria consagrarte\naquesta hacha que en el asta de oro\nlleve con sangre escrito: A Dios Guerrero."
        }
    ]
}