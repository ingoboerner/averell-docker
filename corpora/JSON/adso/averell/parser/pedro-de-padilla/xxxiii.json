    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Toribio y Inés Domínguez de Escobosa",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "y el hijo de Tenorio el mesonero,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "le dieron en redoma lo primero,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "una zamarra blanca muy graciosa.",
                    "metrical_pattern": "+--+-+-+-+-"
                }
            ],
            "stanza_text": "Toribio y Inés Domínguez de Escobosa\ny el hijo de Tenorio el mesonero,\nle dieron en redoma lo primero,\nuna zamarra blanca muy graciosa."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Y Pero Nieto y Blas de Hinojosa,",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "y Mingo Gil el nieto del gaitero,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "presentaron al novio un gran cordero,",
                    "metrical_pattern": "--+--+++-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "y a la novia una chiva, muy hermosa.",
                    "metrical_pattern": "--++-+-+-+-"
                }
            ],
            "stanza_text": "Y Pero Nieto y Blas de Hinojosa,\ny Mingo Gil el nieto del gaitero,\npresentaron al novio un gran cordero,\ny a la novia una chiva, muy hermosa."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Antón de Juan Alonso, dio un cayado",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "al novio, y un zurrón le dio Vicente,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "hecho de dos pellejos remendados.",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "Antón de Juan Alonso, dio un cayado\nal novio, y un zurrón le dio Vicente,\nhecho de dos pellejos remendados."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Y un barreño de palo muy pintado",
                    "metrical_pattern": "+-+--+-+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "a los dos ofreció Pascual Clemente",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "y el cura un Dios los haga bien casados.",
                    "metrical_pattern": "-+++-+-+-+-"
                }
            ],
            "stanza_text": "Y un barreño de palo muy pintado\na los dos ofreció Pascual Clemente\ny el cura un Dios los haga bien casados."
        }
    ]
}