            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "En la vida que siempre tuya fue,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "Laura divina, y siempre lo será,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "la parca fiera, que en seguirme da,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "quiso asentar por triunfo el mortal pie.",
                    "metrical_pattern": "+--+-+--++-"
