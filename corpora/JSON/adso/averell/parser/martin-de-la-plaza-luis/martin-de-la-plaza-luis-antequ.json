                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Cubierto estaba el Sol de un negro velo,",
                    "metrical_pattern": "-+-+-+++-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "luchaba el viento con el mar hinchado",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "y él en huecos peñascos quebrantado",
