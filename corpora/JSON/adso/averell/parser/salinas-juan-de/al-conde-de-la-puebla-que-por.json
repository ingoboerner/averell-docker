            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Contábame mi abuela, buen siglo haya,",
                    "metrical_pattern": "-+---+-+++-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "que yendo a una misión un teatino,",
                    "metrical_pattern": "-++--++--+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "caballero en un prójimo pollino,",
                    "metrical_pattern": "--+-++---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "se sentó el animal, como una maya,",
                    "metrical_pattern": "--+--+-+-+-"
