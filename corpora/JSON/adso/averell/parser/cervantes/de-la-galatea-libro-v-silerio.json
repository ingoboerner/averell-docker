    "author": "Cervantes",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Gracias al cielo doy, pues he escapado",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "de los peligros de este mar incierto,",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "y al recogido favorable puerto,",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "tan sin saber por donde, he ya llegado.",
                    "metrical_pattern": "+--+--++-+-"
                }
            ],
            "stanza_text": "Gracias al cielo doy, pues he escapado\nde los peligros de este mar incierto,\ny al recogido favorable puerto,\ntan sin saber por donde, he ya llegado."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Recójanse las velas del cuidado,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "repárese el navío pobre abierto,",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "cumpla los votos quien con rostro muerto",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "hizo promesas en el mar airado.",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "Recójanse las velas del cuidado,\nrepárese el navío pobre abierto,\ncumpla los votos quien con rostro muerto\nhizo promesas en el mar airado."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Beso la tierra, reverencio al cielo,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "mi suerte abrazo mejorada y buena,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "llamo dichoso a mi fatal destino,",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "Beso la tierra, reverencio al cielo,\nmi suerte abrazo mejorada y buena,\nllamo dichoso a mi fatal destino,"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "y a la nueva sin par blanda cadena,",
                    "metrical_pattern": "--+--++--+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "con nuevo intento y amoroso celo,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "el lastimado cuello alegre inclino.",
                    "metrical_pattern": "---+-+-+-+-"
                }
            ],
            "stanza_text": "y a la nueva sin par blanda cadena,\ncon nuevo intento y amoroso celo,\nel lastimado cuello alegre inclino."
        }
    ]
}