{
    "poem_title": "- XLIV - Al apóstol Santiago, patrón de España ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Joseph de Litala y Castelvi",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Llegaste a España atravesando mares",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "adonde el Cielo tu mansión destina,",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "y con Sal de Apostólica Doctrina",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "le diste a su redil muchos millares.",
                    "metrical_pattern": "-+---++--+-"
                }
            ],
            "stanza_text": "Llegaste a España atravesando mares\nadonde el Cielo tu mansión destina,\ny con Sal de Apostólica Doctrina\nle diste a su redil muchos millares."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Santificaste a Dios, Aras, y Altares,",
                    "metrical_pattern": "---+-++--+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "siendo del Genuino rayo, y ruina,",
                    "metrical_pattern": "+---+-+--+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "y en su sagrada, y próvida Oficina",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "muchas piedras labraste singulares.",
                    "metrical_pattern": "+-+--+---+-"
                }
            ],
            "stanza_text": "Santificaste a Dios, Aras, y Altares,\nsiendo del Genuino rayo, y ruina,\ny en su sagrada, y próvida Oficina\nmuchas piedras labraste singulares."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Te vio en campaña el pérfido Pagano",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "sobre blanco caballo en las hileras,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "Caudillo del Ejército Cristiano.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Te vio en campaña el pérfido Pagano\nsobre blanco caballo en las hileras,\nCaudillo del Ejército Cristiano."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Y Patrón tutelas de sus riberas",
                    "metrical_pattern": "--+-+----+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "debió España las glorias a tu mano,",
                    "metrical_pattern": "-++--+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "coronando tu Templo de banderas.",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "Y Patrón tutelas de sus riberas\ndebió España las glorias a tu mano,\ncoronando tu Templo de banderas."
        }
    ]
}