            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "El que de Jerarquías asistido",
                    "metrical_pattern": "-----+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "universal Señor de lo criado",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "Sol de Cielos, y luces adorado",
