            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Acusada en el ínclito Areópago,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "donde se presentó Phrine divina,",
