    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Cual sin arrimo vid; cual planta umbrosa,",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "viuda del ruiseñor que antes solía",
                    "metrical_pattern": "+----++--+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "con dulce canto, al parecer del día,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "invocar de Titón la blanca esposa;",
                    "metrical_pattern": "--+--+-+-+-"
                }
            ],
            "stanza_text": "Cual sin arrimo vid; cual planta umbrosa,\nviuda del ruiseñor que antes solía\ncon dulce canto, al parecer del día,\ninvocar de Titón la blanca esposa;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "cual navecilla en noche tenebrosa,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "do el gobierno faltó que la regía;",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "cual caminante que perdió su guía",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "en selva oscura, horrible y tenebrosa;",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "cual navecilla en noche tenebrosa,\ndo el gobierno faltó que la regía;\ncual caminante que perdió su guía\nen selva oscura, horrible y tenebrosa;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "cual nube de mil vientos combatida;",
                    "metrical_pattern": "++--++---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "cual ave que atajó la red su vuelo;",
                    "metrical_pattern": "++---+-+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "cual siervo fugitivo y cautivado;",
                    "metrical_pattern": "++---+---+-"
                }
            ],
            "stanza_text": "cual nube de mil vientos combatida;\ncual ave que atajó la red su vuelo;\ncual siervo fugitivo y cautivado;"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "cual de peso infernal alma afligida;",
                    "metrical_pattern": "+-+--++--+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "o cual quedó tras el diluvio el suelo...;",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "tal quedé yo sin vos, hermano amado.",
                    "metrical_pattern": "+-++-+-+-+-"
                }
            ],
            "stanza_text": "cual de peso infernal alma afligida;\no cual quedó tras el diluvio el suelo...;\ntal quedé yo sin vos, hermano amado."
        }
    ]
}