{
    "poem_title": "- CXXXIII - Del padre fray Jerónimo de San Josef ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Argensola",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "¡Oh quién pudiera, superior Leonardo",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "(a vos en esto superior quisiera),",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "arrebatar a la suprema esfera",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "el vuelo de ese espíritu gallardo!",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "¡Oh quién pudiera, superior Leonardo\n(a vos en esto superior quisiera),\narrebatar a la suprema esfera\nel vuelo de ese espíritu gallardo!"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "¡Quién la punta seráfica del dardo,",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "que a mi madre abrasó, dulce y severa,",
                    "metrical_pattern": "--+--++--+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "entre el papel y vuestras manos viera",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "arder, lucir, y herir a un pecho tardo!",
                    "metrical_pattern": "-+-+-+++-+-"
                }
            ],
            "stanza_text": "¡Quién la punta seráfica del dardo,\nque a mi madre abrasó, dulce y severa,\nentre el papel y vuestras manos viera\narder, lucir, y herir a un pecho tardo!"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Esta divina pluma, que briosa,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "en la media región flore al vuelo",
                    "metrical_pattern": "--+--++--+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "con morales discursos provechosa,",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "Esta divina pluma, que briosa,\nen la media región flore al vuelo\ncon morales discursos provechosa,"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "penetre aquesos orbes, arda en celo,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "llegue a la inmoble cumbre, y animosa",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "corra del sumo y hasta el sumo cielo.",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "penetre aquesos orbes, arda en celo,\nllegue a la inmoble cumbre, y animosa\ncorra del sumo y hasta el sumo cielo."
        }
    ]
}