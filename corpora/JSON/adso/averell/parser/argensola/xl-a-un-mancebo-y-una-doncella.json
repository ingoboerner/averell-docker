            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Silvio, en tu edad ningún peligro hay leve:",
                    "metrical_pattern": "+--+-+-+++-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "ya comienzas a hablar con voz oscura,",
                    "metrical_pattern": "+-+--+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "y a extender sombra el bozo en tu blancura",
                    "metrical_pattern": "--++-+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "sobre este labio superior se atreve.",
                    "metrical_pattern": "-+-+---+-+-"
