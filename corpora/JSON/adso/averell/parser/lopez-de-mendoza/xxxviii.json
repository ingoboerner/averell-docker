            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Leño (felice) qu'el grant poderío",
                    "metrical_pattern": "+--+--+--+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "que todo el mundo no pudo ayubar,",
                    "metrical_pattern": "-+-+-++--+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "en cuyo pomo iba el señorío",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "de çielos, tierra, arenas e mar;",
                    "metrical_pattern": "-+-+--+--+-"
                }
            ],
            "stanza_text": "Leño (felice) qu'el grant poderío\nque todo el mundo no pudo ayubar,\nen cuyo pomo iba el señorío\nde çielos, tierra, arenas e mar;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "sin alterçasiones e sin desvío,",
                    "metrical_pattern": "----+----+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "mas (leda) e gratamente sin dubdar,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "en el tu cuello le pasaste el río,",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "que non sin causa se debió negar.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "sin alterçasiones e sin desvío,\nmas (leda) e gratamente sin dubdar,\nen el tu cuello le pasaste el río,\nque non sin causa se debió negar."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Jaián entre los santos, admirable",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "por fuerça insigne e grant estatura,",
                    "metrical_pattern": "-+-+--+--+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "de quien yo fago conmemoraçión,",
                    "metrical_pattern": "--++-----+-"
                }
            ],
            "stanza_text": "Jaián entre los santos, admirable\npor fuerça insigne e grant estatura,\nde quien yo fago conmemoraçión,"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "faz, por tus ruegos, por el espantable",
                    "metrical_pattern": "+--+-----+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "passo yo pase en nave segura,",
                    "metrical_pattern": "+-++--+--+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "libre del golfo de la dapnaçión.",
                    "metrical_pattern": "+--+-----+-"
                }
            ],
            "stanza_text": "faz, por tus ruegos, por el espantable\npasso yo pase en nave segura,\nlibre del golfo de la dapnaçión."
        }
    ]
