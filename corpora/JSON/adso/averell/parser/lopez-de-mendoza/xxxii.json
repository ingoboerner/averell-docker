{
    "poem_title": "- XXXII - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Lopez de Mendoza",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Roma en el mundo e vos en España",
                    "metrical_pattern": "+--+--+--+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "soys solas çibdades çiertamente,",
                    "metrical_pattern": "++--+--+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "fermosa Yspalis, sola por fazaña,",
                    "metrical_pattern": "-+--+-+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "corona de Bética exçelente.",
                    "metrical_pattern": "-+--+----+-"
                }
            ],
            "stanza_text": "Roma en el mundo e vos en España\nsoys solas çibdades çiertamente,\nfermosa Yspalis, sola por fazaña,\ncorona de Bética exçelente."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Noble por hedifiçios, non me engaña",
                    "metrical_pattern": "+----+-+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "van apparençia, mas judgo patente",
                    "metrical_pattern": "+--+--+--+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "vuestra grand fama aún non ser tamaña",
                    "metrical_pattern": "--++-+++-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "cuan loable soys a quien lo siente.",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "Noble por hedifiçios, non me engaña\nvan apparençia, mas judgo patente\nvuestra grand fama aún non ser tamaña\ncuan loable soys a quien lo siente."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "En vos concurre venerable clero,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "sacras reliquias, sanctas religiones,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "el braço militante cavallero,",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "En vos concurre venerable clero,\nsacras reliquias, sanctas religiones,\nel braço militante cavallero,"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "claras estirpes, diversas nasçiones,",
                    "metrical_pattern": "+--+--+--+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "fustas sin cuento; Hércules primero,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "Yspán e Julio son vuestros patrones.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "claras estirpes, diversas nasçiones,\nfustas sin cuento; Hércules primero,\nYspán e Julio son vuestros patrones."
        }
    ]
}