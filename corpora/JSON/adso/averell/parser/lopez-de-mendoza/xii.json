{
    "poem_title": "- XII - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Lopez de Mendoza",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Timbre de amor, con el cual combate,",
                    "metrical_pattern": "+---+----+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "cativa e prende toda gente humana;",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "del ánimo gentil derrero mate,",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "e de las más fermosas soberana.",
                    "metrical_pattern": "---+-+---+-"
                }
            ],
            "stanza_text": "Timbre de amor, con el cual combate,\ncativa e prende toda gente humana;\ndel ánimo gentil derrero mate,\ne de las más fermosas soberana."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "De la famosa rueda tan cercana",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "non fue por belleza Virginea,",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "nin fizo Dido, nin Dampne Penea,",
                    "metrical_pattern": "++-+-++--+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "de quien Ovidio grand loor esplana.",
                    "metrical_pattern": "---+-+-+-+-"
                }
            ],
            "stanza_text": "De la famosa rueda tan cercana\nnon fue por belleza Virginea,\nnin fizo Dido, nin Dampne Penea,\nde quien Ovidio grand loor esplana."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Templo emicante donde la cordura",
                    "metrical_pattern": "+--+-----+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "es adorada, e honesta destreza,",
                    "metrical_pattern": "+--+--+--+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "silla e reposo de la fermosura,",
                    "metrical_pattern": "+--+-----+-"
                }
            ],
            "stanza_text": "Templo emicante donde la cordura\nes adorada, e honesta destreza,\nsilla e reposo de la fermosura,"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "choro placiente do virtud se reza;",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "válgame, deesa, tu mesura,",
                    "metrical_pattern": "+---+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "e non me judgues contra gentileza.",
                    "metrical_pattern": "-+-+-----+-"
                }
            ],
            "stanza_text": "choro placiente do virtud se reza;\nválgame, deesa, tu mesura,\ne non me judgues contra gentileza."
        }
    ]
}