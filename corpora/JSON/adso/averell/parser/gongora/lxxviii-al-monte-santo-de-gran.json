{
    "poem_title": "- LXXVIII - Al Monte Santo de Granada ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Gongora",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Este monte, de cruces coronado,",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "cuya siempre dichosa excelsa cumbre,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "espina, luz, y no vomita lumbre,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "Etna glorioso, Mongibel sagrado.",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "Este monte, de cruces coronado,\ncuya siempre dichosa excelsa cumbre,\nespina, luz, y no vomita lumbre,\nEtna glorioso, Mongibel sagrado."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Trofeo es, dulcemente levantado,",
                    "metrical_pattern": "-+++-+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "no ponderosa grave pesadumbre,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "para oprimir sacrílega costumbre,",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "de bando contra el Cielo conjurado.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Trofeo es, dulcemente levantado,\nno ponderosa grave pesadumbre,\npara oprimir sacrílega costumbre,\nde bando contra el Cielo conjurado."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Gigantes miden sus ocultas faldas,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "que a los Cielos hicieron fuerza, aquella,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "que los cielos padecen fuerza santa.",
                    "metrical_pattern": "--+--+-+-+-"
                }
            ],
            "stanza_text": "Gigantes miden sus ocultas faldas,\nque a los Cielos hicieron fuerza, aquella,\nque los cielos padecen fuerza santa."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Sus miembros cubre, y sus reliquias sella",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "la bien pisada tierra, veneradlas",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "con tiernos ojos, con devota planta.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Sus miembros cubre, y sus reliquias sella\nla bien pisada tierra, veneradlas\ncon tiernos ojos, con devota planta."
        }
    ]
}