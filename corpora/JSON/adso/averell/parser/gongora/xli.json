{
    "poem_title": "- XLI - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Gongora",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "De pura honestidad templo sagrado,",
                    "metrical_pattern": "-+---++--+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "cuyo bello cimiento y gentil muro,",
                    "metrical_pattern": "--+--+--++-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "de blanco nácar y alabastro duro",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "fue por divina mano fabricado;",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "De pura honestidad templo sagrado,\ncuyo bello cimiento y gentil muro,\nde blanco nácar y alabastro duro\nfue por divina mano fabricado;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "pequeña puerta de coral preciado,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "claras lumbreras de mirar seguro,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "que a la esmeralda fina el verde puro",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "habéis para viriles usurpado;",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "pequeña puerta de coral preciado,\nclaras lumbreras de mirar seguro,\nque a la esmeralda fina el verde puro\nhabéis para viriles usurpado;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "soberbio techo, cuyas cimbrias de oro",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "al claro Sol, en cuanto en torno gira,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "ornan de luz, coronan de belleza;",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "soberbio techo, cuyas cimbrias de oro\nal claro Sol, en cuanto en torno gira,\nornan de luz, coronan de belleza;"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "ídolo bello, a quien humilde adoro,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "oye piadoso al que por ti suspira,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "tus himnos canta, y tus virtudes reza.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "ídolo bello, a quien humilde adoro,\noye piadoso al que por ti suspira,\ntus himnos canta, y tus virtudes reza."
        }
    ]
}