            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Mientras que bebe el regalado aliento",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "de tu divina boca, ¡oh Laura mía!;",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "mientras asiste al sol que roba al día,",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "por más hermosa luz, luz y contento,",
                    "metrical_pattern": "-+-+-++--+-"
