                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "«Bien que sagrado incienso, bien que puede",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "vencer ardiente víctima tu saña,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "esta corriente que tus basas baña,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
