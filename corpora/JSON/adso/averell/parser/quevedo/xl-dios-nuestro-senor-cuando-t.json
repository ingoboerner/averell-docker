            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Con la voz del enojo de Dios suena",
                    "metrical_pattern": "--+--+--++-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "ronca y rota la nube, el viento brama;",
