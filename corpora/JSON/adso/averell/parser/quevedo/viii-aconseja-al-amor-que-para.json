            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Amor, prevén el arco y la saeta",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "que enseñó a navegar y dar amante",
