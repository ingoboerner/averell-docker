            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Dichoso tú, que naces sin testigo",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "y de progenitores ignorados,",
