{
    "poem_title": "Exclama contra el rico, hinchado y glotón  ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Quevedo",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "¡Cuántas manos se afanan en Oriente",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "examinando la mayor altura,",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "porque en tus dedos, breve coyuntura,",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "con todo patrimonio, esté luciente!",
                    "metrical_pattern": "-+---+-+-+-"
                }
            ],
            "stanza_text": "¡Cuántas manos se afanan en Oriente\nexaminando la mayor altura,\nporque en tus dedos, breve coyuntura,\ncon todo patrimonio, esté luciente!"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "¡Cuánta descaminada ciega gente",
                    "metrical_pattern": "+----+-+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "tiene en poco del mar la saña dura,",
                    "metrical_pattern": "+-+--+-+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "sólo para que adorne tu locura",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "rubia calamidad, púrpura ardiente!",
                    "metrical_pattern": "+----++--+-"
                }
            ],
            "stanza_text": "¡Cuánta descaminada ciega gente\ntiene en poco del mar la saña dura,\nsólo para que adorne tu locura\nrubia calamidad, púrpura ardiente!"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "¡Cuánto pirata de Noruega, atento",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "ministro de tu gula, remontado,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "despuebla de familia alada el viento!",
                    "metrical_pattern": "-+---+-+-+-"
                }
            ],
            "stanza_text": "¡Cuánto pirata de Noruega, atento\nministro de tu gula, remontado,\ndespuebla de familia alada el viento!"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "¡Cuánto engaño de cáñamo anudado",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "tiene el golfo, inquiriendo su elemento",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "al pasto delicioso del pecado!",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "¡Cuánto engaño de cáñamo anudado\ntiene el golfo, inquiriendo su elemento\nal pasto delicioso del pecado!"
        }
    ]
}