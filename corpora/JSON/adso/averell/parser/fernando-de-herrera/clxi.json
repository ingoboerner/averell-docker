{
    "poem_title": "-CLXI-",
    "corpus": "adso",
    "manually_checked": true,
    "author": "Fernando de Herrera",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Hórrido invierno, que la  luz serena",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "y agradable color del puro cielo",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "cubres de oscura sombra y turbio velo",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "con la mojada faz de nieblas llena,",
                    "metrical_pattern": "---+-+-+-+-"
                }
            ],
            "stanza_text": "Hórrido invierno, que la  luz serena\ny agradable color del puro cielo\ncubres de oscura sombra y turbio velo\ncon la mojada faz de nieblas llena,"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "vuelve a la fría gruta y la cadena",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "del nevoso Aquilón, y en aquel hielo,",
                    "metrical_pattern": "--+--+--++-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "que prime con rigor el duro suelo,",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "las furias de tu ímpetu refrena;",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "vuelve a la fría gruta y la cadena\ndel nevoso Aquilón, y en aquel hielo,\nque prime con rigor el duro suelo,\nlas furias de tu ímpetu refrena;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "que en tanto que en tu ira embravecido",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "asaltas el divino Hesperio río,",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "que corre al sacro seno de Occidente,",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "que en tanto que en tu ira embravecido\nasaltas el divino Hesperio río,\nque corre al sacro seno de Occidente,"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "yo triste, en nube eterna del olvido,",
                    "metrical_pattern": "++-+-+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "culpa tuya, apartado del sol mío,",
                    "metrical_pattern": "+-+--+--++-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "no me enciendo en los rayos de su frente.",
                    "metrical_pattern": "+-+--+---+-"
                }
            ],
            "stanza_text": "yo triste, en nube eterna del olvido,\nculpa tuya, apartado del sol mío,\nno me enciendo en los rayos de su frente."
        }
    ]
}