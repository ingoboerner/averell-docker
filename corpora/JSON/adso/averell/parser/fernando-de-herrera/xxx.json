            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "¡Oh cara perdición! ¡oh dulce engaño!",
                    "metrical_pattern": "++---+++-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "suave mal, sabroso descontento,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "amado error del tierno pensamiento,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "luz, que nunca descubre el desengaño,",
                    "metrical_pattern": "+-+--+---+-"
                }
            ],
            "stanza_text": "¡Oh cara perdición! ¡oh dulce engaño!\nsuave mal, sabroso descontento,\namado error del tierno pensamiento,\nluz, que nunca descubre el desengaño,"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "puerta por la cual entra el bien y el daño,",
                    "metrical_pattern": "+----+-+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "descanso y pena grave del tormento,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "vida del mal, alma del sufrimiento,",
                    "metrical_pattern": "+--++----+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "de confusión revuelta, cerco extraño,",
                    "metrical_pattern": "---+-+-+-+-"
                }
            ],
            "stanza_text": "puerta por la cual entra el bien y el daño,\ndescanso y pena grave del tormento,\nvida del mal, alma del sufrimiento,\nde confusión revuelta, cerco extraño,"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "vario mar de tormenta y de bonanza,",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "segura playa y peligroso puerto,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "sereno, instable, oscuro y claro cielo,",
                    "metrical_pattern": "-+-+-+-+-+-"
                }
            ],
            "stanza_text": "vario mar de tormenta y de bonanza,\nsegura playa y peligroso puerto,\nsereno, instable, oscuro y claro cielo,"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "¿por qué como me diste confianza",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "de osar perderme, ya que estoy desierto",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "de bien, no pones a mi mal consuelo?",
                    "metrical_pattern": "-+++---+-+-"
                }
            ],
            "stanza_text": "¿por qué como me diste confianza\nde osar perderme, ya que estoy desierto\nde bien, no pones a mi mal consuelo?"
        }
    ]
}