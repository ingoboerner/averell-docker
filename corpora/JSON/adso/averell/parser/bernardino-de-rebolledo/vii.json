{
    "poem_title": "- VII - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Bernardino de Rebolledo",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Tal pudo un atrevido rendimiento,",
                    "metrical_pattern": "+++--+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "tanto una generosa confianza,",
                    "metrical_pattern": "+-+---+--+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "en desestimación de la esperanza",
                    "metrical_pattern": "-----+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "en desesperación del sufrimiento.",
                    "metrical_pattern": "-----+---+-"
                }
            ],
            "stanza_text": "Tal pudo un atrevido rendimiento,\ntanto una generosa confianza,\nen desestimación de la esperanza\nen desesperación del sufrimiento."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Que limitando plazos al tormento",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "redujeron con próspera mudanza,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "el mortal riesgo a la mayor bonanza",
                    "metrical_pattern": "--++---+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "el mayor daño al más feliz contento.",
                    "metrical_pattern": "--++-+-+-+-"
                }
            ],
            "stanza_text": "Que limitando plazos al tormento\nredujeron con próspera mudanza,\nel mortal riesgo a la mayor bonanza\nel mayor daño al más feliz contento."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Todo aquel aparato riguroso",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "de enojos y de errores asombrado",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "alto en teatro ya de tanta gloria.",
                    "metrical_pattern": "+--+-+-+-+-"
                }
            ],
            "stanza_text": "Todo aquel aparato riguroso\nde enojos y de errores asombrado\nalto en teatro ya de tanta gloria."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "De la suerte debiera estar quejoso",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "si no me hubiera los tormentos dado,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "por aumentar el bien con su memoria.",
                    "metrical_pattern": "---+-+---+-"
                }
            ],
            "stanza_text": "De la suerte debiera estar quejoso\nsi no me hubiera los tormentos dado,\npor aumentar el bien con su memoria."
        }
    ]
}