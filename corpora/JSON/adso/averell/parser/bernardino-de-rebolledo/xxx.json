{
    "poem_title": "- XXX - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Bernardino de Rebolledo",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Arde el Báltico mar cuyos Cristales",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "luminosos reflejos dan al suelo,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "desde que aposentaron en su hielo",
                    "metrical_pattern": "-----+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "de Cristina las luces celestiales.",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "Arde el Báltico mar cuyos Cristales\nluminosos reflejos dan al suelo,\ndesde que aposentaron en su hielo\nde Cristina las luces celestiales."
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Pervertidos los términos fatales,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "del uno al otro opuesto Paralelo",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "incluyó breve Golfo tanto Cielo,",
                    "metrical_pattern": "--++-+-+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "en asombro común de los mortales.",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "Pervertidos los términos fatales,\ndel uno al otro opuesto Paralelo\nincluyó breve Golfo tanto Cielo,\nen asombro común de los mortales."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Y lustradas de puros esplendores",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "brotan de Tetis las cavernas ondas",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "de perlas rica numerosa suma.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Y lustradas de puros esplendores\nbrotan de Tetis las cavernas ondas\nde perlas rica numerosa suma."
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Y ceñido de cándidos fulgores",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "vuelve a nacer el Sol entre las ondas",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "y Minerva cual Venus de la espuma.",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "Y ceñido de cándidos fulgores\nvuelve a nacer el Sol entre las ondas\ny Minerva cual Venus de la espuma."
        }
    ]
}