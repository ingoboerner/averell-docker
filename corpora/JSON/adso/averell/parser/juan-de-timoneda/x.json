    "author": "Juan de Timoneda",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Encierra, oh claro sol de hermosura,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "tu luz, y deja ver esas estrellas,",
                    "metrical_pattern": "-+-+-++--+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "¿no ves que ningún modo deja vellas",
                    "metrical_pattern": "++--++-+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "el grande resplandor de tu figura?",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Encierra, oh claro sol de hermosura,\ntu luz, y deja ver esas estrellas,\n¿no ves que ningún modo deja vellas\nel grande resplandor de tu figura?"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Qué petición la mía, y qué locura,",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "tu claridad extiende en medio de ellas,",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "conozcan que ante ti son todas ellas",
                    "metrical_pattern": "-+---+++-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "como es ante lo vio la pintura.",
                    "metrical_pattern": "--+---+--+-"
                }
            ],
            "stanza_text": "Qué petición la mía, y qué locura,\ntu claridad extiende en medio de ellas,\nconozcan que ante ti son todas ellas\ncomo es ante lo vio la pintura."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Si alguno contradice lo que digo,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "si alguno tiene falso el pensamiento,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "si alguno de pequeña luz se ciega,",
                    "metrical_pattern": "-+---+-+-+-"
                }
            ],
            "stanza_text": "Si alguno contradice lo que digo,\nsi alguno tiene falso el pensamiento,\nsi alguno de pequeña luz se ciega,"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "quien no tiene pasión me sea testigo,",
                    "metrical_pattern": "-++--+-+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "que a tu beldad, valor ,merecimiento",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "de cuantas visto he ninguna allega.",
                    "metrical_pattern": "-+-+-+-+-+-"
                }
            ],
            "stanza_text": "quien no tiene pasión me sea testigo,\nque a tu beldad, valor ,merecimiento\nde cuantas visto he ninguna allega."
        }
    ]
}