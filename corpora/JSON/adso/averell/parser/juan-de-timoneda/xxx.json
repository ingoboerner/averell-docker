                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "En un sombrío valle despeinaban",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "sus muy rubios cabellos y escogidos",
                    "metrical_pattern": "-++--+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "muchas pastoras que con mil gemidos",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 4,
