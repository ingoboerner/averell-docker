{
    "poem_title": "- LIII - ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Diego Hurtado de Mendoza",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Don Marte capitán, y crespa Aurora,",
                    "metrical_pattern": "++---+-+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "Venus la novia del herrero flaco,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "Ceres la panadera, brindis Baco,",
                    "metrical_pattern": "+----+-+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "Palas mujer del duelo esgrimidora;",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "Don Marte capitán, y crespa Aurora,\nVenus la novia del herrero flaco,\nCeres la panadera, brindis Baco,\nPalas mujer del duelo esgrimidora;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "Apolo el antorchero y su señora,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "la dama del laurel y del tabaco,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "Eco la emparedada, Lepe, Caco,",
                    "metrical_pattern": "+----+-+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "Narciso el puto, la hortelana Flora;",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Apolo el antorchero y su señora,\nla dama del laurel y del tabaco,\nEco la emparedada, Lepe, Caco,\nNarciso el puto, la hortelana Flora;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Júpiter el fantasma hecho toro,",
                    "metrical_pattern": "+----+-+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "Juno celosa, perro de hortelano,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "Mercurio su cartero con alones,",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Júpiter el fantasma hecho toro,\nJuno celosa, perro de hortelano,\nMercurio su cartero con alones,"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "Celebraban con risa el triste lloro,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "que por mi Ninfa hago, mano a mano,",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "sin dárseles por mí dos cagajones.",
                    "metrical_pattern": "-+---++--+-"
                }
            ],
            "stanza_text": "Celebraban con risa el triste lloro,\nque por mi Ninfa hago, mano a mano,\nsin dárseles por mí dos cagajones."
        }
    ]
}