{
    "poem_title": "- XLIX - Sonetos satíricos y burlescos ",
    "corpus": "adso",
    "manually_checked": false,
    "author": "Diego Hurtado de Mendoza",
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Cuando las gentes van todas buscando",
                    "metrical_pattern": "---+-++--+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "cómo tener placer y alegres días,",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "haciendo unos con otros alegrías,",
                    "metrical_pattern": "-++--+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "sin jamás otra cosa estar pensando;",
                    "metrical_pattern": "--++-+-+-+-"
                }
            ],
            "stanza_text": "Cuando las gentes van todas buscando\ncómo tener placer y alegres días,\nhaciendo unos con otros alegrías,\nsin jamás otra cosa estar pensando;"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "entonces ando yo imaginando",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "todas las penas y congojas mías,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "revuelto el corazón en fantasías,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "lágrimas dolorosas derramando;",
                    "metrical_pattern": "+----+---+-"
                }
            ],
            "stanza_text": "entonces ando yo imaginando\ntodas las penas y congojas mías,\nrevuelto el corazón en fantasías,\nlágrimas dolorosas derramando;"
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "visitando las tristes sepulturas,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "interrogando almas infernales,",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "y ellas responden por claras figuras;",
                    "metrical_pattern": "+--+--+--+-"
                }
            ],
            "stanza_text": "visitando las tristes sepulturas,\ninterrogando almas infernales,\ny ellas responden por claras figuras;"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "que no tienen consuelo allá en sus males",
                    "metrical_pattern": "-++--+-+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "sino sólo en sentir mis desventuras",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "a quien ningunas pueden ser iguales.",
                    "metrical_pattern": "---+-+-+-+-"
                }
            ],
            "stanza_text": "que no tienen consuelo allá en sus males\nsino sólo en sentir mis desventuras\na quien ningunas pueden ser iguales."
        }
    ]
}