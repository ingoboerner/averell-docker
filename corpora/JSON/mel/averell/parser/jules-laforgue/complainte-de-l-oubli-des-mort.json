{
    "poem_title": "COMPLAINTE\nDE L'OUBLI DES MORTS",
    "author": "Jules Laforgue",
    "structure": "suite périodique",
    "year": "1885",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Mesdames et Messieurs,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Vous dont la mère est morte.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "C'est le bon fossoyeux",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Qui gratte à votre porte.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Mesdames et Messieurs,\nVous dont la mère est morte.\nC'est le bon fossoyeux\nQui gratte à votre porte."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Les morts",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "C'est sous terre ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                },
                {
                    "line_number": 7,
                    "line_text": "Ça n'en sort",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Les morts\nC'est sous terre ;\nÇa n'en sort"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 8,
                    "line_text": "Vous fumez dans vos bocks,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 9,
                    "line_text": "Vous soldez quelque idylle,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 10,
                    "line_text": "Là-bas chante le coq,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 11,
                    "line_text": "Pauvres morts hors des villes !",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Vous fumez dans vos bocks,\nVous soldez quelque idylle,\nLà-bas chante le coq,\nPauvres morts hors des villes !"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Grand-papa se penchait,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 13,
                    "line_text": "Là, le doigt sur la tempe,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 14,
                    "line_text": "Sœur faisait du crochet,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 15,
                    "line_text": "Mère montait la lampe.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Grand-papa se penchait,\nLà, le doigt sur la tempe,\nSœur faisait du crochet,\nMère montait la lampe."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 16,
                    "line_text": "Les morts",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                },
                {
                    "line_number": 17,
                    "line_text": "C'est discret,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                },
                {
                    "line_number": 18,
                    "line_text": "Ça dort",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                },
                {
                    "line_number": 19,
                    "line_text": "Trop au frais.",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Les morts\nC'est discret,\nÇa dort\nTrop au frais."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 20,
                    "line_text": "Vous avez bien dîné,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 21,
                    "line_text": "Comment va cette affaire ?",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 22,
                    "line_text": "Ah ! Les petits mort-nés",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 23,
                    "line_text": "Ne se dorlotent guère !",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Vous avez bien dîné,\nComment va cette affaire ?\nAh ! Les petits mort-nés\nNe se dorlotent guère !"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 24,
                    "line_text": "Notez, d'un trait égal,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 25,
                    "line_text": "Au livre de la caisse,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 26,
                    "line_text": "Entre deux frais de bal :",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 27,
                    "line_text": "Entretien tombe et messe.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Notez, d'un trait égal,\nAu livre de la caisse,\nEntre deux frais de bal :\nEntretien tombe et messe."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 28,
                    "line_text": "C'est gai,",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                },
                {
                    "line_number": 29,
                    "line_text": "Cette vie ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                },
                {
                    "line_number": 30,
                    "line_text": "Hein, ma mie,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                },
                {
                    "line_number": 31,
                    "line_text": "Ô gué ?",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "C'est gai,\nCette vie ;\nHein, ma mie,\nÔ gué ?"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 32,
                    "line_text": "Mesdames et Messieurs,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 33,
                    "line_text": "Vous dont la sœur est morte,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 34,
                    "line_text": "Ouvrez au fossoyeux",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 35,
                    "line_text": "Qui claque à votre porte ;",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Mesdames et Messieurs,\nVous dont la sœur est morte,\nOuvrez au fossoyeux\nQui claque à votre porte ;"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 36,
                    "line_text": "Si vous n'avez pitié,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 37,
                    "line_text": "Il viendra (sans rancune)",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 38,
                    "line_text": "Vous tirer par les pieds,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 39,
                    "line_text": "Une nuit de grand'lune !",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Si vous n'avez pitié,\nIl viendra (sans rancune)\nVous tirer par les pieds,\nUne nuit de grand'lune !"
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 40,
                    "line_text": "Importun",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 41,
                    "line_text": "Vent qui rage !",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                },
                {
                    "line_number": 42,
                    "line_text": "Les défunts ?",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 43,
                    "line_text": "Ça voyage…",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Importun\nVent qui rage !\nLes défunts ?\nÇa voyage…"
        }
