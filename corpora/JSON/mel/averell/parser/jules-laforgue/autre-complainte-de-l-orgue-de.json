            "stanza_type": null,
            "lines": [
                {
                    "line_number": 39,
                    "line_text": "‒ Enfin ! Quels sont donc tes vœux ?",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 40,
