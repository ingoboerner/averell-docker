                {
                    "line_number": 1,
                    "line_text": "Un éléphant de Jade, œil mi-clos souriant,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Méditait sous la riche éternelle pendule,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Bon bouddha d'exilé qui trouve ridicule",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Qu'on pleure vers les Nils des couchants d'Orient,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 5,
                    "line_text": "Quand bave notre crépuscule.",
                    "metrical_pattern": null,
