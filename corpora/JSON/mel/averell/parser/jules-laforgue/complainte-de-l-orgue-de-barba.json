                {
                    "line_number": 14,
                    "line_text": "Ah ! Mortels postiches.",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": ""
                }
            ],
            "stanza_text": "Gaz, haillons d'affiches,\nFeu les casinos,\nCercueils des pianos,\nAh ! Mortels postiches."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "‒ « Déjà la nuit, qu'on surveille à peine",
                    "metrical_pattern": null,
                    "line_length": "4−6",
                    "rhyme": ""
                }
            ],
            "stanza_text": "‒ « Déjà la nuit, qu'on surveille à peine"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 16,
                    "line_text": "Romans pour les quais,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": ""
                },
                {
                    "line_number": 17,
                    "line_text": "Photos élégiaques,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": ""
                },
                {
                    "line_number": 18,
                    "line_text": "Escarpins, vieux claques,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": ""
