        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Hein, étés idiots,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": ""
                },
