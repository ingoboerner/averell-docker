            "stanza_type": null,
            "lines": [
                {
                    "line_number": 27,
                    "line_text": "Vêpres, Ostensoirs,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": ""
                },
                {
                    "line_number": 28,
                    "line_text": "Couchants ! Sulamites",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": ""
                },
                {
                    "line_number": 29,
                    "line_text": "De province aux rites",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": ""
                },
                {
                    "line_number": 30,
                    "line_text": "Exilants des soirs !",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": ""
                }
            ],
            "stanza_text": "Vêpres, Ostensoirs,\nCouchants ! Sulamites\nDe province aux rites\nExilants des soirs !"
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "‒ « Ils m'ont brûlée ; et depuis, vagabonde",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": ""
                },
                {
                    "line_number": 32,
                    "line_text": "Au fond des bois frais, j'implore le monde. »",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": ""
                }
            ],
            "stanza_text": "‒ « Ils m'ont brûlée ; et depuis, vagabonde\nAu fond des bois frais, j'implore le monde. »"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Et les vents s'engueulent,",
                    "metrical_pattern": null,
