            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "‒ « Ô ballets corrosifs ! Réel, le crime ?",
                    "metrical_pattern": null,
                    "line_length": "6+4",
                    "rhyme": ""
                },
                {
                    "line_number": 26,
