                {
                    "line_number": 1,
                    "line_text": "Un monde mort, immense écume de la mer,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Gouffre d'ombre stérile et de lueurs spectrales,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Jets de pics convulsifs étirés en spirales",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Qui vont éperdument dans le brouillard amer.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
