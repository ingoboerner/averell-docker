            "lines": [
                {
                    "line_number": 61,
                    "line_text": "O rêveurs, ô martyrs, vaillantes créatures,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 62,
                    "line_text": "Qui, dans l'effort sacré de vos nobles natures,",
