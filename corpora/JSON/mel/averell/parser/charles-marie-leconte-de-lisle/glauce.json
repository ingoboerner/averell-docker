                {
                    "line_number": 85,
                    "line_text": "Je puis nager à peine, et sur ma joue en fleur",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 86,
                    "line_text": "Le sommeil en fuyant a laissé la pâleur.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
