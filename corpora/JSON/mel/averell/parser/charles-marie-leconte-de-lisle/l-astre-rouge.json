            "lines": [
                {
                    "line_number": 1,
                    "line_text": "SUR les Continents morts, les houles léthargiques",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Où le dernier frisson d'un monde a palpité",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
