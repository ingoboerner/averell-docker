            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "«Je ne la verrai pas ! non, non !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "«Le lilas tremble sur sa tige ;",
