{
    "poem_title": "RÊVERIE",
    "author": "Jean Polonius",
    "structure": "forme RegExp (appariements)",
    "year": "1827",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
