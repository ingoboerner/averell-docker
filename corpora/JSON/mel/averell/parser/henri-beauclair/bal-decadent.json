{
    "poem_title": "Bal décadent",
    "author": "Henri Beauclair",
    "structure": "suite périodique",
    "year": "1885",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "C'était une danse",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "De la décadence.",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "C'était une danse\nDe la décadence."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "Comme un menuet",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Dolemment fluet.",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Comme un menuet\nDolemment fluet."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "C'était des chloroses",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Et c'était des roses.",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "C'était des chloroses\nEt c'était des roses."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "On ne sautait pas,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "On allait au pas.",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "On ne sautait pas,\nOn allait au pas."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Mais les girandoles",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Étaient presque folles.",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Mais les girandoles\nÉtaient presque folles."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Les lustres flambaient",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Et les seins tombaient.",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Les lustres flambaient\nEt les seins tombaient."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Dans ce flux de monde,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Je vis une blonde,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Dans ce flux de monde,\nJe vis une blonde,"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "Aux yeux culottés",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 16,
                    "line_text": "Par les voluptés,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Aux yeux culottés\nPar les voluptés,"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "En ses airs de morte,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Une vraie Eau-forte.",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "En ses airs de morte,\nUne vraie Eau-forte."
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Ange mal bâti,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Gamin perverti,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ange mal bâti,\nGamin perverti,"
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Lune blêmissante",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "Et concupiscente,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Lune blêmissante\nEt concupiscente,"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 23,
                    "line_text": "Fleur d'opoponax,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 24,
                    "line_text": "Souvenir d'Anthrax,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Fleur d'opoponax,\nSouvenir d'Anthrax,"
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Blafarde et vermeille.",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Très jeune et très vieille,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Blafarde et vermeille.\nTrès jeune et très vieille,"
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 27,
                    "line_text": "Elle souriait,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 28,
                    "line_text": "Et m'extasiait :",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Elle souriait,\nEt m'extasiait :"
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "«Article Paris,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Ta poudre de riz",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "«Article Paris,\nTa poudre de riz"
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "D'une éteinte flamme",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 32,
                    "line_text": "M'auréole l'âme.",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "D'une éteinte flamme\nM'auréole l'âme."
        },
        {
            "stanza_number": 17,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Si tes yeux sont verts,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Mon cœur est pervers.",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Si tes yeux sont verts,\nMon cœur est pervers."
        },
        {
            "stanza_number": 18,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 35,
                    "line_text": "Ta désespérance,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 36,
                    "line_text": "Oh ! quelle attirance !",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ta désespérance,\nOh ! quelle attirance !"
        },
        {
            "stanza_number": 19,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Laisse-moi t'aimer,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "et me consumer !»",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Laisse-moi t'aimer,\net me consumer !»"
        },
        {
            "stanza_number": 20,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 39,
                    "line_text": "Je dis et m'élance.",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 40,
                    "line_text": "Mais, motus, silence !",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Je dis et m'élance.\nMais, motus, silence !"
        },
        {
            "stanza_number": 21,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Faut pas s'emballer…",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "Voici s'en aller",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Faut pas s'emballer…\nVoici s'en aller"
        },
        {
            "stanza_number": 22,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 43,
                    "line_text": "Toute mon essence,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 44,
                    "line_text": "En déliquescence !!",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Toute mon essence,\nEn déliquescence !!"
        }
    ],
    "corpus": "mel"
}