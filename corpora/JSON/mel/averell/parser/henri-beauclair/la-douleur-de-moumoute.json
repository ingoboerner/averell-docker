            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Qu'a Moumoute, aujourd'hui ? disait son entourage ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Elle est triste, elle n'a pas de cœur à l'ouvrage.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Elle ne veut point voir son large canapé.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Aurait-elle perdu ses valeurs à la Bourse ?",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "c"
                },
                {
                    "line_number": 5,
