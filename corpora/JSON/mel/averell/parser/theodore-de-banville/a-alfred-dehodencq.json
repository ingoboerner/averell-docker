{
    "poem_title": "A Alfred Dehodencq",
    "author": "Théodore de Banville",
    "structure": "suite périodique",
    "year": "1856",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Tenir la lumière asservie",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Lorsqu'elle voudrait s'envoler,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "A Dieu le secret de la vie ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Tenir la lumière asservie\nLorsqu'elle voudrait s'envoler,\nA Dieu le secret de la vie ;"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 4,
                    "line_text": "Pour les mélanger sur des toiles",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 5,
                    "line_text": "Dérober même aux cieux vengeurs",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 6,
                    "line_text": "Et le blanc frisson des étoiles ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Pour les mélanger sur des toiles\nDérober même aux cieux vengeurs\nEt le blanc frisson des étoiles ;"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Comme on cueille une fleur éclose,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Ravir à l'Orient en feu",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 9,
                    "line_text": "Et son ciel flamboyant et rose ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Comme on cueille une fleur éclose,\nRavir à l'Orient en feu\nEt son ciel flamboyant et rose ;"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 10,
                    "line_text": "Pétrir de belles créatures,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 11,
                    "line_text": "Et sur d'éblouissants amas",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 12,
                    "line_text": "Éparpiller des chevelures ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Pétrir de belles créatures,\nEt sur d'éblouissants amas\nÉparpiller des chevelures ;"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Inonder de sang le Calvaire",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Ou jeter un éclat divin",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 15,
                    "line_text": "Qu'un buveur a mis dans son verre ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Inonder de sang le Calvaire\nOu jeter un éclat divin\nQu'un buveur a mis dans son verre ;"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 16,
                    "line_text": "Se réjouir des pierreries,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 17,
                    "line_text": "Et jeter le baiser vermeil",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 18,
                    "line_text": "Jusque sur les rouges tueries ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Se réjouir des pierreries,\nEt jeter le baiser vermeil\nJusque sur les rouges tueries ;"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Créer des êtres, et leur dire :",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Misérables, c'est votre tour !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 21,
                    "line_text": "De sa folle main vous déchire ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Créer des êtres, et leur dire :\nMisérables, c'est votre tour !\nDe sa folle main vous déchire ;"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 22,
                    "line_text": "Enfin pour ce monde risible",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 23,
                    "line_text": "Forçant la couleur à chanter,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 24,
                    "line_text": "Par une musique visible,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Enfin pour ce monde risible\nForçant la couleur à chanter,\nPar une musique visible,"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Voilà vraiment ce que vous faites,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Peintres ! qui pour nous préparez",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 27,
                    "line_text": "Sans repos d'éternelles fêtes !",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Voilà vraiment ce que vous faites,\nPeintres ! qui pour nous préparez\nSans repos d'éternelles fêtes !"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 28,
                    "line_text": "Ouvriers, inventeurs, génies !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 29,
                    "line_text": "Par un miracle surhumain,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 30,
                    "line_text": "Réalise ces harmonies",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Ouvriers, inventeurs, génies !\nPar un miracle surhumain,\nRéalise ces harmonies"
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "Où la couleur qui se déploie",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 32,
                    "line_text": "En accords de la nuit vainqueurs,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 33,
                    "line_text": "Fait jaillir des sources de joie.",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Où la couleur qui se déploie\nEn accords de la nuit vainqueurs,\nFait jaillir des sources de joie."
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 34,
                    "line_text": "Et nos fronts sont baignés d'aurore.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 35,
                    "line_text": "Mais vous, par un retour fatal,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 36,
                    "line_text": "Vous martyrise et vous dévore.",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et nos fronts sont baignés d'aurore.\nMais vous, par un retour fatal,\nVous martyrise et vous dévore."
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Et vos enchantements sublimes,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "Vous les payez de votre chair ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 39,
                    "line_text": "Le feu qu'on vole sur les cimes !",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et vos enchantements sublimes,\nVous les payez de votre chair ;\nLe feu qu'on vole sur les cimes !"
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 40,
                    "line_text": "Si tu montas avec délice",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 41,
                    "line_text": "L'escalier bleu des paradis",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 42,
                    "line_text": "Un inexprimable supplice",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Si tu montas avec délice\nL'escalier bleu des paradis\nUn inexprimable supplice"
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 43,
                    "line_text": "Te punit, ô rêveur étrange",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 44,
                    "line_text": "Qui sus donner l'illusion",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 45,
                    "line_text": "De lumière où s'envole un Ange ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Te punit, ô rêveur étrange\nQui sus donner l'illusion\nDe lumière où s'envole un Ange ;"
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 46,
                    "line_text": "Et lorsque tout le ciel flamboie",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 47,
                    "line_text": "Dans ta prunelle ivre d'amour,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 48,
                    "line_text": "Vient manger ton cœur et ton foie.",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et lorsque tout le ciel flamboie\nDans ta prunelle ivre d'amour,\nVient manger ton cœur et ton foie."
        }
    ],
    "corpus": "mel"
}