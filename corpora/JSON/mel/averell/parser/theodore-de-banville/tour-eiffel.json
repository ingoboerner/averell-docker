            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "On verra, dans leurs vols énormes,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
