            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Tel fut Paris en ses désastres.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
