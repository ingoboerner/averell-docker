{
    "poem_title": "Noce",
    "author": "Théodore de Banville",
    "structure": "suite périodique",
    "year": "1888",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "La nuit meurt. C'est bientôt l'heure",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Frissonnante du matin,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Où dans les bois le vent pleure,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Doux et parfumé de thym.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "La nuit meurt. C'est bientôt l'heure\nFrissonnante du matin,\nOù dans les bois le vent pleure,\nDoux et parfumé de thym."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Des soupeurs, faisant la guerre",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "A leur vieil ennui bavard,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 7,
                    "line_text": "S'ébattent dans un vulgaire",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Cabaret du boulevard.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Des soupeurs, faisant la guerre\nA leur vieil ennui bavard,\nS'ébattent dans un vulgaire\nCabaret du boulevard."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Et ces pâles noctambules",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Montrent des visages blancs",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 11,
                    "line_text": "Comme ceux des funambules",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Avec leurs toupets tremblants.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et ces pâles noctambules\nMontrent des visages blancs\nComme ceux des funambules\nAvec leurs toupets tremblants."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Ils traitent des cocodettes",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Pour qui ces plaisirs sont nuls,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 15,
                    "line_text": "Et qui songent à leurs dettes",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 16,
                    "line_text": "Avec de profonds calculs.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Ils traitent des cocodettes\nPour qui ces plaisirs sont nuls,\nEt qui songent à leurs dettes\nAvec de profonds calculs."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Elles font de tristes moues",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Sous de riantes couleurs,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 19,
                    "line_text": "Car les pastels de leurs joues",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Sont comme un bouquet de fleurs.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Elles font de tristes moues\nSous de riantes couleurs,\nCar les pastels de leurs joues\nSont comme un bouquet de fleurs."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "C'est la fête qu'elles donnent",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "A leurs amants éblouis,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 23,
                    "line_text": "Et tout bas elles fredonnent",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 24,
                    "line_text": "L'hypothèse des louis.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "C'est la fête qu'elles donnent\nA leurs amants éblouis,\nEt tout bas elles fredonnent\nL'hypothèse des louis."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Leur fard éclatant rougeoie,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Et cependant, les soupeurs,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 27,
                    "line_text": "Sans désir comme sans joie,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 28,
                    "line_text": "Plus graves que des sapeurs,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Leur fard éclatant rougeoie,\nEt cependant, les soupeurs,\nSans désir comme sans joie,\nPlus graves que des sapeurs,"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Dans le bleu salon morose",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Où leur ennui se tient coi,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 31,
                    "line_text": "Boivent du champagne rose,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 32,
                    "line_text": "En baisant n'importe quoi.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Dans le bleu salon morose\nOù leur ennui se tient coi,\nBoivent du champagne rose,\nEn baisant n'importe quoi."
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Des écrevisses farouches",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Forment le fond du repas.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 35,
                    "line_text": "Elles emportent les bouches",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 36,
                    "line_text": "Et ne les rapportent pas.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Des écrevisses farouches\nForment le fond du repas.\nElles emportent les bouches\nEt ne les rapportent pas."
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Et l'on mange aussi des pickles",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "D'un prodigieux élan,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 39,
                    "line_text": "Où l'on peut voir, sans bésicles,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 40,
                    "line_text": "Tous les monstres de Ceylan.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et l'on mange aussi des pickles\nD'un prodigieux élan,\nOù l'on peut voir, sans bésicles,\nTous les monstres de Ceylan."
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Sous le gaz jaune qui flambe,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "Grande comme une Pallas,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 43,
                    "line_text": "Emma laisse voir sa jambe",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 44,
                    "line_text": "Que l'on a tant vue, hélas !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Sous le gaz jaune qui flambe,\nGrande comme une Pallas,\nEmma laisse voir sa jambe\nQue l'on a tant vue, hélas !"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Séraphine devient tendre ;",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 46,
                    "line_text": "Et Lise, dans un dessein",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 47,
                    "line_text": "Qu'il est aisé de comprendre,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 48,
                    "line_text": "Montre les lys d'un beau sein.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Séraphine devient tendre ;\nEt Lise, dans un dessein\nQu'il est aisé de comprendre,\nMontre les lys d'un beau sein."
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Telle Cypris dans sa conque.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 50,
                    "line_text": "Puis, comme il faut accoucher",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 51,
                    "line_text": "D'un vieux dénoûment quelconque,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 52,
                    "line_text": "Tous vont aller se coucher.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Telle Cypris dans sa conque.\nPuis, comme il faut accoucher\nD'un vieux dénoûment quelconque,\nTous vont aller se coucher."
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "Non sans un peu d'amertume,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 54,
                    "line_text": "Chacun ayant fait ses frais,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 55,
                    "line_text": "Ils sortent sur le bitume,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 56,
                    "line_text": "Caressés par le vent frais.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Non sans un peu d'amertume,\nChacun ayant fait ses frais,\nIls sortent sur le bitume,\nCaressés par le vent frais."
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 57,
                    "line_text": "Avec les vains simulacres",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 58,
                    "line_text": "De s'être bien amusés,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 59,
                    "line_text": "Les voilà prenant des fiacres",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 60,
                    "line_text": "Vieux et jusqu'à l'âme usés.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Avec les vains simulacres\nDe s'être bien amusés,\nLes voilà prenant des fiacres\nVieux et jusqu'à l'âme usés."
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 61,
                    "line_text": "Redoutant le dieu féroce",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 62,
                    "line_text": "Que désigne un arc vermeil,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 63,
                    "line_text": "Ils s'en vont, gens de la noce,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 64,
                    "line_text": "A l'heure où vient le Soleil.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Redoutant le dieu féroce\nQue désigne un arc vermeil,\nIls s'en vont, gens de la noce,\nA l'heure où vient le Soleil."
        },
        {
            "stanza_number": 17,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 65,
                    "line_text": "Ils vont dormir, sous les toiles,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 66,
                    "line_text": "Un sommeil essentiel,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 67,
                    "line_text": "Car les dernières étoiles",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 68,
                    "line_text": "Pâlissent au fond du ciel.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Ils vont dormir, sous les toiles,\nUn sommeil essentiel,\nCar les dernières étoiles\nPâlissent au fond du ciel."
        }
    ],
    "corpus": "mel"
}