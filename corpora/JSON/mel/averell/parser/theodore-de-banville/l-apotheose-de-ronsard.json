            "stanza_number": 27,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 79,
                    "line_text": "Muses aux belles bouches ;",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 80,
                    "line_text": "Et les astres farouches",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 81,
                    "line_text": "Restent silencieux",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Muses aux belles bouches ;\nEt les astres farouches\nRestent silencieux"
