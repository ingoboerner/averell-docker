                },
                {
                    "line_number": 15,
                    "line_text": "Met sur eux son châle troué",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 16,
                    "line_text": "Et leur tend sa mamelle vide.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
