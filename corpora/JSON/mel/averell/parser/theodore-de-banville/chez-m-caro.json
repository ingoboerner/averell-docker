    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Le gai soleil, goutte à goutte,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Ruisselle par un carreau",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Dans la chambre où l'on écoute",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Le cours de monsieur Caro.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Le gai soleil, goutte à goutte,\nRuisselle par un carreau\nDans la chambre où l'on écoute\nLe cours de monsieur Caro."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Les coquettes anxieuses,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Les femmes au cœur aimant",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 7,
                    "line_text": "Sont toutes délicieuses ;",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Le professeur est charmant.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Les coquettes anxieuses,\nLes femmes au cœur aimant\nSont toutes délicieuses ;\nLe professeur est charmant."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Frêles mains souvent chantées,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Prunelles de fin velours",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 11,
                    "line_text": "Qui se baissent, enchantées,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Sous de grands cils presque lourds ;",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Frêles mains souvent chantées,\nPrunelles de fin velours\nQui se baissent, enchantées,\nSous de grands cils presque lourds ;"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Merveilleuses chevelures",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Dont l'or à nos âmes nuit,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 15,
                    "line_text": "Ou bien dont les annelures",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 16,
                    "line_text": "Sont plus sombres que la nuit.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Merveilleuses chevelures\nDont l'or à nos âmes nuit,\nOu bien dont les annelures\nSont plus sombres que la nuit."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Profils aristocratiques",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "D'un grand style essentiel,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 19,
                    "line_text": "Et petits nez socratiques",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Évaporés vers le ciel ;",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Profils aristocratiques\nD'un grand style essentiel,\nEt petits nez socratiques\nÉvaporés vers le ciel ;"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Chastes fronts d'apothéoses,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "Lèvres où le désir bout,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 23,
                    "line_text": "Claires, sanglantes et roses",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 24,
                    "line_text": "Le froid soleil baise tout.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Chastes fronts d'apothéoses,\nLèvres où le désir bout,\nClaires, sanglantes et roses\nLe froid soleil baise tout."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Le magicien qui berce,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Exempt de sévérité,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 27,
                    "line_text": "Ces curieuses, leur verse",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 28,
                    "line_text": "Le vin de la vérité.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Le magicien qui berce,\nExempt de sévérité,\nCes curieuses, leur verse\nLe vin de la vérité."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Il leur dit le grand problème",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Et le mot du rêve obscur,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 31,
                    "line_text": "Et l'avenir qui sort, blême",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 32,
                    "line_text": "Et tremblant, du sombre azur.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Il leur dit le grand problème\nEt le mot du rêve obscur,\nEt l'avenir qui sort, blême\nEt tremblant, du sombre azur."
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Mais comme Ève est une chatte",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Plus vive qu'un feu follet,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 35,
                    "line_text": "Ainsi que dans une jatte",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 36,
                    "line_text": "Une chatte boit du lait,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Mais comme Ève est une chatte\nPlus vive qu'un feu follet,\nAinsi que dans une jatte\nUne chatte boit du lait,"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Cependant qu'avec largesse",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "Il précipite son chant,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 39,
                    "line_text": "Elles boivent la sagesse",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 40,
                    "line_text": "Très vite, en se pourléchant.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Cependant qu'avec largesse\nIl précipite son chant,\nElles boivent la sagesse\nTrès vite, en se pourléchant."
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Et quand elles sont bien saoules",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "Du vrai quintessencié,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 43,
                    "line_text": "Ces vertigineuses foules,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 44,
                    "line_text": "Ce peuple licencié,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et quand elles sont bien saoules\nDu vrai quintessencié,\nCes vertigineuses foules,\nCe peuple licencié,"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Ces fidèles, que décore",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 46,
                    "line_text": "Un bel air de repentir,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 47,
                    "line_text": "Ont l'air d'avoir soif encore ;",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 48,
                    "line_text": "Cependant il faut partir.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Ces fidèles, que décore\nUn bel air de repentir,\nOnt l'air d'avoir soif encore ;\nCependant il faut partir."
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Lorsqu'après ces boustifailles,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 50,
                    "line_text": "Sous les gracieux habits",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 51,
                    "line_text": "Et les satins et les failles",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 52,
                    "line_text": "Il faut compter ses brebis,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Lorsqu'après ces boustifailles,\nSous les gracieux habits\nEt les satins et les failles\nIl faut compter ses brebis,"
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "Fronts d'or, mines enfantines,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 54,
                    "line_text": "Rougeurs des beaux petits doigts,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 55,
                    "line_text": "Lys purs, lignes serpentines,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 56,
                    "line_text": "Tout, tout célèbre à la fois,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Fronts d'or, mines enfantines,\nRougeurs des beaux petits doigts,\nLys purs, lignes serpentines,\nTout, tout célèbre à la fois,"
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 57,
                    "line_text": "Rayons, cassures d'étoffe",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 58,
                    "line_text": "Et chastes blancheurs de peau,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 59,
                    "line_text": "Amour et le Philosophe",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 60,
                    "line_text": "Bergers du même troupeau.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Rayons, cassures d'étoffe\nEt chastes blancheurs de peau,\nAmour et le Philosophe\nBergers du même troupeau."
        }
