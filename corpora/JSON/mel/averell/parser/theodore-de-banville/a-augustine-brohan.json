                {
                    "line_number": 1,
                    "line_text": "Thalie, amante des grands cœurs,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Voix éloquente et vengeresse,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "J'ai bu les amères liqueurs :",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Prends mes chansons, bonne déesse.",
                    "metrical_pattern": null,
