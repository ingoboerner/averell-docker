            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Et l'on craignait que d'un bond",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Parfois son vol vagabond",
                    "metrical_pattern": null,
                    "line_length": "7",
