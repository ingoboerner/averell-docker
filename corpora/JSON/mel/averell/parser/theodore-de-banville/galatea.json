{
    "poem_title": "Galatéa",
    "author": "Théodore de Banville",
    "structure": "suite périodique",
    "year": "1883-1884",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Pailleron, ce vrai sage,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Est donc, selon l'ancien",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Académicien !",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Pailleron, ce vrai sage,\nEst donc, selon l'ancien\nAcadémicien !"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 4,
                    "line_text": "Son discours, où tout sonne",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 5,
                    "line_text": "Comme l'or, n'a lésé",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 6,
                    "line_text": "Prodige malaisé !",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Son discours, où tout sonne\nComme l'or, n'a lésé\nProdige malaisé !"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Chez lui l'esprit abonde,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Et s'il ravit et prit",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 9,
                    "line_text": "Que charme encor l'esprit,",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Chez lui l'esprit abonde,\nEt s'il ravit et prit\nQue charme encor l'esprit,"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 10,
                    "line_text": "C'est qu'avec sa folie",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 11,
                    "line_text": "Chantant sous le ciel bleu,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 12,
                    "line_text": "Est toujours dans son jeu ;",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "C'est qu'avec sa folie\nChantant sous le ciel bleu,\nEst toujours dans son jeu ;"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Et tendrement folâtre,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "A l'Institut comme au",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 15,
                    "line_text": "La Nymphe au vert rameau,",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et tendrement folâtre,\nA l'Institut comme au\nLa Nymphe au vert rameau,"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 16,
                    "line_text": "Légère sur les planches,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 17,
                    "line_text": "Lui sourit avec ses",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 18,
                    "line_text": "Et le mène au succès.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Légère sur les planches,\nLui sourit avec ses\nEt le mène au succès."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "C'est bien, Académie,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "D'avoir en ton giron,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 21,
                    "line_text": "Accueilli Pailleron ;",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "C'est bien, Académie,\nD'avoir en ton giron,\nAccueilli Pailleron ;"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 22,
                    "line_text": "Mais plus d'un, à cette heure,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 23,
                    "line_text": "Pour vous brûle d'amour",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 24,
                    "line_text": "Madame, à qui le tour ?",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Mais plus d'un, à cette heure,\nPour vous brûle d'amour\nMadame, à qui le tour ?"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Veuve souvent trompée,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Ne poussez pas à bout",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 27,
                    "line_text": "Ni le subtil About.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Veuve souvent trompée,\nNe poussez pas à bout\nNi le subtil About."
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 28,
                    "line_text": "L'un célèbre (il est nôtre !)",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 29,
                    "line_text": "Marguerite au rouet,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 30,
                    "line_text": "Est un fils d'Arouet.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "L'un célèbre (il est nôtre !)\nMarguerite au rouet,\nEst un fils d'Arouet."
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "Sans qu'on vous morigène,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 32,
                    "line_text": "Si le choix hasardeux",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 33,
                    "line_text": "Prenez-les tous les deux.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Sans qu'on vous morigène,\nSi le choix hasardeux\nPrenez-les tous les deux."
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 34,
                    "line_text": "Ah ! cette Académie,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 35,
                    "line_text": "Dans son rêve indolent",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 36,
                    "line_text": "Si l'homme est un volant,",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ah ! cette Académie,\nDans son rêve indolent\nSi l'homme est un volant,"
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Elle tient la raquette !",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "Être plus qu'il ne faut",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 39,
                    "line_text": "Est son plus cher défaut.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Elle tient la raquette !\nÊtre plus qu'il ne faut\nEst son plus cher défaut."
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 40,
                    "line_text": "Tenez ! voyez-la ! comme",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 41,
                    "line_text": "Elle jette, en riant,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 42,
                    "line_text": "A qui va la priant !",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Tenez ! voyez-la ! comme\nElle jette, en riant,\nA qui va la priant !"
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 43,
                    "line_text": "Puis, montrant ses épaules,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 44,
                    "line_text": "Vite, elle s'enfuit vers",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 45,
                    "line_text": "Ses cheveux de travers.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Puis, montrant ses épaules,\nVite, elle s'enfuit vers\nSes cheveux de travers."
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 46,
                    "line_text": "Pourtant elle a beau geindre !",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 47,
                    "line_text": "Si l'adroit amant sait",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 48,
                    "line_text": "Sans demander qui c'est,",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Pourtant elle a beau geindre !\nSi l'adroit amant sait\nSans demander qui c'est,"
        },
        {
            "stanza_number": 17,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Et l'a prise et meurtrie,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 50,
                    "line_text": "Quoiqu'elle entre en courroux",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 51,
                    "line_text": "Pour qui me prenez-vous ?",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et l'a prise et meurtrie,\nQuoiqu'elle entre en courroux\nPour qui me prenez-vous ?"
        },
        {
            "stanza_number": 18,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 52,
                    "line_text": "Elle a beau se défendre",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 53,
                    "line_text": "Et conter son roman",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 54,
                    "line_text": "Et s'écrier : Maman !",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Elle a beau se défendre\nEt conter son roman\nEt s'écrier : Maman !"
        },
        {
            "stanza_number": 19,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 55,
                    "line_text": "Si l'amant, toujours ferme",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 56,
                    "line_text": "Et sachant tout oser,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 57,
                    "line_text": "La bouche d'un baiser ;",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Si l'amant, toujours ferme\nEt sachant tout oser,\nLa bouche d'un baiser ;"
        },
        {
            "stanza_number": 20,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 58,
                    "line_text": "La jeteuse de pomme",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 59,
                    "line_text": "Dit, en ouvrant ses bras :",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 60,
                    "line_text": "Fais ce que tu voudras !",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "La jeteuse de pomme\nDit, en ouvrant ses bras :\nFais ce que tu voudras !"
        }
    ],
    "corpus": "mel"
}