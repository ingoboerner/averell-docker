            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Le Maître, en vain, par sa tendresse",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "Dompte la fureur vengeresse",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
