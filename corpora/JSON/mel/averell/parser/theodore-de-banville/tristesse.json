        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Tandis que parle sa voix douce,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
