{
    "poem_title": "Pitié suprème",
    "author": "Théodore de Banville",
    "structure": "suite périodique",
    "year": "1883-1884",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Dans les journaux singuliers",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Qui lui sont particuliers,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "La Mode, à ce qu'il paraît,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Dans les journaux singuliers\nQui lui sont particuliers,\nLa Mode, à ce qu'il paraît,"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 4,
                    "line_text": "Plus d'Invisibles ! et plus",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 5,
                    "line_text": "D'épais voiles superflus.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "La reine du falbala",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Plus d'Invisibles ! et plus\nD'épais voiles superflus.\nLa reine du falbala"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Les corsages, cet hiver,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Seront, pour ravir l'enfer",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 9,
                    "line_text": "Si vous le leur permettez,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Les corsages, cet hiver,\nSeront, pour ravir l'enfer\nSi vous le leur permettez,"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 10,
                    "line_text": "Près du tissu blanc, ou noir,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 11,
                    "line_text": "Ou rose, ils laisseront voir",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "La blancheur et le dessin",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Près du tissu blanc, ou noir,\nOu rose, ils laisseront voir\nLa blancheur et le dessin"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Les uns, spectacle inouï",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Fait pour Rubens ébloui,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 15,
                    "line_text": "Montreront, dans le velours,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Les uns, spectacle inouï\nFait pour Rubens ébloui,\nMontreront, dans le velours,"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 16,
                    "line_text": "D'autres songent, érudits,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 17,
                    "line_text": "Aux pommiers du paradis,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Et c'est un joli sein rond",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "D'autres songent, érudits,\nAux pommiers du paradis,\nEt c'est un joli sein rond"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "D'autres, baisés par le vent,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Montreront ce que souvent",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 21,
                    "line_text": "Les Déesses n'ont point eu :",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "D'autres, baisés par le vent,\nMontreront ce que souvent\nLes Déesses n'ont point eu :"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 22,
                    "line_text": "Et dans un but assassin,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 23,
                    "line_text": "D'autres montreront un sein",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 24,
                    "line_text": "Délicieux et très pur,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et dans un but assassin,\nD'autres montreront un sein\nDélicieux et très pur,"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "D'autres, venant à leur tour,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Montreront ce fruit d'amour :",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 27,
                    "line_text": "Des seins fauves et dorés,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "D'autres, venant à leur tour,\nMontreront ce fruit d'amour :\nDes seins fauves et dorés,"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 28,
                    "line_text": "Et les yeux s'enivreront.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 29,
                    "line_text": "D'autres, enfin, montreront",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "(Oh ! ma pitié les absout !)",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et les yeux s'enivreront.\nD'autres, enfin, montreront\n(Oh ! ma pitié les absout !)"
        }
    ],
    "corpus": "mel"
}