    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Avec ses sanglots, l'instrument rebelle,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Qui sent un pouvoir plus fort que le sien,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Donne l'harmonie enivrante et belle",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Avec ses sanglots, l'instrument rebelle,\nQui sent un pouvoir plus fort que le sien,\nDonne l'harmonie enivrante et belle"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 4,
                    "line_text": "Le cheval meurtri, qui saigne et qui pleure,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                },
                {
                    "line_number": 5,
                    "line_text": "Cède au cavalier, rare parmi nous,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "b"
                },
                {
                    "line_number": 6,
                    "line_text": "Dont aucun effort ne peut avant l'heure",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Le cheval meurtri, qui saigne et qui pleure,\nCède au cavalier, rare parmi nous,\nDont aucun effort ne peut avant l'heure"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "De même d'abord, le Rhythme farouche",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Devant la Pensée écume d'horreur,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "b"
                },
                {
                    "line_number": 9,
                    "line_text": "Et, pour se soustraire au dieu qui le touche,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "De même d'abord, le Rhythme farouche\nDevant la Pensée écume d'horreur,\nEt, pour se soustraire au dieu qui le touche,"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 10,
                    "line_text": "Mais bientôt, léchant la main qui l'opprime,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                },
                {
                    "line_number": 11,
                    "line_text": "Il marche en cadence, et comme par jeu,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "b"
                },
                {
                    "line_number": 12,
                    "line_text": "Son vainqueur lui met le mors de la Rime",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Mais bientôt, léchant la main qui l'opprime,\nIl marche en cadence, et comme par jeu,\nSon vainqueur lui met le mors de la Rime"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Tu le sais, ami, toi dont l'Art s'honore,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Homme à la main souple, au jarret d'acier,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "b"
                },
                {
                    "line_number": 15,
                    "line_text": "Qui fais obéir la harpe sonore",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Tu le sais, ami, toi dont l'Art s'honore,\nHomme à la main souple, au jarret d'acier,\nQui fais obéir la harpe sonore"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 16,
                    "line_text": "Lorsque aimé d'Isis aux triples ceintures,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                },
                {
                    "line_number": 17,
                    "line_text": "Un homme intrépide a baisé son sein,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "b"
                },
                {
                    "line_number": 18,
                    "line_text": "La création et les créatures",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Lorsque aimé d'Isis aux triples ceintures,\nUn homme intrépide a baisé son sein,\nLa création et les créatures"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Le Génie en feu donne à l'âme altière",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Le Commandement, ce charme vanté,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "b"
                },
                {
                    "line_number": 21,
                    "line_text": "Et l'Esprit captif dans l'âpre Matière",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Le Génie en feu donne à l'âme altière\nLe Commandement, ce charme vanté,\nEt l'Esprit captif dans l'âpre Matière"
        }
    ],
    "corpus": "mel"
