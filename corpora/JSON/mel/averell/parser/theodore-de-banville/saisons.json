{
    "poem_title": "Saisons",
    "author": "Théodore de Banville",
    "structure": "suite périodique",
    "year": "1892",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "En dépit des jours moroses",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Qu'on voudrait en vain nier,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Mes amis, l'été dernier",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "J'ai connu de belles roses.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "En dépit des jours moroses\nQu'on voudrait en vain nier,\nMes amis, l'été dernier\nJ'ai connu de belles roses."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "J'écoutais des chants d'oiselles",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Et, tout le long des chemins,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 7,
                    "line_text": "Fleurissaient de blancs jasmins",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 8,
                    "line_text": "Pour les jeunes demoiselles.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "J'écoutais des chants d'oiselles\nEt, tout le long des chemins,\nFleurissaient de blancs jasmins\nPour les jeunes demoiselles."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Sous les ramures hautaines,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "A l'ombre d'un noir buisson",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 11,
                    "line_text": "Murmurait une chanson",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 12,
                    "line_text": "Dans l'eau pure des fontaines.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Sous les ramures hautaines,\nA l'ombre d'un noir buisson\nMurmurait une chanson\nDans l'eau pure des fontaines."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Aux jardins où l'air flamboie",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Dans un clair frisson vermeil,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 15,
                    "line_text": "Tout n'était qu'amour, soleil,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 16,
                    "line_text": "Sourire, caresse et joie.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Aux jardins où l'air flamboie\nDans un clair frisson vermeil,\nTout n'était qu'amour, soleil,\nSourire, caresse et joie."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Et la ville était charmante.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Couronnés de leur vapeur,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 19,
                    "line_text": "Des bateaux couraient sans peur",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 20,
                    "line_text": "Sur la rivière écumante.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et la ville était charmante.\nCouronnés de leur vapeur,\nDes bateaux couraient sans peur\nSur la rivière écumante."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Les plates-bandes fleuries",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "Chantaient leur gai carillon,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 23,
                    "line_text": "Piquant d'un beau vermillon",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 24,
                    "line_text": "Les joyeuses Tuileries.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Les plates-bandes fleuries\nChantaient leur gai carillon,\nPiquant d'un beau vermillon\nLes joyeuses Tuileries."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Et leurs beaux yeux, sans colères",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "S'emplissant d'ombre et d'azur,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 27,
                    "line_text": "Les dames au profil pur",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 28,
                    "line_text": "Arboraient des robes claires.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et leurs beaux yeux, sans colères\nS'emplissant d'ombre et d'azur,\nLes dames au profil pur\nArboraient des robes claires."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Bravant périls et traverses,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Tout le long du boulevart",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 31,
                    "line_text": "Paris frivole et bavard",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 32,
                    "line_text": "Causait de choses diverses.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Bravant périls et traverses,\nTout le long du boulevart\nParis frivole et bavard\nCausait de choses diverses."
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Tout à coup, l'âme transie,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Tremblant et nu comme un ver,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 35,
                    "line_text": "L'Hiver parut, un Hiver",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 36,
                    "line_text": "De retraite de Russie.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Tout à coup, l'âme transie,\nTremblant et nu comme un ver,\nL'Hiver parut, un Hiver\nDe retraite de Russie."
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Il fallut rompre en visière",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "Avec ce qui nous ravit,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 39,
                    "line_text": "Et sur l'asphalte on ne vit",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 40,
                    "line_text": "Que des chaussons de lisière.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Il fallut rompre en visière\nAvec ce qui nous ravit,\nEt sur l'asphalte on ne vit\nQue des chaussons de lisière."
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Dans sa calotte, minée",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "Par des frimas, le ciel bleu",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 43,
                    "line_text": "Eut des fentes, et le feu",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 44,
                    "line_text": "Gela dans la cheminée.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Dans sa calotte, minée\nPar des frimas, le ciel bleu\nEut des fentes, et le feu\nGela dans la cheminée."
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "D'une glace adamantine",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 46,
                    "line_text": "Le zéphyr se régala,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 47,
                    "line_text": "Et ce fut un beau gala",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 48,
                    "line_text": "Dans le monde où l'on patine.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "D'une glace adamantine\nLe zéphyr se régala,\nEt ce fut un beau gala\nDans le monde où l'on patine."
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Que tout se remette en place !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 50,
                    "line_text": "Et quoique ce soit moins sûr,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 51,
                    "line_text": "Amis, glissons plutôt sur",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 52,
                    "line_text": "Le gazon que sur la glace !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Que tout se remette en place !\nEt quoique ce soit moins sûr,\nAmis, glissons plutôt sur\nLe gazon que sur la glace !"
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "Oui, la froidure jalouse",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 54,
                    "line_text": "Montra pour nous trop d'amour :",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 55,
                    "line_text": "Trouvez autre chose pour",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 56,
                    "line_text": "Mil huit cent quatre-vingt-douze !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Oui, la froidure jalouse\nMontra pour nous trop d'amour :\nTrouvez autre chose pour\nMil huit cent quatre-vingt-douze !"
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 57,
                    "line_text": "Dans ton habit de féerie",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 58,
                    "line_text": "Viens vite, clair et subtil,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 59,
                    "line_text": "Génie enchanté d'Avril !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 60,
                    "line_text": "Baise la terre fleurie.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Dans ton habit de féerie\nViens vite, clair et subtil,\nGénie enchanté d'Avril !\nBaise la terre fleurie."
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 61,
                    "line_text": "Et sur toutes les Hélènes,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 62,
                    "line_text": "O Printemps accoutumé,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 63,
                    "line_text": "Répands, d'un souffle embaumé,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 64,
                    "line_text": "Tes parfums et tes haleines !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et sur toutes les Hélènes,\nO Printemps accoutumé,\nRépands, d'un souffle embaumé,\nTes parfums et tes haleines !"
        }
    ],
    "corpus": "mel"
}