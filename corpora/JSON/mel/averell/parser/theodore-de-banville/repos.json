                {
                    "line_number": 1,
                    "line_text": "Je disais, en pressant le pas :",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Que font ces Amours sans vergogne ?",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "En somme, il ne me semble pas",
                    "metrical_pattern": null,
