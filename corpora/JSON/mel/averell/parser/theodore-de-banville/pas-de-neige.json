{
    "poem_title": "Pas de neige",
    "author": "Théodore de Banville",
    "structure": "suite périodique",
    "year": "1883-1884",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Paris, lorsque vient la froidure,",
