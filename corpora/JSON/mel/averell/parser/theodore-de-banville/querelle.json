                {
                    "line_number": 1,
                    "line_text": "Lorsque ma sœur et moi, dans les forêts profondes,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Nous avions déchiré nos pieds sur les cailloux,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "En nous baisant au front tu nous appelais fous,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Après avoir maudit nous courses vagabondes.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
