            "stanza_type": null,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Aboutissent à quelque chose.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 50,
                    "line_text": "Car s'éveillant, ô mes amis,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 51,
                    "line_text": "Sous le regard de l'aube rose,",
