{
    "poem_title": "Pèlerines",
    "author": "Théodore de Banville",
    "structure": "suite périodique",
    "year": "1892",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Dans ces mois, où souffle un vent",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Les dames, les ballerines",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Et les élèves de Got",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Arborent des pèlerines.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Dans ces mois, où souffle un vent\nLes dames, les ballerines\nEt les élèves de Got\nArborent des pèlerines."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Sveltes et roses, marchant",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Les trésors de vos poitrines,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 7,
                    "line_text": "Où donc fuyez-vous ainsi ?",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 8,
                    "line_text": "Pèlerines, pèlerines !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Sveltes et roses, marchant\nLes trésors de vos poitrines,\nOù donc fuyez-vous ainsi ?\nPèlerines, pèlerines !"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Je reconnais ce charmant",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Que la mode immortalise,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 11,
                    "line_text": "Long spencer ou court manteau,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 12,
                    "line_text": "Qui l'offrit à Cidalise.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Je reconnais ce charmant\nQue la mode immortalise,\nLong spencer ou court manteau,\nQui l'offrit à Cidalise."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Rose ou noir, ou d'un malin",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Il cachait dans son mystère",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 15,
                    "line_text": "Vos malicieux desseins",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 16,
                    "line_text": "Quand vous partiez pour Cythère.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Rose ou noir, ou d'un malin\nIl cachait dans son mystère\nVos malicieux desseins\nQuand vous partiez pour Cythère."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Votre nef, au jour naissant,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "La vague respectueuse,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 19,
                    "line_text": "Balançait, près des îlots,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 20,
                    "line_text": "Sa coque voluptueuse.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Votre nef, au jour naissant,\nLa vague respectueuse,\nBalançait, près des îlots,\nSa coque voluptueuse."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Charmes toujours enviés !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "Mille grâces à revendre.",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 23,
                    "line_text": "Vous promettiez vos faveurs",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 24,
                    "line_text": "Tircis, Myrtil et Silvandre,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Charmes toujours enviés !\nMille grâces à revendre.\nVous promettiez vos faveurs\nTircis, Myrtil et Silvandre,"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Oh ! partir ! Suivre au lointain,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "La douce brise marine !",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 27,
                    "line_text": "Sur des appas délicats",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 28,
                    "line_text": "D'avoir une pèlerine.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Oh ! partir ! Suivre au lointain,\nLa douce brise marine !\nSur des appas délicats\nD'avoir une pèlerine."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Elle ne s'ouvre jamais",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Jumelle comme une rime,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 31,
                    "line_text": "On sent bien que sous les plis",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 32,
                    "line_text": "Se dresse une double cime.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Elle ne s'ouvre jamais\nJumelle comme une rime,\nOn sent bien que sous les plis\nSe dresse une double cime."
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Et ces monts vieux et nouveaux,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Certificats de civisme,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 35,
                    "line_text": "J'explique leurs bouts aigus,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 36,
                    "line_text": "Par les lois de l'atavisme.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Et ces monts vieux et nouveaux,\nCertificats de civisme,\nJ'explique leurs bouts aigus,\nPar les lois de l'atavisme."
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "C'est ainsi qu'aux paradis",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "En montrait notre mère Ève ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 39,
                    "line_text": "Mais la blanche floraison",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 40,
                    "line_text": "Nous enchante comme un rêve.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "C'est ainsi qu'aux paradis\nEn montrait notre mère Ève ;\nMais la blanche floraison\nNous enchante comme un rêve."
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Car dans les draps, au léger",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "Une cassure est complice,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 43,
                    "line_text": "Pour tourmenter à loisir",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 44,
                    "line_text": "Et sous l'étoffe qui plisse,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Car dans les draps, au léger\nUne cassure est complice,\nPour tourmenter à loisir\nEt sous l'étoffe qui plisse,"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Le bon régal que d'oser",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 46,
                    "line_text": "Les lumières purpurines",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 47,
                    "line_text": "Et les feux extasiés",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 48,
                    "line_text": "Cachés sous vos pèlerines !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Le bon régal que d'oser\nLes lumières purpurines\nEt les feux extasiés\nCachés sous vos pèlerines !"
        }
    ],
    "corpus": "mel"
}