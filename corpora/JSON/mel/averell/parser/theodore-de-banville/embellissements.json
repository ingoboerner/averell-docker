{
    "poem_title": "Embellissements",
    "author": "Théodore de Banville",
    "structure": "suite périodique",
    "year": "1875",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Si vous le pouvez, d'un œil sec",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Regardez cela. C'est la rue",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "De la Paix. Dieux puissants ! avec",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Quelle fureur le pic s'y rue !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Si vous le pouvez, d'un œil sec\nRegardez cela. C'est la rue\nDe la Paix. Dieux puissants ! avec\nQuelle fureur le pic s'y rue !"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Dégringolez, façades, coins !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "En avant la pelle et la pioche !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 7,
                    "line_text": "O rue historique, rejoins",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Dégringolez, façades, coins !\nEn avant la pelle et la pioche !\nO rue historique, rejoins"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 8,
                    "line_text": "Le spectacle est superbe, car",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 9,
                    "line_text": "Des hordes, comme en rêve entrées",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 10,
                    "line_text": "Dans ces maisons, en sortent par",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 11,
                    "line_text": "Les trous des chambres éventrées ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Le spectacle est superbe, car\nDes hordes, comme en rêve entrées\nDans ces maisons, en sortent par\nLes trous des chambres éventrées ;"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Tous ces palais sur leurs genoux",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 13,
                    "line_text": "Laissent ruisseler leurs entrailles ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 14,
                    "line_text": "On voit, comme des aigles fous,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 15,
                    "line_text": "S'envoler des pans de murailles ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Tous ces palais sur leurs genoux\nLaissent ruisseler leurs entrailles ;\nOn voit, comme des aigles fous,\nS'envoler des pans de murailles ;"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 16,
                    "line_text": "Et les plâtras et les gravats,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 17,
                    "line_text": "O dieu de notre préfecture,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 18,
                    "line_text": "Couvrent la ville où tu gravas",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 19,
                    "line_text": "Ton nom pour la race future.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et les plâtras et les gravats,\nO dieu de notre préfecture,\nCouvrent la ville où tu gravas\nTon nom pour la race future."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 20,
                    "line_text": "Blanc comme Avril en floraison,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 21,
                    "line_text": "Le passant gémit, pleure et beugle.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 22,
                    "line_text": "Désormais on a bien raison",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 23,
                    "line_text": "De dire que l'homme est aveugle ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Blanc comme Avril en floraison,\nLe passant gémit, pleure et beugle.\nDésormais on a bien raison\nDe dire que l'homme est aveugle ;"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 24,
                    "line_text": "Car, ainsi masqué jusqu'aux dents,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 25,
                    "line_text": "Le Français, qui devient farouche,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 26,
                    "line_text": "A du plâtre dans les yeux, dans",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 27,
                    "line_text": "Les narines et dans la bouche.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Car, ainsi masqué jusqu'aux dents,\nLe Français, qui devient farouche,\nA du plâtre dans les yeux, dans\nLes narines et dans la bouche."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 28,
                    "line_text": "O Parisien, ta cité",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 29,
                    "line_text": "A présent n'a plus de rivales ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 30,
                    "line_text": "Mais, selon ta capacité,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 31,
                    "line_text": "Ce plâtre, il faut que tu l'avales !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "O Parisien, ta cité\nA présent n'a plus de rivales ;\nMais, selon ta capacité,\nCe plâtre, il faut que tu l'avales !"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 32,
                    "line_text": "Et voici, dans tout ce mic-mac,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 33,
                    "line_text": "Le plus clair de tes héritages :",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 34,
                    "line_text": "Tu dois avoir dans l'estomac",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 35,
                    "line_text": "Quelques maisons à cinq étages !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et voici, dans tout ce mic-mac,\nLe plus clair de tes héritages :\nTu dois avoir dans l'estomac\nQuelques maisons à cinq étages !"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 36,
                    "line_text": "Hurrah ! Le fauve Sahara",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 37,
                    "line_text": "Croît et grandit, où fut la rue",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 38,
                    "line_text": "De la Paix ; bientôt l'on aura",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 39,
                    "line_text": "Coupé cette immense verrue.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Hurrah ! Le fauve Sahara\nCroît et grandit, où fut la rue\nDe la Paix ; bientôt l'on aura\nCoupé cette immense verrue."
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 40,
                    "line_text": "Bon Paris, patiente encor :",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 41,
                    "line_text": "Bientôt, pourvu qu'on démolisse,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 42,
                    "line_text": "Tu deviendras le sable d'or,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 43,
                    "line_text": "Le désert parfaitement lisse,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Bon Paris, patiente encor :\nBientôt, pourvu qu'on démolisse,\nTu deviendras le sable d'or,\nLe désert parfaitement lisse,"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 44,
                    "line_text": "O ville, — et, prudents animaux,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 45,
                    "line_text": "Au lieu même où tu te pavanes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 46,
                    "line_text": "Les doux et patients chameaux",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 47,
                    "line_text": "Iront en longues caravanes !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "O ville, — et, prudents animaux,\nAu lieu même où tu te pavanes\nLes doux et patients chameaux\nIront en longues caravanes !"
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 48,
                    "line_text": "Paix divine ! ce n'est plus qu'aux",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 49,
                    "line_text": "Antipodes que l'on te souffre ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 50,
                    "line_text": "L'Europe est ivre de shakos,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 51,
                    "line_text": "De canons rayés et de soufre.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Paix divine ! ce n'est plus qu'aux\nAntipodes que l'on te souffre ;\nL'Europe est ivre de shakos,\nDe canons rayés et de soufre."
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 52,
                    "line_text": "Tu souris, efforts superflus !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 53,
                    "line_text": "Ta détresse, hélas ! s'est accrue.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 54,
                    "line_text": "Chez nous il ne te restait plus",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 55,
                    "line_text": "Rien, Déesse, qu'un nom de rue ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Tu souris, efforts superflus !\nTa détresse, hélas ! s'est accrue.\nChez nous il ne te restait plus\nRien, Déesse, qu'un nom de rue ;"
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 56,
                    "line_text": "On te le reprend ! Il est sûr",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 57,
                    "line_text": "Qu'un édile sévère et tendre",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 58,
                    "line_text": "Ne peut pas laisser ton nom sur",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 59,
                    "line_text": "Des démolitions à vendre !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "On te le reprend ! Il est sûr\nQu'un édile sévère et tendre\nNe peut pas laisser ton nom sur\nDes démolitions à vendre !"
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 60,
                    "line_text": "Ouvrière, qui n'as souci",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 61,
                    "line_text": "Que d'une œuvre amoureuse et lente,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 62,
                    "line_text": "Le préfet te chassa d'ici",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 63,
                    "line_text": "Comme une marchande ambulante ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Ouvrière, qui n'as souci\nQue d'une œuvre amoureuse et lente,\nLe préfet te chassa d'ici\nComme une marchande ambulante ;"
        },
        {
            "stanza_number": 17,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 64,
                    "line_text": "Ce maître a brisé ton collier",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 65,
                    "line_text": "Et l'a jeté dans le cloaque,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 66,
                    "line_text": "Et, pour te mieux humilier,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 67,
                    "line_text": "T'a même retiré ta plaque !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Ce maître a brisé ton collier\nEt l'a jeté dans le cloaque,\nEt, pour te mieux humilier,\nT'a même retiré ta plaque !"
        }
    ],
    "corpus": "mel"
}