            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Après ces longs jours de souffrance,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "De haine et de meurtre exécré,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 35,
                    "line_text": "Le sol tout entier de la France",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
