                    "line_number": 33,
                    "line_text": "Qui s'en vint déchirer le cygne",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 34,
                    "line_text": "Ivre de joie et de soleil ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 35,
                    "line_text": "Et sur l'onde son sang vermeil",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
