                    "line_number": 1,
                    "line_text": "Amazone aux reins forts, solide centauresse,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Tu tiens par les cheveux, sans mors et sans lien,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Ton cheval de Titan, monstre thessalien ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Ta cuisse avec fureur le dompte et le caresse.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
