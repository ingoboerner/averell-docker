                {
                    "line_number": 31,
                    "line_text": "Je vous autorise très bien",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 32,
                    "line_text": "A dire : monsieur de Banville.",
