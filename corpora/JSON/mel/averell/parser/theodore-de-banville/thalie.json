{
    "poem_title": "Thalie",
    "author": "Théodore de Banville",
    "structure": "suite périodique",
    "year": "1888",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "O muse Comédie,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Souffre un peu que ma main",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "S'égare en ton chemin !",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "O muse Comédie,\nSouffre un peu que ma main\nS'égare en ton chemin !"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 4,
                    "line_text": "Tel, rouge et faisant halte,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 5,
                    "line_text": "Devant cette primeur",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 6,
                    "line_text": "Un apprenti rimeur.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Tel, rouge et faisant halte,\nDevant cette primeur\nUn apprenti rimeur."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Et bien vite il ajoute :",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Pour guérir mes tourments",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 9,
                    "line_text": "Moi, nymphe aux yeux charmants.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et bien vite il ajoute :\nPour guérir mes tourments\nMoi, nymphe aux yeux charmants."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 10,
                    "line_text": "Vendangeuse Thalie,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 11,
                    "line_text": "Viens, prends en pitié ma",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 12,
                    "line_text": "Toi que Bacchus aima !",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Vendangeuse Thalie,\nViens, prends en pitié ma\nToi que Bacchus aima !"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Déesse au cou de cygne",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Que n'atteint nul affront,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 15,
                    "line_text": "Se tord sur ton beau front.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Déesse au cou de cygne\nQue n'atteint nul affront,\nSe tord sur ton beau front."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 16,
                    "line_text": "Oh ! ne sois pas farouche !",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 17,
                    "line_text": "Mes yeux s'égarent dans",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 18,
                    "line_text": "Et sur tes blanches dents.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Oh ! ne sois pas farouche !\nMes yeux s'égarent dans\nEt sur tes blanches dents."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "L'air ému tourbillonne",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Et mon sang courroucé",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 21,
                    "line_text": "Pour ton nez retroussé.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "L'air ému tourbillonne\nEt mon sang courroucé\nPour ton nez retroussé."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 22,
                    "line_text": "Je veux te plaire, ô Muse !",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 23,
                    "line_text": "Et sachant comment on",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 24,
                    "line_text": "S'amuse,",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                },
                {
                    "line_number": 25,
                    "line_text": "Te prendre le menton.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Je veux te plaire, ô Muse !\nEt sachant comment on\nS'amuse,\nTe prendre le menton."
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 26,
                    "line_text": "Oyant ces mots, Thalie",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 27,
                    "line_text": "Au visage taché",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 28,
                    "line_text": "N'a pas l'air trop fâché,",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Oyant ces mots, Thalie\nAu visage taché\nN'a pas l'air trop fâché,"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Et répond, déjà tendre :",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Tu pourras, sous les draps,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 31,
                    "line_text": "Tout ce que tu voudras.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et répond, déjà tendre :\nTu pourras, sous les draps,\nTout ce que tu voudras."
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 32,
                    "line_text": "Combattant ma paresse,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 33,
                    "line_text": "Pour tes secrets desseins",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 34,
                    "line_text": "La neige de mes seins,",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Combattant ma paresse,\nPour tes secrets desseins\nLa neige de mes seins,"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 35,
                    "line_text": "Leur neige grandiose,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 36,
                    "line_text": "Où de vivants boutons",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 37,
                    "line_text": "Charment les feuilletons.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Leur neige grandiose,\nOù de vivants boutons\nCharment les feuilletons."
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 38,
                    "line_text": "Je le veux bien, apaise",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 39,
                    "line_text": "Mon dédain querelleur",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 40,
                    "line_text": "Ma rouge lèvre en fleur.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Je le veux bien, apaise\nMon dédain querelleur\nMa rouge lèvre en fleur."
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "J'y consens, dans tes rages,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "Flétris par les derniers",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 43,
                    "line_text": "Mes trésors printaniers.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "J'y consens, dans tes rages,\nFlétris par les derniers\nMes trésors printaniers."
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 44,
                    "line_text": "Sois heureux, comme en songe.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 45,
                    "line_text": "Fais tout ce que tu veux,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 46,
                    "line_text": "Ta main dans mes cheveux.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Sois heureux, comme en songe.\nFais tout ce que tu veux,\nTa main dans mes cheveux."
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 47,
                    "line_text": "Sois méchant pour moi seule,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 48,
                    "line_text": "Puisque je ne suis pas",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 49,
                    "line_text": "Bouscule mes appas.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Sois méchant pour moi seule,\nPuisque je ne suis pas\nBouscule mes appas."
        },
        {
            "stanza_number": 17,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 50,
                    "line_text": "Mais, ô marchand de rimes,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 51,
                    "line_text": "Qu'au ciel aérien",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 52,
                    "line_text": "N'aient pas crié pour rien !",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Mais, ô marchand de rimes,\nQu'au ciel aérien\nN'aient pas crié pour rien !"
        },
        {
            "stanza_number": 18,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "Si tu n'es pas infirme,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 54,
                    "line_text": "Sous les astres sereins",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 55,
                    "line_text": "La vigueur de tes reins.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Si tu n'es pas infirme,\nSous les astres sereins\nLa vigueur de tes reins."
        },
        {
            "stanza_number": 19,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 56,
                    "line_text": "Avec joie et bravoure",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 57,
                    "line_text": "Ma lèvre belle à voir",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 58,
                    "line_text": "Le sang du raisin noir.",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Avec joie et bravoure\nMa lèvre belle à voir\nLe sang du raisin noir."
        },
        {
            "stanza_number": 20,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 59,
                    "line_text": "Je dédaigne un cœur lâche.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 60,
                    "line_text": "Sois rude et triomphant,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 61,
                    "line_text": "De me faire un enfant !",
                    "metrical_pattern": null,
                    "line_length": "2",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Je dédaigne un cœur lâche.\nSois rude et triomphant,\nDe me faire un enfant !"
        }
    ],
    "corpus": "mel"
}