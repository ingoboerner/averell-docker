                {
                    "line_number": 3,
                    "line_text": "En voyant s'augmenter la horde",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Qui, grâce à nous, chez lui déborde,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
