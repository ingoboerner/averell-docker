            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ta grandeur me remplit d'effroi,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Polichinelle ! — Réponds-moi.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
