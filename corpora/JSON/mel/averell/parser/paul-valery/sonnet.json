                {
                    "line_number": 1,
                    "line_text": "A la vitre d'hiver que voile mon haleine",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "0"
                },
                {
                    "line_number": 2,
                    "line_text": "Mon front brûlant demande un glacial appui",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "1"
                },
                {
                    "line_number": 3,
                    "line_text": "Et tout mon corps pensif aux paresses de laine",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "0"
                },
                {
                    "line_number": 4,
                    "line_text": "S'abandonne au ciel vide où vivre n'est qu'ennui.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "1"
