            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Du bois de Ker-Mélô jusqu'au moulin de Teir,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "J'ai passé tout le jour sur le bord de la mer,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Respirant sous les pins leur odeur de résine,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Poussant devant mes pieds leur feuille lisse et fine,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 5,
                    "line_text": "Et d'instants en instants, par-dessus Saint-Michel,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Lorsque éclatait le bruit de la barre d'Enn-Tell,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 7,
                    "line_text": "M'arrêtant pour entendre ; au milieu des bruyères,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 8,
                    "line_text": "Carnac m'apparaissait avec toutes ses pierres,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 9,
                    "line_text": "Et parmi les men-hîr erraient comme autrefois",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Les vieux guerriers des clans, leurs prêtres et leurs rois.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 11,
                    "line_text": "Puis, je marchais encore au hasard et sans règle.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 12,
                    "line_text": "C'est ainsi que, faisant le tour d'un champ de seigle,",
