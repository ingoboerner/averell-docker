            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Lorsque sur ma fenêtre, à l'heure du réveil,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Légèrement se pose un rayon de soleil,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Un rayon d'espérance entre aussi dans mon gîte ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "C'est comme un ami cher qui, vous faisant visite,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 5,
                    "line_text": "Par de joyeux propos éclaire votre ennui,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Et ce jour-là vous rend égayé comme lui.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 7,
                    "line_text": "Donc, souriant des yeux au rayon d'or qui brille,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 8,
                    "line_text": "Léger d'âme et de corps, sans retard je m'habille,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 9,
                    "line_text": "Puis je m'en vais heureux de tout ce que je voi :",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Le rayon matinal dore tout devant moi.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
