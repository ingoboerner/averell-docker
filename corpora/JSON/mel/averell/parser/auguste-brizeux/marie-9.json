                {
                    "line_number": 58,
                    "line_text": "Et la rose, en mourant, le parfum de sa fleur,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 59,
                    "line_text": "Et que ces éléments, fondus par un génie,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
