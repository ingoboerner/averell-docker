                {
                    "line_number": 2,
                    "line_text": "Soutiens ma voix, dicte mes vers.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "C'est toi qu'on craint et qu'on adore,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Toi qui fais trembler les pervers.",
