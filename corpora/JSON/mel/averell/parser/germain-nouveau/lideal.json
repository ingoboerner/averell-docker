            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Je vous dis l’Amour, c’est la guerre.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
