            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "Tu fermeras l’œil, pour ne point voir, par la glace,",
                    "metrical_pattern": null,
                    "line_length": "6−6",
                    "rhyme": "c"
                },
                {
                    "line_number": 4,
                    "line_text": "Ces monstruosités hargneuses, populace",
