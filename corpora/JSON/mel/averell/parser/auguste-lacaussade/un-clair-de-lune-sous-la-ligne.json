            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Et la reine des nuits au pâle et doux rayon,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Prend son essor léger des bords de l'horizon,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Et monte en se berçant dans les airs qui blanchissent ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "A son brillant aspect les étoiles pâlissent,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 5,
                    "line_text": "Effaçant dans l'azur leurs timides clartés.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
