{
    "poem_title": "L'Oiseau",
    "author": "Auguste Lacaussade",
    "structure": "suite périodique",
    "year": "1839",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "L'astre de la nuit s'avance",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Dans l'azur pâle des cieux,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Voici l'instant du silence",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Dans les bois mystérieux.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "L'astre de la nuit s'avance\nDans l'azur pâle des cieux,\nVoici l'instant du silence\nDans les bois mystérieux."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "La brise du soir effeuille",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "La fleur éclose au matin,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 7,
                    "line_text": "A mes pieds glisse la feuille",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Qu'emporte un souffle incertain.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "La brise du soir effeuille\nLa fleur éclose au matin,\nA mes pieds glisse la feuille\nQu'emporte un souffle incertain."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Au bruit de l'eau sous l'ombrage",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Dont la voix chante en coulant,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 11,
                    "line_text": "Au murmure du feuillage",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Qu'agite un souffle inconstant ;",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Au bruit de l'eau sous l'ombrage\nDont la voix chante en coulant,\nAu murmure du feuillage\nQu'agite un souffle inconstant ;"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Pourquoi mêler une plainte",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "O triste et charmant oiseau,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 15,
                    "line_text": "Dont je vois l'image empreinte",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 16,
                    "line_text": "Dans l'azur de ce ruisseau ?",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Pourquoi mêler une plainte\nO triste et charmant oiseau,\nDont je vois l'image empreinte\nDans l'azur de ce ruisseau ?"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Dis-moi pourquoi tu soupire",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Ces mélodieux accords,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 19,
                    "line_text": "Dont le bruit plaintif expire",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Parmi les fleurs de ces bords ?",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Dis-moi pourquoi tu soupire\nCes mélodieux accords,\nDont le bruit plaintif expire\nParmi les fleurs de ces bords ?"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Appelles-tu ta compagne,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "Lui dis-tu que le soleil",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 23,
                    "line_text": "Vient de fuir sous la montagne",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 24,
                    "line_text": "Et nous invite au sommeil ?",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Appelles-tu ta compagne,\nLui dis-tu que le soleil\nVient de fuir sous la montagne\nEt nous invite au sommeil ?"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Au doux nid qui vous rassemble",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Qui s'oppose à son retour ?",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 27,
                    "line_text": "Vous y reveniez ensemble",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 28,
                    "line_text": "Au déclin de chaque jour.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Au doux nid qui vous rassemble\nQui s'oppose à son retour ?\nVous y reveniez ensemble\nAu déclin de chaque jour."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Je le vois, seul en ces heures",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Où règne la paix des nuits,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 31,
                    "line_text": "Ton cœur s'alarme et tu pleures",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 32,
                    "line_text": "Le veuvage et ses ennuis.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Je le vois, seul en ces heures\nOù règne la paix des nuits,\nTon cœur s'alarme et tu pleures\nLe veuvage et ses ennuis."
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Mais si quelquefois une ombre",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Aux lieux qui lui furent chers,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 35,
                    "line_text": "Revient avec la nuit sombre,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 36,
                    "line_text": "Au bruit des tristes concerts ;",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Mais si quelquefois une ombre\nAux lieux qui lui furent chers,\nRevient avec la nuit sombre,\nAu bruit des tristes concerts ;"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Errante aux pieds du vieux saule,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "Sur les gazons et les fleurs,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 39,
                    "line_text": "Ta compagne se console",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 40,
                    "line_text": "Aux doux chants de tes douleurs.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Errante aux pieds du vieux saule,\nSur les gazons et les fleurs,\nTa compagne se console\nAux doux chants de tes douleurs."
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Car une larme qui tombe,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "Un secret soupir de deuil,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 43,
                    "line_text": "Vont consoler dans leur tombe",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 44,
                    "line_text": "Ceux qu'enferme le cercueil.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Car une larme qui tombe,\nUn secret soupir de deuil,\nVont consoler dans leur tombe\nCeux qu'enferme le cercueil."
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Il doit être doux d'entendre,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 46,
                    "line_text": "Dans le calme du trépas,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 47,
                    "line_text": "Une voix plaintive et tendre",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 48,
                    "line_text": "Pour nous soupirer tout bas ;",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Il doit être doux d'entendre,\nDans le calme du trépas,\nUne voix plaintive et tendre\nPour nous soupirer tout bas ;"
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Et de voir, dans cet asyle",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 50,
                    "line_text": "Où l'homme est enseveli,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 51,
                    "line_text": "Tandis qu'un monde futile",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 52,
                    "line_text": "Sur nous a jeté l'oubli,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et de voir, dans cet asyle\nOù l'homme est enseveli,\nTandis qu'un monde futile\nSur nous a jeté l'oubli,"
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "Tous ceux dont notre tendresse",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 54,
                    "line_text": "Avait captivé les cœurs,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 55,
                    "line_text": "Répandre dans leur tristesse",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 56,
                    "line_text": "Des prières et des fleurs !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Tous ceux dont notre tendresse\nAvait captivé les cœurs,\nRépandre dans leur tristesse\nDes prières et des fleurs !"
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 57,
                    "line_text": "Quand j'aurai quitté la terre,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 58,
                    "line_text": "Semblable au petit oiseau,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 59,
                    "line_text": "O ma sœur, viens solitaire,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 60,
                    "line_text": "Viens prier sur mon tombeau !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Quand j'aurai quitté la terre,\nSemblable au petit oiseau,\nO ma sœur, viens solitaire,\nViens prier sur mon tombeau !"
        }
    ],
    "corpus": "mel"
}