                {
                    "line_number": 1,
                    "line_text": "Loin des sots préjugés que l'erreur déifie,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Couvert du bouclier de ta philosophie,",
