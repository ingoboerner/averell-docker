    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Gisant à plat dans la pierraille,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Veuve à jamais du pied humain,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "L'échelle, aux tons de parchemin,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Pourrit au bas de la muraille.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Gisant à plat dans la pierraille,\nVeuve à jamais du pied humain,\nL'échelle, aux tons de parchemin,\nPourrit au bas de la muraille."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Jadis, beaux gars et belles filles,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 6,
                    "line_text": "Poulettes, coqs, chats tigrés",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "d"
                },
                {
                    "line_number": 7,
                    "line_text": "Montaient, obliques, ses degrés,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "d"
                }
            ],
            "stanza_text": "Jadis, beaux gars et belles filles,\nPoulettes, coqs, chats tigrés\nMontaient, obliques, ses degrés,"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 8,
                    "line_text": "Mais, une margot sur le puits",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "e"
                },
                {
                    "line_number": 9,
                    "line_text": "Se perche… une autre encore ! et puis,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "e"
                },
                {
                    "line_number": 10,
                    "line_text": "Toutes deux quittant la margelle",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "f"
                }
            ],
            "stanza_text": "Mais, une margot sur le puits\nSe perche… une autre encore ! et puis,\nToutes deux quittant la margelle"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Pour danser sur ses échelons,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "g"
                },
                {
                    "line_number": 12,
                    "line_text": "Leurs petits sauts, tout de son long,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "g"
                },
                {
                    "line_number": 13,
                    "line_text": "Ressuscitent la pauvre échelle.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "f"
                }
            ],
            "stanza_text": "Pour danser sur ses échelons,\nLeurs petits sauts, tout de son long,\nRessuscitent la pauvre échelle."
        }
    ],
    "corpus": "mel"
}