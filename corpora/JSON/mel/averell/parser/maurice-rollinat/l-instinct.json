{
    "poem_title": "L'Instinct",
    "author": "Maurice Rollinat",
    "structure": "sonnet",
    "year": "1899",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Heureux l'homme qui se guérit",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "De la vénéneuse lecture,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Du projet, du songe, et nourrit",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Sa pensée avec la nature !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Heureux l'homme qui se guérit\nDe la vénéneuse lecture,\nDu projet, du songe, et nourrit\nSa pensée avec la nature !"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Il sent flotter à l'aventure",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 6,
                    "line_text": "Sur les friches de son esprit",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 7,
                    "line_text": "L'âme des choses, il sourit",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "À tout, même à la sépulture !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Il sent flotter à l'aventure\nSur les friches de son esprit\nL'âme des choses, il sourit\nÀ tout, même à la sépulture !"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Oh ! s'échapper enfin des mots,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 10,
                    "line_text": "Rêver comme les animaux,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 11,
                    "line_text": "Ravoir la vision première !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "d"
                }
            ],
            "stanza_text": "Oh ! s'échapper enfin des mots,\nRêver comme les animaux,\nRavoir la vision première !"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Seulement d'instinct, savourer",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "e"
                },
                {
                    "line_number": 13,
                    "line_text": "La création ! S'enivrer",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "e"
                },
                {
                    "line_number": 14,
                    "line_text": "De l'espace et de la lumière !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "d"
                }
            ],
            "stanza_text": "Seulement d'instinct, savourer\nLa création ! S'enivrer\nDe l'espace et de la lumière !"
        }
    ],
    "corpus": "mel"
}