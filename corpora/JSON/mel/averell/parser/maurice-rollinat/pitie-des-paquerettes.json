                {
                    "line_number": 26,
                    "line_text": "Des nécrophores du coteau",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 27,
                    "line_text": "Et les pâquerettes bientôt,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 28,
                    "line_text": "Sécheront sur sa pourriture.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
