{
    "poem_title": "Les petits Cailloux",
    "author": "Maurice Rollinat",
    "structure": "forme RegExp (appariements)",
    "year": "1899",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Roulés par d'antiques déluges",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Ou par des torrents disparus,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Sur tant de chemins parcourus",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Ils ont rencontré des refuges.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Roulés par d'antiques déluges\nOu par des torrents disparus,\nSur tant de chemins parcourus\nIls ont rencontré des refuges."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Ils gisent au hasard du temps,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "À la merci brusque de l'homme,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 7,
                    "line_text": "Dormant leur immobile somme,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 8,
                    "line_text": "Mornes, gais, obscurs, miroitants.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ils gisent au hasard du temps,\nÀ la merci brusque de l'homme,\nDormant leur immobile somme,\nMornes, gais, obscurs, miroitants."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Il vous en apparaît, parfois,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Un tas tout blanc sous des aigrettes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 11,
                    "line_text": "D'herbes folles et de fleurettes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 12,
                    "line_text": "Dans la clairière d'un grand bois.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Il vous en apparaît, parfois,\nUn tas tout blanc sous des aigrettes\nD'herbes folles et de fleurettes\nDans la clairière d'un grand bois."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Certains, au pied d'un très vieil arbre,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Semblent au fond d'un ravin gris,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 15,
                    "line_text": "Sur une mousse vert-de-gris,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 16,
                    "line_text": "De beaux petits morceaux de marbre.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Certains, au pied d'un très vieil arbre,\nSemblent au fond d'un ravin gris,\nSur une mousse vert-de-gris,\nDe beaux petits morceaux de marbre."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "La chenille qu'humide ou sec",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Un coup de vent jette ou remporte",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 19,
                    "line_text": "Bien collée à sa feuille morte ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 20,
                    "line_text": "L'aiguisage d'un petit bec ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "La chenille qu'humide ou sec\nUn coup de vent jette ou remporte\nBien collée à sa feuille morte ;\nL'aiguisage d'un petit bec ;"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Fourmis au repos comme à l'œuvre ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "La rampade, le repliement",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 23,
                    "line_text": "Tassé, le désenroulement",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 24,
                    "line_text": "Brusque ou dormi de la couleuvre ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Fourmis au repos comme à l'œuvre ;\nLa rampade, le repliement\nTassé, le désenroulement\nBrusque ou dormi de la couleuvre ;"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Les divers grincés du grillon",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Selon qu'il s'arrête ou qu'il flâne ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 27,
                    "line_text": "La caresse d'un mufle d'âne ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 28,
                    "line_text": "Le flottement d'un papillon :",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Les divers grincés du grillon\nSelon qu'il s'arrête ou qu'il flâne ;\nLa caresse d'un mufle d'âne ;\nLe flottement d'un papillon :"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Tout cela, léger, taciturne,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Ou d'un murmure si discret,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 31,
                    "line_text": "Ils l'ont ! et savent le secret",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 32,
                    "line_text": "De plus d'une bête nocturne.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Tout cela, léger, taciturne,\nOu d'un murmure si discret,\nIls l'ont ! et savent le secret\nDe plus d'une bête nocturne."
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Ils ornent le recoin seulet,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Émaillent le sentier sauvage,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 35,
                    "line_text": "Le fossé, le mignon rivage",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 36,
                    "line_text": "De la source et du ruisselet.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ils ornent le recoin seulet,\nÉmaillent le sentier sauvage,\nLe fossé, le mignon rivage\nDe la source et du ruisselet."
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "L'averse vient quand il lui plaît",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "Leur donner fraîcheur et breuvage ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 39,
                    "line_text": "Le soleil, après ce lavage,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 40,
                    "line_text": "Les essuie avec un reflet.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "L'averse vient quand il lui plaît\nLeur donner fraîcheur et breuvage ;\nLe soleil, après ce lavage,\nLes essuie avec un reflet."
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Ovales, ronds, plats ou bombés,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "Polis, blancs, jaunes, violâtres,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 43,
                    "line_text": "Ils attachent les yeux du pâtre",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 44,
                    "line_text": "Aux longs regards inoccupés,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ovales, ronds, plats ou bombés,\nPolis, blancs, jaunes, violâtres,\nIls attachent les yeux du pâtre\nAux longs regards inoccupés,"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Comme ils frappent le solitaire",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 46,
                    "line_text": "Qui, lassé du visage humain,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 47,
                    "line_text": "Trouve toujours sur son chemin",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 48,
                    "line_text": "De quoi se pencher vers la terre,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Comme ils frappent le solitaire\nQui, lassé du visage humain,\nTrouve toujours sur son chemin\nDe quoi se pencher vers la terre,"
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Et leur aspect, même au temps froid,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 50,
                    "line_text": "Charme encor le plus triste endroit,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 51,
                    "line_text": "Car on sait que chacun recèle",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et leur aspect, même au temps froid,\nCharme encor le plus triste endroit,\nCar on sait que chacun recèle"
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 52,
                    "line_text": "Cet éclair soudain, rouge et bleu,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 53,
                    "line_text": "Cette âme furtive du feu :",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 54,
                    "line_text": "La prestigieuse étincelle !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Cet éclair soudain, rouge et bleu,\nCette âme furtive du feu :\nLa prestigieuse étincelle !"
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 55,
                    "line_text": "Là, frôlés de ces glisseurs doux :",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 56,
                    "line_text": "Le lézard, le ver et l'insecte,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 57,
                    "line_text": "Au bord d'une eau qui les humecte,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 58,
                    "line_text": "Ils rêvent les petits cailloux.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Là, frôlés de ces glisseurs doux :\nLe lézard, le ver et l'insecte,\nAu bord d'une eau qui les humecte,\nIls rêvent les petits cailloux."
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 59,
                    "line_text": "Au milieu des clartés éteintes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 60,
                    "line_text": "Le soleil, retardant sa mort,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 61,
                    "line_text": "Ajoute comme un glacis d'or,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 62,
                    "line_text": "Comme un frisson rose à leurs teintes.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Au milieu des clartés éteintes\nLe soleil, retardant sa mort,\nAjoute comme un glacis d'or,\nComme un frisson rose à leurs teintes."
        },
        {
            "stanza_number": 17,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 63,
                    "line_text": "Et, quand d'un invisible vol",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 64,
                    "line_text": "Dans l'air, au chant du rossignol,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 65,
                    "line_text": "Vont les brises capricieuses…",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et, quand d'un invisible vol\nDans l'air, au chant du rossignol,\nVont les brises capricieuses…"
        },
        {
            "stanza_number": 18,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 66,
                    "line_text": "L'astre sorcier qui les revêt",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 67,
                    "line_text": "De son ombre magique, en fait",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 68,
                    "line_text": "D'étranges pierres précieuses.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "L'astre sorcier qui les revêt\nDe son ombre magique, en fait\nD'étranges pierres précieuses."
        }
    ],
    "corpus": "mel"
}