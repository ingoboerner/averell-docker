                {
                    "line_number": 1,
                    "line_text": "Dans sa forge aux murs bas d'où le jour va s'enfuir,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Haut, roide, et sec du cou, des jambes et du buste,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Il tire, mécanique, en tablier de cuir,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "La chaîne d'acier clair du grand soufflet robuste.",
                    "metrical_pattern": null,
