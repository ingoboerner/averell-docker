{
    "poem_title": "LE PETIT FANTÔME",
    "author": "Maurice Rollinat",
    "structure": "suite périodique",
    "year": "1877",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "J'habite l'Océan,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Les joncs des marécages,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Les étranges pacages",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Et le gouffre béant.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "J'habite l'Océan,\nLes joncs des marécages,\nLes étranges pacages\nEt le gouffre béant."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Je plonge sous les flots,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Je danse sur la vague,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 7,
                    "line_text": "Et ma voix est si vague",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 8,
                    "line_text": "Qu'elle échappe aux échos.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Je plonge sous les flots,\nJe danse sur la vague,\nEt ma voix est si vague\nQu'elle échappe aux échos."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Je sonde les remous",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Et, sur le bord des mares,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 11,
                    "line_text": "Je fais des tintamarres",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 12,
                    "line_text": "Avec les crapauds mous.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Je sonde les remous\nEt, sur le bord des mares,\nJe fais des tintamarres\nAvec les crapauds mous."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Je suis dans les gazons",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Les énormes vipères,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 15,
                    "line_text": "Et dans leurs chauds repaires",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 16,
                    "line_text": "J'apporte des poisons.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Je suis dans les gazons\nLes énormes vipères,\nEt dans leurs chauds repaires\nJ'apporte des poisons."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Je sème dans les bois",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Les champignons perfides ;",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 19,
                    "line_text": "Quand je vois des sylphides,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 20,
                    "line_text": "Je les mets aux abois.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Je sème dans les bois\nLes champignons perfides ;\nQuand je vois des sylphides,\nJe les mets aux abois."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "J'attire le corbeau",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "Vers l'infecte charogne,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 23,
                    "line_text": "J'aime que son bec rogne",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 24,
                    "line_text": "Ce putride lambeau.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "J'attire le corbeau\nVers l'infecte charogne,\nJ'aime que son bec rogne\nCe putride lambeau."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Je ris quand le follet",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Séduit avec son leurre",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 27,
                    "line_text": "L'enfant perdu qui pleure",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 28,
                    "line_text": "De se voir si seulet.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Je ris quand le follet\nSéduit avec son leurre\nL'enfant perdu qui pleure\nDe se voir si seulet."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Je vais dans les manoirs",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Où le hibou m'accueille ;",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 31,
                    "line_text": "J'erre de feuille en feuille",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 32,
                    "line_text": "Au fond des halliers noirs.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Je vais dans les manoirs\nOù le hibou m'accueille ;\nJ'erre de feuille en feuille\nAu fond des halliers noirs."
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Mais, malgré mon humour",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Satanique et morose,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 35,
                    "line_text": "Je vais baiser la rose",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 36,
                    "line_text": "Tout palpitant d'amour.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Mais, malgré mon humour\nSatanique et morose,\nJe vais baiser la rose\nTout palpitant d'amour."
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Les nocturnes parfums",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "Me jettent leurs bouffées ;",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 39,
                    "line_text": "Je hais les vieilles fées",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 40,
                    "line_text": "Et les mauvais défunts.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Les nocturnes parfums\nMe jettent leurs bouffées ;\nJe hais les vieilles fées\nEt les mauvais défunts."
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "La forêt me chérit,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "Je jase avec la lune ;",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 43,
                    "line_text": "Je folâtre dans l'une",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 44,
                    "line_text": "Et l'autre me sourit.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "La forêt me chérit,\nJe jase avec la lune ;\nJe folâtre dans l'une\nEt l'autre me sourit."
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "La rosée est mon vin.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 46,
                    "line_text": "Avec les violettes",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 47,
                    "line_text": "Je bois ses gouttelettes",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 48,
                    "line_text": "Dans le fond du ravin.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "La rosée est mon vin.\nAvec les violettes\nJe bois ses gouttelettes\nDans le fond du ravin."
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Quelquefois j'ose aller",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 50,
                    "line_text": "Au fond des grottes sourdes ;",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 51,
                    "line_text": "Et sur les brumes lourdes",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 52,
                    "line_text": "Je flotte sans voler.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Quelquefois j'ose aller\nAu fond des grottes sourdes ;\nEt sur les brumes lourdes\nJe flotte sans voler."
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "A moi le loup rôdant",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 54,
                    "line_text": "Et les muets cloportes !",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 55,
                    "line_text": "Les choses qu'on dit mortes",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 56,
                    "line_text": "M'ont pris pour confident.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "A moi le loup rôdant\nEt les muets cloportes !\nLes choses qu'on dit mortes\nM'ont pris pour confident."
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 57,
                    "line_text": "Quand les spectres blafards",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 58,
                    "line_text": "Rasent les étangs mornes,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 59,
                    "line_text": "J'écoute les viornes",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 60,
                    "line_text": "Parler aux nénuphars.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Quand les spectres blafards\nRasent les étangs mornes,\nJ'écoute les viornes\nParler aux nénuphars."
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 61,
                    "line_text": "Invisible aux humains,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 62,
                    "line_text": "Je suis les penseurs chauves",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 63,
                    "line_text": "Et les poètes fauves",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 64,
                    "line_text": "Vaguant par les chemins.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Invisible aux humains,\nJe suis les penseurs chauves\nEt les poètes fauves\nVaguant par les chemins."
        },
        {
            "stanza_number": 17,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 65,
                    "line_text": "Quand arrive minuit,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 66,
                    "line_text": "Je dévore l'espace,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 67,
                    "line_text": "Dans l'endroit où je passe",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 68,
                    "line_text": "On n'entend pas de bruit.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Quand arrive minuit,\nJe dévore l'espace,\nDans l'endroit où je passe\nOn n'entend pas de bruit."
        },
        {
            "stanza_number": 18,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 69,
                    "line_text": "Mais lorsque le soleil",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                },
                {
                    "line_number": 70,
                    "line_text": "Vient éclairer la terre,",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 71,
                    "line_text": "Dans les bras du mystère",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "b"
                },
                {
                    "line_number": 72,
                    "line_text": "Je retourne au sommeil.",
                    "metrical_pattern": null,
                    "line_length": "6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Mais lorsque le soleil\nVient éclairer la terre,\nDans les bras du mystère\nJe retourne au sommeil."
        }
    ],
    "corpus": "mel"
}