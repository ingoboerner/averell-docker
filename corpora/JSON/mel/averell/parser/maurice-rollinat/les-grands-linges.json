            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Le magique soleil sur les hauteurs pensives",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Fait luire et triompher tous ces grands linges blancs",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Qui, chevauchant leur corde au sortir des lessives,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Y sèchent, tour à tour inertes et tremblants.",
                    "metrical_pattern": null,
