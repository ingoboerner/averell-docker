                {
                    "line_number": 1,
                    "line_text": "La lune a de lointains regards",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Pour les maisons et les hangars",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Qui tordent sous les vents hagards",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Mais sa lueur fait des plongeons",
                    "metrical_pattern": null,
                    "line_length": "4",
                    "rhyme": "b"
                },
                {
