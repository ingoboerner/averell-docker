{
    "poem_title": "Coucher de soleil",
    "author": "Maurice Rollinat",
    "structure": "sonnet",
    "year": "1899",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Le soleil sur les monts s'écroule,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "S'empourpre, et, graduellement,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Rétrécit son rayonnement,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Toujours plus se ramasse en boule.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Le soleil sur les monts s'écroule,\nS'empourpre, et, graduellement,\nRétrécit son rayonnement,\nToujours plus se ramasse en boule."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Sa grande âme presque exhalée,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 6,
                    "line_text": "De ses derniers soupirs de feu",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "d"
                },
                {
                    "line_number": 7,
                    "line_text": "Rougit la côte et le milieu",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "d"
                },
                {
                    "line_number": 8,
                    "line_text": "De la solitaire vallée.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Sa grande âme presque exhalée,\nDe ses derniers soupirs de feu\nRougit la côte et le milieu\nDe la solitaire vallée."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Et quand il s'éteint, descendu",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "e"
                },
                {
                    "line_number": 10,
                    "line_text": "Sur un roc lierreux et fendu,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "e"
                },
                {
                    "line_number": 11,
                    "line_text": "Taché de noir comme les marbres,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "f"
                }
            ],
            "stanza_text": "Et quand il s'éteint, descendu\nSur un roc lierreux et fendu,\nTaché de noir comme les marbres,"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Il figure, brûlant les yeux,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "g"
                },
                {
                    "line_number": 13,
                    "line_text": "Un saint sacrement monstrueux",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "g"
                },
                {
                    "line_number": 14,
                    "line_text": "Qui saigne parmi des troncs d'arbres.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "f"
                }
            ],
            "stanza_text": "Il figure, brûlant les yeux,\nUn saint sacrement monstrueux\nQui saigne parmi des troncs d'arbres."
        }
    ],
    "corpus": "mel"
}