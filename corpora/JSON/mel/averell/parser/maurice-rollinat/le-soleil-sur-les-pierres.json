    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Sur les rocs, comme au ciel, le monarque du feu",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Aux fulgurants reflets du grisâtre et du bleu.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Sur les rocs, comme au ciel, le monarque du feu\nAux fulgurants reflets du grisâtre et du bleu."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "Fourmillements d'éclairs de miroirs, de rapières",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "L'astre brûle : sa roue épand sa chaleur fière,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Fourmillements d'éclairs de miroirs, de rapières\nL'astre brûle : sa roue épand sa chaleur fière,"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Ni nuage, ni vent, ni brume, ni poussière !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Doublé, répercuté partout, et rien ne peut",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Ni nuage, ni vent, ni brume, ni poussière !\nDoublé, répercuté partout, et rien ne peut"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Pas l'ombre d'un lézard ou d'un serpent, si peu",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Pas une libellule au repos comme au jeu !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Pas l'ombre d'un lézard ou d'un serpent, si peu\nPas une libellule au repos comme au jeu !"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Pas un spectre d'ajonc, pas un fil de bruyère !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Où la Mort à foison réalise son vœu",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Pas un spectre d'ajonc, pas un fil de bruyère !\nOù la Mort à foison réalise son vœu"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Là, sans même un torrent qui gronde à son milieu,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Triomphe inertement l'éternelle matière.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 13,
                    "line_text": "Désert, vide, silence et splendeur : l'astre-dieu",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Mire son infini dans l'enfer de la pierre.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Là, sans même un torrent qui gronde à son milieu,\nTriomphe inertement l'éternelle matière.\nDésert, vide, silence et splendeur : l'astre-dieu\nMire son infini dans l'enfer de la pierre."
        }
    ],
    "corpus": "mel"
}