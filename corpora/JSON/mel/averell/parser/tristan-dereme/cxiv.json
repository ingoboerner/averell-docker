{
    "poem_title": "CXIV",
    "author": "Tristan Derème",
    "structure": "suite périodique",
    "year": "1922",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Pour goûter au charme unique",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Qui jaillit de ton baiser,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Diogène le Cynique",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Courrait se faire raser.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Pour goûter au charme unique\nQui jaillit de ton baiser,\nDiogène le Cynique\nCourrait se faire raser."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "S'ils savaient ton regard, ivres",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Les sages silencieux",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 7,
                    "line_text": "Verraient s'ouvrir dans leurs livres",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Des pivoines et des yeux.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "S'ils savaient ton regard, ivres\nLes sages silencieux\nVerraient s'ouvrir dans leurs livres\nDes pivoines et des yeux."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Et, mordus de quelles fièvres !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Secouant toge ou veston,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 11,
                    "line_text": "Et sautant comme des lièvres,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Ils crieraient : Où la voit-on ?",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et, mordus de quelles fièvres !\nSecouant toge ou veston,\nEt sautant comme des lièvres,\nIls crieraient : Où la voit-on ?"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Dans leurs veines : escarboucles",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Liquides et plomb fondu,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 15,
                    "line_text": "Tu les verrais pour tes boucles",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 16,
                    "line_text": "Poussant un cri éperdu,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Dans leurs veines : escarboucles\nLiquides et plomb fondu,\nTu les verrais pour tes boucles\nPoussant un cri éperdu,"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Tous, contemporains d'Ulysse",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Et disciples de Bergson,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 19,
                    "line_text": "Se rouler nus, ô délice !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Sur des peaux de hérisson",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Tous, contemporains d'Ulysse\nEt disciples de Bergson,\nSe rouler nus, ô délice !\nSur des peaux de hérisson"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Car pour mordre à la grenade",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "Rouge des désirs ouverts,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 23,
                    "line_text": "Ils oublieraient la monade.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 24,
                    "line_text": "Le noumène et l'Univers.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Car pour mordre à la grenade\nRouge des désirs ouverts,\nIls oublieraient la monade.\nLe noumène et l'Univers."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Ah ! Vivons ! La page écrite",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Ne vaut pas les lèvres qu'on",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 27,
                    "line_text": "Mord ! Vers l'amour ! Démocrite,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 28,
                    "line_text": "Spinoza, Hegel, Bacon,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Ah ! Vivons ! La page écrite\nNe vaut pas les lèvres qu'on\nMord ! Vers l'amour ! Démocrite,\nSpinoza, Hegel, Bacon,"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "MMonsieur. Durkheim, Xénophane,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Vers l'amour, vous chanteriez,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 31,
                    "line_text": "Sans archet ni colophane",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 32,
                    "line_text": "Violons extasiés !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "MMonsieur. Durkheim, Xénophane,\nVers l'amour, vous chanteriez,\nSans archet ni colophane\nViolons extasiés !"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Ah ! que pèsent hypothèses,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Postulats, systèmes, lois ?",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 35,
                    "line_text": "Ne faut-il que tu te taises",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 36,
                    "line_text": "Ou que tu joignes ta voix",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Ah ! que pèsent hypothèses,\nPostulats, systèmes, lois ?\nNe faut-il que tu te taises\nOu que tu joignes ta voix"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Au grand tumulte des choses,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "À l'amour qui fait ployer",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 39,
                    "line_text": "Les cigognes et les roses,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 40,
                    "line_text": "La tulipe et l'épervier ?",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Au grand tumulte des choses,\nÀ l'amour qui fait ployer\nLes cigognes et les roses,\nLa tulipe et l'épervier ?"
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Viens, et contre moi pressée,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "Aux brutes fais-moi pareil",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 43,
                    "line_text": "En écrasant ma pensée",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 44,
                    "line_text": "Sous la grâce d'un orteil.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Viens, et contre moi pressée,\nAux brutes fais-moi pareil\nEn écrasant ma pensée\nSous la grâce d'un orteil."
        }
    ],
    "corpus": "mel"
}