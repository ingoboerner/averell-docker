                {
                    "line_number": 1,
                    "line_text": "Tu me railles, mais j'aime un livre singulier",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Comme moi-même et qu'un auteur sache lier",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "L'univers à son rythme et que sa droite unisse",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Et courbe au même joug l'autruche et la génisse.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 5,
                    "line_text": "Et déjà n'ai-je pas en des mètres égaux",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Chanté ce calme fiacre attelé d'escargots",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 7,
                    "line_text": "Qui me traînait naguère aux pentes des collines",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 8,
                    "line_text": "Dans l'herbe et la fraîcheur des roses cristallines ?",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 9,
