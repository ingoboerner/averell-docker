            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Tu parais ; l'ouragan suspend son large cri ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Tu parles, et ta voix douce et lente l'apaise,",
