                },
                {
                    "line_number": 7,
                    "line_text": "Et la mer en chantant caresse la falaise,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 8,
                    "line_text": "Et mon rêve au soleil est un vaisseau fleuri.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
