            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Si tu as bu le vin suprême des idées,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Pour toi le ciel est noir et les vierges ridées.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Et, les contrevents clos aux splendeurs des étés,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Tu t'exaltes devant tes livres annotés ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 5,
                    "line_text": "Les pages dans le soir vibrent comme des ailes",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Et l'encrier jette des gerbes d'étincelles.",
                    "metrical_pattern": null,
                    "line_length": "4+4+4",
                    "rhyme": "a"
                },
                {
                    "line_number": 7,
                    "line_text": "Ainsi le front courbé sous la lampe tu lis,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 8,
                    "line_text": "Drapant ton rêve dans l'orgueil aux larges plis,",
                    "metrical_pattern": null,
                    "line_length": "6−6",
                    "rhyme": "b"
                },
                {
                    "line_number": 9,
                    "line_text": "Jusqu'à l'heure où, poussant la porte d'un doigt frêle",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Elle apparaît, riant sous sa petite ombrelle.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
