            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Les voilà déjà loin, suivant leur destinée.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Au frêle amour humain arrachant son flambeau,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 35,
                    "line_text": "Tu tombas tout à coup dans ta course effrénée,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 36,
                    "line_text": "Toi qu'on nous peint d'abord si candide et si beau.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 37,
                    "line_text": "Victime du désir, plein d'une ardeur étrange,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "Tu t'acharnais en vain à fouiller dans la fange.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 39,
                    "line_text": "Et descendais toujours sans cesser d'aspirer.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 40,
                    "line_text": "Oui, jusqu'au bout tu crus, sous ta lèvre pâlie.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "c"
                },
                {
                    "line_number": 41,
                    "line_text": "Obtenir de l'ivresse en t'abreuvant de lie ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "c"
                },
                {
                    "line_number": 42,
                    "line_text": "Tu ne parvins pas même à te désaltérer.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 43,
                    "line_text": "Chaque jour plus ardent, vers de nouvelles ondes",
