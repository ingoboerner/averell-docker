    "structure": "suite périodique",
    "year": "1895",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Si l’aveugle hasard me donnait la puissance",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Le glaive justicier de la sainte vengeance",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Si l’aveugle hasard me donnait la puissance\nLe glaive justicier de la sainte vengeance"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "J’irais sur le cadavre épeler les tortures :",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Œil pour œil, dent pour dent, blessure pour blessure",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "J’irais sur le cadavre épeler les tortures :\nŒil pour œil, dent pour dent, blessure pour blessure"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Et je voudrais aussi, secouant la poussière",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Évoquer leur douleur muette et satisfaire",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et je voudrais aussi, secouant la poussière\nÉvoquer leur douleur muette et satisfaire"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Car l’expiation est chose grande et sainte",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Les douleurs sans vengeance élèvent une plainte",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Car l’expiation est chose grande et sainte\nLes douleurs sans vengeance élèvent une plainte"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Et de peur qu’il fût dit que cette loi suprême",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Pour absoudre le ciel, l’homme a cru que Dieu même",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et de peur qu’il fût dit que cette loi suprême\nPour absoudre le ciel, l’homme a cru que Dieu même"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "La revanche viendra : le Jour inévitable",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Luira pour balayer une race coupable",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "La revanche viendra : le Jour inévitable\nLuira pour balayer une race coupable"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Alors on nous dira : « La vengeance est impie,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Et quand le sang versé veut du sang qui l’expie",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Alors on nous dira : « La vengeance est impie,\nEt quand le sang versé veut du sang qui l’expie"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "Pas de grâce. Pensons à la mort de nos frères,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 16,
                    "line_text": "Et que leur souvenir en profondes colères",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Pas de grâce. Pensons à la mort de nos frères,\nEt que leur souvenir en profondes colères"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Pensons aux jours de sang, de pillage et de ruine,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Le canon répondait aux cris de la famine,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Pensons aux jours de sang, de pillage et de ruine,\nLe canon répondait aux cris de la famine,"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Le viol impur souillait les vierges sur les places,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Et quand les massacreurs, dont les mains étaient lasses,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Le viol impur souillait les vierges sur les places,\nEt quand les massacreurs, dont les mains étaient lasses,"
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Vous couronniez leurs fronts et vos femmes si fières",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "Ces cosaques maudits, chers jadis à leurs mères,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Vous couronniez leurs fronts et vos femmes si fières\nCes cosaques maudits, chers jadis à leurs mères,"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 23,
                    "line_text": "Et puis le lendemain de la victoire impie",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 24,
                    "line_text": "Après l’assassinat, la lâche calomnie,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et puis le lendemain de la victoire impie\nAprès l’assassinat, la lâche calomnie,"
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Corne ils ont bien d’avance absous nos représailles",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Pensons aux morts : il faut de grandes funérailles",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Corne ils ont bien d’avance absous nos représailles\nPensons aux morts : il faut de grandes funérailles"
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 27,
                    "line_text": "Ce sera votre tour, pas de pardon, nos maîtres,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 28,
                    "line_text": "Vil troupeau d’assassins, de lâches et de traîtres",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Ce sera votre tour, pas de pardon, nos maîtres,\nVil troupeau d’assassins, de lâches et de traîtres"
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Le jour de la justice est venu : pas de grâce,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Ne vous empêcheront de baiser chaque place",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Le jour de la justice est venu : pas de grâce,\nNe vous empêcheront de baiser chaque place"
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "Toi, l’aveugle instrument de leur froide colère,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 32,
                    "line_text": "Pourvu qu’à ton chevet le spectre de ton frère",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Toi, l’aveugle instrument de leur froide colère,\nPourvu qu’à ton chevet le spectre de ton frère"
        },
        {
            "stanza_number": 17,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Vous serfs de tout pouvoir, automates stupides,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Qui tournez sans remords vos armes parricides",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Vous serfs de tout pouvoir, automates stupides,\nQui tournez sans remords vos armes parricides"
        },
        {
            "stanza_number": 18,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 35,
                    "line_text": "Et vous vils trafiquants, race basse et rampante.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 36,
                    "line_text": "Soûlant d’or et de vin la horde rugissante",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et vous vils trafiquants, race basse et rampante.\nSoûlant d’or et de vin la horde rugissante"
        },
        {
            "stanza_number": 19,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Loin d’ici ! vous souillez l’air pur de la patrie.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "Le peuple est là qui veille : oh fuyez, qu’il oublie",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Loin d’ici ! vous souillez l’air pur de la patrie.\nLe peuple est là qui veille : oh fuyez, qu’il oublie"
        }
