                {
                    "line_number": 1,
                    "line_text": "Je suis une hirondelle et non une colombe,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Ma nature me force à voltiger toujours.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Le nid où des ramiers s'abritent les amours,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "S'il y fallait couver, serait bientôt ma tombe.",
