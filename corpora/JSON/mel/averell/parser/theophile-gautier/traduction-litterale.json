        {
            "stanza_number": 25,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 70,
                    "line_text": "Par une de ces nuits où l'étoile d'amour,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "29"
                },
                {
                    "line_number": 71,
                    "line_text": "Isis, de son croissant dessinant le contour,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "29"
                },
                {
                    "line_number": 72,
                    "line_text": "Dans le fleuve sacré mire son front de vierge,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "52"
                },
                {
                    "line_number": 73,
                    "line_text": "Où les couples, guettant sa lueur de la berge,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "52"
                },
                {
                    "line_number": 74,
                    "line_text": "Calculent en quel temps son cours recommencé",
