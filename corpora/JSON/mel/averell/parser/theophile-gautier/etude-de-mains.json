{
    "poem_title": "ÉTUDE DE MAINS",
    "author": "Théophile Gautier",
    "structure": "suite périodique",
    "year": "1872",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Chez un sculpteur, moulée en plâtre,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "0"
                },
                {
                    "line_number": 2,
                    "line_text": "J'ai vu l'autre jour une main",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "1"
                },
                {
                    "line_number": 3,
                    "line_text": "D'Aspasie ou de Cléopâtre,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "0"
                },
                {
                    "line_number": 4,
                    "line_text": "Pur fragment d'un chef-d'œuvre humain ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "1"
                }
            ],
            "stanza_text": "Chez un sculpteur, moulée en plâtre,\nJ'ai vu l'autre jour une main\nD'Aspasie ou de Cléopâtre,\nPur fragment d'un chef-d'œuvre humain ;"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Sous le baiser neigeux saisie",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "2"
                },
                {
                    "line_number": 6,
                    "line_text": "Comme un lis par l'aube argenté,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "3"
                },
                {
                    "line_number": 7,
                    "line_text": "Comme une blanche poésie",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "2"
                },
                {
                    "line_number": 8,
                    "line_text": "S'épanouissait sa beauté,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "3"
                }
            ],
            "stanza_text": "Sous le baiser neigeux saisie\nComme un lis par l'aube argenté,\nComme une blanche poésie\nS'épanouissait sa beauté,"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Dans l'éclat de sa pâleur mate",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "4"
                },
                {
                    "line_number": 10,
                    "line_text": "Elle étalait sur le velours",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "5"
                },
                {
                    "line_number": 11,
                    "line_text": "Son élégance délicate",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "4"
                },
                {
                    "line_number": 12,
                    "line_text": "Et ses doigts fins aux anneaux lourds.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "6"
                }
            ],
            "stanza_text": "Dans l'éclat de sa pâleur mate\nElle étalait sur le velours\nSon élégance délicate\nEt ses doigts fins aux anneaux lourds."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Une cambrure florentine,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "7"
                },
                {
                    "line_number": 14,
                    "line_text": "Avec un bel air de fierté,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "3"
                },
                {
                    "line_number": 15,
                    "line_text": "Faisait, en ligne serpentine,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "7"
                },
                {
                    "line_number": 16,
                    "line_text": "Onduler son pouce écarté.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "3"
                }
            ],
            "stanza_text": "Une cambrure florentine,\nAvec un bel air de fierté,\nFaisait, en ligne serpentine,\nOnduler son pouce écarté."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "A-t-elle joué dans les boucles",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "8"
                },
                {
                    "line_number": 18,
                    "line_text": "Des cheveux lustrés de don Juan,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "9"
                },
                {
                    "line_number": 19,
                    "line_text": "Ou sur son caftan d'escarboucles",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "8"
                },
                {
                    "line_number": 20,
                    "line_text": "Peigné la barbe du sultan,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "9"
                }
            ],
            "stanza_text": "A-t-elle joué dans les boucles\nDes cheveux lustrés de don Juan,\nOu sur son caftan d'escarboucles\nPeigné la barbe du sultan,"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Et tenu, courtisane ou reine,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "10"
                },
                {
                    "line_number": 22,
                    "line_text": "Entre ses doigts si bien sculptés,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "11"
                },
                {
                    "line_number": 23,
                    "line_text": "Le sceptre de la souveraine",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "10"
                },
                {
                    "line_number": 24,
                    "line_text": "Ou le sceptre des voluptés ?",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "11"
                }
            ],
            "stanza_text": "Et tenu, courtisane ou reine,\nEntre ses doigts si bien sculptés,\nLe sceptre de la souveraine\nOu le sceptre des voluptés ?"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Elle a dû, nerveuse et mignonne,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "12"
                },
                {
                    "line_number": 26,
                    "line_text": "Souvent s'appuyer sur le col",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "13"
                },
                {
                    "line_number": 27,
                    "line_text": "Et sur la croupe de lionne",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "12"
                },
                {
                    "line_number": 28,
                    "line_text": "De sa chimère prise au vol.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "13"
                }
            ],
            "stanza_text": "Elle a dû, nerveuse et mignonne,\nSouvent s'appuyer sur le col\nEt sur la croupe de lionne\nDe sa chimère prise au vol."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Impériales fantaisies,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "14"
                },
                {
                    "line_number": 30,
                    "line_text": "Amour des somptuosités ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "11"
                },
                {
                    "line_number": 31,
                    "line_text": "Voluptueuses frénésies,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "14"
                },
                {
                    "line_number": 32,
                    "line_text": "Rêves d'impossibilités,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "11"
                }
            ],
            "stanza_text": "Impériales fantaisies,\nAmour des somptuosités ;\nVoluptueuses frénésies,\nRêves d'impossibilités,"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Romans extravagants, poèmes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "15"
                },
                {
                    "line_number": 34,
                    "line_text": "De haschisch et de vin du Rhin,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "1"
                },
                {
                    "line_number": 35,
                    "line_text": "Courses folles dans les bohèmes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "15"
                },
                {
                    "line_number": 36,
                    "line_text": "Sur le dos des coursiers sans frein ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "1"
                }
            ],
            "stanza_text": "Romans extravagants, poèmes\nDe haschisch et de vin du Rhin,\nCourses folles dans les bohèmes\nSur le dos des coursiers sans frein ;"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "On voit tout cela dans les lignes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "16"
                },
                {
                    "line_number": 38,
                    "line_text": "De cette paume, livre blanc",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "17"
                },
                {
                    "line_number": 39,
                    "line_text": "Où Vénus a tracé des signes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "16"
                },
                {
                    "line_number": 40,
                    "line_text": "Que l'amour ne lit qu'en tremblant.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "18"
                }
            ],
            "stanza_text": "On voit tout cela dans les lignes\nDe cette paume, livre blanc\nOù Vénus a tracé des signes\nQue l'amour ne lit qu'en tremblant."
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Pour contraste, la main coupée",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "De Lacenaire l'assassin,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 43,
                    "line_text": "Dans des baumes puissants trempée",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 44,
                    "line_text": "Posait auprès, sur un coussin",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Pour contraste, la main coupée\nDe Lacenaire l'assassin,\nDans des baumes puissants trempée\nPosait auprès, sur un coussin"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Curiosité dépravée !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 46,
                    "line_text": "J'ai touché, malgré mes dégoûts,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 47,
                    "line_text": "Du supplice encor mal lavée,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 48,
                    "line_text": "Cette chair froide au duvet roux.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Curiosité dépravée !\nJ'ai touché, malgré mes dégoûts,\nDu supplice encor mal lavée,\nCette chair froide au duvet roux."
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Momifiée et toute jaune",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 50,
                    "line_text": "Comme la main d'un pharaon,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 51,
                    "line_text": "Elle allonge ses doigts de faune",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 52,
                    "line_text": "Crispés par la tentation.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Momifiée et toute jaune\nComme la main d'un pharaon,\nElle allonge ses doigts de faune\nCrispés par la tentation."
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "Un prurit d'or et de chair vive",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 54,
                    "line_text": "Semble titiller de ses doigts",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 55,
                    "line_text": "L'immobilité convulsive,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 56,
                    "line_text": "Et les tordre comme autrefois.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Un prurit d'or et de chair vive\nSemble titiller de ses doigts\nL'immobilité convulsive,\nEt les tordre comme autrefois."
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 57,
                    "line_text": "Tous les vices avec leurs griffes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 58,
                    "line_text": "Ont, dans les plis de cette peau,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 59,
                    "line_text": "Tracé d'affreux hiéroglyphes,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 60,
                    "line_text": "Lus couramment par le bourreau.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Tous les vices avec leurs griffes\nOnt, dans les plis de cette peau,\nTracé d'affreux hiéroglyphes,\nLus couramment par le bourreau."
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 61,
                    "line_text": "On y voit les œuvres mauvaises",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 62,
                    "line_text": "Écrites en fauves sillons,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 63,
                    "line_text": "Et les brûlures des fournaises",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 64,
                    "line_text": "Où bouillent les corruptions ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "On y voit les œuvres mauvaises\nÉcrites en fauves sillons,\nEt les brûlures des fournaises\nOù bouillent les corruptions ;"
        },
        {
            "stanza_number": 17,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 65,
                    "line_text": "Les débauches dans les Caprées",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 66,
                    "line_text": "Des tripots et des lupanars,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 67,
                    "line_text": "De vin et de sang diaprées,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 68,
                    "line_text": "Comme l'ennui des vieux Césars !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Les débauches dans les Caprées\nDes tripots et des lupanars,\nDe vin et de sang diaprées,\nComme l'ennui des vieux Césars !"
        },
        {
            "stanza_number": 18,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 69,
                    "line_text": "En même temps molle et féroce,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 70,
                    "line_text": "Sa forme a pour l'observateur",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 71,
                    "line_text": "Je ne sais quelle grâce atroce,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 72,
                    "line_text": "La grâce du gladiateur !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "En même temps molle et féroce,\nSa forme a pour l'observateur\nJe ne sais quelle grâce atroce,\nLa grâce du gladiateur !"
        },
        {
            "stanza_number": 19,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 73,
                    "line_text": "Criminelle aristocratie,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 74,
                    "line_text": "Par la varlope ou le marteau",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 75,
                    "line_text": "Sa pulpe n'est pas endurcie,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 76,
                    "line_text": "Car son outil fut un couteau.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Criminelle aristocratie,\nPar la varlope ou le marteau\nSa pulpe n'est pas endurcie,\nCar son outil fut un couteau."
        },
        {
            "stanza_number": 20,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 77,
                    "line_text": "Saints calus du travail honnête,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 78,
                    "line_text": "On y cherche en vain votre sceau.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 79,
                    "line_text": "Vrai meurtrier et faux poète,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 80,
                    "line_text": "Il fut le Manfred du ruisseau !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Saints calus du travail honnête,\nOn y cherche en vain votre sceau.\nVrai meurtrier et faux poète,\nIl fut le Manfred du ruisseau !"
        }
    ],
    "corpus": "mel"
}