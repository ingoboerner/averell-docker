                {
                    "line_number": 27,
                    "line_text": "N'est plus pour vous qu'un nom dont le vain souvenir",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 28,
                    "line_text": "Contre un amour nouveau ne peut longtemps tenir ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 29,
                    "line_text": "Ce nom qui résonnait naguère à votre oreille",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Aussi doux que la voix du rossignol, n'éveille",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
