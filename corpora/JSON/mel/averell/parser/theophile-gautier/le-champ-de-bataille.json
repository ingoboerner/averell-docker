            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Dans les bois, les vieux loups par trois fois ont hurlé,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Levant leur tête grise à l'odeur de la proie.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 35,
                    "line_text": "L'œil fauve des vautours a flamboyé de joie",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 36,
                    "line_text": "A l'ombre étincelant comme un phare étoilé,",
