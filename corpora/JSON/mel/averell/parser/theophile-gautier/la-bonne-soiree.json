            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "J'ai là l'Intermezzo de Heine,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 46,
                    "line_text": "Le Thomas Grain-d'orge de Taine,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 47,
                    "line_text": "Le temps, jusqu'à l'heure où s'achève",
                    "metrical_pattern": null,
                    "line_length": "4",
                    "rhyme": "b"
                },
                {
                    "line_number": 48,
                    "line_text": "Sur l'oreiller l'idée en rêve,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "J'ai là l'Intermezzo de Heine,\nLe Thomas Grain-d'orge de Taine,\nLe temps, jusqu'à l'heure où s'achève\nSur l'oreiller l'idée en rêve,"
        }
