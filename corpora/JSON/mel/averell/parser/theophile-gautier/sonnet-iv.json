            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Lorsque je vous dépeins cet amour sans mélange,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Cet amour à la fois ardent, grave et jaloux,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Que maintenant je porte au fond du cœur pour vous,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Et dont je me raillais jadis, ô mon jeune ange,",
                    "metrical_pattern": null,
