                {
                    "line_number": 52,
                    "line_text": "C'est là leur diadème ; ils en font plus de compte",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "26"
                },
                {
                    "line_number": 53,
                    "line_text": "Que d'un cercle à fleurons de marquis et de comte,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "25"
                },
                {
                    "line_number": 54,
                    "line_text": "Et des larges mortiers à grands bords abattus,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
