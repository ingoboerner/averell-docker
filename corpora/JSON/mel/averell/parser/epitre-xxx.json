                {
                    "line_number": 23,
                    "line_text": "Sont passés avec toi dans la nuit du trépas.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "12"
                },
                {
                    "line_number": 24,
                    "line_text": "Le ciel, en récompense, accorde à ta maîtresse",
