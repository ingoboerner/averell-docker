            "lines": [
                {
                    "line_number": 1,
                    "line_text": "LE printemps triomphe soudain,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Et trois roses, dans le jardin,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Se sont ouvertes ce matin.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "LE printemps triomphe soudain,\nEt trois roses, dans le jardin,\nSe sont ouvertes ce matin."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 4,
                    "line_text": "Nouvelles roses de l'année",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 5,
                    "line_text": "Qui ne vivrez qu'une journée,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Dites-moi votre destinée.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Nouvelles roses de l'année\nQui ne vivrez qu'une journée,\nDites-moi votre destinée."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "— Moi, dit l'une, don d'un amant,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Dans la tiédeur d'un sein charmant,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 9,
                    "line_text": "Je dois mourir languissamment.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "— Moi, dit l'une, don d'un amant,\nDans la tiédeur d'un sein charmant,\nJe dois mourir languissamment."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 10,
                    "line_text": "L'autre a dit : — Dans le cimetière,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 11,
                    "line_text": "Je dois, près d'un nom sur la pierre,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Jeter mon haleine dernière.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "L'autre a dit : — Dans le cimetière,\nJe dois, près d'un nom sur la pierre,\nJeter mon haleine dernière."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Et la troisième a dit : — Le choix",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "De mon sort est meilleur. Je dois",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 15,
                    "line_text": "M'exhaler au pied de la Croix.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et la troisième a dit : — Le choix\nDe mon sort est meilleur. Je dois\nM'exhaler au pied de la Croix."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 16,
                    "line_text": "Je songe avec mélancolie",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 17,
                    "line_text": "A l'amour, si brève folie,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Aux morts que trop vite on oublie.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Je songe avec mélancolie\nA l'amour, si brève folie,\nAux morts que trop vite on oublie."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Fleurs des amants, fleurs des défunts,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Hélas ! vos destins sont communs.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 21,
                    "line_text": "Ils se dissipent, vos parfums.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Fleurs des amants, fleurs des défunts,\nHélas ! vos destins sont communs.\nIls se dissipent, vos parfums."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 22,
                    "line_text": "Roses tout à l'heure fleuries,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 23,
                    "line_text": "Vous me semblez déjà flétries,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 24,
                    "line_text": "Excepté toi, rose qui pries.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Roses tout à l'heure fleuries,\nVous me semblez déjà flétries,\nExcepté toi, rose qui pries."
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Car ton âme suave au Ciel",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Va monter, rose de l'autel,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 27,
                    "line_text": "Et ton parfum est immortel.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Car ton âme suave au Ciel\nVa monter, rose de l'autel,\nEt ton parfum est immortel."
        }
