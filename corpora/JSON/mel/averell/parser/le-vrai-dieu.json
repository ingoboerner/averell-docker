            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Mais l'homme, constant dans sa rage,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "S'oppose à sa félicité ;",
