                },
                {
                    "line_number": 2,
                    "line_text": "A main gauche, près des fumiers étages haut,",
                    "metrical_pattern": null,
                    "line_length": "6−6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Volets fermés, dormait d'un pesant sommeil chaud,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Sous les rayons serrés d'un soleil irritable.",
                    "metrical_pattern": null,
