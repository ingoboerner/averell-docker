            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Comme un enfant de bohème,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Marchant toujours au hasard,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Ami, je marche de même",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
