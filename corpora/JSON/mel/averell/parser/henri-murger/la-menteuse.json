            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 6,
                    "line_text": "— Oh ! Laissez-moi, ma mère pleure,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 7,
                    "line_text": "Car mon petit frère est perdu ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
