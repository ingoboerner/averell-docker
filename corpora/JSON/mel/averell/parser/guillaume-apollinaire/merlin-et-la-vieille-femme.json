            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Et j'ai vieilli vois-tu pendant ta vie je danse",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": ""
                },
                {
                    "line_number": 46,
                    "line_text": "Mais j'eusse été tôt lasse et l'aubépine en fleurs",
