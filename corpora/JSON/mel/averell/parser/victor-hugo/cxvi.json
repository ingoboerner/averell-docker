            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 2,
                    "line_text": "Tout est le même abîme avec les mêmes ondes.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
