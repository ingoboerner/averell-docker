{
    "poem_title": "Sara la baigneuse",
    "author": "Victor Hugo",
    "structure": "suite périodique",
    "year": "1829",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Sara, belle d'indolence,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Dans un hamac, au-dessus",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Du bassin d'une fontaine",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "D'eau puisée à l'Ilyssus ;",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Sara, belle d'indolence,\nDans un hamac, au-dessus\nDu bassin d'une fontaine\nD'eau puisée à l'Ilyssus ;"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Et la frêle escarpolette",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Dans le transparent miroir,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 7,
                    "line_text": "Avec la baigneuse blanche",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 8,
                    "line_text": "Qui se penche pour se voir.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Et la frêle escarpolette\nDans le transparent miroir,\nAvec la baigneuse blanche\nQui se penche pour se voir."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Chaque fois que la nacelle",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Passe à fleur d'eau dans son vol,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 11,
                    "line_text": "On voit sur l'eau qui s'agite",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 12,
                    "line_text": "Son beau pied et son beau col.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Chaque fois que la nacelle\nPasse à fleur d'eau dans son vol,\nOn voit sur l'eau qui s'agite\nSon beau pied et son beau col."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Elle bat d'un pied timide",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Qui ride son clair tableau,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 15,
                    "line_text": "Du beau pied rougit l'albâtre ;",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 16,
                    "line_text": "Rit de la fraîcheur de l'eau.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Elle bat d'un pied timide\nQui ride son clair tableau,\nDu beau pied rougit l'albâtre ;\nRit de la fraîcheur de l'eau."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Reste ici caché : demeure !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "D'un œil ardent tu verras",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 19,
                    "line_text": "Sortir du bain l'ingénue,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 20,
                    "line_text": "Croisant ses mains sur ses bras !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Reste ici caché : demeure !\nD'un œil ardent tu verras\nSortir du bain l'ingénue,\nCroisant ses mains sur ses bras !"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Car c'est un astre qui brille",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "Qui sort d'un bain au flot clair,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 23,
                    "line_text": "Cherche s'il ne vient personne,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 24,
                    "line_text": "Toute mouillée au grand air !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Car c'est un astre qui brille\nQui sort d'un bain au flot clair,\nCherche s'il ne vient personne,\nToute mouillée au grand air !"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Elle est là, sous la feuillée,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Au moindre bruit de malheur ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 27,
                    "line_text": "Et rouge, pour une mouche",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 28,
                    "line_text": "Comme une grenade en fleur.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Elle est là, sous la feuillée,\nAu moindre bruit de malheur ;\nEt rouge, pour une mouche\nComme une grenade en fleur."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "On voit tout ce que dérobe",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Dans ses yeux d'azur en feu,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 31,
                    "line_text": "Son regard que rien ne voile",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 32,
                    "line_text": "Qui brille au fond d'un ciel bleu.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "On voit tout ce que dérobe\nDans ses yeux d'azur en feu,\nSon regard que rien ne voile\nQui brille au fond d'un ciel bleu."
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "L'eau sur son corps qu'elle essuie",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Comme sur un peuplier ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 35,
                    "line_text": "Comme si, gouttes à gouttes,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 36,
                    "line_text": "Les perles de son collier.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "L'eau sur son corps qu'elle essuie\nComme sur un peuplier ;\nComme si, gouttes à gouttes,\nLes perles de son collier."
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Mais Sara la nonchalante",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "À finir ses doux ébats ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 39,
                    "line_text": "Toujours elle se balance",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 40,
                    "line_text": "Et va murmurant tout bas :",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Mais Sara la nonchalante\nÀ finir ses doux ébats ;\nToujours elle se balance\nEt va murmurant tout bas :"
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "\" Oh ! si j'étais capitane,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "Je prendrais des bains ambrés,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 43,
                    "line_text": "Dans un bain de marbre jaune,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 44,
                    "line_text": "Entre deux griffons dorés !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "\" Oh ! si j'étais capitane,\nJe prendrais des bains ambrés,\nDans un bain de marbre jaune,\nEntre deux griffons dorés !"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "\" J'aurais le hamac de soie",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 46,
                    "line_text": "Sous le corps prêt à pâmer ;",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 47,
                    "line_text": "J'aurais la molle ottomane",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 48,
                    "line_text": "Un parfum qui fait aimer.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "\" J'aurais le hamac de soie\nSous le corps prêt à pâmer ;\nJ'aurais la molle ottomane\nUn parfum qui fait aimer."
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "\" Je pourrais folâtrer nue,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 50,
                    "line_text": "Dans le ruisseau du jardin,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 51,
                    "line_text": "Sans craindre de voir dans l'ombre",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 52,
                    "line_text": "Deux yeux s'allumer soudain.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "\" Je pourrais folâtrer nue,\nDans le ruisseau du jardin,\nSans craindre de voir dans l'ombre\nDeux yeux s'allumer soudain."
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "\" Il faudrait risquer sa tête",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 54,
                    "line_text": "Et tout braver pour me voir,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 55,
                    "line_text": "Le sabre nu de l'heyduque,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 56,
                    "line_text": "Aux dents blanches, au front noir !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "\" Il faudrait risquer sa tête\nEt tout braver pour me voir,\nLe sabre nu de l'heyduque,\nAux dents blanches, au front noir !"
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 57,
                    "line_text": "\" Puis, je pourrais, sans qu'on presse",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 58,
                    "line_text": "Laissez avec mes habits",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 59,
                    "line_text": "Traîner sur les larges dalles",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 60,
                    "line_text": "De drap brodé de rubis. \"",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "\" Puis, je pourrais, sans qu'on presse\nLaissez avec mes habits\nTraîner sur les larges dalles\nDe drap brodé de rubis. \""
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 61,
                    "line_text": "Ainsi se parle en princesse,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 62,
                    "line_text": "Se balance avec amour,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 63,
                    "line_text": "La jeune fille rieuse,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 64,
                    "line_text": "Des promptes ailes du jour.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Ainsi se parle en princesse,\nSe balance avec amour,\nLa jeune fille rieuse,\nDes promptes ailes du jour."
        },
        {
            "stanza_number": 17,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 65,
                    "line_text": "L'eau, du pied de la baigneuse",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 66,
                    "line_text": "Rejaillit sur le gazon,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 67,
                    "line_text": "Sur sa chemise plissée,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 68,
                    "line_text": "Aux branches d'un vert buisson.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "L'eau, du pied de la baigneuse\nRejaillit sur le gazon,\nSur sa chemise plissée,\nAux branches d'un vert buisson."
        },
        {
            "stanza_number": 18,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 69,
                    "line_text": "Et cependant des campagnes",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 70,
                    "line_text": "Prennent toutes le chemin.",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 71,
                    "line_text": "Voici leur troupe frivole",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 72,
                    "line_text": "En se tenant par la main.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Et cependant des campagnes\nPrennent toutes le chemin.\nVoici leur troupe frivole\nEn se tenant par la main."
        },
        {
            "stanza_number": 19,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 73,
                    "line_text": "Chacune, en chantant comme elle,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 74,
                    "line_text": "Ce reproche à sa chanson :",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                },
                {
                    "line_number": 75,
                    "line_text": "— Oh ! la paresseuse fille",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 76,
                    "line_text": "Si tard un jour de moisson !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Chacune, en chantant comme elle,\nCe reproche à sa chanson :\n— Oh ! la paresseuse fille\nSi tard un jour de moisson !"
        }
    ],
    "corpus": "mel"
}