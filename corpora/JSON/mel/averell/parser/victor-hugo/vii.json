            "lines": [
                {
                    "line_number": 1,
                    "line_text": "O Dieu ! si vous avez la France sous vos ailes,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Ne souffrez pas, Seigneur, ces luttes éternelles ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Ces trônes qu'on élève et qu'on brise en courant ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Ces tristes libertés qu'on donne et qu'on reprend ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 5,
                    "line_text": "Ce noir torrent de lois, de passions, d'idées,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Qui répand sur les mœurs ses vagues débordées ;",
