                {
                    "line_number": 1,
                    "line_text": "Ô peuple ! sous ce crâne où rien n'a pénétré,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Sous l'auguste sourcil morose et vénéré",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Sous ce front dont un jour les révolutions",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Feront en l'entr'ouvrant sortir les visions,",
                    "metrical_pattern": null,
