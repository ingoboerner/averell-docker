        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "— Si c'est là ce qui t'intrigue,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
