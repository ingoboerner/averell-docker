                    "rhyme": "a"
                },
                {
                    "line_number": 15,
                    "line_text": "Et tu t'envoleras, force, orgueil, renommée,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 16,
                    "line_text": "Sans faire plus d'effet au vent que la fumée.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
