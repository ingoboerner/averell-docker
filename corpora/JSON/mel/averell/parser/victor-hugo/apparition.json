            "lines": [
                {
                    "line_number": 1,
                    "line_text": "À force d'aspirer à ce grand but : connaître,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "À force de sonder le fond sacré de l'être,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "A force de fixer mes regards inquiets",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Sur toi qui peux, sur toi qui vis, sur toi qui es,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 5,
                    "line_text": "A force de parler à l'inconnu sans bornes,",
