                {
                    "line_number": 1,
                    "line_text": "Ce qui rend la vieillesse auguste et vénérable,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": ""
                },
                {
                    "line_number": 2,
                    "line_text": "Ce n'est' point la lenteur des pas froids et pesants,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "La blancheur des cheveux ni le nombre des ans,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Non, c'est la bienveillance et l'absence de haine,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 5,
                    "line_text": "C'est la douceur qui fait vers la vertu sereine",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 6,
                    "line_text": "Monter de toutes parts les bénédictions,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
