{
    "poem_title": "BIÈVRE",
    "author": "Victor Hugo",
    "structure": "suite périodique",
    "year": "1831",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Oui, c'est bien le vallon ! le vallon calme et sombre !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "0"
                },
                {
