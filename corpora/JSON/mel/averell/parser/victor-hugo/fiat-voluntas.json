{
    "poem_title": "FIAT VOLUNTAS",
    "author": "Victor Hugo",
    "structure": "distiques",
    "year": "1840",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Pauvre femme ! son lait à sa tête est monté.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Et, dans ses froids salons, le monde a répété,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Parmi les vains propos que chaque jour emporte,",
