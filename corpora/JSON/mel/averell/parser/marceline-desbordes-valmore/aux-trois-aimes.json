            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Toi, sur qui Dieu jeta le droit d'aînesse,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Dis aux petits que les étés sont courts ;",
