            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "C’est un livre d’ange,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Quand on est aimé ;",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "b"
                },
                {
                    "line_number": 31,
                    "line_text": "Si l’un des deux change,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 32,
                    "line_text": "Le livre est fermé !",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "C’est un livre d’ange,\nQuand on est aimé ;\nSi l’un des deux change,\nLe livre est fermé !"
