            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Viens : sois reconnaissant. Je tiendrai ta fontaine",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 20,
                    "line_text": "De verre toujours fraîche et, sois sûr, toujours pleine.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
