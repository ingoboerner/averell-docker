                    "line_text": "Te parle, ô prodige !",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "À peine je vois",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "b"
                },
                {
                    "line_number": 21,
                    "line_text": "Rayonner ta robe",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "c"
                },
                {
                    "line_number": 22,
                    "line_text": "En reflets confus,",
                    "metrical_pattern": null,
                    "line_length": "5",
                    "rhyme": "d"
