            "stanza_type": null,
            "lines": [
                {
                    "line_number": 43,
                    "line_text": "Je me confesse à Dieu qui descend dans mes pleurs !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 44,
                    "line_text": "Dieu, qui peut d'un regard changer la ronce en fleurs !",
