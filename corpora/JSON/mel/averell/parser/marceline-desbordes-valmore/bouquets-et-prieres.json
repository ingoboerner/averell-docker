                {
                    "line_number": 1,
                    "line_text": "Jeune homme irrité sur un banc d'école,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Dont le cœur encor n'a chaud qu'au soleil,",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Vous refusez donc l'encre et la parole",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "À celles qui font le foyer vermeil ?",
                    "metrical_pattern": null,
                    "line_length": "5+5",
                    "rhyme": "b"
                },
                {
                    "line_number": 5,
