            "lines": [
                {
                    "line_number": 35,
                    "line_text": "Vois ! si le ciel parlait aussi bien qu’il regarde,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 36,
                    "line_text": "Quand ses yeux étoilés brillent au sein des nuits,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 37,
                    "line_text": "Que raconterait-il de tout ce que hasarde",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "Une errante jeunesse en ses tendres ennuis ?",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Vois ! si le ciel parlait aussi bien qu’il regarde,\nQuand ses yeux étoilés brillent au sein des nuits,\nQue raconterait-il de tout ce que hasarde\nUne errante jeunesse en ses tendres ennuis ?"
        },
