            "stanza_type": null,
            "lines": [
                {
                    "line_number": 55,
                    "line_text": "Un enfant ! un enfant ! ô seule âme de l'âme !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
