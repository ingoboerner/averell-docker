                {
                    "line_number": 1,
                    "line_text": "Enfant d'un nid loin du soleil éclos,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Tombée un jour du faîte des collines,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Ouvrant à Dieu mes ailes orphelines,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Poussée aux vents sur la terre ou les flots,",
