            "stanza_type": null,
            "lines": [
                {
                    "line_number": 28,
                    "line_text": "L'amitié que l'on regrette",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 29,
                    "line_text": "N'a point quitté nos climats ;",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 30,
                    "line_text": "Elle trinque à la guinguette,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 31,
                    "line_text": "Assise entre deux soldats.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "L'amitié que l'on regrette\nN'a point quitté nos climats ;\nElle trinque à la guinguette,\nAssise entre deux soldats."
