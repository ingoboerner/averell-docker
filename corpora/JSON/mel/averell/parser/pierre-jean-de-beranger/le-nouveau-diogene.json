            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "Dans l'eau, dit-on, tu puisas ta rudesse ;",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Je n'en bois pas, et, censeur plus joyeux,",
