                {
                    "line_number": 1,
                    "line_text": "Le charme de tes yeux sans couleur ni lumière",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Me prend étrangement : il se fait triste et tard,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Et, perdu sous le pli de ta pâle paupière,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Dans l’ombre de tes cils sommeille ton regard.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
