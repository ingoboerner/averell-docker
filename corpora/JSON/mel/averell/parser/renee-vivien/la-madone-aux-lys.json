{
    "poem_title": "LA MADONE AUX LYS",
    "author": "Renée Vivien",
    "structure": "suite périodique",
    "year": "1904",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "J’ai bu, tel un poison, vos souffles éplorés,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Vos sanglots de parfums, lys fauves, lys tigrés !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "J’ai bu, tel un poison, vos souffles éplorés,\nVos sanglots de parfums, lys fauves, lys tigrés !"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "Dédiez au matin votre rose sourire,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Lys du Japon, éclos aux pays de porphyre.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Dédiez au matin votre rose sourire,\nLys du Japon, éclos aux pays de porphyre."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Ténèbres, répandez vos torpeurs d’opiums,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Vos sommeils de tombeaux sur les chastes arums.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ténèbres, répandez vos torpeurs d’opiums,\nVos sommeils de tombeaux sur les chastes arums."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Lys purs qui fleurissez les mystiques images,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Sanctifiez les pelouses et les feuillages.",
                    "metrical_pattern": null,
                    "line_length": "4+8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Lys purs qui fleurissez les mystiques images,\nSanctifiez les pelouses et les feuillages."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Lys de Jérusalem, lys noirs où la nuit dort,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Exhalez froidement vos souvenirs de mort.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Lys de Jérusalem, lys noirs où la nuit dort,\nExhalez froidement vos souvenirs de mort."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Vastes lys des autels où l’orgue tonne et prie,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Brûlez dans la clarté des cierges de Marie.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Vastes lys des autels où l’orgue tonne et prie,\nBrûlez dans la clarté des cierges de Marie."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Sollicitez l’avril, ses pipeaux et ses voix,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Ô muguets, lys de la vallée et des grands bois.",
                    "metrical_pattern": null,
                    "line_length": "6−6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Sollicitez l’avril, ses pipeaux et ses voix,\nÔ muguets, lys de la vallée et des grands bois."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "Ô lys d’eau, nymphéas des amantes maudites,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 16,
                    "line_text": "Anémones, lys roux des champs israélites,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ô lys d’eau, nymphéas des amantes maudites,\nAnémones, lys roux des champs israélites,"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Soyez la floraison des douleurs de jadis",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Pour la vierge aux yeux faux que j’appelai mon Lys.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Soyez la floraison des douleurs de jadis\nPour la vierge aux yeux faux que j’appelai mon Lys."
        }
    ],
    "corpus": "mel"
