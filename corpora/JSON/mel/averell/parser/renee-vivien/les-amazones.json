            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "« Parmi les rayons morts et les cendres éteintes,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": ""
                },
                {
