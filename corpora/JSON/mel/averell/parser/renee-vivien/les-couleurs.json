    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Éloignez de mes yeux les flamboiements barbares",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Du Rouge, cri de sang que jettent les fanfares.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Éloignez de mes yeux les flamboiements barbares\nDu Rouge, cri de sang que jettent les fanfares."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "Éteignez la splendeur du Jaune, cri de l’or,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Où le soleil persiste et ressurgit encor.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Éteignez la splendeur du Jaune, cri de l’or,\nOù le soleil persiste et ressurgit encor."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Écartez le sourire invincible du Rose,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Qui jaillit de la fleur ingénument déclose,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Écartez le sourire invincible du Rose,\nQui jaillit de la fleur ingénument déclose,"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Et le regard serein et limpide du Bleu, —",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Car mon âme est, ce soir, triste comme un adieu.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et le regard serein et limpide du Bleu, —\nCar mon âme est, ce soir, triste comme un adieu."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Elle adore le charme atténué du Mauve,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Pareil aux songes purs qui parfument l’alcôve.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Elle adore le charme atténué du Mauve,\nPareil aux songes purs qui parfument l’alcôve."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Et la mysticité du profond Violet,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Plus grave qu’un chant d’orgue et plus doux qu’un reflet.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et la mysticité du profond Violet,\nPlus grave qu’un chant d’orgue et plus doux qu’un reflet."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Versez-lui l’eau du Vert, qui calme le supplice",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Des paupières, fraîcheur des yeux de Béatrice.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Versez-lui l’eau du Vert, qui calme le supplice\nDes paupières, fraîcheur des yeux de Béatrice."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "Entourez-la du rêve et de la paix du Gris,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 16,
                    "line_text": "Crépuscule de l’âme et des chauves-souris.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Entourez-la du rêve et de la paix du Gris,\nCrépuscule de l’âme et des chauves-souris."
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Le Brun des bois anciens, favorable à l’étude,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Sait encadrer mon silence et ma solitude.",
                    "metrical_pattern": null,
                    "line_length": "4+4+4",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Le Brun des bois anciens, favorable à l’étude,\nSait encadrer mon silence et ma solitude."
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Venez ensevelir mon ancien désespoir",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Sous la neige du Blanc et dans la nuit du Noir.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Venez ensevelir mon ancien désespoir\nSous la neige du Blanc et dans la nuit du Noir."
        }
    ],
