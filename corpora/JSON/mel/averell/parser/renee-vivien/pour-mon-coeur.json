    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Mystérieux, amer et terrible, ô mon cœur,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Éloigne enfin de toi la haine et la rancœur !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Mystérieux, amer et terrible, ô mon cœur,\nÉloigne enfin de toi la haine et la rancœur !"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "Sache combien est grand ce bienfait qu’on te donne",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "De pouvoir pardonner, ô mon cœur ! et pardonne !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Sache combien est grand ce bienfait qu’on te donne\nDe pouvoir pardonner, ô mon cœur ! et pardonne !"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Ne garde plus l’amer souvenir des joies dues !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Et qu’il soit comme un mot effacé sur les nues !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ne garde plus l’amer souvenir des joies dues !\nEt qu’il soit comme un mot effacé sur les nues !"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Sois léger et sois doux comme l’ombre d’une aile,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Ô mauvais cœur, tenace et méchant et fidèle !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Sois léger et sois doux comme l’ombre d’une aile,\nÔ mauvais cœur, tenace et méchant et fidèle !"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Ô mon cœur ! exhalant, dans un vaste soupir,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Le pardon retenu, sache enfin t’attendrir !…",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ô mon cœur ! exhalant, dans un vaste soupir,\nLe pardon retenu, sache enfin t’attendrir !…"
        }
    ],
    "corpus": "mel"
