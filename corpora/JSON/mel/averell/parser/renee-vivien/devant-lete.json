            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Moi, je me baignerai dans cette ombre illusoire",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
