                {
                    "line_number": 1,
                    "line_text": "Le soir, ouvrant au vent ses ailes de phalène,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Évoque un souvenir fragilement rosé,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Le souvenir, touchant comme un Saxe brisé,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "De ta naïveté fraîche de porcelaine.",
                    "metrical_pattern": null,
