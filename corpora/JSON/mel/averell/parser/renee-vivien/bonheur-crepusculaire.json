            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "C’est de voir s’embraser l’automne",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Dans l’âtre aux multiples reflets",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 35,
                    "line_text": "Où croulent des tours, des palais,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
