            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "C’est de taire les vains aveux",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Et d’oublier les autres femmes,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 31,
                    "line_text": "En regardant luire les flammes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
