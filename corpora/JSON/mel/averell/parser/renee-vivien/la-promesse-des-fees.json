    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Le vent du soir portait des chansons par bouffées,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Et, par lui, je reçus la promesse des Fées…",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Le vent du soir portait des chansons par bouffées,\nEt, par lui, je reçus la promesse des Fées…"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "Avec des mots très doux, les elfes m’ont promis",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "D’être immanquablement mes fidèles amis.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Avec des mots très doux, les elfes m’ont promis\nD’être immanquablement mes fidèles amis."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Mais n’attachez jamais votre âme à leurs paroles,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Un Elfe est tôt enfui, souffle vif d’ailes folles !…",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Mais n’attachez jamais votre âme à leurs paroles,\nUn Elfe est tôt enfui, souffle vif d’ailes folles !…"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Leur vol tourbillonnait, vague comme un parfum.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Cependant tous semblaient obéir à quelqu’un.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Leur vol tourbillonnait, vague comme un parfum.\nCependant tous semblaient obéir à quelqu’un."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "La première portait sur son front découvert",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Une couronne d’or… Son manteau semblait vert.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "La première portait sur son front découvert\nUne couronne d’or… Son manteau semblait vert."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Et la couronne d’or, brûlant comme la flamme,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Rayonnait au-dessus d’un visage de femme.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et la couronne d’or, brûlant comme la flamme,\nRayonnait au-dessus d’un visage de femme."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Malgré l’étonnement d’un cœur audacieux,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Je ne pus endurer la splendeur de ses yeux…",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Malgré l’étonnement d’un cœur audacieux,\nJe ne pus endurer la splendeur de ses yeux…"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "Car j’entendais un bruit d’étreintes étouffées…",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 16,
                    "line_text": "Aussi j’ai voulu fuir l’amour fatal des Fées…",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Car j’entendais un bruit d’étreintes étouffées…\nAussi j’ai voulu fuir l’amour fatal des Fées…"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Mais, devant ce bonheur mêlé d’un si grand mal,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Ne regrettais-je pas un peu l’amour fatal !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Mais, devant ce bonheur mêlé d’un si grand mal,\nNe regrettais-je pas un peu l’amour fatal !"
        }
    ],
