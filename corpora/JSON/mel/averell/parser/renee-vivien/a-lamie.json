                },
                {
                    "line_number": 17,
                    "line_text": "Le rêve ailleurs, longtemps, de tes vagues yeux tendres,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 18,
                    "line_text": "Tu suivras ton passé de souffrance et d’effroi.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
