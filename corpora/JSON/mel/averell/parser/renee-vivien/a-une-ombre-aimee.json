            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Mais un souffle très froid entre-baîlle la porte",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Et dans mon corps glacé je sens mon cœur transi.",
