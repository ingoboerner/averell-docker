                {
                    "line_number": 1,
                    "line_text": "Ta royale jeunesse a la mélancolie",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Du Nord où le brouillard efface les couleurs,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Tu mêles la discorde et le désir aux pleurs,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Grave comme Hamlet, pâle comme Ophélie.",
                    "metrical_pattern": null,
