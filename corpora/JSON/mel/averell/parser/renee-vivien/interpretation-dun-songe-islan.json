{
    "poem_title": "INTERPRÉTATION D’UN SONGE ISLANDAIS",
    "author": "Renée Vivien",
    "structure": "suite périodique",
    "year": "1910",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Dans cette nuit qui fut autrefois la mémoire,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Un songe m’est venu du fond de la nuit noire.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Dans cette nuit qui fut autrefois la mémoire,\nUn songe m’est venu du fond de la nuit noire."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "Et j’interprète ainsi le songe de mes yeux :",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Que le grand mal soit pis ! car ce sera le mieux !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et j’interprète ainsi le songe de mes yeux :\nQue le grand mal soit pis ! car ce sera le mieux !"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Plus le mal sera grand et plus grande la joie",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Qui s’illumine alors et rayonne et flamboie !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Plus le mal sera grand et plus grande la joie\nQui s’illumine alors et rayonne et flamboie !"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Plus s’exaspérera mon horreur de la nuit",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Et du front qui se ride et de l’heure qui fuit.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Plus s’exaspérera mon horreur de la nuit\nEt du front qui se ride et de l’heure qui fuit."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Plus je découvrirai l’amour des choses saintes,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Des chapelles où les lumières sont éteintes,",
                    "metrical_pattern": null,
                    "line_length": "6−6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Plus je découvrirai l’amour des choses saintes,\nDes chapelles où les lumières sont éteintes,"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Plus s’exaspérera cet amour du divin",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Qu’on boit avec la sainte ivresse au fond du vin.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Plus s’exaspérera cet amour du divin\nQu’on boit avec la sainte ivresse au fond du vin."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Ainsi se répandra, comme un rayon se glisse,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "En mon cœur très obscur, la gloire du calice !",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ainsi se répandra, comme un rayon se glisse,\nEn mon cœur très obscur, la gloire du calice !"
        }
    ],
    "corpus": "mel"
}