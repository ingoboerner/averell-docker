    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Viens, les heures d’amour sont furtives et rares…",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Le jardin matinal est plein d’oiseaux bizarres.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Viens, les heures d’amour sont furtives et rares…\nLe jardin matinal est plein d’oiseaux bizarres."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "Chère, je te convie à ce royal festin.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Je ne veux pas jouir seule de ce matin.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Chère, je te convie à ce royal festin.\nJe ne veux pas jouir seule de ce matin."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "L’aube heurte le ciel comme une porte close.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Viens boire la rosée au cœur blond de la rose.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "L’aube heurte le ciel comme une porte close.\nViens boire la rosée au cœur blond de la rose."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Bois la rosée ainsi qu’une fraîche liqueur.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Mon cœur est une rose et je t’offre mon cœur…",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Bois la rosée ainsi qu’une fraîche liqueur.\nMon cœur est une rose et je t’offre mon cœur…"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "L’aube a des tons de nacre et des reflets de perle.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "La joie est simple et rien n’est aussi beau qu’un merle.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "L’aube a des tons de nacre et des reflets de perle.\nLa joie est simple et rien n’est aussi beau qu’un merle."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Savourons cette ardeur un peu triste et pleurons",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "De sentir la clarté première sur nos fronts.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Savourons cette ardeur un peu triste et pleurons\nDe sentir la clarté première sur nos fronts."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Viens, ma très chère… À l’est le ciel fardé chatoie,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "L’herbe est douce aux pieds nus comme un tapis de soie…",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Viens, ma très chère… À l’est le ciel fardé chatoie,\nL’herbe est douce aux pieds nus comme un tapis de soie…"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "Sans nous préoccuper de l’hostile destin.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 16,
                    "line_text": "Rendons grâces au ciel clément pour ce matin.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Sans nous préoccuper de l’hostile destin.\nRendons grâces au ciel clément pour ce matin."
        }
    ],
