{
    "poem_title": "CINQUIÈME JOUR",
    "author": "Charles Peguy",
    "structure": "sonnet",
    "year": "1913",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Comme la vieille aïeule au fin fond de son âge",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Se plaît à regarder sa plus arrière fille,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Naissante à l’autre bout de la longue famille,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "Recommencer la vie ainsi qu’un héritage;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Comme la vieille aïeule au fin fond de son âge\nSe plaît à regarder sa plus arrière fille,\nNaissante à l’autre bout de la longue famille,\nRecommencer la vie ainsi qu’un héritage;"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Elle en fait par avance un très grand personnage,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Fileuse, moissonneuse à la pleine faucille,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 7,
                    "line_text": "Le plus preste fuseau, la plus savante aiguille",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 8,
                    "line_text": "Qu’on aura jamais vu dans ce simple village",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Elle en fait par avance un très grand personnage,\nFileuse, moissonneuse à la pleine faucille,\nLe plus preste fuseau, la plus savante aiguille\nQu’on aura jamais vu dans ce simple village"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Telle la vieille sainte éternellement sage,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "c"
                },
                {
                    "line_number": 10,
                    "line_text": "Du bord de la montagne et de la double berge",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "d"
                },
                {
                    "line_number": 11,
                    "line_text": "Regardait s’avancer dans tout son équipage,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Telle la vieille sainte éternellement sage,\nDu bord de la montagne et de la double berge\nRegardait s’avancer dans tout son équipage,"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Dans un encadrement de cierge et de flamberge,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "d"
                },
                {
                    "line_number": 13,
                    "line_text": "Et le casque remis aux mains du petit page,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "c"
                },
                {
                    "line_number": 14,
                    "line_text": "La fille la plus sainte après la sainte Vierge.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "d"
                }
            ],
            "stanza_text": "Dans un encadrement de cierge et de flamberge,\nEt le casque remis aux mains du petit page,\nLa fille la plus sainte après la sainte Vierge."
        }
    ],
    "corpus": "mel"
}