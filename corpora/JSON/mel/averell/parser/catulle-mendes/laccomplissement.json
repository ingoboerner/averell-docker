            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Disait l’un. Et voici ce que savait cet homme :",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Disait l’un. Et voici ce que savait cet homme :"
