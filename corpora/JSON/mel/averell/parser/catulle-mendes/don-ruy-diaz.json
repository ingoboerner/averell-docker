                },
                {
                    "line_number": 31,
                    "line_text": "Il l'alla voir. « Salut, Pape. Je te conseille",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 32,
