            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Telle en sa course, hélas ! qui n'eut point de retour,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
