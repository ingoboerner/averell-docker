                },
                {
                    "line_number": 12,
                    "line_text": "Tout plein d'un songe horrible, et fuyant le sommeil,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 13,
