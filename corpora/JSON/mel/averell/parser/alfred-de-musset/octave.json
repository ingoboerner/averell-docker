            "stanza_type": null,
            "lines": [
                {
                    "line_number": 43,
                    "line_text": "Était-ce un connaisseur en matière de femme,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 44,
