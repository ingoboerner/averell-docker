            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Mais reviens à la vesprée,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Bercer encor ton ami",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Mais reviens à la vesprée,\nBercer encor ton ami"
