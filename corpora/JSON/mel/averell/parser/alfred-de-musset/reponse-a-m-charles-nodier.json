{
    "poem_title": "RÉPONSE A M. CHARLES NODIER",
    "author": "Alfred de Musset",
    "structure": "suite périodique",
    "year": "1836-1852",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Connais-tu deux pestes femelles",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Qu'un beau jour lira de l'enfer",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Connais-tu deux pestes femelles\nQu'un beau jour lira de l'enfer"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "L'une, au teint blême, au cœur de lièvre,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "L'autre est l'Insomnie aux grands yeux",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "L'une, au teint blême, au cœur de lièvre,\nL'autre est l'Insomnie aux grands yeux"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Non pas cette fièvre amoureuse,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Qui sait chiffonner l'oreiller",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Non pas cette fièvre amoureuse,\nQui sait chiffonner l'oreiller"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Non pas celte belle insomnie",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Où Trilby vient, prêt à chanter,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Non pas celte belle insomnie\nOù Trilby vient, prêt à chanter,"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "C'est la fièvre qui s'emmaillotte",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Sous un drap sale et trois coussins",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "C'est la fièvre qui s'emmaillotte\nSous un drap sale et trois coussins"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "L'autre, comme une huître qui bâille",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Rêve ou rumine, ou fait des vers",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "L'autre, comme une huître qui bâille\nRêve ou rumine, ou fait des vers"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Voilà, depuis une semaine",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "L'aimable et gai duo que j'ai",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Voilà, depuis une semaine\nL'aimable et gai duo que j'ai"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "Que ce soit donc, si l'on m'accuse,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 16,
                    "line_text": "Pour n'avoir rien ni répondu",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Que ce soit donc, si l'on m'accuse,\nPour n'avoir rien ni répondu"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Ne me fais pas, je t'en conjure,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "De supposer que j'ai faibli",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ne me fais pas, je t'en conjure,\nDe supposer que j'ai faibli"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "L'oubli, l'ennui, font, ce me semble,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Traînant, deux à deux, leurs pas lents,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "L'oubli, l'ennui, font, ce me semble,\nTraînant, deux à deux, leurs pas lents,"
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Tout se ressent du mal qu'ils causent.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "Approcher de toi seulement",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Tout se ressent du mal qu'ils causent.\nApprocher de toi seulement"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 23,
                    "line_text": "Que ta voix, si jeune et si vieille,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 24,
                    "line_text": "Vient me délivrer à propos",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Que ta voix, si jeune et si vieille,\nVient me délivrer à propos"
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Ta Muse, ami, toute française,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Me rend la sœur de la santé,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ta Muse, ami, toute française,\nMe rend la sœur de la santé,"
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 27,
                    "line_text": "Elle rappelle à ma pensée",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 28,
                    "line_text": "Les beaux jours et les courts instants",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Elle rappelle à ma pensée\nLes beaux jours et les courts instants"
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Lorsque, rassemblés sous ton aile",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 30,
                    "line_text": "Échappés de nos pensions.",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Lorsque, rassemblés sous ton aile\nÉchappés de nos pensions."
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "Gais comme l'oiseau sur la branche,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 32,
                    "line_text": "Nous rendions parfois matinal",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Gais comme l'oiseau sur la branche,\nNous rendions parfois matinal"
        },
        {
            "stanza_number": 17,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "La tête coquette et fleurie !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Brillait comme un bluet mêlé",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "La tête coquette et fleurie !\nBrillait comme un bluet mêlé"
        },
        {
            "stanza_number": 18,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 35,
                    "line_text": "Tachés déjà par l'écritoire,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 36,
                    "line_text": "Ses doigts légers allaient sautant",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Tachés déjà par l'écritoire,\nSes doigts légers allaient sautant"
        },
        {
            "stanza_number": 19,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Quelqu'un récitait quelque chose,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "Puis nous courions recommencer",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Quelqu'un récitait quelque chose,\nPuis nous courions recommencer"
        },
        {
            "stanza_number": 20,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 39,
                    "line_text": "Chacun de nous, futur grand homme,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 40,
                    "line_text": "Apprenait plus vite à l'aimer",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Chacun de nous, futur grand homme,\nApprenait plus vite à l'aimer"
        },
        {
            "stanza_number": 21,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Alors, dans la grande boutique",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 42,
                    "line_text": "Chacun avait, maître ou garçon,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Alors, dans la grande boutique\nChacun avait, maître ou garçon,"
        },
        {
            "stanza_number": 22,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 43,
                    "line_text": "Nous allions, brisant les pupitres",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 44,
                    "line_text": "Et nous avions plume et grattoir",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Nous allions, brisant les pupitres\nEt nous avions plume et grattoir"
        },
        {
            "stanza_number": 23,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Hugo portait déjà dans l'âme",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 46,
                    "line_text": "El commençait à s'occuper",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Hugo portait déjà dans l'âme\nEl commençait à s'occuper"
        },
        {
            "stanza_number": 24,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 47,
                    "line_text": "De Vigny chantait sur sa lyre",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 48,
                    "line_text": "Qui mourut sans mettre à l'envers",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "De Vigny chantait sur sa lyre\nQui mourut sans mettre à l'envers"
        },
        {
            "stanza_number": 25,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Antony battait avec Dante",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 50,
                    "line_text": "Émile ébauchait vile et tôt",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Antony battait avec Dante\nÉmile ébauchait vile et tôt"
        },
        {
            "stanza_number": 26,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 51,
                    "line_text": "Sainte-Beuve faisait dans l'ombre",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 52,
                    "line_text": "Pour un œil noir, un blanc bonnet,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Sainte-Beuve faisait dans l'ombre\nPour un œil noir, un blanc bonnet,"
        },
        {
            "stanza_number": 27,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "El moi, de cet honneur insigne",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 54,
                    "line_text": "Enfant par hasard adopté",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "El moi, de cet honneur insigne\nEnfant par hasard adopté"
        },
        {
            "stanza_number": 28,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 55,
                    "line_text": "Je brochais des ballades, l'une",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 56,
                    "line_text": "L'autre à deux yeux noirs et jaloux,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Je brochais des ballades, l'une\nL'autre à deux yeux noirs et jaloux,"
        },
        {
            "stanza_number": 29,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 57,
                    "line_text": "Cher temps, plein de mélancolie,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 58,
                    "line_text": "Dont il faut rendre à l'amitié",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Cher temps, plein de mélancolie,\nDont il faut rendre à l'amitié"
        },
        {
            "stanza_number": 30,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 59,
                    "line_text": "Pourquoi, sur ces flots où s'élance",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 60,
                    "line_text": "Ne voit-on que le Souvenir",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Pourquoi, sur ces flots où s'élance\nNe voit-on que le Souvenir"
        },
        {
            "stanza_number": 31,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 61,
                    "line_text": "Ami, loi qu'a piqué l'abeille,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 62,
                    "line_text": "Et lu n'en saurais ni guérir",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ami, loi qu'a piqué l'abeille,\nEt lu n'en saurais ni guérir"
        },
        {
            "stanza_number": 32,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 63,
                    "line_text": "Mais comment fais-tu donc, vieux maître,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 64,
                    "line_text": "Car tes vers, en dépit du temps,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Mais comment fais-tu donc, vieux maître,\nCar tes vers, en dépit du temps,"
        },
        {
            "stanza_number": 33,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 65,
                    "line_text": "Si jamais ta fête qui penche",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 66,
                    "line_text": "Ce sera comme l'amandier,",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Si jamais ta fête qui penche\nCe sera comme l'amandier,"
        },
        {
            "stanza_number": 34,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 67,
                    "line_text": "Ce qui le blanchit n'est pas l'âge,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 68,
                    "line_text": "C'est la fraîche rosée en pleurs",
                    "metrical_pattern": null,
                    "line_length": "3",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Ce qui le blanchit n'est pas l'âge,\nC'est la fraîche rosée en pleurs"
        }
    ],
    "corpus": "mel"
}