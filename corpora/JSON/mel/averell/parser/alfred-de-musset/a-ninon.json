            "stanza_type": null,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "J'aime, et je sais répondre avec indifférence ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": ""
