            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "S'asseoir tous deux au bord d'un flot qui passe,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Tous deux, s'il glisse un nuage en l'espace,",
                    "metrical_pattern": null,
                    "line_length": "4",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "S'asseoir tous deux au bord d'un flot qui passe,\nTous deux, s'il glisse un nuage en l'espace,"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "À l'horizon, s'il fume un toit de chaume,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Aux alentours si quelque fleur embaume,",
                    "metrical_pattern": null,
                    "line_length": "4",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "À l'horizon, s'il fume un toit de chaume,\nAux alentours si quelque fleur embaume,"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Si quelque fruit, où les abeilles goûtent,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Si quelque oiseau, dans les bois qui l'écoutent,",
                    "metrical_pattern": null,
                    "line_length": "4",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Si quelque fruit, où les abeilles goûtent,\nSi quelque oiseau, dans les bois qui l'écoutent,"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Entendre au pied du saule où l'eau murmure",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Ne pas sentir, tant que ce rêve dure,",
                    "metrical_pattern": null,
                    "line_length": "4",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Entendre au pied du saule où l'eau murmure\nNe pas sentir, tant que ce rêve dure,"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Mais n'apportant de passion profonde",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Sans nul souci des querelles du monde,",
                    "metrical_pattern": null,
                    "line_length": "4",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Mais n'apportant de passion profonde\nSans nul souci des querelles du monde,"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Et seuls, heureux devant tout ce qui lasse,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Sentir l'amour, devant tout ce qui passe,",
                    "metrical_pattern": null,
                    "line_length": "4",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et seuls, heureux devant tout ce qui lasse,\nSentir l'amour, devant tout ce qui passe,"
        }
    ],
    "corpus": "mel"
}