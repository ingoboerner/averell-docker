            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Va, je t’aime… mieux que l’autre : il faut l’oublier,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Toi, souris-moi du moins entre deux confidences,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
