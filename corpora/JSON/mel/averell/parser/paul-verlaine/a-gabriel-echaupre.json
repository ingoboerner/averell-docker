                },
                {
                    "line_number": 13,
                    "line_text": "Aux Lettres, comprimant son civique dégoût ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "e"
                },
                {
                    "line_number": 14,
                    "line_text": "Et vous mourrez très bien, comme votre grand-père.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "d"
