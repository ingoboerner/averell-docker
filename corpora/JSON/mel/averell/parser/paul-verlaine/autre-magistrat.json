            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Car il est grand, malgré son nom. Vastes contrastes :",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
