            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 4,
                    "line_text": "Mais que pour moi l’avenir serait noir",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 5,
                    "line_text": "Si, pendant que je rêve à la bonne bombance",
