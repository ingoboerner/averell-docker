{
    "poem_title": "AU COMPAGNON LARTIGUES",
    "author": "Paul Verlaine",
    "structure": "sonnet",
    "year": "1890",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "VOUS qui ne connaissez de brigue",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Que la seule briguedondaine",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Et n’ourdissez jamais d’intrigue",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Qu’en l’espoir de quelque fredaine,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "VOUS qui ne connaissez de brigue\nQue la seule briguedondaine\nEt n’ourdissez jamais d’intrigue\nQu’en l’espoir de quelque fredaine,"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Un penser d’amour et de haine",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 6,
                    "line_text": "Pourtant vous hante et vous fatigue",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 7,
                    "line_text": "Et vous fait plate la bedaine :",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 8,
                    "line_text": "L’amour du Pauvre, bon Lartigue !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Un penser d’amour et de haine\nPourtant vous hante et vous fatigue\nEt vous fait plate la bedaine :\nL’amour du Pauvre, bon Lartigue !"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "L’amour du Pauvre mieux peut-être",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 10,
                    "line_text": "Que celui’du moderne prêtre",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 11,
                    "line_text": "Et de l’actuel philanthrope.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "d"
                }
            ],
            "stanza_text": "L’amour du Pauvre mieux peut-être\nQue celui’du moderne prêtre\nEt de l’actuel philanthrope."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Si cela c’est être anarchiste",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "e"
                },
                {
                    "line_number": 13,
                    "line_text": "Inscrivez-moi sur votre liste.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "e"
                },
                {
                    "line_number": 14,
                    "line_text": "– Et que saute la vieille Europe !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "d"
                }
            ],
            "stanza_text": "Si cela c’est être anarchiste\nInscrivez-moi sur votre liste.\n– Et que saute la vieille Europe !"
        }
    ],
    "corpus": "mel"
}