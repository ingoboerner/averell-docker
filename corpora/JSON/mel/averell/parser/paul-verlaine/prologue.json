        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 10,
                    "line_text": "Poussant un sombre hou-hou !",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 11,
                    "line_text": "Soudain le voilà roucou-",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 12,
                    "line_text": "Lant ramier gonflant son cou.",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Poussant un sombre hou-hou !\nSoudain le voilà roucou-\nLant ramier gonflant son cou."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Puis que de métamorphoses !",
