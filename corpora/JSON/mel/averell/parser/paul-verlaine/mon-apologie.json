            "lines": [
                {
                    "line_number": 1,
                    "line_text": "JE suis un homme étrange, à ce que l’on me dit ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Aux yeux de quelques-uns pur et simple bandit,",
