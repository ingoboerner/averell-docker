            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Je n’avais pas connu l’Ennui,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "0"
                },
                {
                    "line_number": 2,
                    "line_text": "Pourtant jusqu’au jour d’aujourd’hui",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "0"
                },
                {
                    "line_number": 3,
                    "line_text": "Je vivais et mourais de lui.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "0"
                }
            ],
            "stanza_text": "Je n’avais pas connu l’Ennui,\nPourtant jusqu’au jour d’aujourd’hui\nJe vivais et mourais de lui."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 4,
                    "line_text": "Ce depuis l’atroce journée",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "1"
                },
                {
                    "line_number": 5,
                    "line_text": "Où, pauvre âme au ciel ramenée,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "1"
                },
                {
                    "line_number": 6,
                    "line_text": "J’ai méconnu ma destinée.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "1"
                }
            ],
            "stanza_text": "Ce depuis l’atroce journée\nOù, pauvre âme au ciel ramenée,\nJ’ai méconnu ma destinée."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Ramenée au ciel, et comment ?",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "2"
                },
                {
                    "line_number": 8,
                    "line_text": "Par le fait logique et charmant",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "2"
                },
                {
                    "line_number": 9,
                    "line_text": "D’un grand miracle assurément,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "2"
                }
            ],
            "stanza_text": "Ramenée au ciel, et comment ?\nPar le fait logique et charmant\nD’un grand miracle assurément,"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 10,
                    "line_text": "Par la conversion soudaine",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "3"
                },
                {
                    "line_number": 11,
                    "line_text": "D’un cœur voué tout à la haine",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "3"
                },
                {
                    "line_number": 12,
                    "line_text": "En un d’une onction sereine.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "3"
                }
            ],
            "stanza_text": "Par la conversion soudaine\nD’un cœur voué tout à la haine\nEn un d’une onction sereine."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Puis m’investit un désir fou",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "4"
                },
                {
                    "line_number": 14,
                    "line_text": "À la fois furieux et mou",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "4"
                },
                {
                    "line_number": 15,
                    "line_text": "Qui m’allait entraînant jusqu’où ?",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "4"
                }
            ],
            "stanza_text": "Puis m’investit un désir fou\nÀ la fois furieux et mou\nQui m’allait entraînant jusqu’où ?"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 16,
                    "line_text": "Adieu, l’émoi pur et candide",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "5"
                },
                {
                    "line_number": 17,
                    "line_text": "Vers l’idéal sûr et splendide,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "5"
                },
                {
                    "line_number": 18,
                    "line_text": "Pour quel souci bas et sordide ?",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "5"
                }
            ],
            "stanza_text": "Adieu, l’émoi pur et candide\nVers l’idéal sûr et splendide,\nPour quel souci bas et sordide ?"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Adieu les belles oraisons,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "6"
                },
                {
                    "line_number": 20,
                    "line_text": "La rosée autour des toisons,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "6"
                },
                {
                    "line_number": 21,
                    "line_text": "La prière aux ardents buissons !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "6"
                }
            ],
            "stanza_text": "Adieu les belles oraisons,\nLa rosée autour des toisons,\nLa prière aux ardents buissons !"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 22,
                    "line_text": "Des querelles sans fin ni trêve,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "7"
                },
                {
                    "line_number": 23,
                    "line_text": "Toujours quelque violent rêve,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "7"
                },
                {
                    "line_number": 24,
                    "line_text": "Une vie à se dire : Crève !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "7"
                }
            ],
            "stanza_text": "Des querelles sans fin ni trêve,\nToujours quelque violent rêve,\nUne vie à se dire : Crève !"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Par degrés cet enfer pourtant",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "2"
                },
                {
                    "line_number": 26,
                    "line_text": "S’alanguissait, non pénitent,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "2"
                },
                {
                    "line_number": 27,
                    "line_text": "Hélas ! en limbes fades tant !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "2"
                }
            ],
            "stanza_text": "Par degrés cet enfer pourtant\nS’alanguissait, non pénitent,\nHélas ! en limbes fades tant !"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 28,
                    "line_text": "Rien désormais qui ne soit vague,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "8"
                },
                {
                    "line_number": 29,
                    "line_text": "Ne déraisonne et ne divague…",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "8"
                },
                {
                    "line_number": 30,
                    "line_text": "Évêque ayant perdu sa bague,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "8"
                }
            ],
            "stanza_text": "Rien désormais qui ne soit vague,\nNe déraisonne et ne divague…\nÉvêque ayant perdu sa bague,"
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "Magicien sans talismans,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "9"
                },
                {
                    "line_number": 32,
                    "line_text": "Pôle privé de ses aimants,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "10"
                },
                {
                    "line_number": 33,
                    "line_text": "Tel, moi, monde aux morts éléments !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "10"
                }
            ],
            "stanza_text": "Magicien sans talismans,\nPôle privé de ses aimants,\nTel, moi, monde aux morts éléments !"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 34,
                    "line_text": "Ô le remède, le remède !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "11"
                },
                {
                    "line_number": 35,
                    "line_text": "Pauvre âme folle, souviens-toi :",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "12"
                },
                {
                    "line_number": 36,
                    "line_text": "Jésus terrible et doux, à l’aide,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "11"
                }
            ],
            "stanza_text": "Ô le remède, le remède !\nPauvre âme folle, souviens-toi :\nJésus terrible et doux, à l’aide,"
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Seigneur, pour encore la Foi !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "12"
                }
            ],
            "stanza_text": "Seigneur, pour encore la Foi !"
        }
