            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "On dirait de sauvagerie,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "5"
                },
                {
                    "line_number": 20,
                    "line_text": "De structure mal équarrie,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "5"
                }
            ],
            "stanza_text": "On dirait de sauvagerie,\nDe structure mal équarrie,"
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Oh ! oui, j’ai peur, non pas de l’antre",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "16"
                },
                {
                    "line_number": 22,
                    "line_text": "Ni de la façon qu’on y entre",
