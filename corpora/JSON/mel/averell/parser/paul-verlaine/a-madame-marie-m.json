            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Vous fûtes bonne et douce en nos tristes tempêtes,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "L'Esprit et la Raison parmi nos fureurs bêtes,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Et si l'on vous eût crue au temps qu'il le fallait",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
                    "line_text": "On se fût épargné tant de chagrin plus laid",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 5,
                    "line_text": "Encor que douloureux, puis lorsque sonna l'heure",
