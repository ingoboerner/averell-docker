{
    "poem_title": "FADAISES",
    "author": "Paul Verlaine",
    "structure": "suite périodique",
    "year": "1858-1869",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Daignez souffrir qu'à vos genoux, Madame,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Mon pauvre cœur vous explique sa flamme.",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Daignez souffrir qu'à vos genoux, Madame,\nMon pauvre cœur vous explique sa flamme."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "Disparaissez, toute floraison cesse,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 4,
                    "line_text": "Et, loin de vous, s'établit la tristesse.",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Disparaissez, toute floraison cesse,\nEt, loin de vous, s'établit la tristesse."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Je vous adore autant et plus que Dieu,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Et rien jamais n'éteindra ce beau feu.",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Je vous adore autant et plus que Dieu,\nEt rien jamais n'éteindra ce beau feu."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Apparaissez, la verdure et les fleurs",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Aux prés, aux bois, diaprent leurs couleurs.",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Apparaissez, la verdure et les fleurs\nAux prés, aux bois, diaprent leurs couleurs."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Votre regard, profond et rempli d'ombre,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 10,
                    "line_text": "Me fait joyeux, s'il brille, et sinon, sombre.",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Votre regard, profond et rempli d'ombre,\nMe fait joyeux, s'il brille, et sinon, sombre."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Si vous voulez, Madame et bien-aimée,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 12,
                    "line_text": "Si tu voulais, sous la verte ramée,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Si vous voulez, Madame et bien-aimée,\nSi tu voulais, sous la verte ramée,"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Quand vous passez, je baise le chemin,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Et vous tenez mon cœur dans votre main.",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Quand vous passez, je baise le chemin,\nEt vous tenez mon cœur dans votre main."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "Nous en aller, bras dessus, bras dessous,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 16,
                    "line_text": "Dieu ! Quels baisers ! Et quels propos de fous !",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Nous en aller, bras dessus, bras dessous,\nDieu ! Quels baisers ! Et quels propos de fous !"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Seule, en son nid, pleure la tourterelle.",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Las, je suis seul et je pleure comme elle.",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Seule, en son nid, pleure la tourterelle.\nLas, je suis seul et je pleure comme elle."
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Mais non ! Toujours vous vous montrez revêche,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Et cependant je brûle et me dessèche,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Mais non ! Toujours vous vous montrez revêche,\nEt cependant je brûle et me dessèche,"
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "L'aube, au matin ressuscite les fleurs,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 22,
                    "line_text": "Et votre vue apaise les douleurs.",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "L'aube, au matin ressuscite les fleurs,\nEt votre vue apaise les douleurs."
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 23,
                    "line_text": "Et le désir me talonne et me mord,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 24,
                    "line_text": "Car je vous aime, ô Madame la Mort !",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et le désir me talonne et me mord,\nCar je vous aime, ô Madame la Mort !"
        }
    ],
    "corpus": "mel"
}