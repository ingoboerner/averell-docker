            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Fi de la sole normande,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Fi de l’entrecôte au jus,",
                    "metrical_pattern": null,
                    "line_length": "7",
                    "rhyme": "b"
                },
                {
                    "line_number": 7,
                    "line_text": "Puisque tous ces jours-ci j’eus",
