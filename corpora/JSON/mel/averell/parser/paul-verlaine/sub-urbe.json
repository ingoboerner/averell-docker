{
    "poem_title": "Sub Urbe",
    "author": "Paul Verlaine",
    "structure": "terza rima classique",
    "year": "1866",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Les petits ifs du cimetière",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Frémissent au vent hiémal,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Dans la glaciale lumière.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Les petits ifs du cimetière\nFrémissent au vent hiémal,\nDans la glaciale lumière."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 4,
                    "line_text": "Avec des bruits sourds qui font mal,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 5,
                    "line_text": "Les croix de bois des tombes neuves",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 6,
                    "line_text": "Vibrent sur un ton anormal.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Avec des bruits sourds qui font mal,\nLes croix de bois des tombes neuves\nVibrent sur un ton anormal."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Silencieux comme des fleuves,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 8,
                    "line_text": "Mais gros de pleurs comme eux de flots,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 9,
                    "line_text": "Les fils, les mères et les veuves,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Silencieux comme des fleuves,\nMais gros de pleurs comme eux de flots,\nLes fils, les mères et les veuves,"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 10,
                    "line_text": "Par les détours du triste enclos",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 11,
                    "line_text": "S'écoulent, – lente théorie, –",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 12,
                    "line_text": "Au rythme heurté des sanglots.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Par les détours du triste enclos\nS'écoulent, – lente théorie, –\nAu rythme heurté des sanglots."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Le sol sous les pieds glisse et crie,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 14,
                    "line_text": "Là-haut de grands nuages tors",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 15,
                    "line_text": "S'échevèlent avec furie.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Le sol sous les pieds glisse et crie,\nLà-haut de grands nuages tors\nS'échevèlent avec furie."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 16,
                    "line_text": "Pénétrant comme le remords,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 17,
                    "line_text": "Tombe un froid lourd qui vous écœure",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 18,
                    "line_text": "Et qui doit filtrer chez les morts,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Pénétrant comme le remords,\nTombe un froid lourd qui vous écœure\nEt qui doit filtrer chez les morts,"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Chez les pauvres morts, à toute heure",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Seuls, et sans cesse grelottants,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 21,
                    "line_text": "– Qu'on les oublie ou qu'on les pleure ! –",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Chez les pauvres morts, à toute heure\nSeuls, et sans cesse grelottants,\n– Qu'on les oublie ou qu'on les pleure ! –"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 22,
                    "line_text": "Ah ! vienne vite le Printemps,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 23,
                    "line_text": "Et son clair soleil qui caresse,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 24,
                    "line_text": "Et ses doux oiseaux caquetants !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Ah ! vienne vite le Printemps,\nEt son clair soleil qui caresse,\nEt ses doux oiseaux caquetants !"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Refleurisse l'enchanteresse",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 26,
                    "line_text": "Gloire des jardins et des champs",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 27,
                    "line_text": "Que l'âpre hiver tient en détresse !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                }
            ],
            "stanza_text": "Refleurisse l'enchanteresse\nGloire des jardins et des champs\nQue l'âpre hiver tient en détresse !"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 28,
                    "line_text": "Et que, – des levers aux couchants, –",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 29,
                    "line_text": "L'or dilaté d'un ciel sans bornes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 30,
                    "line_text": "Berce de parfums et de chants,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                }
            ],
            "stanza_text": "Et que, – des levers aux couchants, –\nL'or dilaté d'un ciel sans bornes\nBerce de parfums et de chants,"
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "Chers endormis, vos sommeils mornes !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Chers endormis, vos sommeils mornes !"
        }
    ],
    "corpus": "mel"
}