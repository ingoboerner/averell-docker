            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Le soir on soupe mieux, et quand la nuit invite",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
