            "stanza_type": null,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "Le soleil lui faisant un nimbe mordoré,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 32,
                    "line_text": "Le vieux saint du village est tout transfiguré.",
