                {
                    "line_number": 6,
                    "line_text": "Oui, dit-on, l'on s'isole en ce vieux Paris neuf.",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 7,
                    "line_text": "Moi, vieux Parisien, ne le puis : l'habitude !",
