            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Pénitence, du fond de mes crimes affreux,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": ""
                },
                {
                    "line_number": 18,
                    "line_text": "Luxure, orgueil, colère et toute la filière,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": ""
