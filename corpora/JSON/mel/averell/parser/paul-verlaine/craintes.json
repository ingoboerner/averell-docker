            "stanza_type": null,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Crimes, surtout crimes d'esprit ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 6,
                    "line_text": "Doutes, tiédeurs et sécheresses,",
