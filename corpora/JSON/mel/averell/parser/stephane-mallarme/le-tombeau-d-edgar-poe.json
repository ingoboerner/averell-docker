                {
                    "line_number": 1,
                    "line_text": "Tel qu'en Lui-même enfin l'éternité le change,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Le Poëte suscite avec un glaive nu",
