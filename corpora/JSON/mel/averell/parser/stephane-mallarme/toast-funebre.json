                {
                    "line_number": 23,
                    "line_text": "Quelqu'un de ces passants, fier, aveugle et muet,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 24,
                    "line_text": "Hôte de son linceul vague, se transmuait",
                    "metrical_pattern": null,
