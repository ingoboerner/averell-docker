                {
                    "line_number": 1,
                    "line_text": "Jeune Gaussin, reçois mon tendre hommage,",
                    "metrical_pattern": null,
                    "line_length": "4+6",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Reçois mes vers au théâtre applaudis ;",
