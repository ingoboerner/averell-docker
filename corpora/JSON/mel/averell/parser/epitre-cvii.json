                },
                {
                    "line_number": 15,
                    "line_text": "Ait d'un bras exterminateur",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 16,
                    "line_text": "Enterré ma tête chenue.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 17,
                    "line_text": "Que ferez-vous d'un pauvre auteur",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 18,
                    "line_text": "Dont la taille et le cou de grue,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 19,
                    "line_text": "Et la mine très-peu joufflue,",
