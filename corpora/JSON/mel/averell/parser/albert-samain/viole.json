            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Mon cœur, tremblant des lendemains,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Est comme un oiseau dans tes mains",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Qui s'effarouche et qui frissonne.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Mon cœur, tremblant des lendemains,\nEst comme un oiseau dans tes mains\nQui s'effarouche et qui frissonne."
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 4,
                    "line_text": "Il est si timide qu'il faut",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 5,
                    "line_text": "Ne lui parler que pas trop haut",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 6,
                    "line_text": "Pour que sans crainte il s'abandonne.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Il est si timide qu'il faut\nNe lui parler que pas trop haut\nPour que sans crainte il s'abandonne."
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Un mot suffit à le navrer,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Un regard en lui fait vibrer",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 9,
                    "line_text": "Une inexprimable amertume.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Un mot suffit à le navrer,\nUn regard en lui fait vibrer\nUne inexprimable amertume."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 10,
                    "line_text": "Et ton haleine seulement,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 11,
                    "line_text": "Quand tu lui parles doucement,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 12,
                    "line_text": "Le fait trembler comme une plume.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et ton haleine seulement,\nQuand tu lui parles doucement,\nLe fait trembler comme une plume."
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Il t'environne ; il est partout.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "Il voltige autour de ton cou,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 15,
                    "line_text": "Il palpite autour de ta robe,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Il t'environne ; il est partout.\nIl voltige autour de ton cou,\nIl palpite autour de ta robe,"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 16,
                    "line_text": "Mais si furtif, si passager,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 17,
                    "line_text": "Et si subtil et si léger,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 18,
                    "line_text": "Qu'à toute atteinte il se dérobe.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Mais si furtif, si passager,\nEt si subtil et si léger,\nQu'à toute atteinte il se dérobe."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Et quand tu le ferais souffrir",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Jusqu'à saigner, jusqu'à mourir.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 21,
                    "line_text": "Tu pourrais en garder le doute.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et quand tu le ferais souffrir\nJusqu'à saigner, jusqu'à mourir.\nTu pourrais en garder le doute."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 22,
                    "line_text": "Et de sa peine ne savoir",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 23,
                    "line_text": "Qu'une larme tombée un soir",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 24,
                    "line_text": "Sur ton gant taché d'une goutte.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et de sa peine ne savoir\nQu'une larme tombée un soir\nSur ton gant taché d'une goutte."
        }
    ],
