{
    "poem_title": "Liouba",
    "author": "Alexandre Ducros",
    "structure": "forme RegExp (appariements)",
    "year": "1986",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "L'air est plein de vagues murmures…",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 2,
                    "line_text": "Près de la haie où sont les mûres,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 3,
                    "line_text": "Que vont dépouiller les enfants ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "L'air est plein de vagues murmures…\nPrès de la haie où sont les mûres,\nQue vont dépouiller les enfants ;"
        },
        {
            "stanza_number": 2,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 4,
                    "line_text": "Dans le sentier et sur la rive,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 5,
                    "line_text": "Des monts, de la plaine, il arrive",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 6,
                    "line_text": "Des bruits joyeux et triomphants !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Dans le sentier et sur la rive,\nDes monts, de la plaine, il arrive\nDes bruits joyeux et triomphants !"
        },
        {
            "stanza_number": 3,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Le sont les gais battements d'ailes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 8,
                    "line_text": "Des amours fervents et fidèles",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 9,
                    "line_text": "S'en allant aux blanches clartés,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Le sont les gais battements d'ailes\nDes amours fervents et fidèles\nS'en allant aux blanches clartés,"
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 10,
                    "line_text": "De la lune qui les contemple,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 11,
                    "line_text": "Chercher, pour y bâtir un temple,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 12,
                    "line_text": "Les réduits les plus écartés ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "De la lune qui les contemple,\nChercher, pour y bâtir un temple,\nLes réduits les plus écartés ;"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Le sont les souffles, les haleines,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 14,
                    "line_text": "S'échappant des corolles pleines",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 15,
                    "line_text": "Des plus voluptueux parfums ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Le sont les souffles, les haleines,\nS'échappant des corolles pleines\nDes plus voluptueux parfums ;"
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 16,
                    "line_text": "L'est le palpitement des fièvres,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 17,
                    "line_text": "Le bruit des baisers sur les lèvres,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 18,
                    "line_text": "Emportant les ennuis défunts ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "L'est le palpitement des fièvres,\nLe bruit des baisers sur les lèvres,\nEmportant les ennuis défunts ;"
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "L'est, au fond des chères retraites,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 20,
                    "line_text": "Le chant et les hymnes secrètes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 21,
                    "line_text": "Des beaux amants fêtant Éros ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "L'est, au fond des chères retraites,\nLe chant et les hymnes secrètes\nDes beaux amants fêtant Éros ;"
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 22,
                    "line_text": "Éros, le dieu des guerres douces,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 23,
                    "line_text": "Et dont les flèches, sur les mousses,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 24,
                    "line_text": "Doublent l'ardeur de ses héros !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Éros, le dieu des guerres douces,\nEt dont les flèches, sur les mousses,\nDoublent l'ardeur de ses héros !"
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Éveille-toi ! — Viens ! les étoiles",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 26,
                    "line_text": "Pleuvent l'amour ! — Comme les toiles",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 27,
                    "line_text": "Des tentes de Kédar, que Tyr",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Éveille-toi ! — Viens ! les étoiles\nPleuvent l'amour ! — Comme les toiles\nDes tentes de Kédar, que Tyr"
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 28,
                    "line_text": "Pour sa pourpre vive préfère,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 29,
                    "line_text": "Les souples lianes vont faire",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 30,
                    "line_text": "Des rideaux pour nous garantir !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Pour sa pourpre vive préfère,\nLes souples lianes vont faire\nDes rideaux pour nous garantir !"
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "L'est la nuit aux baisers, mignonne !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 32,
                    "line_text": "Viens ! tu seras ma compagnonne,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 33,
                    "line_text": "Allons-nous-en par les sentiers ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "L'est la nuit aux baisers, mignonne !\nViens ! tu seras ma compagnonne,\nAllons-nous-en par les sentiers ;"
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 34,
                    "line_text": "Allons-nous-en par les allées,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 35,
                    "line_text": "Où vont les odeurs exhalées",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 36,
                    "line_text": "Des boutons roses d'églantiers !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Allons-nous-en par les allées,\nOù vont les odeurs exhalées\nDes boutons roses d'églantiers !"
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "La colline en est embaumée !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 38,
                    "line_text": "Éveille-toi, ma bien-aimée,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 39,
                    "line_text": "Allons, viens ! donnons-nous la main ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "La colline en est embaumée !\nÉveille-toi, ma bien-aimée,\nAllons, viens ! donnons-nous la main ;"
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 40,
                    "line_text": "Et nous irons sous la feuillée,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 41,
                    "line_text": "Ivres d'amour à la cueillée",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 42,
                    "line_text": "Des baisers le long du chemin !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et nous irons sous la feuillée,\nIvres d'amour à la cueillée\nDes baisers le long du chemin !"
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 43,
                    "line_text": "Car ils font oublier les peines,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 44,
                    "line_text": "Ils ont la fraîcheur des troènes",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 45,
                    "line_text": "Lorsque dans l'air brûle midi !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Car ils font oublier les peines,\nIls ont la fraîcheur des troènes\nLorsque dans l'air brûle midi !"
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 46,
                    "line_text": "Et quand tu seras sur ta couche,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 47,
                    "line_text": "Je les presserai sur ta bouche,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 48,
                    "line_text": "Comme des raisins d'En-Guédi ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "Et quand tu seras sur ta couche,\nJe les presserai sur ta bouche,\nComme des raisins d'En-Guédi ;"
        },
        {
            "stanza_number": 17,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "D'En-Guédi, le jardin des treilles,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 50,
                    "line_text": "Où les grappes pendaient, pareilles",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 51,
                    "line_text": "A des colliers de perles d'or ;",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "D'En-Guédi, le jardin des treilles,\nOù les grappes pendaient, pareilles\nA des colliers de perles d'or ;"
        },
        {
            "stanza_number": 18,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 52,
                    "line_text": "D'En-Guédi, le jardin mystique,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 53,
                    "line_text": "Où Salomon fit le Cantique",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "c"
                },
                {
                    "line_number": 54,
                    "line_text": "Que nous allons chanter encor !",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                }
            ],
            "stanza_text": "D'En-Guédi, le jardin mystique,\nOù Salomon fit le Cantique\nQue nous allons chanter encor !"
        }
    ],
    "corpus": "mel"
}