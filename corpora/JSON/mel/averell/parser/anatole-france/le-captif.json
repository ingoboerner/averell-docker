            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Et tant que le soleil éclaire",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 34,
                    "line_text": "Le bois chaste et silencieux,",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
                },
                {
                    "line_number": 35,
                    "line_text": "Les fiers desseins et la colère",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "a"
                },
                {
                    "line_number": 36,
                    "line_text": "Enflamment ses humides yeux.",
                    "metrical_pattern": null,
                    "line_length": "8",
                    "rhyme": "b"
