                {
                    "line_number": 2,
                    "line_text": "Habile à susciter les contours précieux",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 3,
                    "line_text": "Des apparitions qui flottaient dans tes yeux,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": "b"
                },
                {
                    "line_number": 4,
