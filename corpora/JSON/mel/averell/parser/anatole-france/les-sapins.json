{
    "poem_title": "Les sapins",
    "author": "Anatole France",
    "structure": "",
    "year": "1873",
    "manually_checked": false,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "On entend l'Océan heurter les promontoires ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": ""
                },
                {
                    "line_number": 2,
                    "line_text": "De lunaires clartés blêmissent le ravin",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": ""
                },
                {
                    "line_number": 3,
                    "line_text": "Où l'homme perdu, seul, épars, se cherche en vain ;",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": ""
                },
                {
                    "line_number": 4,
                    "line_text": "Le vent du nord, sonnant dans les frondaisons noires,",
                    "metrical_pattern": null,
                    "line_length": "6+6",
                    "rhyme": ""
                },
                {
                    "line_number": 5,
                    "line_text": "Sur les choses sans forme épand l'effroi divin.",
                    "metrical_pattern": null,
