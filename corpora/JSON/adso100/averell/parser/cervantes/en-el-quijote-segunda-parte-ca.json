                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "El muro rompe la doncella hermosa",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "que de Píramo abrió el gallardo pecho;",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "parte el amor de Chipre, y va derecho",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "a ver la quiebra estrecha y prodigiosa.",
                    "metrical_pattern": "-+-+-+---+-"
