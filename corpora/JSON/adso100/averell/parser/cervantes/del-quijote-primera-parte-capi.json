                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Santa amistad, que con ligeras alas,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "tu apariencia quedándose en el suelo,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 3,
                    "n": "3",
                    "line_text": "entre benditas almas en el cielo,",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": 4,
                    "n": "4",
                    "line_text": "subiste alegre a las empíreas salas,",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Santa amistad, que con ligeras alas,\ntu apariencia quedándose en el suelo,\nentre benditas almas en el cielo,\nsubiste alegre a las empíreas salas,"
        },
        {
            "stanza_number": 2,
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": 5,
                    "n": "5",
                    "line_text": "desde allá, cuando quieres, no señalas",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": 6,
                    "n": "6",
                    "line_text": "la justa paz cubierta con un velo,",
                    "metrical_pattern": "-+-+-+--++-"
                },
                {
                    "line_number": 7,
                    "n": "7",
                    "line_text": "por quien a veces se trasluce el celo",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": 8,
                    "n": "8",
                    "line_text": "de buenas obras que, a la fin, son malas.",
                    "metrical_pattern": "-+-+---+++-"
                }
            ],
            "stanza_text": "desde allá, cuando quieres, no señalas\nla justa paz cubierta con un velo,\npor quien a veces se trasluce el celo\nde buenas obras que, a la fin, son malas."
        },
        {
            "stanza_number": 3,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 9,
                    "n": "9",
                    "line_text": "Deja el cielo ¡oh amistad!, o no permitas",
                    "metrical_pattern": "+-+--+-+-+-"
                },
                {
                    "line_number": 10,
                    "n": "10",
                    "line_text": "que el engaño se vista tu librea,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": 11,
                    "n": "11",
                    "line_text": "con que destruye a la intención sincera;",
                    "metrical_pattern": "---+---+-+-"
                }
            ],
            "stanza_text": "Deja el cielo ¡oh amistad!, o no permitas\nque el engaño se vista tu librea,\ncon que destruye a la intención sincera;"
        },
        {
            "stanza_number": 4,
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": 12,
                    "n": "12",
                    "line_text": "que si tus apariencias no le quitas,",
                    "metrical_pattern": "-----+-+-+-"
                },
                {
                    "line_number": 13,
                    "n": "13",
                    "line_text": "presto ha de verse el mundo en la pelea",
                    "metrical_pattern": "++-+-+---+-"
                },
                {
                    "line_number": 14,
                    "n": "14",
                    "line_text": "de la discorde confusión primera.",
                    "metrical_pattern": "---+---+-+-"
                }
            ],
            "stanza_text": "que si tus apariencias no le quitas,\npresto ha de verse el mundo en la pelea\nde la discorde confusión primera."
        }
    ]
