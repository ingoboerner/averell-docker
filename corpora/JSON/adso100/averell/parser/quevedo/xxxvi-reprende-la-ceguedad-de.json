            "lines": [
                {
                    "line_number": 1,
                    "n": "1",
                    "line_text": "Si vistes a las piedras quebrantarse",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": 2,
                    "n": "2",
                    "line_text": "en la muerte de Cristo con violencia,",
