{
    "manually_checked": false,
    "poem_title": "Un cruzado",
    "author": "Carlos Póo Urbach",
    "poem_alt_title": "Nímbale el casco broncínea cimera",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "serventesio",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Nímbale el casco broncínea cimera",
                    "metrical_pattern": "+-++--+--+-"
                },
                {
                    "line_number": "2",
                    "line_text": "donde erizado feroz jabalí,",
                    "metrical_pattern": "---+--+--+-"
                },
                {
                    "line_number": "3",
                    "line_text": "a la ígnea lumbre del sol reverbera",
                    "metrical_pattern": "-+-+--+--+-"
                },
                {
                    "line_number": "4",
                    "line_text": "chispas sangrientas de ardiente rubí.",
                    "metrical_pattern": "+--+--+--+-"
                }
            ],
            "stanza_text": "Nímbale el casco broncínea cimera\ndonde erizado feroz jabalí,\na la ígnea lumbre del sol reverbera\nchispas sangrientas de ardiente rubí."
        },
        {
            "stanza_number": "2",
            "stanza_type": "serventesio",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "Pende bruñida tajante altanera",
                    "metrical_pattern": "+--+--+--+-"
                },
                {
                    "line_number": "6",
                    "line_text": "como un trofeo del marcial tahalí,",
                    "metrical_pattern": "-+-+--+--+-"
                },
                {
                    "line_number": "7",
                    "line_text": "y la acerada lóriga, severa",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "surca y blasona la cruz carmesí.",
                    "metrical_pattern": "+--+--+--+-"
                }
            ],
            "stanza_text": "Pende bruñida tajante altanera\ncomo un trofeo del marcial tahalí,\ny la acerada lóriga, severa\nsurca y blasona la cruz carmesí."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "Yergue su diestra cruzado orifloma,",
                    "metrical_pattern": "+--+--+--+-"
                },
                {
                    "line_number": "10",
                    "line_text": "lleva en la mente su Dios y su dama,",
                    "metrical_pattern": "+--+--+--+-"
                },
                {
                    "line_number": "11",
                    "line_text": "sacro amuleto, feliz talismán;",
                    "metrical_pattern": "+--+--+--+-"
                }
            ],
            "stanza_text": "Yergue su diestra cruzado orifloma,\nlleva en la mente su Dios y su dama,\nsacro amuleto, feliz talismán;"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "y en la hosca brega febril del combate,",
                    "metrical_pattern": "-+-+--+--+-"
                },
                {
                    "line_number": "13",
                    "line_text": "hunde frenético, agudo acicate",
                    "metrical_pattern": "+--+--+--+-"
                },
                {
                    "line_number": "14",
                    "line_text": "a encabritado brioso alazán.",
                    "metrical_pattern": "---+-+---+-"
                }
            ],
            "stanza_text": "y en la hosca brega febril del combate,\nhunde frenético, agudo acicate\na encabritado brioso alazán."
        }
    ]
}