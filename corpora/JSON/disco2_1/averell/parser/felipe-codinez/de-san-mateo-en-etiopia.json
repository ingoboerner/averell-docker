{
    "manually_checked": false,
    "poem_title": "De San Mateo en Etiopía",
    "author": "Felipe Codínez",
    "poem_alt_title": "Hombre empréstito breve de la vida,",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Hombre empréstito breve de la vida,",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "de la muerte común deuda forzosa,",
                    "metrical_pattern": "--+--++--+-"
                },
                {
                    "line_number": "3",
                    "line_text": "sueño en la fantasía mentirosa,",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "máquina en vanidades sostenida.",
                    "metrical_pattern": "+----+---+-"
                }
            ],
            "stanza_text": "Hombre empréstito breve de la vida,\nde la muerte común deuda forzosa,\nsueño en la fantasía mentirosa,\nmáquina en vanidades sostenida."
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "Luz tan presto mortal, como encendida,",
                    "metrical_pattern": "+++--+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "polvo con altivez, farsa engañosa,",
                    "metrical_pattern": "+----++--+-"
                },
                {
                    "line_number": "7",
                    "line_text": "ceniza hinchada, arena revoltosa,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "humo en el aire, flor desvanecida.",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "Luz tan presto mortal, como encendida,\npolvo con altivez, farsa engañosa,\nceniza hinchada, arena revoltosa,\nhumo en el aire, flor desvanecida."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "Tierra inconstante, barro movedizo,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "vapor caduco, miserable viento,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "centella breve, fábula soñada.",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "Tierra inconstante, barro movedizo,\nvapor caduco, miserable viento,\ncentella breve, fábula soñada."
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "Soplo sin fuerza, vidrio quebradizo,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "sombra sin ser ligero pensamiento.",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "Hombre te llaman. Yo te llamo nada.",
                    "metrical_pattern": "+-++-++-+-"
                }
            ],
            "stanza_text": "Soplo sin fuerza, vidrio quebradizo,\nsombra sin ser ligero pensamiento.\nHombre te llaman. Yo te llamo nada."
        }
    ]
}