{
    "manually_checked": false,
    "poem_title": "Con dicciones valencianas y castellanas",
    "author": "Joseph Aragonés",
    "poem_alt_title": "Valencia insigne, patria venturosa,",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Valencia insigne, patria venturosa,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "de valor, y de ciencia coronada",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "si de Minerva Cátedra afamada",
                    "metrical_pattern": "-----+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "de Palas plaza ilustre, y belicosa.",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "Valencia insigne, patria venturosa,\nde valor, y de ciencia coronada\nsi de Minerva Cátedra afamada\nde Palas plaza ilustre, y belicosa."
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "Festiva forma una corona hermosa",
                    "metrical_pattern": "-+-++--+-+-"
                },
                {
                    "line_number": "6",
                    "line_text": "igual a la de Alcides celebrada,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "y a tal Historiador; apasionada",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "corona liberal, premia gustosa.",
                    "metrical_pattern": "-+---++--+-"
                }
            ],
            "stanza_text": "Festiva forma una corona hermosa\nigual a la de Alcides celebrada,\ny a tal Historiador; apasionada\ncorona liberal, premia gustosa."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "De Orti conserva la inmortal memoria,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "10",
                    "line_text": "pues nota puntual, sutil explica",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "la honra, que en Tomás Fénix te aclama.",
                    "metrical_pattern": "+---+--+-+-"
                }
            ],
            "stanza_text": "De Orti conserva la inmortal memoria,\npues nota puntual, sutil explica\nla honra, que en Tomás Fénix te aclama."
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "Consagra esta obra rica a eterna gloria,",
                    "metrical_pattern": "-+++-+-+-+-"
                },
                {
                    "line_number": "13",
                    "line_text": "pues la del Turia al Nilo la publica",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": "14",
                    "line_text": "la sonorosa trompa de la Fama.",
                    "metrical_pattern": "---+-+---+-"
                }
            ],
            "stanza_text": "Consagra esta obra rica a eterna gloria,\npues la del Turia al Nilo la publica\nla sonorosa trompa de la Fama."
        }
    ]
}