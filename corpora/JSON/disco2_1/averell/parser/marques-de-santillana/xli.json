            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "canonizado por vulgar sentencia,",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": "13",
                    "line_text": "al confesor insign(e) Villa(c)reçes;",
                    "metrical_pattern": "---++-++-++-"
                },
                {
