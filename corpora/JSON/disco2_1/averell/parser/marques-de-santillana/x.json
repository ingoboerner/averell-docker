    "author": "Marqués de Santillana",
    "poem_alt_title": "Fiera Castino con aguda lança",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Fiera Castino con aguda lança",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": "2",
                    "line_text": "la temerosa gente pompeana;",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "el cometiente las más veces gana,",
                    "metrical_pattern": "---+--++-+-"
                },
                {
                    "line_number": "4",
                    "line_text": "al victorioso nuze la tardança.",
                    "metrical_pattern": "----+-+--+-"
                }
            ],
            "stanza_text": "Fiera Castino con aguda lança\nla temerosa gente pompeana;\nel cometiente las más veces gana,\nal victorioso nuze la tardança."
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "Razón nos mueve, e çierta esperança",
                    "metrical_pattern": "-+++--+--+-"
                },
                {
                    "line_number": "6",
                    "line_text": "es el alferze de vuestra bandera,",
                    "metrical_pattern": "+--+-----+-"
                },
                {
                    "line_number": "7",
                    "line_text": "e justicia patrona e delantera,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "e nos conduce con grand ordenança.",
                    "metrical_pattern": "-+-+--+-+-"
                }
            ],
            "stanza_text": "Razón nos mueve, e çierta esperança\nes el alferze de vuestra bandera,\ne justicia patrona e delantera,\ne nos conduce con grand ordenança."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "Recuérdenos la vida que vivides,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "la cual yo llamo imagen de muerte,",
                    "metrical_pattern": "--++--+--+-"
                },
                {
                    "line_number": "11",
                    "line_text": "e tantas menguas sean vos delante;",
                    "metrical_pattern": "-+-+-+-+-+-"
                }
            ],
            "stanza_text": "Recuérdenos la vida que vivides,\nla cual yo llamo imagen de muerte,\ne tantas menguas sean vos delante;"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "pensad las causas por qué las sofrides,",
                    "metrical_pattern": "-+-+--+--+-"
                },
                {
                    "line_number": "13",
                    "line_text": "ca en vuestra espada es la buena suerte",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": "14",
                    "line_text": "e los honores del carro triumfante.",
                    "metrical_pattern": "---+--+--+-"
                }
            ],
            "stanza_text": "pensad las causas por qué las sofrides,\nca en vuestra espada es la buena suerte\ne los honores del carro triumfante."
        }
    ]
}