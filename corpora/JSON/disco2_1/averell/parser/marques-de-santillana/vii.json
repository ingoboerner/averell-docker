            "stanza_type": "serventesio",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Fedra dio regla y manda que en amor,",
                    "metrical_pattern": "+-++-+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "cuando la lengua no se halle osada",
                    "metrical_pattern": "---+-++--+-"
                },
                {
                    "line_number": "3",
                    "line_text": "a demostrar la pena o el dolor",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "que en el ánimo afflicto es enplentada,",
                    "metrical_pattern": "--+--++--+-"
                }
            ],
            "stanza_text": "Fedra dio regla y manda que en amor,\ncuando la lengua no se halle osada\na demostrar la pena o el dolor\nque en el ánimo afflicto es enplentada,"
        },
        {
            "stanza_number": "2",
            "stanza_type": "serventesio",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "la pluma escriva e muestre el ardor",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "que diluye la mente fatigada;",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "pues osa, mano mía, y sin temor",
                    "metrical_pattern": "-+-+-----+-"
                },
                {
                    "line_number": "8",
                    "line_text": "te faz ser vista fiel enamorada;",
                    "metrical_pattern": "++++-+---+-"
                }
            ],
            "stanza_text": "la pluma escriva e muestre el ardor\nque diluye la mente fatigada;\npues osa, mano mía, y sin temor\nte faz ser vista fiel enamorada;"
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "y no te pienses que tanta belleza",
                    "metrical_pattern": "-+++--+--+-"
                },
                {
                    "line_number": "10",
                    "line_text": "y sincera claror casi divina",
                    "metrical_pattern": "--+--++--+-"
                },
                {
                    "line_number": "11",
                    "line_text": "contenga en sí la feroçe crueza,",
                    "metrical_pattern": "-+--+-+--+-"
                }
            ],
            "stanza_text": "y no te pienses que tanta belleza\ny sincera claror casi divina\ncontenga en sí la feroçe crueza,"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "nin la nefanda soberbia maligna;",
                    "metrical_pattern": "+--+--+--+-"
                },
                {
                    "line_number": "13",
                    "line_text": "pues vaya lejos inútil pereza",
                    "metrical_pattern": "-+-+--+--+-"
                },
                {
                    "line_number": "14",
                    "line_text": "y no se tema de imagen benigna.",
                    "metrical_pattern": "-+-+--+--+-"
                }
            ],
            "stanza_text": "nin la nefanda soberbia maligna;\npues vaya lejos inútil pereza\ny no se tema de imagen benigna."
        }
    ]
}