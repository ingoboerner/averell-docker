    "poem_title": "- XXX -",
    "author": "Marqués de Santillana",
    "poem_alt_title": "Venció Anibal al conflicto de canas",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "serventesio",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Venció Anibal al conflicto de canas",
                    "metrical_pattern": "-+-+--+--+-"
                },
                {
                    "line_number": "2",
                    "line_text": "e non dubdava Livio, si quisiera,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "qu'en pocos días o pocas semanas",
                    "metrical_pattern": "++-+--+--+-"
                },
                {
                    "line_number": "4",
                    "line_text": "a Roma con Italia posseyera.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Venció Anibal al conflicto de canas\ne non dubdava Livio, si quisiera,\nqu'en pocos días o pocas semanas\na Roma con Italia posseyera."
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "Por çierto al universo la manera",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "plugo, e se goza en grand cantidad",
                    "metrical_pattern": "+--+--+--+-"
                },
                {
                    "line_number": "7",
                    "line_text": "de vuestra también fecha libertad",
                    "metrical_pattern": "----++---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "onde la Astrea dominar espera.",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "Por çierto al universo la manera\nplugo, e se goza en grand cantidad\nde vuestra también fecha libertad\nonde la Astrea dominar espera."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "La graçia leemos sea dada",
                    "metrical_pattern": "-++-+-+-+-"
                },
                {
                    "line_number": "10",
                    "line_text": "a muchos, e a pocos la perseverança,",
                    "metrical_pattern": "-+--+----+-"
                },
                {
                    "line_number": "11",
                    "line_text": "pues de los rayos sed vos, rey prudente;",
                    "metrical_pattern": "---+-+++-+-"
                }
            ],
            "stanza_text": "La graçia leemos sea dada\na muchos, e a pocos la perseverança,\npues de los rayos sed vos, rey prudente;"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "e non vos canse tan viril jornada,",
                    "metrical_pattern": "-+++-+-+-+-"
                },
                {
                    "line_number": "13",
                    "line_text": "mas conseguidla tordiendo tardança",
                    "metrical_pattern": "---++--+-+-"
                },
                {
                    "line_number": "14",
                    "line_text": "cuanto es loable, bueno e diligente.",
                    "metrical_pattern": "+++-+----+-"
                }
            ],
            "stanza_text": "e non vos canse tan viril jornada,\nmas conseguidla tordiendo tardança\ncuanto es loable, bueno e diligente."
        }
    ]
}