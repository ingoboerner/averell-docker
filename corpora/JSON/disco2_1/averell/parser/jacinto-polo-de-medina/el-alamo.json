    "poem_title": "El álamo",
    "author": "Jacinto Polo de Medina",
    "poem_alt_title": "Aquesta ya de Alcides osadía;",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Aquesta ya de Alcides osadía;",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "que profana del sol sagrado asiento,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": "3",
                    "line_text": "contra sus rayos verde atrevimiento,",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "pasando a descortés su demasía;",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Aquesta ya de Alcides osadía;\nque profana del sol sagrado asiento,\ncontra sus rayos verde atrevimiento,\npasando a descortés su demasía;"
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "esta, que no al Olimpo desafía,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "pues besa de su alteza el fundamento,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "vanidad de esmeralda que en el viento",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "bate tornasolada argentería;",
                    "metrical_pattern": "+----+---+-"
                }
            ],
            "stanza_text": "esta, que no al Olimpo desafía,\npues besa de su alteza el fundamento,\nvanidad de esmeralda que en el viento\nbate tornasolada argentería;"
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "esta del prado Babilonia hojosa",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "10",
                    "line_text": "terrero do festejan las estrellas",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "11",
                    "line_text": "en confusión armónica las aves,",
                    "metrical_pattern": "---+-+---+-"
                }
            ],
            "stanza_text": "esta del prado Babilonia hojosa\nterrero do festejan las estrellas\nen confusión armónica las aves,"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "cadáver estará su pompa hermosa",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": "13",
                    "line_text": "y amarillas leerán sus hojas bellas",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": "14",
                    "line_text": "muda lección a nuestras vidas graves.",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "cadáver estará su pompa hermosa\ny amarillas leerán sus hojas bellas\nmuda lección a nuestras vidas graves."
        }
    ]
}