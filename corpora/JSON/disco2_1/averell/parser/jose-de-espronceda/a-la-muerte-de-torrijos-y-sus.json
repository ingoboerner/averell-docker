    "manually_checked": false,
    "poem_title": "A la muerte de Torrijos y sus compañeros",
    "author": "José de Espronceda",
    "poem_alt_title": "Hélos allí: junto a la mar bravía",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Hélos allí: junto a la mar bravía",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "2",
                    "line_text": "cadáveres están, ¡ay!, los que fueron",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "honra del libre, y con su muerte dieron",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "4",
                    "line_text": "almas al cielo, a España nombradía.",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "Hélos allí: junto a la mar bravía\ncadáveres están, ¡ay!, los que fueron\nhonra del libre, y con su muerte dieron\nalmas al cielo, a España nombradía."
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "Ansia de patria y libertad henchía",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "6",
                    "line_text": "sus nobles pechos que jamás temieron",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "7",
                    "line_text": "y las costas de Málaga los vieron",
                    "metrical_pattern": "--+--+--++-"
                },
                {
                    "line_number": "8",
                    "line_text": "cual sol de gloria en desdichado día.",
                    "metrical_pattern": "++-+---+-+-"
                }
            ],
            "stanza_text": "Ansia de patria y libertad henchía\nsus nobles pechos que jamás temieron\ny las costas de Málaga los vieron\ncual sol de gloria en desdichado día."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "Españoles, llorad; mas vuestro llanto",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "lágrimas de dolor y sangre sean,",
                    "metrical_pattern": "+----+-+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "sangre que ahogue a siervos y opresores,",
                    "metrical_pattern": "+-+-+----+-"
                }
            ],
            "stanza_text": "Españoles, llorad; mas vuestro llanto\nlágrimas de dolor y sangre sean,\nsangre que ahogue a siervos y opresores,"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "y los viles tiranos, con espanto,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "siempre delante amenazando vean",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "14",
                    "line_text": "alzarse sus espectros vengadores.",
                    "metrical_pattern": "-++--+---+-"
                }
            ],
            "stanza_text": "y los viles tiranos, con espanto,\nsiempre delante amenazando vean\nalzarse sus espectros vengadores."
        }
    ]
}