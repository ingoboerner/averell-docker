    "poem_title": "Tipos clericales",
    "author": "J. Guerrero",
    "poem_alt_title": "Soberbia y ambición, gula y pereza,",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Soberbia y ambición, gula y pereza,",
                    "metrical_pattern": "-+--++---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "lujuria, orgullo, ira, hipocresía,",
                    "metrical_pattern": "-+-++----+-"
                },
                {
                    "line_number": "3",
                    "line_text": "avaricia, amor propio, idolatría",
                    "metrical_pattern": "--+-++---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "hacia todo lo ajeno, ruin bajeza;",
                    "metrical_pattern": "--+-++-+-+-"
                }
            ],
            "stanza_text": "Soberbia y ambición, gula y pereza,\nlujuria, orgullo, ira, hipocresía,\navaricia, amor propio, idolatría\nhacia todo lo ajeno, ruin bajeza;"
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "adulación al rico, a la pobreza",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "desprecio sin igual, una falsía",
                    "metrical_pattern": "-+---++--+-"
                },
                {
                    "line_number": "7",
                    "line_text": "que Judas para sí desearía,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "mucho viento metido en la cabeza;",
                    "metrical_pattern": "+-+--+---+-"
                }
            ],
            "stanza_text": "adulación al rico, a la pobreza\ndesprecio sin igual, una falsía\nque Judas para sí desearía,\nmucho viento metido en la cabeza;"
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "nada de dignidad, mucho de vicio,",
                    "metrical_pattern": "+----++--+-"
                },
                {
                    "line_number": "10",
                    "line_text": "muchas palabras retumbantes, vanas,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "sin sentido común y sin juicio...",
                    "metrical_pattern": "--+--+--+-"
                }
            ],
            "stanza_text": "nada de dignidad, mucho de vicio,\nmuchas palabras retumbantes, vanas,\nsin sentido común y sin juicio..."
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "¡Oh, lector!, en muchísimas sotanas",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "que, la verdad no tiene desperdicio,",
                    "metrical_pattern": "---+++---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "hallarás cualidades tan barbianas.",
                    "metrical_pattern": "--+--+-+-+-"
                }
            ],
            "stanza_text": "¡Oh, lector!, en muchísimas sotanas\nque, la verdad no tiene desperdicio,\nhallarás cualidades tan barbianas."
        }
    ]
}