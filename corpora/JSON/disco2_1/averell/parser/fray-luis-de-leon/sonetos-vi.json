    "manually_checked": false,
    "poem_title": "Sonetos -- - VI -",
    "author": "Fray Luis de Le√≥n",
    "poem_alt_title": "Cuando me paro a contemplar la vida,",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Cuando me paro a contemplar la vida,",
                    "metrical_pattern": "--++---+-+-"
                },
                {
                    "line_number": "2",
                    "line_text": "y echo los ojos con mi pensamiento",
                    "metrical_pattern": "+--+-----+-"
                },
                {
                    "line_number": "3",
                    "line_text": "a ver los lasos miembros sin aliento,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "y la robusta edad enflaquecida,",
                    "metrical_pattern": "---+-+---+-"
                }
            ],
            "stanza_text": "Cuando me paro a contemplar la vida,\ny echo los ojos con mi pensamiento\na ver los lasos miembros sin aliento,\ny la robusta edad enflaquecida,"
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "y aquella juventud rica y florida,",
                    "metrical_pattern": "-+---++--+-"
                },
                {
                    "line_number": "6",
                    "line_text": "cual llama de candela en presto viento",
                    "metrical_pattern": "++---+-+-+-"
                },
                {
                    "line_number": "7",
                    "line_text": "batida con tan recio movimiento,",
                    "metrical_pattern": "-+--++---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "que a pique estuvo ya de ser perdida,",
                    "metrical_pattern": "-+-+-+-+-+-"
                }
            ],
            "stanza_text": "y aquella juventud rica y florida,\ncual llama de candela en presto viento\nbatida con tan recio movimiento,\nque a pique estuvo ya de ser perdida,"
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "condeno de mi vida la tibieza",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "y el grande desconcierto en que he andado",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "que a tal peligro presto me tuvieron.",
                    "metrical_pattern": "-+-+-+-+-+-"
                }
            ],
            "stanza_text": "condeno de mi vida la tibieza\ny el grande desconcierto en que he andado\nque a tal peligro presto me tuvieron."
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "Y con velocidad y ligereza",
                    "metrical_pattern": "-----+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "determino de huir de aqueste estado,",
                    "metrical_pattern": "--+-+-+--+-"
                },
                {
                    "line_number": "14",
                    "line_text": "do mis continuas culpas me pusieron.",
                    "metrical_pattern": "+--+-+-+-+-"
                }
            ],
            "stanza_text": "Y con velocidad y ligereza\ndetermino de huir de aqueste estado,\ndo mis continuas culpas me pusieron."
        }
    ]
}