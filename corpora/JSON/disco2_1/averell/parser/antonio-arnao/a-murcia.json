{
    "manually_checked": false,
    "poem_title": "A Murcia",
    "author": "Antonio Arnao",
    "poem_alt_title": "A ti, bella ciudad, reina de amores",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "A ti, bella ciudad, reina de amores",
                    "metrical_pattern": "-++--++--+-"
                },
                {
                    "line_number": "2",
                    "line_text": "adormecida en la feraz llanura,",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": "3",
                    "line_text": "que al pintarte en la linfa del Segura",
                    "metrical_pattern": "--++-+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "brillas en trono de apiñadas flores;",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "A ti, bella ciudad, reina de amores\nadormecida en la feraz llanura,\nque al pintarte en la linfa del Segura\nbrillas en trono de apiñadas flores;"
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "a ti, cuyo vergel de mil primores",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": "6",
                    "line_text": "fecunda el sol que envidia tu hermosura,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "porque te dan hechizo y galanura",
                    "metrical_pattern": "--++-+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "brisas, aves, perfumes y colores;",
                    "metrical_pattern": "+-+--+---+-"
                }
            ],
            "stanza_text": "a ti, cuyo vergel de mil primores\nfecunda el sol que envidia tu hermosura,\nporque te dan hechizo y galanura\nbrisas, aves, perfumes y colores;"
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "a ti, mi patria, la de Abril constante,",
                    "metrical_pattern": "-+-+-----+-"
                },
                {
                    "line_number": "10",
                    "line_text": "la que infunde en el alma gozo eterno",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "bajo su cielo azul siempre radiante;",
                    "metrical_pattern": "---+-++--+-"
                }
            ],
            "stanza_text": "a ti, mi patria, la de Abril constante,\nla que infunde en el alma gozo eterno\nbajo su cielo azul siempre radiante;"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "a ti dirijo mi saludo tierno,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "13",
                    "line_text": "y, temiendo morir de ti distante,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": "14",
                    "line_text": "al pensar que te miro, me prosterno.",
                    "metrical_pattern": "--+-++-+-+-"
                }
            ],
            "stanza_text": "a ti dirijo mi saludo tierno,\ny, temiendo morir de ti distante,\nal pensar que te miro, me prosterno."
        }
    ]
}