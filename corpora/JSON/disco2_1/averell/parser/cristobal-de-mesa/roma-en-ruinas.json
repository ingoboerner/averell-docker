{
    "manually_checked": false,
    "poem_title": "Roma en ruinas",
    "author": "Cristóbal de Mesa",
    "poem_alt_title": "Teatro, Capitolio, Coliseo,",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "unknown",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Teatro, Capitolio, Coliseo,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "columnas, arcos, mármoles, medallas,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "valijas, capiteles y quincallas,4",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "do vencieron las obras al deseo;",
                    "metrical_pattern": "+-+--+---+-"
                }
            ],
            "stanza_text": "Teatro, Capitolio, Coliseo,\ncolumnas, arcos, mármoles, medallas,\nvalijas, capiteles y quincallas,4\ndo vencieron las obras al deseo;"
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "templo, carros triunfales, gran trofeo",
                    "metrical_pattern": "+-+--+-+-+-"
                },
                {
                    "line_number": "6",
                    "line_text": "de reino, de victorias, de batallas,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "colosos, epitafios, antiguallas",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "de los sepulcros que desiertos veo;",
                    "metrical_pattern": "---+---+-+-"
                }
            ],
            "stanza_text": "templo, carros triunfales, gran trofeo\nde reino, de victorias, de batallas,\ncolosos, epitafios, antiguallas\nde los sepulcros que desiertos veo;"
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "pirámides, pinturas, termas, baños,",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": "10",
                    "line_text": "reliquias y ruinas de la pompa",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "11",
                    "line_text": "del edificio de la antigua Roma.",
                    "metrical_pattern": "---+---+-+-"
                }
            ],
            "stanza_text": "pirámides, pinturas, termas, baños,\nreliquias y ruinas de la pompa\ndel edificio de la antigua Roma."
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "Si puede tanto el curso de los años,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "podrá ser que también el tiempo rompa",
                    "metrical_pattern": "-++--+-+-+-"
                },
                {
                    "line_number": "14",
                    "line_text": "mi mal, pues toda cosa acaba y doma.",
                    "metrical_pattern": "-+-+-+-+-+-"
                }
            ],
            "stanza_text": "Si puede tanto el curso de los años,\npodrá ser que también el tiempo rompa\nmi mal, pues toda cosa acaba y doma."
        }
    ]
}