                {
                    "line_number": "2",
                    "line_text": "y un médico tirano lo curaba,",
                    "metrical_pattern": "++---+-+-+-"
                },
                {
                    "line_number": "3",
                    "line_text": "y entrando a visitarlo, le hurtaba",
                    "metrical_pattern": "-+---+++-+-"
