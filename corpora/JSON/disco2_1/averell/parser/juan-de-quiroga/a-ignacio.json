{
    "manually_checked": false,
    "poem_title": "A Ignacio",
    "author": "Juan de Quiroga",
    "poem_alt_title": "Alta, piadosa máquina, eminente,",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Alta, piadosa máquina, eminente,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "cuya majestuosa arquitectura",
                    "metrical_pattern": "----+----+-"
                },
                {
                    "line_number": "3",
                    "line_text": "del estrago del tiempo se asegura",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "en las admiraciones de la gente.",
                    "metrical_pattern": "-----+---+-"
                }
            ],
            "stanza_text": "Alta, piadosa máquina, eminente,\ncuya majestuosa arquitectura\ndel estrago del tiempo se asegura\nen las admiraciones de la gente."
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "Cuantas riquezas engendró en Oriente",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "6",
                    "line_text": "el sol, en Occidente plata pura",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": "7",
                    "line_text": "la errante Luna, en pródiga escultura",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "culto a tu adoración hacen decente.",
                    "metrical_pattern": "+----++--+-"
                }
            ],
            "stanza_text": "Cuantas riquezas engendró en Oriente\nel sol, en Occidente plata pura\nla errante Luna, en pródiga escultura\nculto a tu adoración hacen decente."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "En ti pomposamente se venera",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "de cinco Santos la feliz memoria",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "con celo pío y víctimas fragantes.",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "En ti pomposamente se venera\nde cinco Santos la feliz memoria\ncon celo pío y víctimas fragantes."
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "¿Quién sino estirpe tuya, IGNACIO, fuera",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "13",
                    "line_text": "tan viva imitadora de la gloria,",
                    "metrical_pattern": "++---+---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "que en tálamos de luz gozan triunfantes?",
                    "metrical_pattern": "-+---++--+-"
                }
            ],
            "stanza_text": "¿Quién sino estirpe tuya, IGNACIO, fuera\ntan viva imitadora de la gloria,\nque en tálamos de luz gozan triunfantes?"
        }
    ]
}