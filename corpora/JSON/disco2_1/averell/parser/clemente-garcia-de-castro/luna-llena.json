    "manually_checked": false,
    "poem_title": "Luna llena",
    "author": "Clemente García de Castro",
    "poem_alt_title": "Llega la noche bajo espeso velo;",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Llega la noche bajo espeso velo;",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "2",
                    "line_text": "el nudo de su túnica desata,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "y un millón de moléculas de plata",
                    "metrical_pattern": "-----+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "derrama por los ámbitos del cielo.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Llega la noche bajo espeso velo;\nel nudo de su túnica desata,\ny un millón de moléculas de plata\nderrama por los ámbitos del cielo."
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "El escondido sol con dulce anhelo",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": "6",
                    "line_text": "un ósculo de amor deja en la ingrata",
                    "metrical_pattern": "++---++--+-"
                },
                {
                    "line_number": "7",
                    "line_text": "que huye de su poder y de escarlata",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "su faz inunda al levantar el vuelo.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "El escondido sol con dulce anhelo\nun ósculo de amor deja en la ingrata\nque huye de su poder y de escarlata\nsu faz inunda al levantar el vuelo."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "Bórrase a poco de rubor tan hondo",
                    "metrical_pattern": "+-++---+++-"
                },
                {
                    "line_number": "10",
                    "line_text": "la huella roja y el azul domina",
                    "metrical_pattern": "+-+----+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "aquel semblante pálido y redondo,",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "Bórrase a poco de rubor tan hondo\nla huella roja y el azul domina\naquel semblante pálido y redondo,"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "que parece de concha peregrina",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "una gigante perla, en cuyo fondo",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "tiembla el reflejo de la luz divina.",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "que parece de concha peregrina\nuna gigante perla, en cuyo fondo\ntiembla el reflejo de la luz divina."
        }
    ]
}