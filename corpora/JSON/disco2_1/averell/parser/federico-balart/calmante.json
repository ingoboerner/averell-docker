{
    "manually_checked": false,
    "poem_title": "Calmante",
    "author": "Federico Balart",
    "poem_alt_title": "Coro inmenso de voces rumorosas",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Coro inmenso de voces rumorosas",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "que en la tranquila soledad resuenas",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": "3",
                    "line_text": "y de misterio incomprensible llenas",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": "4",
                    "line_text": "las horas de la siesta perezosas;",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Coro inmenso de voces rumorosas\nque en la tranquila soledad resuenas\ny de misterio incomprensible llenas\nlas horas de la siesta perezosas;"
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "zumbar de las abejas oficiosas",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "en torno de las próvidas colmenas;",
                    "metrical_pattern": "-----+---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "murmullo de la mar en las arenas",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "por las desiertas playas candenciosas;",
                    "metrical_pattern": "---+-+---+-"
                }
            ],
            "stanza_text": "zumbar de las abejas oficiosas\nen torno de las próvidas colmenas;\nmurmullo de la mar en las arenas\npor las desiertas playas candenciosas;"
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "de mi existencia en el desnudo yermo,",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": "10",
                    "line_text": "sobre la superficie movediza,",
                    "metrical_pattern": "-----+---+-"
                },
                {
                    "line_number": "11",
                    "line_text": "con vuestro dulce cántico me duermo.",
                    "metrical_pattern": "---+-+--++-"
                }
            ],
            "stanza_text": "de mi existencia en el desnudo yermo,\nsobre la superficie movediza,\ncon vuestro dulce cántico me duermo."
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "¡Así, cuando el dolor le martiriza,",
                    "metrical_pattern": "-+---++--+-"
                },
                {
                    "line_number": "13",
                    "line_text": "concilia el sueño al fin el niño enfermo,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": "14",
                    "line_text": "al sabido cantar de la nodriza!",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "¡Así, cuando el dolor le martiriza,\nconcilia el sueño al fin el niño enfermo,\nal sabido cantar de la nodriza!"
        }
    ]
}