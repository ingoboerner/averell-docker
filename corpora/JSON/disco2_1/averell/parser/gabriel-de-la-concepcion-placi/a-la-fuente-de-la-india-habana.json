{
    "manually_checked": false,
    "poem_title": "A la Fuente de la India Habana",
    "author": "Gabriel de la Concepción (Plácido) Valdés",
    "poem_alt_title": "Mirad La Habana allí color de nieve,",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Mirad La Habana allí color de nieve,",
                    "metrical_pattern": "-+--+-+-+-+-"
                },
                {
                    "line_number": "2",
                    "line_text": "gentil indiana de estructura fina,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "3",
                    "line_text": "dominando una fuente cristalina,",
                    "metrical_pattern": "--++-+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "sentada en trono de alabastro breve:",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Mirad La Habana allí color de nieve,\ngentil indiana de estructura fina,\ndominando una fuente cristalina,\nsentada en trono de alabastro breve:"
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "Jamás murmura de su suerte aleve,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "6",
                    "line_text": "ni se lamenta al sol que la fascina,",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": "7",
                    "line_text": "ni la cruda intemperie la extermina,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": "8",
                    "line_text": "ni la furiosa tempestad la mueve.",
                    "metrical_pattern": "---+---+++-"
                }
            ],
            "stanza_text": "Jamás murmura de su suerte aleve,\nni se lamenta al sol que la fascina,\nni la cruda intemperie la extermina,\nni la furiosa tempestad la mueve."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "¡Oh beldad! es mayor tu sufrimiento",
                    "metrical_pattern": "--++-+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "que ese tenaz y dilatado muro",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "que circunda tu hermoso pavimento;",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "¡Oh beldad! es mayor tu sufrimiento\nque ese tenaz y dilatado muro\nque circunda tu hermoso pavimento;"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "empero tú eres toda mármol puro,",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": "13",
                    "line_text": "si alma, sin calor, sin sentimiento,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "hecha a los golpes con el hierro duro.",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "empero tú eres toda mármol puro,\nsi alma, sin calor, sin sentimiento,\nhecha a los golpes con el hierro duro."
        }
    ]
}