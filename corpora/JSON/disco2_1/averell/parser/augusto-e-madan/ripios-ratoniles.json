{
    "manually_checked": false,
    "poem_title": "Ripios ratoniles",
    "author": "Augusto E. Madan",
    "poem_alt_title": "Roedores, retened recalcitrantes",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Roedores, retened recalcitrantes",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "rústicos rumorcillos requirentes;",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "repoblando, rebeldes reverentes,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "recónditos rincones rezumantes.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Roedores, retened recalcitrantes\nrústicos rumorcillos requirentes;\nrepoblando, rebeldes reverentes,\nrecónditos rincones rezumantes."
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "Rastreras ratoneras rutilantes",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "reporten ratonismos repelentes,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "rebanando rumiantes reincidentes,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "reprimiendo retozos rechinantes.",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "Rastreras ratoneras rutilantes\nreporten ratonismos repelentes,\nrebanando rumiantes reincidentes,\nreprimiendo retozos rechinantes."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "Rencores resistid reconcentrados,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "republicanas ratas repentistas,",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": "11",
                    "line_text": "rufianes ratoncillos rezagados.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Rencores resistid reconcentrados,\nrepublicanas ratas repentistas,\nrufianes ratoncillos rezagados."
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "Resolviendo reductos rigoristas",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "repuestos roncaréis regocijados,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "¡respetables ratones reformistas!",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "Resolviendo reductos rigoristas\nrepuestos roncaréis regocijados,\n¡respetables ratones reformistas!"
        }
    ]
}