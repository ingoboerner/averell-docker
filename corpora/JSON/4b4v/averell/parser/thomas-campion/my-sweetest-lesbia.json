                {
                    "line_number": 17,
                    "line_text": "And Lesbia, close up thou my little light,",
                    "metrical_pattern": "-+--+-+-+-+",
                    "line_length": null,
                    "foot": null,
                    "metre": null
                },
                {
                    "line_number": 18,
                    "line_text": "And crown with love my ever-during night.",
