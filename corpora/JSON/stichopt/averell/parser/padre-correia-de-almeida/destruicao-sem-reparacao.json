{
    "poem_title": "DESTRUIÇÃO SEM REPARAÇÃO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Go verno Brasileiro",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "que enxergue não direi!",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Derruba-se o pinheiro,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "madeira que é de lei.",
                    "line_length": null
                }
            ],
            "stanza_text": "Go verno Brasileiro\nque enxergue não direi!\nDerruba-se o pinheiro,\nmadeira que é de lei."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "E havendo porção tanta,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "e sobra de pinhões,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "um só não se replanta",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "a bem das construções!",
                    "line_length": null
                }
            ],
            "stanza_text": "E havendo porção tanta,\ne sobra de pinhões,\num só não se replanta\na bem das construções!"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Ocupa-se o governo do presente,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "o bom ou mau porvir nada lhe importa,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "qualquer protesto é nulo e impertinente,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "e quem vier atrás que feche a porta!",
                    "line_length": null
                }
            ],
            "stanza_text": "Ocupa-se o governo do presente,\no bom ou mau porvir nada lhe importa,\nqualquer protesto é nulo e impertinente,\ne quem vier atrás que feche a porta!"
        }
    ]
}