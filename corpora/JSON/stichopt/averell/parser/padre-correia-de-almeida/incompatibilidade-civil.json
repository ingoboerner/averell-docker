{
    "poem_title": "INCOMPATIBILIDADE CIVIL",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ou liberal ou católico,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "o fanático dirá!",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Mas na doutrina da Bíblia",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "tal exclusão não se dá.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ou liberal ou católico,\no fanático dirá!\nMas na doutrina da Bíblia\ntal exclusão não se dá."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Se o restritivo princípio",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "se me quiser hoje impor,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "a Jesus Cristo conteste-se",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "a missão de Redentor.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se o restritivo princípio\nse me quiser hoje impor,\na Jesus Cristo conteste-se\na missão de Redentor."
        }
    ]
}