{
    "poem_title": "PARÁBOLA, O SABIÁ",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "O sabiá, cuja fama",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Provém da afinada goela,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Viu a laranja que o chama,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Porém não cai na esparrela.",
                    "line_length": null
                }
            ],
            "stanza_text": "O sabiá, cuja fama\nProvém da afinada goela,\nViu a laranja que o chama,\nPorém não cai na esparrela."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Que importa! Aquele menino,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Que de José se fez Juca,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Mais que o pássaro ladino,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Lhe arma falaz urupuca.",
                    "line_length": null
                }
            ],
            "stanza_text": "Que importa! Aquele menino,\nQue de José se fez Juca,\nMais que o pássaro ladino,\nLhe arma falaz urupuca."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Assim também nós vivemos",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Entre vários inimigos,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "E é difícil que evitemos",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Toda a sorte de perigos.",
                    "line_length": null
                }
            ],
            "stanza_text": "Assim também nós vivemos\nEntre vários inimigos,\nE é difícil que evitemos\nToda a sorte de perigos."
        }
    ]
}