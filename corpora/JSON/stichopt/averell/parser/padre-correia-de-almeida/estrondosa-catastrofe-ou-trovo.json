{
    "poem_title": "ESTRONDOSA CATÁSTROFE OU TROVOADA SECA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "o perfumado Narciso",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "é formoso sem senão,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "e se tem pouco juízo,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "isso lá eu não sei, não.",
                    "line_length": null
                }
            ],
            "stanza_text": "o perfumado Narciso\né formoso sem senão,\ne se tem pouco juízo,\nisso lá eu não sei, não."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Traz numa casa do peito",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "ou alvíssimo jasmim,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "ou chitado amor-perfeito,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "ou raminho de alecrim.",
                    "line_length": null
                }
            ],
            "stanza_text": "Traz numa casa do peito\nou alvíssimo jasmim,\nou chitado amor-perfeito,\nou raminho de alecrim."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Defronte de umas janelas",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "a cavalo vai passar,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "a fim de mostrar às belas",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "seu desplante cavalar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Defronte de umas janelas\na cavalo vai passar,\na fim de mostrar às belas\nseu desplante cavalar."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Crava as esporas no bruto,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "e há gargalhada geral,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "porque, estando o tempo enxuto...",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "tal et caetera e tal.",
                    "line_length": null
                }
            ],
            "stanza_text": "Crava as esporas no bruto,\ne há gargalhada geral,\nporque, estando o tempo enxuto...\ntal et caetera e tal."
        }
    ]
}