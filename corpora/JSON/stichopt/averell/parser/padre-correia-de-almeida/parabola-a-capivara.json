{
    "poem_title": "PARÁBOLA, A CAPIVARA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Faz residência na terra",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "E no rio a capivara;",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Posição mais vantajosa",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Certamente não achara.",
                    "line_length": null
                }
            ],
            "stanza_text": "Faz residência na terra\nE no rio a capivara;\nPosição mais vantajosa\nCertamente não achara."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Sobe a ribanceira e evita",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "As redes do pescador,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Ligeira mergulha e foge",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Dos tiros do caçador.",
                    "line_length": null
                }
            ],
            "stanza_text": "Sobe a ribanceira e evita\nAs redes do pescador,\nLigeira mergulha e foge\nDos tiros do caçador."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Assim procede o político",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Que os princípios não extrema;",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Calculadamente segue",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Da capivara o sistema.",
                    "line_length": null
                }
            ],
            "stanza_text": "Assim procede o político\nQue os princípios não extrema;\nCalculadamente segue\nDa capivara o sistema."
        }
    ]
}