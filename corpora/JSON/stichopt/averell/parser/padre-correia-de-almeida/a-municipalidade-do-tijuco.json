{
    "poem_title": "À MUNICIPALIDADE DO TIJUCO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Dá testemunho de estímulos",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "de alta nobreza o leão,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "quando respe ita o adversário",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "que vê prostado no chão.",
                    "line_length": null
                }
            ],
            "stanza_text": "Dá testemunho de estímulos\nde alta nobreza o leão,\nquando respe ita o adversário\nque vê prostado no chão."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Porque é bonito, imitemo-lo,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "o exemplo desse animal;",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "racionais sejam discípulos,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "seja mestre o irracional.",
                    "line_length": null
                }
            ],
            "stanza_text": "Porque é bonito, imitemo-lo,\no exemplo desse animal;\nracionais sejam discípulos,\nseja mestre o irracional."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Porém vós, tristes quadrúpedes,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "orelhudos que zurrais,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "já vedes caída a vítima,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "e ainda couces lhe dais!",
                    "line_length": null
                }
            ],
            "stanza_text": "Porém vós, tristes quadrúpedes,\norelhudos que zurrais,\njá vedes caída a vítima,\ne ainda couces lhe dais!"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Fornecestes norma à Câmara",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "que oficiosa insultou",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "a dous Bispos que a tirânica",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "impiedade encarcerou.",
                    "line_length": null
                }
            ],
            "stanza_text": "Fornecestes norma à Câmara\nque oficiosa insultou\na dous Bispos que a tirânica\nimpiedade encarcerou."
        }
    ]
}