{
    "poem_title": "APÓLOGO, O PAPAGAIO ELOQUENTE",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Um papagaio verboso,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "que entre os homens se instruíra,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "da liberdade no gozo",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "à mata se dirigira.",
                    "line_length": null
                }
            ],
            "stanza_text": "Um papagaio verboso,\nque entre os homens se instruíra,\nda liberdade no gozo\nà mata se dirigira."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Vendo-se aí rodeado",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "de muitos da mesma casta,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "orador espevitado,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "bonitas palavras gasta.",
                    "line_length": null
                }
            ],
            "stanza_text": "Vendo-se aí rodeado\nde muitos da mesma casta,\norador espevitado,\nbonitas palavras gasta."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Mas do auditório silvestre",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "não obtendo aplauso algum,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "diz com orgulho de mestre:",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "barbarus hic ego sum!",
                    "line_length": null
                }
            ],
            "stanza_text": "Mas do auditório silvestre\nnão obtendo aplauso algum,\ndiz com orgulho de mestre:\nbarbarus hic ego sum!"
        }
    ]
}