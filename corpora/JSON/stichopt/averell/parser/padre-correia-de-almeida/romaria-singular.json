{
    "poem_title": "ROMARIA SINGULAR",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Certa mulher, sendo vítima",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "de enfermidades medonhas,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "fez voto de ir a Congonhas",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "viajando sem falar!",
                    "line_length": null
                }
            ],
            "stanza_text": "Certa mulher, sendo vítima\nde enfermidades medonhas,\nfez voto de ir a Congonhas\nviajando sem falar!"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Distância de muitas léguas",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "de frequentados caminhos",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "separava Matozinhos",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "da devota e do seu lar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Distância de muitas léguas\nde frequentados caminhos\nseparava Matozinhos\nda devota e do seu lar."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "o valor do sacrifício,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "se foi cumprida a promessa,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "não é cousa que se meça,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "nem se pode calcular.",
                    "line_length": null
                }
            ],
            "stanza_text": "o valor do sacrifício,\nse foi cumprida a promessa,\nnão é cousa que se meça,\nnem se pode calcular."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Virá no martirológio",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "lá pelo tempo adiante",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "esta mártir viajante,",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "mulher que soube calar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Virá no martirológio\nlá pelo tempo adiante\nesta mártir viajante,\nmulher que soube calar."
        }
    ]
}