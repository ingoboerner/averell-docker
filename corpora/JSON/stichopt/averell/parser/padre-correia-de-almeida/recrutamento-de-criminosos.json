{
    "poem_title": "RECRUTAMENTO DE CRIMINOSOS",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "De péssimo caráter o peralta",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "É bêbado, vadio, faz desordens,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "É ladrão formigueiro?",
                    "line_length": null
                }
            ],
            "stanza_text": "De péssimo caráter o peralta\nÉ bêbado, vadio, faz desordens,\nÉ ladrão formigueiro?"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 4,
                    "line_text": "Do código improfícuo inúteis penas",
                    "line_length": null
                },
                {
                    "line_number": 5,
                    "line_text": "Não serão corretivo que o detenha",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Na vereda do crime.",
                    "line_length": null
                }
            ],
            "stanza_text": "Do código improfícuo inúteis penas\nNão serão corretivo que o detenha\nNa vereda do crime."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Sem dilações, nem fórmulas morosas,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Processo mui sumário segue-se hoje",
                    "line_length": null
                },
                {
                    "line_number": 9,
                    "line_text": "Contra o réu de polícia.",
                    "line_length": null
                }
            ],
            "stanza_text": "Sem dilações, nem fórmulas morosas,\nProcesso mui sumário segue-se hoje\nContra o réu de polícia."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 10,
                    "line_text": "Uma farda, espingarda, e munições,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Penacho, barretina, e correame,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Punem bem seus delitos.",
                    "line_length": null
                }
            ],
            "stanza_text": "Uma farda, espingarda, e munições,\nPenacho, barretina, e correame,\nPunem bem seus delitos."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "E assim é que se formam as coortes",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Que defendem noss’honra e nossos foros,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "A pátria, as leis, e o trono.",
                    "line_length": null
                }
            ],
            "stanza_text": "E assim é que se formam as coortes\nQue defendem noss’honra e nossos foros,\nA pátria, as leis, e o trono."
        }
    ]
}