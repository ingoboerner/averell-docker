{
    "poem_title": "APÓLOGO, A ABOBREIRA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Quis a lei da natureza",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Que a vegetal abobreira,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Qual a serpente abatida,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Fosse uma planta rasteira.",
                    "line_length": null
                }
            ],
            "stanza_text": "Quis a lei da natureza\nQue a vegetal abobreira,\nQual a serpente abatida,\nFosse uma planta rasteira."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Ela se arrasta, é verdade;",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Mas, quando pode arrimar-se,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Abandona o chão que é seu,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Trata logo de elevar-se.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ela se arrasta, é verdade;\nMas, quando pode arrimar-se,\nAbandona o chão que é seu,\nTrata logo de elevar-se."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Quebranta da natureza",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "As invioláveis obras;",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Deixa pender lá de cima",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Os frutos, que são abobras.",
                    "line_length": null
                }
            ],
            "stanza_text": "Quebranta da natureza\nAs invioláveis obras;\nDeixa pender lá de cima\nOs frutos, que são abobras."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Não se nota isto somente",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Nesse reino vegetal;",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Há certa classe de gente",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Abobreira racional.",
                    "line_length": null
                }
            ],
            "stanza_text": "Não se nota isto somente\nNesse reino vegetal;\nHá certa classe de gente\nAbobreira racional."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Ela se arrasta, é verdade;",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Mas, quando pode arrimar-se,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Abandona o chão que é seu,",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Trata logo de elevar-se.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ela se arrasta, é verdade;\nMas, quando pode arrimar-se,\nAbandona o chão que é seu,\nTrata logo de elevar-se."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Então lá de cima pendem",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Os frutos de suas obras;",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Porém de gente abobreira",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Os frutos são sempre abobras!",
                    "line_length": null
                }
            ],
            "stanza_text": "Então lá de cima pendem\nOs frutos de suas obras;\nPorém de gente abobreira\nOs frutos são sempre abobras!"
        }
    ]
}