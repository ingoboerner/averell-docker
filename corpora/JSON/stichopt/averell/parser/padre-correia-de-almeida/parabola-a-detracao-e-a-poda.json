{
    "poem_title": "PARÁBOLA, A DETRAÇÃO E A PODA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Seguindo o instinto",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Mau, que o impele,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "O detrator",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Corta na pele.",
                    "line_length": null
                }
            ],
            "stanza_text": "Seguindo o instinto\nMau, que o impele,\nO detrator\nCorta na pele."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Aferra o dente,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Dente de cobra,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Que tem peçonha",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Muita e de sobra.",
                    "line_length": null
                }
            ],
            "stanza_text": "Aferra o dente,\nDente de cobra,\nQue tem peçonha\nMuita e de sobra."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "É qual tesoura",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Bem afiada",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "A língua dele,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Língua danada.",
                    "line_length": null
                }
            ],
            "stanza_text": "É qual tesoura\nBem afiada\nA língua dele,\nLíngua danada."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Sucede às vezes",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Ao varão justo,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "O que sucede",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "A um arbusto.",
                    "line_length": null
                }
            ],
            "stanza_text": "Sucede às vezes\nAo varão justo,\nO que sucede\nA um arbusto."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Quando é podado",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Para brotar,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "E saborosos",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Frutos nos dar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Quando é podado\nPara brotar,\nE saborosos\nFrutos nos dar."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Fazem-lhe a poda,",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Dão-lhe vigor",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "As más palavras",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Do detrator.",
                    "line_length": null
                }
            ],
            "stanza_text": "Fazem-lhe a poda,\nDão-lhe vigor\nAs más palavras\nDo detrator."
        }
    ]
}