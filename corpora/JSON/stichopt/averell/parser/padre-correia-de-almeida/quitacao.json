{
    "poem_title": "QUITAÇÃO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Sustentam — que não é furto",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "filar músicas e gatos,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "porém desses desacatos",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "a liberdade eu encurto.",
                    "line_length": null
                }
            ],
            "stanza_text": "Sustentam — que não é furto\nfilar músicas e gatos,\nporém desses desacatos\na liberdade eu encurto."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "o mestre José dos Passos,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "passados quatro ou cinco anos,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "restitui-me, envolta em panos,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "certa música aos pedaços.",
                    "line_length": null
                }
            ],
            "stanza_text": "o mestre José dos Passos,\npassados quatro ou cinco anos,\nrestitui-me, envolta em panos,\ncerta música aos pedaços."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Antes tarde de que nunca!",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Viva pois, Deus o permita,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "o Passos, que não imita",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "filantes de mão adunca.",
                    "line_length": null
                }
            ],
            "stanza_text": "Antes tarde de que nunca!\nViva pois, Deus o permita,\no Passos, que não imita\nfilantes de mão adunca."
        }
    ]
}