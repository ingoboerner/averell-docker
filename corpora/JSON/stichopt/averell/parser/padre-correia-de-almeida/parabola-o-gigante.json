{
    "poem_title": "PARÁBOLA, O GIGANTE",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "De altíssima estatura,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Por maior que pareça",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Aquele homenzarrão,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Lá em cima na cabeça",
                    "line_length": null
                },
                {
                    "line_number": 5,
                    "line_text": "Não há muita fartura",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "De miolo ou razão.",
                    "line_length": null
                }
            ],
            "stanza_text": "De altíssima estatura,\nPor maior que pareça\nAquele homenzarrão,\nLá em cima na cabeça\nNão há muita fartura\nDe miolo ou razão."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Casa de muitos andares,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Deste homem lembrar-me faz;",
                    "line_length": null
                },
                {
                    "line_number": 9,
                    "line_text": "No mirante, se buscares,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Pouca mobília acharás.",
                    "line_length": null
                }
            ],
            "stanza_text": "Casa de muitos andares,\nDeste homem lembrar-me faz;\nNo mirante, se buscares,\nPouca mobília acharás."
        }
    ]
}