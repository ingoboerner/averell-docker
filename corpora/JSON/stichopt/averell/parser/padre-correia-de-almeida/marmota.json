{
    "poem_title": "MARMOTA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Toda a gente séria e honesta,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "da boa sociedade,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "faça algum reparo nesta",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "jovem de tanta beldade!",
                    "line_length": null
                }
            ],
            "stanza_text": "Toda a gente séria e honesta,\nda boa sociedade,\nfaça algum reparo nesta\njovem de tanta beldade!"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Por excesso de inocência",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "a menina se decota,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "e só lhe enxerga indecência",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "maliciosa Maricota.",
                    "line_length": null
                }
            ],
            "stanza_text": "Por excesso de inocência\na menina se decota,\ne só lhe enxerga indecência\nmaliciosa Maricota."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Se a honra o bom pai lhe zela,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "será justo que ele impida",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "que a puríssima donzela",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "se apresente assim despida?",
                    "line_length": null
                }
            ],
            "stanza_text": "Se a honra o bom pai lhe zela,\nserá justo que ele impida\nque a puríssima donzela\nse apresente assim despida?"
        }
    ]
}