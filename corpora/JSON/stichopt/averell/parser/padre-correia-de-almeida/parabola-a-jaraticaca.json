{
    "poem_title": "PARÁBOLA, A JARATICACA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "É cousa assaz confirmada",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "que miasma se destaca",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "da imunda jaraticaca,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "quando se vê acossada.",
                    "line_length": null
                }
            ],
            "stanza_text": "É cousa assaz confirmada\nque miasma se destaca\nda imunda jaraticaca,\nquando se vê acossada."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "De tão asquerosa fera",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "por não suportar o cheiro,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "galgo, podengo ou rafeiro",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "as próprias ventas lacera!",
                    "line_length": null
                }
            ],
            "stanza_text": "De tão asquerosa fera\npor não suportar o cheiro,\ngalgo, podengo ou rafeiro\nas próprias ventas lacera!"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "O falador desbocado,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "que os bons costumes ataca,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "ou seja ou não provocado,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "faz mais que a jaraticaca.",
                    "line_length": null
                }
            ],
            "stanza_text": "O falador desbocado,\nque os bons costumes ataca,\nou seja ou não provocado,\nfaz mais que a jaraticaca."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Sem respeito à pudicícia,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "sem reparar com quem fala,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "a pestilente imundícia",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "pela boca se lhe exala.",
                    "line_length": null
                }
            ],
            "stanza_text": "Sem respeito à pudicícia,\nsem reparar com quem fala,\na pestilente imundícia\npela boca se lhe exala."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Da palavra que tresanda",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "pra não lhe ouvir os sonidos",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "convém-me de banda a banda",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "meter um pau nos ouvidos.",
                    "line_length": null
                }
            ],
            "stanza_text": "Da palavra que tresanda\npra não lhe ouvir os sonidos\nconvém-me de banda a banda\nmeter um pau nos ouvidos."
        }
    ]
}