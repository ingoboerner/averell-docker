{
    "poem_title": "PARÁBOLA, O PERUM",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Cheio de si e de vento,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Faz roda inchado perum;",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Depois serve de alimento,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Que é seu mérito comum.",
                    "line_length": null
                }
            ],
            "stanza_text": "Cheio de si e de vento,\nFaz roda inchado perum;\nDepois serve de alimento,\nQue é seu mérito comum."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "O homem que se enfatua,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Como o perum, faz assim;",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Porém morre, e a carne sua",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "De vermes é pasto enfim.",
                    "line_length": null
                }
            ],
            "stanza_text": "O homem que se enfatua,\nComo o perum, faz assim;\nPorém morre, e a carne sua\nDe vermes é pasto enfim."
        }
    ]
}