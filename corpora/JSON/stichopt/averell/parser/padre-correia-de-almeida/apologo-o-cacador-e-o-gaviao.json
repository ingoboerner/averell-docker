{
    "poem_title": "APÓLOGO, O CAÇADOR E O GAVIÃO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Um caçador, homem grave,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "atirou à codorniz,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "e ao cair a inocente ave,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "já se tinha por feliz.",
                    "line_length": null
                }
            ],
            "stanza_text": "Um caçador, homem grave,\natirou à codorniz,\ne ao cair a inocente ave,\njá se tinha por feliz."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Mas um gavião à espreita,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "ouvindo o tiro roncar,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "a ligeireza aproveita,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "e agarra a caça no ar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Mas um gavião à espreita,\nouvindo o tiro roncar,\na ligeireza aproveita,\ne agarra a caça no ar."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "E com razão diz ufano:",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "ladrão que furta a ladrão,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "meu caçador desumano,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "tem cem anos de perdão.",
                    "line_length": null
                }
            ],
            "stanza_text": "E com razão diz ufano:\nladrão que furta a ladrão,\nmeu caçador desumano,\ntem cem anos de perdão."
        }
    ]
}