{
    "poem_title": "SÚPLICA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ó Jesus Cristo,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Ó tu meu Deus,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Atende, escuta",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Os rogos meus.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ó Jesus Cristo,\nÓ tu meu Deus,\nAtende, escuta\nOs rogos meus."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Por piedade,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Por compaixão,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Inspira e toca",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Meu coração.",
                    "line_length": null
                }
            ],
            "stanza_text": "Por piedade,\nPor compaixão,\nInspira e toca\nMeu coração."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Tenho pecado",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Por malvadez,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "E bem conheço",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Que sou má rês.",
                    "line_length": null
                }
            ],
            "stanza_text": "Tenho pecado\nPor malvadez,\nE bem conheço\nQue sou má rês."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Porém apelo",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Do teu rigor",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Para a sentença",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Do teu amor.",
                    "line_length": null
                }
            ],
            "stanza_text": "Porém apelo\nDo teu rigor\nPara a sentença\nDo teu amor."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Amor imenso,",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Ó bom Jesus,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Que pelos homens",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Levou-te à cruz.",
                    "line_length": null
                }
            ],
            "stanza_text": "Amor imenso,\nÓ bom Jesus,\nQue pelos homens\nLevou-te à cruz."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Se purgam culpas",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Do pecador,",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Venham angústias,",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "E venha a dor.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se purgam culpas\nDo pecador,\nVenham angústias,\nE venha a dor."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Eu me resigno",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Ao teu querer,",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "E me ofereço",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Para sofrer.",
                    "line_length": null
                }
            ],
            "stanza_text": "Eu me resigno\nAo teu querer,\nE me ofereço\nPara sofrer."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Nem eu ignoro,",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "Supremo bem,",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "Que a santa graça",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "De ti provém.",
                    "line_length": null
                }
            ],
            "stanza_text": "Nem eu ignoro,\nSupremo bem,\nQue a santa graça\nDe ti provém."
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Mas se a faísca",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "Da contrição",
                    "line_length": null
                },
                {
                    "line_number": 35,
                    "line_text": "Tu não acendes",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "No coração,",
                    "line_length": null
                }
            ],
            "stanza_text": "Mas se a faísca\nDa contrição\nTu não acendes\nNo coração,"
        },
        {
            "stanza_type": null,
            "stanza_number": 10,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Eu filho de Eva",
                    "line_length": null
                },
                {
                    "line_number": 38,
                    "line_text": "Triste mortal,",
                    "line_length": null
                },
                {
                    "line_number": 39,
                    "line_text": "Cego me abismo",
                    "line_length": null
                },
                {
                    "line_number": 40,
                    "line_text": "No eterno mal.",
                    "line_length": null
                }
            ],
            "stanza_text": "Eu filho de Eva\nTriste mortal,\nCego me abismo\nNo eterno mal."
        },
        {
            "stanza_type": null,
            "stanza_number": 11,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Hei de importuno",
                    "line_length": null
                },
                {
                    "line_number": 42,
                    "line_text": "Pedir, até",
                    "line_length": null
                },
                {
                    "line_number": 43,
                    "line_text": "Que fortaleças",
                    "line_length": null
                },
                {
                    "line_number": 44,
                    "line_text": "A minha fé.",
                    "line_length": null
                }
            ],
            "stanza_text": "Hei de importuno\nPedir, até\nQue fortaleças\nA minha fé."
        },
        {
            "stanza_type": null,
            "stanza_number": 12,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Não me condenes,",
                    "line_length": null
                },
                {
                    "line_number": 46,
                    "line_text": "Ó sumo Bem,",
                    "line_length": null
                },
                {
                    "line_number": 47,
                    "line_text": "Salva minh’alma",
                    "line_length": null
                },
                {
                    "line_number": 48,
                    "line_text": "Amém, amém.",
                    "line_length": null
                }
            ],
            "stanza_text": "Não me condenes,\nÓ sumo Bem,\nSalva minh’alma\nAmém, amém."
        }
    ]
}