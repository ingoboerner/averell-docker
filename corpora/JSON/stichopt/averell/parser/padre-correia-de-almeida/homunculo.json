{
    "poem_title": "HOMÚNCULO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Certo importuno,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "loquaz pigmeu,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "é na estatura",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "meio Zaqueu.",
                    "line_length": null
                }
            ],
            "stanza_text": "Certo importuno,\nloquaz pigmeu,\né na estatura\nmeio Zaqueu."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "É tudo curto",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "naquele anão,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "curtos dedinhos",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "em cada mão.",
                    "line_length": null
                }
            ],
            "stanza_text": "É tudo curto\nnaquele anão,\ncurtos dedinhos\nem cada mão."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "De polegada",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "talvez não é",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "o comprimento",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "de cada pé.",
                    "line_length": null
                }
            ],
            "stanza_text": "De polegada\ntalvez não é\no comprimento\nde cada pé."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Se lhe tosquiam",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "bem rente a lã,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "finge a cabeça",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "uma avelã.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se lhe tosquiam\nbem rente a lã,\nfinge a cabeça\numa avelã."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "É perereca",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "na voz ruim,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "e é nos trejeitos",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "como o saguim.",
                    "line_length": null
                }
            ],
            "stanza_text": "É perereca\nna voz ruim,\ne é nos trejeitos\ncomo o saguim."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Usa quartola",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "este neném,",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "trazendo a carga",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "como a quem-quem.",
                    "line_length": null
                }
            ],
            "stanza_text": "Usa quartola\neste neném,\ntrazendo a carga\ncomo a quem-quem."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Muitos conheço",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "de corpo anões,",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "que não têm n’alma",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "nenhuns senões.",
                    "line_length": null
                }
            ],
            "stanza_text": "Muitos conheço\nde corpo anões,\nque não têm n’alma\nnenhuns senões."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Se eles são regra,",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "seja exceção",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "este contraste",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "do homenzarrão.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se eles são regra,\nseja exceção\neste contraste\ndo homenzarrão."
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Por ter corpinho,",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "não é que é mau;",
                    "line_length": null
                },
                {
                    "line_number": 35,
                    "line_text": "cavalo grande,",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "besta de pau.",
                    "line_length": null
                }
            ],
            "stanza_text": "Por ter corpinho,\nnão é que é mau;\ncavalo grande,\nbesta de pau."
        },
        {
            "stanza_type": null,
            "stanza_number": 10,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Mas é de alminha",
                    "line_length": null
                },
                {
                    "line_number": 38,
                    "line_text": "tal este herói",
                    "line_length": null
                },
                {
                    "line_number": 39,
                    "line_text": "que das desgraças",
                    "line_length": null
                },
                {
                    "line_number": 40,
                    "line_text": "não se condói.",
                    "line_length": null
                }
            ],
            "stanza_text": "Mas é de alminha\ntal este herói\nque das desgraças\nnão se condói."
        },
        {
            "stanza_type": null,
            "stanza_number": 11,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Este homem zero",
                    "line_length": null
                },
                {
                    "line_number": 42,
                    "line_text": "tem coração?",
                    "line_length": null
                },
                {
                    "line_number": 43,
                    "line_text": "Quem o auscultasse",
                    "line_length": null
                },
                {
                    "line_number": 44,
                    "line_text": "diria: não.",
                    "line_length": null
                }
            ],
            "stanza_text": "Este homem zero\ntem coração?\nQuem o auscultasse\ndiria: não."
        },
        {
            "stanza_type": null,
            "stanza_number": 12,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Inteligência",
                    "line_length": null
                },
                {
                    "line_number": 46,
                    "line_text": "ele não tem,",
                    "line_length": null
                },
                {
                    "line_number": 47,
                    "line_text": "e, se o duvidam,",
                    "line_length": null
                },
                {
                    "line_number": 48,
                    "line_text": "a prova aí vem:",
                    "line_length": null
                }
            ],
            "stanza_text": "Inteligência\nele não tem,\ne, se o duvidam,\na prova aí vem:"
        },
        {
            "stanza_type": null,
            "stanza_number": 13,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Quanto ao presente",
                    "line_length": null
                },
                {
                    "line_number": 50,
                    "line_text": "nada nos diz,",
                    "line_length": null
                },
                {
                    "line_number": 51,
                    "line_text": "e, noves fora,",
                    "line_length": null
                },
                {
                    "line_number": 52,
                    "line_text": "dispensa o giz",
                    "line_length": null
                }
            ],
            "stanza_text": "Quanto ao presente\nnada nos diz,\ne, noves fora,\ndispensa o giz"
        },
        {
            "stanza_type": null,
            "stanza_number": 14,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "Suas ideias",
                    "line_length": null
                },
                {
                    "line_number": 54,
                    "line_text": "quanto ao porvir",
                    "line_length": null
                },
                {
                    "line_number": 55,
                    "line_text": "são parvoíces",
                    "line_length": null
                },
                {
                    "line_number": 56,
                    "line_text": "que fazem rir.",
                    "line_length": null
                }
            ],
            "stanza_text": "Suas ideias\nquanto ao porvir\nsão parvoíces\nque fazem rir."
        },
        {
            "stanza_type": null,
            "stanza_number": 15,
            "lines": [
                {
                    "line_number": 57,
                    "line_text": "Suas lembranças,",
                    "line_length": null
                },
                {
                    "line_number": 58,
                    "line_text": "quanto ao que foi,",
                    "line_length": null
                },
                {
                    "line_number": 59,
                    "line_text": "parecem palhas",
                    "line_length": null
                },
                {
                    "line_number": 60,
                    "line_text": "que engole o boi.",
                    "line_length": null
                }
            ],
            "stanza_text": "Suas lembranças,\nquanto ao que foi,\nparecem palhas\nque engole o boi."
        },
        {
            "stanza_type": null,
            "stanza_number": 16,
            "lines": [
                {
                    "line_number": 61,
                    "line_text": "A homeopatia,",
                    "line_length": null
                },
                {
                    "line_number": 62,
                    "line_text": "que os nadas vê,",
                    "line_length": null
                },
                {
                    "line_number": 63,
                    "line_text": "colha este argueiro,",
                    "line_length": null
                },
                {
                    "line_number": 64,
                    "line_text": "valor lhe dê.",
                    "line_length": null
                }
            ],
            "stanza_text": "A homeopatia,\nque os nadas vê,\ncolha este argueiro,\nvalor lhe dê."
        },
        {
            "stanza_type": null,
            "stanza_number": 17,
            "lines": [
                {
                    "line_number": 65,
                    "line_text": "Globulozinho",
                    "line_length": null
                },
                {
                    "line_number": 66,
                    "line_text": "menor não há",
                    "line_length": null
                },
                {
                    "line_number": 67,
                    "line_text": "do que o pequeno",
                    "line_length": null
                },
                {
                    "line_number": 68,
                    "line_text": "Gil Vaz de Sá.",
                    "line_length": null
                }
            ],
            "stanza_text": "Globulozinho\nmenor não há\ndo que o pequeno\nGil Vaz de Sá."
        }
    ]
}