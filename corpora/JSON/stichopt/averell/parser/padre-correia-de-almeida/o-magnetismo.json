{
    "poem_title": "O MAGNETISMO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "— Quem jaz o mais, jaz o menos —",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "É princípio que se toma",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Em lógica rigorosa",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Por evidente axioma.",
                    "line_length": null
                }
            ],
            "stanza_text": "— Quem jaz o mais, jaz o menos —\nÉ princípio que se toma\nEm lógica rigorosa\nPor evidente axioma."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Não é pois maravilhoso",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Se o Galeno magnetiza,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "E soprando o sono lânguido,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "De Morreu o cetro pisa.",
                    "line_length": null
                }
            ],
            "stanza_text": "Não é pois maravilhoso\nSe o Galeno magnetiza,\nE soprando o sono lânguido,\nDe Morreu o cetro pisa."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Breve sono passageiro",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Pode dar mui facilmente",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Quem por oficio e por hábito",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Faz dormir eternamente.",
                    "line_length": null
                }
            ],
            "stanza_text": "Breve sono passageiro\nPode dar mui facilmente\nQuem por oficio e por hábito\nFaz dormir eternamente."
        }
    ]
}