{
    "poem_title": "PRÓLOGO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Rebelde consoante,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "ao absurdo me obrigas!",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Por ti (ninguém se espante)",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "são brancas as formigas!",
                    "line_length": null
                }
            ],
            "stanza_text": "Rebelde consoante,\nao absurdo me obrigas!\nPor ti (ninguém se espante)\nsão brancas as formigas!"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Fazendo, como vedes,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "acinte à pobre rima,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "a ironia, que ledes,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "no espírito não prima.",
                    "line_length": null
                }
            ],
            "stanza_text": "Fazendo, como vedes,\nacinte à pobre rima,\na ironia, que ledes,\nno espírito não prima."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Com jeito arrombareis um formigueiro,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "sem terdes de quebrar seguras trancas,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "e então vereis se é caso verdadeiro",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "existirem aí formigas brancas.",
                    "line_length": null
                }
            ],
            "stanza_text": "Com jeito arrombareis um formigueiro,\nsem terdes de quebrar seguras trancas,\ne então vereis se é caso verdadeiro\nexistirem aí formigas brancas."
        }
    ]
}