{
    "poem_title": "O PINTASSILGO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Sobre a verde bananeira",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "O pintassilgo donoso",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "O canto melodioso",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Preludia na garganta,",
                    "line_length": null
                },
                {
                    "line_number": 5,
                    "line_text": "E nos encanta,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Nos extasia,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Suave, amena,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Doce harmonia.",
                    "line_length": null
                }
            ],
            "stanza_text": "Sobre a verde bananeira\nO pintassilgo donoso\nO canto melodioso\nPreludia na garganta,\nE nos encanta,\nNos extasia,\nSuave, amena,\nDoce harmonia."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "O canoro pintassilgo",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Na região cabralina",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "É o enlevo da campina,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "É dos pomares o mimo,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Pousa no cimo",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "De excelso tronco,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Melhor gorjeia",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Que o merlo bronco.",
                    "line_length": null
                }
            ],
            "stanza_text": "O canoro pintassilgo\nNa região cabralina\nÉ o enlevo da campina,\nÉ dos pomares o mimo,\nPousa no cimo\nDe excelso tronco,\nMelhor gorjeia\nQue o merlo bronco."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "O sabiá melancólico",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "É modulador completo,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Porém o meu predileto",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "É o pintassilgo-do-prado:",
                    "line_length": null
                },
                {
                    "line_number": 21,
                    "line_text": "Desprende o brado,",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Vence, derriba,",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Leva de rojo",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "A Apatatiba.",
                    "line_length": null
                }
            ],
            "stanza_text": "O sabiá melancólico\nÉ modulador completo,\nPorém o meu predileto\nÉ o pintassilgo-do-prado:\nDesprende o brado,\nVence, derriba,\nLeva de rojo\nA Apatatiba."
        }
    ]
}