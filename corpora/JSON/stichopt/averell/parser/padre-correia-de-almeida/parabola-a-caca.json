{
    "poem_title": "PARÁBOLA, A CAÇA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "O caçador persegue",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "A ribeirinha paca,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "É vítima do bote",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Da cobra jararaca.",
                    "line_length": null
                }
            ],
            "stanza_text": "O caçador persegue\nA ribeirinha paca,\nÉ vítima do bote\nDa cobra jararaca."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Tentava contra os dias",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Do animal inocente,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Absorveu a peçonha",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Da brasília serpente.",
                    "line_length": null
                }
            ],
            "stanza_text": "Tentava contra os dias\nDo animal inocente,\nAbsorveu a peçonha\nDa brasília serpente."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Fiel daguerreótipo",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Da triste humanidade,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Este fato singelo",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Contém moralidade:",
                    "line_length": null
                }
            ],
            "stanza_text": "Fiel daguerreótipo\nDa triste humanidade,\nEste fato singelo\nContém moralidade:"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "É o homem entre os homens",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Caçador de ruim sorte;",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Persegue o fraco, e é vítima",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Do astuto ou do mais forte.",
                    "line_length": null
                }
            ],
            "stanza_text": "É o homem entre os homens\nCaçador de ruim sorte;\nPersegue o fraco, e é vítima\nDo astuto ou do mais forte."
        }
    ]
}