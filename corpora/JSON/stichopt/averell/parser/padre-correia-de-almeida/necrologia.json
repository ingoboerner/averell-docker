{
    "poem_title": "NECROLOGIA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Oh Santo Breve de Marca,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Que grande calamidade!",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Que desgraça tão comprida,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Que larga infelicidade!",
                    "line_length": null
                }
            ],
            "stanza_text": "Oh Santo Breve de Marca,\nQue grande calamidade!\nQue desgraça tão comprida,\nQue larga infelicidade!"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Oh morte, tirana morte,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Ao golpe de tua fouce",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Desta para melhor vida",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Dom Pascácio retirou-se.",
                    "line_length": null
                }
            ],
            "stanza_text": "Oh morte, tirana morte,\nAo golpe de tua fouce\nDesta para melhor vida\nDom Pascácio retirou-se."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Que fato extraordinário",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Sucedido em nossos dias,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Morrer de morte macaca",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Pascácio das Ninharias!",
                    "line_length": null
                }
            ],
            "stanza_text": "Que fato extraordinário\nSucedido em nossos dias,\nMorrer de morte macaca\nPascácio das Ninharias!"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "A dor me ofusca a razão,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Meu juízo se ataranta,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Retrocede a voz dos lábios,",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "E aperta o nó da garganta.",
                    "line_length": null
                }
            ],
            "stanza_text": "A dor me ofusca a razão,\nMeu juízo se ataranta,\nRetrocede a voz dos lábios,\nE aperta o nó da garganta."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Não tenho lágrimas para",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Chorar perda tão funesta,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "E agora que a voz recobro,",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Só posso dizer: — E esta!? —",
                    "line_length": null
                }
            ],
            "stanza_text": "Não tenho lágrimas para\nChorar perda tão funesta,\nE agora que a voz recobro,\nSó posso dizer: — E esta!? —"
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Meu velho amigo Pascácio,",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Pascácio das Ninharias,",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Encheu tão rapidamente",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "A medida de seus dias!",
                    "line_length": null
                }
            ],
            "stanza_text": "Meu velho amigo Pascácio,\nPascácio das Ninharias,\nEncheu tão rapidamente\nA medida de seus dias!"
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Não pensem que Dom Pascácio",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Era vil mortal obscuro;",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "Que seu nome sem renome",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Há de ficar no monturo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Não pensem que Dom Pascácio\nEra vil mortal obscuro;\nQue seu nome sem renome\nHá de ficar no monturo."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Foi bom filho de seus pais,",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "Bom marido da mulher,",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "Inda melhor pai de filhos,",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "E acredite-o quem quiser.",
                    "line_length": null
                }
            ],
            "stanza_text": "Foi bom filho de seus pais,\nBom marido da mulher,\nInda melhor pai de filhos,\nE acredite-o quem quiser."
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Ocupou vários empregos",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "De popular eleição;",
                    "line_length": null
                },
                {
                    "line_number": 35,
                    "line_text": "A política o nomeou",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "Inspetor de quarteirão.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ocupou vários empregos\nDe popular eleição;\nA política o nomeou\nInspetor de quarteirão."
        },
        {
            "stanza_type": null,
            "stanza_number": 10,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Nos tribunais exercia",
                    "line_length": null
                },
                {
                    "line_number": 38,
                    "line_text": "O ofício de contador;",
                    "line_length": null
                },
                {
                    "line_number": 39,
                    "line_text": "Da Irmandade do Rosário",
                    "line_length": null
                },
                {
                    "line_number": 40,
                    "line_text": "Também foi procurador.",
                    "line_length": null
                }
            ],
            "stanza_text": "Nos tribunais exercia\nO ofício de contador;\nDa Irmandade do Rosário\nTambém foi procurador."
        },
        {
            "stanza_type": null,
            "stanza_number": 11,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Em críticas circunstâncias,",
                    "line_length": null
                },
                {
                    "line_number": 42,
                    "line_text": "Em muito apertada quadra,",
                    "line_length": null
                },
                {
                    "line_number": 43,
                    "line_text": "Reinando ociosa paz,",
                    "line_length": null
                },
                {
                    "line_number": 44,
                    "line_text": "Serviu de cabo de esquadra!",
                    "line_length": null
                }
            ],
            "stanza_text": "Em críticas circunstâncias,\nEm muito apertada quadra,\nReinando ociosa paz,\nServiu de cabo de esquadra!"
        },
        {
            "stanza_type": null,
            "stanza_number": 12,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Por aqui se vê sem dúvida",
                    "line_length": null
                },
                {
                    "line_number": 46,
                    "line_text": "A falta que há de fazer",
                    "line_length": null
                },
                {
                    "line_number": 47,
                    "line_text": "Dom Pascácio, que morreu",
                    "line_length": null
                },
                {
                    "line_number": 48,
                    "line_text": "Porque deixou de viver!",
                    "line_length": null
                }
            ],
            "stanza_text": "Por aqui se vê sem dúvida\nA falta que há de fazer\nDom Pascácio, que morreu\nPorque deixou de viver!"
        },
        {
            "stanza_type": null,
            "stanza_number": 13,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Os concidadãos lamentam,",
                    "line_length": null
                },
                {
                    "line_number": 50,
                    "line_text": "E a família muito mais;",
                    "line_length": null
                },
                {
                    "line_number": 51,
                    "line_text": "Pelos becos e travessas",
                    "line_length": null
                },
                {
                    "line_number": 52,
                    "line_text": "Não se ouvem senão — ais! —",
                    "line_length": null
                }
            ],
            "stanza_text": "Os concidadãos lamentam,\nE a família muito mais;\nPelos becos e travessas\nNão se ouvem senão — ais! —"
        },
        {
            "stanza_type": null,
            "stanza_number": 14,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "Ai daqui, ai dacolá,",
                    "line_length": null
                },
                {
                    "line_number": 54,
                    "line_text": "Soluços, prantos, gemidos,",
                    "line_length": null
                },
                {
                    "line_number": 55,
                    "line_text": "Luto na roupa, e nas caras,",
                    "line_length": null
                },
                {
                    "line_number": 56,
                    "line_text": "Choros tristes e carpidos.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ai daqui, ai dacolá,\nSoluços, prantos, gemidos,\nLuto na roupa, e nas caras,\nChoros tristes e carpidos."
        },
        {
            "stanza_type": null,
            "stanza_number": 15,
            "lines": [
                {
                    "line_number": 57,
                    "line_text": "No Diário e Mercantil",
                    "line_length": null
                },
                {
                    "line_number": 58,
                    "line_text": "Formigam necrologias",
                    "line_length": null
                },
                {
                    "line_number": 59,
                    "line_text": "Dizendo todas: — morreu",
                    "line_length": null
                },
                {
                    "line_number": 60,
                    "line_text": "Pascácio das Ninharias! —",
                    "line_length": null
                }
            ],
            "stanza_text": "No Diário e Mercantil\nFormigam necrologias\nDizendo todas: — morreu\nPascácio das Ninharias! —"
        },
        {
            "stanza_type": null,
            "stanza_number": 16,
            "lines": [
                {
                    "line_number": 61,
                    "line_text": "O mundo inteiro deseja",
                    "line_length": null
                },
                {
                    "line_number": 62,
                    "line_text": "Ler a vida do defunto,",
                    "line_length": null
                },
                {
                    "line_number": 63,
                    "line_text": "Feitos ilustres que atestam",
                    "line_length": null
                },
                {
                    "line_number": 64,
                    "line_text": "A extensão de seu bestunto.",
                    "line_length": null
                }
            ],
            "stanza_text": "O mundo inteiro deseja\nLer a vida do defunto,\nFeitos ilustres que atestam\nA extensão de seu bestunto."
        },
        {
            "stanza_type": null,
            "stanza_number": 17,
            "lines": [
                {
                    "line_number": 65,
                    "line_text": "Aqui jaz o Dom Pascácio!...",
                    "line_length": null
                },
                {
                    "line_number": 66,
                    "line_text": "No sepulcro o amigo escreve",
                    "line_length": null
                },
                {
                    "line_number": 67,
                    "line_text": "Um punhado de cevada,",
                    "line_length": null
                },
                {
                    "line_number": 68,
                    "line_text": "E a terra lhe seja leve.",
                    "line_length": null
                }
            ],
            "stanza_text": "Aqui jaz o Dom Pascácio!...\nNo sepulcro o amigo escreve\nUm punhado de cevada,\nE a terra lhe seja leve."
        }
    ]
}