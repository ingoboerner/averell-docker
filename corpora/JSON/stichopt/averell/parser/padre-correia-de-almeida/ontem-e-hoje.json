{
    "poem_title": "ONTEM E HOJE",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Engodo da fantasia,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Ilusão, credulidade,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Palavra especulativa,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Quimérica Liberdade!",
                    "line_length": null
                }
            ],
            "stanza_text": "Engodo da fantasia,\nIlusão, credulidade,\nPalavra especulativa,\nQuimérica Liberdade!"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Se, melífluo termo, adoças",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "O cativeiro de agora,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Era mais ordeiro e plácido",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "O cativeiro de outrora.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se, melífluo termo, adoças\nO cativeiro de agora,\nEra mais ordeiro e plácido\nO cativeiro de outrora."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Porque o vassalo, ciente",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Das garantias do escravo,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Curva ao cutelo a cerviz,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Não procura desagravo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Porque o vassalo, ciente\nDas garantias do escravo,\nCurva ao cutelo a cerviz,\nNão procura desagravo."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Inda assim eu não quisera",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Ordeiros tempos de outrora,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Pelos quais eu não trocara",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Revoltos tempos de agora.",
                    "line_length": null
                }
            ],
            "stanza_text": "Inda assim eu não quisera\nOrdeiros tempos de outrora,\nPelos quais eu não trocara\nRevoltos tempos de agora."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Adornada de ouro e púrpura",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Hodierna tirania,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Erguida pelos carolas",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Num ardor de hipocrisia.",
                    "line_length": null
                }
            ],
            "stanza_text": "Adornada de ouro e púrpura\nHodierna tirania,\nErguida pelos carolas\nNum ardor de hipocrisia."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Não merece equiparar-se,",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Por leve comparação,",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Ao canonizado Santo",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Tribunal da Inquisição,",
                    "line_length": null
                }
            ],
            "stanza_text": "Não merece equiparar-se,\nPor leve comparação,\nAo canonizado Santo\nTribunal da Inquisição,"
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Que funcionou nesses tempos,",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Ordeiros tempos de outrora,",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "Pelos quais eu não trocara",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Revoltos tempos de agora.",
                    "line_length": null
                }
            ],
            "stanza_text": "Que funcionou nesses tempos,\nOrdeiros tempos de outrora,\nPelos quais eu não trocara\nRevoltos tempos de agora."
        }
    ]
}