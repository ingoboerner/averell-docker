{
    "poem_title": "MUDEZ VERBOSA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Em catre um tanto declive",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "eu esta noite dormia,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "e uma grande aflição tive,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "que não se i de que seria!",
                    "line_length": null
                }
            ],
            "stanza_text": "Em catre um tanto declive\neu esta noite dormia,\ne uma grande aflição tive,\nque não se i de que seria!"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Acordo e solto tal grito,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "que toda casa se abala!",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Meu Deus! exclamei aflito,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "acaso estou eu sem fala?!",
                    "line_length": null
                }
            ],
            "stanza_text": "Acordo e solto tal grito,\nque toda casa se abala!\nMeu Deus! exclamei aflito,\nacaso estou eu sem fala?!"
        }
    ]
}