{
    "poem_title": "FÁBULA, O MACACO E O GATO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Cozinheiro enfumaçado",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "esqueceu-se do trabalho,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "e abandonou a cozinha,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "quando assava no borralho",
                    "line_length": null
                },
                {
                    "line_number": 5,
                    "line_text": "apetitosa sardinha.",
                    "line_length": null
                }
            ],
            "stanza_text": "Cozinheiro enfumaçado\nesqueceu-se do trabalho,\ne abandonou a cozinha,\nquando assava no borralho\napetitosa sardinha."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 6,
                    "line_text": "Veio água à boca ao macaco,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "e astucioso e brejeiro,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "apesar de seu bom tato,",
                    "line_length": null
                },
                {
                    "line_number": 9,
                    "line_text": "para tirar do braseiro",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "antes quis a mão do gato.",
                    "line_length": null
                }
            ],
            "stanza_text": "Veio água à boca ao macaco,\ne astucioso e brejeiro,\napesar de seu bom tato,\npara tirar do braseiro\nantes quis a mão do gato."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Neste e naquele partido",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "muito político vejo",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "que, pronto para gozar,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "na manha simula o pejo,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "e foge de se arriscar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Neste e naquele partido\nmuito político vejo\nque, pronto para gozar,\nna manha simula o pejo,\ne foge de se arriscar."
        }
    ]
}