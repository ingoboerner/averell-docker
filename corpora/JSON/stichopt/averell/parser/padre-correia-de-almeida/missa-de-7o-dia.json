{
    "poem_title": "MISSA DE 7º DIA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Se ontem não crias em nada",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "que é da Santa Madre Igreja,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "tua crença hoje sobeja",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "nos convites abonada.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se ontem não crias em nada\nque é da Santa Madre Igreja,\ntua crença hoje sobeja\nnos convites abonada."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "O desígnio se descobre!",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Mandas dizer na Abadia",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Missa de sétimo dia",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "por alma de rico nobre!",
                    "line_length": null
                }
            ],
            "stanza_text": "O desígnio se descobre!\nMandas dizer na Abadia\nMissa de sétimo dia\npor alma de rico nobre!"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Com severa compostura",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "apresentas-te de luto,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "e pagas pio tributo,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "orando na sepultura!",
                    "line_length": null
                }
            ],
            "stanza_text": "Com severa compostura\napresentas-te de luto,\ne pagas pio tributo,\norando na sepultura!"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Quando a graça de Deus inda não desça,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "há muito herdeiro aí que te agradeça!",
                    "line_length": null
                }
            ],
            "stanza_text": "Quando a graça de Deus inda não desça,\nhá muito herdeiro aí que te agradeça!"
        }
    ]
}