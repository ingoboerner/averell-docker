{
    "poem_title": "PARÁBOLA, A GIRAFA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Se observam a desmarcada",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Girafa ou Giratacachem",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "já conto que de pancada",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "só este préstimo lhe achem:",
                    "line_length": null
                }
            ],
            "stanza_text": "Se observam a desmarcada\nGirafa ou Giratacachem\njá conto que de pancada\nsó este préstimo lhe achem:"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "tem o pescoço tão alto,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "que nos coqueiros bonitos,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "sem trepar e sem dar salto,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "devora os tenros palmitos.",
                    "line_length": null
                }
            ],
            "stanza_text": "tem o pescoço tão alto,\nque nos coqueiros bonitos,\nsem trepar e sem dar salto,\ndevora os tenros palmitos."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "É da Pátria benemérito",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "um tal filho que ela estima,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "e eu só lhe desculpa o mérito",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "de pastar lá muito em cima!",
                    "line_length": null
                }
            ],
            "stanza_text": "É da Pátria benemérito\num tal filho que ela estima,\ne eu só lhe desculpa o mérito\nde pastar lá muito em cima!"
        }
    ]
}