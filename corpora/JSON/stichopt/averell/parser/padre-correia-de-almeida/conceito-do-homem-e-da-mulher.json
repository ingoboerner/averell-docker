{
    "poem_title": "CONCEITO DO HOMEM E DA MULHER",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Para julgar a mulher",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "O homem é mau juiz",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Acusador muito injusto,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "E parcial no que diz.",
                    "line_length": null
                }
            ],
            "stanza_text": "Para julgar a mulher\nO homem é mau juiz\nAcusador muito injusto,\nE parcial no que diz."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Se a matrona respeitável",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Uma só falta comete,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Logo o árbitro suspeito",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Atribui-lhe seis ou sete.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se a matrona respeitável\nUma só falta comete,\nLogo o árbitro suspeito\nAtribui-lhe seis ou sete."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Quando Deus estabelece",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Punição para os pecados,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Não faz distinção de sexos",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Para serem castigados.",
                    "line_length": null
                }
            ],
            "stanza_text": "Quando Deus estabelece\nPunição para os pecados,\nNão faz distinção de sexos\nPara serem castigados."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Mas vemos que se reprova",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "O que pratica a mulher,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "E que se desculpa no homem,",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Se aquilo mesmo fizer.",
                    "line_length": null
                }
            ],
            "stanza_text": "Mas vemos que se reprova\nO que pratica a mulher,\nE que se desculpa no homem,\nSe aquilo mesmo fizer."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Que grande número de homens",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Não se desvia da es trada",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Dos deveres e da honra,",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Por demais abandonada?",
                    "line_length": null
                }
            ],
            "stanza_text": "Que grande número de homens\nNão se desvia da es trada\nDos deveres e da honra,\nPor demais abandonada?"
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "E gozam conceito público,",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Ilesa reputação;",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "São honrados porque no homem",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Não há prostituição.",
                    "line_length": null
                }
            ],
            "stanza_text": "E gozam conceito público,\nIlesa reputação;\nSão honrados porque no homem\nNão há prostituição."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Pode o homem praticar",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Todo e qualquer desatino;",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "Há de ser sempre inocente,",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Como o inocente menino.",
                    "line_length": null
                }
            ],
            "stanza_text": "Pode o homem praticar\nTodo e qualquer desatino;\nHá de ser sempre inocente,\nComo o inocente menino."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "E a delicada mulher,",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "Fraca e frágil criatura,",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "Há de ser sempre acusada",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "Com injustiça a mais dura.",
                    "line_length": null
                }
            ],
            "stanza_text": "E a delicada mulher,\nFraca e frágil criatura,\nHá de ser sempre acusada\nCom injustiça a mais dura."
        }
    ]
}