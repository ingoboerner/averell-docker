{
    "poem_title": "PARÁBOLA, O PATO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Não há dúvida que o pato",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Pertence à classe das aves,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Mas de corpo feio e chato",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Seus voos não são suaves.",
                    "line_length": null
                }
            ],
            "stanza_text": "Não há dúvida que o pato\nPertence à classe das aves,\nMas de corpo feio e chato\nSeus voos não são suaves."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Quando discorre",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Mau orador,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Isto me ocorre",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Em seu louvor.",
                    "line_length": null
                }
            ],
            "stanza_text": "Quando discorre\nMau orador,\nIsto me ocorre\nEm seu louvor."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Fico indignado",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Se acaso aí vem",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Um-apoiado",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Ou — muito bem.",
                    "line_length": null
                }
            ],
            "stanza_text": "Fico indignado\nSe acaso aí vem\nUm-apoiado\nOu — muito bem."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Tu, insensato,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Que aplausos dás,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Voos de pato",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Aplaudirás.",
                    "line_length": null
                }
            ],
            "stanza_text": "Tu, insensato,\nQue aplausos dás,\nVoos de pato\nAplaudirás."
        }
    ]
}