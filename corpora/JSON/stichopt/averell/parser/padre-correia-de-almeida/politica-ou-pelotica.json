{
    "poem_title": "POLÍTICA OU PELOTICA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Um dos partidos",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Defende o trono,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Cetro e coroa",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Do régio dono.",
                    "line_length": null
                }
            ],
            "stanza_text": "Um dos partidos\nDefende o trono,\nCetro e coroa\nDo régio dono."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Mas o outro enxerga",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Males e dano,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "E até se inculca",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Republicano.",
                    "line_length": null
                }
            ],
            "stanza_text": "Mas o outro enxerga\nMales e dano,\nE até se inculca\nRepublicano."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Mudem-se as cenas,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Gozos, vantagens,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Vereis mudadas",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Suas linguagens.",
                    "line_length": null
                }
            ],
            "stanza_text": "Mudem-se as cenas,\nGozos, vantagens,\nVereis mudadas\nSuas linguagens."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Já não defende",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Aquele o trono,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Cetro, coroa,",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Nem régio dono.",
                    "line_length": null
                }
            ],
            "stanza_text": "Já não defende\nAquele o trono,\nCetro, coroa,\nNem régio dono."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Nem o outro enxerga",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Males e dano,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Nem mais se inculca",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Republicano.",
                    "line_length": null
                }
            ],
            "stanza_text": "Nem o outro enxerga\nMales e dano,\nNem mais se inculca\nRepublicano."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Se variarem",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Gozos, vantagens,",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Inda variam",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Suas linguagens.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se variarem\nGozos, vantagens,\nInda variam\nSuas linguagens."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Tenha o Governo",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Boa tarracha,",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "Que os patriotas",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "São de borracha.",
                    "line_length": null
                }
            ],
            "stanza_text": "Tenha o Governo\nBoa tarracha,\nQue os patriotas\nSão de borracha."
        }
    ]
}