{
    "poem_title": "O SUPÉRFLUO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Por que tu guardas,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Ó rico avaro,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Enquanto o pobre",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Compra tão caro?",
                    "line_length": null
                }
            ],
            "stanza_text": "Por que tu guardas,\nÓ rico avaro,\nEnquanto o pobre\nCompra tão caro?"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Por que tu guardas",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Supérfluo tanto,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Se o pobre verte",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Da fome o pranto?",
                    "line_length": null
                }
            ],
            "stanza_text": "Por que tu guardas\nSupérfluo tanto,\nSe o pobre verte\nDa fome o pranto?"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Quem dá ao pobre",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "O que lhe sobra,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Na vida eterna",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Os juros cobra.",
                    "line_length": null
                }
            ],
            "stanza_text": "Quem dá ao pobre\nO que lhe sobra,\nNa vida eterna\nOs juros cobra."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Faze que o pobre",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Quebre o jejum,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "E ganharás",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Cento por um.",
                    "line_length": null
                }
            ],
            "stanza_text": "Faze que o pobre\nQuebre o jejum,\nE ganharás\nCento por um."
        }
    ]
}