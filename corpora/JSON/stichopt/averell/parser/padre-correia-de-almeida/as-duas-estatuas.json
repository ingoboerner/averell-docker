{
    "poem_title": "AS DUAS ESTÁTUAS",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "No tempo do inumano despotismo",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "era o Brasil colônia portuguesa;",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "depois (salvo qualquer anacronismo)",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "tornou-se independente com certeza.",
                    "line_length": null
                }
            ],
            "stanza_text": "No tempo do inumano despotismo\nera o Brasil colônia portuguesa;\ndepois (salvo qualquer anacronismo)\ntornou-se independente com certeza."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "A pátria agradecida hoje levanta",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "duas brônzeas estátuas diferentes,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "e o duplo monumento não me espanta,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "nem fere nossos brios indolentes.",
                    "line_length": null
                }
            ],
            "stanza_text": "A pátria agradecida hoje levanta\nduas brônzeas estátuas diferentes,\ne o duplo monumento não me espanta,\nnem fere nossos brios indolentes."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Nos símbolos não há nenhum abuso!",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "O Brasileiro a pé faz a jornada,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "a cavalo se vê ainda o Luso!",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Independência bem simbolizada.",
                    "line_length": null
                }
            ],
            "stanza_text": "Nos símbolos não há nenhum abuso!\nO Brasileiro a pé faz a jornada,\na cavalo se vê ainda o Luso!\nIndependência bem simbolizada."
        }
    ]
}