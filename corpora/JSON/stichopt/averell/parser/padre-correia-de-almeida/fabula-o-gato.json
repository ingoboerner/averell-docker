{
    "poem_title": "FÁBULA, O GATO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Recendia sobre a mesa",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "frito, gostoso piau,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "e esquecendo-se do rato,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "dizia um gato: miau.",
                    "line_length": null
                }
            ],
            "stanza_text": "Recendia sobre a mesa\nfrito, gostoso piau,\ne esquecendo-se do rato,\ndizia um gato: miau."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Que abandone seus deveres",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "muito malandro haverá,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "enquanto se lhe depare",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "quem lhe prepare o papá.",
                    "line_length": null
                }
            ],
            "stanza_text": "Que abandone seus deveres\nmuito malandro haverá,\nenquanto se lhe depare\nquem lhe prepare o papá."
        }
    ]
}