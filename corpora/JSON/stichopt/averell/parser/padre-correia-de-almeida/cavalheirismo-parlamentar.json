{
    "poem_title": "CAVALHEIRISMO PARLAMENTAR",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ninguém tenha o louco intento",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "de achar criminalidade",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "num membro do parlamento,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "quando há lei de imunidade.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ninguém tenha o louco intento\nde achar criminalidade\nnum membro do parlamento,\nquando há lei de imunidade."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Seguro nessa trincheira,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "largamente generoso,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "contra vós diz quanto queira,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "sem terdes o mesmo gozo!",
                    "line_length": null
                }
            ],
            "stanza_text": "Seguro nessa trincheira,\nlargamente generoso,\ncontra vós diz quanto queira,\nsem terdes o mesmo gozo!"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Este contrato se lavra",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "com jornal subvencionado:",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "que não se aceite palavra",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "contra imune Deputado!",
                    "line_length": null
                }
            ],
            "stanza_text": "Este contrato se lavra\ncom jornal subvencionado:\nque não se aceite palavra\ncontra imune Deputado!"
        }
    ]
}