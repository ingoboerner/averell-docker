{
    "poem_title": "PARÁBOLA, A JACA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Há muita fruta de estima,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "laranja, pera, mangaba,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "melancia, limão, lima,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "ananás, jabuticaba.",
                    "line_length": null
                }
            ],
            "stanza_text": "Há muita fruta de estima,\nlaranja, pera, mangaba,\nmelancia, limão, lima,\nananás, jabuticaba."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Em questão de primazia,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "o sabor é sobre tudo;",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "a fruta não se aprecia",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "pelo volume bojudo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Em questão de primazia,\no sabor é sobre tudo;\na fruta não se aprecia\npelo volume bojudo."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Uma tal de arroba e meia,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "ou de mais, chamada Jaca,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "se achais que é boa, comei-a;",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "não vale meia pataca.",
                    "line_length": null
                }
            ],
            "stanza_text": "Uma tal de arroba e meia,\nou de mais, chamada Jaca,\nse achais que é boa, comei-a;\nnão vale meia pataca."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Nunca se julgue do mérito",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "de um homem pela figura;",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "pode ter dotes de espírito,",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "e ser de baixa estatura.",
                    "line_length": null
                }
            ],
            "stanza_text": "Nunca se julgue do mérito\nde um homem pela figura;\npode ter dotes de espírito,\ne ser de baixa estatura."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Esse, de curta ciência,",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "que com empregos se atraca,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "em corpo e ambição é máximo;",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "se fosse fruta, era jaca.",
                    "line_length": null
                }
            ],
            "stanza_text": "Esse, de curta ciência,\nque com empregos se atraca,\nem corpo e ambição é máximo;\nse fosse fruta, era jaca."
        }
    ]
}