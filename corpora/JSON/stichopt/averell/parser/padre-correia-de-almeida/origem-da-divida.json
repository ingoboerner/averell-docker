{
    "poem_title": "ORIGEM DA DÍVIDA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Matronaça casquilho na,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "cujo nome é Belarmina,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "quando já é cinquentona,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "ainda quer ser menina!",
                    "line_length": null
                }
            ],
            "stanza_text": "Matronaça casquilho na,\ncujo nome é Belarmina,\nquando já é cinquentona,\nainda quer ser menina!"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Assentando em retratar-se",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "na melhor fotografia",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "nunca pôde contentar-se",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "coo retrato que saía.",
                    "line_length": null
                }
            ],
            "stanza_text": "Assentando em retratar-se\nna melhor fotografia\nnunca pôde contentar-se\ncoo retrato que saía."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Achou escuro o primeiro,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "claro demais o segundo,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "enxergou no derradeiro",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "não sei o que lá no fundo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Achou escuro o primeiro,\nclaro demais o segundo,\nenxergou no derradeiro\nnão sei o que lá no fundo."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Mas estas razões, que dava,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "não passavam de pretexto;",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "a cópia não lhe agradava",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "só por ser fiel ao texto.",
                    "line_length": null
                }
            ],
            "stanza_text": "Mas estas razões, que dava,\nnão passavam de pretexto;\na cópia não lhe agradava\nsó por ser fiel ao texto."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Deixou de pagar à vista,",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "por pirraça ou desafogo,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "ao hábil fotografista,",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "o qual se chama Diogo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Deixou de pagar à vista,\npor pirraça ou desafogo,\nao hábil fotografista,\no qual se chama Diogo."
        }
    ]
}