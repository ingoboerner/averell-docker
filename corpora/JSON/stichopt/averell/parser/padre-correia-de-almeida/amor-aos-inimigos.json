{
    "poem_title": "AMOR AOS INIMIGOS",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "“Amai ao próprio",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Vosso inimigo,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Que só destarte",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Sereis comigo.",
                    "line_length": null
                }
            ],
            "stanza_text": "“Amai ao próprio\nVosso inimigo,\nQue só destarte\nSereis comigo."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Sem distinção",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Fazei o bem",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Àquele que",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Ódio vos tem.",
                    "line_length": null
                }
            ],
            "stanza_text": "Sem distinção\nFazei o bem\nÀquele que\nÓdio vos tem."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Rogai a Deus",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "De noite ou dia",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Por esse que",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Vos calunia.”",
                    "line_length": null
                }
            ],
            "stanza_text": "Rogai a Deus\nDe noite ou dia\nPor esse que\nVos calunia.”"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "O bom Jesus",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Assim nos disse,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Recomendou",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Que se cumprisse.",
                    "line_length": null
                }
            ],
            "stanza_text": "O bom Jesus\nAssim nos disse,\nRecomendou\nQue se cumprisse."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Triste daquele",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Que recusar",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Este preceito",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Desempenhar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Triste daquele\nQue recusar\nEste preceito\nDesempenhar."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "A morte chega",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Ou cedo ou tarde;",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "No fogo eterno",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Seu corpo arde.",
                    "line_length": null
                }
            ],
            "stanza_text": "A morte chega\nOu cedo ou tarde;\nNo fogo eterno\nSeu corpo arde."
        }
    ]
}