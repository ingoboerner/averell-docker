{
    "poem_title": "A BIBLIOTECA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Fui visitar",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Um literato,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Que fala em Pope,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "E lê Torquato.",
                    "line_length": null
                }
            ],
            "stanza_text": "Fui visitar\nUm literato,\nQue fala em Pope,\nE lê Torquato."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Tive de ver",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "A livraria,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Biblioteca",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "De Alexandria.",
                    "line_length": null
                }
            ],
            "stanza_text": "Tive de ver\nA livraria,\nBiblioteca\nDe Alexandria."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Entrei na sala",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Que os livros conta,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Fico aturdido,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Cabeça tonta.",
                    "line_length": null
                }
            ],
            "stanza_text": "Entrei na sala\nQue os livros conta,\nFico aturdido,\nCabeça tonta."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Bem colocados",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Tantos volumes",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Estão em pilhas,",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "’Stão em cardumes.",
                    "line_length": null
                }
            ],
            "stanza_text": "Bem colocados\nTantos volumes\nEstão em pilhas,\n’Stão em cardumes."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Concerto os óc’los",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Para ver bem,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Procuro os títulos",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Que os livros têm.",
                    "line_length": null
                }
            ],
            "stanza_text": "Concerto os óc’los\nPara ver bem,\nProcuro os títulos\nQue os livros têm."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Ligeiro avanço",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Para o primeiro,",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "E vejo que",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Não tem letreiro.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ligeiro avanço\nPara o primeiro,\nE vejo que\nNão tem letreiro."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Desprendo a capa",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "(Que maroteira!)",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "Era uma folha",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "De bananeira.",
                    "line_length": null
                }
            ],
            "stanza_text": "Desprendo a capa\n(Que maroteira!)\nEra uma folha\nDe bananeira."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "E dentro dela",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "(Caso estupendo!)",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "Cheio de espanto",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "O que estou vendo?",
                    "line_length": null
                }
            ],
            "stanza_text": "E dentro dela\n(Caso estupendo!)\nCheio de espanto\nO que estou vendo?"
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "(História digna",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "De ser contada!)",
                    "line_length": null
                },
                {
                    "line_number": 35,
                    "line_text": "Um bom tijolo",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "De goiabada.",
                    "line_length": null
                }
            ],
            "stanza_text": "(História digna\nDe ser contada!)\nUm bom tijolo\nDe goiabada."
        }
    ]
}