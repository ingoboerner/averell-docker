{
    "poem_title": "CONGRESSO DOS LAVRADORES",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Pois que só ao cafeísta",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "dá-se entrada no congresso,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "eu, plantador de batatas,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "de fora a palavra peço.",
                    "line_length": null
                }
            ],
            "stanza_text": "Pois que só ao cafeísta\ndá-se entrada no congresso,\neu, plantador de batatas,\nde fora a palavra peço."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Nobre Senhor Presidente,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Ministro da Agricultura,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "felicitar a lavoura",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "louvarei a quem procura.",
                    "line_length": null
                }
            ],
            "stanza_text": "Nobre Senhor Presidente,\nMinistro da Agricultura,\nfelicitar a lavoura\nlouvarei a quem procura."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Assim ouça Vosselência",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "meu elogio sincero,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "e conceda faculdade",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "para eu dizer o que quero.",
                    "line_length": null
                }
            ],
            "stanza_text": "Assim ouça Vosselência\nmeu elogio sincero,\ne conceda faculdade\npara eu dizer o que quero."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "obedeço às vozes de ordem,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "pois, como filho de Minas,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "não devo ser mais pintado",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "que o vigário de Campinas.",
                    "line_length": null
                }
            ],
            "stanza_text": "obedeço às vozes de ordem,\npois, como filho de Minas,\nnão devo ser mais pintado\nque o vigário de Campinas."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Em seu maduro improviso,",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "suculento, sem bagaços,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "disse o compadre Manduca",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "que à lavoura faltam braços.",
                    "line_length": null
                }
            ],
            "stanza_text": "Em seu maduro improviso,\nsuculento, sem bagaços,\ndisse o compadre Manduca\nque à lavoura faltam braços."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "E eu ajunto causa digna",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "de luminárias eternas:",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "os braços não faltariam,",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "se não sobrassem as pernas.",
                    "line_length": null
                }
            ],
            "stanza_text": "E eu ajunto causa digna\nde luminárias eternas:\nos braços não faltariam,\nse não sobrassem as pernas."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "E com efeito estas enchem",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "as ruas, becos e praças,",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "sendo mãe a ociosidade",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "dos vícios e das desgraças.",
                    "line_length": null
                }
            ],
            "stanza_text": "E com efeito estas enchem\nas ruas, becos e praças,\nsendo mãe a ociosidade\ndos vícios e das desgraças."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Na mente do Alferes Quincas",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "o capital é que falta,",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "porém cá no meu bestunto",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "eis que esta razão me assalta:",
                    "line_length": null
                }
            ],
            "stanza_text": "Na mente do Alferes Quincas\no capital é que falta,\nporém cá no meu bestunto\neis que esta razão me assalta:"
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Convençam-se os lavradores!",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "O seu excessivo luxo",
                    "line_length": null
                },
                {
                    "line_number": 35,
                    "line_text": "é o mais funesto dos males",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "para a bolsa e para o bucho.",
                    "line_length": null
                }
            ],
            "stanza_text": "Convençam-se os lavradores!\nO seu excessivo luxo\né o mais funesto dos males\npara a bolsa e para o bucho."
        },
        {
            "stanza_type": null,
            "stanza_number": 10,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Não há tal falta de braços,",
                    "line_length": null
                },
                {
                    "line_number": 38,
                    "line_text": "nem mais dinheiro é preciso;",
                    "line_length": null
                },
                {
                    "line_number": 39,
                    "line_text": "nobre Senhor Presidente,",
                    "line_length": null
                },
                {
                    "line_number": 40,
                    "line_text": "o que nos falta é juízo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Não há tal falta de braços,\nnem mais dinheiro é preciso;\nnobre Senhor Presidente,\no que nos falta é juízo."
        }
    ]
}