{
    "poem_title": "PARÁBOLA, AS MAITACAS",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Se quatrocentas maitacas",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "no pinheiro estão pousadas,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "uma só voz não destacas",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "das vozes destemperadas.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se quatrocentas maitacas\nno pinheiro estão pousadas,\numa só voz não destacas\ndas vozes destemperadas."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Meia dúzia de mulheres,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "reunidas numa sala,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "escuta-as tu, se o puderes,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "pois nenhuma então se cala.",
                    "line_length": null
                }
            ],
            "stanza_text": "Meia dúzia de mulheres,\nreunidas numa sala,\nescuta-as tu, se o puderes,\npois nenhuma então se cala."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Sérios leitores não pensem",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "que da hipérbole se abusa:",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "as maitacas não as vencem",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "na gritaria confusa.",
                    "line_length": null
                }
            ],
            "stanza_text": "Sérios leitores não pensem\nque da hipérbole se abusa:\nas maitacas não as vencem\nna gritaria confusa."
        }
    ]
}