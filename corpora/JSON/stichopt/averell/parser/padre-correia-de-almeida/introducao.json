{
    "poem_title": "INTRODUÇÃO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ginete, ou magro sendeiro,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Celebérrimo pegaso,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Não me recuses o estribo,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "E conduze-me ao Parnaso.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ginete, ou magro sendeiro,\nCelebérrimo pegaso,\nNão me recuses o estribo,\nE conduze-me ao Parnaso."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Leva-me à tal Hipocrene,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Que, se não é patarata,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Tu fizeste rebentar",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Do rasto de tua pata.",
                    "line_length": null
                }
            ],
            "stanza_text": "Leva-me à tal Hipocrene,\nQue, se não é patarata,\nTu fizeste rebentar\nDo rasto de tua pata."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Vou beber inspirações",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Nas auras daquele monte;",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Inspirações vou beber",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Nas águas daquela fonte;",
                    "line_length": null
                }
            ],
            "stanza_text": "Vou beber inspirações\nNas auras daquele monte;\nInspirações vou beber\nNas águas daquela fonte;"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Que o poeta que verseja",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Não sendo inspirado assim,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Poeta será talvez,",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Mas poeta muito ruim.",
                    "line_length": null
                }
            ],
            "stanza_text": "Que o poeta que verseja\nNão sendo inspirado assim,\nPoeta será talvez,\nMas poeta muito ruim."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "De encantadora Marília",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Dirceu que narre os amores;",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Jacte-se da inveja que",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Tinham-lhe os outros pastores.",
                    "line_length": null
                }
            ],
            "stanza_text": "De encantadora Marília\nDirceu que narre os amores;\nJacte-se da inveja que\nTinham-lhe os outros pastores."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Outro gênio que memore",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Belos primores de cá;",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "As palmeiras do Brasil,",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Onde canta o sabiá.",
                    "line_length": null
                }
            ],
            "stanza_text": "Outro gênio que memore\nBelos primores de cá;\nAs palmeiras do Brasil,\nOnde canta o sabiá."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Distribui a natureza",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Dotes por arbítrio seu;",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "Sentimental meigo, e temo",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Nunca o foi o verso meu.",
                    "line_length": null
                }
            ],
            "stanza_text": "Distribui a natureza\nDotes por arbítrio seu;\nSentimental meigo, e temo\nNunca o foi o verso meu."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Nega-lhe a suave doçura",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "O mimoso abacaxi;",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "Picante sabor empresta-lhe",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "A pimenta comari.",
                    "line_length": null
                }
            ],
            "stanza_text": "Nega-lhe a suave doçura\nO mimoso abacaxi;\nPicante sabor empresta-lhe\nA pimenta comari."
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Nem turíbulo, nem duetos",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "Aos que dominam a terra;",
                    "line_length": null
                },
                {
                    "line_number": 35,
                    "line_text": "Nem quartel ao vício torpe,",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "Guerra, guerra, outra vez, guerra.",
                    "line_length": null
                }
            ],
            "stanza_text": "Nem turíbulo, nem duetos\nAos que dominam a terra;\nNem quartel ao vício torpe,\nGuerra, guerra, outra vez, guerra."
        },
        {
            "stanza_type": null,
            "stanza_number": 10,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Dos louvores da lisonja",
                    "line_length": null
                },
                {
                    "line_number": 38,
                    "line_text": "Desvio meu pensamento;",
                    "line_length": null
                },
                {
                    "line_number": 39,
                    "line_text": "Somente ao Deus dos exércitos",
                    "line_length": null
                },
                {
                    "line_number": 40,
                    "line_text": "Hosana tem cabimento.",
                    "line_length": null
                }
            ],
            "stanza_text": "Dos louvores da lisonja\nDesvio meu pensamento;\nSomente ao Deus dos exércitos\nHosana tem cabimento."
        }
    ]
}