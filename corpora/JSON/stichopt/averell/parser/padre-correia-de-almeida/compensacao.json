{
    "poem_title": "COMPENSAÇÃO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Dizem lá naquela terra",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "que esta província de Minas",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "para os apertos da guerra",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "só deu forças pequeninas.",
                    "line_length": null
                }
            ],
            "stanza_text": "Dizem lá naquela terra\nque esta província de Minas\npara os apertos da guerra\nsó deu forças pequeninas."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Seja assim, porém ao menos",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "não é ré de outros delitos;",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "grandes, médios ou pequenos",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "ela não causa conflitos.",
                    "line_length": null
                }
            ],
            "stanza_text": "Seja assim, porém ao menos\nnão é ré de outros delitos;\ngrandes, médios ou pequenos\nela não causa conflitos."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Explorando o grão tesouro",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "do território mineiro,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "milhares de arrobas d’ouro",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "leva daqui o estrangeiro.",
                    "line_length": null
                }
            ],
            "stanza_text": "Explorando o grão tesouro\ndo território mineiro,\nmilhares de arrobas d’ouro\nleva daqui o estrangeiro."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Por nossas longas estradas",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "não se lhes têm dado assalto,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "e as remessas mal guardadas",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "falam por nós, e bem alto.",
                    "line_length": null
                }
            ],
            "stanza_text": "Por nossas longas estradas\nnão se lhes têm dado assalto,\ne as remessas mal guardadas\nfalam por nós, e bem alto."
        }
    ]
}