{
    "poem_title": "RAZÃO POUCO LISONJEIRA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "No baile, minha senhora,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "não se despreza a etiqueta,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "nem cortesias penhora",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "lapuz de grossa jaqueta.",
                    "line_length": null
                }
            ],
            "stanza_text": "No baile, minha senhora,\nnão se despreza a etiqueta,\nnem cortesias penhora\nlapuz de grossa jaqueta."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Vai perguntar jovem linda",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "a Diogo Madureira",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "se Sua Excelência ainda",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "não tem par para a primeira.",
                    "line_length": null
                }
            ],
            "stanza_text": "Vai perguntar jovem linda\na Diogo Madureira\nse Sua Excelência ainda\nnão tem par para a primeira."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "o homem ’stava disponível,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "aceita o honroso convite;",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "do favor não é possível",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "considerar-se ele quite.",
                    "line_length": null
                }
            ],
            "stanza_text": "o homem ’stava disponível,\naceita o honroso convite;\ndo favor não é possível\nconsiderar-se ele quite."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Convidar tem sido dado,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "neste caso, ao cavalheiro;",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "pela dama convidado",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Diogo foi o primeiro.",
                    "line_length": null
                }
            ],
            "stanza_text": "Convidar tem sido dado,\nneste caso, ao cavalheiro;\npela dama convidado\nDiogo foi o primeiro."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "No intervalo da quadrilha",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "é de açúcar a palavra,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "e, vencendo a prata, brilha,",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "qual ouro da melhor lavra.",
                    "line_length": null
                }
            ],
            "stanza_text": "No intervalo da quadrilha\né de açúcar a palavra,\ne, vencendo a prata, brilha,\nqual ouro da melhor lavra."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "— Discreta jovem, consinta",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "que minha ousadia inquira:",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "porque o costume desminta",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "quem para a dança me tira?",
                    "line_length": null
                }
            ],
            "stanza_text": "— Discreta jovem, consinta\nque minha ousadia inquira:\nporque o costume desminta\nquem para a dança me tira?"
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "— Motivo assaz cauteloso",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "deveis enxergar naquilo!",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "Meu marido é mui zeloso,",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "e assim ficará tranquilo.",
                    "line_length": null
                }
            ],
            "stanza_text": "— Motivo assaz cauteloso\ndeveis enxergar naquilo!\nMeu marido é mui zeloso,\ne assim ficará tranquilo."
        }
    ]
}