{
    "poem_title": "APÓLOGO, AS TOUPEIRAS E A ÁGUIA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Reunidas as toupeiras",
                    "line_length": "7"
                },
                {
                    "line_number": 2,
                    "line_text": "Em certo lugar da terra,",
                    "line_length": "7"
                },
                {
                    "line_number": 3,
                    "line_text": "Decidem fazer à águia",
                    "line_length": "7"
                },
                {
                    "line_number": 4,
                    "line_text": "Desabrida e crua guerra.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Reunidas as toupeiras\nEm certo lugar da terra,\nDecidem fazer à águia\nDesabrida e crua guerra."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Neste propósito assaltam",
                    "line_length": "7"
                },
                {
                    "line_number": 6,
                    "line_text": "De chofre o pássaro altivo,",
                    "line_length": "7"
                },
                {
                    "line_number": 7,
                    "line_text": "Contando tê-lo seguro,",
                    "line_length": "7"
                },
                {
                    "line_number": 8,
                    "line_text": "Seja morto ou seja vivo.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Neste propósito assaltam\nDe chofre o pássaro altivo,\nContando tê-lo seguro,\nSeja morto ou seja vivo."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Então este bate as asas",
                    "line_length": "7"
                },
                {
                    "line_number": 10,
                    "line_text": "Por livrar-se da aliança,",
                    "line_length": "7"
                },
                {
                    "line_number": 11,
                    "line_text": "E se remonta onde a fúria",
                    "line_length": "7"
                },
                {
                    "line_number": 12,
                    "line_text": "Das toupeiras não alcança.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Então este bate as asas\nPor livrar-se da aliança,\nE se remonta onde a fúria\nDas toupeiras não alcança."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Entre os homens também há",
                    "line_length": "7"
                },
                {
                    "line_number": 14,
                    "line_text": "Toupeiras que fazem guerra,",
                    "line_length": "7"
                },
                {
                    "line_number": 15,
                    "line_text": "O pior é não subirem",
                    "line_length": "7"
                },
                {
                    "line_number": 16,
                    "line_text": "Um palmo acima da terra.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Entre os homens também há\nToupeiras que fazem guerra,\nO pior é não subirem\nUm palmo acima da terra."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Como a águia, habita o gênio",
                    "line_length": "7"
                },
                {
                    "line_number": 18,
                    "line_text": "Nas altas sobranceiras;",
                    "line_length": "7"
                },
                {
                    "line_number": 19,
                    "line_text": "Das alturas não se enxergam",
                    "line_length": "7"
                },
                {
                    "line_number": 20,
                    "line_text": "Cegas, obscuras toupeiras.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Como a águia, habita o gênio\nNas altas sobranceiras;\nDas alturas não se enxergam\nCegas, obscuras toupeiras."
        }
    ]
}