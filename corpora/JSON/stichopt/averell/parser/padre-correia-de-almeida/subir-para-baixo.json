{
    "poem_title": "SUBIR PARA BAIXO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Se tendiam para cima",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "promoções antigamente,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "antigualhas desestima",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "a Edilidade presente,",
                    "line_length": null
                },
                {
                    "line_number": 5,
                    "line_text": "e a velha rua do Conde",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "hoje é rua do Visconde!",
                    "line_length": null
                }
            ],
            "stanza_text": "Se tendiam para cima\npromoções antigamente,\nantigualhas desestima\na Edilidade presente,\ne a velha rua do Conde\nhoje é rua do Visconde!"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Como gostas de reforma,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "aconselho-te que esperes;",
                    "line_length": null
                },
                {
                    "line_number": 9,
                    "line_text": "pois, seguindo-se esta norma.",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "verás o Saco do Alferes",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "promovido num momento",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "a Mochila do Sargento.",
                    "line_length": null
                }
            ],
            "stanza_text": "Como gostas de reforma,\naconselho-te que esperes;\npois, seguindo-se esta norma.\nverás o Saco do Alferes\npromovido num momento\na Mochila do Sargento."
        }
    ]
}