{
    "poem_title": "O DETRATOR E O DUELO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "De escrutador",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Da vida alheia",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Virosa língua",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Não se refreia.",
                    "line_length": null
                }
            ],
            "stanza_text": "De escrutador\nDa vida alheia\nVirosa língua\nNão se refreia."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Fere o melindre",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Do varão justo",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Para fruir",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Prazer injusto.",
                    "line_length": null
                }
            ],
            "stanza_text": "Fere o melindre\nDo varão justo\nPara fruir\nPrazer injusto."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Este exaspera-se,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "E com razão",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Defende a própria",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Reputação.",
                    "line_length": null
                }
            ],
            "stanza_text": "Este exaspera-se,\nE com razão\nDefende a própria\nReputação."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Aos brios do homem",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Dirige o apelo,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Atira a luva",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Para o duelo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Aos brios do homem\nDirige o apelo,\nAtira a luva\nPara o duelo."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "O vil conserva-se",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Tranquilo e calmo,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Sabe o terreno",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Palmo por palmo.",
                    "line_length": null
                }
            ],
            "stanza_text": "O vil conserva-se\nTranquilo e calmo,\nSabe o terreno\nPalmo por palmo."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Dos desafios",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "É lei dever",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "O apelado",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Arma escolher.",
                    "line_length": null
                }
            ],
            "stanza_text": "Dos desafios\nÉ lei dever\nO apelado\nArma escolher."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Deste preceito",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Não houve míngua;",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "O detrator",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Escolhe a língua.",
                    "line_length": null
                }
            ],
            "stanza_text": "Deste preceito\nNão houve míngua;\nO detrator\nEscolhe a língua."
        }
    ]
}