{
    "poem_title": "REFORMA ORTOGRÁFICA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Os modernos gramáticos escrevem",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "am (com m) e ão (com til)",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "e obram mal os alunos que se atrevem",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "a violar esta regra tão subtil.",
                    "line_length": null
                }
            ],
            "stanza_text": "Os modernos gramáticos escrevem\nam (com m) e ão (com til)\ne obram mal os alunos que se atrevem\na violar esta regra tão subtil."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Se a causa da reforma não acharam,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "estudem, e acharão;",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "as regras da gramática se aclaram,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "do progresso ao vivíssimo clarão.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se a causa da reforma não acharam,\nestudem, e acharão;\nas regras da gramática se aclaram,\ndo progresso ao vivíssimo clarão."
        }
    ]
}