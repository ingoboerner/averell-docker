{
    "poem_title": "AUMENTATIVO ABSURDO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "(Se acham que é peta,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "o dito por não dito; do erro emendo-me)",
                    "line_length": null
                }
            ],
            "stanza_text": "(Se acham que é peta,\no dito por não dito; do erro emendo-me)"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "Um mestre de gramática, escrevendo-me,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "afirma que mandara um caixetão!",
                    "line_length": null
                }
            ],
            "stanza_text": "Um mestre de gramática, escrevendo-me,\nafirma que mandara um caixetão!"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Se a caixa menor",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "se chama caixeta,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "à caixa maior",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "chamemos caixão.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se a caixa menor\nse chama caixeta,\nà caixa maior\nchamemos caixão."
        }
    ]
}