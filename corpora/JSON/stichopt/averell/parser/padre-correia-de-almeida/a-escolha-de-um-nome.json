{
    "poem_title": "A ESCOLHA DE UM NOME",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Pai ou mãe pode escolher",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "o nome, para seu filho,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "de um herói de maior brilho,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "como bem lhe parecer.",
                    "line_length": null
                }
            ],
            "stanza_text": "Pai ou mãe pode escolher\no nome, para seu filho,\nde um herói de maior brilho,\ncomo bem lhe parecer."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Costa Barros escolheu",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "o régio nome de Augusto,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "e parece muito justo",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "o nome que ao filho deu.",
                    "line_length": null
                }
            ],
            "stanza_text": "Costa Barros escolheu\no régio nome de Augusto,\ne parece muito justo\no nome que ao filho deu."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "É costume, e talvez lei",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "que nas festas do Rosário",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "com burlesco vestuário",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "haja uma rainha e um rei.",
                    "line_length": null
                }
            ],
            "stanza_text": "É costume, e talvez lei\nque nas festas do Rosário\ncom burlesco vestuário\nhaja uma rainha e um rei."
        }
    ]
}