{
    "poem_title": "TROCADILHO, O PAU DE BARBAS",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Uma rua na alegre Barbacena",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Chama-se — Pau de barbas,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "E a origem deste nome",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "É secular, gigante, excelso tronco",
                    "line_length": null
                },
                {
                    "line_number": 5,
                    "line_text": "De uma árvore crinita,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Que tem pendente a barba veneranda,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Qual ancião maduro",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Curvado ao peso de anos que passaram.",
                    "line_length": null
                }
            ],
            "stanza_text": "Uma rua na alegre Barbacena\nChama-se — Pau de barbas,\nE a origem deste nome\nÉ secular, gigante, excelso tronco\nDe uma árvore crinita,\nQue tem pendente a barba veneranda,\nQual ancião maduro\nCurvado ao peso de anos que passaram."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Resiste ao tempo",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Tão firme e quedo,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Como se fora",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Duro rochedo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Resiste ao tempo\nTão firme e quedo,\nComo se fora\nDuro rochedo."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Mas quando sopra",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "A brisa amena,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Move-se a barba,",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "A barba acena.",
                    "line_length": null
                }
            ],
            "stanza_text": "Mas quando sopra\nA brisa amena,\nMove-se a barba,\nA barba acena."
        }
    ]
}