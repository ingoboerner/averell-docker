{
    "poem_title": "PARÁBOLA, A MILAGROSA GIRIBITA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ébrios acham na aguardente",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Um valor",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Ou virtude onipotente,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Sim, senhor!",
                    "line_length": null
                },
                {
                    "line_number": 5,
                    "line_text": "Se ela do frio os aquece",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "No rigor,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Bom refresco lhes parece",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "No calor.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ébrios acham na aguardente\nUm valor\nOu virtude onipotente,\nSim, senhor!\nSe ela do frio os aquece\nNo rigor,\nBom refresco lhes parece\nNo calor."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "E vós, alguns dos galenos,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Receitais,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "E assim, pouco mais ou menos,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Praticais.",
                    "line_length": null
                }
            ],
            "stanza_text": "E vós, alguns dos galenos,\nReceitais,\nE assim, pouco mais ou menos,\nPraticais."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Para tudo a mesma cousa",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Aplicais,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "E vosso saber não ousa",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Nada mais.",
                    "line_length": null
                }
            ],
            "stanza_text": "Para tudo a mesma cousa\nAplicais,\nE vosso saber não ousa\nNada mais."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Que se creia em panaceia",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Não queirais,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Aliás tristíssima ideia",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "De vós dais.",
                    "line_length": null
                }
            ],
            "stanza_text": "Que se creia em panaceia\nNão queirais,\nAliás tristíssima ideia\nDe vós dais."
        }
    ]
}