{
    "poem_title": "A ESCRAVIDÃO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ouve-me, escuta,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Senhor injusto;",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "O que te digo",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "É reto e justo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ouve-me, escuta,\nSenhor injusto;\nO que te digo\nÉ reto e justo."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Com que direito",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Tens teu irmão",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Em odiosa",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Escravidão?",
                    "line_length": null
                }
            ],
            "stanza_text": "Com que direito\nTens teu irmão\nEm odiosa\nEscravidão?"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "A lei divina",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "E a natural",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Não o fizeram",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Em tudo igual?",
                    "line_length": null
                }
            ],
            "stanza_text": "A lei divina\nE a natural\nNão o fizeram\nEm tudo igual?"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Tu não ignoras,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Homem feroz;",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Fazes-te surdo",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "À austera voz.",
                    "line_length": null
                }
            ],
            "stanza_text": "Tu não ignoras,\nHomem feroz;\nFazes-te surdo\nÀ austera voz."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Da consciência",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Que reprovando",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "O crime horrendo",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Te está falando.",
                    "line_length": null
                }
            ],
            "stanza_text": "Da consciência\nQue reprovando\nO crime horrendo\nTe está falando."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Ao descendente",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Do mesmo Adão,",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Ímpio forjaste",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Duro grilhão.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ao descendente\nDo mesmo Adão,\nÍmpio forjaste\nDuro grilhão."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Se o consanguíneo",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Assim flagelas,",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "Santos preceitos",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Tu atropelas.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se o consanguíneo\nAssim flagelas,\nSantos preceitos\nTu atropelas."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Insuportável",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "Ultraje, agravo,",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "Do homem livre",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "Fazer-se escravo!",
                    "line_length": null
                }
            ],
            "stanza_text": "Insuportável\nUltraje, agravo,\nDo homem livre\nFazer-se escravo!"
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Teme a justiça",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "Do foro eterno",
                    "line_length": null
                },
                {
                    "line_number": 35,
                    "line_text": "— Aos bons a Glória;",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "Aos maus, o inferno —.",
                    "line_length": null
                }
            ],
            "stanza_text": "Teme a justiça\nDo foro eterno\n— Aos bons a Glória;\nAos maus, o inferno —."
        }
    ]
}