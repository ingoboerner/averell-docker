{
    "poem_title": "EPIGRAMA (TRAD. DE J. B. ROUSSEAU)",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Após lauta comezaina",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Certo bêbado enfermou,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "E o Galeno que acudiu",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Nestes termos opinou:",
                    "line_length": null
                }
            ],
            "stanza_text": "Após lauta comezaina\nCerto bêbado enfermou,\nE o Galeno que acudiu\nNestes termos opinou:"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Noto dupla enfermidade",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Que esta vítima devora,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Excessiva febre ardente",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "E sede consumidora.",
                    "line_length": null
                }
            ],
            "stanza_text": "Noto dupla enfermidade\nQue esta vítima devora,\nExcessiva febre ardente\nE sede consumidora."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Ora Hipócrates nos diz,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "E piamente acredito,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Que a sede com preferência",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Combata-se em tal conflito.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ora Hipócrates nos diz,\nE piamente acredito,\nQue a sede com preferência\nCombata-se em tal conflito."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Doutor, cura-me da febre,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Porque é mal de maior monta,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "(Diz o enfermo), quanto à sede,",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Ficará por minha conta.",
                    "line_length": null
                }
            ],
            "stanza_text": "Doutor, cura-me da febre,\nPorque é mal de maior monta,\n(Diz o enfermo), quanto à sede,\nFicará por minha conta."
        }
    ]
}