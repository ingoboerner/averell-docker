{
    "poem_title": "O SAPATEIRO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Muito trabalha",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "O sapateiro,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Sentado à banca",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "O dia inteiro.",
                    "line_length": null
                }
            ],
            "stanza_text": "Muito trabalha\nO sapateiro,\nSentado à banca\nO dia inteiro."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Logo que brilha",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "O arrebol,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "No fio passa",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Duro cerol.",
                    "line_length": null
                }
            ],
            "stanza_text": "Logo que brilha\nO arrebol,\nNo fio passa\nDuro cerol."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Sempre sentado",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "E nunca em pé,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Segura a forma",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "C’o tira-pé.",
                    "line_length": null
                }
            ],
            "stanza_text": "Sempre sentado\nE nunca em pé,\nSegura a forma\nC’o tira-pé."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "À sola esfrega",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Áspera lixa,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Nos próprios dentes",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "O couro espicha.",
                    "line_length": null
                }
            ],
            "stanza_text": "À sola esfrega\nÁspera lixa,\nNos próprios dentes\nO couro espicha."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Puxa a palmilha",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Como bater",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "No duro cepo,",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Até crescer.",
                    "line_length": null
                }
            ],
            "stanza_text": "Puxa a palmilha\nComo bater\nNo duro cepo,\nAté crescer."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Por desbastar",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Move o cutelo,",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Por estender",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Bate o martelo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Por desbastar\nMove o cutelo,\nPor estender\nBate o martelo."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "A escova empunha",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "De quando em vez,",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "O botim lustra",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "De bom freguês,",
                    "line_length": null
                }
            ],
            "stanza_text": "A escova empunha\nDe quando em vez,\nO botim lustra\nDe bom freguês,"
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Que a molhadura",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "De oitenta réis,",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "Lhe retribui",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "Para pastéis.",
                    "line_length": null
                }
            ],
            "stanza_text": "Que a molhadura\nDe oitenta réis,\nLhe retribui\nPara pastéis."
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Toma a medida",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "Para o calçado,",
                    "line_length": null
                },
                {
                    "line_number": 35,
                    "line_text": "Se não de cócaras,",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "Ajoelhado.",
                    "line_length": null
                }
            ],
            "stanza_text": "Toma a medida\nPara o calçado,\nSe não de cócaras,\nAjoelhado."
        },
        {
            "stanza_type": null,
            "stanza_number": 10,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Se os dedos fura",
                    "line_length": null
                },
                {
                    "line_number": 38,
                    "line_text": "Com a sovela,",
                    "line_length": null
                },
                {
                    "line_number": 39,
                    "line_text": "Tudo isso é nada,",
                    "line_length": null
                },
                {
                    "line_number": 40,
                    "line_text": "É bagatela.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se os dedos fura\nCom a sovela,\nTudo isso é nada,\nÉ bagatela."
        },
        {
            "stanza_type": null,
            "stanza_number": 11,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "E as obras dele",
                    "line_length": null
                },
                {
                    "line_number": 42,
                    "line_text": "Tão trabalhadas",
                    "line_length": null
                },
                {
                    "line_number": 43,
                    "line_text": "Por nossos pés",
                    "line_length": null
                },
                {
                    "line_number": 44,
                    "line_text": "Serão pisadas?",
                    "line_length": null
                }
            ],
            "stanza_text": "E as obras dele\nTão trabalhadas\nPor nossos pés\nSerão pisadas?"
        },
        {
            "stanza_type": null,
            "stanza_number": 12,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Pois vingativo",
                    "line_length": null
                },
                {
                    "line_number": 46,
                    "line_text": "Seja desforro;",
                    "line_length": null
                },
                {
                    "line_number": 47,
                    "line_text": "Sapatos faça,",
                    "line_length": null
                },
                {
                    "line_number": 48,
                    "line_text": "Mas de cachorro.",
                    "line_length": null
                }
            ],
            "stanza_text": "Pois vingativo\nSeja desforro;\nSapatos faça,\nMas de cachorro."
        }
    ]
}