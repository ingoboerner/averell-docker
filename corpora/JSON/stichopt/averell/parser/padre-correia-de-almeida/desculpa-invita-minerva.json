{
    "poem_title": "DESCULPA, INVITA MINERVA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Quis fazer por força uns versos,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Tomei a pena e o papel,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Casam-se os metros dispersos",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Como as línguas de Babel.",
                    "line_length": null
                }
            ],
            "stanza_text": "Quis fazer por força uns versos,\nTomei a pena e o papel,\nCasam-se os metros dispersos\nComo as línguas de Babel."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Desvaira-se o pensamento,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Foge a ideia a bom fugir.",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Matéria, assunto, argumento,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Nada me vem acudir.",
                    "line_length": null
                }
            ],
            "stanza_text": "Desvaira-se o pensamento,\nFoge a ideia a bom fugir.\nMatéria, assunto, argumento,\nNada me vem acudir."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "A cabeça não se escalde,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Por faltar-lhe a inspiração;",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Sem esta sempre debalde",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Trabalha o poeta em vão.",
                    "line_length": null
                }
            ],
            "stanza_text": "A cabeça não se escalde,\nPor faltar-lhe a inspiração;\nSem esta sempre debalde\nTrabalha o poeta em vão."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Rebelde o espírito",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Hoje se fez?",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Pois bem, eu guardo-me",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Para outra vez.",
                    "line_length": null
                }
            ],
            "stanza_text": "Rebelde o espírito\nHoje se fez?\nPois bem, eu guardo-me\nPara outra vez."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "E quando menos",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "O esperar,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Versos amenos",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Hei de rimar.",
                    "line_length": null
                }
            ],
            "stanza_text": "E quando menos\nO esperar,\nVersos amenos\nHei de rimar."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "O ensejo próprio",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "É essencial",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Conceito lúcido",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "É casual.",
                    "line_length": null
                }
            ],
            "stanza_text": "O ensejo próprio\nÉ essencial\nConceito lúcido\nÉ casual."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Se a rima pobre",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Foi-me infiel,",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "Antes me sobre",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Tinta e papel.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se a rima pobre\nFoi-me infiel,\nAntes me sobre\nTinta e papel."
        }
    ]
}