{
    "poem_title": "PARÁBOLA, A PINTURA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Horácio dando preceitos",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Opina que a poesia",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Tomando diversos jeitos,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Qual pintura, se avalia.",
                    "line_length": null
                }
            ],
            "stanza_text": "Horácio dando preceitos\nOpina que a poesia\nTomando diversos jeitos,\nQual pintura, se avalia."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Tem real merecimento",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Pintor de grandes paisagens,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Quando desenha a contento",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Ou sítios ou personagens.",
                    "line_length": null
                }
            ],
            "stanza_text": "Tem real merecimento\nPintor de grandes paisagens,\nQuando desenha a contento\nOu sítios ou personagens."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Mas disso não se conclua",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Que a miniatura se omita,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Nem é justo que se exclua",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Uma espécie tão bonita.",
                    "line_length": null
                }
            ],
            "stanza_text": "Mas disso não se conclua\nQue a miniatura se omita,\nNem é justo que se exclua\nUma espécie tão bonita."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Uma epopeia",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "De muitos cantos",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Na vasta ideia",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Encerra encantos.",
                    "line_length": null
                }
            ],
            "stanza_text": "Uma epopeia\nDe muitos cantos\nNa vasta ideia\nEncerra encantos."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Enche mil folhas,",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Laudas e laudas,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Donde tu colhas",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Mimos, que aplaudas.",
                    "line_length": null
                }
            ],
            "stanza_text": "Enche mil folhas,\nLaudas e laudas,\nDonde tu colhas\nMimos, que aplaudas."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Mas este juízo",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Vogar não deve",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Em prejuízo",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Do verso breve.",
                    "line_length": null
                }
            ],
            "stanza_text": "Mas este juízo\nVogar não deve\nEm prejuízo\nDo verso breve."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Menos extensa",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "De Esopo a fula,",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "Quem é que pensa",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Em censurá-la?",
                    "line_length": null
                }
            ],
            "stanza_text": "Menos extensa\nDe Esopo a fula,\nQuem é que pensa\nEm censurá-la?"
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "E quem não ama,",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "E amar não há de",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "De um epigrama",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "A brevidade?",
                    "line_length": null
                }
            ],
            "stanza_text": "E quem não ama,\nE amar não há de\nDe um epigrama\nA brevidade?"
        }
    ]
}