{
    "poem_title": "UM PRESENTE BARATO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "A dezenove de Outubro",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "minha afilhada Chiquinha",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "em aplauso de seus anos",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "tem uma dádiva minha.",
                    "line_length": null
                }
            ],
            "stanza_text": "A dezenove de Outubro\nminha afilhada Chiquinha\nem aplauso de seus anos\ntem uma dádiva minha."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Porque não penso na roça",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "conforme na Corte pensam,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "em vez de ouro em filagrana,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "eu lhe mando minha bênção.",
                    "line_length": null
                }
            ],
            "stanza_text": "Porque não penso na roça\nconforme na Corte pensam,\nem vez de ouro em filagrana,\neu lhe mando minha bênção."
        }
    ]
}