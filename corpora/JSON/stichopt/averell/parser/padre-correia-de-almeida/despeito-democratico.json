{
    "poem_title": "DESPEITO DEMOCRÁTICO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Padre Correia de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Vejo pessoas embaixo,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "vejo pessoas em cima!",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "O Brasil, conforme eu acho,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "do teatro se aproxima.",
                    "line_length": null
                }
            ],
            "stanza_text": "Vejo pessoas embaixo,\nvejo pessoas em cima!\nO Brasil, conforme eu acho,\ndo teatro se aproxima."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Formo esta esquisita ideia,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "e escrevo sem entrelinhas:",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "gente que está na plateia",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "é melhor que a das torrinhas.",
                    "line_length": null
                }
            ],
            "stanza_text": "Formo esta esquisita ideia,\ne escrevo sem entrelinhas:\ngente que está na plateia\né melhor que a das torrinhas."
        }
    ]
}