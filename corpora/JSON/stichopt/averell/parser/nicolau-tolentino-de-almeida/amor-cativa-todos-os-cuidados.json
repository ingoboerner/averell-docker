{
    "poem_title": "AMOR CATIVA TODOS OS CUIDADOS",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Nicolau Tolentino de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Um ginja, que às trindades recolhido",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Calça as chinelas, no roupão s’embuça,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Pede à filha mais velha a carapuça,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "E em fofo canapé fica estendido;",
                    "line_length": null
                }
            ],
            "stanza_text": "Um ginja, que às trindades recolhido\nCalça as chinelas, no roupão s’embuça,\nPede à filha mais velha a carapuça,\nE em fofo canapé fica estendido;"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Um ginja, que de amor todo esquecido,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Mostra seus vivos de melena russa,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "O sarau, cotilhão, e escaramuça",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Sempre reprova quase embravecido;",
                    "line_length": null
                }
            ],
            "stanza_text": "Um ginja, que de amor todo esquecido,\nMostra seus vivos de melena russa,\nO sarau, cotilhão, e escaramuça\nSempre reprova quase embravecido;"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Que às modas todas chama bagatela,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Um ginja, em quem jamais se viu mudado",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "O molde d’um vestido, ou da fivela.",
                    "line_length": null
                }
            ],
            "stanza_text": "Que às modas todas chama bagatela,\nUm ginja, em quem jamais se viu mudado\nO molde d’um vestido, ou da fivela."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Do mundo não está tão retirado,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Quanto eu estou, depois que à minha bela",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Dei o meu coração e o meu cuidado.",
                    "line_length": null
                }
            ],
            "stanza_text": "Do mundo não está tão retirado,\nQuanto eu estou, depois que à minha bela\nDei o meu coração e o meu cuidado."
        }
    ]
}