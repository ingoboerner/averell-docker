                {
                    "line_number": 1,
                    "line_text": "As ferradas muletas encostando,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "No banho entrava um velho macilento,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "A quem eu em sisudo comprimento",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Seus males lastimei, quase chorando:",
                    "line_length": null
