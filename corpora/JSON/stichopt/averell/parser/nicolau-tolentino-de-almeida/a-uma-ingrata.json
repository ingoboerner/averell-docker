{
    "poem_title": "A UMA INGRATA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Nicolau Tolentino de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "No sacro templo,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Que amor habita,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Minha alma aflita",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Fui imolar.",
                    "line_length": null
                }
            ],
            "stanza_text": "No sacro templo,\nQue amor habita,\nMinha alma aflita\nFui imolar."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Na ruiva flama,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Que silva ardendo,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "A mão detendo",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Jurei-te amar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Na ruiva flama,\nQue silva ardendo,\nA mão detendo\nJurei-te amar."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Fumoso sangue,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Mal findo o voto,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Do peito rolo",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Vi gotejar,",
                    "line_length": null
                }
            ],
            "stanza_text": "Fumoso sangue,\nMal findo o voto,\nDo peito rolo\nVi gotejar,"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "D’alma oprimida",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "A insana pena",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Causou-lhe Helena",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Que soube amar.",
                    "line_length": null
                }
            ],
            "stanza_text": "D’alma oprimida\nA insana pena\nCausou-lhe Helena\nQue soube amar."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Nos fidos peitos",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "O morto lume",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Negro ciúme",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Ia ateiar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Nos fidos peitos\nO morto lume\nNegro ciúme\nIa ateiar."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Vulcano fero",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Ante Mavorte",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "O rival forte",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Não pôde olhar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Vulcano fero\nAnte Mavorte\nO rival forte\nNão pôde olhar."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Dos desprezados,",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Que sofrem tanto,",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "O rouco pranto",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Feria o ar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Dos desprezados,\nQue sofrem tanto,\nO rouco pranto\nFeria o ar."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Aqui jaz Delio",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "Terno, e vencido,",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "Sem de Cupido",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "Premio alcançar:",
                    "line_length": null
                }
            ],
            "stanza_text": "Aqui jaz Delio\nTerno, e vencido,\nSem de Cupido\nPremio alcançar:"
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "De Dafne esquiva,",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "Com triste agouro.",
                    "line_length": null
                },
                {
                    "line_number": 35,
                    "line_text": "Em verde louro",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "Viu transformar.",
                    "line_length": null
                }
            ],
            "stanza_text": "De Dafne esquiva,\nCom triste agouro.\nEm verde louro\nViu transformar."
        },
        {
            "stanza_type": null,
            "stanza_number": 10,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Pan segue a ninfa,",
                    "line_length": null
                },
                {
                    "line_number": 38,
                    "line_text": "Que tanto adora;",
                    "line_length": null
                },
                {
                    "line_number": 39,
                    "line_text": "Seu fado chora",
                    "line_length": null
                },
                {
                    "line_number": 40,
                    "line_text": "Vendo-a mudar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Pan segue a ninfa,\nQue tanto adora;\nSeu fado chora\nVendo-a mudar."
        },
        {
            "stanza_type": null,
            "stanza_number": 11,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "De tenras canas",
                    "line_length": null
                },
                {
                    "line_number": 42,
                    "line_text": "Amor lhe manda,",
                    "line_length": null
                },
                {
                    "line_number": 43,
                    "line_text": "Que a frauta branda",
                    "line_length": null
                },
                {
                    "line_number": 44,
                    "line_text": "Vá fabricar.",
                    "line_length": null
                }
            ],
            "stanza_text": "De tenras canas\nAmor lhe manda,\nQue a frauta branda\nVá fabricar."
        },
        {
            "stanza_type": null,
            "stanza_number": 12,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Cercada Dido",
                    "line_length": null
                },
                {
                    "line_number": 46,
                    "line_text": "De angústias feias,",
                    "line_length": null
                },
                {
                    "line_number": 47,
                    "line_text": "Ah falso Enéias!",
                    "line_length": null
                },
                {
                    "line_number": 48,
                    "line_text": "Se ouve bradar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Cercada Dido\nDe angústias feias,\nAh falso Enéias!\nSe ouve bradar."
        },
        {
            "stanza_type": null,
            "stanza_number": 13,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Seus lindos olhos",
                    "line_length": null
                },
                {
                    "line_number": 50,
                    "line_text": "Frouxos erravam;",
                    "line_length": null
                },
                {
                    "line_number": 51,
                    "line_text": "Em vão buscavam",
                    "line_length": null
                },
                {
                    "line_number": 52,
                    "line_text": "O vago mar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Seus lindos olhos\nFrouxos erravam;\nEm vão buscavam\nO vago mar."
        },
        {
            "stanza_type": null,
            "stanza_number": 14,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "Subtis enredos",
                    "line_length": null
                },
                {
                    "line_number": 54,
                    "line_text": "De acerbo dano,",
                    "line_length": null
                },
                {
                    "line_number": 55,
                    "line_text": "Bifronte engano",
                    "line_length": null
                },
                {
                    "line_number": 56,
                    "line_text": "Eu vi tramai’.",
                    "line_length": null
                }
            ],
            "stanza_text": "Subtis enredos\nDe acerbo dano,\nBifronte engano\nEu vi tramai’."
        },
        {
            "stanza_type": null,
            "stanza_number": 15,
            "lines": [
                {
                    "line_number": 57,
                    "line_text": "Por Tisbe bela,",
                    "line_length": null
                },
                {
                    "line_number": 58,
                    "line_text": "Que busca errante,",
                    "line_length": null
                },
                {
                    "line_number": 59,
                    "line_text": "Piramo amante",
                    "line_length": null
                },
                {
                    "line_number": 60,
                    "line_text": "Vai acabar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Por Tisbe bela,\nQue busca errante,\nPiramo amante\nVai acabar."
        },
        {
            "stanza_type": null,
            "stanza_number": 16,
            "lines": [
                {
                    "line_number": 61,
                    "line_text": "Conhece a amada",
                    "line_length": null
                },
                {
                    "line_number": 62,
                    "line_text": "O infeliz erro,",
                    "line_length": null
                },
                {
                    "line_number": 63,
                    "line_text": "Ousa Ímpio ferro",
                    "line_length": null
                },
                {
                    "line_number": 64,
                    "line_text": "Em si cravar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Conhece a amada\nO infeliz erro,\nOusa Ímpio ferro\nEm si cravar."
        },
        {
            "stanza_type": null,
            "stanza_number": 17,
            "lines": [
                {
                    "line_number": 65,
                    "line_text": "Serve-lhe a terra",
                    "line_length": null
                },
                {
                    "line_number": 66,
                    "line_text": "De duro leito,",
                    "line_length": null
                },
                {
                    "line_number": 67,
                    "line_text": "Vê-se-lhe o peito",
                    "line_length": null
                },
                {
                    "line_number": 68,
                    "line_text": "Inda arquejar:",
                    "line_length": null
                }
            ],
            "stanza_text": "Serve-lhe a terra\nDe duro leito,\nVê-se-lhe o peito\nInda arquejar:"
        },
        {
            "stanza_type": null,
            "stanza_number": 18,
            "lines": [
                {
                    "line_number": 69,
                    "line_text": "As pardas sombras",
                    "line_length": null
                },
                {
                    "line_number": 70,
                    "line_text": "Que amor mistura,",
                    "line_length": null
                },
                {
                    "line_number": 71,
                    "line_text": "Na Estige escura",
                    "line_length": null
                },
                {
                    "line_number": 72,
                    "line_text": "Vão aportar:",
                    "line_length": null
                }
            ],
            "stanza_text": "As pardas sombras\nQue amor mistura,\nNa Estige escura\nVão aportar:"
        },
        {
            "stanza_type": null,
            "stanza_number": 19,
            "lines": [
                {
                    "line_number": 73,
                    "line_text": "Desenrugando",
                    "line_length": null
                },
                {
                    "line_number": 74,
                    "line_text": "A crespa fronte",
                    "line_length": null
                },
                {
                    "line_number": 75,
                    "line_text": "Ledo Aqueronte",
                    "line_length": null
                },
                {
                    "line_number": 76,
                    "line_text": "As foi buscar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Desenrugando\nA crespa fronte\nLedo Aqueronte\nAs foi buscar."
        },
        {
            "stanza_type": null,
            "stanza_number": 20,
            "lines": [
                {
                    "line_number": 77,
                    "line_text": "E eu combatido",
                    "line_length": null
                },
                {
                    "line_number": 78,
                    "line_text": "De mil pesares",
                    "line_length": null
                },
                {
                    "line_number": 79,
                    "line_text": "Vou pelos ares",
                    "line_length": null
                },
                {
                    "line_number": 80,
                    "line_text": "A suspirar.",
                    "line_length": null
                }
            ],
            "stanza_text": "E eu combatido\nDe mil pesares\nVou pelos ares\nA suspirar."
        },
        {
            "stanza_type": null,
            "stanza_number": 21,
            "lines": [
                {
                    "line_number": 81,
                    "line_text": "Sei ser-te amante,",
                    "line_length": null
                },
                {
                    "line_number": 82,
                    "line_text": "Sem prêmios vivo,",
                    "line_length": null
                },
                {
                    "line_number": 83,
                    "line_text": "Este o motivo",
                    "line_length": null
                },
                {
                    "line_number": 84,
                    "line_text": "Do meu penar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Sei ser-te amante,\nSem prêmios vivo,\nEste o motivo\nDo meu penar."
        },
        {
            "stanza_type": null,
            "stanza_number": 22,
            "lines": [
                {
                    "line_number": 85,
                    "line_text": "Vês mil exemplos,",
                    "line_length": null
                },
                {
                    "line_number": 86,
                    "line_text": "E jamais pensas",
                    "line_length": null
                },
                {
                    "line_number": 87,
                    "line_text": "Que pode ofensas",
                    "line_length": null
                },
                {
                    "line_number": 88,
                    "line_text": "Amor vingar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Vês mil exemplos,\nE jamais pensas\nQue pode ofensas\nAmor vingar."
        },
        {
            "stanza_type": null,
            "stanza_number": 23,
            "lines": [
                {
                    "line_number": 89,
                    "line_text": "Ah! sê piedosa:",
                    "line_length": null
                },
                {
                    "line_number": 90,
                    "line_text": "As cruas penas",
                    "line_length": null
                },
                {
                    "line_number": 91,
                    "line_text": "Torne serenas",
                    "line_length": null
                },
                {
                    "line_number": 92,
                    "line_text": "Teu brando olhar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ah! sê piedosa:\nAs cruas penas\nTorne serenas\nTeu brando olhar."
        }
    ]
}