{
    "poem_title": "OFERECENDO UM PERUM EM CASA ONDE TODOS OS DOMINGOS DAVAM AO AUTOR ESTE PRATO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Nicolau Tolentino de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Senhora, também um dia",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Entrarei co’a frente erguida;",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Não serei na vossa mesa",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Dependente toda a vida;",
                    "line_length": null
                }
            ],
            "stanza_text": "Senhora, também um dia\nEntrarei co’a frente erguida;\nNão serei na vossa mesa\nDependente toda a vida;"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Nem sempre abatido pejo",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Dirá n’esta cara feia",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Quanto doe a um peito altivo",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Malar fome em casa alheia:",
                    "line_length": null
                }
            ],
            "stanza_text": "Nem sempre abatido pejo\nDirá n’esta cara feia\nQuanto doe a um peito altivo\nMalar fome em casa alheia:"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Airoso, gordo perum,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "É meu soberbo presente;",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Traz inda as penas molhadas",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "C’o pranto da minha gente;",
                    "line_length": null
                }
            ],
            "stanza_text": "Airoso, gordo perum,\nÉ meu soberbo presente;\nTraz inda as penas molhadas\nC’o pranto da minha gente;"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "No santo dia esperavam,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Quebrando antigo jejum,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Cravar inespertos dentes",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Neste primeiro perum;",
                    "line_length": null
                }
            ],
            "stanza_text": "No santo dia esperavam,\nQuebrando antigo jejum,\nCravar inespertos dentes\nNeste primeiro perum;"
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "A russa, magia Josefa,",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Ergueu queixume sentido;",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Custou-lhe mais esta ausência,",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Que a do defunto marido:",
                    "line_length": null
                }
            ],
            "stanza_text": "A russa, magia Josefa,\nErgueu queixume sentido;\nCustou-lhe mais esta ausência,\nQue a do defunto marido:"
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "O louro, alvar galeguinhna",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Chegou aos olhos seu trapo;",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Tinha vistas sobre a carne,",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "E muitas mais sobre o papo.",
                    "line_length": null
                }
            ],
            "stanza_text": "O louro, alvar galeguinhna\nChegou aos olhos seu trapo;\nTinha vistas sobre a carne,\nE muitas mais sobre o papo."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Seu almoço requerendo",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Em luzindo a madrugada,",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "Na esquerda, grossa latia",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "D’ambas as partes barrada;",
                    "line_length": null
                }
            ],
            "stanza_text": "Seu almoço requerendo\nEm luzindo a madrugada,\nNa esquerda, grossa latia\nD’ambas as partes barrada;"
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Na destra, com branda cana",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "O seu pupilo guiava;",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "Em tenras, públicas malvas,",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "Para si o apascentava;",
                    "line_length": null
                }
            ],
            "stanza_text": "Na destra, com branda cana\nO seu pupilo guiava;\nEm tenras, públicas malvas,\nPara si o apascentava;"
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Quando lhe mandei trazer-vos",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "O bom companheiro seu,",
                    "line_length": null
                },
                {
                    "line_number": 35,
                    "line_text": "Pedindo-me coxos meses,",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "Me disse, que o trouxesse eu.",
                    "line_length": null
                }
            ],
            "stanza_text": "Quando lhe mandei trazer-vos\nO bom companheiro seu,\nPedindo-me coxos meses,\nMe disse, que o trouxesse eu."
        },
        {
            "stanza_type": null,
            "stanza_number": 10,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Eu o trago; a oferta é pura,",
                    "line_length": null
                },
                {
                    "line_number": 38,
                    "line_text": "Mas a tenção a envenena;",
                    "line_length": null
                },
                {
                    "line_number": 39,
                    "line_text": "Traz escondida uma usura,",
                    "line_length": null
                },
                {
                    "line_number": 40,
                    "line_text": "Maior, que a da meia sena.",
                    "line_length": null
                }
            ],
            "stanza_text": "Eu o trago; a oferta é pura,\nMas a tenção a envenena;\nTraz escondida uma usura,\nMaior, que a da meia sena."
        },
        {
            "stanza_type": null,
            "stanza_number": 11,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Com um sorriso aceitai",
                    "line_length": null
                },
                {
                    "line_number": 42,
                    "line_text": "O atraiçoado convite;",
                    "line_length": null
                },
                {
                    "line_number": 43,
                    "line_text": "Vem a morrer uma vez.",
                    "line_length": null
                },
                {
                    "line_number": 44,
                    "line_text": "Porque muitas ressuscite.",
                    "line_length": null
                }
            ],
            "stanza_text": "Com um sorriso aceitai\nO atraiçoado convite;\nVem a morrer uma vez.\nPorque muitas ressuscite."
        },
        {
            "stanza_type": null,
            "stanza_number": 12,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Curai todos os domingos",
                    "line_length": null
                },
                {
                    "line_number": 46,
                    "line_text": "A minha doença interna;",
                    "line_length": null
                },
                {
                    "line_number": 47,
                    "line_text": "Sobre a mesa milagrosa",
                    "line_length": null
                },
                {
                    "line_number": 48,
                    "line_text": "Seja esta ave, uma ave eterna:",
                    "line_length": null
                }
            ],
            "stanza_text": "Curai todos os domingos\nA minha doença interna;\nSobre a mesa milagrosa\nSeja esta ave, uma ave eterna:"
        },
        {
            "stanza_type": null,
            "stanza_number": 13,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "De outra que finge a poesia,",
                    "line_length": null
                },
                {
                    "line_number": 50,
                    "line_text": "Trocai em verdade a peta;",
                    "line_length": null
                },
                {
                    "line_number": 51,
                    "line_text": "E seja um negro perum",
                    "line_length": null
                },
                {
                    "line_number": 52,
                    "line_text": "A fênix deste poeta:",
                    "line_length": null
                }
            ],
            "stanza_text": "De outra que finge a poesia,\nTrocai em verdade a peta;\nE seja um negro perum\nA fênix deste poeta:"
        },
        {
            "stanza_type": null,
            "stanza_number": 14,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "Na ondada, pia toalha,",
                    "line_length": null
                },
                {
                    "line_number": 54,
                    "line_text": "Co’a benção da vossa mão",
                    "line_length": null
                },
                {
                    "line_number": 55,
                    "line_text": "Seus frios, despidos ossos.",
                    "line_length": null
                },
                {
                    "line_number": 56,
                    "line_text": "De carne se cobrirão:",
                    "line_length": null
                }
            ],
            "stanza_text": "Na ondada, pia toalha,\nCo’a benção da vossa mão\nSeus frios, despidos ossos.\nDe carne se cobrirão:"
        },
        {
            "stanza_type": null,
            "stanza_number": 15,
            "lines": [
                {
                    "line_number": 57,
                    "line_text": "Consenti, que este oco peito",
                    "line_length": null
                },
                {
                    "line_number": 58,
                    "line_text": "Ao prodígio se consagre;",
                    "line_length": null
                },
                {
                    "line_number": 59,
                    "line_text": "E que dentro em si coloque",
                    "line_length": null
                },
                {
                    "line_number": 60,
                    "line_text": "A mor parte do milagre;",
                    "line_length": null
                }
            ],
            "stanza_text": "Consenti, que este oco peito\nAo prodígio se consagre;\nE que dentro em si coloque\nA mor parte do milagre;"
        },
        {
            "stanza_type": null,
            "stanza_number": 16,
            "lines": [
                {
                    "line_number": 61,
                    "line_text": "Quanto ao padre pregador,",
                    "line_length": null
                },
                {
                    "line_number": 62,
                    "line_text": "Meu voto é não convidá-lo;",
                    "line_length": null
                },
                {
                    "line_number": 63,
                    "line_text": "Porque ha de comer o assunto",
                    "line_length": null
                },
                {
                    "line_number": 64,
                    "line_text": "Muito melhor que pregá-lo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Quanto ao padre pregador,\nMeu voto é não convidá-lo;\nPorque ha de comer o assunto\nMuito melhor que pregá-lo."
        }
    ]
}