{
    "poem_title": "LILIA PERJURA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Nicolau Tolentino de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Voai, suspiros,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Nos vagos ares,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Único alívio",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Dos meus pesares.",
                    "line_length": null
                }
            ],
            "stanza_text": "Voai, suspiros,\nNos vagos ares,\nÚnico alívio\nDos meus pesares."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Fostes de Lilia",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Agasalhados",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Quando o quiseram",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Benignos fados,",
                    "line_length": null
                }
            ],
            "stanza_text": "Fostes de Lilia\nAgasalhados\nQuando o quiseram\nBenignos fados,"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Quando em seus olhos,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Trono das Graças,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Tinham abrigo",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Minhas desgraças.",
                    "line_length": null
                }
            ],
            "stanza_text": "Quando em seus olhos,\nTrono das Graças,\nTinham abrigo\nMinhas desgraças."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Hoje ensurdece",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "A meus clamores,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Toma por crime",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Ternos amores.",
                    "line_length": null
                }
            ],
            "stanza_text": "Hoje ensurdece\nA meus clamores,\nToma por crime\nTernos amores."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Olhos piedosos",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Lhe vi alçar,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Fieis amores",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Lhe ouvi jurar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Olhos piedosos\nLhe vi alçar,\nFieis amores\nLhe ouvi jurar."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Foram nas asas",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Dos mansos ventos.",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Os mentirosos,",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Seus juramentos.",
                    "line_length": null
                }
            ],
            "stanza_text": "Foram nas asas\nDos mansos ventos.\nOs mentirosos,\nSeus juramentos."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Rival ditoso,",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Tens mal seguros",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "De Lília os votos,",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Votos perjuros.",
                    "line_length": null
                }
            ],
            "stanza_text": "Rival ditoso,\nTens mal seguros\nDe Lília os votos,\nVotos perjuros."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Fragosas penhas,",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "Ermos rochedos,",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "Qu’outrora ouvistes",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "Nossos segredos,",
                    "line_length": null
                }
            ],
            "stanza_text": "Fragosas penhas,\nErmos rochedos,\nQu’outrora ouvistes\nNossos segredos,"
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Guardai o nome",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "De Lilia bela,",
                    "line_length": null
                },
                {
                    "line_number": 35,
                    "line_text": "E os vãos suspiros",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "Que eu dou por ela.",
                    "line_length": null
                }
            ],
            "stanza_text": "Guardai o nome\nDe Lilia bela,\nE os vãos suspiros\nQue eu dou por ela."
        }
    ]
}