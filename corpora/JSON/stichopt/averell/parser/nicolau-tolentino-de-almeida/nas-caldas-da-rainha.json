{
    "poem_title": "NAS CALDAS DA RAINHA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Nicolau Tolentino de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Nas Caldas, nas tristes Caldas",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Alegria vim buscar;",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Quis de noite ver o sol,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Quis achar fogo no mar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Nas Caldas, nas tristes Caldas\nAlegria vim buscar;\nQuis de noite ver o sol,\nQuis achar fogo no mar."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Olhos meus, cansados olhos,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "O vosso ofício é chorar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Olhos meus, cansados olhos,\nO vosso ofício é chorar."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Que importa mudar de terra,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "E baldados passos dar,",
                    "line_length": null
                },
                {
                    "line_number": 9,
                    "line_text": "Se a toda a parte a que os volto",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Vai comigo o meu pesar?",
                    "line_length": null
                }
            ],
            "stanza_text": "Que importa mudar de terra,\nE baldados passos dar,\nSe a toda a parte a que os volto\nVai comigo o meu pesar?"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Vejo pálidos doentes",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Pela copa passear.",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Ouço de antigas moléstias",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Tristes efeitos contar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Vejo pálidos doentes\nPela copa passear.\nOuço de antigas moléstias\nTristes efeitos contar."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "Vejo nas férvidas águas",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Mirrados corpos banhar,",
                    "line_length": null
                },
                {
                    "line_number": 17,
                    "line_text": "E debalde aos surdos céus",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Convulsos braços alçar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Vejo nas férvidas águas\nMirrados corpos banhar,\nE debalde aos surdos céus\nConvulsos braços alçar."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Vejo de perdido pranto",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Tristes ais acompanhar,",
                    "line_length": null
                },
                {
                    "line_number": 21,
                    "line_text": "Com as lágrimas alheias",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Vou as minhas misturar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Vejo de perdido pranto\nTristes ais acompanhar,\nCom as lágrimas alheias\nVou as minhas misturar."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 23,
                    "line_text": "Que importa ver ninfas belas,",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Se acrescentam meu pesar?",
                    "line_length": null
                },
                {
                    "line_number": 25,
                    "line_text": "Gostam de atrair os olhos,",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "E as almas tiranizar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Que importa ver ninfas belas,\nSe acrescentam meu pesar?\nGostam de atrair os olhos,\nE as almas tiranizar."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 27,
                    "line_text": "Ao som de feridas cordas",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Dão doces vozes ao ar,",
                    "line_length": null
                },
                {
                    "line_number": 29,
                    "line_text": "Quais enganosas sereias,",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "Que cantam para malar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ao som de feridas cordas\nDão doces vozes ao ar,\nQuais enganosas sereias,\nQue cantam para malar."
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "Se o meu pobre coração",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "Se deixa uma vez tocar,",
                    "line_length": null
                },
                {
                    "line_number": 33,
                    "line_text": "Com escárnios, com risadas,",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "Meu pranto vejo pagar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se o meu pobre coração\nSe deixa uma vez tocar,\nCom escárnios, com risadas,\nMeu pranto vejo pagar."
        },
        {
            "stanza_type": null,
            "stanza_number": 10,
            "lines": [
                {
                    "line_number": 35,
                    "line_text": "Fartai-vos, pois, olhos meus,",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "De lágrimas derramar;",
                    "line_length": null
                },
                {
                    "line_number": 37,
                    "line_text": "Vós nascestes para tristes,",
                    "line_length": null
                },
                {
                    "line_number": 38,
                    "line_text": "E escolhestes o lugar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Fartai-vos, pois, olhos meus,\nDe lágrimas derramar;\nVós nascestes para tristes,\nE escolhestes o lugar."
        },
        {
            "stanza_type": null,
            "stanza_number": 11,
            "lines": [
                {
                    "line_number": 39,
                    "line_text": "Olhos meus, cansados olhos,",
                    "line_length": null
                },
                {
                    "line_number": 40,
                    "line_text": "O vosso ofício é chorar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Olhos meus, cansados olhos,\nO vosso ofício é chorar."
        }
    ]
}