    "poem_title": "VAGANDO UM OFÍCIO QUE O AUTOR PRETENDIA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Nicolau Tolentino de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
