{
    "poem_title": "NAS MESMAS CALDAS",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Nicolau Tolentino de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Não ha nas Caldas",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Melancolia,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Dão alegria,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Os ares seus.",
                    "line_length": null
                }
            ],
            "stanza_text": "Não ha nas Caldas\nMelancolia,\nDão alegria,\nOs ares seus."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Negras tristezas,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Adeus, adeus.",
                    "line_length": null
                }
            ],
            "stanza_text": "Negras tristezas,\nAdeus, adeus."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Sara-me a terra,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "E não as águas:",
                    "line_length": null
                },
                {
                    "line_number": 9,
                    "line_text": "Não curam mágoas",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Os banhos seus.",
                    "line_length": null
                }
            ],
            "stanza_text": "Sara-me a terra,\nE não as águas:\nNão curam mágoas\nOs banhos seus."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Uns lindos olhos.",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Que o dia aclaram,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Afugentaram",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Os males meus.",
                    "line_length": null
                }
            ],
            "stanza_text": "Uns lindos olhos.\nQue o dia aclaram,\nAfugentaram\nOs males meus."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "Brandos sorrisos.",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "A furto dados",
                    "line_length": null
                },
                {
                    "line_number": 17,
                    "line_text": "Fazem dourados",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Os dias meus.",
                    "line_length": null
                }
            ],
            "stanza_text": "Brandos sorrisos.\nA furto dados\nFazem dourados\nOs dias meus."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Se entra nos banho",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Marília bela,",
                    "line_length": null
                },
                {
                    "line_number": 21,
                    "line_text": "Entra com ela",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "O cego deus.",
                    "line_length": null
                }
            ],
            "stanza_text": "Se entra nos banho\nMarília bela,\nEntra com ela\nO cego deus."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 23,
                    "line_text": "Ali tempera",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Nas águas puras",
                    "line_length": null
                },
                {
                    "line_number": 25,
                    "line_text": "As pontas duras",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Dos fenos seus.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ali tempera\nNas águas puras\nAs pontas duras\nDos fenos seus."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 27,
                    "line_text": "Enxuga as tranças",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Da ninfa loura,",
                    "line_length": null
                },
                {
                    "line_number": 29,
                    "line_text": "E n’elas doura",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "Os farpões seus.",
                    "line_length": null
                }
            ],
            "stanza_text": "Enxuga as tranças\nDa ninfa loura,\nE n’elas doura\nOs farpões seus."
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "Caldas ditosas,",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "Teu nome cresça,",
                    "line_length": null
                },
                {
                    "line_number": 33,
                    "line_text": "Alça a cabeça",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "Até os céus.",
                    "line_length": null
                }
            ],
            "stanza_text": "Caldas ditosas,\nTeu nome cresça,\nAlça a cabeça\nAté os céus."
        },
        {
            "stanza_type": null,
            "stanza_number": 10,
            "lines": [
                {
                    "line_number": 35,
                    "line_text": "O pobre Anfriso,",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "Que estas calçadas",
                    "line_length": null
                },
                {
                    "line_number": 37,
                    "line_text": "Deixou regadas",
                    "line_length": null
                },
                {
                    "line_number": 38,
                    "line_text": "Dos olhos seus,",
                    "line_length": null
                }
            ],
            "stanza_text": "O pobre Anfriso,\nQue estas calçadas\nDeixou regadas\nDos olhos seus,"
        },
        {
            "stanza_type": null,
            "stanza_number": 11,
            "lines": [
                {
                    "line_number": 39,
                    "line_text": "Hoje em triunfo",
                    "line_length": null
                },
                {
                    "line_number": 40,
                    "line_text": "De seus pesares",
                    "line_length": null
                },
                {
                    "line_number": 41,
                    "line_text": "Levanta altares",
                    "line_length": null
                },
                {
                    "line_number": 42,
                    "line_text": "De Gnido ao deus.",
                    "line_length": null
                }
            ],
            "stanza_text": "Hoje em triunfo\nDe seus pesares\nLevanta altares\nDe Gnido ao deus."
        },
        {
            "stanza_type": null,
            "stanza_number": 12,
            "lines": [
                {
                    "line_number": 43,
                    "line_text": "Negras tristezas,",
                    "line_length": null
                },
                {
                    "line_number": 44,
                    "line_text": "Adeus, adeus.",
                    "line_length": null
                }
            ],
            "stanza_text": "Negras tristezas,\nAdeus, adeus."
        }
    ]
}