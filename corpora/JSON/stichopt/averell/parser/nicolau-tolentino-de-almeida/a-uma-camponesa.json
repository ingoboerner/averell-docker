{
    "poem_title": "A UMA CAMPONESA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Nicolau Tolentino de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Não moram em palácios estucados",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Almas singelas, almas extremosas:",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Nutrem da corte as damas enganosas",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Em tenros peitos corações dobrados.",
                    "line_length": null
                }
            ],
            "stanza_text": "Não moram em palácios estucados\nAlmas singelas, almas extremosas:\nNutrem da corte as damas enganosas\nEm tenros peitos corações dobrados."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Venham por longos mares conquistados",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "As indianas sedas preciosas:",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Cubram-lhe as carnes alvas e mimosas",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Ricos vestidos em Paris bordados.",
                    "line_length": null
                }
            ],
            "stanza_text": "Venham por longos mares conquistados\nAs indianas sedas preciosas:\nCubram-lhe as carnes alvas e mimosas\nRicos vestidos em Paris bordados."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "São isto efeitos da arte e da ventura:",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Estimo mais que toda a vã grandeza",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Um limpo coração, uma alma pura.",
                    "line_length": null
                }
            ],
            "stanza_text": "São isto efeitos da arte e da ventura:\nEstimo mais que toda a vã grandeza\nUm limpo coração, uma alma pura."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Não na corte; das serras na aspereza",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Fui achar inocência e formosura.",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Sagrados dons da simples natureza.",
                    "line_length": null
                }
            ],
            "stanza_text": "Não na corte; das serras na aspereza\nFui achar inocência e formosura.\nSagrados dons da simples natureza."
        }
    ]
}