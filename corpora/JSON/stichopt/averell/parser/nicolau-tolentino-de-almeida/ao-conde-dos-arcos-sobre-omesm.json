{
    "poem_title": "AO CONDE DOS ARCOS SOBRE OMESMO ASSUNTO DE SE IMPRIMIREM AS OBRAS DO AUTOR",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Nicolau Tolentino de Almeida",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Bateu aos vossos portais",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Um morador do outro polo;",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Veio ao templo de Minerva",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Dar um recado de Apolo;",
                    "line_length": null
                }
            ],
            "stanza_text": "Bateu aos vossos portais\nUm morador do outro polo;\nVeio ao templo de Minerva\nDar um recado de Apolo;"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Vós sois dos seus obrigados,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Bebeis seu licor divino;",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Manda que lembreis na Rosa",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "O esquecido Tolentino;",
                    "line_length": null
                }
            ],
            "stanza_text": "Vós sois dos seus obrigados,\nBebeis seu licor divino;\nManda que lembreis na Rosa\nO esquecido Tolentino;"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Sei que ali meu pobre livro",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Altos protetores tem;",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Mas agora só se fala",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Nesta mágica Dutein;",
                    "line_length": null
                }
            ],
            "stanza_text": "Sei que ali meu pobre livro\nAltos protetores tem;\nMas agora só se fala\nNesta mágica Dutein;"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Apolo não troca as Artes;",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Mas vendo a artífice, enfia;",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Receia que com tais braços",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "A dança afaste a poesia;",
                    "line_length": null
                }
            ],
            "stanza_text": "Apolo não troca as Artes;\nMas vendo a artífice, enfia;\nReceia que com tais braços\nA dança afaste a poesia;"
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Também sois réu; mas bem pode",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "A mágia dos passos seus",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Encantar os vossos olhos,",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Sem fazer chorar os meus.",
                    "line_length": null
                }
            ],
            "stanza_text": "Também sois réu; mas bem pode\nA mágia dos passos seus\nEncantar os vossos olhos,\nSem fazer chorar os meus."
        }
    ]
}