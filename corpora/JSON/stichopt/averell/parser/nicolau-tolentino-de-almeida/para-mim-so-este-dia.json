            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Se eu no ano todo achasse",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Um dia, em que Nize esquiva",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Mais terna, mais compassiva",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Os meus votos escutasse,",
                    "line_length": null
                },
                {
                    "line_number": 5,
                    "line_text": "Um dia, em que se dignasse",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "De ouvir o que eu lhe dizia.",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Do ano repartiria,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "E por um bem justo modo.",
                    "line_length": null
                },
                {
                    "line_number": 9,
                    "line_text": "Para os mais o ano todo,",
                    "line_length": null
                },
                {
                    "line_number": 10,
