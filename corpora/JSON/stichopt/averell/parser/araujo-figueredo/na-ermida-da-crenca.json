{
    "poem_title": "Na ermida da crença",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Araújo Figueredo",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Da ermida onde nós oramos",
                    "line_length": "7"
                },
                {
                    "line_number": 2,
                    "line_text": "Os horizontes fitamos...",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Da ermida onde nós oramos\nOs horizontes fitamos..."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "A ermida da nossa crença",
                    "line_length": "7"
                },
                {
                    "line_number": 4,
                    "line_text": "Está numa altura imensa.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "A ermida da nossa crença\nEstá numa altura imensa."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "É-lhe a fé toda a argamassa;",
                    "line_length": "7"
                },
                {
                    "line_number": 6,
                    "line_text": "E nas torres se entrelaça,",
                    "line_length": "7"
                }
            ],
            "stanza_text": "É-lhe a fé toda a argamassa;\nE nas torres se entrelaça,"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Como um Arco de Aliança,",
                    "line_length": "7"
                },
                {
                    "line_number": 8,
                    "line_text": "A bandeira da Esperança,",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Como um Arco de Aliança,\nA bandeira da Esperança,"
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Desfraldada aos quatro ventos",
                    "line_length": "7"
                },
                {
                    "line_number": 10,
                    "line_text": "Dos nossos padecimentos,",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Desfraldada aos quatro ventos\nDos nossos padecimentos,"
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Para que eles se transformem",
                    "line_length": "7"
                },
                {
                    "line_number": 12,
                    "line_text": "Em alegrias, e formem",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Para que eles se transformem\nEm alegrias, e formem"
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "O halo das nossas frontes,",
                    "line_length": "7"
                },
                {
                    "line_number": 14,
                    "line_text": "Pela luz dos horizontes...",
                    "line_length": "7"
                }
            ],
            "stanza_text": "O halo das nossas frontes,\nPela luz dos horizontes..."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "Da ermida onde nós oramos",
                    "line_length": "7"
                },
                {
                    "line_number": 16,
                    "line_text": "Os horizontes fitamos;",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Da ermida onde nós oramos\nOs horizontes fitamos;"
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "E nas suas lindas cores",
                    "line_length": "7"
                },
                {
                    "line_number": 18,
                    "line_text": "Bendizemos nossas dores.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E nas suas lindas cores\nBendizemos nossas dores."
        },
        {
            "stanza_type": null,
            "stanza_number": 10,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Nossas lágrimas, choradas",
                    "line_length": "7"
                },
                {
                    "line_number": 20,
                    "line_text": "Pelas mais negras estradas.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Nossas lágrimas, choradas\nPelas mais negras estradas."
        },
        {
            "stanza_type": null,
            "stanza_number": 11,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Nossos clamores convulsos,",
                    "line_length": "7"
                },
                {
                    "line_number": 22,
                    "line_text": "E os elos dos nossos pulsos.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Nossos clamores convulsos,\nE os elos dos nossos pulsos."
        },
        {
            "stanza_type": null,
            "stanza_number": 12,
            "lines": [
                {
                    "line_number": 23,
                    "line_text": "Nossos olhos apagados;",
                    "line_length": "7"
                },
                {
                    "line_number": 24,
                    "line_text": "Nossos ouvidos fechados;",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Nossos olhos apagados;\nNossos ouvidos fechados;"
        },
        {
            "stanza_type": null,
            "stanza_number": 13,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "E os nossos próprios cabelos",
                    "line_length": "7"
                },
                {
                    "line_number": 26,
                    "line_text": "No polvo dos pesadelos;",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E os nossos próprios cabelos\nNo polvo dos pesadelos;"
        },
        {
            "stanza_type": null,
            "stanza_number": 14,
            "lines": [
                {
                    "line_number": 27,
                    "line_text": "Nossa boca no vinagre;",
                    "line_length": "7"
                },
                {
                    "line_number": 28,
                    "line_text": "E nossas faces no ozagre.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Nossa boca no vinagre;\nE nossas faces no ozagre."
        },
        {
            "stanza_type": null,
            "stanza_number": 15,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Nossas linhas do pescoço",
                    "line_length": "7"
                },
                {
                    "line_number": 30,
                    "line_text": "Na algema de um calabouço.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Nossas linhas do pescoço\nNa algema de um calabouço."
        },
        {
            "stanza_type": null,
            "stanza_number": 16,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "Nossos corações pulsando",
                    "line_length": "7"
                },
                {
                    "line_number": 32,
                    "line_text": "Em mágoas, de quando em quando;",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Nossos corações pulsando\nEm mágoas, de quando em quando;"
        },
        {
            "stanza_type": null,
            "stanza_number": 17,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Nossos frágeis, flébeis braços",
                    "line_length": "7"
                },
                {
                    "line_number": 34,
                    "line_text": "Estendidos aos espaços.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Nossos frágeis, flébeis braços\nEstendidos aos espaços."
        },
        {
            "stanza_type": null,
            "stanza_number": 18,
            "lines": [
                {
                    "line_number": 35,
                    "line_text": "Nossos rins sem energias;",
                    "line_length": "7"
                },
                {
                    "line_number": 36,
                    "line_text": "Nossas pernas doentias.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Nossos rins sem energias;\nNossas pernas doentias."
        },
        {
            "stanza_type": null,
            "stanza_number": 19,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Nossos pés todos feridos",
                    "line_length": "7"
                },
                {
                    "line_number": 38,
                    "line_text": "Nos cascalhos esquecidos",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Nossos pés todos feridos\nNos cascalhos esquecidos"
        },
        {
            "stanza_type": null,
            "stanza_number": 20,
            "lines": [
                {
                    "line_number": 39,
                    "line_text": "No chão dos ínvios caminhos",
                    "line_length": "7"
                },
                {
                    "line_number": 40,
                    "line_text": "Atapetados de espinhos.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "No chão dos ínvios caminhos\nAtapetados de espinhos."
        },
        {
            "stanza_type": null,
            "stanza_number": 21,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Mas, da ermida onde oramos,",
                    "line_length": "7"
                },
                {
                    "line_number": 42,
                    "line_text": "Os horizontes fitamos;",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Mas, da ermida onde oramos,\nOs horizontes fitamos;"
        },
        {
            "stanza_type": null,
            "stanza_number": 22,
            "lines": [
                {
                    "line_number": 43,
                    "line_text": "E, unidas, nossas almas",
                    "line_length": "7"
                },
                {
                    "line_number": 44,
                    "line_text": "Como veem floridas palmas",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E, unidas, nossas almas\nComo veem floridas palmas"
        },
        {
            "stanza_type": null,
            "stanza_number": 23,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Nesses largos horizontes",
                    "line_length": "7"
                },
                {
                    "line_number": 46,
                    "line_text": "Que dão halo às nossas frontes",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Nesses largos horizontes\nQue dão halo às nossas frontes"
        },
        {
            "stanza_type": null,
            "stanza_number": 24,
            "lines": [
                {
                    "line_number": 47,
                    "line_text": "Para que um dia possamos,",
                    "line_length": "7"
                },
                {
                    "line_number": 48,
                    "line_text": "Sim, nós dois que nos amamos,",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Para que um dia possamos,\nSim, nós dois que nos amamos,"
        },
        {
            "stanza_type": null,
            "stanza_number": 25,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Subir, ao clarão de um dia,",
                    "line_length": "7"
                },
                {
                    "line_number": 50,
                    "line_text": "Aos pés da Virgem Maria,",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Subir, ao clarão de um dia,\nAos pés da Virgem Maria,"
        },
        {
            "stanza_type": null,
            "stanza_number": 26,
            "lines": [
                {
                    "line_number": 51,
                    "line_text": "E receber os afagos",
                    "line_length": "7"
                },
                {
                    "line_number": 52,
                    "line_text": "Dos seus lindos olhos magos,",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E receber os afagos\nDos seus lindos olhos magos,"
        },
        {
            "stanza_type": null,
            "stanza_number": 27,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "E pedir-lhe, eternamente,",
                    "line_length": "7"
                },
                {
                    "line_number": 54,
                    "line_text": "Com sentimento profundo,",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E pedir-lhe, eternamente,\nCom sentimento profundo,"
        },
        {
            "stanza_type": null,
            "stanza_number": 28,
            "lines": [
                {
                    "line_number": 55,
                    "line_text": "Não se esquecer dessa gente",
                    "line_length": "7"
                },
                {
                    "line_number": 56,
                    "line_text": "Que anda sem crença no mundo.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Não se esquecer dessa gente\nQue anda sem crença no mundo."
        }
    ]
}