{
    "poem_title": "Alma saudosa",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Araújo Figueredo",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Pelos degraus da escada indefinida",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "De um sonho, fui subindo... fui subindo...",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "E os meus olhares que se iam abrindo",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "Viram todo o esplendor de uma outra vida.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Pelos degraus da escada indefinida\nDe um sonho, fui subindo... fui subindo...\nE os meus olhares que se iam abrindo\nViram todo o esplendor de uma outra vida."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Afastado da terra, umedecida",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "De tantas, tantas lágrimas caindo",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "De cada peito trágico, fui indo",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "Ainda mais longe, de alma em luz ungida,",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Afastado da terra, umedecida\nDe tantas, tantas lágrimas caindo\nDe cada peito trágico, fui indo\nAinda mais longe, de alma em luz ungida,"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "E subi mais, tonto de sol, durante",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "Uma porção de séculos, confiante",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "No que os meus olhos viam na amplidão...",
                    "line_length": "10"
                }
            ],
            "stanza_text": "E subi mais, tonto de sol, durante\nUma porção de séculos, confiante\nNo que os meus olhos viam na amplidão..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Mas, numa queda assaz vertiginosa,",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "Desci, e vim morar — alma saudosa,",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "Perto do soluçar de um coração!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Mas, numa queda assaz vertiginosa,\nDesci, e vim morar — alma saudosa,\nPerto do soluçar de um coração!"
        }
    ]
}