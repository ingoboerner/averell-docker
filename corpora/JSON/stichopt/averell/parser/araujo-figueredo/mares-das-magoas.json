{
    "poem_title": "Mares das mágoas",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Araújo Figueredo",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Vivo a sonhar com mares procelosos,",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "Que das curvas das praias alvadias",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "Sobem sinistramente aos alterosos",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "Montes, e às mais altivas penedias...",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Vivo a sonhar com mares procelosos,\nQue das curvas das praias alvadias\nSobem sinistramente aos alterosos\nMontes, e às mais altivas penedias..."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Ventos rugem, fantásticos, irosos,",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "Torcendo as ondas que se vão, bravias",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "Pelas nuvens adentro, aos céus formosos,",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "Hoje cheios, porém, de asas sombrias.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Ventos rugem, fantásticos, irosos,\nTorcendo as ondas que se vão, bravias\nPelas nuvens adentro, aos céus formosos,\nHoje cheios, porém, de asas sombrias."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Mares negros, revoltos, para cima",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "Rolando, desde os campos da vindima,",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "Desde os rosais às escarpadas fráguas.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Mares negros, revoltos, para cima\nRolando, desde os campos da vindima,\nDesde os rosais às escarpadas fráguas."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Mares, assim, em convulsões rolando,",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "Convulsionando a terra, convulsando...",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "Feitos de todas as humanas mágoas.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Mares, assim, em convulsões rolando,\nConvulsionando a terra, convulsando...\nFeitos de todas as humanas mágoas."
        }
    ]
}