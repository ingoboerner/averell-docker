{
    "poem_title": "A Capela da Piedade",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Araújo Figueredo",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Envelheceu nas labutas",
                    "line_length": "7"
                },
                {
                    "line_number": 2,
                    "line_text": "Da vida; nas grandes lutas",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Envelheceu nas labutas\nDa vida; nas grandes lutas"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 3,
                    "line_text": "Do trabalho, dia e noite,",
                    "line_length": "7"
                },
                {
                    "line_number": 4,
                    "line_text": "Sempre teve o frio açoite.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Do trabalho, dia e noite,\nSempre teve o frio açoite."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Dos vendavais da desgraça",
                    "line_length": "7"
                },
                {
                    "line_number": 6,
                    "line_text": "Que sobre as cabeças passa",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Dos vendavais da desgraça\nQue sobre as cabeças passa"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Sem lhes permitir sossego,",
                    "line_length": "7"
                },
                {
                    "line_number": 8,
                    "line_text": "E nem lhes dar o aconchego",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Sem lhes permitir sossego,\nE nem lhes dar o aconchego"
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Que tanto amaina e consola,",
                    "line_length": "7"
                },
                {
                    "line_number": 10,
                    "line_text": "Como nas mãos uma esmola...",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Que tanto amaina e consola,\nComo nas mãos uma esmola..."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "Em rapaz, viu-se sem pai;",
                    "line_length": "7"
                },
                {
                    "line_number": 12,
                    "line_text": "E, um ano depois, lhe cai",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Em rapaz, viu-se sem pai;\nE, um ano depois, lhe cai"
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Outra orfandade, de sorte",
                    "line_length": "7"
                },
                {
                    "line_number": 14,
                    "line_text": "Que ele quis chamar a morte",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Outra orfandade, de sorte\nQue ele quis chamar a morte"
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "Para livrá-lo do mundo",
                    "line_length": "7"
                },
                {
                    "line_number": 16,
                    "line_text": "Que lhe era negro e profundo",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Para livrá-lo do mundo\nQue lhe era negro e profundo"
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Em saudades doentias;",
                    "line_length": "7"
                },
                {
                    "line_number": 18,
                    "line_text": "Em pesadas nostalgias...",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Em saudades doentias;\nEm pesadas nostalgias..."
        },
        {
            "stanza_type": null,
            "stanza_number": 10,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Mas recuou, sem coragem,",
                    "line_length": "7"
                },
                {
                    "line_number": 20,
                    "line_text": "Por lhe perceber a imagem",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Mas recuou, sem coragem,\nPor lhe perceber a imagem"
        },
        {
            "stanza_type": null,
            "stanza_number": 11,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Sempre vaga e sempre triste",
                    "line_length": "7"
                },
                {
                    "line_number": 22,
                    "line_text": "Como nenhuma outra existe.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Sempre vaga e sempre triste\nComo nenhuma outra existe."
        },
        {
            "stanza_type": null,
            "stanza_number": 12,
            "lines": [
                {
                    "line_number": 23,
                    "line_text": "Receando, do cemitério,",
                    "line_length": "7"
                },
                {
                    "line_number": 24,
                    "line_text": "Todo o trágico mistério;",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Receando, do cemitério,\nTodo o trágico mistério;"
        },
        {
            "stanza_type": null,
            "stanza_number": 13,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "E toda a velada vida",
                    "line_length": "7"
                },
                {
                    "line_number": 26,
                    "line_text": "Do Além, sempre indefinida.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E toda a velada vida\nDo Além, sempre indefinida."
        },
        {
            "stanza_type": null,
            "stanza_number": 14,
            "lines": [
                {
                    "line_number": 27,
                    "line_text": "Ficou, então, no caminho",
                    "line_length": "7"
                },
                {
                    "line_number": 28,
                    "line_text": "Do mundo; e, agora, velhinho.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Ficou, então, no caminho\nDo mundo; e, agora, velhinho."
        },
        {
            "stanza_type": null,
            "stanza_number": 15,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Recordava o que sofrera",
                    "line_length": "7"
                },
                {
                    "line_number": 30,
                    "line_text": "Nesta vida passageira;",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Recordava o que sofrera\nNesta vida passageira;"
        },
        {
            "stanza_type": null,
            "stanza_number": 16,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "Passageira de tormentos",
                    "line_length": "7"
                },
                {
                    "line_number": 32,
                    "line_text": "Em todos os seus momentos...",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Passageira de tormentos\nEm todos os seus momentos..."
        },
        {
            "stanza_type": null,
            "stanza_number": 17,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "E passageira, bem certo,",
                    "line_length": "7"
                },
                {
                    "line_number": 34,
                    "line_text": "Por lhe ser o fim incerto.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E passageira, bem certo,\nPor lhe ser o fim incerto."
        },
        {
            "stanza_type": null,
            "stanza_number": 18,
            "lines": [
                {
                    "line_number": 35,
                    "line_text": "Recordava a juventude",
                    "line_length": "7"
                },
                {
                    "line_number": 36,
                    "line_text": "Dormindo num ataúde;",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Recordava a juventude\nDormindo num ataúde;"
        },
        {
            "stanza_type": null,
            "stanza_number": 19,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Vendo-a dentro da mortalha",
                    "line_length": "7"
                },
                {
                    "line_number": 38,
                    "line_text": "Que a mão do destino talha.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Vendo-a dentro da mortalha\nQue a mão do destino talha."
        },
        {
            "stanza_type": null,
            "stanza_number": 20,
            "lines": [
                {
                    "line_number": 39,
                    "line_text": "Recordava a mocidade",
                    "line_length": "7"
                },
                {
                    "line_number": 40,
                    "line_text": "Que é força e vivacidade,",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Recordava a mocidade\nQue é força e vivacidade,"
        },
        {
            "stanza_type": null,
            "stanza_number": 21,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "E é Lótus que, na existência,",
                    "line_length": "7"
                },
                {
                    "line_number": 42,
                    "line_text": "Só tem uma florescência.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E é Lótus que, na existência,\nSó tem uma florescência."
        },
        {
            "stanza_type": null,
            "stanza_number": 22,
            "lines": [
                {
                    "line_number": 43,
                    "line_text": "Passou-a, britando a pedra,",
                    "line_length": "7"
                },
                {
                    "line_number": 44,
                    "line_text": "Num trabalho que não medra;",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Passou-a, britando a pedra,\nNum trabalho que não medra;"
        },
        {
            "stanza_type": null,
            "stanza_number": 23,
            "lines": [
                {
                    "line_number": 45,
                    "line_text": "Não temendo o sol do estio,",
                    "line_length": "7"
                },
                {
                    "line_number": 46,
                    "line_text": "Nem o fogo, e o vento frio.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Não temendo o sol do estio,\nNem o fogo, e o vento frio."
        },
        {
            "stanza_type": null,
            "stanza_number": 24,
            "lines": [
                {
                    "line_number": 47,
                    "line_text": "Fez-se também carpinteiro,",
                    "line_length": "7"
                },
                {
                    "line_number": 48,
                    "line_text": "Trabalhando o ano inteiro.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Fez-se também carpinteiro,\nTrabalhando o ano inteiro."
        },
        {
            "stanza_type": null,
            "stanza_number": 25,
            "lines": [
                {
                    "line_number": 49,
                    "line_text": "Construiu casas formosas,",
                    "line_length": "7"
                },
                {
                    "line_number": 50,
                    "line_text": "Por entre tufos de rosas.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Construiu casas formosas,\nPor entre tufos de rosas."
        },
        {
            "stanza_type": null,
            "stanza_number": 26,
            "lines": [
                {
                    "line_number": 51,
                    "line_text": "Construiu uma num monte,",
                    "line_length": "7"
                },
                {
                    "line_number": 52,
                    "line_text": "De onde se via o horizonte;",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Construiu uma num monte,\nDe onde se via o horizonte;"
        },
        {
            "stanza_type": null,
            "stanza_number": 27,
            "lines": [
                {
                    "line_number": 53,
                    "line_text": "E outra, junto de um riacho",
                    "line_length": "7"
                },
                {
                    "line_number": 54,
                    "line_text": "Que, à tarde, lembrava um facho...",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E outra, junto de um riacho\nQue, à tarde, lembrava um facho..."
        },
        {
            "stanza_type": null,
            "stanza_number": 28,
            "lines": [
                {
                    "line_number": 55,
                    "line_text": "E, em filas, nas praias francas,",
                    "line_length": "7"
                },
                {
                    "line_number": 56,
                    "line_text": "Construiu casinhas brancas.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E, em filas, nas praias francas,\nConstruiu casinhas brancas."
        },
        {
            "stanza_type": null,
            "stanza_number": 29,
            "lines": [
                {
                    "line_number": 57,
                    "line_text": "E construiu, nas ilhotas,",
                    "line_length": "7"
                },
                {
                    "line_number": 58,
                    "line_text": "Outras mais, onde as gaivotas",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E construiu, nas ilhotas,\nOutras mais, onde as gaivotas"
        },
        {
            "stanza_type": null,
            "stanza_number": 30,
            "lines": [
                {
                    "line_number": 59,
                    "line_text": "Iam, meigas e serenas,",
                    "line_length": "7"
                },
                {
                    "line_number": 60,
                    "line_text": "Sacudir as suas penas.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Iam, meigas e serenas,\nSacudir as suas penas."
        },
        {
            "stanza_type": null,
            "stanza_number": 31,
            "lines": [
                {
                    "line_number": 61,
                    "line_text": "E construiu, na montanha",
                    "line_length": "7"
                },
                {
                    "line_number": 62,
                    "line_text": "Da vila, uma casa estranha",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E construiu, na montanha\nDa vila, uma casa estranha"
        },
        {
            "stanza_type": null,
            "stanza_number": 32,
            "lines": [
                {
                    "line_number": 63,
                    "line_text": "Em belezas singulares,",
                    "line_length": "7"
                },
                {
                    "line_number": 64,
                    "line_text": "Que dava encanto aos olhares,",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Em belezas singulares,\nQue dava encanto aos olhares,"
        },
        {
            "stanza_type": null,
            "stanza_number": 33,
            "lines": [
                {
                    "line_number": 65,
                    "line_text": "Porque, quando a lua vinha",
                    "line_length": "7"
                },
                {
                    "line_number": 66,
                    "line_text": "Surgindo da onda marinha,",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Porque, quando a lua vinha\nSurgindo da onda marinha,"
        },
        {
            "stanza_type": null,
            "stanza_number": 34,
            "lines": [
                {
                    "line_number": 67,
                    "line_text": "Logo a sua luz tão bela",
                    "line_length": "7"
                },
                {
                    "line_number": 68,
                    "line_text": "Lhe entrava pela janela...",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Logo a sua luz tão bela\nLhe entrava pela janela..."
        },
        {
            "stanza_type": null,
            "stanza_number": 35,
            "lines": [
                {
                    "line_number": 69,
                    "line_text": "E quem, de longe, a fitava,",
                    "line_length": "7"
                },
                {
                    "line_number": 70,
                    "line_text": "Alegremente afirmava",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E quem, de longe, a fitava,\nAlegremente afirmava"
        },
        {
            "stanza_type": null,
            "stanza_number": 36,
            "lines": [
                {
                    "line_number": 71,
                    "line_text": "Haver outra luz estranha",
                    "line_length": "7"
                },
                {
                    "line_number": 72,
                    "line_text": "Na casinha da montanha.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Haver outra luz estranha\nNa casinha da montanha."
        },
        {
            "stanza_type": null,
            "stanza_number": 37,
            "lines": [
                {
                    "line_number": 73,
                    "line_text": "Entre lírios e entre goivos",
                    "line_length": "7"
                },
                {
                    "line_number": 74,
                    "line_text": "Construiu casas para noivos.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Entre lírios e entre goivos\nConstruiu casas para noivos."
        },
        {
            "stanza_type": null,
            "stanza_number": 38,
            "lines": [
                {
                    "line_number": 75,
                    "line_text": "Para uma velha aleijada",
                    "line_length": "7"
                },
                {
                    "line_number": 76,
                    "line_text": "Construiu uma na estrada.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Para uma velha aleijada\nConstruiu uma na estrada."
        },
        {
            "stanza_type": null,
            "stanza_number": 39,
            "lines": [
                {
                    "line_number": 77,
                    "line_text": "Dando-lhe as tábuas e as telhas,",
                    "line_length": "7"
                },
                {
                    "line_number": 78,
                    "line_text": "E um lugar para as abelhas.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Dando-lhe as tábuas e as telhas,\nE um lugar para as abelhas."
        },
        {
            "stanza_type": null,
            "stanza_number": 40,
            "lines": [
                {
                    "line_number": 79,
                    "line_text": "Para um pobre lazarento",
                    "line_length": "7"
                },
                {
                    "line_number": 80,
                    "line_text": "Construiu outra, num momento.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Para um pobre lazarento\nConstruiu outra, num momento."
        },
        {
            "stanza_type": null,
            "stanza_number": 41,
            "lines": [
                {
                    "line_number": 81,
                    "line_text": "Entretanto nunca, nunca",
                    "line_length": "7"
                },
                {
                    "line_number": 82,
                    "line_text": "Construiu uma espelunca",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Entretanto nunca, nunca\nConstruiu uma espelunca"
        },
        {
            "stanza_type": null,
            "stanza_number": 42,
            "lines": [
                {
                    "line_number": 83,
                    "line_text": "Onde os anos, acabasse,",
                    "line_length": "7"
                },
                {
                    "line_number": 84,
                    "line_text": "Quando a morte lhe chegasse...",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Onde os anos, acabasse,\nQuando a morte lhe chegasse..."
        },
        {
            "stanza_type": null,
            "stanza_number": 43,
            "lines": [
                {
                    "line_number": 85,
                    "line_text": "E ainda agora, bem velhinho,",
                    "line_length": "7"
                },
                {
                    "line_number": 86,
                    "line_text": "Construía, junto ao caminho",
                    "line_length": "7"
                }
            ],
            "stanza_text": "E ainda agora, bem velhinho,\nConstruía, junto ao caminho"
        },
        {
            "stanza_type": null,
            "stanza_number": 44,
            "lines": [
                {
                    "line_number": 87,
                    "line_text": "(Sua última vontade)",
                    "line_length": "7"
                },
                {
                    "line_number": 88,
                    "line_text": "A Capela da Piedade.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "(Sua última vontade)\nA Capela da Piedade."
        },
        {
            "stanza_type": null,
            "stanza_number": 45,
            "lines": [
                {
                    "line_number": 89,
                    "line_text": "Junto da qual, fatigado,",
                    "line_length": "7"
                },
                {
                    "line_number": 90,
                    "line_text": "Viu-se, no entanto, parado.",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Junto da qual, fatigado,\nViu-se, no entanto, parado."
        },
        {
            "stanza_type": null,
            "stanza_number": 46,
            "lines": [
                {
                    "line_number": 91,
                    "line_text": "Amortecidos os braços.",
                    "line_length": "7"
                },
                {
                    "line_number": 92,
                    "line_text": "Fugindo-lhe o chão aos passos;",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Amortecidos os braços.\nFugindo-lhe o chão aos passos;"
        },
        {
            "stanza_type": null,
            "stanza_number": 47,
            "lines": [
                {
                    "line_number": 93,
                    "line_text": "Sem, por certo, perceber",
                    "line_length": "7"
                },
                {
                    "line_number": 94,
                    "line_text": "Que era ali que ia morrer!...",
                    "line_length": "7"
                }
            ],
            "stanza_text": "Sem, por certo, perceber\nQue era ali que ia morrer!..."
        }
    ]
}