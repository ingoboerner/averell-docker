{
    "poem_title": "III",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Delminda Silveira",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Com duras cordas preso, manietado,",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "Oh, Jesus! Oh! divino Redentor!",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "Dos vis juízes ao feroz rigor",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "Pelos soldados foste apresentado.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Com duras cordas preso, manietado,\nOh, Jesus! Oh! divino Redentor!\nDos vis juízes ao feroz rigor\nPelos soldados foste apresentado."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Manso Cordeiro! Vítima do Amor",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "Mais sublime, mais santo e imaculado!",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "Puro, inocente, réu foste julgado,",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "Réu de blasfêmias: — Tu! Oh, Salvador!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Manso Cordeiro! Vítima do Amor\nMais sublime, mais santo e imaculado!\nPuro, inocente, réu foste julgado,\nRéu de blasfêmias: — Tu! Oh, Salvador!"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Começam afrontas, segue-se o tormento...",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "Mas o Mártir de Amor, sem desalento,",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "Dos homens sofre a negra ingratidão,",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Começam afrontas, segue-se o tormento...\nMas o Mártir de Amor, sem desalento,\nDos homens sofre a negra ingratidão,"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "E ao Céu levantando o olhar magoado,",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "No coração amante, angustiado,",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "Ao Pai implora a graça do perdão!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "E ao Céu levantando o olhar magoado,\nNo coração amante, angustiado,\nAo Pai implora a graça do perdão!"
        }
    ]
}