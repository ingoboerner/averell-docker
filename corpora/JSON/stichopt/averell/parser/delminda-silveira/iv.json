    "poem_title": "IV",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Delminda Silveira",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Agora, de Pilatos à presença",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "Foi Jesus pelos guardas conduzido,",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "Para ouvir a cruel, fatal sentença",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "Que os juízes não tinham proferido.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Agora, de Pilatos à presença\nFoi Jesus pelos guardas conduzido,\nPara ouvir a cruel, fatal sentença\nQue os juízes não tinham proferido."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Mas o Pretor, não vendo em Cristo ofensa",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "Às Leis e nem ao César, confundido,",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "— Que por Herodes seja o preso ouvido,",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "Imperioso ordena, sem detença.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Mas o Pretor, não vendo em Cristo ofensa\nÀs Leis e nem ao César, confundido,\n— Que por Herodes seja o preso ouvido,\nImperioso ordena, sem detença."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Ante Herodes, porém, silencioso",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "Conserva-se Jesus; o povo iroso",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "Do justo pede com delírio a Morte!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Ante Herodes, porém, silencioso\nConserva-se Jesus; o povo iroso\nDo justo pede com delírio a Morte!"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Volve a Pilatos que, sem condená-lo,",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "Manda os cruéis soldados açoitá-lo,",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "Do povo entregue ao infernal transporte!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Volve a Pilatos que, sem condená-lo,\nManda os cruéis soldados açoitá-lo,\nDo povo entregue ao infernal transporte!"
        }
    ]
}