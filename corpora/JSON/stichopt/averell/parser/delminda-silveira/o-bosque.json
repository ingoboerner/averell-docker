{
    "poem_title": "O bosque",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Delminda Silveira",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Vê como é linda a copa esmeraldina",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "daquele bosque de árvores frondosas.",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "Corimbos d’ouro de lilás e rosas",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "pendem da velha arcada bizantina.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Vê como é linda a copa esmeraldina\ndaquele bosque de árvores frondosas.\nCorimbos d’ouro de lilás e rosas\npendem da velha arcada bizantina."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "A parasita agreste ali se inclina",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "revestida das flores perfumosas;",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "balançam trepadeiras graciosas",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "ao perpassar da brisa matutina.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "A parasita agreste ali se inclina\nrevestida das flores perfumosas;\nbalançam trepadeiras graciosas\nao perpassar da brisa matutina."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Rompe a manhã; a Natureza esplende!",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "penetra a balsa, numa faixa d’ouro",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "a luz mimosa que o levante acende.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Rompe a manhã; a Natureza esplende!\npenetra a balsa, numa faixa d’ouro\na luz mimosa que o levante acende."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Lá, no trigal suavemente louro,",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "pássaros cantam, sob o véu que estende",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "o sol abrindo virginal tesouro.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Lá, no trigal suavemente louro,\npássaros cantam, sob o véu que estende\no sol abrindo virginal tesouro."
        }
    ]
}