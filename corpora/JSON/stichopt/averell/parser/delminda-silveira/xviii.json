{
    "poem_title": "XVIII",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Delminda Silveira",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Dos braços tinha a Virgem lacrimosa",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "Pendido o corpo exânime, gelado",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "Do Filho seu bendito, idolatrado,",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "Sua Esperança divinal, formosa...",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Dos braços tinha a Virgem lacrimosa\nPendido o corpo exânime, gelado\nDo Filho seu bendito, idolatrado,\nSua Esperança divinal, formosa..."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Da Cruz com caridade piedosa,",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "Tinham-no seus discípulos despregado,",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "E ao virginal regaço transportado",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "Da inconsolável Mater dolorosa.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Da Cruz com caridade piedosa,\nTinham-no seus discípulos despregado,\nE ao virginal regaço transportado\nDa inconsolável Mater dolorosa."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "— “Ó vós que aqui passais, ela dizia,",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "Parai e vede se há mais agonia,",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "Se há outra dor igual à minha Dor!” —",
                    "line_length": "10"
                }
            ],
            "stanza_text": "— “Ó vós que aqui passais, ela dizia,\nParai e vede se há mais agonia,\nSe há outra dor igual à minha Dor!” —"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "E os que passavam, cheios de piedade,",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "Choravam, vendo a triste soledade",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "Em que ficara o maternal Amor!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "E os que passavam, cheios de piedade,\nChoravam, vendo a triste soledade\nEm que ficara o maternal Amor!"
        }
    ]
}