{
    "poem_title": "XII",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Delminda Silveira",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Afim de que pudesse ser pregado",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "Com vida, sobre a Cruz que carregava,",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "Por Simão Cireneu que ali passava,",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "Mandaram fosse Cristo auxiliado.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Afim de que pudesse ser pregado\nCom vida, sobre a Cruz que carregava,\nPor Simão Cireneu que ali passava,\nMandaram fosse Cristo auxiliado."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Seguiu, então, Jesus acompanhado",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "Pela turba feroz que motejava,",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "E ao alto do Calvário já chegava,",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "Onde devia ser crucificado.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Seguiu, então, Jesus acompanhado\nPela turba feroz que motejava,\nE ao alto do Calvário já chegava,\nOnde devia ser crucificado."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Aflita a Natureza emudecia",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "Ante a doloríssima agonia",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "Que o Redentor divino suportava!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Aflita a Natureza emudecia\nAnte a doloríssima agonia\nQue o Redentor divino suportava!"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "O sol perdera o brilho radioso,",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "Um fúnebre cenário lutuoso,",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "Entristecida a terra apresentava.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "O sol perdera o brilho radioso,\nUm fúnebre cenário lutuoso,\nEntristecida a terra apresentava."
        }
    ]
}