{
    "poem_title": "Saudades",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Delminda Silveira",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ó pungitiva, intérmina saudade",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "das minhas tristes horas companheira,",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "voz do passado, desde a dor primeira",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "a ecoar na minha soledade!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Ó pungitiva, intérmina saudade\ndas minhas tristes horas companheira,\nvoz do passado, desde a dor primeira\na ecoar na minha soledade!"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Vem trazer-me o conforto à ansiedade",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "em que me deixou a morte traiçoeira",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "Meu coração, a minha vida inteira",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "a última flor ceifando d’Amizade!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Vem trazer-me o conforto à ansiedade\nem que me deixou a morte traiçoeira\nMeu coração, a minha vida inteira\na última flor ceifando d’Amizade!"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Bendito sejas tu, consoladora,",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "terna saudade! Pungitiva, embora,",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "nos sonhos, vens, acalentar-me a dor!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Bendito sejas tu, consoladora,\nterna saudade! Pungitiva, embora,\nnos sonhos, vens, acalentar-me a dor!"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Entre as flores, tu és a Flor do poeta:",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "Saudades, vinde o túmulo de Julieta",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "Cobrir nos sonhos do fraterno Amor!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Entre as flores, tu és a Flor do poeta:\nSaudades, vinde o túmulo de Julieta\nCobrir nos sonhos do fraterno Amor!"
        }
    ]
}