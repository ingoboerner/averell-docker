{
    "poem_title": "Borboletas",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Delminda Silveira",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Entre botões de rosas desbrochantes",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "Elas vão-se, elas vêm desocupadas,",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "De aromas e doçura embriagadas,",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "ao sol abrindo as asas palpitantes.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Entre botões de rosas desbrochantes\nElas vão-se, elas vêm desocupadas,\nDe aromas e doçura embriagadas,\nao sol abrindo as asas palpitantes."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Sobre a relva cintilam diamantes,",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "Rubis, topázios, verdes esmeraldas;",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "E as borboletas voam fascinadas,",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "De flor em flor, ligeiras inconstantes.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Sobre a relva cintilam diamantes,\nRubis, topázios, verdes esmeraldas;\nE as borboletas voam fascinadas,\nDe flor em flor, ligeiras inconstantes."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Assim, no peito, a rubra flor humana",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "Abre, da esperança que a engana,",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "Aos sonhos de dulcíssima ilusão.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Assim, no peito, a rubra flor humana\nAbre, da esperança que a engana,\nAos sonhos de dulcíssima ilusão."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Mas como as borboletas irisadas",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "Vão-se também as ilusões douradas,",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "Espinhos só restando ao coração.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Mas como as borboletas irisadas\nVão-se também as ilusões douradas,\nEspinhos só restando ao coração."
        }
    ]
}