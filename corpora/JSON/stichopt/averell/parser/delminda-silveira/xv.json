{
    "poem_title": "XV",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Delminda Silveira",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Pálido, branco lírio maltratado,",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "Teu corpo vejo, oh, divinal Jesus!",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "Vejo teus belos olhos já sem luz,",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "E o nácar de teus lábios desbotado.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Pálido, branco lírio maltratado,\nTeu corpo vejo, oh, divinal Jesus!\nVejo teus belos olhos já sem luz,\nE o nácar de teus lábios desbotado."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "O coração materno angustiado,",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "Que aí palpitas ao sopé da Cruz,",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "Nesse Amor que a minh’alma não traduz,",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "Aquece o Filho teu enregelado!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "O coração materno angustiado,\nQue aí palpitas ao sopé da Cruz,\nNesse Amor que a minh’alma não traduz,\nAquece o Filho teu enregelado!"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Vem, Madalena, vem; o afeto santo",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "Lavando-te a alma no crisol do pranto,",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "Sócia te fez na Dor da Virgem pura.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Vem, Madalena, vem; o afeto santo\nLavando-te a alma no crisol do pranto,\nSócia te fez na Dor da Virgem pura."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "E tu, discípulo amado, vem, com ela,",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "Vem formar a trindade santa e bela",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "Da mais sublime e ideal ternura!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "E tu, discípulo amado, vem, com ela,\nVem formar a trindade santa e bela\nDa mais sublime e ideal ternura!"
        }
    ]
}