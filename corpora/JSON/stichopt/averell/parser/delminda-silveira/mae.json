{
    "poem_title": "Mãe",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Delminda Silveira",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "No próprio lar a vi, meiga, singela,",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "pelos filhinhos tenros rodeada,",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "lembrava a Virgem Mãe Imaculada",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "no Santuário de gentil capela.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "No próprio lar a vi, meiga, singela,\npelos filhinhos tenros rodeada,\nlembrava a Virgem Mãe Imaculada\nno Santuário de gentil capela."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Oh! nunca eu vira da Madona bela",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "cópia mais pura e fiel esculturada,",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "nem, jamais, sobre altar emoldurada",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "de diamantes, em preciosa tela...!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Oh! nunca eu vira da Madona bela\ncópia mais pura e fiel esculturada,\nnem, jamais, sobre altar emoldurada\nde diamantes, em preciosa tela...!"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Loiros anjinhos de rosadas faces,",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "— Celestes querubins lindos vivazes,",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "lhe davam beijos, lhe atiravam flores;",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Loiros anjinhos de rosadas faces,\n— Celestes querubins lindos vivazes,\nlhe davam beijos, lhe atiravam flores;"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "E ela sorria, o Céu azul fitando,",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "nesse sorriso que a divinizando,",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "faz, da mulher, o anjo dos amores.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "E ela sorria, o Céu azul fitando,\nnesse sorriso que a divinizando,\nfaz, da mulher, o anjo dos amores."
        }
    ]
}