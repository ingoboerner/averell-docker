{
    "poem_title": "Folha de trevo",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Delminda Silveira",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Dos anos meus em vão te procurei",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "Pelo vergel em flor, folha mimosa;",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "Folha de trevo mística, preciosa,",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "Cruz de esmeraldas que a sonhar beijei.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Dos anos meus em vão te procurei\nPelo vergel em flor, folha mimosa;\nFolha de trevo mística, preciosa,\nCruz de esmeraldas que a sonhar beijei."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Laboradoras mãos, alfim, cansei;",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "Triste, cansei meus olhos, ansiosa.",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "Perdi meus passos, sem te achar, formosa,",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "Entre o trifólio verde que encontrei!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Laboradoras mãos, alfim, cansei;\nTriste, cansei meus olhos, ansiosa.\nPerdi meus passos, sem te achar, formosa,\nEntre o trifólio verde que encontrei!"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Formam-te corações: por isso és bela;",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "Da cruz a forma tens que nos encanta,",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "És grato talismã, folha singela.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Formam-te corações: por isso és bela;\nDa cruz a forma tens que nos encanta,\nÉs grato talismã, folha singela."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Oh! feliz quem, da mágoa que o quebranta,",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "Vê-te brilhar na túrbida procela",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "— Folha de trevo milagrosa e santa!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Oh! feliz quem, da mágoa que o quebranta,\nVê-te brilhar na túrbida procela\n— Folha de trevo milagrosa e santa!"
        }
    ]
}