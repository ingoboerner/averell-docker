{
    "poem_title": "Confidência",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Delminda Silveira",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Vem, tu, comigo pelo campo, e, vamos,",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "antes que o sol, doirando aquele outeiro,",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "venha, com setas d’ouro, prazenteiro,",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "novas flores abrir nos verdes ramos.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Vem, tu, comigo pelo campo, e, vamos,\nantes que o sol, doirando aquele outeiro,\nvenha, com setas d’ouro, prazenteiro,\nnovas flores abrir nos verdes ramos."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "De amor toda delícia que sonhamos",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "neste inefável sonho feiticeiro",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "da Natureza ao despertar fagueiro",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "hemos de achá-la aqui onde a buscamos.",
                    "line_length": "10"
                }
            ],
            "stanza_text": "De amor toda delícia que sonhamos\nneste inefável sonho feiticeiro\nda Natureza ao despertar fagueiro\nhemos de achá-la aqui onde a buscamos."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "São corações plenos de mágoa e afetos",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "Essas boninas onde dormem insetos",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "de onde orvalhos caem e fogem aromas...",
                    "line_length": "10"
                }
            ],
            "stanza_text": "São corações plenos de mágoa e afetos\nEssas boninas onde dormem insetos\nde onde orvalhos caem e fogem aromas..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "E da manhã a sussurrante calma",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "ouvirás o segredo da minh’alma",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "gemer, da mata no rumor das Comas!",
                    "line_length": "10"
                }
            ],
            "stanza_text": "E da manhã a sussurrante calma\nouvirás o segredo da minh’alma\ngemer, da mata no rumor das Comas!"
        }
    ]
}