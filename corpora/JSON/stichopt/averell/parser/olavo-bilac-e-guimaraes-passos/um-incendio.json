{
    "poem_title": "UM INCÊNDIO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Olavo Bilac e Guimarães Passos",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Incendiou-se o Ravot,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "E diziam no Pascoal:",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "— O fogo não respeitou",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Aquele belo pombal.",
                    "line_length": null
                }
            ],
            "stanza_text": "Incendiou-se o Ravot,\nE diziam no Pascoal:\n— O fogo não respeitou\nAquele belo pombal."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "As suíças do Viana,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Cheias de mágoa e de dor,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Pingavam pranto e suor",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Ou antes — caldo de cana.",
                    "line_length": null
                }
            ],
            "stanza_text": "As suíças do Viana,\nCheias de mágoa e de dor,\nPingavam pranto e suor\nOu antes — caldo de cana."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Disse um tipo, na perua,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Passando pela calçada:",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "— Que aconteceu n’esta rua?",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Que cheiro de pomba assada!",
                    "line_length": null
                }
            ],
            "stanza_text": "Disse um tipo, na perua,\nPassando pela calçada:\n— Que aconteceu n’esta rua?\nQue cheiro de pomba assada!"
        }
    ]
}