{
    "poem_title": "PANCADARIA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Olavo Bilac e Guimarães Passos",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "José casou com Maroca,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "E Antônio casou com Fina;",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Foi cada um p’ra a sua toca",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Numa alegria divina.",
                    "line_length": null
                }
            ],
            "stanza_text": "José casou com Maroca,\nE Antônio casou com Fina;\nFoi cada um p’ra a sua toca\nNuma alegria divina."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "No primeiro mês, abraços,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Beijos, venturas, carinhos...",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "E andavam, dados os braços,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "E eram as casas dous ninhos.",
                    "line_length": null
                }
            ],
            "stanza_text": "No primeiro mês, abraços,\nBeijos, venturas, carinhos...\nE andavam, dados os braços,\nE eram as casas dous ninhos."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Depois, arrufos e brigas;",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "E tedio em cada consorte...",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "E ai! ambas as raparigas",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Tiveram a mesma sorte:",
                    "line_length": null
                }
            ],
            "stanza_text": "Depois, arrufos e brigas;\nE tedio em cada consorte...\nE ai! ambas as raparigas\nTiveram a mesma sorte:"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "E ambos, com faria guerreira,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Tiveram ira profunda:",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "José dava na primeira,",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "E o outro dava... na segunda.",
                    "line_length": null
                }
            ],
            "stanza_text": "E ambos, com faria guerreira,\nTiveram ira profunda:\nJosé dava na primeira,\nE o outro dava... na segunda."
        }
    ]
}