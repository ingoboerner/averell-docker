{
    "poem_title": "NO TRIBUNAL",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Olavo Bilac e Guimarães Passos",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ao tribunal comparece",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Manoel Fera, malfeitor,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Cuja vida se conhece,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Negra e pejada de horror.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ao tribunal comparece\nManoel Fera, malfeitor,\nCuja vida se conhece,\nNegra e pejada de horror."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Ouve o libelo terrível,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Sem sequer pestanejar:",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Logo depois, impassível,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Diz que deseja falar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ouve o libelo terrível,\nSem sequer pestanejar:\nLogo depois, impassível,\nDiz que deseja falar."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "— Fale, diz o presidente.",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "“Eu declaro ao tribunal",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Que confirmo plenamente",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Toda a acusação formal.",
                    "line_length": null
                }
            ],
            "stanza_text": "— Fale, diz o presidente.\n“Eu declaro ao tribunal\nQue confirmo plenamente\nToda a acusação formal."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Nada nego! não há meio:",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Assaltei, matei, roubei!",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Mas o meu crime mais feio",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "É outro que só eu sei...”",
                    "line_length": null
                }
            ],
            "stanza_text": "Nada nego! não há meio:\nAssaltei, matei, roubei!\nMas o meu crime mais feio\nÉ outro que só eu sei...”"
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Diz um jurado em voz alta:",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "“Isto custa a acreditar!",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Diga: qual foi essa falta?”",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "“Ter me deixado apanhar...”",
                    "line_length": null
                }
            ],
            "stanza_text": "Diz um jurado em voz alta:\n“Isto custa a acreditar!\nDiga: qual foi essa falta?”\n“Ter me deixado apanhar...”"
        }
    ]
}