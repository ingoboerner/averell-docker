{
    "poem_title": "O DILEMA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Olavo Bilac e Guimarães Passos",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "O marido da Vicência,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Que mora em cima de mim,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Tenham santa paciência,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "É cousa muito ruim...",
                    "line_length": null
                }
            ],
            "stanza_text": "O marido da Vicência,\nQue mora em cima de mim,\nTenham santa paciência,\nÉ cousa muito ruim..."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Que barulho! Todo o dia",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Ela diz que se despenca",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Da janela. Que arrelia!",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "E ele dá-lhe pau em penca.",
                    "line_length": null
                }
            ],
            "stanza_text": "Que barulho! Todo o dia\nEla diz que se despenca\nDa janela. Que arrelia!\nE ele dá-lhe pau em penca."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "“Vizinho, eu berro, perdoe-a,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Vizinho, não seja mau!”.",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "— Não conhece esta saloia,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Esta fúria...” E lá vai pau.",
                    "line_length": null
                }
            ],
            "stanza_text": "“Vizinho, eu berro, perdoe-a,\nVizinho, não seja mau!”.\n— Não conhece esta saloia,\nEsta fúria...” E lá vai pau."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Não durmo com tanto rolo,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Com tanta, tanta pancada!",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Outro dia eles, num bolo,",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Rebolaram pela escada...",
                    "line_length": null
                }
            ],
            "stanza_text": "Não durmo com tanto rolo,\nCom tanta, tanta pancada!\nOutro dia eles, num bolo,\nRebolaram pela escada..."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Não senhor! eu já não acho",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Que assim continue! pois,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Ou eles vêm cá p’ra baixo,",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Ou vou p’ra cima dos dois.",
                    "line_length": null
                }
            ],
            "stanza_text": "Não senhor! eu já não acho\nQue assim continue! pois,\nOu eles vêm cá p’ra baixo,\nOu vou p’ra cima dos dois."
        }
    ]
}