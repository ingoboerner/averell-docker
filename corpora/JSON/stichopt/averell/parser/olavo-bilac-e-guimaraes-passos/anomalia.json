{
    "poem_title": "ANOMALIA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Olavo Bilac e Guimarães Passos",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Herr Francofish é polaco;",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "É portuguesa a Manoela:",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Mas do Francofish o fraco",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "É falar a língua dela.",
                    "line_length": null
                }
            ],
            "stanza_text": "Herr Francofish é polaco;\nÉ portuguesa a Manoela:\nMas do Francofish o fraco\nÉ falar a língua dela."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Ela, sendo portuguesa,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Fala polaco, bravia:",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "E não há quem, com franqueza,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Explique essa anomalia.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ela, sendo portuguesa,\nFala polaco, bravia:\nE não há quem, com franqueza,\nExplique essa anomalia."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Pois, que mania é aquela,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Que atroz costume é aquele,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "De ele usar da língua dela,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "E ela usar da língua dele?...",
                    "line_length": null
                }
            ],
            "stanza_text": "Pois, que mania é aquela,\nQue atroz costume é aquele,\nDe ele usar da língua dela,\nE ela usar da língua dele?..."
        }
    ]
}