{
    "poem_title": "A PRONTIDÃO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Olavo Bilac e Guimarães Passos",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Dona Quitéria, escutando,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Presa de estranha emoção,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Que as tropas, aquartelando,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Estavam de prontidão,",
                    "line_length": null
                },
                {
                    "line_number": 5,
                    "line_text": "Disse ao pacato marido:",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "“Segue o exemplo, fracalhão!",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "“Só tu, Pafúncio querido,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "“Não ficas de prontidão!”",
                    "line_length": null
                }
            ],
            "stanza_text": "Dona Quitéria, escutando,\nPresa de estranha emoção,\nQue as tropas, aquartelando,\nEstavam de prontidão,\nDisse ao pacato marido:\n“Segue o exemplo, fracalhão!\n“Só tu, Pafúncio querido,\n“Não ficas de prontidão!”"
        }
    ]
}