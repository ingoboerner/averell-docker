{
    "poem_title": "CAIPORISMO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Olavo Bilac e Guimarães Passos",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Morava o Dr. Deiró,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Mesmo ao lado do Marreco:",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Este deixava o caneco",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Para beber água só",
                    "line_length": null
                }
            ],
            "stanza_text": "Morava o Dr. Deiró,\nMesmo ao lado do Marreco:\nEste deixava o caneco\nPara beber água só"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Na quartinha do Doutor,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Que, por mais que se escamasse,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Não achava o bebedor,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Nem quem do dito falasse.",
                    "line_length": null
                }
            ],
            "stanza_text": "Na quartinha do Doutor,\nQue, por mais que se escamasse,\nNão achava o bebedor,\nNem quem do dito falasse."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Chegou, porém, triste dia,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Em que o Marreco, bebendo,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Foi de gozo adormecendo,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "E o Deiró também dormia.",
                    "line_length": null
                }
            ],
            "stanza_text": "Chegou, porém, triste dia,\nEm que o Marreco, bebendo,\nFoi de gozo adormecendo,\nE o Deiró também dormia."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Que beber abençoado!",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Mas foi a sede tão rija,",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Que o Marreco foi pegado",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Com a boca na botija.",
                    "line_length": null
                }
            ],
            "stanza_text": "Que beber abençoado!\nMas foi a sede tão rija,\nQue o Marreco foi pegado\nCom a boca na botija."
        }
    ]
}