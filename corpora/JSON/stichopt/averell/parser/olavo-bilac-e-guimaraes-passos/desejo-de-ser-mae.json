{
    "poem_title": "DESEJO DE SER MÃE",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Olavo Bilac e Guimarães Passos",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Jurava dona Maria",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "(Que quase morreu de parto,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Ao ter o seu filho quarto)",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Que em outra não cairia.",
                    "line_length": null
                }
            ],
            "stanza_text": "Jurava dona Maria\n(Que quase morreu de parto,\nAo ter o seu filho quarto)\nQue em outra não cairia."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Ouvindo-a, dona Ramona,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "De sessenta anos de idade,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Às saudades se abandona",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Da antiga felicidade:",
                    "line_length": null
                }
            ],
            "stanza_text": "Ouvindo-a, dona Ramona,\nDe sessenta anos de idade,\nÀs saudades se abandona\nDa antiga felicidade:"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "“Só faliam assim os fartos!",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "A i! que eu não possa, coitada!",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Ainda estar arriscada",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "A ter trezentos mil partos!”",
                    "line_length": null
                }
            ],
            "stanza_text": "“Só faliam assim os fartos!\nA i! que eu não possa, coitada!\nAinda estar arriscada\nA ter trezentos mil partos!”"
        }
    ]
}