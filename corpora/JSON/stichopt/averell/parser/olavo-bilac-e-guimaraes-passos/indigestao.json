{
    "poem_title": "INDIGESTÃO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Olavo Bilac e Guimarães Passos",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Linda como a madrugada,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Cheirosa como um rosal,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Rita, faceira e enfeitada,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Foi à missa do Natal.",
                    "line_length": null
                }
            ],
            "stanza_text": "Linda como a madrugada,\nCheirosa como um rosal,\nRita, faceira e enfeitada,\nFoi à missa do Natal."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Depois da missa, passeio,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Com o Juca, ferrador...",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Ceiam leitão com recheio,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Beijam-se, faliam de amor.",
                    "line_length": null
                }
            ],
            "stanza_text": "Depois da missa, passeio,\nCom o Juca, ferrador...\nCeiam leitão com recheio,\nBeijam-se, faliam de amor."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Que noite quente e bonita!",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Que regalo para os dois!",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Mas que mudança na Rita,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Logo dous meses depois!",
                    "line_length": null
                }
            ],
            "stanza_text": "Que noite quente e bonita!\nQue regalo para os dois!\nMas que mudança na Rita,\nLogo dous meses depois!"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Desejos extravagantes...",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Ora a rir, ora a chorar...",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Não trabalha como d’antes...",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Põe-se a engordar... a engordar.",
                    "line_length": null
                }
            ],
            "stanza_text": "Desejos extravagantes...\nOra a rir, ora a chorar...\nNão trabalha como d’antes...\nPõe-se a engordar... a engordar."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Diz a mãe: “Tu, com certeza,",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Tiveste uma indigestão...",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Tu abusaste da mesa:",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Comeste muito leitão...”",
                    "line_length": null
                }
            ],
            "stanza_text": "Diz a mãe: “Tu, com certeza,\nTiveste uma indigestão...\nTu abusaste da mesa:\nComeste muito leitão...”"
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Rita cora, ao ouvir isto:",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Pois bem sabe que, afinal,",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Depois do Natal de Cristo,",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Vai haver outro Natal...",
                    "line_length": null
                }
            ],
            "stanza_text": "Rita cora, ao ouvir isto:\nPois bem sabe que, afinal,\nDepois do Natal de Cristo,\nVai haver outro Natal..."
        }
    ]
}