{
    "poem_title": "ORLANDO FURIOSO",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Olavo Bilac e Guimarães Passos",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Chamava-se Lagartixo",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Um homem, que, a noite inteira,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Puxava na companheira",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Pancada de criar bicho.",
                    "line_length": null
                }
            ],
            "stanza_text": "Chamava-se Lagartixo\nUm homem, que, a noite inteira,\nPuxava na companheira\nPancada de criar bicho."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Deus sabe como ele dava",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "E como ela recebia;",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Quanto mais ela gritava,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Tanto mais ele batia.",
                    "line_length": null
                }
            ],
            "stanza_text": "Deus sabe como ele dava\nE como ela recebia;\nQuanto mais ela gritava,\nTanto mais ele batia."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Acode um vizinho aos gritos,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Mas a pancada não para;",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "A mulher mostra os cambitos,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "O marido esconde a cara.",
                    "line_length": null
                }
            ],
            "stanza_text": "Acode um vizinho aos gritos,\nMas a pancada não para;\nA mulher mostra os cambitos,\nO marido esconde a cara."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "— “Basta! Já ’stá bem batida!...",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Vizinho, não seja mau...”",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "— “Vá tratar de sua vida",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Que ela gosta do meu pau.”",
                    "line_length": null
                }
            ],
            "stanza_text": "— “Basta! Já ’stá bem batida!...\nVizinho, não seja mau...”\n— “Vá tratar de sua vida\nQue ela gosta do meu pau.”"
        }
    ]
}