{
    "poem_title": "RITINHA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Olavo Bilac e Guimarães Passos",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ritinha, menina bela,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Que não faz nada por mal,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Namora pela janela,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Namora pelo quintal!",
                    "line_length": null
                }
            ],
            "stanza_text": "Ritinha, menina bela,\nQue não faz nada por mal,\nNamora pela janela,\nNamora pelo quintal!"
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Prega-lhe o pai uma sova,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Que a põe de cama a chorar",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "E quase a conduz à cova.",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "E diz o velho a berrar:",
                    "line_length": null
                }
            ],
            "stanza_text": "Prega-lhe o pai uma sova,\nQue a põe de cama a chorar\nE quase a conduz à cova.\nE diz o velho a berrar:"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "“Arre! agora, felizmente,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Quero ver se inda és capaz",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "De namorar pela frente",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "E namorar por detrás!”",
                    "line_length": null
                }
            ],
            "stanza_text": "“Arre! agora, felizmente,\nQuero ver se inda és capaz\nDe namorar pela frente\nE namorar por detrás!”"
        }
    ]
}