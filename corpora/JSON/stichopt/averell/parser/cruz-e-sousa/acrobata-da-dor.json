{
    "poem_title": "Acrobata da dor",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Gargalha, ri, num riso de tormenta,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Como um palhaço, que desengonçado,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Nervoso, ri, num riso absurdo, inflado",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "De uma ironia e de uma dor violenta.",
                    "line_length": null
                }
            ],
            "stanza_text": "Gargalha, ri, num riso de tormenta,\nComo um palhaço, que desengonçado,\nNervoso, ri, num riso absurdo, inflado\nDe uma ironia e de uma dor violenta."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Da gargalhada atroz, sanguinolenta,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Agita os guizos, e convulsionado",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Salta, gavroche, salta clown, varado",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Pelo estertor dessa agonia lenta...",
                    "line_length": null
                }
            ],
            "stanza_text": "Da gargalhada atroz, sanguinolenta,\nAgita os guizos, e convulsionado\nSalta, gavroche, salta clown, varado\nPelo estertor dessa agonia lenta..."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Pedem-te bis e um bis não se despreza!",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Vamos! reteza os músculos, reteza",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Nessas macabras piruetas d’aço...",
                    "line_length": null
                }
            ],
            "stanza_text": "Pedem-te bis e um bis não se despreza!\nVamos! reteza os músculos, reteza\nNessas macabras piruetas d’aço..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "E embora caias sobre o chão, fremente,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Afogado em teu sangue estuoso e quente",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Ri! Coração, tristíssimo palhaço.",
                    "line_length": null
                }
            ],
            "stanza_text": "E embora caias sobre o chão, fremente,\nAfogado em teu sangue estuoso e quente\nRi! Coração, tristíssimo palhaço."
        }
    ]
}