{
    "poem_title": "Primeira comunhão",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Grinaldas e véus brancos, véus de neve,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Véus e grinaldas purificadores,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Vão as Flores carnais, as alvas Flores",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Do Sentimento delicado e leve.",
                    "line_length": null
                }
            ],
            "stanza_text": "Grinaldas e véus brancos, véus de neve,\nVéus e grinaldas purificadores,\nVão as Flores carnais, as alvas Flores\nDo Sentimento delicado e leve."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Um luar de pudor, sereno e breve,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "De ignotos e de prônubos pudores,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Erra nos pulcros virginais brancores",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Por onde o Amor parábolas descreve...",
                    "line_length": null
                }
            ],
            "stanza_text": "Um luar de pudor, sereno e breve,\nDe ignotos e de prônubos pudores,\nErra nos pulcros virginais brancores\nPor onde o Amor parábolas descreve..."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Luzes claras e augustas, luzes claras",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Douram dos templos as sagradas aras,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Na comunhão das níveas hóstias frias...",
                    "line_length": null
                }
            ],
            "stanza_text": "Luzes claras e augustas, luzes claras\nDouram dos templos as sagradas aras,\nNa comunhão das níveas hóstias frias..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Quando seios pubentes estremecem,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Silfos de sonhos de volúpia crescem,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Ondulantes, em formas alvadias...",
                    "line_length": null
                }
            ],
            "stanza_text": "Quando seios pubentes estremecem,\nSilfos de sonhos de volúpia crescem,\nOndulantes, em formas alvadias..."
        }
    ]
}