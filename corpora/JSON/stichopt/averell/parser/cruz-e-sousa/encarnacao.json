{
    "poem_title": "Encarnação",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Carnais, sejam carnais tantos desejos,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Carnais, sejam carnais tantos anseios,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Palpitações e frêmitos e enleios,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Das harpas da emoção tantos arpejos...",
                    "line_length": null
                }
            ],
            "stanza_text": "Carnais, sejam carnais tantos desejos,\nCarnais, sejam carnais tantos anseios,\nPalpitações e frêmitos e enleios,\nDas harpas da emoção tantos arpejos..."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Sonhos, que vão, por trêmulos adejos,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "A noite, ao luar, intumescer os seios",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Lácteos, de finos e azulados veios",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "De virgindade, de pudor, de pejos...",
                    "line_length": null
                }
            ],
            "stanza_text": "Sonhos, que vão, por trêmulos adejos,\nA noite, ao luar, intumescer os seios\nLácteos, de finos e azulados veios\nDe virgindade, de pudor, de pejos..."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Sejam carnais todos os sonhos brumos",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "De estranhos, vagos, estrelados rumos",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Onde as Visões do amor dormem geladas...",
                    "line_length": null
                }
            ],
            "stanza_text": "Sejam carnais todos os sonhos brumos\nDe estranhos, vagos, estrelados rumos\nOnde as Visões do amor dormem geladas..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Sonhos, palpitações, desejos e ânsias",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Formem, com claridades e fragrâncias,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "A encarnação das lívidas Amadas!",
                    "line_length": null
                }
            ],
            "stanza_text": "Sonhos, palpitações, desejos e ânsias\nFormem, com claridades e fragrâncias,\nA encarnação das lívidas Amadas!"
        }
    ]
}