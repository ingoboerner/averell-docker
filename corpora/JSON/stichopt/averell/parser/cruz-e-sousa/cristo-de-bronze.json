{
    "poem_title": "Cristo de bronze",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ó Cristos de ouro, de marfim, de prata,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Cristos ideais, serenos, luminosos,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Ensanguentados Cristos dolorosos",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Cuja cabeça a Dor e a Luz retrata.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ó Cristos de ouro, de marfim, de prata,\nCristos ideais, serenos, luminosos,\nEnsanguentados Cristos dolorosos\nCuja cabeça a Dor e a Luz retrata."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Ó Cristos de altivez intemerata,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Ó Cristos de metais estrepitosos",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Que gritam como os tigres venenosos",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Do desejo carnal que enerva e mata.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ó Cristos de altivez intemerata,\nÓ Cristos de metais estrepitosos\nQue gritam como os tigres venenosos\nDo desejo carnal que enerva e mata."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Cristos de pedra, de madeira e barro...",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Ó Cristo humano, estético, bizarro,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Amortalhado nas fatais injurias...",
                    "line_length": null
                }
            ],
            "stanza_text": "Cristos de pedra, de madeira e barro...\nÓ Cristo humano, estético, bizarro,\nAmortalhado nas fatais injurias..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Na rija cruz aspérrima pregado",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Canta o Cristo de bronze do Pecado,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Ri o Cristo de bronze das luxúrias!...",
                    "line_length": null
                }
            ],
            "stanza_text": "Na rija cruz aspérrima pregado\nCanta o Cristo de bronze do Pecado,\nRi o Cristo de bronze das luxúrias!..."
        }
    ]
}