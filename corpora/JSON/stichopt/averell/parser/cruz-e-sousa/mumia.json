    "poem_title": "Múmia",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Múmia de sangue e lama e terra e treva,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Podridão feita deusa de granito,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Que surges dos mistérios do Infinito",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Amamentada na lascívia de Eva.",
                    "line_length": null
                }
            ],
            "stanza_text": "Múmia de sangue e lama e terra e treva,\nPodridão feita deusa de granito,\nQue surges dos mistérios do Infinito\nAmamentada na lascívia de Eva."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Tua boca voraz se farta e ceva",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Na carne e espalhas o terror maldito,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "O grito humano, o doloroso grito",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Que um vento estranho para és limbos leva.",
                    "line_length": null
                }
            ],
            "stanza_text": "Tua boca voraz se farta e ceva\nNa carne e espalhas o terror maldito,\nO grito humano, o doloroso grito\nQue um vento estranho para és limbos leva."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Báratros, criptas, dédalos atrozes",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Escancaram-se aos tétricos, ferozes",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Uivos tremendos com luxúria e cio...",
                    "line_length": null
                }
            ],
            "stanza_text": "Báratros, criptas, dédalos atrozes\nEscancaram-se aos tétricos, ferozes\nUivos tremendos com luxúria e cio..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Ris a punhais de frígidos sarcasmos",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "E deve dar congélidos espasmos",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "O teu beijo de pedra horrendo e frio!...",
                    "line_length": null
                }
            ],
            "stanza_text": "Ris a punhais de frígidos sarcasmos\nE deve dar congélidos espasmos\nO teu beijo de pedra horrendo e frio!..."
        }
    ]
}