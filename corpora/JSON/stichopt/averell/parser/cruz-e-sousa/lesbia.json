{
    "poem_title": "Lésbia",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Cróton selvagem, tinhorão lascivo,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Planta mortal, carnívora, sangrenta,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Da tua carne báquica rebenta",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "A vermelha explosão de um sangue vivo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Cróton selvagem, tinhorão lascivo,\nPlanta mortal, carnívora, sangrenta,\nDa tua carne báquica rebenta\nA vermelha explosão de um sangue vivo."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Nesse lábio mordente e convulsivo,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Ri, ri risadas de expressão violenta",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "O Amor, trágico e triste, e passe, lenta,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "A morte, o espasmo gélido, aflitivo...",
                    "line_length": null
                }
            ],
            "stanza_text": "Nesse lábio mordente e convulsivo,\nRi, ri risadas de expressão violenta\nO Amor, trágico e triste, e passe, lenta,\nA morte, o espasmo gélido, aflitivo..."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Lésbia nervosa, fascinante e doente,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Cruel e demoníaca serpente",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Das flamejantes atrações do gozo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Lésbia nervosa, fascinante e doente,\nCruel e demoníaca serpente\nDas flamejantes atrações do gozo."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Dos teus seios acídulos, amargos,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Fluem capros aromas e os letargos,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Os ópios de um luar tuberculoso...",
                    "line_length": null
                }
            ],
            "stanza_text": "Dos teus seios acídulos, amargos,\nFluem capros aromas e os letargos,\nOs ópios de um luar tuberculoso..."
        }
    ]
}