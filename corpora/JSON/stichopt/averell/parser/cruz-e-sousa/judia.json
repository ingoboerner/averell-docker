    "poem_title": "Judia",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ah! Judia! Judia impenitente!",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "De erma e de turva região sombria",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "De areia fulva, bárbara, inclemente,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Numa desolação, chegaste um dia...",
                    "line_length": null
                }
            ],
            "stanza_text": "Ah! Judia! Judia impenitente!\nDe erma e de turva região sombria\nDe areia fulva, bárbara, inclemente,\nNuma desolação, chegaste um dia..."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Través o céu mais tórrido, mais quente,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Onde a luz mais flamívoma radia,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "A voz dos teus, nostálgica, plangente,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Vibrou, chorou, clamou por ti, Judia!",
                    "line_length": null
                }
            ],
            "stanza_text": "Través o céu mais tórrido, mais quente,\nOnde a luz mais flamívoma radia,\nA voz dos teus, nostálgica, plangente,\nVibrou, chorou, clamou por ti, Judia!"
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Ave de melancólicos mistérios,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Ruflaste as asas por Azuis sidérios,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Ébria dos vícios célebres que salvam...",
                    "line_length": null
                }
            ],
            "stanza_text": "Ave de melancólicos mistérios,\nRuflaste as asas por Azuis sidérios,\nÉbria dos vícios célebres que salvam..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Para alguns corações que ainda te buscam",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "És como os sóis que rútilos coruscam",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "E a torva terra do deserto escalvam!",
                    "line_length": null
                }
            ],
            "stanza_text": "Para alguns corações que ainda te buscam\nÉs como os sóis que rútilos coruscam\nE a torva terra do deserto escalvam!"
        }
    ]
}