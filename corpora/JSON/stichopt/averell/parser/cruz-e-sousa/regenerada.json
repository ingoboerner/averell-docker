{
    "poem_title": "Regenerada",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "De mãos postas, à luz de frouxos círios",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Rezas para as Estrelas do Infinito,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Para os Azuis dos siderais Empíreos",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Das Orações o doloroso rito.",
                    "line_length": null
                }
            ],
            "stanza_text": "De mãos postas, à luz de frouxos círios\nRezas para as Estrelas do Infinito,\nPara os Azuis dos siderais Empíreos\nDas Orações o doloroso rito."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Todos os mais recônditos martírios,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "As angústias mortais, teu lábio aflito",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Soluça, em preces de luar e lírios,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Num trêmulo de frases inaudito.",
                    "line_length": null
                }
            ],
            "stanza_text": "Todos os mais recônditos martírios,\nAs angústias mortais, teu lábio aflito\nSoluça, em preces de luar e lírios,\nNum trêmulo de frases inaudito."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Olhos, braços e lábios, mãos e seios,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Presos, d’estranhos, místicos enleios,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Já nas Mágoas estão divinizados.",
                    "line_length": null
                }
            ],
            "stanza_text": "Olhos, braços e lábios, mãos e seios,\nPresos, d’estranhos, místicos enleios,\nJá nas Mágoas estão divinizados."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Mas no teu vulto ideal e penitente",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Parece haver todo o calor veemente",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Da febre antiga de gentis Pecados.",
                    "line_length": null
                }
            ],
            "stanza_text": "Mas no teu vulto ideal e penitente\nParece haver todo o calor veemente\nDa febre antiga de gentis Pecados."
        }
    ]
}