    "poem_title": "Siderações",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Para as Estrelas de cristais gelados",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "As ânsias e os desejos vão subindo,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Galgando azuis e siderais noivados",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "De nuvens brancas a amplidão vestindo...",
                    "line_length": null
                }
            ],
            "stanza_text": "Para as Estrelas de cristais gelados\nAs ânsias e os desejos vão subindo,\nGalgando azuis e siderais noivados\nDe nuvens brancas a amplidão vestindo..."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Num cortejo de cânticos alados",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Os arcanjos, as cítaras ferindo,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Passam, das vestes nos troféus prateados,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "As asas de ouro finamente abrindo...",
                    "line_length": null
                }
            ],
            "stanza_text": "Num cortejo de cânticos alados\nOs arcanjos, as cítaras ferindo,\nPassam, das vestes nos troféus prateados,\nAs asas de ouro finamente abrindo..."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Dos etéreos turíbulos de neve",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Claro incenso aromal, límpido e leve,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Ondas nevoentas de Visões levanta...",
                    "line_length": null
                }
            ],
            "stanza_text": "Dos etéreos turíbulos de neve\nClaro incenso aromal, límpido e leve,\nOndas nevoentas de Visões levanta..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "E as ânsias e os desejos infinitos",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Vão com os arcanjos formulando ritos",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Da Eternidade que nos Astros canta...",
                    "line_length": null
                }
            ],
            "stanza_text": "E as ânsias e os desejos infinitos\nVão com os arcanjos formulando ritos\nDa Eternidade que nos Astros canta..."
        }
    ]
}