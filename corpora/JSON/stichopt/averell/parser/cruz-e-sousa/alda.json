{
    "poem_title": "Alda",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Alva, do alvor das límpidas geleiras,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Desta ressumbra candidez de aromas...",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Parece andar em nichos e redomas",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "De Virgens medievais que foram freiras.",
                    "line_length": null
                }
            ],
            "stanza_text": "Alva, do alvor das límpidas geleiras,\nDesta ressumbra candidez de aromas...\nParece andar em nichos e redomas\nDe Virgens medievais que foram freiras."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Alta, feita no talhe das palmeiras,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "A coma de ouro, com o cetim das comas,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Branco esplendor de faces e de pomas",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Lembra ter asas e asas condoreiras.",
                    "line_length": null
                }
            ],
            "stanza_text": "Alta, feita no talhe das palmeiras,\nA coma de ouro, com o cetim das comas,\nBranco esplendor de faces e de pomas\nLembra ter asas e asas condoreiras."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Pássaros, astros, cânticos, incensos",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Formam-lhe aureoles, sóis, nimbos imensos",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Em torno à carne virginal e rara.",
                    "line_length": null
                }
            ],
            "stanza_text": "Pássaros, astros, cânticos, incensos\nFormam-lhe aureoles, sóis, nimbos imensos\nEm torno à carne virginal e rara."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Alda fez meditar nas monjas alvas,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Salvas do Vicio e do Pecado salvas,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Amortalhadas na pureza clara.",
                    "line_length": null
                }
            ],
            "stanza_text": "Alda fez meditar nas monjas alvas,\nSalvas do Vicio e do Pecado salvas,\nAmortalhadas na pureza clara."
        }
    ]
}