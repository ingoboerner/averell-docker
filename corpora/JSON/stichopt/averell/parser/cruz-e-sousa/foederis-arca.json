{
    "poem_title": "Foederis Arca",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Visão que a luz dos Astros louros trazes,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Papoula real tecida de neblinas",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Leves, etéreas, vaporosas, finas,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Com aromas de lírios e lilases.",
                    "line_length": null
                }
            ],
            "stanza_text": "Visão que a luz dos Astros louros trazes,\nPapoula real tecida de neblinas\nLeves, etéreas, vaporosas, finas,\nCom aromas de lírios e lilases."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Brancura virgem do cristal das frases,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Neve serene das regiões alpinas,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Willis juncal de mãos alabastrinas,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "De fugitivas correções vivazes.",
                    "line_length": null
                }
            ],
            "stanza_text": "Brancura virgem do cristal das frases,\nNeve serene das regiões alpinas,\nWillis juncal de mãos alabastrinas,\nDe fugitivas correções vivazes."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Floresces no meu Verso como o trigo,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "O trigo de ouro dentre o sol floresce",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "E és a suprema Religião que eu sigo...",
                    "line_length": null
                }
            ],
            "stanza_text": "Floresces no meu Verso como o trigo,\nO trigo de ouro dentre o sol floresce\nE és a suprema Religião que eu sigo..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "O Missal dos Missais, que resplandece,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "A igreja soberana que eu bendigo",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "E onde murmuro a solitária prece!...",
                    "line_length": null
                }
            ],
            "stanza_text": "O Missal dos Missais, que resplandece,\nA igreja soberana que eu bendigo\nE onde murmuro a solitária prece!..."
        }
    ]
}