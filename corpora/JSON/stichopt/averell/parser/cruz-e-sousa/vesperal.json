{
    "poem_title": "Vesperal",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Tardes de ouro para harpas dedilhadas",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Por sacras solenidades",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "De catedrais em pompa, iluminadas",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Com rituais majestades.",
                    "line_length": null
                }
            ],
            "stanza_text": "Tardes de ouro para harpas dedilhadas\nPor sacras solenidades\nDe catedrais em pompa, iluminadas\nCom rituais majestades."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Tardes para quebrantos e surdinas",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "E salmos virgens e cantos",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "De vozes celestiais, de vozes finas",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "De surdinas e quebrantos...",
                    "line_length": null
                }
            ],
            "stanza_text": "Tardes para quebrantos e surdinas\nE salmos virgens e cantos\nDe vozes celestiais, de vozes finas\nDe surdinas e quebrantos..."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Quando através de altas vidraçarias",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "De estilos góticos, graves,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "O sol, no poente, abre tapeçarias,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Resplandecendo nas naves...",
                    "line_length": null
                }
            ],
            "stanza_text": "Quando através de altas vidraçarias\nDe estilos góticos, graves,\nO sol, no poente, abre tapeçarias,\nResplandecendo nas naves..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Tardes augustas, bíblicas, serenas,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Com silêncio de ascetérios",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "E aromas leves, castos, de açucenas",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Nos claros ares sidéreos...",
                    "line_length": null
                }
            ],
            "stanza_text": "Tardes augustas, bíblicas, serenas,\nCom silêncio de ascetérios\nE aromas leves, castos, de açucenas\nNos claros ares sidéreos..."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Tardes de campos repousados, quietos,",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Nos longes emocionantes...",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "De rebanhos saudosos, de secretos",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Desejos vagos, errantes...",
                    "line_length": null
                }
            ],
            "stanza_text": "Tardes de campos repousados, quietos,\nNos longes emocionantes...\nDe rebanhos saudosos, de secretos\nDesejos vagos, errantes..."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Ó Tardes de Beethoven, de sonatas,",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "De um sentimento aéreo e velho...",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "Tardes da antiga limpidez das pratas,",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "De Epístolas do Evangelho!...",
                    "line_length": null
                }
            ],
            "stanza_text": "Ó Tardes de Beethoven, de sonatas,\nDe um sentimento aéreo e velho...\nTardes da antiga limpidez das pratas,\nDe Epístolas do Evangelho!..."
        }
    ]
}