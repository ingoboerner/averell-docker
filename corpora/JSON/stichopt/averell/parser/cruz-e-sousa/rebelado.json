{
    "poem_title": "Rebelado",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ri tua face um riso acerbo e doente,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Que fere, ao mesmo tempo que contrista...",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Riso de ateu e riso de budista",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Gelado no Nirvana impenitente.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ri tua face um riso acerbo e doente,\nQue fere, ao mesmo tempo que contrista...\nRiso de ateu e riso de budista\nGelado no Nirvana impenitente."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Flor de sangue, talvez, e flor dolente",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "De uma paixão espiritual de artista,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Flor de Pecado sentimentalista",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Sangrando em riso desdenhosamente.",
                    "line_length": null
                }
            ],
            "stanza_text": "Flor de sangue, talvez, e flor dolente\nDe uma paixão espiritual de artista,\nFlor de Pecado sentimentalista\nSangrando em riso desdenhosamente."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Da alma sombria de tranquilo asceta",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Bebeste, entanto, a morbidez secreta",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Que a febre das insânias adormece.",
                    "line_length": null
                }
            ],
            "stanza_text": "Da alma sombria de tranquilo asceta\nBebeste, entanto, a morbidez secreta\nQue a febre das insânias adormece."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Mas no teu lábio convulsivo e mudo",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Mesmo até riem, com desdéns de tudo,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "As sílabas simbólicas da Prece!",
                    "line_length": null
                }
            ],
            "stanza_text": "Mas no teu lábio convulsivo e mudo\nMesmo até riem, com desdéns de tudo,\nAs sílabas simbólicas da Prece!"
        }
    ]
}