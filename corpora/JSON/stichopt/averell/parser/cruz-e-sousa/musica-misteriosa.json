{
    "poem_title": "Música misteriosa...",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Tenda de Estrelas níveas, refulgentes,",
                    "line_length": "10"
                },
                {
                    "line_number": 2,
                    "line_text": "Que abris a doce luz de alampadários,",
                    "line_length": "10"
                },
                {
                    "line_number": 3,
                    "line_text": "As harmonias dos Estradivárius",
                    "line_length": "10"
                },
                {
                    "line_number": 4,
                    "line_text": "Erram da Lua nos clarões dormentes...",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Tenda de Estrelas níveas, refulgentes,\nQue abris a doce luz de alampadários,\nAs harmonias dos Estradivárius\nErram da Lua nos clarões dormentes..."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Pelos raios fluídicos, diluentes",
                    "line_length": "10"
                },
                {
                    "line_number": 6,
                    "line_text": "Dos Astros, pelos trêmulos velários,",
                    "line_length": "10"
                },
                {
                    "line_number": 7,
                    "line_text": "Cantam Sonhos de místicos templários,",
                    "line_length": "10"
                },
                {
                    "line_number": 8,
                    "line_text": "De ermitões e de ascetas reverentes...",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Pelos raios fluídicos, diluentes\nDos Astros, pelos trêmulos velários,\nCantam Sonhos de místicos templários,\nDe ermitões e de ascetas reverentes..."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Cânticos vagos, infinitos, aéreos",
                    "line_length": "10"
                },
                {
                    "line_number": 10,
                    "line_text": "Fluir parecem dos Azuis etéreos,",
                    "line_length": "10"
                },
                {
                    "line_number": 11,
                    "line_text": "Dentre os nevoeiros do luar fluindo...",
                    "line_length": "10"
                }
            ],
            "stanza_text": "Cânticos vagos, infinitos, aéreos\nFluir parecem dos Azuis etéreos,\nDentre os nevoeiros do luar fluindo..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "E vai, de Estrela a Estrela, a luz da Lua,",
                    "line_length": "10"
                },
                {
                    "line_number": 13,
                    "line_text": "Na láctea claridade que flutua,",
                    "line_length": "10"
                },
                {
                    "line_number": 14,
                    "line_text": "A surdina das lágrimas subindo...",
                    "line_length": "10"
                }
            ],
            "stanza_text": "E vai, de Estrela a Estrela, a luz da Lua,\nNa láctea claridade que flutua,\nA surdina das lágrimas subindo..."
        }
    ]
}