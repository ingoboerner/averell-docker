    "poem_title": "Satã",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Capro e revel, com os fabulosos cornos",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Na fronte real de rei dos reis vetustos,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Com bizarros e lúbricos contornos,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Ei-lo Satã dentre os Satãs augustos.",
                    "line_length": null
                }
            ],
            "stanza_text": "Capro e revel, com os fabulosos cornos\nNa fronte real de rei dos reis vetustos,\nCom bizarros e lúbricos contornos,\nEi-lo Satã dentre os Satãs augustos."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Por verdes e por báquicos adornos",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Vai c’roado de pâmpanos venustos",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "O deus pagão dos Vinhos acres, mornos,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Deus triunfador dos triunfadores justos.",
                    "line_length": null
                }
            ],
            "stanza_text": "Por verdes e por báquicos adornos\nVai c’roado de pâmpanos venustos\nO deus pagão dos Vinhos acres, mornos,\nDeus triunfador dos triunfadores justos."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Arcangélico e audaz, nos sóis radiantes,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "A púrpura das glórias flamejantes,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Alarga as asas de relevos bravos...",
                    "line_length": null
                }
            ],
            "stanza_text": "Arcangélico e audaz, nos sóis radiantes,\nA púrpura das glórias flamejantes,\nAlarga as asas de relevos bravos..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "O Sonho agita-lhe a imortal cabeça...",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "E solta aos sóis e estranha e ondeada e espessa",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Canta-lhe a juba dos cabelos flavos!",
                    "line_length": null
                }
            ],
            "stanza_text": "O Sonho agita-lhe a imortal cabeça...\nE solta aos sóis e estranha e ondeada e espessa\nCanta-lhe a juba dos cabelos flavos!"
        }
    ]
}