{
    "poem_title": "Braços",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Braços nervosos, brancas opulências,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Brumais brancuras, fulgidas brancuras,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Alvuras castas, virginais alvuras,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Lactescências das raras lactescências.",
                    "line_length": null
                }
            ],
            "stanza_text": "Braços nervosos, brancas opulências,\nBrumais brancuras, fulgidas brancuras,\nAlvuras castas, virginais alvuras,\nLactescências das raras lactescências."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "As fascinantes, mórbidas dormências",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Dos teus abraços de letais flexuras,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Produzem sensações de agres torturas,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Dos desejos as mornas florescências.",
                    "line_length": null
                }
            ],
            "stanza_text": "As fascinantes, mórbidas dormências\nDos teus abraços de letais flexuras,\nProduzem sensações de agres torturas,\nDos desejos as mornas florescências."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Braços nervosos, tentadoras serpes",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Que prendem, tetanizam como os herpes,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Dos delírios na trêmula coorte...",
                    "line_length": null
                }
            ],
            "stanza_text": "Braços nervosos, tentadoras serpes\nQue prendem, tetanizam como os herpes,\nDos delírios na trêmula coorte..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Pompa de carnes tépidas e flóreas,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Braços de estranhas correções marmóreas,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Abertos para o Amor e para a Morte!",
                    "line_length": null
                }
            ],
            "stanza_text": "Pompa de carnes tépidas e flóreas,\nBraços de estranhas correções marmóreas,\nAbertos para o Amor e para a Morte!"
        }
    ]
}