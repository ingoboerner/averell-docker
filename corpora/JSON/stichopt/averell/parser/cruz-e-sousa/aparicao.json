{
    "poem_title": "Aparição",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Por uma estrada de astros e perfumes",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "A Santa Virgem veio ter comigo:",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Doiravam-lhe o cabelo claros lumes",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Do sacrossanto resplendor amigo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Por uma estrada de astros e perfumes\nA Santa Virgem veio ter comigo:\nDoiravam-lhe o cabelo claros lumes\nDo sacrossanto resplendor amigo."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Dos olhos divinais no doce abrigo",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Não tinha laivos de Paixões e ciúmes:",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Domadora do Mal e do perigo",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Da montanha da Fe galgara os cumes.",
                    "line_length": null
                }
            ],
            "stanza_text": "Dos olhos divinais no doce abrigo\nNão tinha laivos de Paixões e ciúmes:\nDomadora do Mal e do perigo\nDa montanha da Fe galgara os cumes."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Vestida na alva excelsa dos Profetas",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Falou na ideal resignação de Ascetas,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Que a febre dos desejos aquebranta.",
                    "line_length": null
                }
            ],
            "stanza_text": "Vestida na alva excelsa dos Profetas\nFalou na ideal resignação de Ascetas,\nQue a febre dos desejos aquebranta."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "No entanto os olhos d’Ela vacilavam,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Pelo mistério, pela dor flutuavam,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Vagos e tristes, apesar de Santa!",
                    "line_length": null
                }
            ],
            "stanza_text": "No entanto os olhos d’Ela vacilavam,\nPelo mistério, pela dor flutuavam,\nVagos e tristes, apesar de Santa!"
        }
    ]
}