{
    "poem_title": "Dilacerações",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ó carnes que eu amei sangrentamente,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Ó volúpias letais e dolorosas,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Essências de heliotropos e de rosas",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "De essência morna, tropical, dolente...",
                    "line_length": null
                }
            ],
            "stanza_text": "Ó carnes que eu amei sangrentamente,\nÓ volúpias letais e dolorosas,\nEssências de heliotropos e de rosas\nDe essência morna, tropical, dolente..."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Carnes virgens e tépidas do Oriente",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Do Sonho e das Estrelas fabulosas,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Carnes acerbas e maravilhosas,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Tentadoras do sol intensamente...",
                    "line_length": null
                }
            ],
            "stanza_text": "Carnes virgens e tépidas do Oriente\nDo Sonho e das Estrelas fabulosas,\nCarnes acerbas e maravilhosas,\nTentadoras do sol intensamente..."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Passai, dilaceradas pelos zeros,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Através dos profundos pesadelos",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Que me apunhalam de mortais horrores...",
                    "line_length": null
                }
            ],
            "stanza_text": "Passai, dilaceradas pelos zeros,\nAtravés dos profundos pesadelos\nQue me apunhalam de mortais horrores..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Passai, passai, desfeitas em tormentos,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Em lágrimas, em prantos, em lamentos,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Em ais, em luto, em convulsões, em cores...",
                    "line_length": null
                }
            ],
            "stanza_text": "Passai, passai, desfeitas em tormentos,\nEm lágrimas, em prantos, em lamentos,\nEm ais, em luto, em convulsões, em cores..."
        }
    ]
}