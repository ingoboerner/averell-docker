{
    "poem_title": "Carnal e místico",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Pelas regiões tenuíssimas da bruma",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Vagam as Virgens e as Estrelas raras...",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Como que o leve aroma das searas",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Todo o horizonte em derredor perfume.",
                    "line_length": null
                }
            ],
            "stanza_text": "Pelas regiões tenuíssimas da bruma\nVagam as Virgens e as Estrelas raras...\nComo que o leve aroma das searas\nTodo o horizonte em derredor perfume."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "N’uma evaporação de branca espuma",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Vão diluindo as perspectives claras...",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Com brilhos crus e fúlgidos de tiaras",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "As Estrelas apagam-se uma a uma.",
                    "line_length": null
                }
            ],
            "stanza_text": "N’uma evaporação de branca espuma\nVão diluindo as perspectives claras...\nCom brilhos crus e fúlgidos de tiaras\nAs Estrelas apagam-se uma a uma."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "E então, na treva, em místicas dormências",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Desfila, com sidéreas lactescências,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Das Virgens o sonâmbulo cortejo...",
                    "line_length": null
                }
            ],
            "stanza_text": "E então, na treva, em místicas dormências\nDesfila, com sidéreas lactescências,\nDas Virgens o sonâmbulo cortejo..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Ó Formas vagas, nebulosidades!",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Essência das eternas virgindades!",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Ó intensas quimeras do Desejo...",
                    "line_length": null
                }
            ],
            "stanza_text": "Ó Formas vagas, nebulosidades!\nEssência das eternas virgindades!\nÓ intensas quimeras do Desejo..."
        }
    ]
}