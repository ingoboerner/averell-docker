{
    "poem_title": "Lubricidade",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Quisera ser a serpe venenosa",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Que dá-te medo e dá-te pesadelos",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Para envolverem, ó Flor maravilhosa,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Nos flavos turbilhões dos teus cabelos.",
                    "line_length": null
                }
            ],
            "stanza_text": "Quisera ser a serpe venenosa\nQue dá-te medo e dá-te pesadelos\nPara envolverem, ó Flor maravilhosa,\nNos flavos turbilhões dos teus cabelos."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Quisera ser a serpe veludosa",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Para, enroscada em múltiplos novelos,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Saltar-te aos seios de fluidez cheirosa",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "E babujá-los e depois mordê-los...",
                    "line_length": null
                }
            ],
            "stanza_text": "Quisera ser a serpe veludosa\nPara, enroscada em múltiplos novelos,\nSaltar-te aos seios de fluidez cheirosa\nE babujá-los e depois mordê-los..."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Talvez que o sangue impuro e flamejante",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Do teu lânguido corpo de bacante,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Da langue ondulação de águas do Reno",
                    "line_length": null
                }
            ],
            "stanza_text": "Talvez que o sangue impuro e flamejante\nDo teu lânguido corpo de bacante,\nDa langue ondulação de águas do Reno"
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Estranhamente se purificasse...",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Pois que um veneno de áspide vorace",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Deve ser morto com igual veneno...",
                    "line_length": null
                }
            ],
            "stanza_text": "Estranhamente se purificasse...\nPois que um veneno de áspide vorace\nDeve ser morto com igual veneno..."
        }
    ]
}