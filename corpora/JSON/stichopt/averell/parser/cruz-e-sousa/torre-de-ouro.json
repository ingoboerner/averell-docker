{
    "poem_title": "Torre de ouro",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Desta torre desfraldam-se altaneiras,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Por sóis de céus imensos broqueladas,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Bandeiras reais, do azul das madrugadas",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "E do íris flamejante das poncheiras.",
                    "line_length": null
                }
            ],
            "stanza_text": "Desta torre desfraldam-se altaneiras,\nPor sóis de céus imensos broqueladas,\nBandeiras reais, do azul das madrugadas\nE do íris flamejante das poncheiras."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "As torres de outras regiões primeiras",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "No Amor, nas Glórias vãs arrebatadas",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Não elevam mais alto, desfraldadas,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Bravas, triunfantes, imortais bandeiras.",
                    "line_length": null
                }
            ],
            "stanza_text": "As torres de outras regiões primeiras\nNo Amor, nas Glórias vãs arrebatadas\nNão elevam mais alto, desfraldadas,\nBravas, triunfantes, imortais bandeiras."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "São pavilhões das hostes fugitivas,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Das guerras acres, sanguinárias, vivas,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Da luta que os Espíritos ufana.",
                    "line_length": null
                }
            ],
            "stanza_text": "São pavilhões das hostes fugitivas,\nDas guerras acres, sanguinárias, vivas,\nDa luta que os Espíritos ufana."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Estandartes heroicos, palpitantes,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Vendo em marcha passe aniquilantes",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "As torvas catapultas do Nirvana!",
                    "line_length": null
                }
            ],
            "stanza_text": "Estandartes heroicos, palpitantes,\nVendo em marcha passe aniquilantes\nAs torvas catapultas do Nirvana!"
        }
    ]
}