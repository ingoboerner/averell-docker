{
    "poem_title": "Sonho branco",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "De linho e rosas brancas vais vestido,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Sonho virgem que cantas no meu peito!...",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "És do Luar o claro deus eleito,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Das estrelas puríssimas nascido.",
                    "line_length": null
                }
            ],
            "stanza_text": "De linho e rosas brancas vais vestido,\nSonho virgem que cantas no meu peito!...\nÉs do Luar o claro deus eleito,\nDas estrelas puríssimas nascido."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Por caminho aromal, enflorescido,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Alvo, sereno, límpido, direito,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Segues radiante, no esplendor perfeito,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "No perfeito esplendor indefinido...",
                    "line_length": null
                }
            ],
            "stanza_text": "Por caminho aromal, enflorescido,\nAlvo, sereno, límpido, direito,\nSegues radiante, no esplendor perfeito,\nNo perfeito esplendor indefinido..."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "As aves sonorizam-te o caminho...",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "E as vestes frescas, do mais puro linho",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "E as rosas brancas dão-te um ar nevado...",
                    "line_length": null
                }
            ],
            "stanza_text": "As aves sonorizam-te o caminho...\nE as vestes frescas, do mais puro linho\nE as rosas brancas dão-te um ar nevado..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "No entanto, Ó Sonho branco de quermesse!",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Nessa alegria em que tu vais, parece",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Que vais infantilmente amortalhado!",
                    "line_length": null
                }
            ],
            "stanza_text": "No entanto, Ó Sonho branco de quermesse!\nNessa alegria em que tu vais, parece\nQue vais infantilmente amortalhado!"
        }
    ]
}