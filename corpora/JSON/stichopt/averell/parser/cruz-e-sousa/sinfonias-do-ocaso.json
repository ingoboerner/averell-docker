{
    "poem_title": "Sinfonias do ocaso",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Musselinosas como brumas diurnas",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Descem do acaso as sombras harmoniosas,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Sombras veladas e musselinosas",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Para as profundas solidões noturnas.",
                    "line_length": null
                }
            ],
            "stanza_text": "Musselinosas como brumas diurnas\nDescem do acaso as sombras harmoniosas,\nSombras veladas e musselinosas\nPara as profundas solidões noturnas."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Sacrários virgens, sacrossantas urnas,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Os céus resplendem de sidéreas rosas,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Da lua e das Estrelas majestosas",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Iluminando a escuridão das furnas.",
                    "line_length": null
                }
            ],
            "stanza_text": "Sacrários virgens, sacrossantas urnas,\nOs céus resplendem de sidéreas rosas,\nDa lua e das Estrelas majestosas\nIluminando a escuridão das furnas."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Ah! por estes sinfônicos ocasos",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "A terra exala aromas de áureos vasos,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Incensos de turíbulos divinos.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ah! por estes sinfônicos ocasos\nA terra exala aromas de áureos vasos,\nIncensos de turíbulos divinos."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Os plenilúnios mórbidos vaporam...",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "E como que no Azul plangem e choram",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Cítaras, harpas, bandolins, violinos...",
                    "line_length": null
                }
            ],
            "stanza_text": "Os plenilúnios mórbidos vaporam...\nE como que no Azul plangem e choram\nCítaras, harpas, bandolins, violinos..."
        }
    ]
}