{
    "poem_title": "Antífona",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ó Formas alvas, brancas, Formas claras",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "De luares, de neves, de neblinas!...",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Ó Formas vagas, fluidas, cristalinas...",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Incensos dos turíbulos das aras...",
                    "line_length": null
                }
            ],
            "stanza_text": "Ó Formas alvas, brancas, Formas claras\nDe luares, de neves, de neblinas!...\nÓ Formas vagas, fluidas, cristalinas...\nIncensos dos turíbulos das aras..."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Formas do Amor, constelarmente puras,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "De Virgens e de Santas vaporosas...",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Brilhos errantes, mádidas frescuras",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "E dolências de lírios e de rosas...",
                    "line_length": null
                }
            ],
            "stanza_text": "Formas do Amor, constelarmente puras,\nDe Virgens e de Santas vaporosas...\nBrilhos errantes, mádidas frescuras\nE dolências de lírios e de rosas..."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Indefiníveis músicas supremas,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Harmonias da Cor e do Perfume...",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Horas do Ocaso, trêmulas, extremas,",
                    "line_length": null
                },
                {
                    "line_number": 12,
                    "line_text": "Réquiem do Sol que a Dor da Luz resume...",
                    "line_length": null
                }
            ],
            "stanza_text": "Indefiníveis músicas supremas,\nHarmonias da Cor e do Perfume...\nHoras do Ocaso, trêmulas, extremas,\nRéquiem do Sol que a Dor da Luz resume..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Visões, salmos e cânticos serenos,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Surdinas de órgãos flébeis, soluçantes...",
                    "line_length": null
                },
                {
                    "line_number": 15,
                    "line_text": "Dormências de volúpicos venenos",
                    "line_length": null
                },
                {
                    "line_number": 16,
                    "line_text": "Sutis e suaves, mórbidos, radiantes...",
                    "line_length": null
                }
            ],
            "stanza_text": "Visões, salmos e cânticos serenos,\nSurdinas de órgãos flébeis, soluçantes...\nDormências de volúpicos venenos\nSutis e suaves, mórbidos, radiantes..."
        },
        {
            "stanza_type": null,
            "stanza_number": 5,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Infinitos espíritos dispersos,",
                    "line_length": null
                },
                {
                    "line_number": 18,
                    "line_text": "Inefáveis, edênicos, aéreos,",
                    "line_length": null
                },
                {
                    "line_number": 19,
                    "line_text": "Fecundai o Mistério destes versos",
                    "line_length": null
                },
                {
                    "line_number": 20,
                    "line_text": "Com a chama ideal de todos os mistérios.",
                    "line_length": null
                }
            ],
            "stanza_text": "Infinitos espíritos dispersos,\nInefáveis, edênicos, aéreos,\nFecundai o Mistério destes versos\nCom a chama ideal de todos os mistérios."
        },
        {
            "stanza_type": null,
            "stanza_number": 6,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Do Sonho as mais azuis diafaneidades",
                    "line_length": null
                },
                {
                    "line_number": 22,
                    "line_text": "Que fuljam, que na Estrofe se levantem",
                    "line_length": null
                },
                {
                    "line_number": 23,
                    "line_text": "E as emoções, sodas as castidades",
                    "line_length": null
                },
                {
                    "line_number": 24,
                    "line_text": "Da alma do Verso, pelos versos cantem.",
                    "line_length": null
                }
            ],
            "stanza_text": "Do Sonho as mais azuis diafaneidades\nQue fuljam, que na Estrofe se levantem\nE as emoções, sodas as castidades\nDa alma do Verso, pelos versos cantem."
        },
        {
            "stanza_type": null,
            "stanza_number": 7,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Que o pólen de ouro dos mais finos astros",
                    "line_length": null
                },
                {
                    "line_number": 26,
                    "line_text": "Fecunde e inflame a rime clara e ardente...",
                    "line_length": null
                },
                {
                    "line_number": 27,
                    "line_text": "Que brilhe a correção dos alabastros",
                    "line_length": null
                },
                {
                    "line_number": 28,
                    "line_text": "Sonoramente, luminosamente.",
                    "line_length": null
                }
            ],
            "stanza_text": "Que o pólen de ouro dos mais finos astros\nFecunde e inflame a rime clara e ardente...\nQue brilhe a correção dos alabastros\nSonoramente, luminosamente."
        },
        {
            "stanza_type": null,
            "stanza_number": 8,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Forças originais, essência, graça",
                    "line_length": null
                },
                {
                    "line_number": 30,
                    "line_text": "De carnes de mulher, delicadezas...",
                    "line_length": null
                },
                {
                    "line_number": 31,
                    "line_text": "Todo esse eflúvio que por ondas passe",
                    "line_length": null
                },
                {
                    "line_number": 32,
                    "line_text": "Do Éter nas róseas e áureas correntezas...",
                    "line_length": null
                }
            ],
            "stanza_text": "Forças originais, essência, graça\nDe carnes de mulher, delicadezas...\nTodo esse eflúvio que por ondas passe\nDo Éter nas róseas e áureas correntezas..."
        },
        {
            "stanza_type": null,
            "stanza_number": 9,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Cristais diluídos de clarões alacres,",
                    "line_length": null
                },
                {
                    "line_number": 34,
                    "line_text": "Desejos, vibrações, ânsias, alentos,",
                    "line_length": null
                },
                {
                    "line_number": 35,
                    "line_text": "Fulvas vitórias, triunfamentos acres,",
                    "line_length": null
                },
                {
                    "line_number": 36,
                    "line_text": "Os mais estranhos estremecimentos...",
                    "line_length": null
                }
            ],
            "stanza_text": "Cristais diluídos de clarões alacres,\nDesejos, vibrações, ânsias, alentos,\nFulvas vitórias, triunfamentos acres,\nOs mais estranhos estremecimentos..."
        },
        {
            "stanza_type": null,
            "stanza_number": 10,
            "lines": [
                {
                    "line_number": 37,
                    "line_text": "Flores negras do tédio e flores vagas",
                    "line_length": null
                },
                {
                    "line_number": 38,
                    "line_text": "De amores vãos, tantálicos, doentios...",
                    "line_length": null
                },
                {
                    "line_number": 39,
                    "line_text": "Fundas vermelhidões de velhas chagas",
                    "line_length": null
                },
                {
                    "line_number": 40,
                    "line_text": "Em sangue, abertas, escorrendo em rios.....",
                    "line_length": null
                }
            ],
            "stanza_text": "Flores negras do tédio e flores vagas\nDe amores vãos, tantálicos, doentios...\nFundas vermelhidões de velhas chagas\nEm sangue, abertas, escorrendo em rios....."
        },
        {
            "stanza_type": null,
            "stanza_number": 11,
            "lines": [
                {
                    "line_number": 41,
                    "line_text": "Tudo! vivo e nervoso e quente e forte,",
                    "line_length": null
                },
                {
                    "line_number": 42,
                    "line_text": "Nos turbilhões quiméricos do Sonho,",
                    "line_length": null
                },
                {
                    "line_number": 43,
                    "line_text": "Passe, cantando, ante o perfil medonho",
                    "line_length": null
                },
                {
                    "line_number": 44,
                    "line_text": "E o tropel cabalístico da Morte...",
                    "line_length": null
                }
            ],
            "stanza_text": "Tudo! vivo e nervoso e quente e forte,\nNos turbilhões quiméricos do Sonho,\nPasse, cantando, ante o perfil medonho\nE o tropel cabalístico da Morte..."
        }
    ]
}