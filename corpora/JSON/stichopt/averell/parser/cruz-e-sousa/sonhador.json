    "poem_title": "Sonhador",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Por sóis, por belos sóis alvissareiros,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Nos troféus do teu Sonho irás cantando",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "As púrpuras romanas arrastando,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Engrinaldado de imortais loureiros.",
                    "line_length": null
                }
            ],
            "stanza_text": "Por sóis, por belos sóis alvissareiros,\nNos troféus do teu Sonho irás cantando\nAs púrpuras romanas arrastando,\nEngrinaldado de imortais loureiros."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Nobre guerreiro audaz entre os guerreiros,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Das Ideias as lanças sopesando,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Verás, a pouco e pouco, desfilando",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Todos os teus desejos condoreiros...",
                    "line_length": null
                }
            ],
            "stanza_text": "Nobre guerreiro audaz entre os guerreiros,\nDas Ideias as lanças sopesando,\nVerás, a pouco e pouco, desfilando\nTodos os teus desejos condoreiros..."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Imaculado, sobre o lodo imundo,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Há de subir, com as vivas castidades,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Das tuas glórias o clarão profundo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Imaculado, sobre o lodo imundo,\nHá de subir, com as vivas castidades,\nDas tuas glórias o clarão profundo."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Há de subir, além de eternidades,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Diante do torvo crocitar do mundo,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Para o branco Sacrário das Saudades!",
                    "line_length": null
                }
            ],
            "stanza_text": "Há de subir, além de eternidades,\nDiante do torvo crocitar do mundo,\nPara o branco Sacrário das Saudades!"
        }
    ]
}