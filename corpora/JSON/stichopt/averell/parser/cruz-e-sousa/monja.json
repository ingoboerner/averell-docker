{
    "poem_title": "Monja",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Cruz e Sousa",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ó Lua, Lua triste, amargurada,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Fantasma de brancuras vaporosas,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "A tua nívea luz ciliciada",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Faz murchecer e congelar as rosas.",
                    "line_length": null
                }
            ],
            "stanza_text": "Ó Lua, Lua triste, amargurada,\nFantasma de brancuras vaporosas,\nA tua nívea luz ciliciada\nFaz murchecer e congelar as rosas."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Nas floridas searas ondulosas,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Cuja folhagem brilha fosforeada,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Passam sombras angélicas, nivosas,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Lua, Monja da cela constelada.",
                    "line_length": null
                }
            ],
            "stanza_text": "Nas floridas searas ondulosas,\nCuja folhagem brilha fosforeada,\nPassam sombras angélicas, nivosas,\nLua, Monja da cela constelada."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Filtros dormentes dão aos lagos quietos,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Ao mar, ao campo, os sonhos mais secretos,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Que vão pelo ar, noctâmbulos, pairando...",
                    "line_length": null
                }
            ],
            "stanza_text": "Filtros dormentes dão aos lagos quietos,\nAo mar, ao campo, os sonhos mais secretos,\nQue vão pelo ar, noctâmbulos, pairando..."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Então, ó Monja branca dos espaços,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Parece que abres para mim os braços,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Fria, de joelhos, trêmula, rezando...",
                    "line_length": null
                }
            ],
            "stanza_text": "Então, ó Monja branca dos espaços,\nParece que abres para mim os braços,\nFria, de joelhos, trêmula, rezando..."
        }
    ]
}