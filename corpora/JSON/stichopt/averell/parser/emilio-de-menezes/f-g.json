{
    "poem_title": "F. G.",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Emílio de Menezes",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Este é por certo o verdadeiro espelho",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Das maiores derrotas e conquistas",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Que o regime vem tendo, e o seu conselho,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Tem sempre o cunho das mais largas vistas.",
                    "line_length": null
                }
            ],
            "stanza_text": "Este é por certo o verdadeiro espelho\nDas maiores derrotas e conquistas\nQue o regime vem tendo, e o seu conselho,\nTem sempre o cunho das mais largas vistas."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Foi das molas mais rijas do aparelho",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Que deu cabo das hostes monarquistas.",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Foi o Moisés do novo Mar Vermelho,",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "A égua madrinha dos propagandistas.",
                    "line_length": null
                }
            ],
            "stanza_text": "Foi das molas mais rijas do aparelho\nQue deu cabo das hostes monarquistas.\nFoi o Moisés do novo Mar Vermelho,\nA égua madrinha dos propagandistas."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Calmo, risonho, perspicaz, cordato,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Todos sentem no Ilustre veterano,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Do político arguto o fino tato.",
                    "line_length": null
                }
            ],
            "stanza_text": "Calmo, risonho, perspicaz, cordato,\nTodos sentem no Ilustre veterano,\nDo político arguto o fino tato."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Mas o Matusalém republicano,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Tem orgulho infantil de ser, de fato,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "O bisavô dos netos do Herculano!",
                    "line_length": null
                }
            ],
            "stanza_text": "Mas o Matusalém republicano,\nTem orgulho infantil de ser, de fato,\nO bisavô dos netos do Herculano!"
        }
    ]
}