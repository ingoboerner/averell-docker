{
    "poem_title": "TEATRO DA NATUREZA",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Emílio de Menezes",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Um amigo das árvores, das flores,",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "Dos lagos, dos canais e da cascata",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Com seus trêmulos quérulos rumores,",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Dizia anteontem: — Isto agora mata!",
                    "line_length": null
