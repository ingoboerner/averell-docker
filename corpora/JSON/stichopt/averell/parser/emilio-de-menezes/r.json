    "author": "Emílio de Menezes",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Pedra preciosa de um tamanho imenso.",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "(Pois que o nome é um rubi deste tamanho",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Que à sorte e à fortuna traz apenso),",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "Eis mais ou menos o seu vulto estranho.",
                    "line_length": null
                }
            ],
            "stanza_text": "Pedra preciosa de um tamanho imenso.\n(Pois que o nome é um rubi deste tamanho\nQue à sorte e à fortuna traz apenso),\nEis mais ou menos o seu vulto estranho."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "Escravo cauteloso do bom senso",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Fugidio ao espírito tacanho,",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Quando entra em luta diz: Ou morro ou venço!",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "E é difícil que alguém lhe tome o ganho.",
                    "line_length": null
                }
            ],
            "stanza_text": "Escravo cauteloso do bom senso\nFugidio ao espírito tacanho,\nQuando entra em luta diz: Ou morro ou venço!\nE é difícil que alguém lhe tome o ganho."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Desdobrado em trabalho multiforme,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Em finança e política não dorme,",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "E numa ou noutra. nunca perde a audácia.",
                    "line_length": null
                }
            ],
            "stanza_text": "Desdobrado em trabalho multiforme,\nEm finança e política não dorme,\nE numa ou noutra. nunca perde a audácia."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "Sendo do Bananal, não é um banana:",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Tocou rumo a S. Paulo a caravana,",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "E ei-Io Rubião, em honra da rubiácea.",
                    "line_length": null
                }
            ],
            "stanza_text": "Sendo do Bananal, não é um banana:\nTocou rumo a S. Paulo a caravana,\nE ei-Io Rubião, em honra da rubiácea."
        }
    ]
}