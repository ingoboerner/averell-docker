{
    "poem_title": "Sonâmbulas II – Sub umbra",
    "corpus": "stichopt",
    "manually_checked": false,
    "author": "Múcio Teixeira",
    "stanzas": [
        {
            "stanza_type": null,
            "stanza_number": 1,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Há umas almas sensíveis",
                    "line_length": null
                },
                {
                    "line_number": 2,
                    "line_text": "De umas eternas crianças,",
                    "line_length": null
                },
                {
                    "line_number": 3,
                    "line_text": "Que dormem com esperanças",
                    "line_length": null
                },
                {
                    "line_number": 4,
                    "line_text": "E sonham com impossíveis.",
                    "line_length": null
                }
            ],
            "stanza_text": "Há umas almas sensíveis\nDe umas eternas crianças,\nQue dormem com esperanças\nE sonham com impossíveis."
        },
        {
            "stanza_type": null,
            "stanza_number": 2,
            "lines": [
                {
                    "line_number": 5,
                    "line_text": "São bandos de pombas mansas,",
                    "line_length": null
                },
                {
                    "line_number": 6,
                    "line_text": "Que com asas invisíveis",
                    "line_length": null
                },
                {
                    "line_number": 7,
                    "line_text": "Voam por céus indizíveis",
                    "line_length": null
                },
                {
                    "line_number": 8,
                    "line_text": "Entre saudosas lembranças.",
                    "line_length": null
                }
            ],
            "stanza_text": "São bandos de pombas mansas,\nQue com asas invisíveis\nVoam por céus indizíveis\nEntre saudosas lembranças."
        },
        {
            "stanza_type": null,
            "stanza_number": 3,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "Cismando, de plaga em plaga,",
                    "line_length": null
                },
                {
                    "line_number": 10,
                    "line_text": "Também minh’alma divaga",
                    "line_length": null
                },
                {
                    "line_number": 11,
                    "line_text": "Sem ter destino e sem medo.",
                    "line_length": null
                }
            ],
            "stanza_text": "Cismando, de plaga em plaga,\nTambém minh’alma divaga\nSem ter destino e sem medo."
        },
        {
            "stanza_type": null,
            "stanza_number": 4,
            "lines": [
                {
                    "line_number": 12,
                    "line_text": "E assim, perdida na bruma,",
                    "line_length": null
                },
                {
                    "line_number": 13,
                    "line_text": "Parece um floco d’espuma",
                    "line_length": null
                },
                {
                    "line_number": 14,
                    "line_text": "Que a onda lança ao rochedo.",
                    "line_length": null
                }
            ],
            "stanza_text": "E assim, perdida na bruma,\nParece um floco d’espuma\nQue a onda lança ao rochedo."
        }
    ]
}