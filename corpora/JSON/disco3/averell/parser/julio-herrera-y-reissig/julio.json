{
    "manually_checked": false,
    "poem_title": "Julio",
    "author": "Julio Herrera y Reissig",
    "poem_alt_title": "Flota sobre el esplín de la campaña",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Flota sobre el esplín de la campaña",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "una jaqueca sudorosa y fría,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "3",
                    "line_text": "y las ranas celebran en la umbría",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "una función de ventriloquia extraña.",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "Flota sobre el esplín de la campaña\nuna jaqueca sudorosa y fría,\ny las ranas celebran en la umbría\nuna función de ventriloquia extraña."
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "La Neurastenia gris de la montaña",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "piensa, por singular telepatía,",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "con la adusta y claustral monomanía",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "del convento senil de la Bretaña.",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "La Neurastenia gris de la montaña\npiensa, por singular telepatía,\ncon la adusta y claustral monomanía\ndel convento senil de la Bretaña."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "Resolviendo una suma de ilusiones,",
                    "metrical_pattern": "--++-+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "como un Jordán de cándidos vellones",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "11",
                    "line_text": "la majada eucarística se integra;",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "Resolviendo una suma de ilusiones,\ncomo un Jordán de cándidos vellones\nla majada eucarística se integra;"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "y a lo lejos el cuervo pensativo",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "sueña acaso en un Cosmos abstractivo,",
                    "metrical_pattern": "+-+-++---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "como una luna pavorosa y negra.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "y a lo lejos el cuervo pensativo\nsueña acaso en un Cosmos abstractivo,\ncomo una luna pavorosa y negra."
        }
    ]
}