{
    "manually_checked": false,
    "poem_title": "- III -",
    "author": "Luis Barahona de Soto",
    "poem_alt_title": "Esplendores, celajes, riguroso,",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Esplendores, celajes, riguroso,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "salvaje, llama, líquido, candores,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "vagueza, faz, purpúrea, Cintia, ardores,",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": "4",
                    "line_text": "otra vez esplendores, caluroso;",
                    "metrical_pattern": "+-+--+---+-"
                }
            ],
            "stanza_text": "Esplendores, celajes, riguroso,\nsalvaje, llama, líquido, candores,\nvagueza, faz, purpúrea, Cintia, ardores,\notra vez esplendores, caluroso;"
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "ufanía, apacible, numeroso,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "luengo, osadía, afán, verdor, errores,",
                    "metrical_pattern": "+--+-+-+-+-"
                },
                {
                    "line_number": "7",
                    "line_text": "otra y quinientas veces esplendores;",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "más esplendores, crespo, glorioso;",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "ufanía, apacible, numeroso,\nluengo, osadía, afán, verdor, errores,\notra y quinientas veces esplendores;\nmás esplendores, crespo, glorioso;"
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "cercos, ásperos, albos, encrespado,",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "esparcir, espirar, lustre, fatales,",
                    "metrical_pattern": "--+--++--+-"
                },
                {
                    "line_number": "11",
                    "line_text": "cambiar, y de esplendor otro poquito;",
                    "metrical_pattern": "-+---++--+-"
                }
            ],
            "stanza_text": "cercos, ásperos, albos, encrespado,\nesparcir, espirar, lustre, fatales,\ncambiar, y de esplendor otro poquito;"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "luces, ebúrneo, nítido, asombrado,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "orna, colora, joven, celestiales...",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "Esto quitado, cierto que es bonito.",
                    "metrical_pattern": "+--+-+-+-+-"
                }
            ],
            "stanza_text": "luces, ebúrneo, nítido, asombrado,\norna, colora, joven, celestiales...\nEsto quitado, cierto que es bonito."
        }
    ]
}