{
    "manually_checked": false,
    "poem_title": "Fe",
    "author": "Pedro A. Morgado",
    "poem_alt_title": "Bálsamo salvador que de la altura",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Bálsamo salvador que de la altura",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "desciende en rayos de fulgor divino;",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "3",
                    "line_text": "sol que guía en la senda al peregrino",
                    "metrical_pattern": "+-+-+----+-"
                },
                {
                    "line_number": "4",
                    "line_text": "de aqueste triste valle de amargura.",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "Bálsamo salvador que de la altura\ndesciende en rayos de fulgor divino;\nsol que guía en la senda al peregrino\nde aqueste triste valle de amargura."
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "Palacio de sublime arquitectura;",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "lago eternal brillante y cristalino",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "que besa las riberas del destino",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "con el beso de luz de su agua pura.",
                    "metrical_pattern": "--+--+-+-+-"
                }
            ],
            "stanza_text": "Palacio de sublime arquitectura;\nlago eternal brillante y cristalino\nque besa las riberas del destino\ncon el beso de luz de su agua pura."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "Sacra unción de los cielos Redentora",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "ráfaga de virtud. Fe salvadora.",
                    "metrical_pattern": "+----+--+-"
                },
                {
                    "line_number": "11",
                    "line_text": "Lazo espiritual que al cielo alcanza:",
                    "metrical_pattern": "+---+-+--+-"
                }
            ],
            "stanza_text": "Sacra unción de los cielos Redentora\nráfaga de virtud. Fe salvadora.\nLazo espiritual que al cielo alcanza:"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "En lo largo y estéril del camino",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "tu brindas al cansado peregrino",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "con la dulce mansión de la Esperanza.",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "En lo largo y estéril del camino\ntu brindas al cansado peregrino\ncon la dulce mansión de la Esperanza."
        }
    ]
}