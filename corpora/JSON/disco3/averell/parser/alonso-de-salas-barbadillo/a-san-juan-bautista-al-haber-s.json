                    "line_number": "1",
                    "line_text": "Hermosa, clara y celestial aurora,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "2",
                    "line_text": "que de la gracia el sol nos anunciaste,",
                    "metrical_pattern": "---+-++--+-"
                },
                {
                    "line_number": "3",
                    "line_text": "cuando de bellas luces coronaste",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "los campos verdes que entapiza Flora;",
                    "metrical_pattern": "-+-+---+-+-"
