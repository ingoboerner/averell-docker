{
    "manually_checked": false,
    "poem_title": "Inquietud",
    "author": "Julián del Casal",
    "poem_alt_title": "Miseria helada, eclipse de ideales",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Miseria helada, eclipse de ideales",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "de morir joven triste certidumbre,",
                    "metrical_pattern": "--++-+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "cadenas de oprobiosa servidumbre,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "hedor de las tinieblas sepulcrales.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "Miseria helada, eclipse de ideales\nde morir joven triste certidumbre,\ncadenas de oprobiosa servidumbre,\nhedor de las tinieblas sepulcrales."
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "Centelleos de vívidos puñales",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "blandidos por ignara muchedumbre,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "para arrojarlos desde altiva cumbre",
                    "metrical_pattern": "---++--+-+-"
                },
                {
                    "line_number": "8",
                    "line_text": "hasta el fondo de infectos lodazales;",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "Centelleos de vívidos puñales\nblandidos por ignara muchedumbre,\npara arrojarlos desde altiva cumbre\nhasta el fondo de infectos lodazales;"
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "ante nada mi paso retrocede;",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "pero aunque todo riesgo desafío",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": "11",
                    "line_text": "nada mi corazón perturba tanto,",
                    "metrical_pattern": "+----+-+-+-"
                }
            ],
            "stanza_text": "ante nada mi paso retrocede;\npero aunque todo riesgo desafío\nnada mi corazón perturba tanto,"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "como pensar que un día darme puede",
                    "metrical_pattern": "---+++-+++-"
                },
                {
                    "line_number": "13",
                    "line_text": "todo lo que hoy me encanta, amargo hastío,",
                    "metrical_pattern": "+--+++-+-+-"
                },
                {
                    "line_number": "14",
                    "line_text": "todo lo que hoy me hastía, dulce encanto.",
                    "metrical_pattern": "+--++++--+-"
                }
            ],
            "stanza_text": "como pensar que un día darme puede\ntodo lo que hoy me encanta, amargo hastío,\ntodo lo que hoy me hastía, dulce encanto."
        }
    ]
}