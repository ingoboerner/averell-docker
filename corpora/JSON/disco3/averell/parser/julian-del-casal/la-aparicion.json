{
    "manually_checked": false,
    "poem_title": "La aparición",
    "author": "Julián del Casal",
    "poem_alt_title": "Nube fragante y cálida tamiza",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Nube fragante y cálida tamiza",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "el fulgor del palacio de granito,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "ónix, pórfido y nácar. Infinito",
                    "metrical_pattern": "+-+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "deleite invade a Herodes. La rojiza",
                    "metrical_pattern": "-+-+--+--+-"
                }
            ],
            "stanza_text": "Nube fragante y cálida tamiza\nel fulgor del palacio de granito,\nónix, pórfido y nácar. Infinito\ndeleite invade a Herodes. La rojiza"
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "espada fulgurante inmoviliza",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "hierático el verdugo, y hondo grito",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": "7",
                    "line_text": "arroja Salomé frente al maldito",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "espectro que sus miembros paraliza.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "espada fulgurante inmoviliza\nhierático el verdugo, y hondo grito\narroja Salomé frente al maldito\nespectro que sus miembros paraliza."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "Despójase del traje de brocado",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "y, quedando vestida en un momento,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "de oro y perlas, zafiros y rubíes,",
                    "metrical_pattern": "+-+--+---+-"
                }
            ],
            "stanza_text": "Despójase del traje de brocado\ny, quedando vestida en un momento,\nde oro y perlas, zafiros y rubíes,"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "huye del Precursor decapitado",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "que esparce en le marmóreo pavimento",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "lluvia de sangre en gotas carmesíes.",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "huye del Precursor decapitado\nque esparce en le marmóreo pavimento\nlluvia de sangre en gotas carmesíes."
        }
    ]
}