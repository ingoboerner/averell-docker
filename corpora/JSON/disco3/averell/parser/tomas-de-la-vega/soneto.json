    "manually_checked": false,
    "poem_title": "Soneto",
    "author": "Tomás de la Vega",
    "poem_alt_title": "Paloma Virgen, que la verde oliva",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Paloma Virgen, que la verde oliva",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": "2",
                    "line_text": "alegre lleva con ligero vuelo;",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "3",
                    "line_text": "zarza, que ardiendo, de Moisés el celo",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "4",
                    "line_text": "aumenta, y prodigiosa lo cautiva:",
                    "metrical_pattern": "-+---+-+-+-"
                }
            ],
            "stanza_text": "Paloma Virgen, que la verde oliva\nalegre lleva con ligero vuelo;\nzarza, que ardiendo, de Moisés el celo\naumenta, y prodigiosa lo cautiva:"
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "Arca del Nuevo Testamento viva,",
                    "metrical_pattern": "-------+-+-"
                },
                {
                    "line_number": "6",
                    "line_text": "antes labrada que lo fuese el Cielo;",
                    "metrical_pattern": "+--+--++-+-"
                },
                {
                    "line_number": "7",
                    "line_text": "Judith valiente, que bañado el suelo",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "8",
                    "line_text": "dejó con sangre de la Bestia altiva.",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Arca del Nuevo Testamento viva,\nantes labrada que lo fuese el Cielo;\nJudith valiente, que bañado el suelo\ndejó con sangre de la Bestia altiva."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "¡Oh! cándida Cordera palestina,",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "que ofrece a Gedeón el Vellocino;",
                    "metrical_pattern": "-+----+----"
                },
                {
                    "line_number": "11",
                    "line_text": "Esther graciosa, que por ella inclina",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "¡Oh! cándida Cordera palestina,\nque ofrece a Gedeón el Vellocino;\nEsther graciosa, que por ella inclina"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "el Padre al Verbo de su Solio trino:",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "13",
                    "line_text": "A tan alteza, Fénix peregrina,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "Inmaculada Concepción convino.",
                    "metrical_pattern": "-------+-+-"
                }
            ],
            "stanza_text": "el Padre al Verbo de su Solio trino:\nA tan alteza, Fénix peregrina,\nInmaculada Concepción convino."
        }
    ]
}