    "poem_title": "Mateo María Boiardo",
    "author": "Fernando Maristany",
    "poem_alt_title": "Del mar vi el sol surgir, por tan divina",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Del mar vi el sol surgir, por tan divina",
                    "metrical_pattern": "-+++-+-+-+-"
                },
                {
                    "line_number": "2",
                    "line_text": "melena de áureos rayos circundado,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "y el rostro tan rojizo e iluminado,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "que un incendio hizo en toda la marina.",
                    "metrical_pattern": "+-++-+---+-"
                }
            ],
            "stanza_text": "Del mar vi el sol surgir, por tan divina\nmelena de áureos rayos circundado,\ny el rostro tan rojizo e iluminado,\nque un incendio hizo en toda la marina."
        },
        {
            "stanza_number": "2",
            "stanza_type": "unknown",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "Vi abrirse, a la rociada matutina ,",
                    "metrical_pattern": "+++--+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "las rosas de un color tan inflamado,",
                    "metrical_pattern": "-+-+-++--+-"
                },
                {
                    "line_number": "7",
                    "line_text": "que se hubiera de lejos estimado",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "que un fuego ardiera por su verde espina.",
                    "metrical_pattern": "++-+---+-+-"
                }
            ],
            "stanza_text": "Vi abrirse, a la rociada matutina ,\nlas rosas de un color tan inflamado,\nque se hubiera de lejos estimado\nque un fuego ardiera por su verde espina."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "Vi en la alegre y florida primavera,",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "salir la muelle hierba perfumada",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "11",
                    "line_text": "y abrir sus hojas en la pronta edad;",
                    "metrical_pattern": "-+-+---+-+-"
                }
            ],
            "stanza_text": "Vi en la alegre y florida primavera,\nsalir la muelle hierba perfumada\ny abrir sus hojas en la pronta edad;"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "y a una mujer graciosa y hechicera,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "bellas rosas coger de madrugada,",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "y vencer a esas cosas en beldad.",
                    "metrical_pattern": "--++-+---+-"
                }
            ],
            "stanza_text": "y a una mujer graciosa y hechicera,\nbellas rosas coger de madrugada,\ny vencer a esas cosas en beldad."
        }
    ]
}