{
    "manually_checked": false,
    "poem_title": "Influjo de amor",
    "author": "Fray José Manuel de Navarrete",
    "poem_alt_title": "Célebres calles de la corte indiana,",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Célebres calles de la corte indiana,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "2",
                    "line_text": "grandes plazas, soberbios edificios,",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "templos de milagrosos frontispicios,",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "elevados torreones de arte ufana,",
                    "metrical_pattern": "--+--+-+-+-"
                }
            ],
            "stanza_text": "Célebres calles de la corte indiana,\ngrandes plazas, soberbios edificios,\ntemplos de milagrosos frontispicios,\nelevados torreones de arte ufana,"
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "altos palacios de la gloria humana,",
                    "metrical_pattern": "+--+---+-+-"
                },
                {
                    "line_number": "6",
                    "line_text": "fuentes de primorosos artificios,",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "chapiteles, pirámides, hospicios,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "que arguyen la grandeza americana:",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "altos palacios de la gloria humana,\nfuentes de primorosos artificios,\nchapiteles, pirámides, hospicios,\nque arguyen la grandeza americana:"
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "¡Oh México!, sin duda yo gozara",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": "10",
                    "line_text": "del gusto que me brinda tu grandeza,",
                    "metrical_pattern": "-+--++---+-"
                },
                {
                    "line_number": "11",
                    "line_text": "si causa superior no lo estorbara.",
                    "metrical_pattern": "-+---+++-+-"
                }
            ],
            "stanza_text": "¡Oh México!, sin duda yo gozara\ndel gusto que me brinda tu grandeza,\nsi causa superior no lo estorbara."
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "De tu suelo me arranca con presteza",
                    "metrical_pattern": "--+-++---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "el suave influjo de la dulce cara",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "14",
                    "line_text": "de una agraciada rústica belleza.",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "De tu suelo me arranca con presteza\nel suave influjo de la dulce cara\nde una agraciada rústica belleza."
        }
    ]
}