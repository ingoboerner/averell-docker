    "author": "Marqués de Santillana",
    "poem_alt_title": "Sitio de amor con grand artillería",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "serventesio",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Sitio de amor con grand artillería",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "me veo en torno, e con poder inmenso,",
                    "metrical_pattern": "+++----+-+-"
                },
                {
                    "line_number": "3",
                    "line_text": "e jamás çessan de noche e de día,",
                    "metrical_pattern": "--++--+--+-"
                },
                {
                    "line_number": "4",
                    "line_text": "nin el animo mio esta suspenso",
                    "metrical_pattern": "+--+-++--+-"
                }
            ],
            "stanza_text": "Sitio de amor con grand artillería\nme veo en torno, e con poder inmenso,\ne jamás çessan de noche e de día,\nnin el animo mio esta suspenso"
        },
        {
            "stanza_number": "2",
            "stanza_type": "serventesio",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "de sus combates, con tanta porfía",
                    "metrical_pattern": "---+--+--+-"
                },
                {
                    "line_number": "6",
                    "line_text": "que ya me sobran, maguer me defenso.",
                    "metrical_pattern": "-+++--++-+-"
                },
                {
                    "line_number": "7",
                    "line_text": "Pues que faras, o triste vida mía,",
                    "metrical_pattern": "--+--+-+-+-"
                },
                {
                    "line_number": "8",
                    "line_text": "que non lo alçanzo por mucho que pienso?",
                    "metrical_pattern": "-+++-----+-"
                }
            ],
            "stanza_text": "de sus combates, con tanta porfía\nque ya me sobran, maguer me defenso.\nPues que faras, o triste vida mía,\nque non lo alçanzo por mucho que pienso?"
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "La corporea fuerça de Samsón,",
                    "metrical_pattern": "---+--+--+-"
                },
                {
                    "line_number": "10",
                    "line_text": "ni de David el gran amor divino,",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "el seso nin saber de Salomón,",
                    "metrical_pattern": "-+-+-+---+-"
                }
            ],
            "stanza_text": "La corporea fuerça de Samsón,\nni de David el gran amor divino,\nel seso nin saber de Salomón,"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "nin Hercoles se falla tanto dino",
                    "metrical_pattern": "+-+--+-+-+-"
                },
                {
                    "line_number": "13",
                    "line_text": "que resistir pudiessen tal presión;",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": "14",
                    "line_text": "así que a defensar me fallo indino.",
                    "metrical_pattern": "-+---+++-+-"
                }
            ],
            "stanza_text": "nin Hercoles se falla tanto dino\nque resistir pudiessen tal presión;\nasí que a defensar me fallo indino."
        }
    ]
}