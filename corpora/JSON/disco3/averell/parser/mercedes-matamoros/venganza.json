            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Me levanté febril, sin hacer ruido",
                    "metrical_pattern": "+--+-+--++-"
                },
                {
                    "line_number": "2",
                    "line_text": "a media noche; y cautelosamente,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "3",
                    "line_text": "fui a tu estancia, pensando amargamente:",
                    "metrical_pattern": "+-+--+-+-+-"
                },
                {
                    "line_number": "4",
                    "line_text": "-¡Podré matarlo cuando esté dormido!-",
                    "metrical_pattern": "-+-++--+-+-"
