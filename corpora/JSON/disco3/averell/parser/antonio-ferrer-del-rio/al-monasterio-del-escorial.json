{
    "manually_checked": false,
    "poem_title": "Al Monasterio del Escorial",
    "author": "Antonio Ferrer del Río",
    "poem_alt_title": "Severa, magna, armónica, sencilla,",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Severa, magna, armónica, sencilla,",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "avasalla tu mole la memoria,",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "del entusiasmo flor, del arte gloria,",
                    "metrical_pattern": "---+-+-+-+-"
                },
                {
                    "line_number": "4",
                    "line_text": "luz de la fe, del mundo maravilla.",
                    "metrical_pattern": "+--+-+---+-"
                }
            ],
            "stanza_text": "Severa, magna, armónica, sencilla,\navasalla tu mole la memoria,\ndel entusiasmo flor, del arte gloria,\nluz de la fe, del mundo maravilla."
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "En la extensión de tu recinto brilla,",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": "6",
                    "line_text": "grande y potente, en óptica ilusoria,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "de un poderoso rey la ínclita historia,",
                    "metrical_pattern": "+--+-++--+-"
                },
                {
                    "line_number": "8",
                    "line_text": "emblema de los triunfos de Castilla.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "En la extensión de tu recinto brilla,\ngrande y potente, en óptica ilusoria,\nde un poderoso rey la ínclita historia,\nemblema de los triunfos de Castilla."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "De San Quintín recuerdo soberano,",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "Orán perfumes, el Japón maderas,",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "oro te daban Méjico y los Andes;",
                    "metrical_pattern": "+-++-+---+-"
                }
            ],
            "stanza_text": "De San Quintín recuerdo soberano,\nOrán perfumes, el Japón maderas,\noro te daban Méjico y los Andes;"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "mármoles el soberbio Vaticano,",
                    "metrical_pattern": "+----+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "y de Lutero, de Mahomet banderas,",
                    "metrical_pattern": "---+---+-+-"
                },
                {
                    "line_number": "14",
                    "line_text": "por Alba y por don Juan, Lepanto y Flandes.",
                    "metrical_pattern": "-+--+--+-+-"
                }
            ],
            "stanza_text": "mármoles el soberbio Vaticano,\ny de Lutero, de Mahomet banderas,\npor Alba y por don Juan, Lepanto y Flandes."
        }
    ]
}