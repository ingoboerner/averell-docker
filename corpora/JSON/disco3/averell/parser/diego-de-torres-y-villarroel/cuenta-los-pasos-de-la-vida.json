            ],
            "stanza_text": "Mulas, médicos, sastres y letrados,\ncorriendo por las calles a millones;\nduques, lacayos, damas y soplones,\ntodos sin distinción arrebujados;"
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "gran chusma de hidalguillos tolerados,",
                    "metrical_pattern": "++---+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "cuyo examen lo hicieron los doblones,",
                    "metrical_pattern": "--+-++---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "y un pegujal de diablos comadrones,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "que les tientan la onda a los casados;",
                    "metrical_pattern": "-++-+----+-"
                }
            ],
            "stanza_text": "gran chusma de hidalguillos tolerados,\ncuyo examen lo hicieron los doblones,\ny un pegujal de diablos comadrones,\nque les tientan la onda a los casados;"
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "arrendadores mil por excelencia;",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "metidos a señores los piojosos;",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "11",
                    "line_text": "todo vicio, con nombre de decencia;",
                    "metrical_pattern": "+-+--+---+-"
                }
            ],
            "stanza_text": "arrendadores mil por excelencia;\nmetidos a señores los piojosos;\ntodo vicio, con nombre de decencia;"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "es burdel de holgazanes y de ociosos,",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": "13",
                    "line_text": "donde hay libertad suma de conciencia",
                    "metrical_pattern": "-+--++---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "para idiotas, malsínes y tramposos.",
                    "metrical_pattern": "--+--+---+-"
                }
            ],
            "stanza_text": "es burdel de holgazanes y de ociosos,\ndonde hay libertad suma de conciencia\npara idiotas, malsínes y tramposos."
