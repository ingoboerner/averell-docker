{
    "manually_checked": false,
    "poem_title": "A un plagiario",
    "author": "Bernardo López García",
    "poem_alt_title": "Ratero del Parnaso; bardo huero;",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Ratero del Parnaso; bardo huero;",
                    "metrical_pattern": "-----+-+-+-"
                },
                {
                    "line_number": "2",
                    "line_text": "Petrarca en comisión; sabio anarquista;",
                    "metrical_pattern": "-+---++--+-"
                },
                {
                    "line_number": "3",
                    "line_text": "del divino jardín contrabandista;",
                    "metrical_pattern": "--+--+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "Judas del arte; sacristán de Homero;",
                    "metrical_pattern": "+--+---+-+-"
                }
            ],
            "stanza_text": "Ratero del Parnaso; bardo huero;\nPetrarca en comisión; sabio anarquista;\ndel divino jardín contrabandista;\nJudas del arte; sacristán de Homero;"
        },
        {
            "stanza_number": "2",
            "stanza_type": "cuarteto",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "acólito del genio verdadero;",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "de ajeno capital, capitalista;",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "7",
                    "line_text": "conquistador sin medios de conquista;",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": "8",
                    "line_text": "Moreto de cartón; Tasso de cuero;",
                    "metrical_pattern": "-+---++--+-"
                }
            ],
            "stanza_text": "acólito del genio verdadero;\nde ajeno capital, capitalista;\nconquistador sin medios de conquista;\nMoreto de cartón; Tasso de cuero;"
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "detén tu audacia ya; de tu delito",
                    "metrical_pattern": "-+-+-+---+-"
                },
                {
                    "line_number": "10",
                    "line_text": "se ocupan, rebuscándote un fracaso,",
                    "metrical_pattern": "-+---+-+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "cuantos aman del arte lo infinito;",
                    "metrical_pattern": "+-+--+-+-+-"
                }
            ],
            "stanza_text": "detén tu audacia ya; de tu delito\nse ocupan, rebuscándote un fracaso,\ncuantos aman del arte lo infinito;"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "y por cerrarte para siempre el paso,",
                    "metrical_pattern": "---++--+-+-"
                },
                {
                    "line_number": "13",
                    "line_text": "se ha mandado a las Musas por escrito",
                    "metrical_pattern": "+-+--+---+-"
                },
                {
                    "line_number": "14",
                    "line_text": "que haya Guardia Civil en el Parnaso.",
                    "metrical_pattern": "+----+---+-"
                }
            ],
            "stanza_text": "y por cerrarte para siempre el paso,\nse ha mandado a las Musas por escrito\nque haya Guardia Civil en el Parnaso."
        }
    ]
}