    "poem_title": "Soneto",
    "author": "Juan de Mena",
    "poem_alt_title": "Lejos de vos, e cerca de cuidado,",
    "corpus": "disco2_1",
    "stanzas": [
        {
            "stanza_number": "1",
            "stanza_type": "serventesio",
            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Lejos de vos, e cerca de cuidado,",
                    "metrical_pattern": "---+-+---+-"
                },
                {
                    "line_number": "2",
                    "line_text": "pobre de gozo, e rico de tristeza,",
                    "metrical_pattern": "+--+-+---+-"
                },
                {
                    "line_number": "3",
                    "line_text": "fallido de reposo, e abastado",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "4",
                    "line_text": "de mortal pena, congoja y graveza;",
                    "metrical_pattern": "--++--+--+-"
                }
            ],
            "stanza_text": "Lejos de vos, e cerca de cuidado,\npobre de gozo, e rico de tristeza,\nfallido de reposo, e abastado\nde mortal pena, congoja y graveza;"
        },
        {
            "stanza_number": "2",
            "stanza_type": "serventesio",
            "lines": [
                {
                    "line_number": "5",
                    "line_text": "desnudo de esperanza, e abrigado",
                    "metrical_pattern": "-+---+---+-"
                },
                {
                    "line_number": "6",
                    "line_text": "de inmensa cuita, e visto d' aspereza,",
                    "metrical_pattern": "-+-+-+-+--+-"
                },
                {
                    "line_number": "7",
                    "line_text": "la mi vida me huye mal mi agrado,",
                    "metrical_pattern": "--+-+-+--+-"
                },
                {
                    "line_number": "8",
                    "line_text": "la muerte me persigue sin pereza.",
                    "metrical_pattern": "-+---+---+-"
                }
            ],
            "stanza_text": "desnudo de esperanza, e abrigado\nde inmensa cuita, e visto d' aspereza,\nla mi vida me huye mal mi agrado,\nla muerte me persigue sin pereza."
        },
        {
            "stanza_number": "3",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "9",
                    "line_text": "Ni son bastantes a satisfacer",
                    "metrical_pattern": "-+-+-----+-"
                },
                {
                    "line_number": "10",
                    "line_text": "la sed ardiente de mi gran deseo",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "11",
                    "line_text": "Tajo al presente, ni a me a socorrer",
                    "metrical_pattern": "+--+--+--+-"
                }
            ],
            "stanza_text": "Ni son bastantes a satisfacer\nla sed ardiente de mi gran deseo\nTajo al presente, ni a me a socorrer"
        },
        {
            "stanza_number": "4",
            "stanza_type": "terceto",
            "lines": [
                {
                    "line_number": "12",
                    "line_text": "la enferma Guadiana, ni la creo.",
                    "metrical_pattern": "--+--+--++-"
                },
                {
