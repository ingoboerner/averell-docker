            "lines": [
                {
                    "line_number": "1",
                    "line_text": "Aquí yace, ¡ay dolor! ¡ay hado esquivo!",
                    "metrical_pattern": "-++--++--+-"
                },
                {
                    "line_number": "2",
                    "line_text": "aquí reposo, ¡ay fin dudoso y cierto!",
                    "metrical_pattern": "-+-+-+-+-+-"
                },
                {
                    "line_number": "3",
                    "line_text": "aquí fluctúa, ¡ay peligroso puerto!",
                    "metrical_pattern": "-+-+---+-+-"
                },
                {
                    "line_number": "4",
                    "line_text": "aquí fallece, ¡ay golpe ejecutivo!",
                    "metrical_pattern": "-+-+-+---+-"
