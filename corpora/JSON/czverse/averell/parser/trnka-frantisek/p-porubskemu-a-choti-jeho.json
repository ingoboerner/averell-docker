                        {
                            "word_text": "neklamavým"
                        },
                        {
                            "word_text": "slibem"
                        },
                        {
                            "word_text": "všecko"
                        },
                        {
                            "word_text": "ztvrzujeme"
                        }
                    ]
                },
                {
                    "line_number": 14,
                    "line_text": "Čím k oustrannému vděku čile směřujeme.",
                    "metrical_pattern": "0100010101000",
                    "line_length": 13,
                    "rhyme": 7,
                    "words": [
