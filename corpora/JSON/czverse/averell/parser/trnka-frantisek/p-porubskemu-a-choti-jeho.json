                            "word_text": "ochotlivou"
                        },
                        {
                            "word_text": "vděčností"
                        },
                        {
                            "word_text": "se"
                        },
                        {
                            "word_text": "splácí"
                        }
                    ]
                },
                {
                    "line_number": 16,
                    "line_text": "A honosnosti zrádné trůny plzké kácí.",
                    "metrical_pattern": "0100010101010",
                    "line_length": 13,
                    "rhyme": 8,
                    "words": [
                        {
                            "word_text": "A"
                        },
                        {
                            "word_text": "honosnosti"
                        },
                        {
                            "word_text": "zrádné"
                        },
                        {
                            "word_text": "trůny"
                        },
                        {
                            "word_text": "plzké"
                        },
                        {
                            "word_text": "kácí"
                        }
                    ]
                },
                {
                    "line_number": 17,
                    "line_text": "Co více bližnivosti svazky utužuje?",
                    "metrical_pattern": "0101000101000",
                    "line_length": 13,
                    "rhyme": 9,
                    "words": [
