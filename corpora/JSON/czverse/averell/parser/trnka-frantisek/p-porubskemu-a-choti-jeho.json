                        },
                        {
                            "word_text": "plyne"
                        }
                    ]
                },
                {
                    "line_number": 3,
                    "line_text": "Tu skuhrajecí hoře v mžik se odstraňují,",
                    "metrical_pattern": "0100010101000",
                    "line_length": 13,
                    "rhyme": 2,
                    "words": [
                        {
                            "word_text": "Tu"
                        },
                        {
                            "word_text": "skuhrajecí"
                        },
                        {
                            "word_text": "hoře"
                        },
                        {
                            "word_text": "v"
                        },
                        {
                            "word_text": "mžik"
                        },
                        {
                            "word_text": "se"
                        },
                        {
                            "word_text": "odstraňují"
                        }
                    ]
                },
                {
                    "line_number": 4,
                    "line_text": "Jen pocitové přízně žíly naplňují.",
                    "metrical_pattern": "0100010101000",
                    "line_length": 13,
                    "rhyme": 2,
                    "words": [
                        {
                            "word_text": "Jen"
                        },
                        {
                            "word_text": "pocitové"
                        },
                        {
                            "word_text": "přízně"
                        },
                        {
                            "word_text": "žíly"
                        },
                        {
                            "word_text": "naplňují"
                        }
                    ]
                },
                {
                    "line_number": 5,
                    "line_text": "Tu zamračené se trudem vysloní čelo;",
                    "metrical_pattern": "0100001010010",
                    "line_length": 13,
                    "rhyme": 3,
                    "words": [
                        {
                            "word_text": "Tu"
                        },
                        {
