                        {
                            "word_text": "i"
                        },
                        {
                            "word_text": "neskromní"
                        }
                    ]
                }
            ],
            "stanza_text": "Funusu byli přítomni\npáni skromní i neskromní."
        },
        {
            "stanza_number": 4,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 7,
                    "line_text": "Ti skromní stáli u hrobu němí.",
                    "metrical_pattern": "0101010010",
                    "line_length": 10,
                    "rhyme": 4,
                    "words": [
                        {
                            "word_text": "Ti"
                        },
                        {
                            "word_text": "skromní"
                        },
                        {
                            "word_text": "stáli"
                        },
                        {
                            "word_text": "u"
                        },
                        {
                            "word_text": "hrobu"
                        },
                        {
                            "word_text": "němí"
                        }
                    ]
                },
                {
                    "line_number": 8,
                    "line_text": "Neskromní mluvili k české zemi:",
                    "metrical_pattern": "1001001010",
                    "line_length": 10,
                    "rhyme": 4,
                    "words": [
                        {
                            "word_text": "Neskromní"
                        },
                        {
                            "word_text": "mluvili"
                        },
                        {
                            "word_text": "k"
                        },
                        {
                            "word_text": "české"
                        },
                        {
                            "word_text": "zemi"
                        }
                    ]
                }
            ],
            "stanza_text": "Ti skromní stáli u hrobu němí.\nNeskromní mluvili k české zemi:"
        },
        {
            "stanza_number": 5,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 9,
                    "line_text": "„Ať klidně ztlí tu tvoje kost.",
                    "metrical_pattern": "01010101",
                    "line_length": 8,
                    "rhyme": 5,
                    "words": [
                        {
                            "word_text": "Ať"
                        },
                        {
                            "word_text": "klidně"
                        },
                        {
                            "word_text": "ztlí"
                        },
                        {
                            "word_text": "tu"
                        },
                        {
                            "word_text": "tvoje"
                        },
                        {
                            "word_text": "kost"
                        }
                    ]
                },
                {
                    "line_number": 10,
                    "line_text": "Vykonala jsi povinnost.",
                    "metrical_pattern": "10000100",
                    "line_length": 8,
                    "rhyme": 5,
                    "words": [
                        {
                            "word_text": "Vykonala"
                        },
                        {
                            "word_text": "jsi"
                        },
                        {
                            "word_text": "povinnost"
                        }
                    ]
                }
            ],
            "stanza_text": "„Ať klidně ztlí tu tvoje kost.\nVykonala jsi povinnost."
        },
        {
            "stanza_number": 6,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 11,
                    "line_text": "V přívalu cizoty byla jsi hráz,",
                    "metrical_pattern": "1001001001",
                    "line_length": 10,
                    "rhyme": 6,
                    "words": [
                        {
                            "word_text": "V"
                        },
                        {
                            "word_text": "přívalu"
                        },
                        {
                            "word_text": "cizoty"
                        },
                        {
                            "word_text": "byla"
                        },
                        {
                            "word_text": "jsi"
                        },
                        {
                            "word_text": "hráz"
                        }
                    ]
                },
                {
                    "line_number": 12,
                    "line_text": "chránila, bránila, sílila nás.",
                    "metrical_pattern": "1001001000",
                    "line_length": 10,
                    "rhyme": 6,
                    "words": [
                        {
                            "word_text": "chránila"
                        },
                        {
                            "word_text": "bránila"
                        },
                        {
                            "word_text": "sílila"
                        },
                        {
                            "word_text": "nás"
                        }
                    ]
                }
            ],
            "stanza_text": "V přívalu cizoty byla jsi hráz,\nchránila, bránila, sílila nás."
        },
        {
            "stanza_number": 7,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 13,
                    "line_text": "Uchystalas’ nám lepší den.",
                    "metrical_pattern": "10000101",
                    "line_length": 8,
                    "rhyme": 7,
                    "words": [
                        {
                            "word_text": "Uchystalas"
                        },
                        {
                            "word_text": "nám"
                        },
                        {
                            "word_text": "lepší"
                        },
                        {
                            "word_text": "den"
                        }
                    ]
                },
                {
                    "line_number": 14,
                    "line_text": "A teď je národ svoboden.",
                    "metrical_pattern": "10010100",
                    "line_length": 8,
                    "rhyme": 7,
                    "words": [
                        {
                            "word_text": "A"
                        },
                        {
                            "word_text": "teď"
                        },
                        {
                            "word_text": "je"
                        },
                        {
                            "word_text": "národ"
                        },
                        {
                            "word_text": "svoboden"
                        }
                    ]
                }
            ],
            "stanza_text": "Uchystalas’ nám lepší den.\nA teď je národ svoboden."
        },
        {
            "stanza_number": 8,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 15,
                    "line_text": "Svobodný národ nemá lepší cíl,",
                    "metrical_pattern": "1001010101",
                    "line_length": 10,
                    "rhyme": 8,
                    "words": [
                        {
                            "word_text": "Svobodný"
                        },
                        {
                            "word_text": "národ"
                        },
                        {
                            "word_text": "nemá"
                        },
                        {
                            "word_text": "lepší"
                        },
                        {
                            "word_text": "cíl"
                        }
                    ]
                },
                {
                    "line_number": 16,
                    "line_text": "než ubít všechno, čím se zachránil.",
                    "metrical_pattern": "0101010100",
                    "line_length": 10,
                    "rhyme": 8,
                    "words": [
                        {
                            "word_text": "než"
                        },
                        {
                            "word_text": "ubít"
                        },
                        {
                            "word_text": "všechno"
                        },
                        {
                            "word_text": "čím"
                        },
                        {
                            "word_text": "se"
                        },
                        {
                            "word_text": "zachránil"
                        }
                    ]
                }
            ],
            "stanza_text": "Svobodný národ nemá lepší cíl,\nnež ubít všechno, čím se zachránil."
        },
        {
            "stanza_number": 9,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 17,
                    "line_text": "Spi, země, klidně, můžeš-li.",
                    "metrical_pattern": "11010100",
                    "line_length": 8,
                    "rhyme": 9,
                    "words": [
                        {
                            "word_text": "Spi"
                        },
                        {
                            "word_text": "země"
                        },
                        {
                            "word_text": "klidně"
                        },
                        {
                            "word_text": "můžeš"
                        },
                        {
                            "word_text": "li"
                        }
                    ]
                },
                {
                    "line_number": 18,
                    "line_text": "My jsme se o tobě usnesli.",
                    "metrical_pattern": "000100100",
                    "line_length": 9,
                    "rhyme": 9,
                    "words": [
                        {
                            "word_text": "My"
                        },
                        {
                            "word_text": "jsme"
                        },
                        {
                            "word_text": "se"
                        },
                        {
                            "word_text": "o"
                        },
                        {
                            "word_text": "tobě"
                        },
                        {
                            "word_text": "usnesli"
                        }
                    ]
                }
            ],
            "stanza_text": "Spi, země, klidně, můžeš-li.\nMy jsme se o tobě usnesli."
        },
        {
            "stanza_number": 10,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 19,
                    "line_text": "Pámbu buď pochválen na nebi.",
                    "metrical_pattern": "100100100",
                    "line_length": 9,
                    "rhyme": 10,
                    "words": [
                        {
                            "word_text": "Pámbu"
                        },
                        {
                            "word_text": "buď"
                        },
                        {
                            "word_text": "pochválen"
                        },
                        {
                            "word_text": "na"
                        },
                        {
                            "word_text": "nebi"
                        }
                    ]
                },
                {
                    "line_number": 20,
                    "line_text": "Už, země, není tě potřebí.",
                    "metrical_pattern": "010100100",
                    "line_length": 9,
                    "rhyme": 10,
                    "words": [
                        {
                            "word_text": "Už"
                        },
                        {
                            "word_text": "země"
                        },
                        {
                            "word_text": "není"
                        },
                        {
                            "word_text": "tě"
                        },
                        {
                            "word_text": "potřebí"
                        }
                    ]
                }
            ],
            "stanza_text": "Pámbu buď pochválen na nebi.\nUž, země, není tě potřebí."
        },
        {
            "stanza_number": 11,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 21,
                    "line_text": "Spi klidně, umři, na nebe vstup.",
                    "metrical_pattern": "110101001",
                    "line_length": 9,
                    "rhyme": 11,
                    "words": [
                        {
                            "word_text": "Spi"
                        },
                        {
                            "word_text": "klidně"
                        },
                        {
                            "word_text": "umři"
                        },
                        {
                            "word_text": "na"
                        },
                        {
                            "word_text": "nebe"
                        },
                        {
                            "word_text": "vstup"
                        }
                    ]
                },
                {
                    "line_number": 22,
                    "line_text": "Cos uděláme; nu svaz žup.",
                    "metrical_pattern": "01000011",
                    "line_length": 8,
                    "rhyme": 11,
                    "words": [
                        {
                            "word_text": "Cos"
                        },
                        {
                            "word_text": "uděláme"
                        },
                        {
                            "word_text": "nu"
                        },
                        {
                            "word_text": "svaz"
                        },
                        {
                            "word_text": "žup"
                        }
                    ]
                }
            ],
            "stanza_text": "Spi klidně, umři, na nebe vstup.\nCos uděláme; nu svaz žup."
        },
        {
            "stanza_number": 12,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 23,
                    "line_text": "Cos jako stín tvůj uděláme.",
                    "metrical_pattern": "110101000",
                    "line_length": 9,
                    "rhyme": 12,
                    "words": [
                        {
                            "word_text": "Cos"
                        },
                        {
                            "word_text": "jako"
                        },
                        {
                            "word_text": "stín"
                        },
                        {
                            "word_text": "tvůj"
                        },
                        {
                            "word_text": "uděláme"
                        }
                    ]
                },
                {
                    "line_number": 24,
                    "line_text": "Na vládu při tom spoléháme.",
                    "metrical_pattern": "100101000",
                    "line_length": 9,
                    "rhyme": 12,
                    "words": [
                        {
                            "word_text": "Na"
                        },
                        {
                            "word_text": "vládu"
                        },
                        {
                            "word_text": "při"
                        },
                        {
                            "word_text": "tom"
                        },
                        {
                            "word_text": "spoléháme"
                        }
                    ]
                }
            ],
            "stanza_text": "Cos jako stín tvůj uděláme.\nNa vládu při tom spoléháme."
        },
        {
            "stanza_number": 13,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 25,
                    "line_text": "Menšiny naše, spěte blaze.",
                    "metrical_pattern": "100101010",
                    "line_length": 9,
                    "rhyme": 13,
                    "words": [
                        {
                            "word_text": "Menšiny"
                        },
                        {
                            "word_text": "naše"
                        },
                        {
                            "word_text": "spěte"
                        },
                        {
                            "word_text": "blaze"
                        }
                    ]
                },
                {
                    "line_number": 26,
                    "line_text": "Nad vámi bude bdít Tusar v Praze.",
                    "metrical_pattern": "1001011010",
                    "line_length": 10,
                    "rhyme": 13,
                    "words": [
                        {
                            "word_text": "Nad"
                        },
                        {
                            "word_text": "vámi"
                        },
                        {
                            "word_text": "bude"
                        },
                        {
                            "word_text": "bdít"
                        },
                        {
                            "word_text": "Tusar"
                        },
                        {
                            "word_text": "v"
                        },
                        {
                            "word_text": "Praze"
                        }
                    ]
                }
            ],
            "stanza_text": "Menšiny naše, spěte blaze.\nNad vámi bude bdít Tusar v Praze."
        },
        {
            "stanza_number": 14,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 27,
                    "line_text": "Po rozvážení důkladném",
                    "metrical_pattern": "10000100",
                    "line_length": 8,
                    "rhyme": 14,
                    "words": [
                        {
                            "word_text": "Po"
                        },
                        {
                            "word_text": "rozvážení"
                        },
                        {
                            "word_text": "důkladném"
                        }
                    ]
                },
                {
                    "line_number": 28,
                    "line_text": "dělíme, dělíme, povládnem.“",
                    "metrical_pattern": "100100100",
                    "line_length": 9,
                    "rhyme": 14,
                    "words": [
                        {
                            "word_text": "dělíme"
                        },
                        {
                            "word_text": "dělíme"
                        },
                        {
                            "word_text": "povládnem"
                        }
                    ]
                }
            ],
            "stanza_text": "Po rozvážení důkladném\ndělíme, dělíme, povládnem.“"
        },
        {
            "stanza_number": 15,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 29,
                    "line_text": "Po řeči té však pohřební",
                    "metrical_pattern": "10000100",
                    "line_length": 8,
                    "rhyme": 15,
                    "words": [
                        {
                            "word_text": "Po"
                        },
                        {
                            "word_text": "řeči"
                        },
                        {
                            "word_text": "té"
                        },
                        {
                            "word_text": "však"
                        },
                        {
                            "word_text": "pohřební"
                        }
                    ]
                },
                {
                    "line_number": 30,
                    "line_text": "slovíčko řekla poslední:",
                    "metrical_pattern": "10010100",
                    "line_length": 8,
                    "rhyme": 15,
                    "words": [
                        {
                            "word_text": "slovíčko"
                        },
                        {
                            "word_text": "řekla"
                        },
                        {
                            "word_text": "poslední"
                        }
                    ]
                }
            ],
            "stanza_text": "Po řeči té však pohřební\nslovíčko řekla poslední:"
        },
        {
            "stanza_number": 16,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 31,
                    "line_text": "„Nedobře, páni, mluvíte.",
                    "metrical_pattern": "10010100",
                    "line_length": 8,
                    "rhyme": 16,
                    "words": [
                        {
                            "word_text": "Nedobře"
                        },
                        {
                            "word_text": "páni"
                        },
                        {
                            "word_text": "mluvíte"
                        }
                    ]
                },
                {
                    "line_number": 32,
                    "line_text": "Je ovšem pravda, že dělíte.",
                    "metrical_pattern": "010100100",
                    "line_length": 9,
                    "rhyme": 16,
                    "words": [
                        {
                            "word_text": "Je"
                        },
                        {
                            "word_text": "ovšem"
                        },
                        {
                            "word_text": "pravda"
                        },
                        {
                            "word_text": "že"
                        },
                        {
                            "word_text": "dělíte"
                        }
                    ]
                }
            ],
            "stanza_text": "„Nedobře, páni, mluvíte.\nJe ovšem pravda, že dělíte."
        },
        {
            "stanza_number": 17,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 33,
                    "line_text": "Ale co říci je nesnadné:",
                    "metrical_pattern": "100100100",
                    "line_length": 9,
                    "rhyme": 17,
                    "words": [
                        {
                            "word_text": "Ale"
                        },
                        {
                            "word_text": "co"
                        },
                        {
                            "word_text": "říci"
                        },
                        {
                            "word_text": "je"
                        },
                        {
                            "word_text": "nesnadné"
                        }
                    ]
                },
                {
                    "line_number": 34,
                    "line_text": "kdo při tom dělení povládne.",
                    "metrical_pattern": "010100100",
                    "line_length": 9,
                    "rhyme": 17,
                    "words": [
                        {
                            "word_text": "kdo"
                        },
                        {
                            "word_text": "při"
                        },
                        {
                            "word_text": "tom"
                        },
                        {
                            "word_text": "dělení"
                        },
                        {
                            "word_text": "povládne"
                        }
                    ]
                }
            ],
            "stanza_text": "Ale co říci je nesnadné:\nkdo při tom dělení povládne."
        },
        {
            "stanza_number": 18,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 35,
                    "line_text": "Špendlíkem budete hrabati,",
                    "metrical_pattern": "100100100",
                    "line_length": 9,
                    "rhyme": 18,
                    "words": [
                        {
                            "word_text": "Špendlíkem"
                        },
                        {
                            "word_text": "budete"
                        },
                        {
                            "word_text": "hrabati"
                        }
                    ]
                },
                {
                    "line_number": 36,
                    "line_text": "ale kdo umřel, se nevrátí!“",
                    "metrical_pattern": "100100100",
                    "line_length": 9,
                    "rhyme": 18,
                    "words": [
                        {
                            "word_text": "ale"
                        },
                        {
                            "word_text": "kdo"
                        },
                        {
                            "word_text": "umřel"
