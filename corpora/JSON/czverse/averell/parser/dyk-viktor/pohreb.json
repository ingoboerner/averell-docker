                        },
                        {
                            "word_text": "přítomni"
                        }
                    ]
                },
                {
                    "line_number": 6,
                    "line_text": "páni skromní i neskromní.",
                    "metrical_pattern": "10100100",
                    "line_length": 8,
                    "rhyme": 3,
                    "words": [
                        {
                            "word_text": "páni"
                        },
                        {
                            "word_text": "skromní"
