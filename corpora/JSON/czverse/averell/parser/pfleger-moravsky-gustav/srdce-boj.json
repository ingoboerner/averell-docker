            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Ty divé srdce, nezkrocené žalem,",
                    "metrical_pattern": "01010100010",
                    "line_length": 11,
                    "rhyme": 1,
                    "words": [
