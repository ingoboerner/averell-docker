                            "word_text": "Proč"
                        },
                        {
                            "word_text": "hoříš"
                        },
                        {
                            "word_text": "přec"
                        },
                        {
                            "word_text": "jen"
                        },
                        {
                            "word_text": "neuhaslým"
                        },
                        {
                            "word_text": "palem"
                        }
                    ]
                },
                {
                    "line_number": 4,
                    "line_text": "A vzmítáš trpkosť otrávení rovnou?",
                    "metrical_pattern": "01010100010",
                    "line_length": 11,
                    "rhyme": 2,
                    "words": [
                        {
                            "word_text": "A"
                        },
                        {
                            "word_text": "vzmítáš"
                        },
                        {
                            "word_text": "trpkosť"
                        },
                        {
                            "word_text": "otrávení"
                        },
                        {
                            "word_text": "rovnou"
                        }
                    ]
                },
                {
                    "line_number": 5,
                    "line_text": "Co tvé má přání v dechu žalujícím,",
                    "metrical_pattern": "00110101000",
                    "line_length": 11,
                    "rhyme": 3,
                    "words": [
                        {
                            "word_text": "Co"
                        },
                        {
                            "word_text": "tvé"
                        },
                        {
                            "word_text": "má"
                        },
                        {
                            "word_text": "přání"
                        },
                        {
                            "word_text": "v"
                        },
                        {
                            "word_text": "dechu"
                        },
                        {
                            "word_text": "žalujícím"
                        }
                    ]
                },
                {
                    "line_number": 6,
                    "line_text": "Anť zmařila skutečnosť naděj skrovnou?",
                    "metrical_pattern": "01001001010",
                    "line_length": 11,
                    "rhyme": 2,
