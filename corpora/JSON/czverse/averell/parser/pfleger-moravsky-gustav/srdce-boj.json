                        },
                        {
                            "word_text": "zanechala"
                        }
                    ]
                },
                {
                    "line_number": 15,
                    "line_text": "Ji opět vzkouzliť v život nemohoucí;",
                    "metrical_pattern": "01010101000",
                    "line_length": 11,
                    "rhyme": 5,
                    "words": [
                        {
                            "word_text": "Ji"
                        },
                        {
                            "word_text": "opět"
