{
    "poem_title": "MRAMOROVÝ PALÁC. (XVII.)",
    "author": "Pfleger Moravský, Gustav",
    "manually_checked": true,
    "stanzas": [
        {
            "stanza_number": 1,
            "stanza_type": null,
            "lines": [
                {
                    "line_number": 1,
                    "line_text": "Věsť o slibu tom dostala",
                    "metrical_pattern": "01000100",
                    "line_length": 8,
                    "rhyme": 1,
                    "words": [
                        {
                            "word_text": "Věsť"
                        },
                        {
                            "word_text": "o"
                        },
                        {
                            "word_text": "slibu"
                        },
                        {
                            "word_text": "tom"
                        },
                        {
                            "word_text": "dostala"
                        }
                    ]
                },
                {
                    "line_number": 2,
                    "line_text": "Se k sluchu děvy zděsem mroucí,",
                    "metrical_pattern": "100101010",
                    "line_length": 9,
                    "rhyme": 2,
                    "words": [
                        {
                            "word_text": "Se"
                        },
                        {
                            "word_text": "k"
                        },
                        {
                            "word_text": "sluchu"
                        },
                        {
                            "word_text": "děvy"
                        },
                        {
                            "word_text": "zděsem"
                        },
                        {
                            "word_text": "mroucí"
                        }
                    ]
                },
                {
                    "line_number": 3,
                    "line_text": "A každým zvukem ztýrala",
                    "metrical_pattern": "01010100",
                    "line_length": 8,
                    "rhyme": 1,
                    "words": [
                        {
                            "word_text": "A"
                        },
                        {
                            "word_text": "každým"
                        },
                        {
                            "word_text": "zvukem"
                        },
                        {
                            "word_text": "ztýrala"
                        }
                    ]
                },
                {
                    "line_number": 4,
                    "line_text": "Ach! její srdce trýzní žhoucí.",
                    "metrical_pattern": "110101010",
                    "line_length": 9,
                    "rhyme": 2,
                    "words": [
                        {
                            "word_text": "Ach"
                        },
                        {
                            "word_text": "její"
                        },
                        {
                            "word_text": "srdce"
                        },
                        {
                            "word_text": "trýzní"
                        },
                        {
                            "word_text": "žhoucí"
                        }
                    ]
                },
                {
                    "line_number": 5,
                    "line_text": "A k tomu služka prostořečně",
                    "metrical_pattern": "010101000",
                    "line_length": 9,
                    "rhyme": 3,
                    "words": [
                        {
                            "word_text": "A"
                        },
                        {
                            "word_text": "k"
                        },
                        {
                            "word_text": "tomu"
                        },
                        {
                            "word_text": "služka"
                        },
                        {
                            "word_text": "prostořečně"
                        }
                    ]
                },
                {
                    "line_number": 6,
                    "line_text": "Juž o sňatku hned mluvila,",
                    "metrical_pattern": "01000100",
                    "line_length": 8,
                    "rhyme": 4,
                    "words": [
                        {
                            "word_text": "Juž"
                        },
                        {
                            "word_text": "o"
                        },
                        {
                            "word_text": "sňatku"
                        },
                        {
                            "word_text": "hned"
                        },
                        {
                            "word_text": "mluvila"
                        }
                    ]
                },
                {
                    "line_number": 7,
                    "line_text": "Jejž slaviť bude spanilá",
                    "metrical_pattern": "01010100",
                    "line_length": 8,
                    "rhyme": 4,
                    "words": [
                        {
                            "word_text": "Jejž"
                        },
                        {
                            "word_text": "slaviť"
                        },
                        {
                            "word_text": "bude"
                        },
                        {
                            "word_text": "spanilá"
                        }
                    ]
                },
                {
                    "line_number": 8,
                    "line_text": "Nevěsta krásy milovděčné.",
                    "metrical_pattern": "100101000",
                    "line_length": 9,
                    "rhyme": 3,
                    "words": [
                        {
                            "word_text": "Nevěsta"
                        },
                        {
                            "word_text": "krásy"
                        },
                        {
                            "word_text": "milovděčné"
                        }
                    ]
                },
                {
                    "line_number": 9,
                    "line_text": "K neblahu svému Evelina",
                    "metrical_pattern": "100101000",
                    "line_length": 9,
                    "rhyme": 5,
                    "words": [
                        {
                            "word_text": "K"
                        },
                        {
                            "word_text": "neblahu"
                        },
                        {
                            "word_text": "svému"
                        },
                        {
                            "word_text": "Evelina"
                        }
                    ]
                },
                {
                    "line_number": 10,
                    "line_text": "Se dozví též skrz onu věsť,",
                    "metrical_pattern": "01000100",
                    "line_length": 8,
                    "rhyme": 6,
                    "words": [
                        {
                            "word_text": "Se"
                        },
                        {
                            "word_text": "dozví"
                        },
                        {
                            "word_text": "též"
                        },
                        {
                            "word_text": "skrz"
                        },
                        {
                            "word_text": "onu"
                        },
                        {
                            "word_text": "věsť"
                        }
                    ]
                },
                {
                    "line_number": 11,
                    "line_text": "Že stihanec ten Edvard jest;",
                    "metrical_pattern": "01000100",
                    "line_length": 8,
                    "rhyme": 6,
                    "words": [
                        {
                            "word_text": "Že"
                        },
                        {
                            "word_text": "stihanec"
                        },
                        {
                            "word_text": "ten"
                        },
                        {
                            "word_text": "Edvard"
                        },
                        {
                            "word_text": "jest"
                        }
                    ]
                },
                {
                    "line_number": 12,
                    "line_text": "Skrytý si život připomíná,",
                    "metrical_pattern": "100101000",
                    "line_length": 9,
                    "rhyme": 5,
                    "words": [
                        {
                            "word_text": "Skrytý"
                        },
                        {
                            "word_text": "si"
                        },
                        {
                            "word_text": "život"
                        },
                        {
                            "word_text": "připomíná"
                        }
                    ]
                },
                {
                    "line_number": 13,
                    "line_text": "Jejž vodil dosuď v slujích hor,",
                    "metrical_pattern": "01010101",
                    "line_length": 8,
                    "rhyme": 7,
                    "words": [
                        {
                            "word_text": "Jejž"
                        },
                        {
                            "word_text": "vodil"
                        },
                        {
                            "word_text": "dosuď"
                        },
                        {
                            "word_text": "v"
                        },
                        {
                            "word_text": "slujích"
                        },
                        {
                            "word_text": "hor"
                        }
                    ]
                },
                {
                    "line_number": 14,
                    "line_text": "A pochyb posledních mdlý vzpor",
                    "metrical_pattern": "01010011",
                    "line_length": 8,
                    "rhyme": 7,
                    "words": [
                        {
                            "word_text": "A"
                        },
                        {
                            "word_text": "pochyb"
                        },
                        {
                            "word_text": "posledních"
                        },
                        {
                            "word_text": "mdlý"
                        },
                        {
                            "word_text": "vzpor"
                        }
                    ]
                },
                {
                    "line_number": 15,
                    "line_text": "Se kloní v srdci k jistotě.",
                    "metrical_pattern": "01010100",
                    "line_length": 8,
                    "rhyme": 8,
                    "words": [
                        {
                            "word_text": "Se"
                        },
                        {
                            "word_text": "kloní"
                        },
                        {
                            "word_text": "v"
                        },
                        {
                            "word_text": "srdci"
                        },
                        {
                            "word_text": "k"
                        },
                        {
                            "word_text": "jistotě"
                        }
                    ]
                },
                {
                    "line_number": 16,
                    "line_text": "A v chvatném jeho tlukotě",
                    "metrical_pattern": "01010100",
                    "line_length": 8,
                    "rhyme": 8,
                    "words": [
                        {
                            "word_text": "A"
                        },
                        {
                            "word_text": "v"
                        },
                        {
                            "word_text": "chvatném"
                        },
                        {
                            "word_text": "jeho"
                        },
                        {
                            "word_text": "tlukotě"
                        }
                    ]
                },
                {
                    "line_number": 17,
                    "line_text": "Nová jí ouzkosť bouří sen,",
                    "metrical_pattern": "10010101",
                    "line_length": 8,
                    "rhyme": 9,
                    "words": [
                        {
                            "word_text": "Nová"
                        },
                        {
                            "word_text": "jí"
                        },
                        {
                            "word_text": "ouzkosť"
                        },
                        {
                            "word_text": "bouří"
                        },
                        {
                            "word_text": "sen"
                        }
                    ]
                },
                {
                    "line_number": 18,
                    "line_text": "Že překvapí ji růžný den,",
                    "metrical_pattern": "01000101",
                    "line_length": 8,
                    "rhyme": 9,
                    "words": [
                        {
                            "word_text": "Že"
                        },
                        {
                            "word_text": "překvapí"
                        },
                        {
                            "word_text": "ji"
                        },
                        {
                            "word_text": "růžný"
                        },
                        {
                            "word_text": "den"
                        }
                    ]
                },
                {
                    "line_number": 19,
                    "line_text": "Aniž by, jak květ sladký vánek,",
                    "metrical_pattern": "100011010",
                    "line_length": 9,
                    "rhyme": 10,
                    "words": [
                        {
                            "word_text": "Aniž"
                        },
                        {
                            "word_text": "by"
                        },
                        {
                            "word_text": "jak"
                        },
                        {
                            "word_text": "květ"
                        },
                        {
                            "word_text": "sladký"
                        },
                        {
                            "word_text": "vánek"
                        }
                    ]
                },
                {
                    "line_number": 20,
                    "line_text": "Ji oblažil těšící spánek.",
                    "metrical_pattern": "010010010",
                    "line_length": 9,
                    "rhyme": 10,
                    "words": [
                        {
                            "word_text": "Ji"
                        },
                        {
                            "word_text": "oblažil"
                        },
                        {
                            "word_text": "těšící"
                        },
                        {
                            "word_text": "spánek"
                        }
                    ]
                },
                {
                    "line_number": 21,
                    "line_text": "Juž kolikráte Luna bílá",
                    "metrical_pattern": "010001010",
                    "line_length": 9,
                    "rhyme": 11,
                    "words": [
                        {
                            "word_text": "Juž"
                        },
                        {
                            "word_text": "kolikráte"
                        },
                        {
                            "word_text": "Luna"
                        },
                        {
                            "word_text": "bílá"
                        }
                    ]
                },
                {
                    "line_number": 22,
                    "line_text": "Za modré hory ustoupila,",
                    "metrical_pattern": "100101000",
                    "line_length": 9,
                    "rhyme": 11,
                    "words": [
                        {
                            "word_text": "Za"
                        },
                        {
                            "word_text": "modré"
                        },
                        {
                            "word_text": "hory"
                        },
                        {
                            "word_text": "ustoupila"
                        }
                    ]
                },
                {
                    "line_number": 23,
                    "line_text": "A Edvard víc se nevracel.",
                    "metrical_pattern": "01000100",
                    "line_length": 8,
                    "rhyme": 12,
                    "words": [
                        {
                            "word_text": "A"
                        },
                        {
                            "word_text": "Edvard"
                        },
                        {
                            "word_text": "víc"
                        },
                        {
                            "word_text": "se"
                        },
                        {
                            "word_text": "nevracel"
                        }
                    ]
                },
                {
                    "line_number": 24,
                    "line_text": "Ach! cit jí v srdci krvácel,",
                    "metrical_pattern": "11010100",
                    "line_length": 8,
                    "rhyme": 12,
                    "words": [
                        {
                            "word_text": "Ach"
                        },
                        {
                            "word_text": "cit"
                        },
                        {
                            "word_text": "jí"
                        },
                        {
                            "word_text": "v"
                        },
                        {
                            "word_text": "srdci"
                        },
                        {
                            "word_text": "krvácel"
                        }
                    ]
                },
                {
                    "line_number": 25,
                    "line_text": "Když na to sobě vzpomněla,",
                    "metrical_pattern": "01010100",
                    "line_length": 8,
                    "rhyme": 13,
                    "words": [
                        {
                            "word_text": "Když"
                        },
                        {
                            "word_text": "na"
                        },
                        {
                            "word_text": "to"
                        },
                        {
                            "word_text": "sobě"
                        },
                        {
                            "word_text": "vzpomněla"
                        }
                    ]
                },
                {
                    "line_number": 26,
                    "line_text": "Že palác tento – jeho byt;",
                    "metrical_pattern": "01010101",
                    "line_length": 8,
                    "rhyme": 14,
                    "words": [
                        {
                            "word_text": "Že"
                        },
                        {
                            "word_text": "palác"
                        },
                        {
                            "word_text": "tento"
                        },
                        {
                            "word_text": "jeho"
                        },
                        {
                            "word_text": "byt"
                        }
                    ]
                },
                {
                    "line_number": 27,
                    "line_text": "Že spády skal jsa za dne skryt,",
                    "metrical_pattern": "01010101",
                    "line_length": 8,
                    "rhyme": 14,
                    "words": [
                        {
                            "word_text": "Že"
                        },
                        {
                            "word_text": "spády"
                        },
                        {
                            "word_text": "skal"
                        },
                        {
                            "word_text": "jsa"
                        },
                        {
                            "word_text": "za"
                        },
                        {
                            "word_text": "dne"
                        },
                        {
                            "word_text": "skryt"
                        }
                    ]
                },
                {
                    "line_number": 28,
                    "line_text": "Jen když noc tmy své rozstřela,",
                    "metrical_pattern": "00110100",
                    "line_length": 8,
                    "rhyme": 13,
                    "words": [
                        {
                            "word_text": "Jen"
                        },
                        {
                            "word_text": "když"
                        },
                        {
                            "word_text": "noc"
                        },
                        {
                            "word_text": "tmy"
                        },
                        {
                            "word_text": "své"
                        },
                        {
                            "word_text": "rozstřela"
                        }
                    ]
                },
                {
                    "line_number": 29,
                    "line_text": "Co cizinec pod vlastní střechu",
                    "metrical_pattern": "010010010",
                    "line_length": 9,
                    "rhyme": 15,
                    "words": [
                        {
                            "word_text": "Co"
                        },
                        {
                            "word_text": "cizinec"
                        },
                        {
                            "word_text": "pod"
                        },
                        {
                            "word_text": "vlastní"
                        },
                        {
                            "word_text": "střechu"
                        }
                    ]
                },
                {
                    "line_number": 30,
                    "line_text": "Se krásti musí v stražném spěchu.",
                    "metrical_pattern": "010101010",
                    "line_length": 9,
                    "rhyme": 15,
                    "words": [
                        {
                            "word_text": "Se"
                        },
                        {
                            "word_text": "krásti"
                        },
                        {
                            "word_text": "musí"
                        },
                        {
                            "word_text": "v"
                        },
                        {
                            "word_text": "stražném"
                        },
                        {
                            "word_text": "spěchu"
                        }
                    ]
                },
                {
                    "line_number": 31,
                    "line_text": "Tu na jasném pak bělu čela",
                    "metrical_pattern": "010001010",
                    "line_length": 9,
                    "rhyme": 16,
                    "words": [
                        {
                            "word_text": "Tu"
                        },
                        {
                            "word_text": "na"
                        },
                        {
                            "word_text": "jasném"
                        },
                        {
                            "word_text": "pak"
                        },
                        {
                            "word_text": "bělu"
                        },
                        {
                            "word_text": "čela"
                        }
                    ]
                },
                {
                    "line_number": 32,
                    "line_text": "Ve chmůrách bolesť litá tkvěla;",
                    "metrical_pattern": "100101010",
                    "line_length": 9,
                    "rhyme": 16,
                    "words": [
                        {
                            "word_text": "Ve"
                        },
                        {
                            "word_text": "chmůrách"
                        },
                        {
                            "word_text": "bolesť"
                        },
                        {
                            "word_text": "litá"
                        },
                        {
                            "word_text": "tkvěla"
                        }
                    ]
                },
                {
                    "line_number": 33,
                    "line_text": "A v srdce teskno nevýslovné",
                    "metrical_pattern": "010101000",
                    "line_length": 9,
                    "rhyme": 17,
                    "words": [
                        {
                            "word_text": "A"
                        },
                        {
                            "word_text": "v"
                        },
                        {
                            "word_text": "srdce"
                        },
                        {
                            "word_text": "teskno"
                        },
                        {
                            "word_text": "nevýslovné"
                        }
                    ]
                },
                {
                    "line_number": 34,
                    "line_text": "Svou tíží zlou se rozložilo",
                    "metrical_pattern": "010101000",
                    "line_length": 9,
                    "rhyme": 18,
                    "words": [
                        {
                            "word_text": "Svou"
                        },
                        {
                            "word_text": "tíží"
                        },
                        {
                            "word_text": "zlou"
                        },
                        {
                            "word_text": "se"
                        },
                        {
                            "word_text": "rozložilo"
                        }
                    ]
                },
                {
                    "line_number": 35,
                    "line_text": "Uhasnouc úsvit čáky skrovné,",
                    "metrical_pattern": "100101010",
                    "line_length": 9,
                    "rhyme": 17,
                    "words": [
                        {
                            "word_text": "Uhasnouc"
                        },
                        {
                            "word_text": "úsvit"
                        },
                        {
                            "word_text": "čáky"
                        },
                        {
                            "word_text": "skrovné"
                        }
                    ]
                },
                {
                    "line_number": 36,
                    "line_text": "V níž dříve srdce jedno žilo,",
                    "metrical_pattern": "010101010",
                    "line_length": 9,
                    "rhyme": 18,
                    "words": [
                        {
                            "word_text": "V"
                        },
                        {
                            "word_text": "níž"
                        },
                        {
                            "word_text": "dříve"
                        },
                        {
                            "word_text": "srdce"
                        },
                        {
                            "word_text": "jedno"
                        },
                        {
                            "word_text": "žilo"
                        }
                    ]
                },
                {
                    "line_number": 37,
                    "line_text": "Že štěstí nemůž’ kvěsti jemu",
                    "metrical_pattern": "010101010",
                    "line_length": 9,
                    "rhyme": 19,
                    "words": [
                        {
                            "word_text": "Že"
                        },
                        {
                            "word_text": "štěstí"
                        },
                        {
                            "word_text": "nemůž"
                        },
                        {
                            "word_text": "kvěsti"
                        },
                        {
                            "word_text": "jemu"
                        }
                    ]
                },
                {
                    "line_number": 38,
                    "line_text": "Tak strastně, bídně nešťastnému!...",
                    "metrical_pattern": "010101000",
                    "line_length": 9,
                    "rhyme": 19,
                    "words": [
                        {
                            "word_text": "Tak"
                        },
                        {
                            "word_text": "strastně"
                        },
                        {
                            "word_text": "bídně"
                        },
                        {
                            "word_text": "nešťastnému"
                        }
                    ]
                },
                {
                    "line_number": 39,
                    "line_text": "Tak po dni loudá den se dlouhý,",
                    "metrical_pattern": "010101100",
                    "line_length": 9,
                    "rhyme": 20,
                    "words": [
                        {
                            "word_text": "Tak"
                        },
                        {
                            "word_text": "po"
                        },
                        {
                            "word_text": "dni"
                        },
                        {
                            "word_text": "loudá"
                        },
                        {
                            "word_text": "den"
                        },
                        {
                            "word_text": "se"
                        },
                        {
                            "word_text": "dlouhý"
                        }
                    ]
                },
                {
                    "line_number": 40,
                    "line_text": "Nadarmo v trýzních planou touhy.",
                    "metrical_pattern": "100101010",
                    "line_length": 9,
                    "rhyme": 20,
                    "words": [
                        {
                            "word_text": "Nadarmo"
                        },
                        {
                            "word_text": "v"
                        },
                        {
                            "word_text": "trýzních"
                        },
                        {
                            "word_text": "planou"
                        },
                        {
                            "word_text": "touhy"
                        }
                    ]
                },
                {
                    "line_number": 41,
                    "line_text": "A v těsně trapném čekání",
                    "metrical_pattern": "01010100",
                    "line_length": 8,
                    "rhyme": 21,
                    "words": [
                        {
                            "word_text": "A"
                        },
                        {
                            "word_text": "v"
                        },
                        {
                            "word_text": "těsně"
                        },
                        {
                            "word_text": "trapném"
                        },
                        {
                            "word_text": "čekání"
                        }
                    ]
                },
                {
                    "line_number": 42,
                    "line_text": "A v strachu, a přec v doufání",
                    "metrical_pattern": "01010100",
